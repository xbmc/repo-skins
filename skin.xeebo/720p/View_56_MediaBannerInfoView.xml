						<bordersize>4</bordersize>
						<bordertexture>views/info_cover_border.png</bordertexture>
					</control>
					<control type="image">
						<posx>12</posx>
						<posy>12</posy>
						<width>564</width>
						<height>123</height>
						<info>ListItem.ActualIcon</info>
						<visible>IsEmpty(ListItem.Art(banner))</visible>
					</control>
					<control type="image">
						<posx>544</posx>
						<posy>30</posy>
						<width>24</width>
						<height>24</height>
						<info>ListItem.Overlay</info>
						<visible>Skin.HasSetting(WatchedStatus)</visible>
					</control>
				</itemlayout>
				<focusedlayout width="588" height="147">
					<control type="image">
						<posx>2</posx>
						<posy>2</posy>
						<width>584</width>
						<height>143</height>
