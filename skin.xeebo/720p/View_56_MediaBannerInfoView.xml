						<posx>0</posx>
						<posy>0</posy>
						<width>588</width>
						<height>147</height>
						<texture>views/list_frame_device_white.png</texture>
						<animation type="Focus">
							<effect type="fade" start="60" time="120"/>
							<effect type="zoom" start="99,97" center="auto" time="120" delay="60"/>
						</animation>
					</control>
					<control type="image">
						<posx>12</posx>
						<posy>12</posy>
						<width>564</width>
						<height>123</height>
						<info>ListItem.Art(banner)</info>
