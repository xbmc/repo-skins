			<visible>Control.IsVisible(56)</visible>
			<control type="list" id="56">
				<posx>144</posx>
				<posy>116</posy>
				<width>588</width>
				<height>588</height>
				<onleft>ActivateWindow(51)</onleft>
				<onright condition="IntegerGreaterThan(Container(56).NumPages,1)">60</onright>
