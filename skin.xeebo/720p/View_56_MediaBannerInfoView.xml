				<preloaditems>2</preloaditems>
				<visible>Container.Content(TVShows) | Container.Content(Seasons)</visible>
				<itemlayout width="588" height="147">
					<control type="image">
						<posx>2</posx>
						<posy>2</posy>
						<width>584</width>
						<height>143</height>
						<texture>views/list_frame_device.png</texture>
					</control>
					<control type="image">
						<posx>12</posx>
						<posy>12</posy>
						<width>564</width>
						<height>123</height>
