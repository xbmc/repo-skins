						<height>123</height>
						<info>ListItem.ActualIcon</info>
						<visible>IsEmpty(ListItem.Art(banner))</visible>
					</control>
					<control type="image">
						<posx>544</posx>
						<posy>30</posy>
						<width>24</width>
						<height>24</height>
						<info>ListItem.Overlay</info>
						<visible>Skin.HasSetting(WatchedStatus)</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="group">
				<visible>Container.Scrolling</visible>
				<animation effect="fade" time="100" delay="400">Visible</animation>
				<animation effect="fade" time="300">Hidden</animation>
				<posx>388</posx>
				<posy>360</posy>
				<width>100</width>
				<height>100</height>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>100</width>
					<height>100</height>
					<texture>backgrounds/scroll_background.png</texture>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<width>100</width>
					<height>100</height>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.SortLetter]</label>
					<textcolor>white</textcolor>
					<font>font48b</font>
				</control>
			</control>
			<control type="scrollbar" id="60">
				<description>scroll bar indicator for lists</description>
				<visible>!system.getbool(input.enablemouse)</visible>
