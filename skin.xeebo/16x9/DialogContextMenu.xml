<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">996</defaultcontrol>
	<include>Window_OpenClose_Animation</include>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="image">
			<description>background image overlay</description>
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="200" />
			</animation>
			<animation type="WindowClose">
				<effect type="fade" start="100" end="0" time="200" />
			</animation>
			<left>-960</left>
			<top>-540</top>
			<width>3840</width>
			<height>2160</height>
			<texture>menu/submenu_overlay.png</texture>
		</control>
		<control type="group">
			<control type="image" id="999">
				<description>background image</description>
				<left>0</left>
				<top>0</top>
				<width>525</width>
				<height>984</height>
				<texture border="18">menu/context_menu.png</texture>
			</control>
			<control type="grouplist" id="996">
				<description>grouplist for context buttons</description>
				<left>0</left>
				<top>30</top>
				<width>525</width>
				<onup>996</onup>
				<height max="924">auto</height>
				<itemgap>0</itemgap>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="button" id="990">
					<left>25</left>
					<top>0</top>
					<width>475</width>
					<height>66</height>
					<font>font21</font>
					<align>center</align>
					<label>20410</label>
					<textcolor>white</textcolor>
					<focusedcolor>black</focusedcolor>
					<onleft>Close</onleft>
					<textoffsetx>38</textoffsetx>
					<texturenofocus>menu/context_menu_no_focus.png</texturenofocus>
					<texturefocus>menu/context_menu_focus.png</texturefocus>
					<onclick>XBMC.PlayMedia($ESCINFO[ListItem.Trailer],noresume)</onclick>
					<visible>!IsEmpty(ListItem.Trailer)</visible>
				</control>
				<control type="button" id="1000">
					<description>button template</description>
					<left>25</left>
					<top>0</top>
					<width>475</width>
					<height>66</height>
					<align>center</align>
					<font>font21</font>
					<textcolor>white</textcolor>
					<focusedcolor>black</focusedcolor>
					<onleft>Close</onleft>
					<textoffsetx>38</textoffsetx>
					<texturenofocus>menu/context_menu_no_focus.png</texturenofocus>
					<texturefocus>menu/context_menu_focus.png</texturefocus>
					<pulseonselect>false</pulseonselect>
				</control>
				<control type="button">
					<left>25</left>
					<top>0</top>
					<width>475</width>
					<height>66</height>
					<font>font21</font>
					<label>31062</label>
					<textcolor>yellow</textcolor>
					<textoffsetx>0</textoffsetx>
					<texturenofocus>-</texturenofocus>
					<texturefocus>-</texturefocus>
					<visible>Skin.HasSetting(RemoteCloseMessage)</visible>
				</control>
				<control type="button">
					<left>25</left>
					<top>0</top>
					<width>475</width>
					<height>66</height>
					<font>font21</font>
					<label>31060</label>
					<textcolor>yellow</textcolor>
					<focusedcolor>red</focusedcolor>
					<textoffsetx>0</textoffsetx>
					<texturenofocus>-</texturenofocus>
					<texturefocus>-</texturefocus>
					<onclick>Close</onclick>
					<visible>Skin.HasSetting(MouseCloseMessage)</visible>
				</control>
			</control>
		</control>
	</controls>
</window>