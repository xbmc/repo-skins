<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Fullscreen Wall -->
	<include name="View_503_Wall">
		<control type="group">
			<visible>Control.IsVisible(503)</visible>
			<include>ViewAnimation</include>
			<control type="panel" id="503">
				<width>100%</width>
				<height>1080</height>
				<onleft condition="Control.IsVisible(50360)">50360</onleft>
				<onleft condition="!Control.IsVisible(50360)">SetProperty(MediaMenu,True,home)</onleft>
				<onleft condition="!Control.IsVisible(50360)">SetFocus(9050)</onleft>
				<!-- Only works if ParentFolder item is disabled -->
				<onright>SetFocus(503,$INFO[Container(503).CurrentItem],absolute)</onright>
				<onup>503</onup>
				<ondown>503</ondown>
				<orientation>vertical</orientation>
				<viewtype label="Wall">icon</viewtype>
				<pagecontrol>50360</pagecontrol>
				<preloaditems>2</preloaditems>
				<scrolltime tween="quadratic">400</scrolltime>
				<visible>Container.Content(sets) | Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(albums) | Container.Content(addons)</visible>
				<itemlayout width="320" height="460" condition="![Container.Content(albums) | Container.Content(addons)]">
					<control type="group">
						<top>80</top>
						<control type="image">
							<width>320</width>
							<height>460</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture background="true">$VAR[PosterThumbVar]</texture>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<left>200</left>
							<top>19</top>
							<width>100</width>
							<height>100</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<bordersize>1</bordersize>
						</control>
						<control type="group">
							<left>30</left>
							<top>45</top>
							<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
						</control>
						<control type="image">
							<width>320</width>
							<height>460</height>
							<texture border="1" colordiffuse="66FFFFFF">black.png</texture>
							<bordersize>20</bordersize>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="320" height="460" condition="![Container.Content(albums) | Container.Content(addons)]">
					<control type="group">
						<top>80</top>
						<control type="image">
							<width>320</width>
							<height>460</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture background="true">$VAR[PosterThumbVar]</texture>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<top>4</top>
							<left>4</left>
							<width>312</width>
							<height>452</height>
							<texture border="10">thumbs/thumbnail_focused.png</texture>
							<bordersize>8</bordersize>
							<animation effect="fade" start="100" end="0" time="200" reversible="false">UnFocus</animation>
							<animation effect="fade" start="0" end="100" time="200" reversible="false">Focus</animation>
						</control>
						<control type="image">
							<left>200</left>
							<top>19</top>
							<width>100</width>
							<height>100</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<bordersize>1</bordersize>
						</control>
						<control type="group">
							<left>30</left>
							<top>45</top>
							<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
						</control>
						<control type="image">
							<width>320</width>
							<height>460</height>
							<texture border="1" colordiffuse="66FFFFFF">black.png</texture>
							<animation effect="fade" start="100" end="0" time="200" reversible="false">Focus</animation>
							<animation effect="fade" start="0" end="100" time="200" reversible="false">UnFocus</animation>
							<bordersize>20</bordersize>
						</control>
					</control>
				</focusedlayout>
				<itemlayout width="320" height="320" condition="[Container.Content(albums) | Container.Content(addons)]">
					<control type="group">
						<top>60</top>
						<control type="image">
							<width>320</width>
							<height>320</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture background="true">$VAR[PosterThumbVar]</texture>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<left>200</left>
							<top>19</top>
							<width>100</width>
							<height>100</height>
							<texture>overlays/addons/enabled.png</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<visible>String.IsEqual(ListItem.Label2,$LOCALIZE[449])</visible>
							<bordersize>1</bordersize>
						</control>
						<control type="image">
							<width>320</width>
							<height>320</height>
							<texture border="1" colordiffuse="66FFFFFF">black.png</texture>
							<bordersize>20</bordersize>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="320" height="320" condition="[Container.Content(albums) | Container.Content(addons)]">
					<control type="group">
						<top>60</top>
						<control type="image">
							<width>320</width>
							<height>320</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture background="true">$VAR[PosterThumbVar]</texture>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<top>4</top>
							<left>4</left>
							<width>312</width>
							<height>312</height>
							<texture border="10">thumbs/thumbnail_focused.png</texture>
							<bordersize>8</bordersize>
							<animation effect="fade" start="100" end="0" time="150" reversible="false">UnFocus</animation>
							<animation effect="fade" start="0" end="100" time="150" reversible="false">Focus</animation>
						</control>
						<control type="image">
							<left>200</left>
							<top>19</top>
							<width>100</width>
							<height>100</height>
							<texture>overlays/addons/enabled.png</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<visible>String.IsEqual(ListItem.Label2,$LOCALIZE[449])</visible>
							<bordersize>1</bordersize>
						</control>
						<control type="image">
							<width>320</width>
							<height>320</height>
							<texture border="1" colordiffuse="66FFFFFF">black.png</texture>
							<animation effect="fade" start="100" end="0" time="150" reversible="false">Focus</animation>
							<animation effect="fade" start="0" end="100" time="150" reversible="false">UnFocus</animation>
							<bordersize>20</bordersize>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="50360">
				<left>-4</left>
				<width>14</width>
				<height>100%</height>
				<onup>50360</onup>
				<ondown>50360</ondown>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>503</onright>
				<texturesliderbackground />
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
			<control type="group">
				<left>310</left>
				<top>100</top>
				<visible>!ListItem.IsParentFolder</visible>
				<visible>[Container.Content(movies) | Container.Content(tvshows)]</visible>
				<visible>Skin.HasSetting(503.InfoPanel) + Control.HasFocus(503) + System.IdleTime(5)</visible>
				<animation effect="fade" time="100" delay="200">Visible</animation>
				<animation effect="slide" end="0,460" time="300" tween="cubic" easing="inout" condition="Container(503).Row(1)">Conditional</animation>
				<animation effect="slide" end="320,0" time="300" tween="cubic" easing="inout" condition="Container(503).Column(3)">Conditional</animation>
				<animation effect="slide" end="320,0" time="300" tween="cubic" easing="inout" condition="Container(503).Column(5) | Container(503).Column(3) | Container(503).Column(2)">Conditional</animation>
				<animation effect="slide" end="320,0" time="300" tween="cubic" easing="inout" condition="Container(503).Column(5) | Container(503).Column(4) | Container(503).Column(3) | Container(503).Column(2) | Container(503).Column(1)">Conditional</animation>
				<control type="image">
					<left>6</left>
					<top>-24</top>
					<width>650</width>
					<height>470</height>
					<texture border="40">dialog_back3.png</texture>
				</control>
				<control type="image">
					<top>192</top>
					<width>19</width>
					<height>36</height>
					<texture colordiffuse="FF060b0e">views/wall/arrow.png</texture>
					<visible>Integer.IsLessOrEqual(Container(503).Column,3)</visible>
				</control>
				<control type="image">
					<left>644</left>
					<top>192</top>
					<width>19</width>
					<height>36</height>
					<texture colordiffuse="FF060b0e" flipx="true">views/wall/arrow.png</texture>
					<visible>Integer.IsGreater(Container(503).Column,3)</visible>
				</control>
				<control type="label">
					<left>50</left>
					<top>20</top>
					<width>550</width>
					<height>20</height>
					<font>font15</font>
					<textcolor>grey</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="image">
					<left>50</left>
					<top>46</top>
					<width>180</width>
					<height>70</height>
					<aspectratio>keep</aspectratio>
					<colordiffuse>grey</colordiffuse>
					<texture fallback="flags/rating/0.0.png">$INFO[ListItem.Rating,flags/rating/,.png]</texture>
					<visible>!ListItem.IsParentFolder + String.IsEmpty(ListItem.UserRating)</visible>
				</control>
				<control type="image">
					<left>50</left>
					<top>46</top>
					<width>180</width>
					<height>70</height>
					<aspectratio>keep</aspectratio>
					<colordiffuse>themecolor</colordiffuse>
					<texture>$INFO[ListItem.UserRating,flags/rating/,.png]</texture>
					<visible>!ListItem.IsParentFolder + !String.IsEmpty(ListItem.UserRating)</visible>
				</control>
				<control type="textbox">
					<left>50</left>
					<top>110</top>
					<width>550</width>
					<height>210</height>
					<font>font15</font>
					<textcolor>grey</textcolor>
					<label>$VAR[503.InfoPanelTextboxVar]</label>
				</control>
				<control type="label">
					<left>50</left>
					<top>330</top>
					<width>550</width>
					<height>20</height>
					<font>font15</font>
					<textcolor>labelheader</textcolor>
					<label>$INFO[ListItem.Year]$VAR[DurationMinutesVar, - , $LOCALIZE[31162]]</label>
				</control>
				<control type="label">
					<left>50</left>
					<top>375</top>
					<width>550</width>
					<height>20</height>
					<font>font15</font>
					<textcolor>grey</textcolor>
					<label>$VAR[503.InfoPanelLabel2Var]</label>
				</control>
			</control>
		</control>
	</include>
	<include name="UpDownShadow">
		<control type="group">
			<animation effect="fade" time="300">WindowOpen</animation>
			<animation effect="fade" time="300">WindowClose</animation>
			<visible>Control.IsVisible(503)</visible>
			<control type="image">
				<width>100%</width>
				<height>120</height>
				<texture border="1">bottom_shadow.png</texture>
			</control>
			<control type="image">
				<top>960</top>
				<width>100%</width>
				<height>120</height>
				<texture border="1" flipy="true">bottom_shadow.png</texture>
			</control>
		</control>
	</include>
</includes>