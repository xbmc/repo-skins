							<label></label>
							<visible>!String.IsEmpty(Window(Home).Property(LatestSong.1.Title))</visible>
						</item>
					</content>
				</control>
				<control type="grouplist">
					<include>HomeMenu_RightExtraInfo_ScrollAnimation</include>
					<visible>[String.IsEqual(Container(20).ListItem.Property(defaultID),music) + Library.HasContent(Music)]</visible>
					<include content="ExtraInfo_GroupList">
						<param name="left" value="633"/>
						<param name="align" value="right"/>
						<param name="visible" value="Container(33).HasFocus(1) + !String.IsEmpty(Window(Home).Property(LatestAlbum.1.Title))"/>
					</include>
					<include content="ExtraInfo_Label">
						<param name="label" value="$INFO[Window(Home).Property(LatestAlbum.1.Title),$LOCALIZE[31213]: ,]$INFO[Window(Home).Property(LatestAlbum.1.Artist), - ]"/>
