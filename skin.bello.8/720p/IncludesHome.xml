						<param name="label" value="$INFO[Window(Home).Property(NextAired.TodayTotal), $LOCALIZE[31240]: ]"/>
					</include>
					<include>ExtraInfo_Image</include>
				</control>

				<!-- Music -->
				<control type="wraplist" id="33">
					<include>ExtraInfo_HiddenWrapList</include>
