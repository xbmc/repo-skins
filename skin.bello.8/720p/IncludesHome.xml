						<param name="align" value="right"/>
						<param name="visible" value="[String.IsEqual(Container(20).ListItem.Property(defaultID),movies) + Library.HasContent(Movies)]"/>
					</include>
					<include content="ExtraInfo_Label">
						<param name="label" value="$INFO[Window(Home).Property(LatestMovie.1.Title),$LOCALIZE[31211]: ]$INFO[Window(Home).Property(LatestMovie.1.Year), (,)]"/>
					</include>
					<include content="ExtraInfo_Image">
						<param name="visible" value="!String.IsEmpty(Window(Home).Property(LatestMovie.1.Title))"/>
					</include>
				</control>

				<!-- TVShows -->
				<control type="wraplist" id="32">
