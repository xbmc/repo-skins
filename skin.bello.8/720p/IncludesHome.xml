					<include content="ExtraInfo_GroupList">
						<param name="left" value="633"/>
						<param name="align" value="right"/>
						<param name="visible" value="Container(33).HasFocus(2) + !String.IsEmpty(Window(Home).Property(LatestSong.1.Title))"/>
					</include>
					<include content="ExtraInfo_Label">
						<param name="label" value="$INFO[Window(Home).Property(LatestSong.1.Title),$LOCALIZE[31222]: ,]$INFO[Window(Home).Property(LatestSong.1.Artist), - ]"/>
