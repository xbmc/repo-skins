<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- ===================== -->
	<!-- HomeMenu List Buttons -->
	<!-- ===================== -->
	<include name="HomeMenuWraplist">
		<control type="wraplist" id="20">
			<description>Home Container</description>
			<include>HomeMenu_OpenCloseSlideAnimation</include>
			<include>HomeMenu_Submenu_HiddenAnimation</include>
			<animation effect="slide" start="0,0" end="0,25" time="200" tween="sine" easing="out" condition="!Control.HasFocus(23)">Conditional</animation>
			<left>42</left>
			<top>185</top>
			<width>2900</width>
			<height>533</height>
			<onup condition="Control.IsVisible(25)">SetFocus(25)</onup>
			<onup condition="String.IsEmpty(Container(20).ListItem.Property(widgetPath)) | String.IsEqual(Container(25).NumItems,0)">SetFocus(21)</onup>
			<ondown condition="[String.Contains(Container(20).ListItem.Property(hasSubmenu),True) + Integer.IsGreater(Container(23).NumItems,0)]">SetFocus(23)</ondown>
			<onleft>20</onleft>
			<onright>20</onright>
			<itemgap>0</itemgap>
			<orientation>horizontal</orientation>
			<focusposition>0</focusposition>
			<preloaditems>4</preloaditems>
			<scrolltime tween="quadratic" easing="out">250</scrolltime>
			<itemlayout width="300">
				<control type="label">
					<left>0</left>
					<top>210</top>
					<width>300</width>
					<scroll>false</scroll>
					<textcolor>homeinfo</textcolor>
					<shadowcolor>99000000</shadowcolor>
					<font>FontSize_48</font>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout width="360">
				<control type="label">
					<left>0</left>
					<top>200</top>
					<width>360</width>
					<scroll>false</scroll>
					<textcolor>white</textcolor>
					<shadowcolor>99000000</shadowcolor>
					<font>FontSize_80</font>
					<label>$INFO[ListItem.Label]</label>
					<animation type="Conditional" condition="ControlGroup(21).HasFocus">
						<effect type="zoom" start="100" end="73" time="150" center="0,245"/>
						<effect type="fade" start="100" end="45" time="150"/>
					</animation>
				</control>
			</focusedlayout>
			<content>
				<include>skinshortcuts-mainmenu</include>
			</content>
		</control>
	</include>



	<include name="ExtraInfo_HiddenWrapList">
		<left>0</left>
		<top>0</top>
		<height>2</height>
		<width>2</width>
		<orientation>horizontal</orientation>
		<focusposition>0</focusposition>
		<autoscroll time="3000">true</autoscroll>
		<viewtype>list</viewtype>
		<itemlayout width="2" height="2"/>
		<focusedlayout width="2" height="2"/>
	</include>

	<include name="ExtraInfo_GroupList">
		<left>$PARAM[left]</left>
		<top>480</top>
		<width>600</width>
		<height>24</height>
		<align>$PARAM[align]</align>
		<itemgap>6</itemgap>
		<orientation>horizontal</orientation>
		<visible>$PARAM[visible]</visible>
	</include>

	<include name="ExtraInfo_Label">
		<control type="label">
			<width>auto</width>
			<height>24</height>
			<font>FontSize_16B</font>
			<label>$PARAM[label]</label>
			<textcolor>homeinfo</textcolor>
			<scroll>false</scroll>
			<visible>$PARAM[visible]</visible>
		</control>
	</include>

	<include name="ExtraInfo_Image">
		<param name="texture">icons/submenu_info.png</param>
		<definition>
			<control type="image">
				<width>22</width>
				<height>22</height>
				<texture background="true">$PARAM[texture]</texture>
				<colordiffuse>homeinfo</colordiffuse>
				<visible>$PARAM[visible]</visible>
			</control>
		</definition>
	</include>

	<include name="ExtraInfo_LibraryTotals">
		<control type="grouplist">
			<left>22</left>
			<top>562</top>
			<width>auto</width>
			<height>100</height>
			<align>left</align>
			<itemgap>-15</itemgap>
			<orientation>horizontal</orientation>
			<control type="image">
				<width>96</width>
				<height>96</height>
				<texture background="true">$VAR[LibraryTotals_Icons]</texture>
				<colordiffuse>homeinfo</colordiffuse>
			</control>
			<control type="group">
				<width>700</width>
				<control type="label">
					<top>30</top>
					<width>700</width>
					<height>15</height>
					<font>FontSize_20</font>
					<label>$PARAM[label_one]</label>
					<textcolor>homeinfo</textcolor>
					<scroll>false</scroll>
				</control>
				<control type="label">
					<top>50</top>
					<width>700</width>
					<height>15</height>
					<font>FontSize_20</font>
					<label>$PARAM[label_two]</label>
					<textcolor>homeinfo</textcolor>
					<scroll>false</scroll>
				</control>
			</control>
		</control>
	</include>

	<variable name="LibraryTotals_Icons">
		<value condition="String.IsEqual(Container(20).ListItem.Property(defaultID),videos)">DefaultVideo.png</value>
		<value condition="String.IsEqual(Container(20).ListItem.Property(defaultID),movies)">DefaultMovies.png</value>
		<value condition="String.IsEqual(Container(20).ListItem.Property(defaultID),tvshows)">DefaultTVShows.png</value>
		<value condition="String.IsEqual(Container(20).ListItem.Property(defaultID),music)">DefaultAlbumCover.png</value>
		<value condition="String.IsEqual(Container(20).ListItem.Property(defaultID),addons)">DefaultAddon.png</value>
		<value condition="String.IsEqual(Container(20).ListItem.Property(defaultID),livetv)">DefaultLiveTV.png</value>
		<value condition="String.IsEqual(Container(20).ListItem.Property(defaultID),settings)">icons/big/Kodi.png</value>
	</variable>

	<!-- =============================================================================== -->
	<!-- Submenus & Widgets Indicators / Right Side Info / Library Totals / Profile Info -->
	<!-- =============================================================================== -->
	<include name="HomeMenuExtraInfo">
		<control type="group">

			<!-- Submenus & Widgets Indicators -->
			<control type="group">
				<include>HomeMenu_Submenu_HiddenAnimation</include>
				<animation type="Conditional" condition="ControlGroup(21).HasFocus | Control.HasFocus(23)">
					<effect type="slide" start="0,0" end="0,-30" time="200" tween="sine" easing="in"/>
					<effect type="fade" start="100" end="0" time="150"/>
				</animation>
				<control type="wraplist" id="31">
					<include>ExtraInfo_HiddenWrapList</include>
					<content>
						<item id="1">
							<label></label>
							<visible>![String.IsEmpty(Container(20).ListItem.Property(widgetName)) | Integer.IsLess(Container(25).NumItems,1)] + !Skin.HasSetting(AutoHideHomeWidgets)</visible>
						</item>
						<item id="2">
							<label></label>
							<visible>String.Contains(Container(20).ListItem.Property(hasSubmenu),True) + ![String.IsEqual(Container(20).ListItem.Property(defaultID),livetv) + !System.HasPVRAddon]</visible>
						</item>
						<item id="3">
							<label></label>
							<visible>![String.IsEmpty(Container(20).ListItem.Property(widgetName)) | Integer.IsLess(Container(25).NumItems,1)] + String.StartsWith(Container(20).ListItem.Property(widgetRatio),Fanart)</visible>
						</item>
					</content>
				</control>
				<!-- Widgets Indicators -->
				<control type="grouplist">
					<include>HomeMenu_OpenCloseSlideAnimation</include>
					<include>HomeMenu_ExtraInfo_ScrollAnimation</include>
					<include content="ExtraInfo_GroupList">
						<param name="left" value="47"/>
						<param name="align" value="left"/>
						<param name="visible" value="Container(31).HasFocus(1) | Container(31).HasFocus(3)"/>
					</include>
					<control type="image">
						<width>24</width>
						<height>24</height>
						<aspectratio>stretch</aspectratio>
						<texture background="true" flipy="true">icons/submenu_arrow.png</texture>
						<colordiffuse>homeinfo</colordiffuse>
						<visible>!String.IsEmpty(Container(20).ListItem.Property(widgetName))</visible>
					</control>
					<control type="label">
						<width>490</width>
						<height>23</height>
						<font>FontSize_22</font>
						<label>$INFO[Container(20).ListItem.Property(widgetName),$ADDON[script.skinshortcuts 32099]: ]</label>
						<textcolor>homeinfo</textcolor>
						<scroll>false</scroll>
					</control>
				</control>

				<!-- Submenus Indicators -->
				<control type="grouplist">
					<include>HomeMenu_OpenCloseSlideAnimation</include>
					<include>HomeMenu_ExtraInfo_ScrollAnimation</include>
					<include content="ExtraInfo_GroupList">
						<param name="left" value="47"/>
						<param name="align" value="left"/>
						<param name="visible" value="Container(31).HasFocus(2)"/>
					</include>
					<include content="ExtraInfo_Image">
						<param name="texture" value="icons/submenu_arrow.png"/>
					</include>
					<include content="ExtraInfo_Label">
						<param name="label" value="$LOCALIZE[1034]"/>
					</include>
				</control>
			</control>


