				</control>
				<control type="grouplist">
					<include>HomeMenu_RightExtraInfo_ScrollAnimation</include>
					<visible>[String.IsEqual(Container(20).ListItem.Property(defaultID),livetv) + PVR.IsRecording]</visible>
					<include content="ExtraInfo_GroupList">
						<param name="left" value="633"/>
						<param name="align" value="right"/>
						<param name="visible" value="Container(34).HasFocus(1)"/>
