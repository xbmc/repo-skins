						<item id="1">
							<label></label>
							<visible>!String.IsEmpty(Window(Home).Property(LatestEpisode.1.EpisodeTitle))</visible>
						</item>
						<item id="2">
							<label></label>
							<visible>!Integer.IsEqual(Window(Home).Property(NextAired.TodayTotal),0) + Skin.HasSetting(NextAiredEnabled)</visible>
						</item>
					</content>
				</control>
				<control type="grouplist">
					<include>HomeMenu_RightExtraInfo_ScrollAnimation</include>
					<visible>[String.IsEqual(Container(20).ListItem.Property(defaultID),tvshows) + Library.HasContent(TVShows)]</visible>
					<include content="ExtraInfo_GroupList">
						<param name="left" value="633"/>
						<param name="align" value="right"/>
						<param name="visible" value="Container(32).HasFocus(1) + !String.IsEmpty(Window(Home).Property(LatestEpisode.1.EpisodeTitle))"/>
					</include>
					<include content="ExtraInfo_Label">
						<param name="label" value="$INFO[Window(Home).Property(LatestEpisode.1.ShowTitle),$LOCALIZE[31212]: ,  ]$INFO[Window(Home).Property(LatestEpisode.1.EpisodeSeason)]$INFO[Window(Home).Property(LatestEpisode.1.EpisodeNumber),x,,]"/>
					</include>
					<include>ExtraInfo_Image</include>
				</control>
				<control type="grouplist">
					<include>HomeMenu_RightExtraInfo_ScrollAnimation</include>
					<visible>[String.IsEqual(Container(20).ListItem.Property(defaultID),tvshows) + Library.HasContent(TVShows)]</visible>
					<include content="ExtraInfo_GroupList">
						<param name="left" value="633"/>
						<param name="align" value="right"/>
						<param name="visible" value="Container(32).HasFocus(2) + !Integer.IsEqual(Window(Home).Property(NextAired.TodayTotal),0)"/>
