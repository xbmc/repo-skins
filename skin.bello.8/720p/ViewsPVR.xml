<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<!-- ======================= -->
	<!-- ===== EPG Timeline ==== -->
	<!-- ======================= -->
	<include name="EPGTimeline_View">
		<control type="group">
			<description>TV Guide Timeline</description>
			<visible>Control.IsVisible(10)</visible>
			<include>FullscreenDimensions</include>
			<include>InfoDialogsVisible_ZoomAnimation</include>
			<include>VisibleHiddenSlideAnimation</include>
			<include>HomeMenu_OpenCloseSlideAnimation</include>
			<include content="EPGTimelineTopInfo">
				<param name="visible" value="Skin.HasSetting(ShowProgramInfo)"/>
			</include>
			<control type="epggrid" id="10">
				<description>EPG Grid</description>
				<left>35</left>
				<top>140</top>
				<width>1245</width>
				<include condition="Skin.HasSetting(ShowProgramInfo)">EPGSmallList</include>
				<include condition="!Skin.HasSetting(ShowProgramInfo)">EPGBigList</include>
				<animation effect="slide" end="0,200" condition="Skin.HasSetting(ShowProgramInfo)">Conditional</animation>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<onup>10</onup>
				<ondown>10</ondown>
				<onback>9000</onback>
				<pagecontrol>10</pagecontrol>
				<scrolltime>250</scrolltime>
				<timeblocks>40</timeblocks>
				<rulerunit>6</rulerunit>
				<viewtype label="19032">list</viewtype>
				<progresstexture border="0,59,19,19">windows/pvr/EPGProgressIndicator.png</progresstexture>
				<rulerlayout height="50" width="40">
					<control type="label" id="2">
						<left>10</left>
						<top>10</top>
						<width>325</width>
						<height>50</height>
						<font>FontSize_18B</font>
						<textcolor>viewsinfo</textcolor>
						<shadowcolor>55000000</shadowcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</rulerlayout>

				<channellayout height="50" width="340">
					<include content="ListSeperatorNoFocus">
						<param name="left" value="10"/>
						<param name="width" value="60"/>
					</include>
					<include content="ListSeperatorNoFocus">
						<param name="left" value="74"/>
						<param name="width" value="261"/>
					</include>
					<include content="ListSeperatorNoFocus">
						<param name="left" value="10"/>
						<param name="width" value="868"/>
						<param name="texture" value="windows/pvr/selected.png"/>
						<param name="visible" value="ListItem.IsSelected | ListItem.IsPlaying"/>
					</include>
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>60</width>
						<height>45</height>
						<font>FontSize_20</font>
						<textcolor>viewsinfo</textcolor>
						<shadowcolor>77000000</shadowcolor>
						<selectedcolor>$VAR[Text.GlobalColor]</selectedcolor>
						<align>center</align>
						<label>$INFO[ListItem.ChannelNumberLabel]</label>
					</control>
					<control type="label" id="1">
						<left>87</left>
						<top>0</top>
						<width>243</width>
						<height>45</height>
						<font>FontSize_20</font>
						<textcolor>viewsinfo</textcolor>
						<shadowcolor>77000000</shadowcolor>
						<selectedcolor>$VAR[Text.GlobalColor]</selectedcolor>
						<label>$INFO[ListItem.ChannelName]</label>
					</control>
				</channellayout>
				<focusedchannellayout height="50" width="340">
					<include content="ListSeperatorFocus">
						<param name="left" value="10"/>
						<param name="width" value="60"/>
						<param name="color" value="$VAR[Textures.GlobalColor]"/>
					</include>
					<include content="ListSeperatorFocus">
						<param name="left" value="74"/>
						<param name="width" value="261"/>
						<param name="color" value="$VAR[Textures.GlobalColor]"/>
					</include>
					<include content="ListSeperatorNoFocus">
						<param name="left" value="10"/>
						<param name="width" value="868"/>
						<param name="texture" value="windows/pvr/selected.png"/>
						<param name="visible" value="ListItem.IsSelected | ListItem.IsPlaying"/>
					</include>
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>60</width>
						<height>45</height>
						<font>FontSize_20</font>
						<textcolor>white</textcolor>
						<shadowcolor>77000000</shadowcolor>
						<selectedcolor>white</selectedcolor>
						<align>center</align>
						<label>$INFO[ListItem.ChannelNumberLabel]</label>
					</control>
					<control type="label" id="1">
						<left>87</left>
						<top>0</top>
						<width>243</width>
						<height>45</height>
						<font>FontSize_20</font>
						<textcolor>white</textcolor>
						<shadowcolor>77000000</shadowcolor>
						<selectedcolor>white</selectedcolor>
						<label>$INFO[ListItem.ChannelName]</label>
					</control>
				</focusedchannellayout>

				<itemlayout height="50" width="102">
					<include content="ListSeperatorNoFocus">
						<param name="id" value="2"/>
						<param name="width" value="98"/>
					</include>
					<include>EPGTimelineGenres</include>
					<control type="label" id="1">
						<left>8</left>
						<top>0</top>
						<width>60</width>
						<height>45</height>
						<font>FontSize_16B</font>
						<textcolor>viewsinfo</textcolor>
						<shadowcolor>77000000</shadowcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>!ListItem.IsRecording + !ListItem.HasTimer</visible>
					</control>
					<control type="label" id="1">
						<left>30</left>
						<top>0</top>
						<width>45</width>
						<height>45</height>
						<font>FontSize_16B</font>
						<textcolor>viewsinfo</textcolor>
						<shadowcolor>77000000</shadowcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>ListItem.IsRecording | ListItem.HasTimer</visible>
					</control>
					<control type="image">
						<left>0</left>
						<top>8</top>
						<width>32</width>
						<height>32</height>
						<aspectratio>keep</aspectratio>
						<texture>windows/pvr/rec_epg.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>
					<control type="image">
						<left>4</left>
						<top>10</top>
						<width>26</width>
						<height>26</height>
						<aspectratio>keep</aspectratio>
						<colordiffuse>viewsinfo</colordiffuse>
						<texture>windows/pvr/timer_epg.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>
				</itemlayout>
				<focusedlayout height="50" width="102">
					<include content="ListSeperatorNoFocus">
						<param name="id" value="2"/>
						<param name="width" value="98"/>
					</include>
					<include>EPGTimelineGenres</include>
					<include content="ListSeperatorNoFocus">
						<param name="id" value="2"/>
						<param name="width" value="98"/>
						<param name="texture" value="windows/pvr/epg_focus.png"/>
					</include>
					<control type="label" id="1">
						<left>8</left>
						<top>0</top>
						<width>60</width>
						<height>45</height>
						<font>FontSize_16B</font>
						<textcolor>white</textcolor>
						<shadowcolor>77000000</shadowcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>!ListItem.IsRecording + !ListItem.HasTimer</visible>
					</control>
					<control type="label" id="1">
						<left>30</left>
						<top>0</top>
						<width>45</width>
						<height>45</height>
						<font>FontSize_16B</font>
						<textcolor>white</textcolor>
						<shadowcolor>77000000</shadowcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>ListItem.IsRecording | ListItem.HasTimer</visible>
					</control>
					<control type="image">
						<left>0</left>
						<top>8</top>
						<width>32</width>
						<height>32</height>
						<aspectratio>keep</aspectratio>
						<texture>windows/pvr/rec_epg.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>
					<control type="image">
						<left>4</left>
						<top>10</top>
						<width>26</width>
						<height>26</height>
						<aspectratio>keep</aspectratio>
						<colordiffuse>ccffffff</colordiffuse>
						<texture>windows/pvr/timer_epg.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>
				</focusedlayout>
			</control>
		</control>
	</include>

	<include name="EPGSmallList">
		<height>300</height>
	</include>
	<include name="EPGBigList">
		<height>500</height>
	</include>

	<!-- ============================ -->
