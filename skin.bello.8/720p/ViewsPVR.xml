				<param name="top" value="153"/>
			</include>
			<control type="list" id="50">
				<left>35</left>
				<top>190</top>
				<width>1200</width>
				<height>450</height>
				<onleft>130</onleft>
				<onright>6050</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				<preloaditems>2</preloaditems>
