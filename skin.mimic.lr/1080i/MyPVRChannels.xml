    <allowoverlay>no</allowoverlay>
    <views>50</views>
    <controls>
        <include>CommonBackground</include>
        <control type="group">
            <description>Channels group</description>
            <visible>Control.IsVisible(50)</visible>
            <include>VisibleFadeEffect</include>
            <left>0</left>
            <top>170</top>
            <include>Animation.Common</include>
            <control type="group">
                <visible>Integer.IsGreater(Container(50).NumItems,0)</visible>
                <control type="image">
                    <left>82</left>
                    <top>10</top>
                    <width>890</width>
                    <height>120</height>
                    <visible>Control.HasFocus(50)</visible>
                    <animation effect="fade" time="320" delay="200">Visible</animation>
                    <animation effect="fade" time="50">Hidden</animation>
                    <texture colordiffuse="FocusColor" border="5">listselect_fo.png</texture>
                    <animation effect="slide" end="0,120" time="300" tween="cubic" easing="inout" condition="Integer.IsGreater(Container(50).Row,5)">Conditional</animation>
                    <animation effect="slide" end="0,120" time="300" tween="cubic" easing="inout" condition="Integer.IsGreater(Container(50).Row,4)">Conditional</animation>
                    <animation effect="slide" end="0,120" time="300" tween="cubic" easing="inout" condition="Integer.IsGreater(Container(50).Row,3)">Conditional</animation>
                    <animation effect="slide" end="0,120" time="300" tween="cubic" easing="inout" condition="Integer.IsGreater(Container(50).Row,2)">Conditional</animation>
                    <animation effect="slide" end="0,120" time="300" tween="cubic" easing="inout" condition="Integer.IsGreater(Container(50).Row,1)">Conditional</animation>
                    <animation effect="slide" end="0,120" time="300" tween="cubic" easing="inout" condition="Integer.IsGreater(Container(50).Row,0)">Conditional</animation>
                </control>
            </control>
            <control type="panel" id="50">
                <left>82</left>
                <top>10</top>
                <width>890</width>
                <height>840</height>
                <onleft>SetProperty(MediaMenu,True,home)</onleft>
                <onleft>SetFocus(9050)</onleft>
                <onright>60</onright>
                <onup>50</onup>
                <ondown>50</ondown>
                <viewtype label="535">list</viewtype>
                <pagecontrol>60</pagecontrol>
                <scrolltime tween="quadratic" easing="out">200</scrolltime>
                <itemlayout height="120" width="890">
                    <control type="image">
                        <left>15</left>
                        <top>12</top>
                        <width>170</width>
                        <height>96</height>
                        <aspectratio align="center" aligny="center">keep</aspectratio>
                        <texture background="true" fallback="DefaultTVShows.png">$INFO[ListItem.Thumb]</texture>
                    </control>
                    <control type="label">
                        <visible>ListItem.IsPlaying</visible>
                        <left>200</left>
                        <top>1</top>
                        <width>35</width>
                        <height>60</height>
                        <font>IconTiny</font>
                        <label>I</label>
                    </control>
                    <control type="label">
                        <left>840</left>
                        <top>-4</top>
                        <width>30</width>
                        <height>70</height>
                        <font>IconSmall</font>
                        <label>j</label>
                        <visible>ListItem.IsRecording</visible>
                    </control>
                    <control type="label">
                        <animation effect="slide" time="0" tween="sine" easing="inout" start="0" end="35" condition="ListItem.IsPlaying">Conditional</animation>
                        <left>200</left>
                        <top>-5</top>
                        <width>670</width>
                        <height>70</height>
                        <font>font30</font>
                        <label>$INFO[ListItem.ChannelNumberLabel,,. ]$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <left>200</left>
                        <top>44</top>
                        <width>670</width>
                        <height>60</height>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
                    <control type="progress">
                        <description>Progressbar</description>
                        <left>200</left>
                        <top>102</top>
                        <width>670</width>
                        <height>8</height>
                        <texturebg colordiffuse="22ffffff" border="5">osd/midtexture.png</texturebg>
                        <midtexture colordiffuse="TitleTextColor" border="5">osd/midtexture.png</midtexture>
                        <visible>ListItem.HasEpg</visible>
                        <info>ListItem.Progress</info>
                    </control>
                </itemlayout>
                <focusedlayout height="120" width="890">
                    <control type="image">
                        <left>15</left>
                        <top>12</top>
                        <width>170</width>
                        <height>96</height>
                        <aspectratio align="center" aligny="center">keep</aspectratio>
                        <texture background="true" fallback="DefaultTVShows.png">$INFO[ListItem.Thumb]</texture>
                    </control>
                    <control type="label">
                        <visible>ListItem.IsPlaying</visible>
                        <left>200</left>
                        <top>1</top>
                        <width>35</width>
                        <height>60</height>
                        <font>IconTiny</font>
                        <label>I</label>
                    </control>
                    <control type="label">
                        <left>840</left>
                        <top>-4</top>
                        <width>30</width>
                        <height>70</height>
                        <font>IconSmall</font>
                        <label>j</label>
                        <visible>ListItem.IsRecording</visible>
                    </control>
                    <control type="label">
                        <animation effect="slide" time="0" tween="sine" easing="inout" start="0" end="35" condition="ListItem.IsPlaying">Conditional</animation>
                        <left>200</left>
                        <top>-5</top>
                        <width>670</width>
                        <height>70</height>
                        <font>font30</font>
                        <label>$INFO[ListItem.ChannelNumberLabel,,. ]$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <left>200</left>
                        <top>44</top>
                        <width>670</width>
                        <height>60</height>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
                    <control type="progress">
                        <description>Progressbar</description>
                        <left>200</left>
                        <top>102</top>
                        <width>670</width>
                        <height>8</height>
                        <texturebg colordiffuse="22ffffff" border="5">osd/midtexture.png</texturebg>
                        <midtexture colordiffuse="TitleTextColor" border="5">osd/midtexture.png</midtexture>
                        <visible>ListItem.HasEpg</visible>
                        <info>ListItem.Progress</info>
                    </control>
                </focusedlayout>
            </control>
            <control type="group">
                <description>Small Media Window</description>
                <left>985</left>
                <top>-22</top>
                <control type="image">
                    <left>31</left>
                    <top>32</top>
                    <width>822</width>
                    <height>461</height>
                    <texture border="5">overlays/diffuse-overlay.png</texture>
  						<visible>Skin.HasSetting(Enable.HighlightFocused)</visible>
                    <include>VisibleFadeEffect</include>
                </control>
                <control type="videowindow">
                    <left>31</left>
                    <top>32</top>
                    <width>822</width>
                    <height>461</height>
                    <visible>Player.HasVideo + !SlideShow.IsActive</visible>
                </control>
            </control>
            <control type="group">
                <left>1017</left>
                <top>472</top>
                <control type="label">
                    <left>0</left>
                    <top>15</top>
                    <width>821</width>
                    <height>30</height>
                    <font>font15</font>
                    <visible>Container(50).ListItem.HasEpg</visible>
                    <label>[COLOR=NormalTextColor]$INFO[Container(50).ListItem.StartTime]$INFO[Container(50).ListItem.EndTime, - ,: ][/COLOR]$INFO[Container(50).ListItem.Title]</label>
                </control>
                <control type="label">
                    <left>0</left>
                    <top>58</top>
                    <width>821</width>
                    <height>30</height>
                    <font>font15</font>
                    <visible>!String.IsEmpty(Container(50).ListItem.NextTitle)</visible>
                    <label>[COLOR=LabelTextColor]$LOCALIZE[19031]:[/COLOR] $INFO[Container(50).ListItem.NextTitle]</label>
                </control>
                <control type="textbox" id="80">
                    <label>$INFO[Container(50).ListItem.Plot]</label>
                    <top>124</top>
                    <width>821</width>
                    <height>244</height>
                    <font>font15_textbox</font>
                    <include>InfoPanelButtonsValues</include>
                    <include>AutoscrollDefault</include>
                </control>
            </control>
        </control>
        <control type="scrollbar" id="60">
            <visible allowhiddenfocus="true">Control.HasFocus(60) | Container.Scrolling</visible>
            <left>1910</left>
            <top>120</top>
            <width>10</width>
            <height>960</height>
            <onright>50</onright>
            <onleft>50</onleft>
            <ondown>60</ondown>
            <onup>60</onup>
        </control>
        <include>Topbar</include>
        <include>PVRMediaMenu</include>
        <control type="label" id="15">
			<left>100</left>
			<top>100</top>
			<width>600</width>
			<height>300</height>
			<label>$INFO[PVR.ChannelNumberInput]</label>
            <textcolor>NormalTextColor</textcolor>
			<shadowcolor>black</shadowcolor>
			<align>top</align>
			<font>font54</font>
			<visible>!String.IsEmpty(PVR.ChannelNumberInput)</visible>
		</control>
        
    </controls>
