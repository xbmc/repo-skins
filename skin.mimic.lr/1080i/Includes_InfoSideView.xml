			<!-- <height>560</height> -->
			<!-- <visible>!$EXP[externalGenreIcon]+!Container.Content(addons) + !String.IsEqual(Container.Content,sources)</visible> -->
			<!-- <control type="image"> -->
			<!-- <width>560</width> -->
