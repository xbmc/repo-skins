<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- slim_icon -->
	<include name="KeibertzPlus_Slim_Icon">
		<param name="bordersize" default="10" />
		<param name="bordertexture" default="" />
		<param name="colordiffuse" default="BorderDiffuse" />
		<param name="diffuse" default="false" />
		<param name="flipy" default="false" />
		<param name="texture" default="$INFO[ListItem.Art(poster)]" />
		<param name="texturecolor" default="false" />
		<param name="textureborder" default="0" />
		<param name="top" default="100" />
		<definition>
			<left>0</left>
			<top>$PARAM[top]</top>
			<width>270</width>
			<height>470</height>
			<texture background="true" border="$PARAM[textureborder]" colordiffuse="$PARAM[texturecolor]" diffuse="$PARAM[diffuse]" flipy="$PARAM[flipy]">$PARAM[texture]</texture>
			<bordersize>$PARAM[bordersize]</bordersize>
			<bordertexture border="5" colordiffuse="$PARAM[colordiffuse]" diffuse="$PARAM[diffuse]">$PARAM[bordertexture]</bordertexture>
		</definition>
	</include>
	<!-- slim_includes -->
	<include name="KeibertzPlus_Slim_Includes">
		<animation effect="slide" start="0,0" end="35,0" time="0" condition="$EXP[DetectSlim]" reversible="true">Conditional</animation>
		<itemlayout width="270" height="640" condition="$EXP[DetectSlim]">
			<control type="group">
				<visible>$EXP[KeibertzPlusHideReflections]</visible>
				<control type="image">
					<include content="KeibertzPlus_Slim_Icon">
						<param name="top">552</param>
						<param name="diffuse">diffuse/generic-diffuse.png</param>
						<param name="flipy">true</param>
					</include>
				</control>
				<control type="image">
					<include content="KeibertzPlus_Slim_Icon">
						<param name="top">552</param>
						<param name="texture">overlays/icon-overlay.png</param>
						<param name="diffuse">diffuse/generic-diffuse.png</param>
						<param name="flipy">true</param>
					</include>
  						<visible>Skin.HasSetting(Enable.HighlightFocused)</visible>
				</control>
			</control>
			<control type="image">
				<include content="KeibertzPlus_Slim_Icon">
					<param name="diffuse">diffuse/fanart-poster.png</param>
				</include>
			</control>
			<control type="image">
				<include content="KeibertzPlus_Slim_Icon">
					<param name="texture">overlays/icon-overlay.png</param>
					<param name="diffuse">diffuse/fanart-poster.png</param>
				</include>
  						<visible>Skin.HasSetting(Enable.HighlightFocused)</visible>
			</control>
			<include content="KeibertzPlusCommonLabel">
				<param name="top">60</param>
				<param name="width">240</param>
			</include>
				<include content="OverlayIcons">
					<param name="OverlayLeft" value="10"/>
					<param name="OverlayTop" value="130" />
				</include>
		</itemlayout>
		<focusedlayout width="270" height="640" condition="$EXP[DetectSlim]">
			<control type="group">
				<animation effect="zoom" center="135,550" start="100" end="115" time="400" tween="cubic" easing="out" condition="$EXP[KeibertzPlusStaticIcons]" reversible="false">Focus</animation>
				<animation effect="zoom" center="135,550" start="115" end="100" time="200" tween="cubic" easing="in" condition="$EXP[KeibertzPlusStaticIcons]" reversible="false">UnFocus</animation>
				<control type="group">
					<visible>$EXP[KeibertzPlusHideReflections]</visible>
					<control type="image">
						<include content="KeibertzPlus_Slim_Icon">
							<param name="top">552</param>
							<param name="diffuse">diffuse/generic-diffuse.png</param>
							<param name="flipy">true</param>
						</include>
					</control>
					<control type="image">
						<include content="KeibertzPlus_Slim_Icon">
							<param name="top">552</param>
							<param name="texture">overlays/icon-overlay.png</param>
							<param name="diffuse">diffuse/generic-diffuse.png</param>
							<param name="flipy">true</param>
						</include>
						<animation effect="fade" start="100" end="0" time="400" reversible="true">Focus</animation>
						<animation effect="fade" start="0" end="100" time="200">UnFocus</animation>
  						<visible>Skin.HasSetting(Enable.HighlightFocused)</visible>
					</control>
				</control>
				<control type="image">
					<include content="KeibertzPlus_Slim_Icon">
						<param name="bordersize">0</param>
						<param name="texture">listselect_fo.png</param>
						<param name="textureborder">5</param>
						<param name="texturecolor">FocusColor</param>
					</include>
					<animation effect="fade" start="0" end="100" time="200" reversible="true">Focus</animation>
					<animation effect="fade" start="100" end="0" time="200">UnFocus</animation>
				</control>
				<control type="image">
					<include content="KeibertzPlus_Slim_Icon">
						<param name="diffuse">diffuse/fanart-poster.png</param>
					</include>
				</control>
				<control type="image">
					<include content="KeibertzPlus_Slim_Icon">
						<param name="texture">overlays/icon-overlay.png</param>
						<param name="diffuse">diffuse/fanart-poster.png</param>
					</include>
					<animation effect="fade" start="100" end="0" time="400" reversible="true">Focus</animation>
					<animation effect="fade" start="0" end="100" time="200">UnFocus</animation>
  						<visible>Skin.HasSetting(Enable.HighlightFocused)</visible>
				</control>
				<include content="OverlayIcons">
					<param name="OverlayLeft" value="10"/>
					<param name="OverlayTop" value="130" />
				</include>
			</control>
		</focusedlayout>
	</include>
</includes>