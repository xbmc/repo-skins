				</focusedlayout>
			</control>
			<control type="group">
				<top>171</top>
				<left>1195</left>
				<width>680</width>
				<visible>Control.IsVisible(51)</visible>
				<include content="MusicInfoSide" file="Includes_InfoSideView.xml"/>
			</control>

		</control>
		<control type="group">
			<visible>Control.IsVisible(51) + !$EXP[isInfoDialog]</visible>
