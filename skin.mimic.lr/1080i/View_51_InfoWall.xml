							<textoffsetx>4</textoffsetx>
							<info>ListItem.Label</info>
						</control>
					</control>
				</itemlayout>
				<focusedlayout height="280" width="280">
					<control type="group">
						<include>PanelFocusedItemZoom</include>
						<control type="image">
							<top>-10</top>
							<left>-10</left>
							<right>-10</right>
							<bottom>-10</bottom>
							<texture colordiffuse="FocusColor" border="5">listselect_fo.png</texture>
						</control>
