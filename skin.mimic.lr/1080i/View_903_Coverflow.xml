			<height>50</height>
			<texture background="true" colordiffuse="TitleTextColor">$VAR[StarRatingVar]</texture>
			<aspectratio align="center">keep</aspectratio>
		</control>
		<control type="image">
			<left>1710</left>
			<top>960</top>
