                    </control>
                    <control type="label">
                        <visible>!String.IsEmpty(ListItem.playcount)</visible>
                        <posx>23-col</posx>
                        <posy>0</posy>
                        <width>1-col</width>
                        <height>2-row</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>symbolLarge</font>
                        <textcolor>textActive</textcolor>
                        <shadowcolor></shadowcolor>
