                    <font>itemTitle</font>
                    <textcolor>textActive</textcolor>
                    <shadowcolor></shadowcolor>
                    <label>$INFO[ListItem.TrackNumber]</label>
                </control>
                <control type="image">
                    <posx>1-col</posx>
                    <posy>0</posy>
                    <width>15-col</width>
                    <height>2-row</height>
                    <aspectratio>stretch</aspectratio>
                    <texture>colors/white.png</texture>
                    <bordersize>0</bordersize>
