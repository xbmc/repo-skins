                    <posx>12</posx>
                    <posy>4-row</posy>
                    <font>textbox</font>
                    <width>12-col-gutter</width>
                    <height>7-row</height>
                    <label>$INFO[ListItem.AddonDescription]</label>
                    <autoscroll>false</autoscroll>
                    <pagecontrol>61</pagecontrol>
                </control>
                <control type="scrollbar" id="61">
                     <posx>870</posx>
                     <posy>4-row</posy>
                     <height>7-row</height>
                     <onleft>8000</onleft>
                 </control>
            </control>
