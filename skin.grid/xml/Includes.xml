			<control type="label">
				<width min="50">auto</width>
				<height>$PARAM[Height]</height>
				<label>$INFO[ListItem.Genre]&#32;&#32;</label>
				<textcolor>$VAR[color:Text.2]</textcolor>
				<font>Regular-20</font>
				<visible>$EXP[!ListItem.IsParent]</visible>
