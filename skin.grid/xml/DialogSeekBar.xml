<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol></defaultcontrol>
	<visible>[VideoPlayer.IsFullscreen | Window.IsActive(visualisation)] + !Window.IsActive(videoosd) + !Window.IsActive(sliderdialog) + !Window.IsActive(videobookmarks) + !Window.IsActive(subtitlesearch) + !Window.IsActive(gameviewmode) + !Window.IsActive(gamevideofilter)</visible>
	<controls>
		<control type="group">

			<include content="global_WindowChrome">
				<param name="Title">$VAR[window:Title.Player]</param>
				<param name="Visible">[[Player.Caching | Player.Seeking | Player.DisplayAfterSeek | Player.Forwarding | Player.Rewinding] + !Player.HasGame] | Player.Paused | Player.ShowInfo | Window.IsActive(DialogFullScreenInfo.xml)</param>
			</include>

			<!-- Music -->
			<include condition="Player.HasAudio" content="osd_Info">
				<param name="ArtPosY">40</param>
				<param name="ShowArt">true</param>
				<param name="TextLeft">232</param>
				<param name="DescriptionLeft">232</param>
			</include>

			<!-- PVR -->
			<include condition="Player.HasVideo + !VideoPlayer.Content(livetv)" content="osd_Info">
				<param name="InfoWidth">1490</param>
			</include>

			<!-- Game -->
			<include condition="Player.HasGame" content="osd_Info">
				<param name="Top">850</param>
			</include>

			<!-- Video -->
			<include condition="VideoPlayer.Content(livetv)" content="osd_Info">
				<param name="ShowArt">true</param>
				<param name="ArtSize">96</param>
				<param name="TextLeft">132</param>
				<param name="TextWidth">1532</param>
				<param name="Art">$INFO[VideoPlayer.Cover]</param>
			</include>
		</control>
	</controls>
</window>