<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">11</defaultcontrol>
	<coordinates>
		<system>1</system>
		<left>510</left>
		<top>225</top>
	</coordinates>
	<controls>
		<control type="group">
			<width>100%</width>
			<height>800</height>
			<include>transition_Content</include>
			<!--header-->
			<control type="group">
				<width>900</width>
				<height>90</height>
				<control type="image">
					<width>900</width>
					<height>90</height>
					<texture colordiffuse="$VAR[color:Main]">colorize/100.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="label">
					<width>108</width>
					<height>100%</height>
					<font>Symbols-32</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>&#59138;</label>
				</control>
				<control type="label">
					<left>114</left>
					<width>762</width>
					<height>100%</height>
					<font>Black-32</font>
					<aligny>center</aligny>
					<label>$INFO[VideoPlayer.ChannelGroup] $INFO[System.Date(dd MMMMM), - ]$INFO[System.Time(hh:mm), - ]</label>
					<textcolor>$VAR[color:Accent]</textcolor>
				</control>
			</control>

			<!--frame-->
			<control type="group">
				<top>90</top>
				<width>900</width>
				<height>540</height>
				<control type="image">
					<width>100%</width>
					<height>540</height>
					<texture colordiffuse="$VAR[color:Main]">colorize/100.png</texture>
				</control>
				<control type="image">
					<width>900</width>
					<height>540</height>
					<texture colordiffuse="ff000000">osd/90.png</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="image">
					<width>90</width>
					<height>540</height>
					<texture colordiffuse="ff000000">colorize/15.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>

				<!--programme listing-->
				<control type="list" id="11">
					<width>100%</width>
					<height>540</height>
					<onup>11</onup>
					<ondown>11</ondown>
					<orientation>vertical</orientation>
					<include>global_ListScroll</include>
					<itemlayout width="900" height="90">
						<control type="label">
							<right>0</right>
							<width>90</width>
							<height>90</height>
							<label>$VAR[pvr:Symbol]</label>
							<font>Symbols-32</font>
							<align>center</align>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Text.3]</textcolor>
							<selectedcolor>$VAR[color:Accent]</selectedcolor>
						</control>
						<control type="image">
							<top>13</top>
							<left>13</left>
							<width>64</width>
							<height>64</height>
							<texture>$INFO[ListItem.Icon]</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
						</control>
						<control type="group">
							<left>114</left>
							<width>90%</width>
							<control type="label">
								<top>10</top>
								<width>744</width>
								<height>45</height>
								<label>$INFO[ListItem.ChannelName,]$INFO[ListItem.Title, - ]</label>
								<font>Black-22</font>
								<align>left</align>
								<aligny>center</aligny>
								<textcolor>$VAR[color:Accent]</textcolor>
								<selectedcolor>$VAR[color:Accent]</selectedcolor>
							</control>
							<control type="label">
								<top>45</top>
								<width>744</width>
								<label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ]$INFO[ListItem.Genre,  |  ]</label>
								<font>Regular-20</font>
								<align>left</align>
								<aligny>top</aligny>
								<textcolor>$VAR[color:Text.2]</textcolor>
								<selectedcolor>$VAR[color:Text.2]</selectedcolor>
							</control>
						</control>
					</itemlayout>
					<focusedlayout width="900" height="90">
						<control type="image">
							<width>100%</width>
							<height>90</height>
							<texture colordiffuse="$VAR[color:Accent]">colorize/75.png</texture>
							<aspectratio>stretch</aspectratio>
						</control>
						<control type="image">
							<top>13</top>
							<left>13</left>
							<width>64</width>
							<height>64</height>
							<texture>$INFO[ListItem.Icon]</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
						</control>
						<control type="label">
							<right>0</right>
							<width>90</width>
							<height>90</height>
							<label>$VAR[pvr:Symbol]</label>
							<font>Symbols-32</font>
							<align>center</align>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Main]</textcolor>
							<selectedcolor>$VAR[color:Main]</selectedcolor>
						</control>
						<control type="group">
							<left>114</left>
							<width>90%</width>
							<control type="label">
								<top>10</top>
								<width>744</width>
								<height>45</height>
								<label>$INFO[ListItem.ChannelName,]$INFO[ListItem.Title, - ]</label>
								<font>Black-22</font>
								<align>left</align>
								<aligny>center</aligny>
								<textcolor>$VAR[color:Main]</textcolor>
								<selectedcolor>$VAR[color:Main]</selectedcolor>
							</control>
							<control type="label">
								<top>45</top>
								<width>744</width>
								<label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ]$INFO[ListItem.Genre,  |  ]</label>
								<font>Regular-20</font>
								<align>left</align>
								<aligny>top</aligny>
								<textcolor>$VAR[color:Main]</textcolor>
								<selectedcolor>$VAR[color:Main]</selectedcolor>
							</control>
						</control>
					</focusedlayout>
				</control>
			</control>
		</control>
	</controls>
</window>