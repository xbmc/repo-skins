			<top>198</top>
			<left>128</left>
			<include>transition_Content</include>

			<control type="list" id="211">
				<width>640</width>
				<height>810</height>
				<onup>211</onup>
				<ondown>211</ondown>
				<onleft>8997</onleft>
				<onright>8998</onright>
				<onup>8998</onup>
				<orientation>vertical</orientation>
				<animation effect="fade" start="100" end="60" time="200" condition="$PARAM[AnimationCondition]">Conditional</animation>
				<itemlayout width="640" height="90">
					<control type="image">
						<width>108</width>
						<height>90</height>
						<texture colordiffuse="ff000000">colorize/10.png</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="label">
						<width>108</width>
						<height>90</height>
						<font>Symbols-26</font>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Property(homeSymbol)]</label>
						<textcolor>$VAR[color:Text.3]</textcolor>
						<selectedcolor>$VAR[color:Accent]</selectedcolor>
					</control>
					<control type="group">
						<left>140</left>
						<control type="label">
							<top>15</top>
							<width>572</width>
							<height>45</height>
							<aligny>bottom</aligny>
							<font>Black-22</font>
							<label>$INFO[ListItem.Label]</label>
							<textcolor>$VAR[color:Accent]</textcolor>
							<selectedcolor>$VAR[color:Accent]</selectedcolor>
						</control>
						<control type="label">
							<top>40</top>
							<width>572</width>
							<height>45</height>
							<aligny>top</aligny>
							<font>Regular-20</font>
							<label>$INFO[ListItem.Label2]</label>
							<textcolor>$VAR[color:Text.2]</textcolor>
							<selectedcolor>$VAR[color:Text.2]</selectedcolor>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="640" height="90">
					<control type="group">
						<visible>!Control.HasFocus(211)</visible>
						<control type="group">
							<left>108</left>
							<control type="image">
								<width>640</width>
								<height>90</height>
								<texture colordiffuse="ff000000">colorize/10.png</texture>
								<aspectratio>stretch</aspectratio>
							</control>
							<control type="group">
								<left>32</left>
								<control type="label">
									<top>15</top>
									<width>572</width>
									<height>45</height>
									<aligny>bottom</aligny>
									<font>Black-22</font>
									<label>$INFO[ListItem.Label]</label>
									<textcolor>$VAR[color:Accent]</textcolor>
								</control>
								<control type="label">
									<top>40</top>
									<width>572</width>
									<height>45</height>
									<aligny>top</aligny>
									<font>Regular-20</font>
									<label>$INFO[ListItem.Label2]</label>
									<textcolor>$VAR[color:Text.2]</textcolor>
								</control>
							</control>
						</control>
					</control>
					<control type="group">
						<visible>Control.HasFocus(211)</visible>
						<control type="group">
							<left>108</left>
							<control type="image">
								<width>640</width>
								<height>90</height>
								<texture colordiffuse="$VAR[color:Accent]">colorize/75.png</texture>
								<aspectratio>stretch</aspectratio>
								<include>fadeinout</include>
								<visible>Control.HasFocus(211)</visible>
							</control>
							<control type="group">
								<left>32</left>
								<control type="label">
									<top>15</top>
									<width>572</width>
									<height>45</height>
									<aligny>bottom</aligny>
									<font>Black-22</font>
									<label>$INFO[ListItem.Label]</label>
									<textcolor>$VAR[color:Main]</textcolor>
								</control>
								<control type="label">
									<top>40</top>
									<width>572</width>
									<height>45</height>
									<aligny>top</aligny>
									<font>Regular-20</font>
									<label>$INFO[ListItem.Label2]</label>
									<textcolor>$VAR[color:Main]</textcolor>
								</control>
							</control>
						</control>
					</control>
				</focusedlayout>
			</control>

		<!-- Context controls -->
			<control type="button" id="8997">
				<label>$INFO[Container(211).ListItem.Property(homeSymbol)]</label>
				<include content="button_Dialog">
					<param name="Font">Symbols-26</param>
				</include>
				<onclick>SetProperty(SelectDialog,icon,home)</onclick>
				<onup>Control.Move(211,-1)</onup>
				<ondown>Control.Move(211,1)</ondown>
				<onright>211</onright>
				<include>shortcuts_ScrollingControls</include>
			</control>
			<control type="grouplist" id="8998">
				<left>640</left>
				<orientation>horizontal</orientation>
				<itemgap>0</itemgap>
				<height>108</height>
				<width>640</width>
				<onleft>211</onleft>
				<onright>9000</onright>
				<include>shortcuts_ScrollingControls</include>	

				<!-- Select shortcut -->
				<control type="button" id="401">
					<left>640</left>
					<label>&#57502;</label>
					<include content="button_Dialog">
						<param name="Font">Symbols-24</param>
					</include>
					<onup>Control.Move(211,-1)</onup>
					<ondown>Control.Move(211,1)</ondown>
				</control>
				<!-- Overflow menu -->
				<control type="button" id="606">
					<label>&#58882;</label>
					<include content="button_Dialog">
						<param name="Font">Symbols-24</param>
					</include>
					<onclick>Action(contextmenu)</onclick>
					<onup>Control.Move(211,-1)</onup>
					<ondown>Control.Move(211,1)</ondown>
				</control>
			</control>

		<!-- Right grouplist -->
			<control type="grouplist" id="9000">
				<left>920</left>
				<width>744</width>
				<height>810</height>
				<itemgap>0</itemgap>
				<onleft>8998</onleft>
				<onright>noop</onright>
				<onup>noop</onup>
				<ondown>9001</ondown>
				<orientation>vertical</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<!-- Add new -->
				<control type="group" id="201">
					<height>90</height>				
					<control type="button" id="301">
						<width>100%</width>
						<label>$LOCALIZE[31021]</label>
						<textoffsetx>114</textoffsetx>
						<onclick>SetFocus(401)</onclick>
						<onleft>8998</onleft>
						<onup>504</onup>
						<ondown>611</ondown>
						<include>button_Settings</include>
					</control>
					<control type="label">
						<label>&#58906;</label>
						<textcolor>$VAR[color:Main]</textcolor>
						<include>global_Symbol</include>
						<visible>Control.HasFocus(301)</visible>
					</control>
					<control type="label">
						<label>&#58906;</label>
						<textcolor>$VAR[color:Text.3]</textcolor>
						<include>global_Symbol</include>
						<visible>!Control.HasFocus(301)</visible>
					</control>
				</control>

				<!-- Customize submenu -->
				<control type="group" id="611">
					<height>90</height>
					<visible>String.IsEqual(Window.Property(groupname),mainmenu)</visible>	
					<control type="button" id="405">
						<width>100%</width>
						<label>$ADDON[script.skinshortcuts 32072]</label>
						<textoffsetx>114</textoffsetx>
						<onleft>8998</onleft>
						<onup>201</onup>
						<ondown>612</ondown>
						<include>button_Settings</include>
					</control>
					<control type="label">
						<label>&#57447;</label>
						<textcolor>$VAR[color:Main]</textcolor>
						<include>global_Symbol</include>
						<visible>Control.HasFocus(405)</visible>
					</control>
					<control type="label">
						<label>&#57447;</label>
						<textcolor>$VAR[color:Text.3]</textcolor>
						<include>global_Symbol</include>
						<visible>!Control.HasFocus(405)</visible>
					</control>
				</control>

				<!-- Reset -->
				<control type="group" id="612">
					<height>90</height>
					<control type="button" id="308">
						<width>100%</width>
						<label>$ADDON[script.skinshortcuts 32028]</label>
						<textoffsetx>114</textoffsetx>
						<onleft>8998</onleft>
						<onup>611</onup>
						<ondown>613</ondown>
						<include>button_Settings</include>
					</control>
					<control type="label">
						<label>&#57497;</label>
						<textcolor>$VAR[color:Main]</textcolor>
						<include>global_Symbol</include>
						<visible>Control.HasFocus(308)</visible>
					</control>
					<control type="label">
						<label>&#57497;</label>
						<textcolor>$VAR[color:Text.3]</textcolor>
						<include>global_Symbol</include>
						<visible>!Control.HasFocus(308)</visible>
					</control>
				</control>

				<!-- Header -->
				<control type="label" id="300">
					<width>100%</width>
					<height>90</height>
					<label>$LOCALIZE[31030]</label>
					<include>global_Header</include>
					<visible>String.IsEqual(Window.Property(groupname),mainmenu)</visible>
				</control>

				<!-- Select widget -->
				<control type="group" id="613">
					<height>90</height>
					<visible>String.IsEqual(Window.Property(groupname),mainmenu)</visible>
					<control type="button" id="312">
						<width>100%</width>
						<label>$VAR[widget:Name]</label>
						<textoffsetx>114</textoffsetx>
						<onleft>8998</onleft>
						<onup>612</onup>
						<ondown>501</ondown>
						<include>button_Settings</include>
					</control>
					<control type="label">
						<label>$VAR[widget:Symbol]</label>
						<textcolor>$VAR[color:Main]</textcolor>
						<include>global_Symbol</include>
						<visible>Control.HasFocus(312)</visible>
					</control>
					<control type="label">
						<label>$VAR[widget:Symbol]</label>
						<textcolor>$VAR[color:Text.3]</textcolor>
						<include>global_Symbol</include>
						<visible>!Control.HasFocus(312)</visible>
