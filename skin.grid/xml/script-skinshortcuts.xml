				<control type="group" id="501">
					<height>90</height>
					<visible>String.IsEqual(Window.Property(groupname),mainmenu)</visible>
					<control type="button" id="601">
						<width>100%</width>
						<label>$VAR[widget:Layout]</label>
						<textoffsetx>114</textoffsetx>
						<onleft>8998</onleft>
						<onup>613</onup>
