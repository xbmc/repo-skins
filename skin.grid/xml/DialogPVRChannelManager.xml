<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
	<defaultcontrol always="true">34</defaultcontrol>

	<controls>

		<!-- Global includes -->
		<include>background_Global</include>

		<control type="group">
			<include>transition_Chrome</include>
			<include>global_WindowChrome</include>
		</control>

		<control type="group">
			<left>128</left>
			<top>198</top>
			<width>1664</width>
			<include>transition_Content</include>

			<!-- Channel list -->
			<control type="list" id="20">
				<height>810</height>
				<width>634</width>
				<onright>200</onright>
				<onup>20</onup>
				<ondown>20</ondown>
				<include>view_List-Commons</include>
				<itemlayout width="900" height="90">
					<control type="image">
						<width>108</width>
						<height>90</height>
						<texture colordiffuse="ff000000">colorize/10.png</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="image">
						<top>20</top>
						<width>108</width>
						<height>50</height>
						<texture>$INFO[ListItem.Property(Icon)]</texture>
						<aspectratio>keep</aspectratio>
					</control>
					<control type="label">
						<left>140</left>
						<width>900</width>
						<height>90</height>
						<aligny>center</aligny>
						<font>Black-22</font>
						<label>$INFO[ListItem.Property(Number)]$INFO[ListItem.Property(Name), - ]</label>
						<selectedcolor>$VAR[color:Accent]</selectedcolor>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
				</itemlayout>
				<focusedlayout width="900" height="90">
					<control type="group">
						<visible>Control.HasFocus(20) | ControlGroup(200).HasFocus()</visible>
						<control type="image">
							<width>900</width>
							<height>90</height>
							<texture colordiffuse="$VAR[color:Accent]">colorize/75.png</texture>
							<aspectratio>stretch</aspectratio>
							<include content="UnfocusList">
								<param name="FadeCondition">!Control.HasFocus(20)</param>
							</include>
						</control>
						<control type="image">
							<top>20</top>
							<width>108</width>
							<height>50</height>
							<texture>$INFO[ListItem.Property(Icon)]</texture>
							<aspectratio>keep</aspectratio>
						</control>
						<control type="label">
							<left>140</left>
							<width>900</width>
							<height>90</height>
							<aligny>center</aligny>
							<font>Black-22</font>
							<label>$INFO[ListItem.Property(Number)]$INFO[ListItem.Property(Name), - ]</label>
							<selectedcolor>$VAR[color:Main]</selectedcolor>
							<textcolor>$VAR[color:Main]</textcolor>
						</control>
					</control>
					<control type="group">
						<visible>!Control.HasFocus(20) + !ControlGroup(200).HasFocus()</visible>
						<control type="image">
							<width>108</width>
							<height>90</height>
							<texture colordiffuse="ff000000">colorize/10.png</texture>
							<aspectratio>stretch</aspectratio>
						</control>
						<control type="image">
							<top>20</top>
							<width>108</width>
							<height>50</height>
							<texture>$INFO[ListItem.Property(Icon)]</texture>
							<aspectratio>keep</aspectratio>
						</control>
						<control type="label">
							<left>140</left>
							<width>900</width>
							<height>90</height>
							<aligny>center</aligny>
							<font>Black-22</font>
							<label>$INFO[ListItem.Property(Number)]$INFO[ListItem.Property(Name), - ]</label>
							<selectedcolor>$VAR[color:Accent]</selectedcolor>
							<textcolor>$VAR[color:Accent]</textcolor>
						</control>
					</control>
				</focusedlayout>
			</control>

			<!-- Channel options -->
			<control type="grouplist" id="200">
				<left>724</left>
				<width>634</width>
				<height>810</height>
				<onleft>20</onleft>
				<onright>5</onright>
				<onup>200</onup>
				<ondown>200</ondown>
				<itemgap>0</itemgap>
				<pagecontrol>6500</pagecontrol>
				<!-- TV / radio toggle-->
				<control type="label" id="1">
					<width>634</width>
					<height>90</height>
					<label>$LOCALIZE[31608]</label>
					<include>global_Header</include>
				</control>
				<control type="togglebutton" id="34">
					<width>634</width>
					<label>$LOCALIZE[19023]</label>
					<altlabel>$LOCALIZE[19024]</altlabel>
					<ondown>7</ondown>
					<usealttexture>String.IsEmpty(Window.Property(IsRadio))</usealttexture>
				</control>
				<!-- Channel options -->
				<control type="label" id="2">
					<width>634</width>
					<height>90</height>
					<label>$LOCALIZE[31609]</label>
					<include>global_Header</include>
				</control>
				<!-- Active -->
				<control type="radiobutton" id ="7">
					<label>$LOCALIZE[19074]</label>
					<width>634</width>
					<onup>34</onup>
				</control>
				<!-- Channel name -->
				<control type="edit" id ="8">
					<label>19201</label>
					<width>634</width>
				</control>
				<!-- EPG activated -->
				<control type="radiobutton" id ="12">
					<label>$LOCALIZE[19206]</label>
					<width>634</width>
				</control>		
				<!-- EPG source -->
				<control type="spincontrolex" id ="13">
					<label>$LOCALIZE[19200]</label>
					<width>634</width>
				</control>
				<!-- Parental locked -->
				<control type="radiobutton" id ="14">
					<label>$LOCALIZE[19267]</label>
					<width>634</width>
				</control>
			</control>

			<!-- Dialog controls -->
			<control type="button" id ="5">
				<right>0</right>
				<top>0</top>
				<label>$LOCALIZE[31050]</label>
				<width>216</width>
				<align>center</align>
				<font>Black-22</font>
				<ondown>9001</ondown>
				<onleft>200</onleft>
			</control>
			<control type="grouplist" id="9001">
				<top>180</top>
				<right>0</right>
				<width>216</width>
				<height>108</height>
				<itemgap>0</itemgap>
				<onleft>200</onleft>
				<onup>5</onup>
				<ondown>noop</ondown>
				<orientation>horizontal</orientation>
				<!-- Ok -->
				<control type="button" id="4">
					<label>&#58956;</label>
					<include>button_Dialog</include>
				</control>
				<!-- Cancel -->
				<control type="button" id="6">
					<label>&#58950;</label>
					<include>button_Dialog</include>
				</control>
			</control>
		</control>

	</controls>
</window>