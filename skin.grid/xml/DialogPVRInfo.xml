<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<controls>

		<!-- Background -->
		<include>background_Global</include>

		<!-- Chrome -->
		<control type="group">
			<include>transition_Chrome</include>
			<include content="global_WindowChrome">
				<param name="Title">$VAR[window:Title.Info]</param>
				<param name="ShowItemCount">false</param>
			</include>
		</control>

		<!-- Content -->
		<control type="group">
			<top>108</top>
			<include>transition_Content</include>

			<control type="grouplist">
				<left>608</left>
				<itemgap>0</itemgap>
				<orientation>vertical</orientation>
				<visible>!Control.IsVisible(50)</visible>

				<!-- Header -->
				<control type="label">
					<width>1208</width>
					<height>90</height>
					<label>$VAR[information:Heading]</label>
					<aligny>center</aligny>
					<font>Slab-24</font>
					<textcolor>$VAR[color:Accent]</textcolor>
				</control>

				<!-- Info columns -->
				<control type="group">
					<width>1230</width>
					<height>300</height>

					<!-- Left column -->
					<control type="grouplist">
						<width>480</width>
						<height>360</height>
						<orientation>vertical</orientation>
						<itemgap>0</itemgap>
						<include content="information_Block">
							<param name="Label">$VAR[information:L1.Label]</param>
							<param name="InfoLabel">$VAR[information:L1]</param>
						</include>
						<include content="information_Block">
							<param name="Label">$VAR[information:L2.Label]</param>
							<param name="InfoLabel">$VAR[information:L2]</param>
						</include>
						<include content="information_Block">
							<param name="Label">$VAR[information:L3.Label]</param>
							<param name="InfoLabel">$VAR[information:L3]</param>
						</include>
					</control>

					<!-- Right column -->
					<control type="grouplist">
						<left>544</left>
						<width>500</width>
						<height>360</height>
						<orientation>vertical</orientation>
						<itemgap>0</itemgap>
						<include content="information_Block">
							<param name="Label">$VAR[information:R1.Label]</param>
							<param name="InfoLabel">$VAR[information:R1]</param>
						</include>
						<include content="information_Block">
							<param name="Label">$VAR[information:R2.Label]</param>
							<param name="InfoLabel">$VAR[information:R2]</param>
						</include>
						<include content="information_Block">
							<param name="Label">$VAR[information:R3.Label]</param>
							<param name="InfoLabel">$VAR[information:R3]</param>
						</include>
					</control>
				</control>
				<control type="textbox" id="401">
					<width>1056</width>
					<height>380</height>
					<label>$VAR[media:Description]</label>
					<font>Slab-24</font>
					<textcolor>$VAR[color:Text.3]</textcolor>
				</control>
			</control>

			<!-- Functions -->
			<control type="group">
				<left>0</left>
				<bottom>72</bottom>
				<height>90</height>
				<width>1920</width>
				<control type="image">
					<width>1920</width>
					<height>90</height>
					<texture colordiffuse="ff000000">colorize/25.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="grouplist" id="9000">
					<left>128</left>
					<width>1664</width>
					<height>90</height>
					<itemgap>0</itemgap>
					<onup condition="Skin.HasSetting(plot.window)">RunScript(script.skin.helper.service,action=textviewer,header=$INFO[ListItem.Title],message=$INFO[ListItem.Plot])</onup>
					<onleft>5000</onleft>
					<onright>5000</onright>
					<align>center</align>
					<orientation>horizontal</orientation>
					<!-- Timer -->
					<control type="togglebutton" id="9">
						<width>256</width>
						<height>90</height>
						<align>center</align>
						<font>Black-20</font>
						<label>$LOCALIZE[19061]</label>
						<texturenofocus></texturenofocus>
						<visible>!String.StartsWith(Container.FolderPath,pvr://recordings)</visible>
					</control>
					<!-- Find similar -->
					<control type="togglebutton" id="4">
						<width>256</width>
						<height>90</height>
						<align>center</align>
						<font>Black-20</font>
						<label>$LOCALIZE[19003]</label>
						<texturenofocus></texturenofocus>
						<visible>!String.StartsWith(Container.FolderPath,pvr://recordings)</visible>
					</control>
					<!-- Switch to channel -->
					<control type="togglebutton" id="5">
						<width>256</width>
						<height>90</height>
						<align>center</align>
						<font>Black-20</font>
						<label>$LOCALIZE[19165]</label>
						<texturenofocus></texturenofocus>
						<visible>!String.StartsWith(Container.FolderPath,pvr://recordings)</visible>
					</control>
					<!-- Play recording -->
					<control type="togglebutton" id="8">
						<width>256</width>
						<height>90</height>
						<align>center</align>
						<font>Black-20</font>
						<label>$LOCALIZE[19687]</label>
						<texturenofocus></texturenofocus>
					</control>
					<!-- Record -->
					<control type="togglebutton" id="6">
						<width>256</width>
						<height>90</height>
						<align>center</align>
						<font>Black-20</font>
						<label></label>
						<visible>Window.IsActive(PVRGuideInfo)</visible>
						<texturenofocus></texturenofocus>
						<visible>!String.StartsWith(Container.FolderPath,pvr://recordings)</visible>
					</control>
					<!-- YouTube -->
					<control type="togglebutton" id="3">
						<width>256</width>
						<height>90</height>
						<align>center</align>
						<font>Black-20</font>
						<label>YouTube</label>
						<onclick>Dialog.Close(all)</onclick>
						<onclick condition="System.HasAddon(plugin.video.youtube)">RunScript(script.skin.helper.service,action=searchyoutube,title=$INFO[ListItem.Label] Trailer,header=YouTube: $INFO[ListItem.Label])</onclick>
						<onclick condition="!System.HasAddon(plugin.video.youtube)">ActivateWindow(Videos,plugin://plugin.video.youtube)</onclick>
						<texturenofocus></texturenofocus>
					</control>
				</control>
			</control>

			<!-- Artwork -->
			<control type="group">
				<top>90</top>
				<left>128</left>
				<control type="image">
					<width>416</width>
					<height>416</height>
					<texture background="true">$VAR[art:Square]</texture>
					<aspectratio align="center" aligny="top">keep</aspectratio>
				</control>
			</control>
		</control>
	</controls>
</window>