						<onleft>150</onleft>
						<onup>120</onup>
						<ondown>120</ondown>
						<height>810</height>
						<itemlayout width="1152" height="90">
							<control type="image">
								<width>90</width>
								<height>90</height>
								<texture colordiffuse="ff000000">colorize/10.png</texture>
