<settings>

	<!-- Autoscroll speed -->
	<setting id="autoscroll.speed" value="none" label="$LOCALIZE[13113]" default="true"/>
	<setting id="autoscroll.speed" value="normal" label="$LOCALIZE[31327]"/>
	<setting id="autoscroll.speed" value="slow" label="$LOCALIZE[31330]"/>
	<setting id="autoscroll.speed" value="fast" label="$LOCALIZE[31328]"/>

	<!-- Home menu layout -->
	<setting id="homemenu.layout" value="vertical" label="$LOCALIZE[31058]" default="true">
		<onselect condition="True">SetProperty(skinshortcuts-reloadmainmenu,true)</onselect>
	</setting>
	<setting id="homemenu.layout" value="horizontal" label="$LOCALIZE[31057]">
		<onselect condition="True">SetProperty(skinshortcuts-reloadmainmenu,true)</onselect>
	</setting>
	<setting id="homemenu.layout" value="compact" label="$LOCALIZE[31025]">
		<onselect condition="True">SetProperty(skinshortcuts-reloadmainmenu,true)</onselect>
	</setting>

	<!-- Home statusbar -->
	<setting id="home.status" value="none" label="$LOCALIZE[13113]" default="true"/>
	<setting id="home.status" value="library" label="$LOCALIZE[31067]"/>
	<setting id="home.status" value="pvr" label="$LOCALIZE[19053]"/>
	<setting id="home.status" value="rss" label="$LOCALIZE[20304]"/>
	<setting id="home.status" value="system" label="$LOCALIZE[10511]"/>
	<setting id="home.status" value="weather" label="$LOCALIZE[8]" condition="Weather.IsFetched"/>

	<!-- Date -->
	<setting id="date.enabled" value="none" label="$LOCALIZE[13113]" default="true"/>
	<setting id="date.enabled" value="home" label="$LOCALIZE[31354]"/>
	<setting id="date.enabled" value="global" label="$LOCALIZE[31352]"/>
	<setting id="date.enabled" value="nohome" label="$LOCALIZE[31353]"/>

	<!-- Player time display-->
	<setting id="player.progress" value="remaining" label="$LOCALIZE[31570]" default="true"/>
	<setting id="player.progress" value="elapsed" label="$LOCALIZE[31569]"/>
	<setting id="player.progress" value="both" label="$LOCALIZE[31570] / $LOCALIZE[31569]"/>
	<setting id="player.progress" value="reversed" label="$LOCALIZE[31569] / $LOCALIZE[31570]"/>

	<!-- Horizontal home submenu orientation-->
	<setting id="submenu.type" value="horizontal" label="horizontal" default="true"/>
	<setting id="submenu.type" value="vertical" label="$LOCALIZE[31058]"/>

	<!-- Home background type -->
	<setting id="background.home" value="none" label="$LOCALIZE[36502]"/>
	<setting id="background.home" value="fanart-all" label="$LOCALIZE[31366] - $LOCALIZE[31368]"/>
	<setting id="background.home" value="fanart-video" label="$LOCALIZE[31366] - $LOCALIZE[14236]"/>
	<setting id="background.home" value="fanart-movies" label="$LOCALIZE[31366] - $LOCALIZE[31369]"/>
	<setting id="background.home" value="fanart-tvshows" label="$LOCALIZE[31366] - $LOCALIZE[31370]"/>
	<setting id="background.home" value="fanart-music" label="$LOCALIZE[31366] - $LOCALIZE[14237]"/>
	<setting id="background.home" value="pictures" label="$LOCALIZE[31056]"/>
	<setting id="background.home" value="custom" label="$LOCALIZE[636]" default="true"/>

	<!-- Global background type -->
	<setting id="background.media" value="none" label="$LOCALIZE[36502]"/>
	<setting id="background.media" value="custom" label="$LOCALIZE[636]" default="true"/>
	<setting id="background.media" value="fanart" label="$LOCALIZE[31218]"/>

	<!-- Global scrolling type -->
	<setting id="global.scrolltype" value="active" label="$LOCALIZE[31320]"/>
	<setting id="global.scrolltype" value="passive" label="$LOCALIZE[31321]" default="true"/>

	<!-- Text input -->
	<setting id="input.text" value="keyboard" label="$LOCALIZE[31355]" default="true"/>
	<setting id="input.text" value="nokeyboard" label="$LOCALIZE[31356]"/>

	<!-- Visualisation mode -->
	<setting id="viz.mode" value="fanart" label="$LOCALIZE[31218]" default="true"/>
	<setting id="viz.mode" value="viz" label="$LOCALIZE[250]"/>
	<setting id="viz.mode" value="blend" label="$LOCALIZE[20131]"/>

	<!-- Ratings source -->
	<setting id="ratings.video" value="disabled" label="$LOCALIZE[36502]" default="true"/>
	<setting id="ratings.video" value="default" label="Kodi $LOCALIZE[571]"/>
	<setting id="ratings.video" value="user" label="$LOCALIZE[38018]"/>
	<setting id="ratings.video" value="imdb" label="IMDB"/>
	<setting id="ratings.video" value="imdbpercent" label="IMDB ($LOCALIZE[31341])"/>
	<setting id="ratings.video" value="mc" label="Metacritic"/>
	<setting id="ratings.video" value="rt" label="Rotten Tomatoes"/>
	<setting id="ratings.video" value="tmdb" label="TMDB"/>

	<!-- Rating overlay toggle -->
	<setting id="ratings.overlay" value="disabled" label="$LOCALIZE[36502]" default="true"/>
	<setting id="ratings.overlay" value="both" label="$LOCALIZE[342] &#38; $LOCALIZE[20343]"/>
	<setting id="ratings.overlay" value="movies" label="$LOCALIZE[342]"/>
	<setting id="ratings.overlay" value="tvshows" label="$LOCALIZE[20343]"/>

	<setting id="ratings.music" value="disabled" label="$LOCALIZE[36502]" default="true"/>
	<setting id="ratings.music" value="user" label="$LOCALIZE[38018]"/>

	<!-- Options menu player controls type -->
	<setting id="menu.controls" value="none" label="$LOCALIZE[36502]"/>
	<setting id="menu.controls" value="player" label="$LOCALIZE[31351]" default="true"/>
	<setting id="menu.controls" value="fullscreen" label="$LOCALIZE[31350]"/>

	<!-- EPG timeline scrolling speed -->
	<setting id="epg.scrollspeed" value="normal" label="$LOCALIZE[31327]" default="true"/>
	<setting id="epg.scrollspeed" value="fast" label="$LOCALIZE[31328]"/>
	<setting id="epg.scrollspeed" value="instant" label="$LOCALIZE[31329]"/>

	<!-- Global landscape artwork type -->
	<setting id="views.landscape.art" value="fanart" label="$LOCALIZE[31230]" default="true"/>
	<setting id="views.landscape.art" value="landscape" label="$LOCALIZE[31229]"/>

</settings>