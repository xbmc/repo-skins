                <itemgap>3</itemgap>



                <control type="button" id="401" description="Alt chooser">
                    <width>100%</width>
                    <height>66</height>
                    <texturenofocus colordiffuse="dialog_fg_12" border="5">common/box.png</texturenofocus>
                    <align>left</align>
