				<align>right</align>
				<aligny>center</aligny>
				<font>font-19</font>
				<textcolor>grey</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="progress">
				<description>progress control</description>
				<left>228</left>
				<top>82</top>
				<width>399</width>
				<height>22</height>
