				<aligny>center</aligny>
				<font>font-19</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="label">
				<left>120</left>
				<top>76</top>
				<width>105</width>
				<height>30</height>
