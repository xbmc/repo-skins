			</control>
			<control type="slider" id="888">
				<description>Slider</description>
				<left>228</left>
				<top>82</top>
				<width>399</width>
				<height>22</height>
				<action>seek</action>
			</control>
			<control type="label">
				<left>630</left>
				<top>76</top>
				<width>105</width>
				<height>30</height>
				<label>$INFO[MusicPlayer.Duration]</label>
				<align>left</align>
				<aligny>center</aligny>
				<font>font-19</font>
				<textcolor>grey</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
