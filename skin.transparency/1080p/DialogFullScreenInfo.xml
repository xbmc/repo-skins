					<aligny>center</aligny>
					<font>font-20</font>
				</control>
				<control type="label">
					<description>Chapter Pos No</description>
					<left>1148</left>
					<top>246</top>
					<width>735</width>
					<height>38</height>
					<textcolor>lightgrey</textcolor>
