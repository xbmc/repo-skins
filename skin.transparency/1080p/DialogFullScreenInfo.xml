					<align>right</align>
					<aligny>center</aligny>
					<font>font-20</font>
				</control>
				<control type="label">
					<description>time label</description>
					<left>488</left>
					<top>201</top>
					<width>420</width>
					<height>38</height>
					<textcolor>lightblue</textcolor>
					<label>$INFO[VideoPlayer.Time]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font-20</font>
				</control>
				<control type="progress">
