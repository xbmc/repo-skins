					<midtexture border="10,0,10,0">ProgressCache.png</midtexture>
				</control>
				<control type="progress">
					<description>Progressbar</description>
					<left>630</left>
					<top>210</top>
					<width>1112</width>
					<height>22</height>
					<info>Player.Progress</info>
				</control>
				<control type="slider" id="888">
