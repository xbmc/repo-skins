<?xml version="1.0" encoding="UTF-8"?>
<window>
	<onload condition="Skin.HasSetting(Use_Startup_Playlist)">PlayMedia("$INFO[Skin.String(Startup_Playlist_Path)]")</onload>
	<onload condition="Skin.HasSetting(NextAired)">RunScript(script.tv.show.next.aired,silent=True)</onload>
	<onload condition="Skin.HasSetting(Vis-LastFM)">RunScript(script.artistslideshow,daemon=True)</onload>
	<onload>ReplaceWindow($INFO[System.StartupWindow])</onload>
</window>
