		<posy>20</posy>
	</coordinates>
	<include>dialogeffect</include>
	<controls>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>800</width>
			<height>525</height>
			<texture border="17">panel.png</texture>
			<bordersize>11</bordersize>
		</control>
		<control type="button">
			<posx>744</posx>
			<posy>32</posy>
			<width>20</width>
			<height>20</height>
			<texturefocus>close-window-focus.png</texturefocus>
			<texturenofocus>close-window-nofocus.png</texturenofocus>
			<onclick>Dialog.Close(videobookmarks)</onclick>
			<visible>Skin.HasSetting(TouchScreenMode)</visible>
		</control>
		<control type="label">
			<description>heading label</description>
			<posx>40</posx>
			<posy>40</posy>
			<width>720</width>
			<height>30</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>font-32</font>
			<label>$LOCALIZE[298]</label>
			<textcolor>blue</textcolor>
		</control>
		<control type="image">
			<posx>40</posx>
			<posy>78</posy>
			<width>720</width>
			<height>2</height>
			<texture>separator.png</texture>
		</control>
		<control type="panel" id="11">
			<posx>38</posx>
			<posy>88</posy>
			<width>720</width>
			<height>360</height>
			<onleft>11</onleft>
			<onright>11</onright>
			<ondown>2</ondown>
			<onup>11</onup>
			<scrolltime>200</scrolltime>
			<preloaditems>2</preloaditems>
			<viewtype label="536">icon</viewtype>
			<pagecontrol>61</pagecontrol>
			<orientation>vertical</orientation>
			<itemlayout width="180" height="180">
				<control type="image">
					<posx>2</posx>
					<posy>2</posy>
					<width>170</width>
					<height>170</height>
					<texture border="7">thumb-nofocus.png</texture>
				</control>
				<control type="image">
					<posx>7</posx>
					<posy>7</posy>
					<width>160</width>
					<height>160</height>
					<aspectratio>keep</aspectratio>
					<texture diffuse="video-diffuse.png" background="true">$INFO[ListItem.Icon]</texture>
				</control>
				<control type="label">
					<posx>2</posx>
					<posy>140</posy>
					<width>170</width>
					<height>22</height>
					<font>font-20</font>
					<textcolor>white</textcolor>
					<selectedcolor>blue</selectedcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, (,)]</label>
				</control>
			</itemlayout>
			<focusedlayout width="180" height="180">
				<control type="image">
					<posx>2</posx>
					<posy>2</posy>
					<width>170</width>
					<height>170</height>
					<texture border="7">thumb-focus.png</texture>
				</control>
				<control type="image">
					<posx>7</posx>
					<posy>7</posy>
					<width>160</width>
					<height>160</height>
					<aspectratio>keep</aspectratio>
					<texture diffuse="video-diffuse.png" background="true">$INFO[ListItem.Icon]</texture>
					<animation type="focus">
						<effect type="zoom" start="100" end="123" center="auto" time="200"/>
					</animation>
					<animation type="unfocus">
						<effect type="zoom" start="123" end="100" center="auto" time="200"/>
					</animation>
				</control>
				<control type="label">
					<posx>2</posx>
					<posy>140</posy>
					<width>170</width>
					<height>22</height>
					<font>font-20</font>
					<textcolor>lightblue</textcolor>
					<selectedcolor>blue</selectedcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, (,)]</label>
				</control>
			</focusedlayout>
		</control>
		<control type="scrollbar" id="61">
			<posx>755</posx>
			<posy>88</posy>
			<width>20</width>
			<height>355</height>
			<texturesliderbackground border="0,10,0,10">scrollbar-back.png</texturesliderbackground>
			<texturesliderbar border="0,10,0,10">scrollbar-front-nofocus.png</texturesliderbar>
			<texturesliderbarfocus border="0,10,0,10">scrollbar-front.png</texturesliderbarfocus>
			<textureslidernib>scrollbar-nib-nofocus.png</textureslidernib>
			<textureslidernibfocus>scrollbar-nib.png</textureslidernibfocus>
			<orientation>vertical</orientation>
			<showonepage>false</showonepage>
			<visible>Control.IsVisible(11)</visible>
		</control>
		<include>CommonFileCount11</include>
		<control type="button" id="2">
			<description>Create Bookmark button</description>
			<posx>40</posx>
			<posy>455</posy>
			<width>235</width>
			<height>35</height>
			<label>294</label>
			<font>font-20</font>
			<textcolor>lightgrey</textcolor>
			<focusedcolor>white</focusedcolor>
			<align>center</align>
			<texturefocus border="7">button-nofocus.png</texturefocus>
			<texturenofocus border="7">button-nofocus.png</texturenofocus>
			<onleft>4</onleft>
			<onright>3</onright>
			<ondown>11</ondown>
			<onup>11</onup>
			<animation effect="slide" start="0,0" end="120,0" time="0" condition="!VideoPlayer.Content(Episodes)">conditional</animation>
		</control>
		<control type="button" id="3">
			<description>Clear Bookmark button</description>
			<posx>280</posx>
			<posy>455</posy>
			<width>235</width>
			<height>35</height>
			<label>296</label>
			<font>font-20</font>
			<textcolor>lightgrey</textcolor>
			<focusedcolor>white</focusedcolor>
			<align>center</align>
			<texturefocus border="7">button-nofocus.png</texturefocus>
			<texturenofocus border="7">button-nofocus.png</texturenofocus>
			<onleft>2</onleft>
			<onright>4</onright>
			<ondown>11</ondown>
			<onup>11</onup>
			<animation effect="slide" start="0,0" end="120,0" time="0" condition="!VideoPlayer.Content(Episodes)">conditional</animation>
		</control>
		<control type="button" id="4">
			<description>Set Episode Thumb button</description>
			<posx>520</posx>
			<posy>455</posy>
			<width>235</width>
			<height>35</height>
			<label>20406</label>
			<font>font-20</font>
			<textcolor>lightgrey</textcolor>
			<focusedcolor>white</focusedcolor>
			<align>center</align>
			<texturefocus border="7">button-nofocus.png</texturefocus>
			<texturenofocus border="7">button-nofocus.png</texturenofocus>
			<onleft>3</onleft>
			<onright>2</onright>
			<ondown>11</ondown>
			<onup>11</onup>
			<visible>VideoPlayer.Content(Episodes)</visible>
		</control>
		<control type="image">
			<posx>40</posx>
			<posy>455</posy>
			<width>235</width>
			<height>35</height>
			<texture border="7">button-focus.png</texture>
			<animation effect="slide" start="0,0" end="120,0" time="0" condition="!VideoPlayer.Content(Episodes)">conditional</animation>
			<animation effect="slide" start="0,0" end="240,0" time="100" condition="Control.HasFocus(3)">conditional</animation>
			<animation effect="slide" start="0,0" end="480,0" time="100" condition="Control.HasFocus(4)">conditional</animation>
			<animation effect="fade" start="70" end="100" time="750" pulse="true" condition="true">Conditional</animation>
			<visible>Control.HasFocus(2) | Control.HasFocus(3) | Control.HasFocus(4)</visible>
		</control>
	</controls>
</window>
