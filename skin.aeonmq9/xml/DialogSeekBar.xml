<?xml version="1.0" encoding="UTF-8"?>
<window><!-- Aeon MQ 9 -->
	<defaultcontrol>23</defaultcontrol>
		<visible>[Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation)] + ![Window.IsActive(videoosd) | Window.IsActive(musicosd) | Window.IsActive(fullscreeninfo) | Window.IsActive(osdvideosettings) | Window.IsActive(osdaudiosettings) | Window.IsActive(subtitlesearch) | Window.IsActive(playerprocessinfo)] + [Player.Seeking | !String.IsEmpty(Player.SeekNumeric) | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding]</visible>	
	<controls>
		<control type="group">
			<animation effect="slide" start="0,2800" end="0,0" time="550" easing="out" tween="sine">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,2800" time="400" easing="in" tween="sine">WindowClose</animation>
			<visible>Player.HasVideo + !Skin.HasSetting(video_osd_furniture_off) | Player.HasAudio + !Skin.HasSetting(music_vis_furniture_off)</visible>
			<include content="osd_seek_forward">	
				<param name="top" value="1926" />
			</include>
			<include content="osd_seek_rewind">	
				<param name="top" value="1916" />
			</include>
			<control type="image">
				<top>1958</top>
				<height>156</height>
				<texture colordiffuse="$INFO[skin.string(texture_base_color)]">dialog_seekbar_progress_back.png</texture>
				<include>animation_visible_change</include>
				<visible>!Player.Seeking</visible>
			</control>
			<control type="image">
				<top>1958</top>
				<height>156</height>
				<texture colordiffuse="$INFO[skin.string(texture_highlight_color)]">dialog_seekbar_progress_back.png</texture>
				<include>animation_visible_change</include>
				<visible>Player.Seeking</visible>
			</control>
			<control type="image">
				<top>2080</top>
				<height>80</height>
				<texture colordiffuse="$INFO[skin.string(texture_base_color)]">white80.png</texture>
			</control>
			<control type="image">
				<top>1958</top>
				<height>156</height>
				<texture colordiffuse="$INFO[skin.string(texture_base_color)]">dialog_seekbar_back.png</texture>
			</control>
			<control type="image">
				<top>1958</top>
				<height>156</height>
				<texture>dialog_seekbar_border.png</texture>
			</control>
			<control type="progress">
				<left>100</left>
				<top>2024</top>
				<width>1942</width>
				<height>36</height>
				<info>Player.ProgressCache</info>
				<midtexture>progress_mid.png</midtexture>
			</control>			
			<control type="progress" id="23">
				<left>100</left>
				<top>2024</top>
				<width>1942</width>
				<height>36</height>
				<info>Player.Progress</info>
			</control>			
			<control type="label">
				<left>100</left>
				<top>2080</top>
				<width>800</width>
				<height>80</height>
				<label>$VAR[osd_endsat]</label>
				<font>font_plot</font>	
			</control>
			<control type="label">
				<left>1118</left>
				<top>2080</top>
				<width>1600</width>
				<height>80</height>
				<align>center</align>
				<label>$VAR[osd_seek_info] $VAR[osd_seek_label]</label>
			</control>
			<control type="label">
				<left>2240</left>
				<top>1996</top>
				<width>1500</width>
				<height>80</height>
				<align>right</align>
				<label>$VAR[osd_time_duration]</label>
				<font>font_plot</font>
			</control>
			<control type="label">
				<left>2240</left>
				<top>2080</top>
				<width>1500</width>
				<height>80</height>
				<align>right</align>
				<label>$LOCALIZE[31392] [B]$INFO[Player.TimeRemaining][/B]</label>
				<font>font_plot</font>
				<visible>!String.IsEmpty(Player.TimeRemaining)</visible>
			</control>
		</control>		
		<include content="pause_label">	
			<param name="top" value="640" />
		</include>
	</controls>
</window>