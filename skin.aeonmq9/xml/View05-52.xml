	<include name="view_52_content">
		<definition>
			<control type="panel" id="52">
				<viewtype label="-05">Banner</viewtype>
				<left>150</left>
				<top>706</top>
				<width>3750</width>
				<height>$PARAM[height]</height>
				<onleft condition="String.IsEqual(skin.string(view_52_panel),manual) + !String.IsEqual(ListItem.Label,..)">5230</onleft>
				<onleft condition="![String.IsEqual(skin.string(view_52_panel),manual) + !String.IsEqual(ListItem.Label,..)]">9900</onleft>
				<onright>520</onright>
				<pagecontrol>520</pagecontrol>
				<animation effect="slide" start="0,0" end="-30,0" time="400" tween="cubic" easing="inout" condition="Control.HasFocus(520)">Conditional</animation>
				<animation effect="slide" start="0,0" end="0,200" time="400" tween="cubic" easing="inout" condition="Skin.HasSetting(view_52_videos_grid_small)">Conditional</animation>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows)</visible>
				<itemlayout condition="Skin.HasSetting(view_52_videos_grid_small)" height="268" width="1234">
					<control type="group">
						<animation effect="fade" start="100" end="30" time="400" condition="System.IdleTime(2) + !Skin.HasSetting(view_52_fade_off)">Conditional</animation>
						<control type="image">
							<width>1072</width>
							<height>236</height>
							<aspectratio>stretch</aspectratio>
							<texture colordiffuse="$INFO[skin.string(texture_base_color)]">view_52_banner_box50.png</texture>						
							<include>animation_fade</include>
						</control>
						<control type="image">
							<width>1072</width>
							<height>236</height>						
							<aspectratio>keep</aspectratio>
							<texture>$INFO[ListItem.Icon]</texture>
							<bordersize>10</bordersize>		
							<visible>ListItem.IsParentFolder</visible>									
						</control>
						<control type="image">
							<width>1072</width>
							<height>236</height>						
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(banner)]</texture>
							<bordersize>10</bordersize>						
						</control>
						<include content="media_overlays">
							<param name="item" value="0" />
							<param name="left" value="994" />
							<param name="top" value="12" />
							<param name="size" value="70" />
							<param name="visible" value="true" />
						</include>
					</control>
				</itemlayout>
				<itemlayout condition="!Skin.HasSetting(view_52_videos_grid_small)" height="412" width="1791">
					<control type="group">
						<animation effect="fade" start="100" end="30" time="400" condition="System.IdleTime(2) + !Skin.HasSetting(view_52_fade_off)">Conditional</animation>
						<control type="image">
							<width>1750</width>
							<height>380</height>
							<aspectratio>stretch</aspectratio>
							<texture colordiffuse="$INFO[skin.string(texture_base_color)]">view_52_banner_box50.png</texture>							
							<include>animation_fade</include>
						</control>
						<control type="image">
							<width>1750</width>
							<height>380</height>							
							<aspectratio>keep</aspectratio>
							<texture>$INFO[ListItem.Icon]</texture>
							<bordersize>16</bordersize>		
							<visible>ListItem.IsParentFolder</visible>									
						</control>
						<control type="image">
							<width>1750</width>
							<height>380</height>							
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(banner)]</texture>
							<bordersize>16</bordersize>							
						</control>
						<include content="media_overlays">
							<param name="item" value="0" />
							<param name="left" value="1640" />
							<param name="top" value="18" />
							<param name="size" value="100" />
							<param name="visible" value="true" />
						</include>
					</control>
				</itemlayout>
				<focusedlayout condition="Skin.HasSetting(view_52_videos_grid_small)" height="268" width="1234">
					<control type="group">
						<animation effect="zoom" center="auto" start="80" end="100" time="600" tween="back" easing="out" reversible="false">Focus</animation>
						<control type="image">
							<width>1072</width>
							<height>236</height>
							<aspectratio>stretch</aspectratio>	
							<texture colordiffuse="$INFO[skin.string(texture_highlight_color)]">view_52_banner_box50.png</texture>														
						</control>
						<control type="image">
							<width>1072</width>
							<height>236</height>						
							<aspectratio>keep</aspectratio>
							<texture>$INFO[ListItem.Icon]</texture>
							<bordersize>10</bordersize>		
							<visible>ListItem.IsParentFolder</visible>									
						</control>
						<control type="image">
							<width>1072</width>
							<height>236</height>						
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(banner)]</texture>
							<bordersize>10</bordersize>
						</control>
						<include content="media_overlays">
							<param name="item" value="0" />
							<param name="left" value="994" />
							<param name="top" value="12" />
							<param name="size" value="70" />
							<param name="visible" value="true" />
						</include>
					</control>
				</focusedlayout>
				<focusedlayout condition="!Skin.HasSetting(view_52_videos_grid_small)" height="412" width="1791">
					<control type="group">
						<animation effect="zoom" center="auto" start="80" end="100" time="600" tween="back" easing="out" reversible="false">Focus</animation>
						<control type="image">
							<width>1750</width>
							<height>380</height>
							<aspectratio>stretch</aspectratio>
							<texture colordiffuse="$INFO[skin.string(texture_highlight_color)]">view_52_banner_box50.png</texture>							
						</control>
						<control type="image">
							<width>1750</width>
							<height>380</height>							
							<aspectratio>keep</aspectratio>
							<texture>$INFO[ListItem.Icon]</texture>
							<bordersize>16</bordersize>	
							<visible>ListItem.IsParentFolder</visible>								
						</control>
						<control type="image">
							<width>1750</width>
							<height>380</height>							
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(banner)]</texture>	
							<bordersize>16</bordersize>							
						</control>
						<include content="media_overlays">
							<param name="item" value="0" />
							<param name="left" value="1640" />
							<param name="top" value="18" />
							<param name="size" value="100" />
							<param name="visible" value="true" />
						</include>
					</control>
				</focusedlayout>
			</control>
			<control type="image" id="5220">
				<include>invisible_image</include>
				<animation effect="fade" start="0" end="100" time="150" delay="2000">Visible</animation>
				<visible>![Container.OnNext | Container.OnPrevious]</visible>
			</control>
			<control type="button" id="5230">
				<include>invisible_button</include>
				<onleft>9900</onleft>
				<onright>52</onright>
				<onup>52</onup>
				<ondown>52</ondown>
			</control>
			<control type="group">
				<animation effect="slide" start="0,0" end="1980,0" time="0" condition="Container(52).Column(0)">Conditional</animation>
				<animation effect="slide" start="0,0" end="180,0" time="0" condition="Container(52).Column(1)">Conditional</animation>
				<animation effect="slide" start="0,0" end="0,668" time="0" condition="Container(52).Row(0)">Conditional</animation>
				<animation effect="slide" start="0,0" end="0,1084" time="0" condition="Container(52).Row(1)">Conditional</animation>
				<animation effect="slide" start="0,0" end="0,1496" time="0" condition="Container(52).Row(2)">Conditional</animation>
				<animation effect="fade" end="100" time="400">Visible</animation>
				<visible>Control.HasFocus(52) + System.IdleTime(2) + ![String.IsEqual(ListItem.Label,..) | Skin.HasSetting(view_52_plot_off) | Skin.HasSetting(view_52_videos_grid_small)]</visible>
				<control type="image">
					<left>-30</left>
					<top>37</top>
					<width>1770</width>
					<height>380</height>					
					<aspectratio>stretch</aspectratio>
					<texture colordiffuse="$INFO[skin.string(texture_base_color)]">view_52_banner_box.png</texture>							
					<include>animation_fade</include>
				</control>
				<include content="media_info_plot">
					<param name="left" value="10" />
					<param name="top" value="75" />
					<param name="width" value="1690" />
					<param name="height" value="290" />
					<param name="label" value="$VAR[media_plot]" />							
					<param name="visible" value="true" />
				</include>
			</control>
			<include content="scroll_bar_vertical">
				<param name="id" value="520" />
				<param name="left" value="3720" />
				<param name="top" value="695" />
				<param name="height" value="1235" />
				<param name="onleft" value="52" />
				<param name="onright" value="9920" />
				<param name="hiddenfocus" value="true" />
				<param name="visible" value="Control.IsVisible(52) + Control.HasFocus(520)" />
			</include>				
		</definition>
	</include>
</includes>
