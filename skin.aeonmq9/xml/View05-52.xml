<?xml version="1.0" encoding="UTF-8"?>
<includes><!-- Aeon MQ 9 -->
	<include name="view_52">
		<control type="group">
			<animation effect="fade" time="400">VisibleChange</animation>
			<visible>Control.IsVisible(52)</visible>
			<include content="media_info_title">
