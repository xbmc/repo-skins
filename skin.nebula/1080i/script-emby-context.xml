<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">155</defaultcontrol>
    <animation effect="slide" time="0" start="0,0" end="0,3510">WindowOpen</animation>
    <animation effect="slide" time="0" start="0,0" end="0,3510">WindowClose</animation>
    <controls>
        <control type="group">
            <animation effect="slide" time="0" start="0,-3510" end="0,-3510" condition="Integer.IsGreater(Container(155).NumItems,0)">conditional</animation>
            <control type="group">
                <include name="OpenClose">
                    <animation type="WindowOpen" reversible="false">
                        <effect type="fade" start="0" end="100" time="150" delay="0"/>
                    </animation>
                    <animation type="WindowClose" reversible="false">
                        <effect type="fade" start="100" end="0" time="150" delay="0"/>
                    </animation>
                </include>
                <control type="multiimage">
                    <visible>!Skin.HasSetting(DisableFanart)</visible>
                    <include>KenBurns</include>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1920</width>
                    <height>1080</height>
                    <timeperimage>9000</timeperimage>
                    <randomize>true</randomize>
                    <fadetime>400</fadetime>
                    <aspectratio aligny="top">scale</aspectratio>
                    <imagepath background="true">$VAR[Fanart.Art]</imagepath>
                </control>
                <include>Player_Show</include>
                <control type="image">
                    <include>OverlayTransparency</include>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1920</width>
                    <height>1080</height>
                    <colordiffuse>$VAR[Picked.Theme.Color]</colordiffuse>
                    <texture>special://skin/backgrounds/default/$VAR[Theme.Color].png</texture>
                </control>
            </control>
            <control type="group">
                <include>DialogOpenClose</include>
                <control type="group">
