<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">5000</defaultcontrol>
    <include>DialogOpenClose</include>
    <controls>
        <include>OverlayFull</include>
        <control type="label">
            <visible>!Container(5000).OnScrollPrevious + !Container(5000).OnScrollNext</visible>
            <include>Icon_Fade</include>
            <posx>0</posx>
            <posy>0</posy>
            <height>1080</height>
            <width>1920</width>
            <align>center</align>
            <font>FacadeListMainFont</font>
            <include>TextColor_MainColor</include>
            <label>$LOCALIZE[13413]...</label>
        </control>
        <control type="list" id="5000">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <onleft>5000</onleft>
            <onright>5000</onright>
            <orientation>Horizontal</orientation>
            <itemlayout height="1080" width="1920">
                <control type="image">
                    <left>-35</left>
                    <top>-35</top>
                    <width>1990</width>
                    <height>1150</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[ListItem.Property(Original)]</texture>
                    <include>ThumbBorder</include>
                </control>
            </itemlayout>
            <focusedlayout height="1080" width="1920">
                <control type="image">
                    <left>-35</left>
                    <top>-35</top>
                    <width>1990</width>
                    <height>1150</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[ListItem.Property(Original)]</texture>
                    <include>ThumbBorder</include>
                </control>
            </focusedlayout>
        </control>
        <control type="button">
            <posx>1720</posx>
            <posy>200</posy>
            <width>200</width>
            <height>800</height>
            <texturefocus>-</texturefocus>
            <texturenofocus>-</texturenofocus>
            <onclick>Control.Move(5000,1)</onclick>
            <!--<onfocus>Control.Move(5050,1)</onfocus>-->
        </control>
        <control type="button">
            <posx>0</posx>
            <posy>200</posy>
            <width>200</width>
            <height>800</height>
            <texturefocus>-</texturefocus>
            <texturenofocus>-</texturenofocus>
            <onclick>Control.Move(5000,-1)</onclick>
            <!--<onfocus>Control.Move(5050,-1)</onfocus>-->
        </control>
        <include>TopBar</include>
    </controls>
</window>
