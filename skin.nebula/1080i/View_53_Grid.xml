<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_53_Grid">
        <control type="group">
            <visible>Control.IsVisible(53)</visible>
            <include>Icon_Fade</include>
            <control type="image">
                <posx>-35</posx>
                <posy>-35</posy>
                <width>1990</width>
                <height>1150</height>
                <texture border="35">$VAR[Theme.Color]/common/JewelCase2.png</texture>
            </control>
            <control type="panel" id="53">
                <viewtype label="536">Grid</viewtype>
                <posx>0</posx>
                <posy>0</posy>
                <width>1940</width>
                <height>1080</height>
                <orientation>vertical</orientation>
                <onleft>9000</onleft>
                <onright>60</onright>
                <onup>53</onup>
                <ondown>53</ondown>
                <preloaditems>4</preloaditems>
                <pagecontrol>60</pagecontrol>
                <itemlayout condition="[Container.Content(TVShows)|Container.Content(movies)] + Skin.HasSetting(53_UseBanners)" height="180" width="960">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>960</width>
                        <height>180</height>
                        <texture background="true">$VAR[Banner]</texture>
                        <aspectratio>scale</aspectratio>
                    </control>
                </itemlayout>
                <focusedlayout condition="[Container.Content(TVShows)|Container.Content(movies)] + Skin.HasSetting(53_UseBanners)" height="180" width="960">
                    <control type="image">
                        <include>ButtonFocusAnimation</include>
                        <posx>-35</posx>
                        <posy>-35</posy>
                        <width>1030</width>
                        <height>250</height>
                        <texture background="true">$VAR[Banner]</texture>
                        <aspectratio>scale</aspectratio>
                        <include>ThumbBorderOverlay</include>
                    </control>
                </focusedlayout>
                <itemlayout condition="!Skin.HasSetting(53_BigGrid) + !Skin.HasSetting(53_UseBanners) + [Container.content(actors) | Container.Content(musicvideos) | container.content(movies) | container.content(TVshows) | container.content(seasons)]" height="180" width="128">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>128</width>
                        <height>180</height>
                        <!-- <aspectratio>scale</aspectratio> -->
                        <include>PosterThumb</include>
                    </control>
                </itemlayout>
                <focusedlayout condition="!Skin.HasSetting(53_BigGrid) + !Skin.HasSetting(53_UseBanners) + [Container.content(actors) | Container.Content(musicvideos) | container.content(movies) | container.content(TVshows) | container.content(seasons)]" height="180" width="128">
                    <control type="image">
                        <include>ButtonFocusAnimation</include>
                        <posx>-35</posx>
                        <posy>-35</posy>
                        <width>198</width>
                        <height>250</height>
                        <include>PosterThumb</include>
                        <aspectratio>scale</aspectratio>
                        <include>ThumbBorderOverlay</include>
                    </control>
                </focusedlayout>
                <itemlayout condition="Skin.HasSetting(53_BigGrid) + !Skin.HasSetting(53_UseBanners) + [Container.content(actors) | Container.Content(musicvideos) | container.content(movies) | container.content(TVshows) | container.content(seasons)]" height="270" width="192">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>192</width>
                        <height>270</height>
                        <!-- <aspectratio>scale</aspectratio> -->
                        <include>PosterThumb</include>
                    </control>
                </itemlayout>
                <focusedlayout condition="Skin.HasSetting(53_BigGrid) + !Skin.HasSetting(53_UseBanners) + [Container.content(actors) | Container.Content(musicvideos) | container.content(movies) | container.content(TVshows) | container.content(seasons)]" height="270" width="192">
                    <control type="image">
                        <include>ButtonFocusAnimation</include>
                        <posx>-35</posx>
                        <posy>-35</posy>
                        <width>262</width>
                        <height>340</height>
                        <include>PosterThumb</include>
                        <!-- <aspectratio>scale</aspectratio> -->
                        <include>ThumbBorderOverlay</include>
                    </control>
                </focusedlayout>
                <itemlayout height="270" width="480" condition="container.content(episodes)">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>480</width>
                        <height>270</height>
                        <aspectratio>scale</aspectratio>
                        <include>EpisodeThumb</include>
                    </control>
                </itemlayout>
                <focusedlayout height="270" width="480" condition="container.content(episodes)">
                    <control type="image">
                        <include>ButtonFocusAnimation</include>
                        <posx>-35</posx>
                        <posy>-35</posy>
                        <width>550</width>
                        <height>340</height>
                        <aspectratio>scale</aspectratio>
                        <include>EpisodeThumb</include>
                        <include>ThumbBorderOverlay</include>
                    </control>
                </focusedlayout>
                <itemlayout condition="!Skin.HasSetting(53_BigGrid) + ![container.content(episodes) | Container.Content(musicvideos) | container.content(movies) | container.content(TVshows) | container.content(seasons)]" height="180" width="175">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>175</width>
                        <height>180</height>
                        <aspectratio>scale</aspectratio>
                        <include>SquareThumb</include>
                    </control>
                </itemlayout>
                <focusedlayout condition="!Skin.HasSetting(53_BigGrid) + ![container.content(episodes) | Container.Content(musicvideos) | container.content(movies) | container.content(TVshows) | container.content(seasons)]" height="180" width="175">
                    <control type="image">
                        <include>ButtonFocusAnimation</include>
                        <posx>-35</posx>
                        <posy>-35</posy>
                        <width>245</width>
                        <height>250</height>
                        <aspectratio>scale</aspectratio>
                        <include>SquareThumb</include>
                        <include>ThumbBorderOverlay</include>
                    </control>
                </focusedlayout>
                <itemlayout condition="Skin.HasSetting(53_BigGrid) + ![container.content(episodes) | Container.Content(musicvideos) | container.content(movies) | container.content(TVshows) | container.content(seasons)]" height="270" width="275">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>275</width>
                        <height>270</height>
                        <aspectratio>scale</aspectratio>
                        <include>SquareThumb</include>
                    </control>
                </itemlayout>
                <focusedlayout condition="Skin.HasSetting(53_BigGrid) + ![container.content(episodes) | Container.Content(musicvideos) | container.content(movies) | container.content(TVshows) | container.content(seasons)]" height="270" width="275">
                    <control type="image">
                        <include>ButtonFocusAnimation</include>
                        <posx>-35</posx>
                        <posy>-35</posy>
                        <width>345</width>
                        <height>340</height>
                        <aspectratio>scale</aspectratio>
                        <include>SquareThumb</include>
                        <include>ThumbBorderOverlay</include>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="60">
                <posx>1886</posx>
                <posy>0</posy>
                <height>1080</height>
                <include>VerticalScroller</include>
                <onleft>53</onleft>
                <onright>505050</onright>
            </control>
        </control>
    </include>
</includes>
