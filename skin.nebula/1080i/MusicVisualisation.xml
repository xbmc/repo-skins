<?xml version="1.0" encoding="utf-8"?>
<window>
    <onload condition="Skin.HasSetting(Use_Artist_Slideshow) + system.hasaddon(script.artistslideshow)">RunScript(script.artistslideshow)</onload>
    <controls>
        <control type="group">
            <include condition="!Skin.HasSetting(DisableFanart)">Fanart_Art</include>
            <include>Player_Show</include>
            <include>OverlayFull</include>
            <control type="progress" id="23">
                <visible>true</visible>
                <posx>-2000</posx>
                <posy>-1500</posy>
                <width>747</width>
                <info>Player.Progress</info>
                <visible>true</visible>
            </control>
            <include>TopBar</include>
            <control type="group">
                <visible>[Player.Paused |Player.ShowInfo | Window.IsActive(MusicOSD) | !Visualisation.Enabled | Window.IsVisible(script-XBMC_Lyrics-main.xml)] + ![Window.IsVisible(AddonSettings) | Window.IsVisible(SelectDialog) | Window.IsVisible(VisualisationPresetList)]</visible>
                <include>MusicOSDFade</include>
                <posy>-56</posy>
                <control type="group">
                    <!-- CLEAR ART -->
                    <visible>Skin.HasSetting(EnableClearArt)</visible>
                    <control type="image">
                        <posx>1560</posx>
                        <posy>407</posy>
                        <width>300</width>
                        <height>235</height>
                        <aspectratio align="right" aligny="bottom">keep</aspectratio>
                        <texture background="true">$INFO[Skin.String(cdartPath)]$INFO[MusicPlayer.Artist,,/logo.png]</texture>
                    </control>
                    <control type="image">
                        <posx>1560</posx>
                        <posy>407</posy>
                        <width>300</width>
                        <height>235</height>
                        <texture background="true">$INFO[MusicPlayer.Art(clearart)]</texture>
                        <aspectratio align="right" aligny="bottom">keep</aspectratio>
                    </control>
                </control>
                <control type="image">
                    <posx>-200</posx>
                    <posy>609</posy>
                    <width>2320</width>
                    <height>471</height>
                    <colordiffuse>ddffffff</colordiffuse>
                    <texture border="150,40,150,40">$VAR[Theme.Color]/common/bg_dialog.png</texture>
                </control>
                <control type="group">
                    <posy>642</posy>
                    <control type="group">
                        <!-- CDART -->
                        <visible>!Skin.HasSetting(plexbmc)</visible>
                        <visible>Skin.HasSetting(EnableCdArt)+!IsEmpty(MusicPlayer.Cover)</visible>
                        <control type="image">
                            <posx>70</posx>
                            <posy>-122</posy>
                            <width>315</width>
                            <height>315</height>
                            <texture background="true" diffuse="white/common/cdart_diffuse.png">$INFO[Player.FolderPath]cdart.png</texture>
                            <aspectratio align="center" aligny="center">keep</aspectratio>
                            <include>Animation_ViewsCDart</include>
                        </control>
                    </control>
                    <control type="image">
                        <include>ConditionWhite</include>
                        <posx>25</posx>
                        <posy>0</posy>
                        <width>405</width>
                        <height>405</height>
                        <texture background="true" fallback="white/defaultVideoBig.png">$INFO[MusicPlayer.Cover]</texture>
                        <include>ThumbBorder</include>
                        <aspectratio aligny="top">keep</aspectratio>
                    </control>
                    <control type="image">
                        <include>ConditionBlack</include>
                        <posx>25</posx>
                        <posy>0</posy>
                        <width>405</width>
                        <height>405</height>
                        <texture background="true" fallback="black/defaultVideoBig.png">$INFO[MusicPlayer.Cover]</texture>
                        <include>ThumbBorder</include>
                        <aspectratio aligny="top">keep</aspectratio>
                    </control>
                    <control type="label">
                        <posx>455</posx>
                        <posy>25</posy>
                        <width>1405</width>
                        <aligny>top</aligny>
                        <font>InfoTitleFont</font>
                        <include>TextColor_MainColor</include>
                        <label>$INFO[MusicPlayer.Title]</label>
                    </control>
                    <control type="image">
                        <description>Default Seperator</description>
                        <posx>355</posx>
                        <posy>96</posy>
                        <width>1575</width>
                        <height>1</height>
                        <texture border="150,0,150,0">$VAR[Theme.Color]/list/bg_facade_separator.png</texture>
                    </control>
                    <control type="group">
                        <posx>395</posx>
                        <posy>35</posy>
                        <control type="label">
                            <posx>TextMargin</posx>
                            <posy>65</posy>
                            <width>1405</width>
                            <height>71</height>
                            <font>InfoDetailsFont</font>
                            <include>TextColor_MainColor</include>
                            <scroll>false</scroll>
                            <label>$INFO[MusicPlayer.Artist]</label>
                        </control>
                        <control type="label">
                            <posx>TextMargin</posx>
                            <posy>135</posy>
                            <width>672</width>
                            <height>71</height>
                            <font>InfoDetailsFont</font>
                            <include>TextColor_MainColor</include>
                            <scroll>false</scroll>
                            <label>$INFO[MusicPlayer.Album]</label>
                        </control>
                        <control type="label">
                            <posx>TextMargin</posx>
                            <posy>205</posy>
                            <width>672</width>
                            <height>71</height>
                            <font>InfoDetailsFont</font>
                            <include>TextColor_MainColor</include>
                            <scroll>false</scroll>
                            <label>$INFO[MusicPlayer.TimeSpeed,, / ]$INFO[MusicPlayer.Duration]</label>
                        </control>
                        <control type="label">
                            <visible>!Skin.HasSetting(plexbmc)</visible>
                            <posx>772</posx>
                            <posy>135</posy>
                            <width>672</width>
                            <height>71</height>
                            <font>InfoDetailsFont</font>
                            <include>TextColor_MainColor</include>
                            <scroll>false</scroll>
                            <label>$INFO[MusicPlayer.PlaylistPosition,, / ]$INFO[MusicPlayer.PlaylistLength]</label>
                        </control>
                        <control type="label">
                            <visible>!Skin.HasSetting(plexbmc)</visible>
                            <posx>772</posx>
                            <posy>205</posy>
                            <width>672</width>
                            <height>71</height>
                            <font>InfoDetailsFont</font>
                            <include>TextColor_MainColor</include>
                            <scroll>false</scroll>
                            <label>$INFO[MusicPlayer.offset(1).Title,$LOCALIZE[209]: ]</label>
                        </control>
                        <control type="grouplist">
                            <posx>40</posx>
                            <posy>285</posy>
                            <width>1006</width>
                            <height>408</height>
                            <itemgap>20</itemgap>
                            <orientation>horizontal</orientation>
                            <align>left</align>
                            <aligny>center</aligny>
                            <include>CodecsMusicOSD</include>
                        </control>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>
