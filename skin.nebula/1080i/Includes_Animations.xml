    <include name="NowPlayingVisibleFadeEffect">
        <animation type="Visible" reversible="false">
            <effect type="fade" start="0" end="100" time="300" delay="0" tween="circle" easing="inout"/>
            <effect type="zoom" start="110" end="100" time="300" delay="0" center="960,59" tween="circle" easing="inout"/>
