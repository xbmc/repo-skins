    <include name="PulseThumb">
        <animation type="Conditional" pulse="true" reversible="false" condition="Skin.HasSetting(EnableCdArt)
                                +!IsEmpty(ListItem.Art(discart))
                                +!Skin.HasSetting(plexbmc)">
            <include>PulseBasicVisible</include>
        </animation>
        <animation type="Conditional" pulse="true" reversible="false" condition="Skin.HasSetting(EnableCdArt)
                                +!IsEmpty(ListItem.Thumb)
                                +[[Container.content(songs)+Window.IsActive(MyMusicNav.xml)]|Window.IsActive(MyMusicSongs.xml)]
                                +!Skin.HasSetting(plexbmc)">
