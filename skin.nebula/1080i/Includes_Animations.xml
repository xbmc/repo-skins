            <effect type="slide" start="50,0" end="0,0" time="150" delay="150" tween="cubic" easing="out"/>
        </animation>
    </include>
    <include name="UnderFade">
        <animation effect="fade" start="0" end="100" time="200" tween="cubic" easing="in">WindowOpen</animation>
