            <effect type="zoom" start="110" end="100" time="300" delay="0" center="960,59" tween="circle" easing="inout"/>
        </animation>
        <animation type="Conditional" reversible="false" condition="![ControlGroup(9900).HasFocus()|Control.HasFocus(8998)|Control.HasFocus(8997)]">
            <effect type="fade" start="100" end="0" time="300" delay="0" tween="circle" easing="inout"/>
            <effect type="zoom" start="100" end="110" time="300" delay="0" center="960,59" tween="circle" easing="inout"/>
        </animation>
    </include>
