<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="false">101</defaultcontrol>
    <zorder>4</zorder>
    <controls>
        <!-- <include>DimBG</include> -->
        <control type="group">
            <include>DialogOpenClose</include>
            <control type="image">
                <posx>-200</posx>
                <posy>0</posy>
                <width>2320</width>
                <height>183</height>
                <texture border="150,40,150,40">$VAR[Theme.Color]/common/bg_dialog.png</texture>
            </control>
            <control type="label">
                <visible>Control.IsVisible(110)</visible>
                <posx>0</posx>
                <posy>33</posy>
                <height>117</height>
                <width>1920</width>
                <font>InfoTitleFont</font>
                <label>$ADDON[script.cu.lrclyrics 32199]</label>
                <align>center</align>
                <aligny>center</aligny>
                <include>TextColor_MainColor</include>
            </control>
            <control type="label" id="2">
                <visible>Control.IsVisible(120) + !Control.IsVisible(110)</visible>
                <description>Pick label</description>
                <posx>0</posx>
                <posy>33</posy>
                <height>117</height>
                <width>1920</width>
                <font>InfoTitleFont</font>
                <align>center</align>
                <aligny>center</aligny>
                <label>$LOCALIZE[134]</label>
                <include>TextColor_MainColor</include>
            </control>
            <!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
            <control type="list" id="110">
                <posx>0</posx>
                <posy>195</posy>
                <width>1920</width>
                <height>350</height>
                <onleft>110</onleft>
                <onright>110</onright>
                <onup>9900</onup>
                <ondown>110</ondown>
                <itemlayout height="50">
                    <control type="label">
                        <posx>960</posx>
                        <posy>0</posy>
                        <width>1800</width>
                        <height>50</height>
                        <aligny>center</aligny>
                        <align>center</align>
                        <font>InfoDetailsFont</font>
                        <include>TextColor_AlternateColor</include>
                        <label>[B]$INFO[ListItem.Label][/B]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="50">
                    <control type="group">
                        <animation type="Focus" reversible="false">
                            <effect type="zoom" start="100" end="108" time="100" center="960,25"/>
                            <effect type="zoom" start="100" end="92.592592592593" time="50" delay="100" center="960,25"/>
                            <effect type="fade" start="10" end="100" time="100"/>
                        </animation>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <height>50</height>
                            <width>1920</width>
                            <texture border="1">$VAR[Theme.Color]/list/bg_facade_focus.png</texture>
                        </control>
                        <control type="label">
                            <posx>960</posx>
                            <posy>0</posy>
                            <width>1800</width>
                            <height>50</height>
                            <aligny>center</aligny>
                            <align>center</align>
                            <font>InfoDetailsFont</font>
                            <include>TextColor_MainColor</include>
                            <label fallback="- -">[B]$INFO[ListItem.Label][/B]</label>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <!-- ** Required ** Do not change <id> or <type> (Song Chooser if it gets it wrong) -->
            <control type="list" id="120">
                <posx>0</posx>
                <posy>195</posy>
                <width>1920</width>
                <height>350</height>
                <onleft>120</onleft>
                <onright>120</onright>
                <onup>9900</onup>
                <ondown>120</ondown>
                <pagecontrol>121</pagecontrol>
                <itemlayout height="50">
                    <control type="label">
                        <posx>960</posx>
                        <posy>0</posy>
                        <width>1800</width>
                        <height>50</height>
                        <aligny>center</aligny>
                        <align>center</align>
                        <font>InfoDetailsFont</font>
                        <include>TextColor_AlternateColor</include>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="50">
                    <control type="group">
                        <animation type="Focus" reversible="false">
                            <effect type="zoom" start="100" end="108" time="100" center="960,25"/>
                            <effect type="zoom" start="100" end="92.592592592593" time="50" delay="100" center="960,25"/>
                            <effect type="fade" start="10" end="100" time="100"/>
                        </animation>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <height>50</height>
                            <width>1920</width>
                            <texture border="1">$VAR[Theme.Color]/list/bg_facade_focus.png</texture>
                        </control>
                        <control type="label">
                            <posx>960</posx>
                            <posy>0</posy>
                            <width>1800</width>
                            <height>50</height>
                            <aligny>center</aligny>
                            <align>center</align>
                            <font>InfoDetailsFont</font>
                            <include>TextColor_MainColor</include>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <control type="spincontrol" id="111">
                <visible>false</visible>
                <description>Next page button</description>
                <posx>520</posx>
                <posy>650</posy>
                <subtype>page</subtype>
                <onleft>110</onleft>
                <onright>110</onright>
                <ondown>110</ondown>
                <onup>110</onup>
                <include>TextColor_AlternateColor</include>
                <showonepage>true</showonepage>
                <visible>Control.IsVisible(110)</visible>
            </control>
            <control type="spincontrol" id="121">
                <visible>false</visible>
                <description>Next page button</description>
                <posx>520</posx>
                <posy>650</posy>
                <subtype>page</subtype>
                <onleft>120</onleft>
                <onright>120</onright>
                <ondown>120</ondown>
                <onup>120</onup>
                <include>TextColor_AlternateColor</include>
                <showonepage>true</showonepage>
                <visible>Control.IsVisible(120)</visible>
            </control>
            <control type="label" id="200">
                <description>Scraper label</description>
                <visible>false</visible>
            </control>
        </control>
        <include>TopBar</include>
    </controls>
</window>
