<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <visible>![Skin.HasSetting(DisableOSDInfoOnPause)+Player.Paused]|Window.IsVisible(VideoOSD.xml)|Window.IsVisible(MusicOSD.xml)</visible>
    <visible>![Window.IsVisible(DialogSelect.xml) | Window.IsVisible(SliderDialog) | Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings) | Window.IsVisible(VideoBookmarks) | Window.IsVisible(DialogSubtitles.xml) | Window.IsVisible(DialogAddonSettings.xml)| Window.IsVisible(PVROSDChannels) | Window.IsVisible(PVROSDGuide)]</visible>
    <visible>Window.IsVisible(DialogFullscreenInfo.xml) | Window.IsVisible(MusicOSD.xml) | Window.IsVisible(VideoOSD.xml) | [[Window.IsVisible(FullScreenVideo)|Window.IsVisible(visualisation)] + [Player.Caching | Player.Seeking | player.forwarding | player.rewinding | Player.DisplayAfterSeek | Player.Paused]]</visible>
    <visible>!window.IsVisible(DialogVolumeBar.xml)</visible>
    <include>TopBarOSDVisibleFadeEffect</include>
    <zorder>2</zorder>
    <controls>
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>183</height>
            <colordiffuse>$VAR[Picked.Theme.Color]</colordiffuse>
            <texture flipy="true" border="1">$VAR[Theme.Color]/common/HomeGradient.png</texture>
        </control>

        <include name="ProgressBar">
            <param name="id" value="0"/>
            <param name="visible" value="Player.Caching"/>
            <param name="x" value="0"/>
            <param name="y" value="0"/>
            <param name="width" value="1920"/>
            <param name="height" value="14"/>
            <param name="texturebg" value="OSD/osd_progress_background_dummy.png"/>
            <param name="gfx" value="OSD/osd_progress_mid_caching.png"/>
            <param name="border" value="1,1,5,1"/>
            <param name="borderbg" value="1,1,1,1"/>
            <param name="info" value="Player.CacheLevel"/>
        </include>
        <include name="ProgressBar">
            <param name="id" value="0"/>
            <param name="visible" value="true"/>
            <param name="x" value="0"/>
            <param name="y" value="0"/>
            <param name="width" value="1920"/>
            <param name="height" value="14"/>
            <param name="texturebg" value="OSD/osd_progress_background_dummy.png"/>
            <param name="gfx" value="OSD/osd_progress_mid_caching.png"/>
            <param name="border" value="1,1,5,1"/>
            <param name="borderbg" value="1,1,1,1"/>
            <param name="info" value="Player.ProgressCache"/>
        </include>
        <include name="ProgressBar">
            <param name="id" value="23"/>
            <param name="visible" value="true"/>
            <param name="x" value="0"/>
            <param name="y" value="0"/>
            <param name="width" value="1920"/>
            <param name="height" value="14"/>
            <param name="texturebg" value="OSD/osd_progress_background.png"/>
            <param name="gfx" value="OSD/osd_progress_mid.png"/>
            <param name="border" value="1,1,5,1"/>
            <param name="borderbg" value="1,1,1,1"/>
            <param name="info" value="Player.Progress"/>
        </include>
        <include name="ProgressBar">
            <param name="id" value="0"/>
            <param name="visible" value="PVR.IsTimeshift"/>
            <param name="x" value="0"/>
            <param name="y" value="0"/>
            <param name="width" value="1920"/>
            <param name="height" value="14"/>
            <param name="texturebg" value="OSD/osd_progress_background_dummy.png"/>
            <param name="gfx" value="OSD/osd_progress_timeshift.png"/>
            <param name="border" value="1,1,5,1"/>
            <param name="borderbg" value="1,1,1,1"/>
            <param name="info" value="PVR.TimeshiftProgress"/>
        </include>

        <control type="slider" id="401">
            <description>Seek Slider</description>
            <visible>Player.Seeking</visible>
            <include>ConditionWhite</include>
            <animation effect="fade" start="0" end="100" time="150">Visible</animation>
            <animation effect="fade" start="100" end="0" time="150">Hidden</animation>
            <posx>0</posx>
            <posy>13</posy>
            <width>1920</width>
            <height>33</height>
            <texturesliderbar>white/OSD/osd_progress_empty.png</texturesliderbar>
            <textureslidernib>white/buttons/SliderNibFO.png</textureslidernib>
            <textureslidernibfocus>white/buttons/SliderNibFO.png</textureslidernibfocus>
        </control>
        <control type="slider" id="401">
            <description>Seek Slider</description>
            <visible>Player.Seeking</visible>
            <include>ConditionBlack</include>
            <animation effect="fade" start="0" end="100" time="150">Visible</animation>
            <animation effect="fade" start="100" end="0" time="150">Hidden</animation>
            <posx>0</posx>
            <posy>13</posy>
            <width>1920</width>
            <height>33</height>
            <texturesliderbar>black/OSD/osd_progress_empty.png</texturesliderbar>
            <textureslidernib>black/buttons/SliderNibFO.png</textureslidernib>
            <textureslidernibfocus>black/buttons/SliderNibFO.png</textureslidernibfocus>
        </control>
        <control type="image">
            <posx>-200</posx>
            <posy>0</posy>
            <width>2320</width>
            <height>183</height>
            <!-- <colordiffuse>ddffffff</colordiffuse> -->
            <colordiffuse>$VAR[Picked.Theme.Color]</colordiffuse>
            <texture border="150,40,150,40">$VAR[Theme.Color]/common/bg_dialog.png</texture>
        </control>
        <control type="label">
            <animation effect="slide" tween="circle" easing="in" time="150" start="0,0" end="0,22" condition="![Player.Caching | Player.Seeking | player.forwarding | player.rewinding | Player.DisplayAfterSeek | Player.Paused | Player.ChapterCount]">Conditional</animation>
            <include>TopBarOSDVisibleFadeEffect</include>
            <visible>![window.IsVisible(videoosd)|window.IsVisible(musicosd)]</visible>
            <visible>VideoPlayer.Content(livetv)</visible>
            <animation effect="fade" time="250">Visible</animation>
            <posx>250</posx>
            <posy>55</posy>
            <height>30</height>
            <width>1420</width>
            <align>center</align>
            <font>NotificationFontDouble</font>
            <include>TextColor_MainColor</include>
            <label>$INFO[VideoPlayer.ChannelNumber,, - ]$INFO[VideoPlayer.ChannelName]$INFO[VideoPlayer.Title, - ]</label>
        </control>
        <control type="label">
            <animation effect="slide" tween="circle" easing="in" time="150" start="0,0" end="0,22" condition="![Player.Caching | Player.Seeking | player.forwarding | player.rewinding | Player.DisplayAfterSeek | Player.Paused | Player.ChapterCount]">Conditional</animation>
            <include>TopBarOSDVisibleFadeEffect</include>
            <visible>![window.IsVisible(videoosd)|window.IsVisible(musicosd)]</visible>
            <visible>!VideoPlayer.Content(livetv)</visible>
            <animation effect="fade" time="250">Visible</animation>
            <posx>250</posx>
            <posy>55</posy>
            <height>30</height>
            <width>1420</width>
            <align>center</align>
            <font>NotificationFontDouble</font>
            <include>TextColor_MainColor</include>
            <label>$INFO[MusicPlayer.Title]$INFO[VideoPlayer.TVShowTitle]$INFO[VideoPlayer.Artist,, - ]$INFO[VideoPlayer.Album,, - ]$INFO[VideoPlayer.Season, - $LOCALIZE[31973],.]$INFO[VideoPlayer.Episode,, - ]$INFO[VideoPlayer.Title]</label>
        </control>
        <control type="label">
            <posx>TextMargin</posx>
            <posy>56</posy>
            <height>30</height>
            <width>50</width>
            <align>left</align>
            <font>NotificationFontDoubleAwesome</font>
            <label></label>
        </control>
        <control type="label">
            <posx>95</posx>
            <posy>55</posy>
            <height>30</height>
            <width>300</width>
            <align>left</align>
            <font>NotificationFontDouble</font>
            <label>$INFO[VideoPlayer.Time]</label>
        </control>
        <control type="label">
            <posx>TextMargin</posx>
            <posy>97</posy>
            <height>41</height>
            <width>50</width>
            <align>left</align>
            <font>NotificationFontAwesome</font>
            <include>TextColor_AlternateColor</include>
            <label></label>
        </control>
        <control type="label">
            <posx>95</posx>
            <posy>95</posy>
            <height>41</height>
            <width>300</width>
            <align>left</align>
            <font>NotificationFont</font>
            <include>TextColor_AlternateColor</include>
            <label>$INFO[System.Time]</label>
        </control>
        <control type="label">
            <posx>1860</posx>
            <posy>56</posy>
            <height>30</height>
            <width>50</width>
            <align>right</align>
            <font>NotificationFontDoubleAwesome</font>
            <label></label>
        </control>
        <control type="label">
            <posx>1825</posx>
            <posy>55</posy>
            <height>30</height>
            <width>300</width>
            <align>right</align>
            <font>NotificationFontDouble</font>
            <label>$INFO[VideoPlayer.TimeRemaining]</label>
        </control>
        <control type="label">
            <visible>![!VideoPlayer.HasEpg+VideoPlayer.Content(livetv)]</visible>
            <posx>1860</posx>
            <posy>97</posy>
            <height>41</height>
            <width>50</width>
            <align>right</align>
            <font>NotificationFontAwesome</font>
            <include>TextColor_AlternateColor</include>
            <label></label>
        </control>
        <control type="label">
            <visible>![!VideoPlayer.HasEpg+VideoPlayer.Content(livetv)]</visible>
            <posx>1825</posx>
            <posy>95</posy>
            <height>41</height>
            <width>300</width>
            <align>right</align>
            <font>NotificationFont</font>
            <include>TextColor_AlternateColor</include>
            <label>$INFO[Player.FinishTime]</label>
        </control>
        <control type="group" id="22929">
            <visible>![Window.IsVisible(videoosd)|Window.IsVisible(musicosd)]</visible>
            <include>TopBarOSDVisibleFadeEffect</include>
            <include>SeekBar</include>
        </control>
        <control type="group">
            <visible>Player.Paused+Skin.HasSetting(OSDShowInfoPaused)+!Window.IsVisible(DialogFullScreenInfo.xml)</visible>
            <include>OSDInfoPanel</include>
        </control>
    </controls>
</window>
