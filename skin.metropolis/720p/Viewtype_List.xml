<includes>
	<include name="Viewtype_List">
		<control type="group">
			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<fadetime>400</fadetime>
				<texture background="true" diffuse="diffuse_fanart.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<colordiffuse>FanartDiffuse</colordiffuse>
				<include>Animation_CommonFade</include>
				<visible>SubString(Container.FolderPath,advanced.launcher)</visible>
			</control>
			<visible>Control.IsVisible(503)</visible>
			<!-- Browser -->
			<control type="fixedlist" id="503">
				<posx>350</posx>
				<posy>40</posy>
				<height>500</height>
				<width>990</width>
				<onup>503</onup>
				<ondown>503</ondown>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>
				<onright>61</onright>
				<scrolltime>0</scrolltime>
				<viewtype label="31285">biglist</viewtype>
				<orientation>vertical</orientation>
				<preloaditems>2</preloaditems>
				<focusposition>4</focusposition>
				<pagecontrol>61</pagecontrol>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewList)</visible>
				<visible>[Window.IsActive(musiclibrary) + Container.Content(songs)] | Container.Content(Addons) | SubString(Container.FolderPath,plugin) | SubString(Container.FolderPath,script)</visible>
				<itemlayout width="885" height="49">
					<control type="label">
						<posx>91</posx>
						<posy>0</posy>
						<width>57</width>
						<height>49</height>
						<aligny>center</aligny>
						<align>right</align>
						<font>METF_TitleTextMedium</font>
						<textcolor>TextNF</textcolor>
						<selectedcolor>TextFO</selectedcolor>
						<label>$INFO[ListItem.TrackNumber]</label>
						<visible>Container.Content(songs)</visible>
					</control>
					<control type="label">
						<posx>111</posx>
						<posy>3</posy>
						<width>780</width>
						<height>25</height>
						<aligny>center</aligny>
						<font>METF_TitleText</font>
						<textcolor>TextNF</textcolor>
						<selectedcolor>TextFO</selectedcolor>
						<label>$INFO[ListItem.Title]</label>
					</control>
					<control type="label">
						<posx>125</posx>
						<posy>0</posy>
						<width>780</width>
						<height>49</height>
						<aligny>center</aligny>
						<font>METF_TitleText</font>
						<textcolor>TextNF</textcolor>
						<selectedcolor>TextFO</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<posx>111</posx>
						<posy>26</posy>
						<width>780</width>
						<height>17</height>
						<aligny>center</aligny>
						<font>METF_InfoText</font>
						<textcolor>TextNF</textcolor>
						<selectedcolor>TextFO</selectedcolor>
						<label>$INFO[ListItem.Artist,, - ]$INFO[ListItem.Album,, • ]$INFO[ListItem.Duration]</label>
						<visible>Container.Content(songs) + !IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<posx>125</posx>
						<posy>36</posy>
						<width>780</width>
						<height>17</height>
						<aligny>center</aligny>
						<font>METF_InfoText</font>
						<textcolor>TextNF</textcolor>
						<selectedcolor>TextFO</selectedcolor>
						<label>$INFO[ListItem.Label2]</label>
						<visible>!Container.Content(songs) + IsEmpty(ListItem.Title)</visible>
					</control>
				</itemlayout>
				<focusedlayout width="828" height="104">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>104</width>
						<height>104</height>
						<texture>list/listframe.png</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="52,52" start="50" end="100" time="200" tween="cubic" easing="out" />
							<effect type="fade" start="0" end="100" time="200" />
						</animation>
					</control>
					<control type="image">
						<posx>12</posx>
						<posy>12</posy>
						<width>80</width>
						<height>80</height>
						<texture fallback="DefaultThumb.png" diffuse="list/listmatte.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false" aligny="top">scale</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="52,52" start="50" end="100" time="200" tween="cubic" easing="out" />
						</animation>
						<visible>IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>12</posx>
						<posy>12</posy>
						<width>80</width>
						<height>80</height>
						<texture fallback="DefaultThumb.png" diffuse="list/listmatte.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false" aligny="top">scale</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="52,52" start="50" end="100" time="200" tween="cubic" easing="out" />
						</animation>
						<visible>!IsEmpty(ListItem.Title) + !Container.Content(genres)</visible>
					</control>
					<control type="image">
						<posx>12</posx>
						<posy>12</posy>
						<width>80</width>
						<height>80</height>
						<texture diffuse="list/listmatte.png" fallback="DefaultMusicGenre.jpg">musicgenres/$INFO[ListItem.Label].jpg</texture>
						<aspectratio scalediffuse="false" aligny="top">scale</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="52,52" start="50" end="100" time="200" tween="cubic" easing="out" />
						</animation>
						<visible>!IsEmpty(ListItem.Title) + Container.Content(genres)</visible>
					</control>
					<control type="label">
						<posx>120</posx>
						<posy>36</posy>
						<width>780</width>
						<height>32</height>
						<aligny>center</aligny>
						<font>METF_TitleTextLarge</font>
						<textcolor>TextNF</textcolor>
						<selectedcolor>TextFO</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>[IsEmpty(ListItem.Title) + [IsEmpty(ListItem.Artist) | IsEmpty(ListItem.Album)]] | SubString(Container.FolderPath,plugin)</visible>
					</control>
					<control type="label">
						<posx>120</posx>
						<posy>14</posy>
						<width>780</width>
						<height>25</height>
						<aligny>center</aligny>
						<font>METF_TitleText</font>
						<textcolor>TextNF</textcolor>
						<selectedcolor>TextFO</selectedcolor>
						<label>$INFO[ListItem.TrackNumber,,. ]$INFO[ListItem.Title]</label>
						<visible>!IsEmpty(ListItem.Title) + !SubString(Container.FolderPath,plugin)</visible>
					</control>
					<control type="label">
						<posx>120</posx>
						<posy>14</posy>
						<width>780</width>
						<height>25</height>
						<aligny>center</aligny>
						<font>METF_TitleText</font>
						<textcolor>TextNF</textcolor>
						<selectedcolor>TextFO</selectedcolor>
						<label>$INFO[ListItem.Album]</label>
						<visible>IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<posx>120</posx>
						<posy>44</posy>
						<width>780</width>
						<height>17</height>
						<aligny>center</aligny>
						<font>METF_InfoText</font>
						<textcolor>TextNF</textcolor>
						<selectedcolor>TextFO</selectedcolor>
						<label>$INFO[ListItem.Artist,, - ]$INFO[ListItem.Album,, • ]$INFO[ListItem.Duration]</label>
						<visible>!IsEmpty(ListItem.Title) + Container.Content(songs)</visible>
					</control>
					<control type="label">
						<posx>120</posx>
						<posy>44</posy>
						<width>780</width>
						<height>17</height>
						<aligny>center</aligny>
						<font>METF_InfoText</font>
						<textcolor>TextNF</textcolor>
						<selectedcolor>TextFO</selectedcolor>
						<label>$INFO[ListItem.Artist]</label>
						<visible>IsEmpty(ListItem.Title) + [Container.Content(albums) | Container.Content(songs)]</visible>
					</control>
					<control type="image">
						<posx>120</posx>
						<posy>66</posy>
						<width>121</width>
						<height>22</height>
						<texture>$INFO[ListItem.StarRating]</texture>
						<colordiffuse>MediaFlagDiffuse</colordiffuse>
						<visible>!IsEmpty(ListItem.Title) + [Container.Content(albums) | Container.Content(songs)]</visible>
					</control>
				</focusedlayout>
			</control>
			<include>ScrollBar_Vertical</include>
		</control>
	</include>
</includes>
