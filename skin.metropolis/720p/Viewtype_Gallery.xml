<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_Gallery">
		<control type="group">
			<visible>Control.IsVisible(54)</visible>
			<!-- Browser -->
			<control type="panel" id="54">
				<viewtype label="$LOCALIZE[31414]">icon</viewtype>
				<posx>45</posx>
				<posy>50</posy>
				<width>1190</width>
				<height>420</height>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<ondown>54</ondown>
				<onup>54</onup>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>
				<onright>61</onright>
				<pagecontrol>61</pagecontrol>
				<preloaditems>2</preloaditems>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewGallery)</visible>
				<visible>Window.IsActive(videos) + [Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons)]</visible>
				<itemlayout width="170" height="210">
					<control type="image">
						<posx>21</posx>
						<posy>14</posy>
						<width>128</width>
						<height>182</height>
						<texture>frames/ClassicFrame_Background.png</texture>
						<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
						<visible>!String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>21</posx>
						<posy>14</posy>
						<width>128</width>
						<height>182</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>21</posx>
						<posy>14</posy>
						<width>128</width>
						<height>182</height>
						<texture background="true" fallback="DefaultThumb.png">$VAR[PosterThumb]</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>!String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>21</posx>
						<posy>14</posy>
						<width>128</width>
						<height>182</height>
						<texture>frames/ClassicFrameGlass_Vertical.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<colordiffuse>GlassDiffuse</colordiffuse>
						<visible>!String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>10</posx>
						<posy>1</posy>
						<width>152</width>
						<height>208</height>
						<texture>frames/ClassicFrame_PosterSmall.png</texture>
						<visible>!String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>112</posx>
						<posy>163</posy>
						<width>28</width>
						<height>28</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>!ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
					<!-- Watched Overlay for In-Progress Items -->
					<control type="image">
						<posx>108</posx>
						<posy>158</posy>
						<width>39</width>
						<height>39</height>
						<texture>flags/Progress/$INFO[ListItem.PercentPlayed].png</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
				</itemlayout>
				<focusedlayout width="170" height="210">
					<control type="image">
						<include>Animation_GalleryFloat</include>
						<posx>24</posx>
						<posy>15</posy>
						<width>122</width>
						<height>180</height>
						<texture>frames/ClassicFrame_Background.png</texture>
						<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
						<visible>!String.IsEmpty(ListItem.Title)</visible>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="70" end="115" time="400" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
					</control>
					<control type="image">
						<include>Animation_GalleryFloat</include>
						<posx>24</posx>
						<posy>15</posy>
						<width>122</width>
						<height>180</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="70" end="115" time="400" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
						<visible>String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<include>Animation_GalleryFloat</include>
						<posx>24</posx>
						<posy>15</posy>
						<width>122</width>
						<height>180</height>
						<texture background="true" fallback="DefaultThumb.png">$VAR[PosterThumb]</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="70" end="115" time="400" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
						<visible>!String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<include>Animation_GalleryFloat</include>
						<posx>24</posx>
						<posy>15</posy>
						<width>122</width>
						<height>180</height>
						<texture>frames/ClassicFrameGlass_Vertical.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<colordiffuse>GlassDiffuse</colordiffuse>
						<visible>!String.IsEmpty(ListItem.Title)</visible>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="70" end="115" time="400" tween="back" easing="out" />
							<effect type="fade" start="100" end="0" time="400" />
						</animation>
					</control>
					<control type="image">
						<include>Animation_GalleryFloat</include>
						<posx>10</posx>
						<posy>1</posy>
						<width>152</width>
						<height>208</height>
						<texture>frames/ClassicFrame_PosterSmall.png</texture>
						<visible>!String.IsEmpty(ListItem.Title)</visible>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="70" end="115" time="400" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
					</control>
					<control type="image">
						<include>Animation_GalleryFloat</include>
						<posx>112</posx>
						<posy>162</posy>
						<width>28</width>
						<height>28</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="70,103" start="70" end="115" time="400" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
						<visible>!ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
					<!-- Watched Overlay for In-Progress Items -->
					<control type="image">
						<include>Animation_GalleryFloat</include>
						<posx>108</posx>
						<posy>158</posy>
						<width>39</width>
						<height>39</height>
						<texture>flags/Progress/$INFO[ListItem.PercentPlayed].png</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="70,103" start="70" end="115" time="400" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
						<visible>ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
				</focusedlayout>
			</control>

			<!-- Title -->
			<control type="label">
				<posx>40</posx>
				<posy>472</posy>
				<width>1200</width>
				<height>40</height>
				<align>center</align>
				<font>METF_TitleTextLarge</font>
				<textcolor>TitleText</textcolor>
				<label>$VAR[ListItemTitle]</label>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>Window.IsActive(videos) + [Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons)]</visible>
			</control>
			<!-- Details -->
			<control type="grouplist">
				<posx>40</posx>
				<posy>505</posy>
				<width>1200</width>
				<height>30</height>
				<align>center</align>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<include>ViewDetailsGenreYearDurEpsUnwatched</include>
				<visible>Window.IsActive(videos) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons)]</visible>
				<include>VisibleIfNotMovieSet</include>
			</control>
			<control type="label">
				<posx>240</posx>
				<posy>503</posy>
				<width>800</width>
				<height>30</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>METF_MediaDetailsSmall</font>
				<textcolor>MediaDetailsGenre</textcolor>
				<label>$LOCALIZE[31313]</label>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<include>VisibleIfMovieSet</include>
			</control>
			<!-- Arrows -->
			<control type="group">
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>Window.IsActive(videos) + [Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons)]</visible>
				<control type="image">
					<posx>10</posx>
					<posy>508</posy>
					<width>24</width>
					<height>24</height>
					<texture>Arrow2Up.png</texture>
					<colordiffuse>ArrowDiffuse</colordiffuse>
					<visible>Container.HasPrevious</visible>
				</control>
				<control type="image">
					<posx>1246</posx>
					<posy>508</posy>
					<width>24</width>
					<height>24</height>
					<texture>Arrow2Down.png</texture>
					<colordiffuse>ArrowDiffuse</colordiffuse>
					<visible>Container.HasNext</visible>
				</control>
			</control>
			<include>ScrollBar_Vertical</include>
		</control>
	</include>
</includes>
