<includes>
	<include name="Viewtype_Gallery">
		<control type="group">
			<visible>Control.IsVisible(54)</visible>
			<!-- Browser -->
			<control type="panel" id="54">
				<viewtype label="$LOCALIZE[31414]">icon</viewtype>
				<posx>45</posx>
				<posy>50</posy>
				<width>1190</width>
				<height>420</height>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<ondown>54</ondown>
				<onup>54</onup>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>
				<onright>61</onright>
				<pagecontrol>61</pagecontrol>
				<preloaditems>2</preloaditems>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>[Window.IsActive(VideoLibrary) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(MusicVideos)]]</visible>
				<itemlayout width="170" height="210">
					<control type="image">
						<posx>24</posx>
						<posy>15</posy>
						<width>122</width>
						<height>180</height>
						<texture>frames/ClassicFrame_Background.png</texture>
						<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
					</control>
					<control type="image">
						<posx>24</posx>
						<posy>15</posy>
						<width>122</width>
						<height>180</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>24</posx>
						<posy>15</posy>
						<width>122</width>
						<height>180</height>
						<texture>frames/ClassicFrameGlass_Vertical.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<colordiffuse>GlassDiffuse</colordiffuse>
					</control>
					<control type="image">
						<posx>10</posx>
						<posy>1</posy>
						<width>151</width>
						<height>208</height>
						<texture>frames/ClassicFrame_PosterSmall.png</texture>
					</control>
					<control type="image">
						<posx>112</posx>
						<posy>163</posy>
						<width>28</width>
						<height>28</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>[Container.Content(movies) + !Skin.HasSetting(HideMovieWatchedOverlays)] | [!Container.Content(movies) + !Skin.HasSetting(HideTVWatchedOverlays)]</visible>
					</control>
				</itemlayout>
				<focusedlayout width="170" height="210">
					<control type="image">
						<include>Animation_GalleryFloat</include>
						<posx>24</posx>
						<posy>15</posy>
						<width>122</width>
						<height>180</height>
						<texture>frames/ClassicFrame_Background.png</texture>
						<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="70" end="115" time="400" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
					</control>
					<control type="image">
						<include>Animation_GalleryFloat</include>
						<posx>24</posx>
						<posy>15</posy>
						<width>122</width>
						<height>180</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="70" end="115" time="400" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
					</control>
					<control type="image">
						<include>Animation_GalleryFloat</include>
						<posx>24</posx>
						<posy>15</posy>
						<width>122</width>
						<height>180</height>
						<texture>frames/ClassicFrameGlass_Vertical.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<colordiffuse>GlassDiffuse</colordiffuse>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="70" end="115" time="400" tween="back" easing="out" />
							<effect type="fade" start="100" end="0" time="400" />
						</animation>
					</control>
					<control type="image">
						<include>Animation_GalleryFloat</include>
						<posx>10</posx>
						<posy>1</posy>
						<width>151</width>
						<height>208</height>
						<texture>frames/ClassicFrame_PosterSmall.png</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="70" end="115" time="400" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
					</control>
					<control type="image">
						<include>Animation_GalleryFloat</include>
						<posx>112</posx>
						<posy>163</posy>
						<width>28</width>
						<height>28</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="70,103" start="70" end="115" time="400" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
						<visible>[Container.Content(movies) + !Skin.HasSetting(HideMovieWatchedOverlays)] | [!Container.Content(movies) + !Skin.HasSetting(HideTVWatchedOverlays)]</visible>
					</control>
				</focusedlayout>
			</control>
			
			<!-- Browser label and flags -->
			<!-- Title -->
			<control type="label">
				<posx>40</posx>
				<posy>472</posy>
				<width>1200</width>
				<height>40</height>
				<align>center</align>
				<font>METF_TitleTextLarge</font>
				<textcolor>TitleText</textcolor>
				<label>$INFO[ListItem.Label]</label>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>Window.IsActive(VideoLibrary) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(MusicVideos)]</visible>
			</control>
			<control type="grouplist">
				<posx>40</posx>
				<posy>505</posy>
				<width>1200</width>
				<height>30</height>
				<align>center</align>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>Window.IsActive(VideoLibrary) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(MusicVideos)]</visible>
				<!-- Genre -->
				<control type="label">
					<width min="25" max="1200">auto</width>
					<height>30</height>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsGenre</textcolor>
					<label>$INFO[ListItem.Genre]</label>
					<visible>!IsEmpty(ListItem.Genre) + !Container.Content(seasons)</visible>
				</control>
				<!-- Bullet -->
				<control type="image">
					<width>8</width>
					<height>36</height>
					<texture>Dot.png</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<colordiffuse>BulletDiffuse</colordiffuse>
					<visible>![IsEmpty(ListItem.Genre) | IsEmpty(ListItem.Year)]</visible>
				</control>
				<!-- Year -->
				<control type="label">
					<width min="25" max="1200">auto</width>
					<height>30</height>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsYear</textcolor>
					<label>$INFO[ListItem.Year]</label>
					<visible>!IsEmpty(ListItem.Year) + !Container.Content(seasons)</visible>
				</control>
				<!-- Bullet -->
				<control type="image">
					<width>8</width>
					<height>36</height>
					<texture>Dot.png</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<colordiffuse>BulletDiffuse</colordiffuse>
					<visible>![IsEmpty(ListItem.Year) | IsEmpty(ListItem.Duration)]</visible>
				</control>
				<!-- Duration -->
				<control type="label">
					<width min="25" max="1200">auto</width>
					<height>30</height>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsDuration</textcolor>
					<label>$INFO[ListItem.Duration,, [LOWERCASE]$LOCALIZE[31299][/LOWERCASE]]</label>
					<visible>!IsEmpty(ListItem.Duration) + !SubString(ListItem.Duration,min) + ![Container.Content(tvshows) | Container.Content(seasons)]</visible>
				</control>
				<control type="label">
					<width min="25" max="1200">auto</width>
					<height>30</height>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsDuration</textcolor>
					<label>$INFO[ListItem.Duration]</label>
					<visible>!IsEmpty(ListItem.Duration) + SubString(ListItem.Duration,min) + ![Container.Content(tvshows) | Container.Content(seasons)]</visible>
				</control>
				<!-- Bullet -->
				<control type="image">
					<width>8</width>
					<height>36</height>
					<texture>Dot.png</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<colordiffuse>BulletDiffuse</colordiffuse>
					<visible>![IsEmpty(ListItem.Duration) | IsEmpty(ListItem.Episode)] + !Container.Content(episodes) | Container.Content(tvshows)</visible>
				</control>
				<!-- Episode Count -->
				<control type="label">
					<width min="25" max="1200">auto</width>
					<height>30</height>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsEpisodes</textcolor>
					<label>$INFO[ListItem.Episode] $LOCALIZE[20360]</label>
					<visible>!IsEmpty(ListItem.Episode) + [Container.Content(tvshows) | Container.Content(seasons)]</visible>
				</control>
				<!-- Bullet -->
				<control type="image">
					<width>8</width>
					<height>36</height>
					<texture>Dot.png</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<colordiffuse>BulletDiffuse</colordiffuse>
					<visible>!IsEmpty(ListItem.Episode) + [Container.Content(seasons) | Container.Content(tvshows)]</visible>
				</control>
				<!-- Unwatched Episode Count -->
				<control type="label">
					<width min="25" max="1200">auto</width>
					<height>30</height>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsEpisodes</textcolor>
					<label>$INFO[ListItem.Property(UnwatchedEpisodes)] $LOCALIZE[16101]</label>
					<visible>!IsEmpty(ListItem.Episode) + [Container.Content(seasons) | Container.Content(tvshows)]</visible>
				</control>
			</control>
			<!-- Movie Sets -->
			<control type="label">
				<posx>240</posx>
				<posy>503</posy>
				<width>800</width>
				<height>30</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>METF_MediaDetailsSmall</font>
				<textcolor>MediaDetailsGenre</textcolor>
				<label>$LOCALIZE[31313]</label>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>IsEmpty(ListItem.Genre) + Container.Content(movies) + IsEmpty(ListItem.path) + !StringCompare(ListItem.Label,..)</visible>
			</control>
			<!-- Arrows -->
			<control type="group">
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>Window.IsActive(VideoLibrary) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(MusicVideos)]</visible>
				<control type="image">
					<posx>10</posx>
					<posy>508</posy>
					<width>24</width>
					<height>24</height>
					<texture>Arrow2Up.png</texture>
					<colordiffuse>ArrowDiffuse</colordiffuse>
					<visible>Container.HasPrevious</visible>
				</control>
				<control type="image">
					<posx>1246</posx>
					<posy>508</posy>
					<width>24</width>
					<height>24</height>
					<texture>Arrow2Down.png</texture>
					<colordiffuse>ArrowDiffuse</colordiffuse>
					<visible>Container.HasNext</visible>
				</control>
			</control>
			<include>ScrollBar_Vertical</include>
		</control>
	</include>
</includes>
