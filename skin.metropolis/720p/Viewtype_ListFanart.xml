<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_ListFanart">
		<control type="group">
			<visible>Control.IsVisible(509)</visible>
			<!-- Browser -->
			<control type="fixedlist" id="509">
				<viewtype label="$LOCALIZE[535] $LOCALIZE[20445]">biglist</viewtype>
				<posx>658</posx>
				<posy>60</posy>
				<height>455</height>
				<width>600</width>
				<onup>509</onup>
				<ondown>509</ondown>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>
				<onright>61</onright>
				<orientation>vertical</orientation>
				<preloaditems>2</preloaditems>
				<focusposition>6</focusposition>
				<movement>6</movement>
				<pagecontrol>61</pagecontrol>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewListFanart)</visible>
				<visible>Window.IsActive(pictures) | Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)</visible>
				<itemlayout width="600" height="35">
					<!-- List Line Item Divider -->
					<control type="image">
						<posx>35</posx>
						<posy>33</posy>
						<width>575</width>
						<height>2</height>
						<aligny>center</aligny>
						<texture>VideoInfoLine.png</texture>
						<colordiffuse>FilesDividerDiffuse</colordiffuse>
					</control>
					<control type="label">
						<posx>45</posx>
						<posy>0</posy>
						<width>550</width>
						<height>35</height>
						<align>left</align>
						<aligny>center</aligny>
						<label>$VAR[ListItemTitle]</label>
						<font>METF_TitleText</font>
						<textcolor>LowListTitle</textcolor>
					</control>
					<!-- Watched Overlay -->
					<control type="image">
						<posx>4</posx>
						<posy>5</posy>
						<width>24</width>
						<height>24</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>!ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
					<!-- Watched Overlay for In-Progress Items -->
					<control type="image">
						<posx>-2</posx>
						<posy>0</posy>
						<width>35</width>
						<height>35</height>
						<texture>flags/Progress/$INFO[ListItem.PercentPlayed].png</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
				</itemlayout>
				<focusedlayout width="600" height="35">
					<!-- List Line Item Divider -->
					<control type="image">
						<posx>35</posx>
						<posy>33</posy>
						<width>575</width>
						<height>2</height>
						<aligny>center</aligny>
						<texture>VideoInfoLine.png</texture>
						<colordiffuse>FilesDividerDiffuse</colordiffuse>
						<visible>!String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>35</posx>
						<posy>0</posy>
						<width>575</width>
						<height>35</height>
						<texture>FocusLine.png</texture>
						<colordiffuse>FocusBar</colordiffuse>
					</control>
					<control type="label">
						<posx>45</posx>
						<posy>0</posy>
						<width>550</width>
						<height>35</height>
						<align>left</align>
						<aligny>center</aligny>
						<label>$VAR[ListItemTitle]</label>
						<font>METF_TitleText</font>
						<textcolor>FocusBarText</textcolor>
					</control>
					<!-- Watched Overlay -->
					<control type="image">
						<posx>4</posx>
						<posy>5</posy>
						<width>24</width>
						<height>24</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>!ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
					<!-- Watched Overlay for In-Progress Items -->
					<control type="image">
						<posx>-2</posx>
						<posy>0</posy>
						<width>35</width>
						<height>35</height>
						<texture>flags/Progress/$INFO[ListItem.PercentPlayed].png</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
				</focusedlayout>
			</control>
			<!-- Thumbnails -->
			<control type="group">
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>[Window.IsActive(pictures) | Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)] + [!String.IsEqual(ListItem.Icon,-) + !String.StartsWith(ListItem.Icon,default)]</visible>
				<!-- Background Frame Matte -->
				<control type="image">
					<posx>35</posx>
					<posy>66</posy>
					<width>600</width>
					<height>338</height>
					<texture>frames/ClassicFrame_Background.png</texture>
					<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
					<aspectratio scalediffuse="false">stretch</aspectratio>
				</control>
				<!-- Picture Icon Image -->
				<control type="image">
					<posx>35</posx>
					<posy>66</posy>
					<width>600</width>
					<height>338</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
					<visible>Window.IsActive(pictures) + !String.IsEmpty(ListItem.Icon)</visible>
				</control>
				<!-- Picture Fanart Image (use for thumb if no icon set) -->
				<control type="image">
					<posx>35</posx>
					<posy>66</posy>
					<width>600</width>
					<height>338</height>
					<texture background="true" fallback="home_art/pictures.jpg">$INFO[ListItem.Art(fanart)]</texture>
					<aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
					<visible>Window.IsActive(pictures) + String.IsEmpty(ListItem.Icon)</visible>
				</control>
				<!-- Movie Fanart Image -->
				<control type="image">
					<posx>35</posx>
					<posy>66</posy>
					<width>600</width>
					<height>338</height>
					<texture background="true" fallback="home_art/movies.jpg">$VAR[LandscapeFanart]</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<visible>!String.IsEmpty(ListItem.Title) + [Container.Content(movies) | Container.Content(sets)]</visible>
				</control>
				<!-- TVShow Fanart Image -->
				<control type="image">
					<posx>35</posx>
					<posy>66</posy>
					<width>600</width>
					<height>338</height>
					<texture background="true" fallback="home_art/tvshows.jpg">$VAR[LandscapeFanart]</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<visible>!String.IsEmpty(ListItem.Title) + [Container.Content(tvshows) | Container.Content(seasons)]</visible>
				</control>
				<!-- Episode Image -->
				<control type="image">
					<posx>35</posx>
					<posy>66</posy>
					<width>600</width>
					<height>338</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
					<visible>!String.IsEmpty(ListItem.Title) + Container.Content(episodes)</visible>
				</control>
				<!-- Image Frame -->
				<control type="image">
					<posx>12</posx>
					<posy>46</posy>
					<width>650</width>
					<height>383</height>
					<texture>frames/ClassicFrame_FanartMedium.png</texture>
					<aspectratio scalediffuse="false">scale</aspectratio>
				</control>
			</control>
			<!-- Details -->
			<control type="group">
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<!-- Movie and TV Show Titles -->
				<control type="label">
					<posx>35</posx>
					<posy>430</posy>
					<width>600</width>
					<height>30</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>METF_TitleTextLarge</font>
					<textcolor>TitleText</textcolor>
					<label>$VAR[ListItemTitle]</label>
					<visible>!Container.Content(seasons)</visible>
				</control>
				<!-- Season - TV Show Title -->
				<control type="label">
					<posx>35</posx>
					<posy>430</posy>
					<width>600</width>
					<height>30</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>METF_TitleTextLarge</font>
					<textcolor>TitleText</textcolor>
					<label>$INFO[ListItem.TVShowTitle]</label>
					<visible>Container.Content(seasons)</visible>
				</control>
				<!-- Genre -->
				<control type="label">
					<posx>35</posx>
					<posy>459</posy>
					<width>600</width>
					<height>30</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsGenre</textcolor>
					<label>$INFO[ListItem.Genre]</label>
					<visible>!String.IsEmpty(ListItem.Genre) + !Container.Content(episodes)</visible>
				</control>
				<!-- Episode Air Date -->
				<control type="label">
					<posx>35</posx>
					<posy>459</posy>
					<width>600</width>
					<height>30</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsYear</textcolor>
					<label>$LOCALIZE[20416] $INFO[ListItem.Premiered]</label>
					<visible>!String.IsEmpty(ListItem.Premiered) + Container.Content(episodes)</visible>
				</control>
				<!-- Picture Date -->
				<control type="label">
					<posx>35</posx>
					<posy>459</posy>
					<width>600</width>
					<height>30</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsGenre</textcolor>
					<label>$INFO[ListItem.PictureDateTime]</label>
					<visible>Window.IsActive(pictures) + !String.IsEmpty(ListItem.PictureDateTime)</visible>
				</control>
				<!-- Movie Sets -->
				<control type="label">
					<posx>35</posx>
					<posy>459</posy>
					<width>600</width>
					<height>30</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsGenre</textcolor>
					<label>$LOCALIZE[31313]</label>
					<include>VisibleIfMovieSet</include>
				</control>
				<!-- Picture Resolution -->
				<control type="label">
					<posx>35</posx>
					<posy>487</posy>
					<width>600</width>
					<height>30</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsDuration</textcolor>
					<label>$INFO[ListItem.PictureResolution]</label>
					<visible>Window.IsActive(pictures) + !String.IsEmpty(ListItem.PictureResolution) + !String.IsEqual(ListItem.PictureResolution, 0 x 0)</visible>
				</control>
                <!-- Extra details -->
				<control type="grouplist">
					<posx>35</posx>
					<posy>487</posy>
					<width>600</width>
					<height>30</height>
					<align>center</align>
                    <itemgap>10</itemgap>
                    <orientation>horizontal</orientation>
                    <include>ViewDetailsDurEpsUnwatched</include>
					<visible>!Window.IsActive(pictures)</visible>
                    <include>VisibleIfNotMovieSet</include>
				</control>
			</control>
			<include>ScrollBar_Vertical</include>
		</control>
	</include>
</includes>
