<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Home3 Icons -->
	<visible>Skin.HasSetting(Home3)</visible>

	<include name="HomeStatsPosition3">
		<posx>20</posx>
		<posy>560</posy>
		<width>240</width>
		<height>420</height>
	</include>
	<include name="HomeStatsDetails3">
		<width>130</width>
		<height>26</height>
		<align>left</align>
		<aligny>center</aligny>
		<font>METF_HomeStatsText</font>
		<textcolor>HomeStatsCategory</textcolor>
	</include>
	<include name="HomeStatsDetailsNumber3">
		<width>75</width>
		<height>26</height>
		<align>right</align>
		<aligny>center</aligny>
		<font>METF_HomeStatsText</font>
		<textcolor>HomeStatsNumber</textcolor>
	</include>

	<include name="Home3_Wide">
		<control type="button" id="9002">
			<description>Hidden Button to pass through navigation when homedeck is disabled</description>
			<posx>-20</posx>
			<posy>-20</posy>
			<width>1</width>
			<height>1</height>
			<label></label>
			<font></font>
			<texturefocus></texturefocus>
			<texturenofocus></texturenofocus>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<onup>9000</onup>
			<ondown>9001</ondown>
			<visible>false</visible>
		</control>
		<control type="button" id="99991">
			<description>Hidden Button to pass through navigation to hide submenus</description>
			<posx>-20</posx>
			<posy>-20</posy>
			<width>1</width>
			<height>1</height>
			<label></label>
			<font></font>
			<texturefocus></texturefocus>
			<texturenofocus></texturenofocus>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<onup>9000</onup>
			<ondown>9001</ondown>
			<visible>false</visible>
		</control>

		<!-- Main menu background -->
		<control type="multiimage">
			<include>Dimensions_Fullscreen</include>
			<timeperimage>5000</timeperimage>
			<randomize>true</randomize>
			<fadetime>500</fadetime>
			<imagepath background="true" diffuse="FanartDiffuse.png">$VAR[HomeBackground]</imagepath>
			<aspectratio>scale</aspectratio>
			<visible>!String.IsEqual(Container(9000).ListItem.Property(background),home\weather\)</visible>
			<visible allowhiddenfocus="true">!Skin.HasSetting(HomeStretchBackgrounds) + !Control.HasFocus(8000)</visible>
		</control>
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>542</height>
			<timeperimage>5000</timeperimage>
			<randomize>true</randomize>
			<fadetime>500</fadetime>
			<imagepath background="true">$VAR[HomeBackground]</imagepath>
			<aspectratio>stretch</aspectratio>
			<visible>!String.IsEqual(Container(9000).ListItem.Property(background),home\weather\)</visible>
			<visible allowhiddenfocus="true">Skin.HasSetting(HomeStretchBackgrounds) | Control.HasFocus(8000)</visible>
		</control>
		<control type="multiimage">
			<include>Dimensions_Fullscreen</include>
			<timeperimage>5000</timeperimage>
			<randomize>true</randomize>
			<fadetime>500</fadetime>
			<imagepath background="true" diffuse="FanartDiffuse.png">$VAR[Weather_Fanart]</imagepath>
			<aspectratio>scale</aspectratio>
			<visible>String.IsEqual(Container(9000).ListItem.Property(background),home\weather\)</visible>
			<visible allowhiddenfocus="true">!Skin.HasSetting(HomeStretchBackgrounds)</visible>
		</control>
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>542</height>
			<timeperimage>5000</timeperimage>
			<randomize>true</randomize>
			<fadetime>500</fadetime>
			<imagepath background="true">$VAR[Weather_Fanart]</imagepath>
			<aspectratio>stretch</aspectratio>
			<visible>String.IsEqual(Container(9000).ListItem.Property(background),home\weather\)</visible>
			<visible allowhiddenfocus="true">Skin.HasSetting(HomeStretchBackgrounds)</visible>
		</control>

		<!-- Sub-menus and upper-menus -->
		<include>HomeDeck</include>

		<control type="image">
			<posx>-20</posx>
			<posy>450</posy>
			<width>1320</width>
			<height>63</height>
			<texture>ButtonFO.png</texture>
			<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
		</control>
		<control type="image">
			<posx>-70</posx>
			<posy>450</posy>
			<width>1420</width>
			<height>63</height>
			<texture flipy="true">osd/osd_dialog_bg.png</texture>
			<colordiffuse>BackgroundColor</colordiffuse>
		</control>

		<!-- Main Menu -->
		<control type="wraplist" id="9000">
			<posx>0</posx>
			<posy>450</posy>
			<height>450</height>
			<width>1280</width>
			<onup>9002</onup>
			<ondown>9001</ondown>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<viewtype>list</viewtype>
			<orientation>horizontal</orientation>
			<focusposition>2</focusposition>
			<scrolltime>200</scrolltime>
			<itemgap>0</itemgap>
			<preloaditems>2</preloaditems>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<itemlayout height="60" width="300">
				<!--<control type="image">
					<posx>189</posx>
					<posy>5</posy>
					<width>1</width>
					<height>50</height>
					<texture>FocusLine.png</texture>
					<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
				</control>-->
				<control type="label">
					<left>-110</left>
					<top>0</top>
					<width>298</width>
					<height>60</height>
					<font>METF_HorizMenu</font>
					<textcolor>SubmenuText</textcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout height="60" width="300">
				<!--<control type="image">
					<posx>189</posx>
					<posy>5</posy>
					<width>1</width>
					<height>50</height>
					<texture>FocusLine.png</texture>
					<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
				</control>-->
				<control type="label">
					<left>-110</left>
					<top>0</top>
					<width>298</width>
					<height>60</height>
					<font>METF_HorizMenu</font>
					<textcolor>SubmenuTextFocused</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
					<visible>Control.HasFocus(9000)</visible>
				</control>
				<control type="label">
					<left>-110</left>
					<top>0</top>
					<width>298</width>
					<height>60</height>
					<font>METF_HorizMenu</font>
					<textcolor>SubmenuText</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
					<visible>!Control.HasFocus(9000)</visible>
				</control>
			</focusedlayout>
			<content>
				<include>skinshortcuts-mainmenu</include>
			</content>
		</control>

		<!-- Help Arrow when submenu present -->
		<control type="group">
			<posx>0</posx>
			<posy>2</posy>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<visible>!Control.HasFocus(9001) + ![Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003)] + String.Contains(Container(9000).ListItem.Property(hasSubmenu),True)</visible>
			<control type="image">
				<posx>625</posx>
				<posy>508</posy>
				<width>30</width>
				<height>30</height>
				<texture>ArrowDown.png</texture>
				<colordiffuse>HelpArrowDiffuse</colordiffuse>
			</control>
		</control>

		<!-- Submenus -->
		<control type="list" id="9001">
			<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
			<animation effect="fade" start="0" end="100" delay="300" time="200">Visible</animation>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<posx>490</posx>
			<posy>554</posy>
			<width>300</width>
			<height>170</height>
			<onup>9001</onup>
			<ondown>9001</ondown>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<orientation>vertical</orientation>
			<visible allowhiddenfocus="true">Control.HasFocus(9001) + ![Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003)]</visible>
			<defaultcontrol always="true">1</defaultcontrol>
			<scrolltime tween="sine" easing="out">240</scrolltime>
			<itemlayout width="300" height="20">
				<control type="label">
					<top>0</top>
					<left>0</left>
					<width>300</width>
					<height>20</height>
					<align>center</align>
					<label>$INFO[ListItem.Label]</label>
					<font>METF_HomeMenuSmall</font>
					<textcolor>SubmenuText</textcolor>
				</control>
			</itemlayout>
			<focusedlayout width="300" height="20">
				<control type="label">
					<top>0</top>
					<left>0</left>
					<width>300</width>
					<height>20</height>
					<align>center</align>
					<font>METF_HomeMenuSmall</font>
					<textcolor>SubmenuText</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<shadowcolor>ff000000</shadowcolor>
					<visible allowhiddenfocus="false">!Control.HasFocus(9001)</visible>
				</control>
				<control type="label">
					<top>0</top>
					<left>0</left>
					<width>300</width>
					<height>20</height>
					<align>center</align>
					<font>METF_HomeMenuSmall</font>
					<textcolor>SubmenuTextFocused</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<shadowcolor>ff000000</shadowcolor>
					<visible allowhiddenfocus="false">Control.HasFocus(9001)</visible>
				</control>
			</focusedlayout>
			<content>
				<include>skinshortcuts-submenu</include>
			</content>
		</control>

		<include>HomeStats</include>
	</include>
</includes>
