<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Home2 Icons -->
	<visible>Skin.HasSetting(Home2)</visible>

	<include name="HomeStatsPosition2">
		<posx>20</posx>
		<posy>560</posy>
		<width>240</width>
		<height>420</height>
	</include>
	<include name="HomeStatsDetails2">
		<width>130</width>
		<height>26</height>
		<align>left</align>
		<aligny>center</aligny>
		<font>METF_HomeStatsText</font>
		<textcolor>HomeStatsCategory</textcolor>
	</include>
	<include name="HomeStatsDetailsNumber2">
		<width>75</width>
		<height>26</height>
		<align>right</align>
		<aligny>center</aligny>
		<font>METF_HomeStatsText</font>
		<textcolor>HomeStatsNumber</textcolor>
	</include>

	<include name="Home2_Icons">
		<include>HomeDeck</include>
		<control type="button" id="9002">
			<description>Hidden Button to pass through navigation when homdeck is disabled</description>
			<posx>-20</posx>
			<posy>-20</posy>
			<width>1</width>
			<height>1</height>
			<label></label>
			<font></font>
			<texturefocus></texturefocus>
			<texturenofocus></texturenofocus>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<onup>9000</onup>
			<ondown>9001</ondown>
			<visible>false</visible>
		</control>

		<!-- Main Menu -->
		<control type="wraplist" id="9000">
			<posx>10</posx>
			<posy>65</posy>
			<height>450</height>
			<width>1260</width>
			<onup>9002</onup>
			<ondown>9001</ondown>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<viewtype>list</viewtype>
			<orientation>horizontal</orientation>
			<focusposition>3</focusposition>
			<scrolltime>200</scrolltime>
			<preloaditems>2</preloaditems>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<itemlayout width="180" height="450">
				<control type="image">
					<posx>15</posx>
					<posy>75</posy>
					<width>150</width>
					<height>300</height>
					<texture>$INFO[ListItem.Icon]</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
					<posx>5</posx>
					<posy>59</posy>
					<width>180</width>
					<height>335</height>
					<texture>frames/ClassicFrame_Tall.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
			</itemlayout>
			<focusedlayout width="180" height="450">
				<control type="image">
					<posx>15</posx>
					<posy>75</posy>
					<width>150</width>
					<height>300</height>
					<texture>$INFO[ListItem.Icon]</texture>
					<aspectratio>stretch</aspectratio>
					<animation reversible="false" effect="zoom" center="auto" start="100" end="112" time="200" tween="sine" easing="inout">focus</animation>
					<animation reversible="false" effect="zoom" center="auto" start="112" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
				</control>
				<control type="image">
					<posx>5</posx>
					<posy>59</posy>
					<width>180</width>
					<height>335</height>
					<texture>frames/ClassicFrame_Tall.png</texture>
					<aspectratio>stretch</aspectratio>
					<animation reversible="false" effect="zoom" center="auto" start="100" end="112" time="200" tween="sine" easing="inout">focus</animation>
					<animation reversible="false" effect="zoom" center="auto" start="112" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
				</control>
			</focusedlayout>
			<content>
				<include>skinshortcuts-mainmenu</include>
			</content>
		</control>

		<!-- Main menu Icon Label -->
		<control type="label">
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<posx>490</posx>
			<posy>480</posy>
			<width>300</width>
			<height>30</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>METF_HomeMenu</font>
			<textcolor>HomeMenuTextFocused</textcolor>
			<label>$INFO[Container(9000).ListItem.Label]</label>
		</control>
		<!-- Help Arrow when submenu present -->
		<control type="group">
			<posx>0</posx>
			<posy>2</posy>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<visible>!Control.HasFocus(9001) + ![Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003)] + String.Contains(Container(9000).ListItem.Property(hasSubmenu),True)</visible>
			<control type="image">
				<posx>625</posx>
				<posy>505</posy>
				<width>30</width>
				<height>30</height>
				<texture>ArrowDown.png</texture>
				<colordiffuse>HelpArrowDiffuse</colordiffuse>
			</control>
		</control>

		<!-- Submenus -->
		<control type="list" id="9001">
			<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
			<animation effect="fade" start="0" end="100" delay="300" time="200">Visible</animation>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<posx>490</posx>
			<posy>554</posy>
			<width>300</width>
			<height>164</height>
			<onup>9001</onup>
			<ondown>9001</ondown>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<visible allowhiddenfocus="true">Control.HasFocus(9001) + ![Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003)]</visible>
			<orientation>vertical</orientation>
			<defaultcontrol always="true">1</defaultcontrol>
			<scrolltime tween="sine" easing="out">240</scrolltime>
			<itemlayout width="450" height="20">
				<control type="label">
					<top>0</top>
					<left>0</left>
					<width>300</width>
					<height>20</height>
					<align>center</align>
					<label>$INFO[ListItem.Label]</label>
					<font>METF_HomeMenuSmall</font>
					<textcolor>SubmenuText</textcolor>
				</control>
			</itemlayout>
			<focusedlayout width="450" height="20">
				<control type="label">
					<top>0</top>
					<left>0</left>
					<width>300</width>
					<height>20</height>
					<align>center</align>
					<font>METF_HomeMenuSmall</font>
					<textcolor>SubmenuText</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible allowhiddenfocus="false">!Control.HasFocus(9001)</visible>
				</control>
				<control type="label">
					<top>0</top>
					<left>0</left>
					<width>300</width>
					<height>20</height>
					<align>center</align>
					<font>METF_HomeMenuSmall</font>
					<textcolor>SubmenuTextFocused</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible allowhiddenfocus="false">Control.HasFocus(9001)</visible>
				</control>
			</focusedlayout>
			<content>
				<include>skinshortcuts-submenu</include>
			</content>
		</control>

		<!-- Shared Home Stats/Media Totals -->
		<include>HomeStats</include>
	</include>
</includes>
