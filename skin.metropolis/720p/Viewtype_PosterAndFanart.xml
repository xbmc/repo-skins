<includes>
	<include name="Viewtype_PosterAndFanart">
		<control type="group">
			<visible>Control.IsVisible(550)</visible>
			<control type="group">			
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<include>Animation_OpenCloseFade</include>
				<visible>Container.Content(movies) | Container.Content(tvshows)</visible>
				<!-- Browser label and flags -->
				<control type="group">
					<posx>490</posx>
					<posy>438</posy>
					<!-- Title -->
					<control type="fadelabel">
						<width>800</width>
						<height>50</height>
						<aligny>center</aligny>
						<scrollout>false</scrollout>
						<pauseatend>600</pauseatend>
						<scrollspeed>20</scrollspeed>
						<font>METF_TitleTextLarge</font>
						<textcolor>TitleText</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="grouplist">
						<posy>42</posy>
						<width>1200</width>
						<height>30</height>
						<itemgap>10</itemgap>
						<orientation>horizontal</orientation>
						<!-- Year -->
						<control type="label">
							<width min="25" max="1200">auto</width>
							<height>30</height>
							<aligny>center</aligny>
							<font>METF_MediaDetailsSmall</font>
							<textcolor>MediaDetailsYear</textcolor>
							<label>$INFO[ListItem.Year]</label>
							<visible>!IsEmpty(ListItem.Year) + ![Container.Content(seasons) | Container.Content(episodes)]</visible>
						</control>
						<!-- Bullet -->
						<control type="image">
							<width>8</width>
							<height>36</height>
							<texture>Dot.png</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
							<colordiffuse>BulletDiffuse</colordiffuse>
							<visible>![IsEmpty(ListItem.Year) | IsEmpty(ListItem.Duration)]</visible>
						</control>
						<!-- Duration -->
						<control type="label">
							<width min="25" max="1200">auto</width>
							<height>30</height>
							<aligny>center</aligny>
							<font>METF_MediaDetailsSmall</font>
							<textcolor>MediaDetailsDuration</textcolor>
							<label>$INFO[ListItem.Duration,, [LOWERCASE]$LOCALIZE[31299][/LOWERCASE]]</label>
							<visible>!IsEmpty(ListItem.Duration) + !SubString(ListItem.Duration,min) + ![Container.Content(seasons) | Container.Content(tvshows)]</visible>
						</control>
						<!-- Duration -->
						<control type="label">
							<width min="25" max="1200">auto</width>
							<height>30</height>
							<aligny>center</aligny>
							<font>METF_MediaDetailsSmall</font>
							<textcolor>MediaDetailsDuration</textcolor>
							<label>$INFO[ListItem.Duration]</label>
							<visible>!IsEmpty(ListItem.Duration) + SubString(ListItem.Duration,min) + ![Container.Content(seasons) | Container.Content(tvshows)]</visible>
						</control>
						<!-- Bullet -->
						<control type="image">
							<width>8</width>
							<height>36</height>
							<texture>Dot.png</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
							<colordiffuse>BulletDiffuse</colordiffuse>
							<visible>![IsEmpty(ListItem.Duration) | IsEmpty(ListItem.Genre)]</visible>
						</control>				
						<!-- Genre -->
						<control type="label">
							<width min="25" max="1200">auto</width>
							<height>30</height>
							<aligny>center</aligny>
							<font>METF_MediaDetailsSmall</font>
							<textcolor>MediaDetailsGenre</textcolor>
							<label>$INFO[ListItem.Genre]</label>
							<visible>!IsEmpty(ListItem.Genre) + !Container.Content(tvshows)</visible>
						</control>
						<!-- Bullet -->
						<control type="image">
							<width>8</width>
							<height>36</height>
							<texture>Dot.png</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
							<colordiffuse>BulletDiffuse</colordiffuse>
							<visible>![IsEmpty(ListItem.Duration) | IsEmpty(ListItem.Property(TotalEpisodes))] | Container.Content(tvshows)</visible>
						</control>
						<!-- Episode Count -->
						<control type="label">
							<width min="25" max="1200">auto</width>
							<height>30</height>
							<aligny>center</aligny>
							<font>METF_MediaDetailsSmall</font>
							<textcolor>MediaDetailsEpisodes</textcolor>
							<label>$INFO[ListItem.Property(TotalEpisodes)] $LOCALIZE[20360]</label>
							<visible>!IsEmpty(ListItem.Property(TotalEpisodes)) + [Container.Content(seasons) | Container.Content(tvshows)]</visible>
						</control>
						<!-- Bullet -->
						<control type="image">
							<width>8</width>
							<height>36</height>
							<texture>Dot.png</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
							<colordiffuse>BulletDiffuse</colordiffuse>
							<visible>!IsEmpty(ListItem.Property(TotalEpisodes)) + [Container.Content(seasons) | Container.Content(tvshows)]</visible>
						</control>
						<!-- Unwatched Episode Count -->
						<control type="label">
							<width min="25" max="1200">auto</width>
							<height>30</height>
							<aligny>center</aligny>
							<font>METF_MediaDetailsSmall</font>
							<textcolor>MediaDetailsEpisodes</textcolor>
							<label>$INFO[ListItem.Property(UnWatchedEpisodes)] $LOCALIZE[16101]</label>
							<visible>!IsEmpty(ListItem.Property(TotalEpisodes)) + [Container.Content(seasons) | Container.Content(tvshows)]</visible>
						</control>
					</control>			
				</control>
			</control>			
			<!-- Browser -->
			<control type="wraplist" id="550">
				<viewtype label="31424">bigwrap</viewtype>
				<posx>-100</posx>
				<posy>40</posy>
				<height>500</height>
				<width>1500</width>				
				<include condition="!Skin.HasSetting(ViewLockdown)">OnUp7000</include>
				<ondown>60</ondown>
				<onleft>550</onleft>
				<onright>550</onright>
				<orientation>horizontal</orientation>
				<focusposition>1</focusposition>
				<scrolltime>200</scrolltime>
				<preloaditems>2</preloaditems>
				<pagecontrol>60</pagecontrol>
				<include>Animation_FadedByMenu</include>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewPosterFanart)</visible>
				<visible>Container.Content(movies) | Container.Content(tvshows)</visible>
				<itemlayout width="260" height="420">
					<control type="group">
						<posx>-30</posx>
						<posy>9</posy>
						<!-- Unfocused Item - Poster -->
						<control type="image">
							<posx>20</posx>
							<posy>21</posy>
							<width>236</width>
							<height>362</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Unfocused Item - Frame -->
						<control type="image">
							<posx>20</posx>
							<posy>21</posy>
							<width>236</width>
							<height>362</height>
							<texture>frames/ClassicFrameGlass_Vertical.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<colordiffuse>GlassDiffuse</colordiffuse>
							<visible>!IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Unfocused Item - Frame -->
						<control type="image">
							<width>285</width>
							<height>408</height>
							<texture>frames/ClassicFrame_PosterSmall.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Unfocused Item - Watched Overlay -->
						<control type="image">
							<posx>220</posx>
							<posy>341</posy>
							<width>32</width>
							<height>32</height>
							<fadetime>200</fadetime>
							<texture>$INFO[ListItem.Overlay]</texture>
							<colordiffuse>WatchedOverlay</colordiffuse>
							<visible>[Container.Content(movies) + !Skin.HasSetting(HideMovieWatchedOverlays)] | [!Container.Content(movies) + !Skin.HasSetting(HideTVWatchedOverlays)]</visible>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="1030" height="420">
					<!-- Focused Item Poster -->
					<control type="group">
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="100,0" start="90" end="100" time="300" tween="sine" easing="inout" />
						</animation>
						<!-- Focused Item - Poster -->
						<control type="image">
							<posx>13</posx>
							<posy>29</posy>
							<width>290</width>
							<height>443</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<fadetime>200</fadetime>
							<visible>!IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Focused Item - Poster Frame -->
						<control type="image">
							<posx>-2</posx>
							<posy>8</posy>
							<width>321</width>
							<height>485</height>
							<fadetime>200</fadetime>
							<texture>frames/ClassicFrame_PosterMedium.png</texture>
							<aspectratio>stretch</aspectratio>
						</control>
						<!-- Focused Item - Watched Overlay -->
						<control type="image">
							<posx>260</posx>
							<posy>425</posy>
							<width>32</width>
							<height>32</height>
							<fadetime>200</fadetime>
							<texture>$INFO[ListItem.Overlay]</texture>
							<colordiffuse>WatchedOverlay</colordiffuse>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>[Container.Content(movies) + !Skin.HasSetting(HideMovieWatchedOverlays)] | [!Container.Content(movies) + !Skin.HasSetting(HideTVWatchedOverlays)]</visible>
						</control>						
					</control>
					<!-- Focused Item Fanart -->
					<control type="group">
						<posx>309</posx>
						<posy>10</posy>
						<control type="image">
							<posx>23</posx>
							<posy>21</posy>
							<width>646</width>
							<height>362</height>
							<texture>frames/ClassicFrame_SegmentedDiffuse.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!IsEmpty(ListItem.Title) + !Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<control type="image">
							<posx>23</posx>
							<posy>21</posy>
							<width>646</width>
							<height>362</height>
							<texture>frames/ClassicFrame_Background.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!IsEmpty(ListItem.Title) + Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<control type="image">
							<posx>23</posx>
							<posy>21</posy>
							<width>646</width>
							<height>362</height>
							<texture fallback="home_art/movies.jpg" diffuse="frames/ClassicFrame_SegmentedDiffuse.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!IsEmpty(ListItem.Title) + !Skin.HasSetting(NoSegmentedFanart) + ![Skin.HasSetting(landscape_jpg) + Container.Content(tvshows)]</visible>
						</control>
						<control type="image">
							<posx>23</posx>
							<posy>21</posy>
							<width>646</width>
							<height>362</height>
							<texture fallback="MissingLandscapeJpeg.jpg" diffuse="frames/ClassicFrame_SegmentedDiffuse.png">$INFO[ListItem.Path]landscape.jpg</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!IsEmpty(ListItem.Title) + !Skin.HasSetting(NoSegmentedFanart) + [Skin.HasSetting(landscape_jpg) + Container.Content(tvshows)]</visible>
						</control>
						<control type="image">
							<posx>23</posx>
							<posy>21</posy>
							<width>646</width>
							<height>362</height>
							<texture fallback="home_art/movies.jpg">$INFO[ListItem.Property(Fanart_Image)]</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!IsEmpty(ListItem.Title) + Skin.HasSetting(NoSegmentedFanart) + ![Skin.HasSetting(landscape_jpg) + Container.Content(tvshows)]</visible>
						</control>
						<!-- Focused Item Landscape -->
						<control type="image">
							<posx>23</posx>
							<posy>21</posy>
							<width>646</width>
							<height>362</height>
							<texture fallback="MissingLandscapeJpeg.jpg">$INFO[ListItem.Path]landscape.jpg</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!IsEmpty(ListItem.Title) + Skin.HasSetting(NoSegmentedFanart) + [Skin.HasSetting(landscape_jpg) + Container.Content(tvshows)]</visible>
						</control>
						<!-- Focused Item Segmented Fanart Frame -->
						<control type="image">
							<width>700</width>
							<height>410</height>
							<texture>frames/ClassicFrame_Segmented.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!IsEmpty(ListItem.Title) + !Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<!-- Focused Item Normal Fanart Frame -->						
						<control type="image">
							<width>700</width>
							<height>410</height>
							<texture>frames/ClassicFrame_FanartMedium.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!IsEmpty(ListItem.Title) + Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
					</control>
				</focusedlayout>
			</control>
			<include>ScrollBar_Horizontal</include>
		</control>
	</include>
</includes>
