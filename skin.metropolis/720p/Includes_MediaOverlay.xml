<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Global_MediaOverlay">
		<control type="group">
			<visible>!Window.IsActive(visualisation) + String.IsEmpty(Window(videos).Property(PlayingBackgroundMedia))</visible>
			<control type="group" id="9904">
				<posx>20</posx>
				<posy>560</posy>
				<visible>Skin.HasSetting(MediaOverlay)</visible>
				<control type="image">
					<posx>18</posx>
					<posy>8</posy>
					<width>135</width>
					<height>135</height>
					<include>Animation_SpinningCD</include>
					<visible>Player.HasAudio</visible>
				</control>
				<control type="image">
					<description>cover image</description>
					<width>150</width>
					<height>150</height>
					<texture background="true">$INFO[MusicPlayer.Cover]</texture>
					<aspectratio aligny="bottom">scale</aspectratio>
					<bordertexture border="8">frames/thumb_border_square.png</bordertexture>
					<bordersize>6</bordersize>
					<visible>Player.HasAudio</visible>
				</control>
				<!-- Video overlay for screens other than Default Home Screen -->
				<control type="videowindow" id="1">
					<description>Video Preview</description>
					<posy>13</posy>
					<width>220</width>
					<height>124</height>
					<visible>Player.HasVideo + !Window.IsActive(selectdialog) + [!Skin.HasSetting(home1) | ![Window.IsActive(home) + ![Skin.HasSetting(Home2) | Skin.HasSetting(Home3)]]]</visible>
				</control>
				<!-- Default Home Screen video overlay is in Includes_Home1.xml -->
			</control>
			<control type="group" id="9905">
				<posx>30</posx>
				<posy>560</posy>
				<animation effect="fade" time="200">VisibleChange</animation>
				<animation effect="slide" start="0,0" end="204,0" time="600" tween="cubic" easing="out" condition="Skin.HasSetting(MediaOverlay)">Conditional</animation>
				<visible>Player.HasAudio + Skin.HasSetting(MusicSongInfoOverlay)</visible>
				<!-- 9001 = submenu, 9901/9902 = media flags; 8000-800x are widgets; plotbox automatically adjusts itself to make room -->
				<visible>![Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003)] + ![Control.IsVisible(9901) | Control.IsVisible(9902)] + [[[Skin.HasSetting(Home2) | Skin.HasSetting(Home3)] + !Control.IsVisible(9001)] | [![Skin.HasSetting(Home2) | Skin.HasSetting(Home3)] + [[Skin.HasSetting(HideUnfocusedWidgets) + ![Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003)]] | String.IsEmpty(Container(9000).ListItem.Property(widget))]]]</visible>

				<control type="label">
					<posx>0</posx>
					<posy>92</posy>
					<width>860</width>
					<scrollout>false</scrollout>
					<pauseatend>1800</pauseatend>
					<scrollspeed>40</scrollspeed>
					<scroll>true</scroll>
					<font>METF_TitleTextMedium</font>
					<label>$INFO[MusicPlayer.Title]</label>
					<textcolor>NowPlayingDetails</textcolor>
					<animation effect="slide" end="0,26" condition="String.IsEmpty(MusicPlayer.Artist) + String.IsEmpty(MusicPlayer.Album)">Conditional</animation>
				</control>
				<control type="grouplist">
					<posx>0</posx>
					<posy>120</posy>
					<width>1000</width>
					<itemgap>10</itemgap>
					<align>left</align>
					<orientation>horizontal</orientation>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<height>30</height>
						<aligny>center</aligny>
						<width min="10" max="400">auto</width>
						<font>METF_DialogLarge</font>
						<label>$INFO[MusicPlayer.Artist]</label>
						<textcolor>NowPlayingTitle</textcolor>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<height>30</height>
						<aligny>center</aligny>
						<width min="10" max="460">auto</width>
						<font>METF_DialogLarge</font>
						<label>$INFO[MusicPlayer.Album]</label>
						<textcolor>NowPlayingDetails</textcolor>
					</control>
				</control>
			</control>
		</control>
	</include>
</includes>
