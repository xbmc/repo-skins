<includes>
	<include name="Viewtype_Panel_Square">
		<control type="group">
			<visible>Control.IsVisible(559)</visible>
			<control type="group">
				<include>Animation_ZoomInZoomOut</include>
				<!--<include>Animation_ZoomedByMenu</include>-->
				<include>Animation_HiddenByInfo</include>
				<posx>30</posx>
				<posy>20</posy>
				<!-- Fanart Image -->
				<control type="group">
					<include>Animation_FadedByMenu</include>
					<include>Animation_CommonFade</include>
					<include>Animation_OpenCloseFade</include>
					<visible>Window.IsActive(musiclibrary) + [Container.Content(artists) | Container.Content(albums)]</visible>
					<control type="image">
						<posx>25</posx>
						<posy>49</posy>
						<width>324</width>
						<height>180</height>
						<texture fallback="home/music.jpg">$INFO[ListItem.Property(Fanart_Image)]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
					</control>
					<control type="image">
						<posx>4</posx>
						<posy>29</posy>
						<width>364</width>
						<height>220</height>
						<texture>frames/ClassicFrame_FanartSmall.png</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
					</control>
				</control>
				<control type="group">
					<posx>10</posx>
					<posy>246</posy>
					<!-- Artist -->
					<control type="label">
						<width>380</width>
						<height>50</height>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<scrollsuffix>   |   </scrollsuffix>
						<font>METF_TitleTextLarge</font>
						<textcolor>TextNF</textcolor>
						<label>$INFO[ListItem.Artist]</label>
					</control>
					<!-- Album Genre -->
					<control type="label">
						<posy>32</posy>
						<width>380</width>
						<height>50</height>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<scrollsuffix>   |   </scrollsuffix>
						<font>METF_TitleTextSmall</font>
						<textcolor>MediaDetailsGenre</textcolor>
						<label>$INFO[ListItem.Genre]</label>
						<visible>!IsEmpty(ListItem.Genre) + Container.Content(albums)</visible>
					</control>
					<!-- Artist Genre -->
					<control type="label">
						<posy>32</posy>
						<width>380</width>
						<height>50</height>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<scrollsuffix>   |   </scrollsuffix>
						<font>METF_TitleTextSmall</font>
						<textcolor>MediaDetailsGenre</textcolor>
						<label>$INFO[ListItem.Property(Artist_Genre)]</label>
						<visible>!IsEmpty(ListItem.Property(Artist_Genre)) + Container.Content(artists)</visible>
					</control>
				</control>
			</control>
			<!-- Album Name -->
			<control type="fadelabel">
				<posx>440</posx>
				<posy>480</posy>
				<width>820</width>
				<height>50</height>
				<align>center</align>
				<aligny>center</aligny>
				<scrollout>false</scrollout>
				<pauseatend>600</pauseatend>
				<scrollspeed>20</scrollspeed>
				<font>METF_TitleText</font>
				<textcolor>MediaDetailsGenre</textcolor>
				<label>$INFO[ListItem.Label]</label>
				<visible>Container.Content(Albums)</visible>
			</control>							
			<!-- Browser -->
			<control type="panel" id="559">
				<viewtype label="31298">icon</viewtype>
				<posx>440</posx>
				<posy>60</posy>
				<width>820</width>
				<height>420</height>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>
				<onright>61</onright>
				<pagecontrol>61</pagecontrol>
				<preloaditems>2</preloaditems>
				<include>Animation_ZoomInZoomOut</include>
				<!--<include>Animation_ZoomedByMenu</include>-->
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewPanelSquare)</visible>
				<visible>Window.IsActive(programs) | Container.Content(Addons) | Container.Content(Albums) | Container.Content(Artists)</visible>
				<itemlayout width="205" height="205">
					<control type="image">
						<posx>25</posx>
						<posy>25</posy>
						<width>155</width>
						<height>155</height>
						<texture>frames/ClassicFrame_Background.png</texture>
						<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
						<visible>!substring(ListItem.Icon,default)</visible>
					</control>
					<control type="image">
						<posx>25</posx>
						<posy>25</posy>
						<width>155</width>
						<height>155</height>
						<texture background="true" fallback="DefaultThumb.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>2</posy>
						<width>195</width>
						<height>197</height>
						<texture>frames/ClassicFrame_SquareSmall.png</texture>
						<visible>!substring(ListItem.Icon,default)</visible>
					</control>
				</itemlayout>
				<focusedlayout width="205" height="205">
					<control type="group">
						<animation reversible="true" effect="zoom" center="auto" start="100" end="120" time="200" tween="sine" easing="inout">focus</animation>
						<animation reversible="true" effect="zoom" center="auto" start="120" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
						<control type="image">
							<posx>25</posx>
							<posy>25</posy>
							<width>155</width>
							<height>155</height>
							<texture>frames/ClassicFrame_Background.png</texture>
							<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
							<visible>!substring(ListItem.Icon,default)</visible>
						</control>
						<control type="image">
							<posx>25</posx>
							<posy>25</posy>
							<width>155</width>
							<height>155</height>
							<texture background="true" fallback="DefaultThumb.png">$INFO[ListItem.Icon]</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
						<control type="image">
							<posx>5</posx>
							<posy>2</posy>
							<width>195</width>
							<height>197</height>
							<texture>frames/ClassicFrame_SquareSmall.png</texture>
							<visible>!substring(ListItem.Icon,default)</visible>
						</control>
					</control>					
				</focusedlayout>
			</control>
			<include>ScrollBar_Vertical</include>
		</control>
	</include>
</includes>
