					<control type="image">
						<posx>35</posx>
						<posy>33</posy>
						<width>500</width>
						<height>2</height>
						<aligny>center</aligny>
						<texture>VideoInfoLine.png</texture>
						<colordiffuse>FilesDividerDiffuse</colordiffuse>
					</control>
					<!-- Items in Video Library -->
					<control type="label">
						<posx>45</posx>
						<posy>0</posy>
						<width>475</width>
						<height>35</height>
						<align>left</align>
						<aligny>center</aligny>
						<label>$VAR[ListItemTitle]</label>
						<font>METF_TitleText</font>
						<textcolor>LowListTitle</textcolor>
						<visible>Window.IsActive(videos)</visible>
					</control>
					<!-- Watched Overlay for Items in Video Library -->
					<control type="image">
						<posx>4</posx>
						<posy>5</posy>
						<width>24</width>
						<height>24</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>!ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
					<!-- Watched Overlay for In-Progress Items in Video Library -->
					<control type="image">
						<posx>-2</posx>
						<posy>0</posy>
						<width>35</width>
						<height>35</height>
						<texture>flags/Progress/$INFO[ListItem.PercentPlayed].png</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
					<!-- Items NOT in Video Library -->
					<control type="label">
						<posx>45</posx>
						<posy>0</posy>
						<width>475</width>
						<height>35</height>
						<align>left</align>
						<aligny>center</aligny>
						<font>METF_TitleText</font>
						<textcolor>TextNF</textcolor>
						<selectedcolor>TextFO</selectedcolor>
						<label>$VAR[ListItemTitle]</label>
						<scroll>false</scroll>
						<visible>!Window.IsActive(videos)</visible>
					</control>
					<!-- Watched Overlay for Items NOT in Video Library -->
					<control type="image">
						<posx>4</posx>
						<posy>5</posy>
						<width>24</width>
						<height>24</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>!Window.IsActive(videos) + String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
					</control>
				</itemlayout>
				<focusedlayout width="535" height="35">
					<!-- List Line Item Divider -->
					<control type="image">
						<posx>35</posx>
						<posy>33</posy>
						<width>500</width>
						<height>2</height>
						<aligny>center</aligny>
						<texture>VideoInfoLine.png</texture>
						<colordiffuse>FilesDividerDiffuse</colordiffuse>
					</control>
					<control type="image">
						<posx>35</posx>
						<posy>0</posy>
						<width>500</width>
						<height>35</height>
						<texture>FocusLine.png</texture>
						<colordiffuse>FocusBar</colordiffuse>
					</control>
					<!-- Items in Video Library -->
					<control type="label">
						<posx>45</posx>
						<posy>0</posy>
						<width>475</width>
						<height>35</height>
						<align>left</align>
						<aligny>center</aligny>
						<scrollout>false</scrollout>
						<pauseatend>1800</pauseatend>
						<scrollspeed>40</scrollspeed>
						<scroll>true</scroll>
						<label>$VAR[ListItemTitle]</label>
						<font>METF_TitleText</font>
						<textcolor>FocusBarText</textcolor>
						<visible>Window.IsActive(videos)</visible>
					</control>
					<!-- Watched Overlay for Items in Video Library -->
					<control type="image">
						<posx>4</posx>
						<posy>5</posy>
						<width>24</width>
						<height>24</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>!ListItem.IsResumable + Window.IsActive(videos) + [[Container.Content(movies) + !Skin.HasSetting(HideMovieWatchedOverlays)] | [!Container.Content(movies) + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
					<!-- Watched Overlay for In-Progress Items in Video Library -->
					<control type="image">
						<posx>-2</posx>
						<posy>0</posy>
						<width>35</width>
						<height>35</height>
						<texture>flags/Progress/$INFO[ListItem.PercentPlayed].png</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>ListItem.IsResumable + Window.IsActive(videos) + [[Container.Content(movies) + !Skin.HasSetting(HideMovieWatchedOverlays)] | [!Container.Content(movies) + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
					<!-- Items NOT in Video Library -->
					<control type="label">
						<posx>45</posx>
						<posy>0</posy>
						<width>475</width>
						<height>35</height>
						<align>left</align>
						<aligny>center</aligny>
						<scrollout>false</scrollout>
						<pauseatend>1800</pauseatend>
						<scrollspeed>40</scrollspeed>
						<scroll>true</scroll>
						<font>METF_TitleText</font>
						<textcolor>FocusBarText</textcolor>
						<selectedcolor>FocusBarText</selectedcolor>
						<label>$VAR[ListItemTitle]</label>
						<visible>!Window.IsActive(videos)</visible>
					</control>
					<!-- Watched Overlay for Items NOT in Video Library -->
					<control type="image">
						<posx>4</posx>
						<posy>5</posy>
						<width>24</width>
						<height>24</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>!Window.IsActive(videos) + String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
					</control>
				</focusedlayout>
			</control>
			<!-- Thumbnails -->
			<control type="group">
				<posy>-80</posy>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>

				<!-- LEFT SIDE OF SCREEN -->
				<!-- Default Poster Image  -->
				<control type="image">
					<posx>37</posx>
					<posy>160</posy>
					<width>300</width>
					<height>440</height>
					<texture>frames/ClassicFrame_Background.png</texture>
					<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
					<visible>[!String.IsEmpty(ListItem.Title) + [Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows)]] | [Container.Content(seasons) | Container.Content(episodes)]</visible>
				</control>
				<control type="image">
					<posx>37</posx>
					<posy>160</posy>
					<width>300</width>
					<height>440</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio scalediffuse="false">keep</aspectratio>
					<fadetime>300</fadetime>
					<visible>Window.IsActive(videos) + ![Container.Content(seasons) | Container.Content(episodes) | Container.Content(musicvideos) | Container.Content(artists) | Container.Content(albums) | Container.Content(addons)] + String.IsEmpty(ListItem.Title)</visible>
				</control>
				<control type="image">
					<posx>37</posx>
					<posy>160</posy>
					<width>300</width>
					<height>440</height>
					<texture background="true" fallback="DefaultThumb.png">$VAR[PosterThumb]</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<fadetime>300</fadetime>
					<visible>Window.IsActive(videos) + ![Container.Content(seasons) | Container.Content(episodes) | Container.Content(musicvideos) | Container.Content(artists) | Container.Content(albums) | Container.Content(addons)] + !String.IsEmpty(ListItem.Title)</visible>
				</control>
				<!-- Poster Image for TV Show Seasons and Episodes -->
				<control type="image">
					<posx>37</posx>
					<posy>160</posy>
					<width>300</width>
					<height>440</height>
					<texture background="true" fallback="DefaultThumb.png">$INFO[ListItem.Art(tvshow.poster)]</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<fadetime>300</fadetime>
					<visible>Container.Content(seasons) | Container.Content(episodes)</visible>
				</control>
				<!-- Frame for poster -->
				<control type="image">
					<posx>20</posx>
					<posy>135</posy>
					<width>335</width>
					<height>490</height>
					<texture>frames/ClassicFrame_PosterMedium.png</texture>
					<aspectratio>stretch</aspectratio>
					<fadetime>300</fadetime>
					<visible>[!String.IsEmpty(ListItem.Title) + [Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows)]] | [Container.Content(seasons) | Container.Content(episodes)]</visible>
				</control>
				<!-- Music Videos -->
				<control type="image">
					<posx>37</posx>
					<posy>165</posy>
					<width>300</width>
					<height>440</height>
					<fadetime>100</fadetime>
					<aspectratio align="right" aligny="bottom">keep</aspectratio>
					<texture fallback="DefaultThumb.png">$INFO[ListItem.Icon]</texture>
					<visible>Container.Content(musicvideos)</visible>
				</control>
				<!-- Artist/Album Cover and Addons-->
				<control type="image">
					<posx>32</posx>
					<posy>290</posy>
					<width>300</width>
					<height>300</height>
					<texture>frames/ClassicFrame_Background.png</texture>
					<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
					<visible>[Container.Content(artists) | Container.Content(albums) | Container.Content(songs) | Container.Content(addons)] + [!String.StartsWith(ListItem.Icon,default) | String.StartsWith(ListItem.Icon,defaultalbumcover)] + !String.IsEmpty(ListItem.Icon)</visible>
				</control>
				<control type="image">
					<posx>32</posx>
					<posy>290</posy>
					<width>300</width>
					<height>300</height>
					<fadetime>100</fadetime>
					<aspectratio align="right" aligny="bottom">stretch</aspectratio>
					<texture fallback="DefaultThumb.png">$INFO[ListItem.Icon]</texture>
					<visible>Container.Content(artists) | Container.Content(albums) | Container.Content(songs) | Container.Content(addons)</visible>
				</control>
				<control type="image">
					<posx>12</posx>
					<posy>269</posy>
					<width>340</width>
					<height>340</height>
					<texture>frames/ClassicFrame_SquareMedium.png</texture>
					<visible>[Container.Content(artists) | Container.Content(albums) | Container.Content(songs) | Container.Content(addons)] + [!String.StartsWith(ListItem.Icon,default) | String.StartsWith(ListItem.Icon,defaultalbumcover)] + !String.IsEmpty(ListItem.Icon)</visible>
				</control>

				<!-- RIGHT SIDE OF SCREEN -->
				<!-- Movie Fanart Image -->
				<control type="image">
					<posx>952</posx>
					<posy>435</posy>
					<width>293</width>
					<height>165</height>
					<texture fallback="home_art/movies.jpg" background="true">$VAR[LandscapeFanart]</texture>
					<fadetime>300</fadetime>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<visible>Window.IsActive(videos) + ![Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)]</visible>
				</control>
				<!-- TV Show Fanart Image -->
				<control type="image">
					<posx>952</posx>
					<posy>435</posy>
					<width>293</width>
					<height>165</height>
					<texture fallback="home_art/tvshows.jpg" background="true">$VAR[LandscapeFanart]</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<fadetime>300</fadetime>
					<visible>Container.Content(tvshows)</visible>
				</control>
				<control type="image">
					<posx>947</posx>
					<posy>160</posy>
					<width>300</width>
					<height>440</height>
					<texture background="true">$INFO[ListItem.Art(poster)]</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<fadetime>300</fadetime>
					<visible>Container.Content(seasons)</visible>
				</control>
				<control type="image">
					<posx>952</posx>
					<posy>435</posy>
					<width>293</width>
					<height>165</height>
					<texture background="true">$INFO[ListItem.Thumb]</texture>
					<aspectratio scalediffuse="false">scale</aspectratio>
					<fadetime>300</fadetime>
					<visible>Container.Content(episodes)</visible>
				</control>
				<!-- Music Fanart Image -->
				<control type="image">
					<posx>952</posx>
					<posy>435</posy>
					<width>293</width>
					<height>165</height>
					<texture fallback="home_art/music.jpg" background="true">$VAR[LandscapeFanart]</texture>
					<fadetime>300</fadetime>
					<aspectratio scalediffuse="false">scale</aspectratio>
					<visible>Window.IsActive(music)</visible>
				</control>
				<!-- Addons Fanart Image -->
				<control type="image">
					<posx>952</posx>
					<posy>435</posy>
					<width>293</width>
					<height>165</height>
					<texture fallback="home_art/programs.jpg" background="true">$VAR[LandscapeFanart]</texture>
					<aspectratio scalediffuse="false">scale</aspectratio>
					<fadetime>300</fadetime>
					<visible>Container.Content(addons)</visible>
				</control>
				<!-- Frame for Fanart images -->
				<control type="image">
					<posx>952</posx>
					<posy>435</posy>
					<width>293</width>
					<height>165</height>
					<texture>frames/ClassicFrameGlass_Horizontal.png</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<colordiffuse>GlassDiffuse</colordiffuse>
					<fadetime>300</fadetime>
					<visible>!Container.Content(seasons)</visible>
				</control>
				<control type="image">
					<posx>936</posx>
					<posy>417</posy>
					<width>326</width>
					<height>202</height>
					<texture>frames/ClassicFrame_FanartSmall.png</texture>
					<fadetime>300</fadetime>
					<visible>!Container.Content(seasons)</visible>
				</control>
				<!-- Frame for Season poster -->
				<control type="image">
					<posx>930</posx>
					<posy>135</posy>
					<width>335</width>
					<height>490</height>
					<texture>frames/ClassicFrame_PosterMedium.png</texture>
					<aspectratio>stretch</aspectratio>
					<fadetime>300</fadetime>
					<visible>Container.Content(seasons) + !String.IsEmpty(ListItem.Art(Poster))</visible>
				</control>
			</control>
			<!-- Info Details -->
			<control type="group">
				<posy>-80</posy>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<include>VisibleIfNotMovieSet</include>
				<control type="image">
					<posx>360</posx>
					<posy>413</posy>
					<width>890</width>
					<height>3</height>
					<texture>VideoInfoLine.png</texture>
					<colordiffuse>LowListDivider</colordiffuse>
					<visible>![Container.Content(Seasons) | Container.Content(sets)]</visible>
				</control>
				<control type="image">
					<posx>360</posx>
					<posy>413</posy>
					<width>560</width>
					<height>3</height>
					<texture>VideoInfoLine.png</texture>
					<colordiffuse>LowListDivider</colordiffuse>
					<visible>Container.Content(seasons)</visible>
				</control>
				<!-- Season - Unwatched Episode Number -->
				<control type="label">
					<posx>915</posx>
					<posy>380</posy>
					<width>550</width>
					<height>27</height>
					<align>right</align>
					<font>METF_MediaDetails</font>
					<textcolor>MediaDetailsEpisodes</textcolor>
					<label>$INFO[ListItem.Property(UnWatchedEpisodes)] $LOCALIZE[16101]</label>
					<visible>Container.Content(seasons)</visible>
				</control>
				<!-- Episode Aired Date -->
				<control type="label">
					<posx>1245</posx>
					<posy>380</posy>
					<width>550</width>
					<height>27</height>
					<align>right</align>
					<label>$LOCALIZE[20416] $INFO[ListItem.Premiered]</label>
					<font>METF_MediaDetails</font>
					<textcolor>MediaDetailsInfo</textcolor>
					<visible>!String.IsEmpty(ListItem.Premiered) + Container.Content(episodes)</visible>
				</control>
				<!-- Addon Author -->
				<control type="label">
					<posx>1245</posx>
					<posy>380</posy>
					<width>550</width>
					<height>27</height>
					<align>right</align>
					<label>[COLOR=MediaDetailsGenre]$LOCALIZE[31423]:[/COLOR] $INFO[ListItem.AddonCreator]</label>
					<font>METF_MediaDetails</font>
					<textcolor>MediaDetailsInfo</textcolor>
					<visible>!String.IsEmpty(ListItem.AddonCreator) + Container.Content(addons)</visible>
				</control>
				<!-- Genre -->
				<control type="label">
					<posx>1245</posx>
					<posy>380</posy>
					<width>590</width>
					<height>27</height>
					<align>right</align>
					<label>$INFO[ListItem.Genre]</label>
					<font>METF_MediaDetails</font>
					<textcolor>MediaDetailsGenre</textcolor>
					<visible>!String.IsEmpty(ListItem.Genre) + [Container.Content(artists) | Container.Content(albums) | Container.Content(songs) | Container.Content(movies) | Container.Content(tvshows) | Container.Content(musicvideos)]</visible>
				</control>
				<control type="label">
					<posx>1245</posx>
					<posy>380</posy>
					<width>590</width>
					<height>27</height>
					<align>right</align>
					<label>$INFO[ListItem.Property(Artist_Genre)]</label>
					<font>METF_MediaDetails</font>
					<textcolor>MediaDetailsGenre</textcolor>
					<visible>String.IsEmpty(ListItem.Genre) + !String.IsEmpty(ListItem.Property(Artist_Genre))</visible>
				</control>
				<!-- Episode Duration -->
				<control type="label">
					<posx>365</posx>
					<posy>380</posy>
					<width>225</width>
					<height>27</height>
					<align>left</align>
					<font>METF_MediaDetails</font>
					<textcolor>MediaDetailsDuration</textcolor>
					<label>$INFO[ListItem.Duration]</label>
					<visible>Container.Content(episodes) + !String.IsEmpty(listitem.Duration)</visible>
				</control>
				<!-- Tagline -->
				<control type="textbox">
					<posx>870</posx>
					<posy>165</posy>
					<width>380</width>
					<height>166</height>
					<align>right</align>
					<font>METF_PlotText</font>
					<textcolor>TextNF</textcolor>
					<label>$INFO[ListItem.Tagline]</label>
					<autoscroll time="4000" delay="4000" repeat="5000">Skin.HasSetting(autoscroll)</autoscroll>
					<visible>Container.Content(movies) + !String.IsEmpty(ListItem.Tagline) + !Skin.HasSetting(Hide_MovieTagline)</visible>
					<include>Animation_HiddenByInfo</include>
				</control>
				<!-- Year/Duration/Number of Episodes -->
				<control type="grouplist">
					<posx>365</posx>
					<posy>380</posy>
					<width>300</width>
					<align>left</align>
					<itemgap>10</itemgap>
					<orientation>horizontal</orientation>
					<include>Animation_OpenCloseFade</include>
					<include>Animation_FadedByMenu</include>
					<include>Animation_HiddenByInfo</include>
					<include>ViewDetailsOneLineJustified</include>
				</control>
			</control>
			<!-- Scroll Bar -->
			<control type="scrollbar" id="998">
				<posx>902</posx>
				<posy>342</posy>
				<width>24</width>
				<height>190</height>
				<onleft>905</onleft>
				<onright>905</onright>
				<visible allowhiddenfocus="true">Control.IsVisible(905) + Control.HasFocus(998)</visible>
				<texturesliderbackground border="0,14,0,14">ScrollbarV.png</texturesliderbackground>
				<textureslidernibfocus>ScrollbarVnibFO.png</textureslidernibfocus>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<include>Animation_CommonFade</include>
				<animation effect="fade" start="60" end="100" time="400" tween="cubic" easing="inout" condition="Control.HasFocus(998)">Conditional</animation>
			</control>
		</control>
	</include>
</includes>
