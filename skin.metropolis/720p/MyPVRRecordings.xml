<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50</views>
	<controls>
		<include>Global_Background</include>

		<control type="group">
			<description>Recordings group</description>
			<visible>Control.IsVisible(50)</visible>
			<control type="list" id="50">
				<posx>490</posx>
				<posy>90</posy>
				<width>710</width>
				<height>434</height>
				<onleft>102</onleft>
				<onright>72</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				<pagecontrol>72</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="40" width="700">
					<control type="image">
						<description>Recording icon</description>
						<posx>10</posx>
						<posy>5</posy>
						<width>30</width>
						<height>30</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<description>Recording label</description>
						<posx>50</posx>
						<posy>0</posy>
						<width>630</width>
						<height>40</height>
						<align>left</align>
						<aligny>center</aligny>
						<include>LiveTVLabel</include>
						<info>ListItem.Label</info>
					</control>
					<control type="label">
						<description>Recording date label</description>
						<posx>690</posx>
						<posy>0</posy>
						<width>500</width>
						<height>40</height>
						<align>right</align>
						<aligny>center</aligny>
						<include>LiveTVLabel</include>
						<info>ListItem.Date</info>
					</control>
				</itemlayout>
				<focusedlayout height="40" width="700">
					<control type="image">
						<description>Focus selection</description>
						<width>1210</width>
						<height>40</height>
						<texture>ButtonFO.png</texture>
					</control>
					<control type="image">
						<description>Recording icon</description>
						<posx>10</posx>
						<posy>5</posy>
						<width>30</width>
						<height>30</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<description>Recording label</description>
						<posx>50</posx>
						<posy>0</posy>
						<width>630</width>
						<height>40</height>
						<align>left</align>
						<aligny>center</aligny>
						<include>LiveTVLabel</include>
						<info>ListItem.Label</info>
					</control>
					<control type="label">
						<description>Recording date label</description>
						<posx>690</posx>
						<posy>0</posy>
						<width>500</width>
						<height>40</height>
						<align>right</align>
						<aligny>center</aligny>
						<include>LiveTVLabel</include>
						<info>ListItem.Date</info>
					</control>
				</focusedlayout>
			</control>

			<!-- XXX: fix -->
			<control type="scrollbar" id="72">
				<posx>1210</posx>
				<posy>80</posy>
				<width>25</width>
				<height>460</height>
 				<texturesliderbackground></texturesliderbackground>
				<textureslidernibfocus>ScrollbarVnibFO.png</textureslidernibfocus>
				<onleft>50</onleft>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
			<control type="group">
				<posx>80</posx>
				<posy>100</posy>
				<control type="image">
					<description>Recording icon</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>380</width>
					<height>270</height>
					<aspectratio aligny="bottom">keep</aspectratio>
					<texture fallback="DefaultVideoCover.png">$INFO[Container(50).ListItem.Icon]</texture>
				</control>
				<control type="label">
					<description>Recording title label</description>
					<posx>0</posx>
					<posy>290</posy>
					<width>380</width>
					<height>25</height>
					<scroll>true</scroll>
					<align>center</align>
					<aligny>center</aligny>
					<include>LiveTVLabel</include>
					<info>ListItem.Title</info>
				</control>
			</control>
			<!-- TV Channel Plot (Bottom) -->
			<include>LiveTVPlot</include>
		</control>

		<!-- Navigation Menu -->
		<control type="group">
			<include>Animation_NavMenu</include>
			<include>NavMenuBackground</include>
			<control type="grouplist" id="7000">
				<include>NavMenuCommon</include>
				<onback>50</onback>
				<onleft>50</onleft>
				<onright>50</onright>
				<include>PVR_NavMenu</include>
				<include>NavMenuListPlaying</include>
			</control>
		</control>

		<include>PVR_Headers</include>
		<include>Global_Weather</include>
		<include>Global_Time</include>
		<include condition="Skin.HasSetting(DebugGrid)">Object_DebugGrid</include>
	</controls>
</window>
