<window id="115">
	<defaultcontrol>901</defaultcontrol>
	<visible>Window.IsActive(fullscreenvideo) + !Window.IsActive(videoosd) + !Window.IsActive(fullscreeninfo) + [Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding]</visible>
	<controls>
		<control type="group">
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByOSDSettings</include>
			<!-- Background Image -->
			<control type="group">
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByOSDSettings</include>
			<!-- Background Image -->
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>80</height>
				<texture>osd/OSDdialogback_top.png</texture>
				<colordiffuse>OSDBackgroundColor</colordiffuse>
				<visible>!IsEmpty(VideoPlayer.Plot)</visible>
			</control>
			<!-- Plot -->
			<control type="textbox">
				<posx>225</posx>
				<posy>5</posy>
				<width>830</width>
				<height>70</height>
				<align>justify</align>
				<font>METF_PlotTextMedium</font>
				<textcolor>TextNF</textcolor>
				<label>$INFO[VideoPlayer.Plot]</label>
				<autoscroll time="4000" delay="16000" repeat="8000">Skin.HasSetting(AutoScroll)</autoscroll>
				<visible>!IsEmpty(VideoPlayer.Plot) + Player.Paused + !Skin.HasSetting(Slim_Seekbar)</visible>
			</control> -->
		</control>
		<!-- Director -->
		<control type="grouplist">
			<posx>250</posx>
			<posy>39</posy>
			<width>750</width>
			<height>25</height>
			<itemgap>8</itemgap>
			<align>left</align>
			<orientation>horizontal</orientation>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByOSDSettings</include>
			<visible>!IsEmpty(VideoPlayer.Plot)</visible>
			<control type="label">
				<width min="0" max="750">auto</width>
				<height>25</height>
				<aligny>center</aligny>
				<font>METF_PlotTextMedium</font>
				<textcolor>TextFO</textcolor>
				<label>[B]$LOCALIZE[20339]:[/B]</label>
				<visible>IsEmpty(VideoPlayer.Plot) + !Skin.HasSetting(Slim_Seekbar)</visible>
			</control>
			<control type="label">
				<width min="0" max="750">auto</width>
				<height>25</height>
				<aligny>center</aligny>
				<font>METF_PlotTextMedium</font>
				<textcolor>TextNF</textcolor>
				<label>$INFO[VideoPlayer.Director]</label>
				<visible>IsEmpty(VideoPlayer.Plot) + !Skin.HasSetting(Slim_Seekbar)</visible>
			</control>
		</control>
		<!-- Genre -->
		<control type="grouplist">
			<posx>250</posx>
			<posy>14</posy>
			<width>750</width>
			<height>25</height>
			<itemgap>8</itemgap>
			<align>left</align>
			<orientation>horizontal</orientation>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByOSDSettings</include>
			<visible>IsEmpty(VideoPlayer.Plot)</visible>
			<control type="label">
				<width min="0" max="750">auto</width>
				<height>25</height>
				<aligny>center</aligny>
				<font>METF_PlotTextMedium</font>
				<textcolor>TextFO</textcolor>
				<label>[B]$LOCALIZE[515]:[/B]</label>
				<visible>!IsEmpty(VideoPlayer.Genre)</visible>
			</control>
			<control type="label">
				<width min="0" max="750">auto</width>
				<height>25</height>
				<aligny>center</aligny>
				<font>METF_PlotTextMedium</font>
				<textcolor>TextNF</textcolor>
				<label>$INFO[VideoPlayer.Genre]</label>
				<visible>!IsEmpty(VideoPlayer.Genre)</visible>
			</control>
		</control>
		</control>

		<include condition="!Skin.HasSetting(Slim_Seekbar)">OSD_Progress_Bar2</include> 
		<include condition="Skin.HasSetting(Slim_Seekbar)">OSD_Progress_Bar3</include>
		<include>OSD_Player_Details</include>
		<include condition="!Skin.HasSetting(Slim_Seekbar)">MediaInfoVideoPlayer</include>
		<include>OSD_Player_Time</include>
		<include condition="Skin.HasSetting(DebugGrid)">Object_DebugGrid</include>
		<include condition="Skin.HasSetting(DebugMode)">Debug</include>
	</controls>
</window>
