<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_Games_Square">
		<control type="group">
			<visible>Control.IsVisible(951)</visible>
			<control type="group">
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<include>Animation_OpenCloseFade</include>
				<visible>String.Contains(Container.FolderPath,plugin)</visible>
				<!-- Browser label and flags -->
				<control type="group">
					<posx>490</posx>
					<posy>438</posy>
					<!-- Title -->
					<control type="fadelabel">
						<width>800</width>
						<height>50</height>
						<aligny>center</aligny>
						<scrollout>false</scrollout>
						<pauseatend>600</pauseatend>
						<scrollspeed>20</scrollspeed>
						<font>METF_TitleTextLarge</font>
						<textcolor>TitleText</textcolor>
						<label>$VAR[ListItemTitle]</label>
					</control>
					<control type="grouplist">
						<posy>42</posy>
						<width>1200</width>
						<height>30</height>
						<itemgap>10</itemgap>
						<orientation>horizontal</orientation>
						<!-- Year -->
						<control type="label">
							<width min="25" max="1200">auto</width>
							<height>30</height>
							<aligny>center</aligny>
							<font>METF_MediaDetailsSmall</font>
							<textcolor>MediaDetailsYear</textcolor>
							<label>$INFO[ListItem.premiered]</label>
							<visible>!String.IsEmpty(ListItem.premiered) + String.Contains(Container.FolderPath,plugin)</visible>
						</control>
						<!-- Bullet -->
						<control type="image">
							<include>ViewDetailsBullet</include>
							<visible>![String.IsEmpty(ListItem.premiered) | String.IsEmpty(ListItem.studio)]</visible>
						</control>
						<!-- Duration -->
						<control type="label">
							<width min="25" max="1200">auto</width>
							<height>30</height>
							<aligny>center</aligny>
							<font>METF_MediaDetailsSmall</font>
							<textcolor>MediaDetailsDuration</textcolor>
							<label>$INFO[ListItem.studio]</label>
							<visible>!String.IsEmpty(ListItem.studio) + String.Contains(Container.FolderPath,plugin)</visible>
						</control>
						<!-- Bullet -->
						<control type="image">
							<include>ViewDetailsBullet</include>
							<visible>![String.IsEmpty(ListItem.studio) | String.IsEmpty(ListItem.Genre)]</visible>
						</control>				
						<!-- Genre -->
						<control type="label">
							<width min="25" max="1200">auto</width>
							<height>30</height>
							<aligny>center</aligny>
							<font>METF_MediaDetailsSmall</font>
							<textcolor>MediaDetailsGenre</textcolor>
							<label>$INFO[ListItem.Genre]</label>
							<visible>!String.IsEmpty(ListItem.Genre)</visible>
						</control>
					</control>			
				</control>
			</control>			
			<!-- Browser -->
			<control type="wraplist" id="951">
				<viewtype label="31462">bigwrap</viewtype>
				<posx>-100</posx>
				<posy>40</posy>
				<height>500</height>
				<width>1500</width>				
				<include condition="!Skin.HasSetting(ViewLockdown)">OnUp7000</include>
				<ondown>60</ondown>
				<onleft>951</onleft>
				<onright>951</onright>
				<orientation>horizontal</orientation>
				<focusposition>1</focusposition>
				<scrolltime>200</scrolltime>
				<preloaditems>2</preloaditems>
				<pagecontrol>60</pagecontrol>
				<include>Animation_FadedByMenu</include>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewGames)</visible>
				<visible>String.Contains(Container.FolderPath,advanced.launcher)</visible>
				<itemlayout width="408" height="420">
					<control type="group">
						<posx>-180</posx>
						<posy>9</posy>
						<!-- Unfocused Item - Poster -->
						<control type="image">
							<posx>30</posx>
							<posy>24</posy>
							<width>282</width>
							<height>295</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!String.IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Unfocused Item - Frame -->
						<control type="image">
							<posx>20</posx>
							<posy>21</posy>
							<width>304</width>
							<height>304</height>
							<texture>frames/ClassicFrameGlass_Vertical.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<colordiffuse>GlassDiffuse</colordiffuse>
							<visible>!String.IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Unfocused Item - Frame -->
						<control type="image">
							<width>343</width>
							<height>343</height>
							<texture>frames/ClassicFrame_PosterSmall.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!String.IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Unfocused Item - Watched Overlay -->
						<control type="image">
							<posx>268</posx>
							<posy>280</posy>
							<width>32</width>
							<height>32</height>
							<fadetime>200</fadetime>
							<texture>$INFO[ListItem.Overlay]</texture>
							<colordiffuse>WatchedOverlay</colordiffuse>
							<visible>!String.IsEmpty(ListItem.Title)</visible>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="1030" height="420">
					<!-- Focused Item Poster -->
					<control type="group">
						<posx>-236</posx>
						<posy>2</posy>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="100,0" start="90" end="100" time="300" tween="sine" easing="inout" />
						</animation>
						<!-- Focused Item - Poster -->
						<control type="image">
							<posx>21</posx>
							<posy>32</posy>
							<width>357</width>
							<height>357</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<fadetime>200</fadetime>
							<visible>!String.IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Focused Item - Poster Frame -->
						<control type="image">
							<posx>-2</posx>
							<posy>8</posy>
							<width>404</width>
							<height>404</height>
							<fadetime>200</fadetime>
							<texture>frames/ClassicFrame_PosterMedium.png</texture>
							<aspectratio>stretch</aspectratio>
						</control>
					</control>
					<!-- Focused Item Fanart -->
					<control type="group">
						<posx>159</posx>
						<posy>10</posy>
						<control type="image">
							<posx>23</posx>
							<posy>21</posy>
							<width>646</width>
							<height>362</height>
							<texture>frames/ClassicFrame_SegmentedDiffuse.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!String.IsEmpty(ListItem.Title) + !Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<control type="image">
							<posx>23</posx>
							<posy>21</posy>
							<width>646</width>
							<height>362</height>
							<texture>frames/ClassicFrame_Background.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!String.IsEmpty(ListItem.Title) + Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<control type="image">
							<posx>23</posx>
							<posy>21</posy>
							<width>646</width>
							<height>362</height>
							<texture fallback="home_art/games.jpg" diffuse="frames/ClassicFrame_SegmentedDiffuse.png">$INFO[ListItem.Art(fanart)]</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!String.IsEmpty(ListItem.Title) + !Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<control type="image">
							<posx>23</posx>
							<posy>21</posy>
							<width>646</width>
							<height>362</height>
							<texture fallback="home_art/games.jpg">$INFO[ListItem.Art(fanart)]</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!String.IsEmpty(ListItem.Title) + Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<!-- Focused Item Segmented Fanart Frame -->
						<control type="image">
							<width>700</width>
							<height>410</height>
							<texture>frames/ClassicFrame_Segmented.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!String.IsEmpty(ListItem.Title) + !Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<!-- Focused Item Normal Fanart Frame -->						
						<control type="image">
							<width>700</width>
							<height>410</height>
							<texture>frames/ClassicFrame_FanartMedium.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!String.IsEmpty(ListItem.Title) + Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
					</control>
				</focusedlayout>
			</control>
			<include>ScrollBar_Horizontal</include>
		</control>
	</include>
</includes>
