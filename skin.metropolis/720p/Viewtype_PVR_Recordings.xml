<includes>
	<include name="Viewtype_PVR_Recordings">
		<control type="group">
			<description>Recordings group</description>
			<visible>Control.IsVisible(13)</visible>
			<control type="list" id="13">
				<posx>490</posx>
				<posy>90</posy>
				<width>710</width>
				<height>434</height>
				<onleft>34</onleft>
				<onright>72</onright>
				<onup>13</onup>
				<ondown>13</ondown>
				<pagecontrol>72</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="40" width="700">
					<control type="image">
						<description>Recording icon</description>
						<posx>10</posx>
						<posy>5</posy>
						<width>30</width>
						<height>30</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<description>Recording label</description>
						<posx>50</posx>
						<posy>0</posy>
						<width>630</width>
						<height>40</height>
						<align>left</align>
						<aligny>center</aligny>
						<include>LiveTVLabel</include>
						<info>ListItem.Label</info>
					</control>
					<control type="label">
						<description>Recording date label</description>
						<posx>690</posx>
						<posy>0</posy>
						<width>500</width>
						<height>40</height>
						<align>right</align>
						<aligny>center</aligny>
						<include>LiveTVLabel</include>
						<info>ListItem.Date</info>
					</control>
				</itemlayout>
				<focusedlayout height="40" width="700">
					<control type="image">
						<description>Focus selection</description>
						<width>1210</width>
						<height>40</height>
						<texture>ButtonFo.png</texture>
					</control>
					<control type="image">
						<description>Recording icon</description>
						<posx>10</posx>
						<posy>5</posy>
						<width>30</width>
						<height>30</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<description>Recording label</description>
						<posx>50</posx>
						<posy>0</posy>
						<width>630</width>
						<height>40</height>
						<align>left</align>
						<aligny>center</aligny>
						<include>LiveTVLabel</include>
						<info>ListItem.Label</info>
					</control>
					<control type="label">
						<description>Recording date label</description>
						<posx>690</posx>
						<posy>0</posy>
						<width>500</width>
						<height>40</height>
						<align>right</align>
						<aligny>center</aligny>
						<include>LiveTVLabel</include>
						<info>ListItem.Date</info>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="72">
				<posx>1210</posx>
				<posy>80</posy>
				<width>25</width>
				<height>460</height>
 				<texturesliderbackground>-</texturesliderbackground>
 				<textureslidernibfocus>ScrollBarV_Nib_Focus.png</textureslidernibfocus>
				<onleft>13</onleft>
				<onright>34</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
			<control type="group">
				<posx>80</posx>
				<posy>100</posy>
				<control type="image">
					<description>Recording icon</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>380</width>
					<height>270</height>
					<aspectratio aligny="bottom">keep</aspectratio>
					<texture fallback="DefaultVideoCover.png">ListItem.Icon</texture>
				</control>
				<control type="label">
					<description>Recording title label</description>
					<posx>0</posx>
					<posy>290</posy>
					<width>380</width>
					<height>25</height>
					<scroll>true</scroll>
					<align>center</align>
					<aligny>center</aligny>
					<include>LiveTVLabel</include>
					<info>ListItem.Title</info>
				</control>
			</control>
			<!-- TV Channel Plot (Bottom) -->
			<include>LiveTVPlot</include>
		</control>
	</include>
</includes>
