<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_Gallery_Fanart">
		<control type="group">
			<visible>Control.IsVisible(59)</visible>
			<!-- Browser -->
			<control type="panel" id="59">
				<viewtype label="$LOCALIZE[31414] $LOCALIZE[20445]">icon</viewtype>
				<posx>38</posx>
				<posy>65</posy>
				<width>1200</width>
				<height>400</height>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<onup>59</onup>
				<ondown>59</ondown>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>
				<onright>61</onright>
				<pagecontrol>61</pagecontrol>
				<preloaditems>2</preloaditems>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewGalleryFanart)</visible>
				<visible>Window.IsActive(pictures) | [Window.IsActive(videos) + [Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(episodes)]]</visible>
				<itemlayout width="300" height="200">
					<control type="image">
						<posx>22</posx>
						<posy>29</posy>
						<width>260</width>
						<height>142</height>
						<texture>frames/ClassicFrame_Background.png</texture>
						<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
						<visible>!String.IsEmpty(ListItem.Label)</visible>
					</control>
					<control type="image">
						<posx>22</posx>
						<posy>29</posy>
						<width>260</width>
						<height>142</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<visible>Container.Content(episodes)</visible>
					</control>
					<!-- Picture Icon Image -->
					<control type="image">
						<posx>22</posx>
						<posy>29</posy>
						<width>260</width>
						<height>142</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<visible>Window.IsActive(pictures) + !String.IsEmpty(ListItem.Icon)</visible>
					</control>
					<!-- Picture Fanart Image (use for thumb if no icon set) -->
					<control type="image">
						<posx>22</posx>
						<posy>29</posy>
						<width>260</width>
						<height>142</height>
						<texture background="true" fallback="home_art/pictures.jpg">$INFO[ListItem.Art(fanart)]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<visible>Window.IsActive(pictures) + String.IsEmpty(ListItem.Icon)</visible>
					</control>
					<control type="image">
						<posx>22</posx>
						<posy>29</posy>
						<width>260</width>
						<height>142</height>
						<texture background="true" fallback="home_art/movies.jpg">$VAR[LandscapeFanart]</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows)</visible>
					</control>
					<control type="image">
						<posx>22</posx>
						<posy>29</posy>
						<width>260</width>
						<height>142</height>
						<texture>frames/ClassicFrameGlass_Horizontal.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<colordiffuse>GlassDiffuse</colordiffuse>
					</control>
					<control type="image">
						<posx>8</posx>
						<posy>14</posy>
						<width>288</width>
						<height>174</height>
						<texture>frames/ClassicFrame_FanartSmall.png</texture>
					</control>
					<control type="image">
						<posx>240</posx>
						<posy>131</posy>
						<width>30</width>
						<height>30</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>!ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
					<!-- Watched Overlay for In-Progress Items -->
					<control type="image">
						<posx>236</posx>
						<posy>128</posy>
						<width>41</width>
						<height>41</height>
						<texture>flags/Progress/$INFO[ListItem.PercentPlayed].png</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
				</itemlayout>
				<focusedlayout width="300" height="200">
					<control type="image">
						<include>Animation_GalleryFanartFloat</include>
						<posx>22</posx>
						<posy>29</posy>
						<width>260</width>
						<height>142</height>
						<texture>frames/ClassicFrame_Background.png</texture>
						<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
						<visible>!String.IsEmpty(ListItem.Label)</visible>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="70" end="125" time="300" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
					</control>
					<control type="image">
						<include>Animation_GalleryFanartFloat</include>
						<posx>22</posx>
						<posy>29</posy>
						<width>260</width>
						<height>142</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="70" end="125" time="300" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<visible>Container.Content(episodes)</visible>
					</control>
					<control type="image">
						<include>Animation_GalleryFanartFloat</include>
						<posx>22</posx>
						<posy>29</posy>
						<width>260</width>
						<height>142</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="70" end="125" time="300" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<visible>Window.IsActive(pictures) + !String.IsEmpty(ListItem.Icon)</visible>
					</control>
					<control type="image">
						<include>Animation_GalleryFanartFloat</include>
						<posx>22</posx>
						<posy>29</posy>
						<width>260</width>
						<height>142</height>
						<texture background="true" fallback="home_art/pictures.jpg">$INFO[ListItem.Art(fanart)]</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="70" end="125" time="300" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<visible>Window.IsActive(pictures) + String.IsEmpty(ListItem.Icon)</visible>
					</control>
					<control type="image">
						<include>Animation_GalleryFanartFloat</include>
						<posx>22</posx>
						<posy>29</posy>
						<width>260</width>
						<height>142</height>
						<texture background="true" fallback="home_art/movies.jpg">$VAR[LandscapeFanart]</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="70" end="125" time="300" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows)</visible>
					</control>
					<control type="image">
						<include>Animation_GalleryFanartFloat</include>
						<posx>22</posx>
						<posy>29</posy>
						<width>260</width>
						<height>142</height>
						<texture>frames/ClassicFrameGlass_Horizontal.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<colordiffuse>GlassDiffuse</colordiffuse>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="70" end="125" time="300" tween="back" easing="out" />
							<effect type="fade" start="100" end="0" time="400" />
						</animation>
					</control>
					<control type="image">
						<include>Animation_GalleryFanartFloat</include>
						<posx>8</posx>
						<posy>14</posy>
						<width>288</width>
						<height>174</height>
						<texture>frames/ClassicFrame_FanartSmall.png</texture>
						<visible>!String.IsEmpty(ListItem.Label)</visible>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="70" end="125" time="300" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
					</control>
					<control type="image">
						<include>Animation_GalleryFanartFloat</include>
						<posx>240</posx>
						<posy>131</posy>
						<width>30</width>
						<height>30</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="163,91" start="70" end="125" time="300" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
						<visible>!ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
					<!-- Watched Overlay for In-Progress Items -->
					<control type="image">
						<include>Animation_GalleryFanartFloat</include>
						<posx>238</posx>
						<posy>126</posy>
						<width>41</width>
						<height>41</height>
						<texture>flags/Progress/$INFO[ListItem.PercentPlayed].png</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="163,91" start="70" end="125" time="300" tween="back" easing="out" />
							<effect type="fade" start="70" end="100" time="300" />
						</animation>
						<visible>ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
				</focusedlayout>
			</control>

			<!-- Title -->
			<control type="label">
				<posx>40</posx>
				<posy>472</posy>
				<width>1200</width>
				<height>40</height>
				<align>center</align>
				<font>METF_TitleTextLarge</font>
				<textcolor>TitleText</textcolor>
				<label>$VAR[ListItemTitle]</label>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>[Window.IsActive(videos) + [Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(episodes)]] | Window.IsActive(pictures)</visible>
			</control>
			<!-- Details -->
			<control type="grouplist">
				<posx>40</posx>
				<posy>505</posy>
				<width>1200</width>
				<height>30</height>
				<align>center</align>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<include>ViewDetailsGenreYearDurEpsUnwatched</include>
				<visible>Window.IsActive(videos) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes)]</visible>
				<include>VisibleIfNotMovieSet</include>
			</control>
			<control type="label">
				<posx>240</posx>
				<posy>503</posy>
				<width>800</width>
				<height>30</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>METF_MediaDetailsSmall</font>
				<textcolor>MediaDetailsGenre</textcolor>
				<label>$LOCALIZE[31313]</label>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<include>VisibleIfMovieSet</include>
			</control>
			<!-- Arrows -->
			<control type="group">
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>Window.IsActive(videos) + [Container.Content(movies) | Container.Content(sets) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(episodes)]</visible>
				<control type="image">
					<posx>10</posx>
					<posy>508</posy>
					<width>24</width>
					<height>24</height>
					<texture>Arrow2Up.png</texture>
					<colordiffuse>ArrowDiffuse</colordiffuse>
					<visible>Container.HasPrevious</visible>
				</control>
				<control type="image">
					<posx>1246</posx>
					<posy>508</posy>
					<width>24</width>
					<height>24</height>
					<texture>Arrow2Down.png</texture>
					<colordiffuse>ArrowDiffuse</colordiffuse>
					<visible>Container.HasNext</visible>
				</control>
			</control>
			<include>ScrollBar_Vertical</include>
		</control>
	</include>
</includes>
