<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_Gallery_Square">
		<control type="group">
			<visible>Control.IsVisible(58)</visible>
			<!-- Browser -->
			<control type="panel" id="58">
				<viewtype label="$LOCALIZE[31414] $LOCALIZE[31415]">icon</viewtype>
				<posx>25</posx>
				<posy>65</posy>
				<width>1230</width>
				<height>410</height>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<onup>58</onup>
				<ondown>58</ondown>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>
				<onright>61</onright>
				<pagecontrol>61</pagecontrol>
				<preloaditems>2</preloaditems>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewGallerySquare)</visible>
				<visible>Window.IsActive(pictures) | Window.IsActive(programs) | Window.IsActive(videos) | Container.Content(Addons) | Container.Content(Albums) | Container.Content(Artists) | Container.Content(musicvideos) | SubString(Container.FolderPath,plugin)</visible>
				<itemlayout width="205" height="205">
					<control type="image">
						<posx>25</posx>
						<posy>25</posy>
						<width>155</width>
						<height>155</height>
						<texture>frames/ClassicFrame_Background.png</texture>
						<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
						<visible>!StringCompare(ListItem.Icon,-) + [!SubString(ListItem.Icon,default,Left) | SubString(ListItem.Icon,defaultalbumcover,Left)] + !IsEmpty(ListItem.Icon)</visible>
					</control>
					<control type="image">
						<posx>25</posx>
						<posy>25</posy>
						<width>155</width>
						<height>155</height>
						<texture background="true" fallback="DefaultThumb.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">keep</aspectratio>
						<visible>Container.Content(musicvideos) + !Skin.HasSetting(CropMVGalleryIcon)</visible>
					</control>
					<control type="image">
						<posx>25</posx>
						<posy>25</posy>
						<width>155</width>
						<height>155</height>
						<texture background="true" fallback="DefaultThumb.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<visible>!Container.Content(musicvideos) | Skin.HasSetting(CropMVGalleryIcon)</visible>
					</control>
					<control type="image">
						<posx>6</posx>
						<posy>4</posy>
						<width>192</width>
						<height>195</height>
						<texture>frames/ClassicFrame_SquareSmall.png</texture>
						<visible>!StringCompare(ListItem.Icon,-) + [!SubString(ListItem.Icon,default,Left) | SubString(ListItem.Icon,defaultalbumcover,Left)] + !IsEmpty(ListItem.Icon)</visible>
					</control>
				</itemlayout>
				<focusedlayout width="205" height="205">
					<control type="group">
						<animation reversible="false" effect="zoom" center="auto" start="100" end="120" time="200" tween="sine" easing="inout">focus</animation>
						<animation reversible="false" effect="zoom" center="auto" start="120" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
						<control type="image">
							<posx>25</posx>
							<posy>25</posy>
							<width>155</width>
							<height>155</height>
							<texture>frames/ClassicFrame_Background.png</texture>
							<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
							<visible>!StringCompare(ListItem.Icon,-) + [!SubString(ListItem.Icon,default,Left) | SubString(ListItem.Icon,defaultalbumcover,Left)] + !IsEmpty(ListItem.Icon)</visible>
						</control>
						<control type="image">
							<posx>25</posx>
							<posy>25</posy>
							<width>155</width>
							<height>155</height>
							<texture background="true" fallback="DefaultThumb.png">$INFO[ListItem.Icon]</texture>
							<aspectratio scalediffuse="false">keep</aspectratio>
						<visible>Container.Content(musicvideos) + !Skin.HasSetting(CropMVGalleryIcon)</visible>
						</control>
						<control type="image">
							<posx>25</posx>
							<posy>25</posy>
							<width>155</width>
							<height>155</height>
							<texture background="true" fallback="DefaultThumb.png">$INFO[ListItem.Icon]</texture>
							<aspectratio scalediffuse="false">scale</aspectratio>
						<visible>!Container.Content(musicvideos) | Skin.HasSetting(CropMVGalleryIcon)</visible>
						</control>
						<control type="image">
							<posx>6</posx>
							<posy>4</posy>
							<width>192</width>
							<height>195</height>
							<texture>frames/ClassicFrame_SquareSmall.png</texture>
							<visible>!StringCompare(ListItem.Icon,-) + [!SubString(ListItem.Icon,default,Left) | SubString(ListItem.Icon,defaultalbumcover,Left)] + !IsEmpty(ListItem.Icon)</visible>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="group">
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<posx>40</posx>
				<posy>472</posy>
				<!-- Title -->
				<control type="label">
					<width>1200</width>
					<height>40</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>METF_TitleTextLarge</font>
					<textcolor>TitleText</textcolor>
					<label>$VAR[ListItemTitle]</label>
					<include>Animation_OpenCloseFade</include>
					<include>Animation_FadedByMenu</include>
					<include>Animation_HiddenByInfo</include>
				</control>
				<!-- Details -->
				<control type="grouplist">
					<posy>33</posy>
					<width>1200</width>
					<height>30</height>
					<align>center</align>
					<itemgap>10</itemgap>
					<orientation>horizontal</orientation>
					<include>Animation_OpenCloseFade</include>
					<include>Animation_FadedByMenu</include>
					<include>Animation_HiddenByInfo</include>
					<include>ViewDetailsGenreYearDurEpsUnwatched</include>
					<visible>!Window.IsActive(pictures)</visible>
				</control>
			</control>
			<include>ScrollBar_Vertical</include>
		</control>
	</include>
</includes>
