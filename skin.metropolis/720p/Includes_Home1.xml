<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Home1 Default-->
	<visible>![Skin.HasSetting(Home2) | Skin.HasSetting(Home3)]</visible>

	<include name="HomeStatsPosition1">
		<posx>1060</posx>
		<posy>45</posy>
		<width>210</width>
		<height>420</height>
	</include>
	<include name="HomeStatsDetails1">
		<width>131</width>
		<height>26</height>
		<align>left</align>
		<aligny>center</aligny>
		<font>METF_HomeStatsText</font>
		<textcolor>HomeStatsCategory</textcolor>
	</include>
	<include name="HomeStatsDetailsNumber1">
		<width>75</width>
		<height>26</height>
		<align>right</align>
		<aligny>center</aligny>
		<font>METF_HomeStatsText</font>
		<textcolor>HomeStatsNumber</textcolor>
	</include>

	<include name="Home1_Default">
		<include>HomeDeck</include>
		<control type="button" id="9002">
			<description>Hidden Button to pass through navigation when homedeck is disabled</description>
			<posx>-20</posx>
			<posy>-20</posy>
			<width>1</width>
			<height>1</height>
			<label></label>
			<font></font>
			<texturefocus></texturefocus>
			<texturenofocus></texturenofocus>
			<onleft>9000</onleft>
			<onright>9001</onright>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<visible>false</visible>
		</control>

		<!-- Large Fanart and Frame -->
		<control type="group">
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<control type="image">
				<posx>240</posx>
				<posy>50</posy>
				<width>800</width>
				<height>450</height>
				<texture>frames/ClassicFrame_Background.png</texture>
				<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
			</control>
			<control type="multiimage">
				<posx>240</posx>
				<posy>50</posy>
				<width>800</width>
				<height>450</height>
				<timeperimage>5000</timeperimage>
				<randomize>true</randomize>
				<fadetime>500</fadetime>
				<imagepath background="true">$VAR[HomeBackground]</imagepath>
				<aspectratio>scale</aspectratio>
				<visible>!Player.HasVideo</visible>
				<visible>!String.IsEqual(Container(9000).ListItem.Property(background),home\weather\)</visible>
				<visible allowhiddenfocus="true">!Skin.HasSetting(HomeStretchBackgrounds) + !Control.HasFocus(8000)</visible>
			</control>
			<control type="multiimage">
				<posx>240</posx>
				<posy>50</posy>
				<width>800</width>
				<height>450</height>
				<timeperimage>5000</timeperimage>
				<randomize>true</randomize>
				<fadetime>500</fadetime>
				<imagepath background="true">$VAR[HomeBackground]</imagepath>
				<aspectratio>stretch</aspectratio>
				<visible>!Player.HasVideo</visible>
				<visible>!String.IsEqual(Container(9000).ListItem.Property(background),home\weather\)</visible>
				<visible allowhiddenfocus="true">Skin.HasSetting(HomeStretchBackgrounds) | Control.HasFocus(8000)</visible>
			</control>
			<control type="multiimage">
				<posx>240</posx>
				<posy>50</posy>
				<width>800</width>
				<height>450</height>
				<timeperimage>5000</timeperimage>
				<randomize>true</randomize>
				<fadetime>500</fadetime>
				<imagepath background="true">$VAR[Weather_Fanart]</imagepath>
				<aspectratio>scale</aspectratio>
				<visible>!Player.HasVideo</visible>
				<visible>String.IsEqual(Container(9000).ListItem.Property(background),home\weather\)</visible>
				<visible allowhiddenfocus="true">!Skin.HasSetting(HomeStretchBackgrounds)</visible>
			</control>
			<control type="multiimage">
				<posx>240</posx>
				<posy>50</posy>
				<width>800</width>
				<height>450</height>
				<timeperimage>5000</timeperimage>
				<randomize>true</randomize>
				<fadetime>500</fadetime>
				<imagepath background="true">$VAR[Weather_Fanart]</imagepath>
				<aspectratio>stretch</aspectratio>
				<visible>!Player.HasVideo</visible>
				<visible>String.IsEqual(Container(9000).ListItem.Property(background),home\weather\)</visible>
				<visible allowhiddenfocus="true">Skin.HasSetting(HomeStretchBackgrounds)</visible>
			</control>
			<control type="videowindow">
				<posx>240</posx>
				<posy>50</posy>
				<width>800</width>
				<height>450</height>
				<visible>Player.HasVideo</visible>
			</control>
			<control type="image">
				<posx>215</posx>
				<posy>25</posy>
				<width>848</width>
				<height>507</height>
				<texture>frames/ClassicFrame_Fanart.png</texture>
			</control>
		</control>

		<!-- Help Text for LEFT side of Home screen -->
		<control type="group">
			<posx>0</posx>
			<posy>2</posy>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<visible>!Skin.HasSetting(HideHelpText)</visible>
			<visible>!Control.HasFocus(9001) + ![Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003)] + String.Contains(Container(9000).ListItem.Property(hasSubmenu),True)</visible>
			<control type="image">
				<posx>190</posx>
				<posy>475</posy>
				<width>30</width>
				<height>30</height>
				<texture>ArrowRight.png</texture>
				<colordiffuse>HelpArrowDiffuse</colordiffuse>
			</control>
			<control type="label">
				<posx>188</posx>
				<posy>477</posy>
				<width>140</width>
				<height>25</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>METF_HelpText</font>
				<textcolor>HelpText</textcolor>
				<label>$LOCALIZE[1034]</label>
			</control>
		</control>
		<!-- Help Text for RIGHT side of Home screen -->
		<control type="group">
			<posx>0</posx>
			<posy>2</posy>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<visible>!Skin.HasSetting(HideHelpText)</visible>
			<visible>Control.HasFocus(9001) + !String.IsEqual(Container(9000).ListItem.Property(hasSubmenu),True)</visible>
			<control type="image">
				<posx>1060</posx>
				<posy>475</posy>
				<width>30</width>
				<height>30</height>
				<texture>ArrowLeft.png</texture>
				<colordiffuse>HelpArrowDiffuse</colordiffuse>
			</control>
			<control type="label">
				<posx>1092</posx>
				<posy>477</posy>
				<width>140</width>
				<height>25</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>METF_HelpText</font>
				<textcolor>HelpText</textcolor>
				<label>$LOCALIZE[33061]</label>
			</control>
		</control>

		<!-- Main Menu -->
		<control type="list" id="9000">
			<posx>0</posx>
			<posy>50</posy>
			<width>220</width>
			<height>416</height>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<onleft>9002</onleft>
			<onright>9001</onright>
			<viewtype>list</viewtype>
			<orientation>vertical</orientation>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<itemlayout width="200" height="32">
				<control type="label">
					<posx>12</posx>
					<posy>0</posy>
					<width>200</width>
					<height>32</height>
					<align>right</align>
					<aligny>center</aligny>
					<font>METF_HomeMenu</font>
					<textcolor>HomeMenuText</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout width="220" height="32">
				<!-- Focus Bar -->
				<control type="image">
					<posx>15</posx>
					<posy>0</posy>
					<width>208</width>
					<height>32</height>
					<aligny>center</aligny>
					<texture flipx="true">FocusLine.png</texture>
					<colordiffuse>FocusBar</colordiffuse>
					<visible>!Control.HasFocus(9001) + ![Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003)]</visible>
				</control>
				<control type="label">
					<posx>12</posx>
					<posy>0</posy>
					<width>200</width>
					<height>32</height>
					<align>right</align>
					<aligny>center</aligny>
					<font>METF_HomeMenu</font>
					<textcolor>FocusBarText</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible>!Control.HasFocus(9001) + ![Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003)]</visible>
				</control>
				<control type="label">
					<posx>12</posx>
					<posy>0</posy>
					<width>200</width>
					<height>32</height>
					<align>right</align>
					<aligny>center</aligny>
					<font>METF_HomeMenu</font>
					<textcolor>HomeMenuTextFocused</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible>Control.HasFocus(9001) | Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003)</visible>
				</control>
			</focusedlayout>
			<content>
				<include>skinshortcuts-mainmenu</include>
			</content>
		</control>

		<!-- Submenus -->
		<control type="list" id="9001">
			<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
			<animation effect="fade" start="0" end="100" delay="300" time="200">Visible</animation>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<posx>1060</posx>
			<posy>50</posy>
			<width>220</width>
			<height>416</height>
			<orientation>vertical</orientation>
			<align>left</align>
			<itemgap>0</itemgap>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<visible allowhiddenfocus="true">[Control.HasFocus(9000) + !Skin.HasSetting(HomeStats)] | Control.HasFocus(9001)</visible>
			<itemlayout width="450" height="32">
				<control type="label">
					<width>208</width>
					<height>32</height>
					<align>left</align>
					<aligny>center</aligny>
					<textoffsetx>8</textoffsetx>
					<font>METF_HomeMenu</font>
					<textcolor>HomeMenuText</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout width="450" height="32">
				<control type="image">
					<width>208</width>
					<height>32</height>
					<align>left</align>
					<aligny>center</aligny>
					<texture>FocusLine.png</texture>
					<colordiffuse>FocusBar</colordiffuse>
					<visible allowhiddenfocus="true">Control.HasFocus(9001)</visible>
				</control>
				<control type="label">
					<width>208</width>
					<height>32</height>
					<align>left</align>
					<aligny>center</aligny>
					<textoffsetx>8</textoffsetx>
					<font>METF_HomeMenu</font>
					<textcolor>HomeMenuText</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible allowhiddenfocus="true">!Control.HasFocus(9001)</visible>
				</control>
				<control type="label">
					<width>208</width>
					<height>32</height>
					<align>left</align>
					<aligny>center</aligny>
					<textoffsetx>8</textoffsetx>
					<font>METF_HomeMenu</font>
					<textcolor>FocusBarText</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible allowhiddenfocus="true">Control.HasFocus(9001)</visible>
				</control>
			</focusedlayout>
			<content>
				<include>skinshortcuts-submenu</include>
			</content>
		</control>

		<!-- Shared Home Stats/Media Totals -->
		<include>HomeStats</include>
	</include>
</includes>
