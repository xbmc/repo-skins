<!--Avalon-->
<window id="2001">
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>

		<!--Dialog Overlay-->		
		<include>DialogOverlay</include>			

		<!--Dialog Album Info-->
		<control type="group">			
			<include>animation_dialog</include>

			<!--Panel-->
			<control type="image">
				<posx>920</posx>
				<posy>249</posy>
				<width>80</width>
				<height>60</height>
				<texture>dialogs/default/arrow.png</texture>
			</control>
			<control type="image">
				<posx>284</posx>
				<posy>269</posy>
				<width>1352</width>
				<height>541</height>
				<texture border="39">dialogs/default/bg.png</texture>
			</control>   

			<!--Header 1-->
			<control type="label"><!--Label: Album Inforamtion-->	
				<posx>284</posx>
				<posy>150</posy>				
				<align>center</align>
				<font>Light45</font>
				<width>1352</width>
				<label>24016</label>			
				<visible>Container.Content(Albums)</visible>
			</control>
			<control type="label"><!--Label: Artist Infornation-->				
				<posx>284</posx>
				<posy>150</posy>				
				<align>center</align>
				<font>Light45</font>
				<width>1352</width>
				<label>24017</label>				
				<visible>Container.Content(Artists)</visible>
			</control>
			<!--Header 2-->
			<control type="label"><!--Title: Album-->				
				<posx>284</posx>
				<posy>200</posy>
				<width>1352</width>
				<align>center</align>
				<font>Light45</font>
				<textcolor>eewhite</textcolor>
				<label>$INFO[ListItem.Album]</label>				
				<scroll>true</scroll>
				<visible>Container.Content(Albums)</visible>
			</control>
			<control type="label"><!--Title: Artist-->				
				<posx>284</posx>
				<posy>200</posy>
				<width>1352</width>
				<align>center</align>
				<font>Light45</font>
				<textcolor>eewhite</textcolor>
				<label>$INFO[ListItem.Artist]</label>				
				<scroll>true</scroll>
				<visible>Container.Content(Artists)</visible>
			</control>

			<!--Icon-->
			<control type="image" id="3">
				<posx>700</posx>
				<posy>350</posy>
				<width>200</width>
				<height>200</height> 
				<fadetime>800</fadetime>
				<aspectratio align="center" aligny="center">stretch</aspectratio>
				<texture background="true" fallback="cover_default.png" diffuse="cover_matte.png">$INFO[ListItem.Icon]</texture>		
			</control>

			<!--Info-->
			<control type="grouplist">
				<posx>950</posx>
				<posy>350</posy>
				<width>870</width>
				<height>210</height>
				<itemgap>0</itemgap>
				<orientation>vertical</orientation>

				<control type="label">
					<description>Artist</description>
					<width>870</width>
					<height>42</height>
					<textcolor>midgrey</textcolor>
					<label>$INFO[ListItem.Artist,[COLOR darkgrey]$LOCALIZE[557]:[/COLOR] ]</label>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Artist)</visible>
				</control>
				<control type="label">
					<description>Genre</description>
					<width>870</width>
					<height>42</height>
					<textcolor>midgrey</textcolor>
					<label>$INFO[ListItem.Genre,[COLOR darkgrey]$LOCALIZE[515]:[/COLOR] ]</label>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Genre)</visible>
				</control>
				<control type="label">
					<description>Year</description>
					<width>870</width>
					<height>42</height>
					<textcolor>midgrey</textcolor>
					<label>$INFO[ListItem.Year,[COLOR darkgrey]$LOCALIZE[562]:[/COLOR] ]</label>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Year)</visible>
				</control>
				<control type="label">
					<description>Rating</description>
					<width>870</width>
					<height>42</height>
					<textcolor>midgrey</textcolor>
					<label>$INFO[ListItem.Rating,[COLOR darkgrey]$LOCALIZE[563]:[/COLOR] ]</label>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Rating)</visible>
				</control>

			</control>

			<!--Rating / Plot-->
			<control type="textbox" id="4">
				<description>Review</description>
				<posx>700</posx>
				<posy>590</posy>
				<width>800</width>
				<height>160</height>
				<align>justify</align>
				<font>Light32</font>
				<textcolor>midgrey</textcolor>
			</control>

			<!--Songlist-->
			<control type="list" id="50">
				<description>Tracks</description>
				<posx>700</posx>
				<posy>576</posy>
				<width>500</width>
				<height>270</height>
				<onup>50</onup>
				<ondown>50</ondown>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<orientation>vertical</orientation>
				<scrolltime>200</scrolltime>

				<itemlayout height="60">
					<control type="label">
						<posx>0</posx>
						<width>810</width>							
						<font>Light32</font>
						<textcolor>midgrey</textcolor>
						<selectedcolor>orange</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="60">
					<control type="label">
						<posx>0</posx>
						<width>810</width>
						<textcolor>darkgrey</textcolor>
						<selectedcolor>orange</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</focusedlayout>
			</control>

			<!--Buttons-->
			<control type="image">
				<posx>318</posx>
				<posy>303</posy>
				<width>310</width>
				<height>473</height>
				<texture border="5">dialogs/default/inner.png</texture>
			</control>
			<control type="grouplist" id="9000">	
				<posx>318</posx>
				<posy>303</posy>
				<width>310</width>
				<height>473</height>
				<itemgap>-1</itemgap>
				<onup>9333</onup>					
				<ondown>9333</ondown>
				<onright>50</onright>     
				<onleft>-</onleft>			
				<orientation>vertial</orientation>

				<control type="button" id="200"><!--Search on Youtube-->
					<visible>Container.Content(songs) | Container.Content(artists) |  Container.Content(albums)</visible>
					<width>310</width>
					<height>60</height>
					<align>right</align>
					<textoffsetx>20</textoffsetx>		
					<include>DialogButton</include>
					<texturefocus border="2">dialogs/default/highlight-grey.png</texturefocus>
					<texturenofocus>dialogs/default/separator.png</texturenofocus>	
					<label>42000</label>					
					<onclick>Skin.SetBool(youtube)</onclick>	
					<onclick>Dialog.Close(musicinformation,true)</onclick>
					<onclick>ActivateWindow(videos,plugin://plugin.video.youtube/?path=/root/search&amp;feed=search&amp;search=$INFO[ListItem.Artist],return)</onclick>
				</control>
				<control type="button" id="5"><!--Tracks-->
					<width>310</width>
					<height>60</height>
					<align>right</align>
					<textoffsetx>20</textoffsetx>		
					<include>DialogButton</include>
					<texturefocus border="2">dialogs/default/highlight-grey.png</texturefocus>
					<texturenofocus>dialogs/default/separator.png</texturenofocus>	
					<label>206</label>
				</control>
				<control type="button" id="6"><!--Refresh-->
					<width>310</width>
					<height>60</height>
					<align>right</align>
					<textoffsetx>20</textoffsetx>	
					<include>DialogButton</include>
					<texturefocus border="2">dialogs/default/highlight-grey.png</texturefocus>
					<texturenofocus>dialogs/default/separator.png</texturenofocus>	
					<label>184</label>
				</control>
				<control type="button" id="10"><!--Get Thumb-->
					<width>310</width>
					<height>60</height>
					<align>right</align>
					<textoffsetx>20</textoffsetx>	
					<include>DialogButton</include>
					<texturefocus border="2">dialogs/default/highlight-grey.png</texturefocus>
					<texturenofocus>dialogs/default/separator.png</texturenofocus>	
					<label>13405</label>
				</control>
				<control type="button" id="12"><!--Get Fanart-->					
					<width>310</width>
					<height>60</height>
					<align>right</align>
					<textoffsetx>20</textoffsetx>	
					<include>DialogButton</include>
					<texturefocus border="2">dialogs/default/highlight-grey.png</texturefocus>
					<texturenofocus>dialogs/default/separator.png</texturenofocus>	
					<label>20413</label>
				</control>

			</control>

		</control>
		
	</controls>
</window>