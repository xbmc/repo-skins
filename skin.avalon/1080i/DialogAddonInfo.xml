<!--Avalon-->
<window id="146">
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<!--Dialog Overlay-->	
		<control type="group">			
			<visible>!Window.IsVisible(AddonSettings) + !Window.IsActive(TextViewer)</visible>
			<include>DialogOverlay</include>
		</control>

		<!--Dialog Addon Info-->
		<control type="group">
			<include>animation_dialog</include>
			<visible>!Window.IsVisible(AddonSettings) + !Window.IsActive(TextViewer)</visible>

			<!--Panel-->
			<control type="image">
				<posx>920</posx>
				<posy>249</posy>
				<width>80</width>
				<height>60</height>
				<texture>dialogs/default/arrow.png</texture>
			</control>
			<control type="image">
				<posx>284</posx>
				<posy>269</posy>
				<width>1352</width>
				<height>541</height>
				<texture border="39">dialogs/default/bg.png</texture>
			</control>   

			<!--Header 1-->
			<control type="label"><!--Label: Addons Indormation-->
				<posx>284</posx>
				<posy>150</posy>				
				<align>center</align>
				<font>Light45</font>
				<width>1352</width>
				<label>24003</label>
			</control>
			<!--Header 2-->
			<control type="label"><!--Title: Addon-->			
				<posx>284</posx>
				<posy>200</posy>
				<width>1352</width>
				<align>center</align>
				<font>Light45</font>
				<textcolor>eewhite</textcolor>
				<label>$INFO[ListItem.Property(Addon.Name)]</label>
				<scroll>true</scroll>
			</control>

			<!--Icon-->
			<control type="image">
				<posx>700</posx>
				<posy>350</posy>
				<width>200</width>
				<height>200</height> 
				<fadetime>800</fadetime>
				<aspectratio align="center" aligny="center">keep</aspectratio>
				<texture background="true" fallback="coverdefault.png" diffuse="covermatte.png">$INFO[ListItem.Icon]</texture>		
			</control>
			
			<!--Infos-->
			<control type="grouplist">
				<posx>950</posx>
				<posy>350</posy>
				<width>870</width>
				<height>210</height>
				<itemgap>0</itemgap>
				<orientation>vertical</orientation>

				<control type="label">
					<description>Type Value</description>
					<width>870</width>
					<height>42</height>
					<textcolor>midgrey</textcolor>
					<label>$INFO[ListItem.Property(Addon.Type),[COLOR darkgrey]$LOCALIZE[146][/COLOR] ]</label>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Property(Addon.Type))</visible>
				</control>
				<control type="label">
					<description>Author Value</description>
					<width>870</width>
					<height>42</height>
					<textcolor>midgrey</textcolor>
					<label>$INFO[ListItem.Property(Addon.Creator),[COLOR darkgrey]$LOCALIZE[21863]:[/COLOR] ]</label>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Property(Addon.Creator))</visible>
				</control>
				<control type="label">
					<description>Version Value</description>
					<width>870</width>
					<height>42</height>
					<textcolor>midgrey</textcolor>
					<label>$INFO[ListItem.Property(Addon.Version),[COLOR darkgrey]$LOCALIZE[24051][/COLOR] ]</label>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Property(Addon.Version))</visible>
				</control>
				<control type="fadelabel">
					<description>Summary Value</description>
					<width>870</width>
					<height>42</height>
					<textcolor>midgrey</textcolor>
					<label>$INFO[ListItem.Property(Addon.Summary),[COLOR darkgrey]$LOCALIZE[20037]:[/COLOR] ]</label>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Property(Addon.Summary))</visible>
				</control>
				<control type="fadelabel">
					<description>Disclaimer</description>
					<width>870</width>
					<height>42</height>
					<textcolor>midgrey</textcolor>
					<label>$INFO[ListItem.Property(Addon.Disclaimer),[COLOR Red]$LOCALIZE[24052]:[/COLOR] ]</label>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Property(Addon.Disclaimer))</visible>
				</control>

			</control>
			
			<!--Info Plot-->
			<control type="textbox" id="400">
				<description>Description</description>
				<posx>700</posx>
				<posy>590</posy>
				<width>800</width>
				<height>160</height>
				<align>justify</align>
				<font>Light32</font>
				<textcolor>midgrey</textcolor>
				<label>$INFO[ListItem.Property(Addon.Description)]</label>
			</control>

			<!--Buttons-->
			<control type="image">
				<posx>318</posx>
				<posy>303</posy>
				<width>310</width>
				<height>473</height>
				<texture border="5">dialogs/default/inner.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<posx>318</posx>
				<posy>303</posy>
				<width>310</width>
				<height>473</height>
				<itemgap>-1</itemgap>				
				<onup>9000</onup>
				<ondown>9000</ondown>
				<onright>50</onright>
				<onleft>50</onleft>
				<orientation>vertical</orientation>

				<control type="button" id="6"><!--Install/Uninstall Addon button-->
					<width>310</width>
					<height>60</height>
					<align>right</align>
					<textoffsetx>20</textoffsetx>		
					<include>DialogButton</include>
					<texturefocus border="2">dialogs/default/highlight-grey.png</texturefocus>
					<texturenofocus>dialogs/default/separator.png</texturenofocus>	
					<label>24022</label>
				</control>
				<control type="button" id="7"><!--Enable/Disable Addon button-->
					<width>310</width>
					<height>60</height>
					<align>right</align>
