<!--Basic-->
<window>
    <defaultcontrol always="true">6</defaultcontrol>
    <controls>
        <control type="group">
		
			<!--Dialog Overlay-->	
			<include>DialogOverlay</include>
			
			<!--Dialog Picture Info-->
            <control type="group">
               <include>animation_dialog</include>
                
                <control type="button" id="6">
                    <onfocus>SetFocus(5)</onfocus>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
                </control>
                
                <control type="label">
                    <description>Heading</description>
                    <posx>473</posx>
                    <posy>200</posy>
                    <width>974</width>                   
                    <label>$LOCALIZE[13406]</label>
					<include>DialogHeader</include>
                    <align>center</align>
                </control>
                
				<!--Page Control-->
                <control type="group">
                    <animation type="WindowOpen" reversible="false">
                        <effect type="fade" start="0" end="85" time="400" tween="sine" easing="inout" delay="400" />
                        <effect type="slide" start="0,-80" end="0,0" time="550" delay="400" tween="back" easing="out" />
                    </animation>
                    <control type="label">
                        <description>Footer Label</description>
                        <posx>658</posx>
                        <posy>802</posy>
                        <width>404</width>
                        <align>left</align>
                        <font>Light31</font>
                        <textcolor>77white</textcolor>
                        <label>$INFO[Container(5).NumItems,, $LOCALIZE[41817]]</label>
                        <visible>IntegerGreaterThan(Container(5).NumItems,0)</visible>
                        <animation type="Visible" reversible="false">
                            <effect type="fade" start="0" end="85" time="400" tween="sine" easing="inout" />
                            <effect type="slide" start="0,-80" end="0,0" time="550" tween="back" easing="out" />
                        </animation>
                        <animation type="Hidden" reversible="false">
                            <effect type="fade" start="85" end="0" time="400" tween="sine" easing="inout" />
                            <effect type="slide" start="0,0" end="0,-80" time="550" tween="back" easing="in" />
                        </animation>
                    </control>
                    <control type="label">
                        <description>Page Label</description>
                        <posx>1262</posx>
                        <posy>802</posy>
                        <width>200</width>
                        <align>right</align>
                        <font>Light31</font>
                        <label>$INFO[Container(5).CurrentPage]/$INFO[Container(5).NumPages]</label>
                        <textcolor>77white</textcolor>
                        <visible>IntegerGreaterThan(Container(5).NumPages,1)</visible>
                        <animation type="Visible" reversible="false">
                            <effect type="fade" start="0" end="85" time="400" tween="sine" easing="inout" />
                            <effect type="slide" start="0,-80" end="0,0" time="550" tween="back" easing="out" />
                        </animation>
                        <animation type="Hidden" reversible="false">
                            <effect type="fade" start="85" end="0" time="400" tween="sine" easing="inout" />
                            <effect type="slide" start="0,0" end="0,-80" time="550" tween="back" easing="in" />
                        </animation>
                    </control>
                </control>
                
				<!--Panel-->
                <control type="image">
                    <posx>920</posx>
                    <posy>246</posy>
                    <width>80</width>
                    <height>60</height>
                    <texture>dialogs/default/arrow.png</texture>
                </control>
                <control type="image">
                    <posx>604</posx>
                    <posy>266</posy>
                    <width>712</width>
                    <height>548</height>
                    <texture border="39">dialogs/default/bg.png</texture>
                </control>
                <control type="image">
                	<posx>638</posx>
                	<posy>300</posy>
                	<width>644</width>
                	<height>481</height>
                	<texture border="5">dialogs/default/inner.png</texture>
                </control>

                <control type="list" id="5">
                    <posx>638</posx>
                    <posy>300</posy>
                    <width>644</width>
                    <height>480</height>
                    <onleft>5</onleft>
                    <onright>5</onright>
                    <onup>5</onup>
                    <ondown>5</ondown>
                    <pagecontrol></pagecontrol>
                    <scrolltime tween="cubic" easing="out">500</scrolltime>
                    <itemlayout height="60">
                        <control type="image">
                            <posx>0</posx>
                            <posy>1</posy>
                            <width>644</width>
                            <height>60</height>
                            <texture>dialogs/default/separator.png</texture>
                        </control>
                        <control type="label">
                            <posx>20</posx>
                            <posy>0</posy>
                            <width>604</width>
                            <height>60</height>
                            <info>ListItem.Label</info>
							<include>DialogListNF</include>
                            <align>left</align>
                            <aligny>center</aligny>                          
                            <scroll>false</scroll>
                        </control>
                        <control type="label">
                            <posx>624</posx>
                            <posy>0</posy>
                            <width>604</width>
                            <height>60</height>
                            <info>ListItem.Label2</info>
                            <include>DialogListNF</include>
                            <align>right</align>
                            <aligny>center</aligny>                          
                            <scroll>false</scroll>
                        </control>  
                    </itemlayout>
                    <focusedlayout height="60">
                        <control type="group">
                            <visible>!Control.HasFocus(5)</visible>
                            <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="inout" condition="![Container(5).Scrolling | Container(5).OnScrollNext | Container(5).OnScrollPrevious]">Visible</animation>
                            <animation effect="fade" start="100" end="0" time="300" tween="sine" easing="inout" condition="![Container(5).Scrolling | Container(5).OnScrollNext | Container(5).OnScrollPrevious]">Hidden</animation>
                            <control type="image">
                                <posx>0</posx>
                                <posy>1</posy>
                                <width>644</width>
                                <height>60</height>
                                <texture>dialogs/default/separator.png</texture>
                            </control>
                            <control type="label">
                                <posx>20</posx>
                                <posy>0</posy>
                                <width>604</width>
                                <height>60</height>
                                <info>ListItem.Label</info>
								<include>DialogListNF</include>
                                <align>left</align>
                                <aligny>center</aligny>                                
                                <scroll>false</scroll>
                            </control>
                            <control type="label">
                                <posx>624</posx>
                                <posy>0</posy>
                                <width>604</width>
                                <height>60</height>
                                <info>ListItem.Label2</info>
								<include>DialogListNF</include>
                                <align>right</align>
                                <aligny>center</aligny>                              
                                <scroll>false</scroll>
                            </control>  
                        </control>
                        <control type="group">
                            <visible>Control.HasFocus(5)</visible>
                            <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="inout" condition="![Container(5).Scrolling | Container(5).OnScrollNext | Container(5).OnScrollPrevious]">Visible</animation>
                            <animation effect="fade" start="100" end="0" time="300" tween="sine" easing="inout" condition="![Container(5).Scrolling | Container(5).OnScrollNext | Container(5).OnScrollPrevious]">Hidden</animation>
                            <control type="image">
                                <width>644</width>
                                <height>60</height>
                                <texture border="2">dialogs/default/highlight.png</texture>
                            </control>
                            <control type="label">
                                <posx>20</posx>
                                <posy>0</posy>
                                <width>604</width>
                                <height>60</height>
                                <info>ListItem.Label</info>
                                <include>DialogListFO</include>							
                                <align>left</align>
                                <aligny>center</aligny>
                                <scroll>false</scroll>
                            </control>
                            <control type="label">
                                <posx>624</posx>
                                <posy>0</posy>
                                <width>604</width>
                                <height>60</height>                              
                                <info>ListItem.Label2</info>
                                <include>DialogListFO</include>								
                                <align>right</align>
                                <aligny>center</aligny>
                            </control>
                        </control>
                    </focusedlayout>
                </control>      
            </control>
        </control>
    </controls>
</window>