<?xml version="1.0" encoding="UTF-8"?>
<includes>	

	<!--NowPlayingMusic-->
	<include name="NowPlayingMusic">
		<control type="group">	
			<visible>Player.HasAudio</visible>
			<visible>!Container.Content(episodes) + ![Control.IsVisible(51) + Window.IsActive(MyVideoNav.xml)] + ![Control.IsVisible(55) + Window.IsActive(MyVideoNav.xml)] + ![Control.IsVisible(501) + Window.IsActive(MyMusicNav.xml)] + ![Control.IsVisible(505) + Window.IsActive(MyMusicNav.xml)]</visible>		

			<animation time="1000" effect="fade">Visible</animation> 
			<animation time="100" effect="fade">Hidden</animation>
			<animation effect="slide" start="0,0" end="0,35" time="0" condition="Window.IsActive(Home.xml)">Conditional</animation>	
			<animation effect="slide" start="0,0" end="0,-35" time="100" condition="Window.IsActive(MusicOSD.xml)">Conditional</animation>	
			<include>animation_fade</include>

			<!--Cover-->
			<control type="group">		
				<posx>50</posx>
				<control type="image">				
					<posx>0</posx>
					<posy>876</posy>
					<width>140</width>
					<height>140</height>
					<fadetime>IconCrossfadeTime</fadetime>
					<texture background="true" fallback="cover_default.png" diffuse="cover_matte.png">$INFO[MusicPlayer.Cover]</texture>
					<aspectratio align="center" aligny="top">stretch</aspectratio>			
				</control>
				<control type="image">				
					<posx>0</posx>
					<posy>1014</posy><!-- -2 -->
					<width>140</width>
					<height>140</height>
					<fadetime>IconCrossfadeTime</fadetime>
					<texture background="true" fallback="cover_default.png" flipy="true" diffuse="cover_matte_reflect.png">$INFO[MusicPlayer.Cover]</texture>
					<aspectratio align="center" aligny="top">stretch</aspectratio>			
				</control>
			</control>

			<!--LABEL: Now Playing-->			
			<control type="label">				
				<posx>230</posx>
				<posy>890</posy>
				<width>300</width>
				<align>left</align>
				<font>Reg28</font>
				<textcolor>mainblue</textcolor>
				<label>$LOCALIZE[31040]</label>				
			</control>		

			<!--Title-->				
			<control type="fadelabel">					
				<posx>230</posx>
				<posy>930</posy>
				<width>400</width>
				<align>left</align>
				<font>Reg30</font>
				<textcolor>aawhite</textcolor>
				<label>[B]$INFO[Player.Title][/B]</label>				
				<scroll>true</scroll>
				<scrollspeed>30</scrollspeed>
			</control>			

			<!--Play Time-->
			<control type="label">
				<visible>!IsEmpty(Player.Duration)</visible>
				<posx>310</posx>
				<posy>976</posy>
				<width>250</width>
				<align>left</align>				
				<font>Light28</font>
				<textcolor>aawhite</textcolor>
				<label>$INFO[Player.Time] / $INFO[Player.Duration]</label>
			</control>
			<control type="label">
				<visible>IsEmpty(Player.Duration)</visible>
				<posx>310</posx>
				<posy>976</posy>
				<width>250</width>
				<align>left</align>				
				<font>Light28</font>
				<textcolor>aawhite</textcolor>
				<label>$INFO[Player.Time]</label>
			</control>

			<!--EQ-->		
			<control type="multiimage">			
				<visible>!Player.Paused + !Player.Forwarding + !Player.Rewinding</visible>				
				<posx>230</posx>
				<posy>988</posy>
				<width>56</width> 
				<height>28</height>				
				<randomize>false</randomize>            
				<imagepath>eq/small</imagepath>
				<timeperimage>100</timeperimage>
				<colordiffuse>88FFFFFFF</colordiffuse>
				<fadetime>0</fadetime>
			</control>
			<control type="image">
				<visible>Player.Paused | Player.Forwarding | Player.Rewinding</visible>	
				<posx>230</posx>
				<posy>988</posy>
				<width>56</width>
				<height>28</height>			
				<texture>eq/small/paused/paused.png</texture>
				<colordiffuse>88FFFFFFF</colordiffuse>
			</control>			

		</control>			
	</include>
	
	<!--NowPlayingVideo-->
	<include name="NowPlayingVideo">
		<control type="group">
			<visible>Player.HasVideo</visible>	
			<visible>!Container.Content(episodes) + ![Control.IsVisible(51) + Window.IsActive(MyVideoNav.xml)] + ![Control.IsVisible(55) + Window.IsActive(MyVideoNav.xml)] + ![Control.IsVisible(501) + Window.IsActive(MyMusicNav.xml)] + ![Control.IsVisible(505) + Window.IsActive(MyMusicNav.xml)]</visible>		
			
			<animation time="1000" effect="fade" delay="600">Visible</animation> 
			<animation effect="zoom" start="100" end="0" time="0">Hidden</animation>	
			<include>animation_fade</include>
			<animation effect="slide" start="0,0" end="0,35" time="0" condition="Window.IsActive(Home.xml)">Conditional</animation>			

			<!--Black Video Background-->	
			<control type="image">						
				<posx>20</posx>
				<posy>896</posy>
				<width>213</width>
				<height>120</height>	
				<texture>common/black.png</texture>	
			</control>
			
			<!--Video Window-->			
			<control type="videowindow">					
				<animation effect="zoom" start="0" end="100" delay="600" time="0">WindowOpen</animation>
				<animation effect="zoom" start="100" end="0" time="0">WindowClose</animation>							
				<posx>20</posx>
				<posy>896</posy>
				<width>213</width>
				<height>120</height>			
			</control>
			
			<!--Black Video Overlay-->	
			<control type="image">					
				<animation effect="fade" start="100" end="0" delay="600" time="450">WindowOpen</animation>
				<animation effect="zoom" start="0" end="0" time="0">WindowClose</animation>					
				<posx>20</posx>
				<posy>896</posy>
				<width>213</width>
				<height>120</height>	
				<texture>common/black.png</texture>	
			</control>
			
			<!--LABEL: Now Playing-->			
			<control type="label">				
				<posx>260</posx>
				<posy>890</posy>
				<width>300</width>
				<align>left</align>
				<font>Reg28</font>
				<textcolor>mainblue</textcolor>
				<label>$LOCALIZE[31040]</label>				
			</control>		

			<!--Title-->	
			<control type="fadelabel">				
				<posx>260</posx>
				<posy>930</posy>
				<width>400</width>
				<align>left</align>
				<font>Reg28</font>
				<textcolor>aawhite</textcolor>
				<label>[B]$INFO[VideoPlayer.Title][/B]</label>
				<scroll>true</scroll>
				<scrollspeed>30</scrollspeed>
			</control>		

			<!--Play Time-->
			<control type="label">
				<posx>340</posx>
				<posy>976</posy>
				<width>250</width>
				<align>left</align>
				<font>Light28</font>
				<textcolor>aawhite</textcolor>
				<label>$INFO[Player.Time] / $INFO[Player.Duration]</label>
			</control>

			<!--EQ-->		
			<control type="multiimage">			
				<visible>!Player.Paused + !Player.Forwarding + !Player.Rewinding</visible>				
				<posx>260</posx>
				<posy>988</posy>
				<width>56</width> 
				<height>28</height>				
				<randomize>false</randomize>            
				<imagepath>eq/small</imagepath>
				<timeperimage>100</timeperimage>
				<colordiffuse>88FFFFFFF</colordiffuse>
				<fadetime>0</fadetime>
			</control>
			<control type="image">
				<visible>Player.Paused | Player.Forwarding | Player.Rewinding</visible>	
				<posx>260</posx>
				<posy>988</posy>
				<width>56</width>
				<height>28</height>			
				<texture>eq/small/paused/paused.png</texture>
				<colordiffuse>88FFFFFFF</colordiffuse>
			</control>			

		</control>
	</include>	
	
</includes>