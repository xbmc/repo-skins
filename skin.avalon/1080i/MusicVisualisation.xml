			<include>DimensionsFullscreen</include>	
		</control>	

		<!--Fanart-->
		<control type="image">				
			<include>animation_fade</include>		
			<include>DimensionsFullscreen</include>
			<fadetime>FanartCrossfadeTime</fadetime>
			<colordiffuse>aaFFFFFF</colordiffuse>
