<!--Avalon-->
<includes>
	<include name="LiveTVChannelView">
	
		<!--Fanart-->		
		<control type="image">					
			<include>animation_hoverslide</include>
			<posx>0</posx>
			<posy>129</posy>
			<width>1195</width>
			<height>660</height>	
			<texture fallback="backgrounds/pvr.png" diffuse="pvr/pvr_mattexx.png">$INFO[Skin.String(Home_Custom_Back_TV_Panel)]</texture>
		</control>

		<!--Panels-->
		<control type="group">			
			<include>animation_hoverslide</include>
			<control type="image">	<!--Panel-->					 
				<posx>0</posx>
				<posy>100</posy>
				<width>1920</width>
				<height>720</height>
				<texture>pvr/pvr_panel.png</texture>
			</control>					
			<control type="image">	<!--RSS-->   				      
				<posx>0</posx>
				<posy>680</posy>
				<width>1920</width>
				<height>180</height>
				<texture>common/rss-panel.png</texture>
			</control>
		</control>

		<!--Icons-->
		<control type="group">		
			<include>animation_hoverslide</include>
			<control type="image">	<!--Channel Icon-->     			
				<posx>750</posx>
				<posy>200</posy>
				<width>350</width>
				<height>350</height>
				<texture>$INFO[ListItem.Icon]</texture>		
				<aspectratio scalediffuse="false">stretch</aspectratio>
			</control>	
			<control type="image">	<!--Channel Icon Refection-->        			
				<posx>750</posx>
				<posy>550</posy>
				<width>350</width>
				<height>350</height>			
				<texture background="true" flipy="true" diffuse="poster_matte_reflect.png">$INFO[ListItem.Icon]</texture>
				<aspectratio scalediffuse="false">stretch</aspectratio>
			</control>
		</control>

		<!--List ID=11-->
		<control type="list" id="11">			
			<include>animation_hoverslide</include>
			<posx>1165</posx>
			<posy>158</posy>
			<width>900</width>
			<height>600</height>
			<onleft>9000</onleft>
			<onright>70</onright>
			<onup>11</onup>
			<ondown>11</ondown>
			<viewtype label="535">list</viewtype>
			<pagecontrol>70</pagecontrol>
			<scrolltime>200</scrolltime>
			
			<itemlayout height="100" width="900">
				<control type="label">		<!--Channel Number-->					
					<posx>50</posx>
					<posy>0</posy>
					<width>100</width>
					<height>100</height>
					<font>Reg40</font>
					<textcolor>aawhite</textcolor>
					<selectedcolor>mainblue</selectedcolor>
					<align>left</align>					
					<info>ListItem.ChannelNumber</info>
				</control>
				<control type="image">		<!--Rec-->
					<posx>610</posx>
					<posy>23</posy>
					<width>55</width>
					<height>55</height>
					<texture>pvr/icons/pvr_record.png</texture>
					<visible>ListItem.IsRecording</visible>
				</control>
				<control type="image">		<!--Now Playing Icon-->					
					<posx>190</posx>
					<posy>0</posy>
					<width>55</width>
					<height>55</height>
					<fadetime>600</fadetime>
					<texture>pvr/icons/pvr_play.png</texture>
					<visible>ListItem.Isplaying</visible>
				</control>
				<control type="image">		<!--Chanel Icon-->					
					<posx>110</posx>
					<posy>15</posy>
					<width>75</width>
					<height>75</height>
					<texture>$INFO[ListItem.Icon]</texture>
				</control>				
				<control type="label">		<!--Channel Name-->					
					<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="ListItem.Isplaying">Conditional</animation>
					<posx>200</posx>
					<posy>20</posy>
					<width>400</width>
					<height>25</height>
					<font>Reg30</font>
					<textcolor>aawhite</textcolor>
					<selectedcolor>mainblue</selectedcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>					
				</control>
				<control type="label">		<!--Program Description-->					
					<posx>200</posx>
					<posy>50</posy>
					<width>400</width>
					<height>20</height>
					<font>Reg25</font>
					<textcolor>grey</textcolor>
					<selectedcolor>grey</selectedcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Title]</label>
				</control>
				<control type="progress">	<!--Progress Bar-->						
					<posx>200</posx>
					<posy>80</posy>
					<width>400</width>
					<height>6</height>
					<colordiffuse>88FFFFFF</colordiffuse>
					<visible>ListItem.HasEpg</visible>
					<info>ListItem.Progress</info>
				</control>
			</itemlayout>
			<focusedlayout height="100" width="900">
				<control type="image">		<!--Slider-->					
					<animation type="Focus" condition="Container(11).OnNext" reversible="false">
						<effect type="slide" start="0,-100" end="0,0" time="150" tween="Quadratic" easing="out"/>
					</animation>
					<animation type="Focus" condition="Container(11).OnPrevious" reversible="false">
						<effect type="slide" start="0,100" end="0,0" time="150" tween="Quadratic" easing="out"/>
					</animation>
					<posx>0</posx>
					<posy>0</posy>
					<width>765</width>
					<height>100</height>
					<colordiffuse>88ffffff</colordiffuse>
					<texture flipx="false">common/slider.png</texture>
				</control>
				<control type="label">		<!--Channel Number-->					
					<posx>50</posx>
					<posy>0</posy>
					<width>100</width>
					<height>100</height>
					<font>Reg40</font>
					<textcolor>mainblue</textcolor>
					<selectedcolor>mainblue</selectedcolor>
					<info>ListItem.ChannelNumber</info>
				</control>
				<control type="image">		<!--Rec-->
					<posx>610</posx>
					<posy>23</posy>
					<width>55</width>
					<height>55</height>
					<texture>pvr/icons/pvr_record.png</texture>
					<visible>ListItem.IsRecording</visible>
				</control>
				<control type="image">		<!--Now Playing Icon-->			
					<posx>190</posx>
					<posy>0</posy>
					<width>55</width>
					<height>55</height>
					<fadetime>600</fadetime>
					<texture>pvr/icons/pvr_play.png</texture>
					<visible>ListItem.Isplaying</visible>
				</control>
				<control type="image">		<!--Chanel Icon-->				
					<posx>110</posx>
					<posy>15</posy>
					<width>75</width>
					<height>75</height>
					<texture>$INFO[ListItem.Icon]</texture>
				</control>				
				<control type="label">		<!--Channel Name-->					
					<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="ListItem.Isplaying">Conditional</animation>
					<posx>200</posx>
					<posy>20</posy>
					<width>400</width>
					<height>25</height>
					<font>Reg30</font>
					<textcolor>mainblue</textcolor>
					<selectedcolor>mainblue</selectedcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="label">		<!--Program Description-->					
					<posx>200</posx>
					<posy>50</posy>
					<width>400</width>
					<height>20</height>
					<font>Reg25</font>
					<textcolor>grey</textcolor>
					<selectedcolor>grey</selectedcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Title]</label>
				</control>
				<control type="progress">	<!--Progress Bar-->						
					<posx>200</posx>
					<posy>80</posy>
					<width>400</width>
					<height>6</height>
					<colordiffuse>88FFFFFF</colordiffuse>
					<visible>ListItem.HasEpg</visible>
					<info>ListItem.Progress</info>
				</control>
			</focusedlayout>
		</control>		
		
		<!--Scrollbar-->
		<control type="group">					
			<visible>IntegerGreaterThan(Container(11).NumItems,30)</visible>				
			<include>animation_hoverslide</include>		
			<control type="scrollbar" id="70">	<!--Scrollbar ID70-->							
				<posx>1840</posx> 
				<posy>170</posy>
				<height>570</height>				
				<onleft>50</onleft>
				<onright>50</onright>						
			</control>				
		</control>	

		<!--Infos-->
		<include>PVRInfos</include>

	</include>
</includes>