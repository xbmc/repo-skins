			<control type="label" id="2">	<!--Process Item-->				
				<posx>75</posx>
				<posy>25</posy>
				<width>540</width>
				<height>48</height>
				<font>Light25</font>
				<textcolor>80FFFFFF</textcolor>
			</control>				
