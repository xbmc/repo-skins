		<control type="group">				
			<visible>!Window.IsActive(MyPrograms.xml)</visible>
			<visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
			<posx>920</posx> <!--Center-->
			<posy>380</posy> <!--Center-->
			
