<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>50</defaultcontrol>
	<onload>SetProperty(Window.HasSettings,True,home)</onload>
	<onload>ClearProperty(MediaMenu,Home)</onload>
	<onunload>ClearProperty(Window.HasSettings,Home)</onunload>
	<allowoverlay>no</allowoverlay>
	<views>50</views>
	<controls>
		<include>GlobalBackground</include>
		<!--Time & Weather-->
		<include>TimeWeather</include>	
		<!--Header-->
		<include>Header</include>
		<!--Now Playing-->
		<include>NowPlayingMusic</include>
		<!--Now Playing Video-->
		<control type="group">				
			<control type="group">			<!--Fanart-->	
				<visible>Control.IsVisible(50)</visible> 
				<include>animation_view_change_pvr</include>
				<include>animation_hoverslide</include>
				<control type="image">					
					<posx>0</posx>
					<posy>129</posy>
					<width>1030</width> 
					<height>590</height>							
					<texture background="true" diffuse="pvr/pvr_channel_matte.png">special://skin/backgrounds/pvr.jpg</texture>				
					<aspectratio scalediffuse="false" align="center">scale</aspectratio>
					<fadetime>FanartCrossfadeTime</fadetime>					
				</control>	
			</control>	
			<control type="group">			<!--Panel-->
				<visible>Control.IsVisible(50)</visible> 
				<include>animation_view_change_pvr</include>
				<include>animation_hoverslide</include>
				<control type="image">	<!--Panel Info (RSS)-->			
					<posx>0</posx>
					<posy>609</posy>
					<width>1920</width>
					<height>180</height>
					<texture>views/view_50_info.png</texture>					
				</control>		
				<control type="image">	<!--Panel -->				
					<posx>0</posx>
					<posy>100</posy>
					<width>1920</width>
					<height>650</height>
					<texture>pvr/pvr_channel_panel.png</texture>					
				</control>	
			</control>				
			<control type="image">			<!--Icon-->	
				<visible>Control.IsVisible(50)</visible> 
				<include>animation_view_change_pvr</include>
				<include>animation_hoverslide</include>
				<posx>585</posx>
				<posy>210</posy>
				<width>345</width>
				<height>345</height>
				<fadetime>IconCrossfadeTime</fadetime>			
				<texture background="true" fallback="cover_default.png" diffuse="cover_matte.png">$INFO[ListItem.Icon]</texture>
				<aspectratio align="center" aligny="center">keep</aspectratio>				
			</control>	

			<control type="list" id="50">	<!--List ID=50-->					
				<include>animation_view_change_pvr</include>
				<include>animation_hoverslide</include>
				<posx>1000</posx>
				<posy>185</posy>
				<width>820</width>
				<height>480</height>
				<onleft>9000</onleft>
				<onright>noop</onright>				
				<onup>noop</onup>
				<ondown>noop</ondown>
				<pagecontrol>-</pagecontrol>
				<focusposition>0</focusposition>			
				<scrolltime>200</scrolltime>

				<itemlayout width="820" height="60">
					<control type="image">	<!--Rec-->					
						<posx>110</posx>
						<posy>0</posy>
						<width>55</width>
						<height>55</height>						
						<texture>pvr/icons/pvr_record.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>
					<control type="image">	<!--Now Playing Icon-->				
						<posx>110</posx>
						<posy>0</posy>
						<width>55</width>
						<height>55</height>						
						<texture>pvr/icons/pvr_play.png</texture>
						<visible>ListItem.Isplaying</visible>
						<visible>!ListItem.IsRecording</visible>
					</control>
					<control type="label">	<!--Channel Number-->							
						<posx>65</posx>
						<width>50</width>
						<font>Light35</font>
						<textcolor>midgrey</textcolor>
						<selectedcolor>orange</selectedcolor>		
						<label>$INFO[ListItem.ChannelNumber]</label>
					</control>					
					<control type="label">	<!--Channel Name-->		
						<animation type="Conditional" condition="ListItem.IsRecording" reversible="true">	
							<effect type="slide" start="0" end="50" time="0"/>			
						</animation>
						<animation type="Conditional" condition="ListItem.Isplaying" reversible="true">	
							<effect type="slide" start="0" end="50" time="0"/>			
						</animation>
						<posx>120</posx>
						<width>330</width>
						<font>Light35</font>
						<textcolor>midgrey</textcolor>
						<selectedcolor>orange</selectedcolor>		
						<label>$INFO[ListItem.ChannelName]</label>						
					</control>				
					<control type="label">	<!--Now Playing-->								
						<posx>820</posx>
						<width>330</width>
						<font>Light30</font>
						<align>right</align>	
						<textcolor>mainblue</textcolor>
						<selectedcolor>orange</selectedcolor>		
						<label>$INFO[ListItem.Title]</label>
					</control>	
				</itemlayout>
				<focusedlayout width="820" height="60">			
					<control type="image">	<!--Slider-->
						<animation type="Focus" condition="Container(50).OnNext" reversible="false">
							<effect type="slide" start="0,-50" end="0,0" time="150" tween="Quadratic" easing="out"/>
						</animation>
						<animation type="Focus" condition="Container(50).OnPrevious" reversible="false">
							<effect type="slide" start="0,50" end="0,0" time="150" tween="Quadratic" easing="out"/>
						</animation>
						<posx>0</posx>
						<posy>3</posy>
						<width>820</width>
						<height>50</height>
						<texture>common/slider.png</texture>
						<colordiffuse>DDffffff</colordiffuse>					
					</control>
					<control type="image">	<!--Rec-->					
						<posx>110</posx>
						<posy>0</posy>
						<width>55</width>
						<height>55</height>						
						<texture>pvr/icons/pvr_record.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>
					<control type="image">	<!--Now Playing Icon-->				
						<posx>110</posx>
						<posy>0</posy>
						<width>55</width>
						<height>55</height>						
						<texture>pvr/icons/pvr_play.png</texture>
						<visible>ListItem.Isplaying</visible>
						<visible>!ListItem.IsRecording</visible>
					</control>
					<control type="label">	<!--Channel Number-->							
						<posx>65</posx>
						<width>50</width>
						<font>Light35</font>
						<textcolor>mainblue</textcolor>
						<selectedcolor>orange</selectedcolor>		
						<label>$INFO[ListItem.ChannelNumber]</label>
					</control>	
					<control type="label">	<!--Channel Name-->		
						<animation type="Conditional" condition="ListItem.IsRecording" reversible="true">	
							<effect type="slide" start="0" end="50" time="0"/>			
						</animation>
						<animation type="Conditional" condition="ListItem.Isplaying" reversible="true">	
							<effect type="slide" start="0" end="50" time="0"/>			
						</animation>
						<posx>120</posx>
						<width>330</width>
						<font>Light35</font>
						<scrollspeed>30</scrollspeed>
						<textcolor>mainblue</textcolor>
						<selectedcolor>orange</selectedcolor>		
						<label>$INFO[ListItem.ChannelName]</label>
					</control>	
					<control type="label">	<!--New Search-->
						<visible>IsEmpty(ListItem.ChannelName)</visible>							
						<posx>65</posx>
						<width>330</width>
						<font>Light35</font>
						<textcolor>mainblue</textcolor>
						<selectedcolor>orange</selectedcolor>		
						<label>$INFO[ListItem.Label]</label>
					</control>	
					<control type="label">	<!--Now Playing-->								
						<posx>820</posx>
						<width>330</width>
						<font>Light30</font>
						<align>right</align>
						<scrollspeed>30</scrollspeed>						
						<textcolor>mainblue</textcolor>
						<selectedcolor>orange</selectedcolor>		
						<label>$INFO[ListItem.Title]</label>
					</control>		
				</focusedlayout>				

			</control>	

			<control type="group">			<!--RSS Label-->		
				<visible>Control.IsVisible(50)</visible> 
				<include>animation_view_change_pvr</include>
				<include>animation_hoverslide</include>
				<posx>0</posx>
				<posy>722</posy>
				<control type="label">	<!--RSS 1-->					
					<posx>80</posx>
					<posy>0</posy> 		
					<width>500</width>
					<font>Light32</font>			
					<textcolor>mainblue</textcolor>
					<label></label>
				</control>
				<control type="label">	<!--RSS 2-->					
					<posx>1065</posx>
					<posy>0</posy> 
					<width>800</width>				
					<font>Light32</font>
					<textcolor>mainblue</textcolor>
					<label>$INFO[Control.GetLabel(35)]</label>	                 
				</control>				
				<control type="label">	<!--RSS 3-->	
					<posx>1820</posx>
					<posy>0</posy> 
					<width>250</width>
					<align>right</align>				
					<font>Light32</font>
					<textcolor>mainblue</textcolor>	
					<label>$INFO[Container.CurrentPage]/$INFO[Container.NumPages]</label>
				</control>	
			</control>
			<control type="label">			<!--Label 1-->	
				<visible>Control.IsVisible(50)</visible> 
				<include>animation_view_change_pvr</include>
				<include>animation_fade</include>
				<visible>!IsEmpty(Container(50).ListItem.ChannelName)</visible>
				<posx>700</posx>
				<posy>795</posy>						
				<width>1150</width> 		
				<font>Reg40Bold</font>			
				<textcolor>aawhite</textcolor>	
				<label>$INFO[ListItem.Label]</label>
			</control>
			<control type="group">			<!--Additional Info-->	
				<visible>Control.IsVisible(50)</visible> 
				<include>animation_view_change_pvr</include>
				<include>animation_fade</include>
				<visible>!IsEmpty(Container(50).ListItem.ChannelName)</visible>
				<posx>700</posx>
				<posy>865</posy>
				<control type="group">	<!-- Ground 1 -->									
					<posy>0</posy>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>180</width>			
						<textcolor>mainblue</textcolor>			
						<label>$LOCALIZE[19030] :</label>			
					</control>
					<control type="fadelabel">					
						<posx>170</posx>
						<posy>0</posy>
						<width>300</width>	
						<textcolor>aawhite</textcolor>
						<label>$INFO[Container(17).ListItem.Title]</label>	     		
					</control>					
				</control>
				<control type="group">	<!-- Ground 2 -->									
					<posy>40</posy>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>180</width>			
						<textcolor>mainblue</textcolor>			
						<label>$LOCALIZE[19126] :</label>			
					</control>
					<control type="label">						
						<posx>170</posx>
						<posy>0</posy>
						<width>300</width>	
						<textcolor>aawhite</textcolor>
						<label>$INFO[Container(17).ListItem.StartTime]</label>	     		
					</control>					
				</control>
				<control type="group">	<!-- Ground 3 -->									
					<posy>80</posy>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>180</width>							
						<textcolor>mainblue</textcolor>			
						<label>$LOCALIZE[19127] :</label>			
					</control>
					<control type="label">						
						<posx>170</posx>
						<posy>0</posy>
						<width>300</width>	
						<textcolor>aawhite</textcolor>
						<label>$INFO[Container(17).ListItem.EndTime]</label>	     		
					</control>					
				</control>
			</control>
			<control type="textbox">		<!--Info Plot-->	
				<visible>Control.IsVisible(50)</visible> 
				<include>animation_view_change_pvr</include>
				<include>animation_fade</include>
				<visible>!IsEmpty(Container(50).ListItem.ChannelName)</visible>
				<posx>1200</posx>
				<posy>875</posy>	
				<width>650</width>
				<height>150</height>
				<font>Light30</font>				
				<textcolor>aawhite</textcolor>	
				<shadowcolor></shadowcolor> 				
				<label>$INFO[ListItem.Plot]</label>		
				<autoscroll time="2000" delay="3000" repeat="5000">Skin.HasSetting(AutoScroll)</autoscroll>
			</control> 
		</control>
		<include>PVRSubMenu</include>
		<include>SubMenuTabLeft</include>
	</controls>
</window>
