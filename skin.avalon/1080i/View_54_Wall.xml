			<scrolltime tween="cubic" easing="inout">500</scrolltime>
			<focusposition>0</focusposition>
			<orientation>vertical</orientation>
			<preloaditems>2</preloaditems>

			<itemlayout height="265" width="195">								
				<control type="image"><!--Poster-->						
					<width>176</width>
					<height>250</height>					
					<texture background="true" fallback="poster_default.png" diffuse="poster_matte.png">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="center">stretch</aspectratio>
				</control>							
			</itemlayout>	
			<focusedlayout height="265" width="195">
				<control type="button">
					<include>HiddenButton</include>
					<onfocus>Skin.SetBool(ViewChange)</onfocus>					
				</control>
				<control type="image"><!--Poster-->	
					<animation type="Focus">			
						<effect type="zoom"  start="100" end="122" center="85,125" time="150"/>						
					</animation>
					<animation type="UnFocus">			
						<effect type="zoom"  start="122" end="100" center="85,125" time="150"/>						
					</animation>
					<width>176</width>
					<height>250</height>					
					<texture background="true" fallback="poster_default.png" diffuse="poster_matte.png">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="center">stretch</aspectratio>
				</control>	
				<control type="image"><!--Poster Focus-->		
					<animation type="Focus">			
						<effect type="zoom"  start="100" end="126" center="85,125" time="150"/>
						<effect type="fade"  start="0" end="100"  time="150"/>
					</animation>
					<animation type="UnFocus">			
						<effect type="zoom"  start="126" end="100" center="85,125" time="150"/>
						<effect type="fade"  start="100" end="0" time="0"/>
					</animation>					
					<width>176</width>
					<height>250</height>					
					<texture background="true">poster_focus.png</texture>
					<aspectratio align="center" aligny="center">stretch</aspectratio>
				</control>	
			</focusedlayout>

		</control>

