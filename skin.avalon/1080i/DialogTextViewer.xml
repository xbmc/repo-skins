<!--Basic-->
<window>
    <defaultcontrol>61</defaultcontrol>
    <controls>        
		
		<!--Dialog Overlay-->	
		<include>DialogOverlay</include>
		
		<!--Dialog Tex Viewer-->
		 <control type="group">
               <include>animation_dialog</include>
                
                <control type="label" id="1">
                    <description>Heading</description>
                    <posx>473</posx>
                    <posy>170</posy>
                    <width>974</width>                   
                    <label>-</label>
                    <include>DialogHeader</include>
                    <align>center</align>
                </control>
                
				<!--Panel-->
                <control type="image">
                    <posx>920</posx>
                    <posy>211</posy>
                    <width>80</width>
                    <height>60</height>
                    <texture>dialogs/default/arrow.png</texture>
                </control>
                <control type="image">
                    <posx>445</posx>
                    <posy>231</posy>
                    <width>1030</width>
                    <height>616</height>
                    <texture border="39">dialogs/default/bg.png</texture>
                </control>
                <control type="image">
                	<posx>479</posx>
                	<posy>265</posy>
                	<width>962</width>
                	<height>548</height>
                	<texture border="5">dialogs/default/inner.png</texture>
                </control>
                
                <control type="textbox" id="5">
                    <description>textarea</description>
                    <posx>495</posx>
                    <posy>275</posy>
                    <width>930</width>
                    <height>530</height>
                    <label>-</label>
					<include>DialogLabel</include>
                    <align>left</align>                   
                    <pagecontrol>61</pagecontrol>
                </control>
       
                <control type="scrollbar" id="61">
                    <posx>1426</posx>
                    <posy>268</posy>
                    <width>11</width>
                    <height>541</height>
                    <texturesliderbackground>-</texturesliderbackground>
                    <texturesliderbar border="0,6,0,6">dialogs/default/scrollbar.png</texturesliderbar>
                    <texturesliderbarfocus border="0,6,0,6">dialogs/default/scrollbar.png</texturesliderbarfocus>
                    <textureslidernib>-</textureslidernib>
                    <textureslidernibfocus>-</textureslidernibfocus>
                    <onleft>8000</onleft>
                    <onright>8000</onright>
                    <showonepage>false</showonepage>
                    <orientation>vertical</orientation>
                    <animation effect="fade" start="75" end="0" time="300" tween="sine" easing="inout" condition="!Control.IsVisible(62)">Conditional</animation>
                </control>
    
                <control type="group" id="8000">
                    <posx>466</posx>
                    <posy>809</posy>
                    <control type="button" id="7">
                        <posx>0</posx>
                        <description>Close</description>
                        <label>$LOCALIZE[222]</label>
						<include>DialogButtonOKCancel</include>
                        <texturefocus>common/cancel-fo.png</texturefocus>
                        <texturenofocus>common/cancel-nf.png</texturenofocus>  
						<width>350</width>
						<height>100</height>
                        <onclick>PreviousMenu</onclick>
                        <onleft>61</onleft>
                        <onright>61</onright>
                        <onup>61</onup>
                        <ondown>61</ondown>
                        <animation effect="fade" start="100" end="75" time="0" condition="!Control.IsEnabled(7)">Conditional</animation>
                    </control>
                </control>
            </control>
		
    </controls>
</window>