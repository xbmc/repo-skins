<!--Avalon-->
<window>
	<defaultcontrol>32</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>

		<!--Global Background-->
		<include>GlobalBackground</include>
		<!--Header PVR-->
		<include>HeaderPVR</include>
		<!--Time & Weather-->
		<include>TimeWeather</include>
		<!--Music_NowPlaying-->
		<include>NowPlayingMusicPVR</include>
		<!--Video_NowPlaying-->
		<include>NowPlayingVideoPVR</include>

		<!--Hidden-->
		<control type="label" id="29">
			<description>Empty so we can pass the values up one level</description>
			<visible>False</visible>
		</control>
		<control type="label" id="30">
			<description>Empty so we can pass the values up one level</description>
			<visible>False</visible>
		</control>

		<!--PVR Views-->
		<control type="group" id="50">         
			<include>LiveTVChannelView</include>		<!--view id=11-->
		</control>

		<!--Sub Menu Tab Left-->
		<include>SubMenuTabLeft</include>

		<!--Sub Menu-->
		<control type="group">
			<posx>15</posx>
			<posy>50</posy>

			<visible>!Window.IsActive(DialogKeyboard.xml)</visible>

			<include>animation_visible_hidden</include>
			<include>animation_fade</include>
			<include>animation_sub_menu</include>

			<!--Panel-->
			<control type="image">
				<posx>-19</posx>
				<posy>360</posy>
				<width>60</width>
				<height>80</height>
				<texture>dialogs/default/arrow-left-black.png</texture>
			</control>
			<control type="image">
				<width>500</width>
				<height>800</height>
				<texture border="39">dialogs/default/bg-black.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>

			<!--Gouplist 9000-->
			<control type="grouplist" id="9000">
				<posx>21</posx>
				<posy>70</posy>
				<width>458</width>
				<height>565</height>
				<itemgap>3</itemgap>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<orientation>vertical</orientation>

				<!--Buttons-->
				<control type="label" id="200">
					<!--Label Menu-->
					<width>458</width>
					<align>left</align>
					<textoffsetx>50</textoffsetx>
					<font>Light40</font>
					<textcolor>mainblue</textcolor>
					<label>$LOCALIZE[41090]:</label>
				</control>
				<control type="image" id="201">
					<!--Seperator-->
					<width>458</width>
					<height>20</height>
					<align>left</align>
					<texture>common/menu-separator.png</texture>
				</control>
				<control type="button" id="32">
					<description>TV Channels</description>
					<!--Refresh-->
					<description>Refresh</description>
					<label>19023</label>
					<include>SubMenuButton</include>
				</control>
				<control type="button" id="33">
					<description>Radio Channels</description>
					<!--Settings-->
					<description>Settings</description>
					<label>19024</label>
					<include>SubMenuButton</include>
				</control>
				<control type="button" id="31">
					<description>TV Guide</description>
					<include>SubMenuButton</include>
					<label>$LOCALIZE[19222]: $LOCALIZE[19030]</label>
				</control>
				<control type="button" id="34">
					<description>Recordings</description>
					<include>SubMenuButton</include>
					<label>19163</label>
				</control>
				<control type="button" id="35">
					<description>Timers</description>
					<include>SubMenuButton</include>
					<label>19040</label>
				</control>
				<control type="button" id="36">
					<description>Search</description>
					<include>SubMenuButton</include>
					<label>137</label>
				</control>
			</control>
		</control>        
	</controls>
</window>