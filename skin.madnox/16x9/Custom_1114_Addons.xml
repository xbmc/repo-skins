				<bottom>144</bottom>
				<onleft>51</onleft>
			</control>
		</control>
		<!-- Topbar -->
		<include content="TopBar">
			<param name="visible">!Skin.HasSetting(AddonsHideTopBar)</param>
			<param name="icon">addons.png</param>
			<param name="label">$LOCALIZE[24001]</param>
		</include>
		<!-- Media Menu -->
