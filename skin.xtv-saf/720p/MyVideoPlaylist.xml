<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<include>screen-fade</include>
	<controls>
		<include>backgroundvideo</include>
		<control type="label"><!-- Screen heading -->
			<left>946</left>
			<top>25</top>
			<width>310</width>
			<height>50</height>
			<label>$LOCALIZE[10522]</label>
			<font>font18</font>
			<wrapmultiline>true</wrapmultiline>
		</control>

		<include>ListView</include>

		<control type="videowindow">
			<left>53</left>
			<top>125</top>
			<width>619</width>
			<height>437</height>
			<aspectratio>keep</aspectratio>
		</control>

		<control type="group">
			<visible>Player.HasVideo</visible>
			<control type="label">
				<left>35</left>
				<top>568</top>
				<width>619</width>
				<height>30</height>
				<font>font12</font>
				<label>$INFO[VideoPlayer.Title]</label>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
			</control>
			<control type="progress">
				<left>35</left>
				<top>605</top>
				<width>440</width>
				<height>15</height>
				<info>Player.Progress</info>
			</control>
			<control type="label"><!-- Time/Duration Label -->
				<left>485</left>
				<top>600</top>
				<width>200</width>
				<height>25</height>
				<font>font11</font>
				<label>$INFO[VideoPlayer.Time]$INFO[VideoPlayer.Duration, / ]</label>
			</control>
		</control>
		<control type="group">
			<top>720</top>
			<include>View-as</include>
			<include>fadebackground</include>
			<control type="image"><!-- Button background -->
				<left>460</left>
				<top>212</top>
				<width>398</width>
				<height>356</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>477</left>
				<top>225</top>
				<width>362</width>
				<height>336</height>
				<onleft>50</onleft>
				<onright>50</onright>
				<itemgap>0</itemgap>
				<control type="button" id="20"><!-- Shuffle -->
					<width>362</width>
					<height>56</height>
					<font>font12</font>
					<label>$LOCALIZE[191]</label>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="radiobutton" id="28"><!-- Randomize -->
					<width>362</width>
					<height>56</height>
					<font>font12</font>
					<label>$LOCALIZE[13319]</label>
					<textoffsetx>10</textoffsetx>
					<radioposx>330</radioposx>
				</control>
				<control type="button" id="26"><!-- Repeat -->
					<width>362</width>
					<height>56</height>
					<font>font12</font>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="button" id="21"><!-- Save -->
					<width>362</width>
					<height>56</height>
					<font>font12</font>
					<label>$LOCALIZE[190]</label>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="button" id="22"><!-- Clear -->
					<width>362</width>
					<height>56</height>
					<font>font12</font>
					<label>$LOCALIZE[192]</label>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="button" id="1200"><!-- Player controls -->
					<width>362</width>
					<height>56</height>
					<font>font12</font>
					<label>$LOCALIZE[16003] $LOCALIZE[478]</label>
					<textoffsetx>10</textoffsetx>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<onclick>SetFocus(50)</onclick>
					<enable>Player.HasAudio | Player.HasVideo</enable>
				</control>
			</control>
		</control>
	</controls>
</window>