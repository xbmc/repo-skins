			<!-- Progress bar -->
			<control type="progress">
				<left>238</left>
				<top>652</top>
				<width>800</width>
				<height>16</height>
				<info>Player.ProgressCache</info>
				<colordiffuse>FF777777</colordiffuse>
			</control>
			<control type="progress">
				<left>238</left>
				<top>652</top>
				<width>800</width>
				<height>16</height>
