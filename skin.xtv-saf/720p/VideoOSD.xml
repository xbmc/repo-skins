				<colordiffuse>ProgressBarColor</colordiffuse>
			</control>
			<control type="slider" id="401"><!-- Seek Slider -->
				<left>238</left>
				<top>650</top>
				<width>800</width>
				<height>20</height>
				<action>seek</action>
			</control>
		</control>
