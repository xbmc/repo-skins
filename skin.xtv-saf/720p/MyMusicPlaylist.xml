<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<include>screen-fade</include>
	<controls>
		<include>background</include>
		<control type="label"><!-- Screen heading -->
			<left>946</left>
			<top>25</top>
			<width>310</width>
			<height>50</height>
			<label>$LOCALIZE[10517]</label>
			<font>font18</font>
			<wrapmultiline>true</wrapmultiline>
		</control>

		<include>ListView</include>

		<control type="image">
			<left>122</left>
			<top>150</top>
			<width>384</width>
			<height>384</height>
			<texture background="true" diffuse="mask-squ.png">$INFO[ListItem.Icon]</texture>
			<aspectratio scalediffuse="false">keep</aspectratio>
		</control>

		<control type="group">
			<visible>Player.HasAudio</visible>
			<control type="progress">
				<left>35</left>
				<top>568</top>
				<width>460</width>
				<height>15</height>
				<info>Player.Progress</info>
				<colordiffuse>ProgressBarColor</colordiffuse>
			</control>
			<control type="label">
				<left>505</left>
				<top>560</top>
				<width>180</width>
				<height>25</height>
				<font>font12</font>
				<label>$INFO[Player.Time]$INFO[Player.Duration,/ ]</label>
			</control>
			<control type="label">
				<left>35</left>
				<top>585</top>
				<width>480</width>
				<height>25</height>
				<label>$INFO[MusicPlayer.Artist]</label>
				<font>font12</font>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
			</control>
			<control type="label">
				<left>35</left>
				<top>615</top>
				<width>660</width>
				<height>25</height>
				<font>font12</font>
				<label>$INFO[MusicPlayer.Title]</label>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
			</control>
		</control>

		<control type="group">
			<left>0</left>
			<top>720</top>
			<include>View-as</include>
			<include>fadebackground</include>
			<control type="image"><!-- Button background -->
				<left>460</left>
				<top>212</top>
				<width>398</width>
				<height>306</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>477</left>
				<top>225</top>
				<width>362</width>
				<height>280</height>
				<onleft>50</onleft>
				<onright>50</onright>
				<itemgap>0</itemgap>
				<control type="button" id="20"><!-- Shuffle -->
					<width>362</width>
					<height>56</height>
					<font>font12</font>
					<label>$LOCALIZE[191]</label>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="radiobutton" id="28"><!-- Randomize -->
					<width>362</width>
					<height>56</height>
					<font>font12</font>
					<label>$LOCALIZE[13319]</label>
					<textoffsetx>10</textoffsetx>
					<radioposx>330</radioposx>
				</control>
				<control type="button" id="26"><!-- Repeat -->
					<width>362</width>
					<height>56</height>
					<font>font12</font>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="button" id="21"><!-- Save -->
					<width>362</width>
					<height>56</height>
					<font>font12</font>
					<label>$LOCALIZE[190]</label>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="button" id="22"><!-- Clear -->
					<width>362</width>
					<height>56</height>
					<font>font12</font>
					<label>$LOCALIZE[192]</label>
					<textoffsetx>10</textoffsetx>
				</control>
			</control>
		</control>
	</controls>
</window>