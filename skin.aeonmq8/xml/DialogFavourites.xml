<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- Aeon MQ 8 -->
	<defaultcontrol always="true">450</defaultcontrol>
	<onunload>RunScript(script.favourites)</onunload>
	<controls>
		<control type="image">
			<include>backgroundspecs_single</include>
			<texture background="true">special://skin/backgrounds/favourites.jpg</texture>
		</control>
		<control type="group">
			<!-- default group -->
			<include>animation_window</include>
			<control type="group">
				<!-- right group -->
				<left>75</left>
				<animation effect="slide" start="900,0" end="0,0" time="1000" tween="cubic" easing="out">WindowOpen</animation>
				<animation effect="slide" start="0,0" end="900,0" time="1000" tween="cubic" easing="out">WindowClose</animation>
				<animation effect="slide" start="1200,0" end="0,0" time="1000" tween="cubic" easing="out">Visible</animation>
				<animation effect="fade" start="100" end="0" time="400">Hidden</animation>
				<control type="image">
					<left>1208</left>
					<top>69</top>
					<width>638</width>
					<height>45</height>
					<texture>shadow_h.png</texture>
					<colordiffuse>C3FFFFFF</colordiffuse>
				</control>
				<control type="image">
					<left>1208</left>
					<top>112</top>
					<width>638</width>
					<height>968</height>
					<texture>$VAR[texture_base]</texture>
					<colordiffuse>$INFO[skin.string(colortexture)]</colordiffuse>
					<animation effect="fade" end="85" condition="true">Conditional</animation>
				</control>
				<control type="image">
					<left>1208</left>
					<top>680</top>
					<width>638</width>
					<height>402</height>
					<texture>$VAR[texture_base]</texture>
					<colordiffuse>$INFO[skin.string(colortexture)]</colordiffuse>
				</control>
				<control type="image">
					<left>1260</left>
					<top>142</top>
					<width>540</width>
					<height>540</height>
					<fadetime>commonfadetime</fadetime>
					<texture fallback="DefaultVideoPoster.png" background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio aligny="bottom">keep</aspectratio>
					<bordertexture border="-2">black.png</bordertexture>
				</control>
				<control type="image">
					<left>1260</left>
					<top>690</top>
					<width>540</width>
					<height>540</height>
					<fadetime>commonfadetime</fadetime>
					<texture flipy="true" diffuse="thumb_reflect.png" background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<bordertexture flipy="true" border="-2" diffuse="thumb_reflect.png">black.png</bordertexture>
				</control>
				<control type="textbox">
					<left>1290</left>
					<top>694</top>
					<width>465</width>
					<height>262</height>
					<font>font_plot</font>
					<label>$VAR[plot]</label>
					<autoscroll delay="15000" time="2000" repeat="15000">!Skin.HasSetting(noallowscroll)</autoscroll>
					<include>animation_fade</include>
				</control>
			</control>
			<control type="group">
				<!-- left group -->
				<animation effect="slide" time="700" start="-1200,0" end="0,0" tween="cubic" easing="out">WindowOpen</animation>
				<animation effect="slide" time="700" start="0,0" end="-1200,0" tween="cubic" easing="out">WindowClose</animation>
				<animation effect="slide" time="700" start="-1200,0" end="0,0" tween="cubic" easing="out">Visible</animation>
				<animation effect="fade" time="200" start="100" end="0">Hidden</animation>
				<control type="image">
					<left>0</left>
					<top>69</top>
					<width>1282</width>
					<height>45</height>
					<texture>shadow_h.png</texture>
					<colordiffuse>C3FFFFFF</colordiffuse>
				</control>
				<control type="image">
					<left>1282</left>
					<top>112</top>
					<width>45</width>
					<height>968</height>
					<texture>shadow.png</texture>
					<colordiffuse>C3FFFFFF</colordiffuse>
				</control>
				<control type="image">
					<left>0</left>
					<top>112</top>
					<width>1282</width>
					<height>968</height>
					<texture>$VAR[texture_base]</texture>
					<colordiffuse>$INFO[skin.string(colortexture)]</colordiffuse>
					<animation effect="fade" end="85" condition="true">Conditional</animation>
				</control>
				<control type="image">
					<left>0</left>
					<top>112</top>
					<width>1282</width>
					<height>90</height>
					<texture>$VAR[texture_base]</texture>
					<colordiffuse>$INFO[skin.string(colortexture)]</colordiffuse>
				</control>
				<control type="label" id="1">
					<!-- header label -->
					<left>68</left>
					<top>136</top>
					<width>1156</width>
					<height>34</height>
					<font>font_list</font>
					<label>1036</label>
				</control>
				<control type="list" id="450">
					<!-- Common List -->
					<viewtype label="31801">list</viewtype>
					<left>0</left>
					<top>237</top>
					<width>1282</width>
					<height>705</height>
					<pagecontrol>80</pagecontrol>
					<onleft>Close</onleft>
					<onright>80</onright>
					<orientation>vertical</orientation>
					<scrolltime>450</scrolltime>
					<preloaditems>2</preloaditems>
					<itemlayout height="60">
						<control type="image">
							<left>15</left>
							<top>58</top>
							<width>1252</width>
							<height>1</height>
							<texture>line.png</texture>
						</control>
						<control type="label">
							<left>68</left>
							<top>0</top>
							<width>1140</width>
							<height>62</height>
							<font>font_button</font>
							<aligny>center</aligny>
							<include>listcolor</include>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</itemlayout>
					<focusedlayout height="60">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>1282</width>
							<height>62</height>
							<texture>grey.png</texture>
							<animation effect="fade" start="100" end="50" time="0" condition="!Control.Hasfocus(450)">conditional</animation>
						</control>
						<control type="label">
							<left>68</left>
							<top>0</top>
							<width>1140</width>
							<height>62</height>
							<font>font_header</font>
							<aligny>center</aligny>
							<include>listcolorfocus</include>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</focusedlayout>
				</control>
			</control>
			<control type="scrollbar" id="80">
				<include>ScrollBar_Vertical</include>
				<left>322</left>
				<top>210</top>
				<height>477</height>
				<onleft>450</onleft>
				<onright>450</onright>
				<visible allowhiddenfocus="true">Control.HasFocus(80)</visible>
			</control>
			<include>MultiData</include>
		</control>
	</controls>
</window>
