<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- Aeon MQ 8 -->
	<defaultcontrol always="true">3110</defaultcontrol>
	<onload>Skin.SetBool(colorpicker)</onload>
	<onunload>Skin.Reset(colorpicker)</onunload>
	<controls>
		<!-- default group -->
		<control type="group">
			<animation type="WindowOpen" reversible="false">
				<effect type="slide" start="0,0" end="-450,0" time="300" easing="inout" tween="cubic" />
				<effect type="fade" start="0" end="100" time="300" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="slide" start="-450,0" end="0,0" time="300" easing="inout" tween="cubic" />
				<effect type="fade" start="100" end="0" time="300" />
			</animation>
			<left>1920</left>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>45</width>
				<height>1080</height>
				<texture flipx="true">shadow.png</texture>
				<colordiffuse>C3FFFFFF</colordiffuse>
			</control>
			<control type="image">
				<left>-4</left>
				<top>0</top>
				<width>8</width>
				<height>1080</height>
				<texture>grey.png</texture>
				<colordiffuse>$INFO[skin.string(colortexture)]</colordiffuse>
			</control>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>450</width>
				<height>1080</height>
				<texture>$VAR[texture_base]</texture>
				<colordiffuse>$INFO[skin.string(colortexture)]</colordiffuse>
				<animation effect="fade" end="75" condition="true">Conditional</animation>
			</control>
			<!-- Botao para escolher paleta de cores -->
			<control type="button" id="3030">
				<left>0</left>
				<top>20</top>
				<width>450</width>
				<height>60</height>
				<onup>3010</onup>
				<ondown>3110</ondown>
				<onleft>Close</onleft>
				<textoffsetx>45</textoffsetx>
				<label>$LOCALIZE[31404]</label>
				<label2>$INFO[Window.Property(palettename)]</label2>
				<visible>!String.IsEmpty(Window.Property(palettename))</visible>
			</control>
			<!-- Painel de cores -->
			<control type="panel" id="3110">
				<viewtype label="panel">icons</viewtype>
				<left>45</left>
				<top>90</top>
				<width>350</width>
				<height>670</height>
				<onup>3030</onup>
				<ondown>3010</ondown>
				<onleft>3110</onleft>
				<onright>80</onright>
				<orientation>vertical</orientation>
				<preloaditems>4</preloaditems>
				<pagecontrol>80</pagecontrol>
				<itemlayout height="42.1" width="42.1">
					<control type="image">
						<width>41</width>
						<height>41</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
				</itemlayout>
				<focusedlayout height="42.1" width="42.1">
					<control type="image">
						<left>2</left>
						<width>41</width>
						<height>41</height>
						<texture>$INFO[ListItem.Icon]</texture>
						<bordertexture border="-2">$VAR[texture_base]</bordertexture>
						<animation effect="zoom" center="auto" start="100" end="200" time="200" easing="inout" tween="sine">Focus</animation>
					</control>
				</focusedlayout>
			</control>
			<!-- Editar manual -->
			<control type="button" id="3010">
				<left>0</left>
				<top>830</top>
				<width>450</width>
				<height>60</height>
				<onup>3110</onup>
				<ondown>3015</ondown>
				<onleft>Close</onleft>
				<align>center</align>
				<aligny>center</aligny>
				<font>font_button</font>
				<textoffsetx>45</textoffsetx>
				<label>$LOCALIZE[31649]  $INFO[Window.Property(colorstring)]</label>
			</control>
			<!-- Previa da cor -->
			<control type="image">
				<left>45</left>
				<top>835</top>
				<width>50</width>
				<height>50</height>
				<texture>$VAR[texture_base]</texture>
			</control>
			<control type="image">
				<left>47</left>
				<top>837</top>
				<width>46</width>
				<height>46</height>
				<texture>colorselector_icon.png</texture>
				<colordiffuse>$INFO[Window.Property(colorstring)]</colordiffuse>
			</control>
			<!-- Grupo transparencia -->
			<control type="group" id="3020">
				<left>0</left>
				<top>890</top>
				<width>450</width>
				<height>60</height>
				<control type="image">
					<width>450</width>
					<height>60</height>
					<texture>grey.png</texture>
					<visible>Control.HasFocus(3015)</visible>
				</control>
				<!-- Nivel de transparencia -->
				<control type="label" id="3017">
					<left>45</left>
					<width>230</width>
					<height>60</height>
					<align>left</align>
					<label>$ADDON[script.skin.helper.colorpick 32049] $INFO[Control.Getlabel(3015)]</label>
					<textcolor>$VAR[transparencybutton]</textcolor>
				</control>
				<control type="slider" id="3015">
					<left>280</left>
					<width>150</width>
					<onup>3010</onup>
					<ondown>3012</ondown>
				</control>
			</control>
			<!-- Botoes do rodape -->
			<control type="image">
				<left>0</left>
				<top>959</top>
				<width>450</width>
				<height>8</height>
				<texture>grey.png</texture>
				<colordiffuse>$INFO[skin.string(colortexture)]</colordiffuse>
			</control>
			<control type="image">
				<left>0</left>
				<top>967</top>
				<width>450</width>
				<height>60</height>
				<texture>$VAR[texture_base]</texture>
				<colordiffuse>$INFO[skin.string(colortexture)]</colordiffuse>
				<animation effect="fade" end="25" condition="true">Conditional</animation>
			</control>
			<control type="grouplist">
				<left>0</left>
				<top>967</top>
				<width>450</width>
				<height>60</height>
				<orientation>horizontal</orientation>
				<itemgap>0</itemgap>
				<!-- Salvar -->
				<control type="button" id="3012">
					<width>225</width>
					<height>60</height>
					<onup>3020</onup>
					<ondown>3030</ondown>
					<onleft>3010</onleft>
					<align>center</align>
					<aligny>center</aligny>
					<font>font_button</font>
					<textoffsetx>45</textoffsetx>
					<label>190</label>
				</control>
				<!-- Cancelar -->
				<control type="button" id="3011">
					<width>225</width>
					<height>60</height>
					<onup>3020</onup>
					<ondown>3030</ondown>
					<onleft>3010</onleft>
					<align>center</align>
					<aligny>center</aligny>
					<font>font_button</font>
					<textoffsetx>45</textoffsetx>
					<label>$LOCALIZE[222]</label>
				</control>
			</control>
			<control type="scrollbar" id="80">
				<include>ScrollBar_Vertical</include>
				<left>393</left>
				<top>82</top>
				<height>687</height>
				<onleft>3110</onleft>
				<onright>3110</onright>
				<animation effect="fade" time="200">Visible</animation>
				<animation effect="fade" time="50">Hidden</animation>
			</control>
		</control>
	</controls>
</window>
