<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Aeon MQ 8 -->
	<!--############################################################################   MEU TIPO DE VISTA 1 - 72   ############################################################################-->
	<include name="ViewMyViewType1">
		<!-- default group -->
		<control type="group">
			<top>-45</top>
			<animation effect="fade" time="400">VisibleChange</animation>
			<control type="button" id="9972">
				<include>invisible</include>
				<onleft>72</onleft>
				<onright>72</onright>
				<onup>9900</onup>
				<ondown>72</ondown>
			</control>
			<visible>Control.IsVisible(72)</visible>
			<!-- painel de info -->
			<control type="group">
				<animation effect="slide" start="0,-900" end="0,0" time="500" tween="sine" easing="out">Visible</animation>
				<animation effect="slide" start="0,0" end="0,-900" time="500" tween="sine" easing="out">Hidden</animation>
				<visible>[Control.HasFocus(9972) | String.IsEqual(skin.string(myviewtype1videopanel),alwayson) | String.IsEqual(skin.string(myviewtype1videopanel),auto) + Control.IsVisible(9921)] + ![String.IsEqual(ListItem.Label,..) | Container.Content(years) | Container.Content(genres) | Container.Content(countries) | Container.Content(studios)]</visible>
				<control type="image">
					<left>0</left>
					<top>129</top>
					<width>1920</width>
					<height>45</height>
					<texture>shadow_h.png</texture>
					<colordiffuse>C3FFFFFF</colordiffuse>
				</control>
				<control type="image">
					<left>0</left>
					<top>174</top>
					<width>1920</width>
					<height>795</height>
					<texture flipy="true" diffuse="shadow_mask.png">$VAR[texture_base]</texture>
					<colordiffuse>$INFO[skin.string(colortexture)]</colordiffuse>
					<animation effect="fade" end="85" condition="true">Conditional</animation>
				</control>
				<!-- Separador - Grade 1 -->
				<control type="image">
					<left>45</left>
					<top>563</top>
					<width>1830</width>
					<height>4</height>
					<texture>grid1_separator.png</texture>
					<colordiffuse>$INFO[skin.string(colormyviewtype1separator)]</colordiffuse>
					<visible>Skin.HasSetting(myviewtype1separator) + String.IsEqual(skin.string(myviewtype1),grid1)</visible>
				</control>
				<!-- Separador - Grade 2 -->
				<control type="image">
					<left>45</left>
					<top>180</top>
					<width>1830</width>
					<height>395</height>
					<texture>grid2_separator.png</texture>
					<colordiffuse>$INFO[skin.string(colormyviewtype1separator)]</colordiffuse>
					<visible>Skin.HasSetting(myviewtype1separator) + String.IsEqual(skin.string(myviewtype1),grid2)</visible>
				</control>
				<!-- Separador - Grade 3 -->
				<control type="image">
					<left>45</left>
					<top>180</top>
					<width>1830</width>
					<height>395</height>
					<texture>grid3_separator.png</texture>
					<colordiffuse>$INFO[skin.string(colormyviewtype1separator)]</colordiffuse>
					<visible>Skin.HasSetting(myviewtype1separator) + String.IsEqual(skin.string(myviewtype1),grid3)</visible>
				</control>
				<!-- Enredo -->
				<include condition="String.IsEqual(skin.string(myviewtype1grid1module1),plot) + String.IsEqual(skin.string(myviewtype1),grid1)">PlotGrid1Module1</include>
				<include condition="String.IsEqual(skin.string(myviewtype1grid2module1),plot) + String.IsEqual(skin.string(myviewtype1),grid2)">PlotGrid2Module1</include>
				<include condition="String.IsEqual(skin.string(myviewtype1grid2module2),plot) + String.IsEqual(skin.string(myviewtype1),grid2)">PlotGrid2Module2</include>
				<include condition="String.IsEqual(skin.string(myviewtype1grid3module1),plot) + String.IsEqual(skin.string(myviewtype1),grid3)">PlotGrid3Module1</include>
				<include condition="String.IsEqual(skin.string(myviewtype1grid3module2),plot) + String.IsEqual(skin.string(myviewtype1),grid3)">PlotGrid3Module2</include>
				<include condition="String.IsEqual(skin.string(myviewtype1grid3module3),plot) + String.IsEqual(skin.string(myviewtype1),grid3)">PlotGrid3Module3</include>
				<!-- Informacoes gerais -->
				<include condition="String.IsEqual(skin.string(myviewtype1grid1module1),info) + String.IsEqual(skin.string(myviewtype1),grid1)">InfoGrid1Module1</include>
				<include condition="String.IsEqual(skin.string(myviewtype1grid2module1),info) + String.IsEqual(skin.string(myviewtype1),grid2)">InfoGrid2Module1</include>
				<include condition="String.IsEqual(skin.string(myviewtype1grid2module2),info) + String.IsEqual(skin.string(myviewtype1),grid2)">InfoGrid2Module2</include>
				<include condition="String.IsEqual(skin.string(myviewtype1grid3module1),info) + String.IsEqual(skin.string(myviewtype1),grid3)">InfoGrid3Module1</include>
				<include condition="String.IsEqual(skin.string(myviewtype1grid3module2),info) + String.IsEqual(skin.string(myviewtype1),grid3)">InfoGrid3Module2</include>
				<include condition="String.IsEqual(skin.string(myviewtype1grid3module3),info) + String.IsEqual(skin.string(myviewtype1),grid3)">InfoGrid3Module3</include>
				<!-- Arte -->
				<include condition="String.IsEqual(skin.string(myviewtype1grid1module1),art) + String.IsEqual(skin.string(myviewtype1),grid1)">ArtGrid1Module1</include>
				<include condition="String.IsEqual(skin.string(myviewtype1grid2module1),art) + String.IsEqual(skin.string(myviewtype1),grid2)">ArtGrid2Module1</include>
				<include condition="String.IsEqual(skin.string(myviewtype1grid2module2),art) + String.IsEqual(skin.string(myviewtype1),grid2)">ArtGrid2Module2</include>
				<include condition="String.IsEqual(skin.string(myviewtype1grid3module1),art) + String.IsEqual(skin.string(myviewtype1),grid3)">ArtGrid3Module1</include>
				<include condition="String.IsEqual(skin.string(myviewtype1grid3module2),art) + String.IsEqual(skin.string(myviewtype1),grid3)">ArtGrid3Module2</include>
				<include condition="String.IsEqual(skin.string(myviewtype1grid3module3),art) + String.IsEqual(skin.string(myviewtype1),grid3)">ArtGrid3Module3</include>
			</control>
			<control type="wraplist" id="72">
				<viewtype label="$VAR[myviewtype1label]">list</viewtype>
				<left>45</left>
				<top>575</top>
				<width>1830</width>
				<height>505</height>
				<onup condition="String.IsEqual(skin.string(myviewtype1videopanel),manual) + !String.IsEqual(ListItem.Label,..)">9972</onup>
				<onup condition="![String.IsEqual(skin.string(myviewtype1videopanel),manual) + !String.IsEqual(ListItem.Label,..)]">9900</onup>
				<ondown>80</ondown>
				<pagecontrol>80</pagecontrol>
				<focusposition>4</focusposition>
				<orientation>horizontal</orientation>
				<itemlayout width="191.5" height="329">
					<!-- Reflexo -->
					<control type="image">
						<left>0</left>
						<top>372</top>
						<width>191</width>
						<height>278</height>
						<aspectratio align="center" aligny="top">stretch</aspectratio>
						<texture flipy="true" fallback="DefaultPicture.png" diffuse="thumb_poster_reflect.png" background="true">$INFO[ListItem.Art(poster)]</texture>
						<colordiffuse>97FFFFFF</colordiffuse>
					</control>
					<!-- Poster -->
					<control type="image">
						<left>0</left>
						<top>92</top>
						<width>191</width>
						<height>278</height>
						<aspectratio align="center" aligny="bottom">stretch</aspectratio>
						<texture fallback="DefaultPicture.png" diffuse="thumb_poster_diffuse.png" background="true">$INFO[ListItem.Art(poster)]</texture>
					</control>
				</itemlayout>
				<focusedlayout width="298" height="430">
					<!-- Reflexo -->
					<control type="image">
						<left>10</left>
						<top>415</top>
						<width>277</width>
						<height>403</height>
						<aspectratio align="center" aligny="top">stretch</aspectratio>
						<texture flipy="true" fallback="DefaultPicture.png" diffuse="thumb_poster_reflect.png" background="true">$INFO[ListItem.Art(poster)]</texture>
						<colordiffuse>97FFFFFF</colordiffuse>
					</control>
					<!-- Poster -->
					<control type="image">
						<left>10</left>
						<top>11</top>
						<width>277</width>
						<height>403</height>
						<aspectratio align="center" aligny="bottom">stretch</aspectratio>
						<texture fallback="DefaultPicture.png" diffuse="thumb_poster_diffuse.png" background="true">$INFO[ListItem.Art(poster)]</texture>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="80">
				<include>ScrollBar_Horizontal</include>
				<left>285</left>
				<top>980</top>
				<width>1350</width>
				<onup>72</onup>
				<ondown>9920</ondown>
				<include>animation_fade</include>
				<visible allowhiddenfocus="true">Control.IsVisible(72) + Control.HasFocus(80)</visible>
			</control>
		</control>
	</include>
</includes>
