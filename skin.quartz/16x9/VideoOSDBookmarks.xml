<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">2</defaultcontrol>
	<include>DialogOpenClose</include>
	<controls>
		<control type="button">
			<description>background close area</description>
			<left>0</left>
			<top>0</top>
			<width>100%</width>
			<bottom>546</bottom>
			<texturefocus />
			<texturenofocus />
			<onclick>Action(close)</onclick>
		</control>
		<control type="group">
			<bottom>0</bottom>
			<height>550</height>
			<control type="image">
				<left>0</left>
				<top>40</top>
				<width>100%</width>
				<height>370</height>
				<animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
				<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
				<texture colordiffuse="$VAR[OSDTransperancy]">OSD/OSDBackground.png</texture>
			</control>
			<control type="label">
				<top>58</top>
				<left>14</left>
				<width>200</width>
				<align>center</align>
				<label>$LOCALIZE[31025] ($INFO[Container(11).NumItems])</label>
			</control>
			<control type="label">
				<top>58</top>
				<right>24</right>
				<width>200</width>
				<align>center</align>
				<label>$LOCALIZE[31024] ($INFO[Container(11).CurrentPage]/$INFO[Container(11).NumPages])</label>
			</control>
			<control type="textbox">
				<left>0</left>
				<top>41</top>
				<width>1920</width>
				<height>410</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>size28</font>
				<textcolor>HL</textcolor>
				<label>$LOCALIZE[31052]</label>
				<visible>Integer.IsEqual(Container(11).NumItems,0)</visible>
			</control>
			<control type="grouplist" id="9001">
				<orientation>horizontal</orientation>
				<left>0</left>
				<top>58</top>
				<width>100%</width>
				<align>center</align>
				<height>100</height>
				<onup>11</onup>
				<ondown>11</ondown>
				<control type="button" id="2">
					<description>Create Bookmark button</description>
					<label>294</label>
					<width>375</width>
					<align>center</align>
					<texturenofocus border="8">img/ListNF.png</texturenofocus>
				</control>
				<control type="button" id="3">
					<description>Clear Bookmark button</description>
					<label>296</label>
					<width>375</width>
					<align>center</align>
					<texturenofocus border="8">img/ListNF.png</texturenofocus>
				</control>
				<control type="button" id="4">
					<description>Clear Bookmark button</description>
					<label>20406</label>
					<width>375</width>
					<align>center</align>
					<texturenofocus border="8">img/ListNF.png</texturenofocus>
					<visible>Control.IsEnabled(4)</visible>
				</control>
			</control>
			<control type="panel" id="11">
				<left>0</left>
				<top>104</top>
				<width>100%</width>
				<height>350</height>
				<onup>9001</onup>
				<ondown>9001</ondown>
				<preloaditems>2</preloaditems>
				<scrolltime tween="sine">200</scrolltime>
				<orientation>horizontal</orientation>
				<itemlayout width="360" height="340">
					<control type="group">
						<left>70</left>
						<control type="image">
							<left>0</left>
							<top>45</top>
							<width>330</width>
							<height>210</height>
							<aspectratio>scale</aspectratio>
							<texture border="4" fallback="DefaultVideos.png">$INFO[ListItem.Art(thumb)]</texture>
							<bordertexture colordiffuse="border_alpha">colors/black.png</bordertexture>
							<bordersize>4</bordersize>
						</control>
						<control type="label">
							<left>5</left>
							<top>258</top>
							<width>320</width>
							<height>40</height>
							<label>[B]$INFO[ListItem.Label] ($INFO[ListItem.Label2])[/B]</label>
							<font>size15</font>
							<shadowcolor>Shadow</shadowcolor>
							<align>center</align>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="360" height="340">
					<control type="group">
						<left>70</left>
						<control type="image">
							<left>0</left>
							<top>45</top>
							<width>330</width>
							<height>210</height>
							<aspectratio>scale</aspectratio>
							<texture border="4" fallback="DefaultVideos.png">$INFO[ListItem.Art(thumb)]</texture>
							<bordertexture colordiffuse="border_alpha">colors/black.png</bordertexture>
							<bordersize>4</bordersize>
						</control>
						<control type="label">
							<left>5</left>
							<top>258</top>
							<width>320</width>
							<height>40</height>
							<textcolor>HL</textcolor>
							<label>[B]$INFO[ListItem.Label] ($INFO[ListItem.Label2])[/B]</label>
							<font>size15</font>
							<shadowcolor>Shadow</shadowcolor>
							<align>center</align>
						</control>
						<control type="image">
							<left>-28</left>
							<top>18</top>
							<width>387</width>
							<height>265</height>
							<texture border="36">focus/FrameFO.png</texture>
							<visible>Control.HasFocus(11)</visible>
						</control>
					</control>
				</focusedlayout>
			</control>
		</control>
	</controls>
</window>
