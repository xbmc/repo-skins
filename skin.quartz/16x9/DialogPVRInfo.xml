<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<include>OpenClose</include>
	<controls>
		<include>DimBG</include>
		<control type="group" description="Content">
			<include>DialogOpenClose</include>
			<control type="image">
				<posx>316</posx>
				<posy>50</posy>
				<width>1280</width>
				<height>1000</height>
				<texture colordiffuse="$VAR[MenuTransperancy]" border="128">img/DialogCE.png</texture>
			</control>
			<control type="label" id="2">
				<description>Title label</description>
				<posx>260</posx>
				<posy>116</posy>
				<width>1400</width>
				<!--<font>size25B</font>-->
				<textcolor>HL</textcolor>
				<label>$INFO[ListItem.Title]</label>
				<align>center</align>
			</control>
			<control type="image" description="thumb">
				<posx>420</posx>
				<posy>230</posy>
				<width>400</width>
				<height>260</height>
				<texture fallback="DefaultThumb.png">$INFO[ListItem.Icon]</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="group">
				<posx>600</posx>
				<posy>218</posy>
				<control type="label" description="Start date">
					<posx>300</posx>
					<posy>0</posy>
					<width>700</width>
					<textcolor>White2</textcolor>
					<label>[COLOR=Grey2]$LOCALIZE[552]:[/COLOR]$INFO[ListItem.StartDate, ]</label>
				</control>
				<control type="label" description="Start date">
					<posx>300</posx>
					<posy>52</posy>
					<width>700</width>
					<textcolor>White2</textcolor>
					<label>[COLOR=Grey2]$LOCALIZE[142][/COLOR]$INFO[ListItem.StartTime, ]</label>
				</control>
				<control type="label" description="channel">
					<posx>300</posx>
					<posy>104</posy>
					<width>700</width>
					<textcolor>White2</textcolor>
					<label>[COLOR=Grey2]$LOCALIZE[19148]:[/COLOR]$INFO[ListItem.ChannelName, ]</label>
				</control>
				<control type="label" description="runtime">
					<posx>300</posx>
					<posy>156</posy>
					<width>700</width>
					<textcolor>White2</textcolor>
					<label>[COLOR=Grey2]$LOCALIZE[180]:[/COLOR]$INFO[ListItem.Duration, ]</label>
				</control>
				<control type="label" description="genre">
					<posx>300</posx>
					<posy>208</posy>
					<width>700</width>
					<textcolor>White2</textcolor>
					<label>[COLOR=Grey2]$LOCALIZE[515]:[/COLOR]$INFO[ListItem.Genre, ]</label>
				</control>
			</control>
			<control type="textbox" id="400" description="Plot">
				<posx>420</posx>
				<posy>526</posy>
				<width>1080</width>
				<height>318</height>
				<align>justify</align>
				<label fallback="10005">$INFO[ListItem.Plot]</label>
			</control>
			<control type="grouplist" id="9000">
				<posx>290</posx>
				<posy>880</posy>
				<width>1340</width>
				<height>80</height>
				<itemgap>8</itemgap>
				<align>center</align>
				<orientation>horizontal</orientation>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<onup>60</onup>
				<ondown>60</ondown>
				<control type="button" id="5">
					<description>Switch to Channel</description>
					<!--<width>300</width>-->
					<width min="240">auto</width>
					<label>$LOCALIZE[19165]</label>
					<align>center</align>
					<visible>Window.IsActive(PVRGuideInfo)</visible>
				</control>
				<control type="button" id="4">
					<description>Find Similar</description>
					<width min="240">auto</width>
					<!--<width>300</width>-->
					<label>$LOCALIZE[19003]</label>
					<align>center</align>
					<visible>Window.IsActive(PVRGuideInfo)</visible>
				</control>
				<control type="button" id="8">
					<description>Play recording</description>
					<!--<width>300</width>-->
					<width min="240">auto</width>
					<label>$LOCALIZE[19687]</label>
					<align>center</align>
					<visible>Window.IsActive(PVRGuideInfo) | Window.IsActive(PVRRecordingInfo)</visible>
				</control>
				<control type="button" id="6">
					<description>Record</description>
					<!--<width>300</width>-->
					<width min="240">auto</width>
					<label></label>
					<align>center</align>
					<visible>Window.IsActive(PVRGuideInfo)</visible>
				</control>
				<control type="button" id="9" description="Add Timer">
					<width min="240">auto</width>
					<align>center</align>
					<label>$LOCALIZE[19061]</label>
					<visible>Window.IsActive(PVRGuideInfo)</visible>
				</control>
			</control>
		</control>
	</controls>
</window>
