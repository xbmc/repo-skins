<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol> 
	<views>50</views>
	<controls>
		<include>FullBackground</include>      
		<include>Header</include>
		<control type="image" description="Sidebar">
			<left>0</left>
			<top>0</top>
			<width>462</width>
			<height>1080</height>
			<aspectratio>stretch</aspectratio>
			<texture>img/Sidebar.png</texture>
		</control>
		<control type="group" description="Slider and List">
			<include>SlimListItemCount</include>
			<posx>1191</posx>
			<posy>147</posy>
			<control type="group" description="Slider">
				<control type="image">
					<animation effect="fade" time="100">VisibleChange</animation>
					<visible>Control.HasFocus(50)</visible>
					<posx>12</posx>
					<posy>404</posy>
					<width>660</width>
					<height>84</height>
					<texture border="9">img/MediaButton2.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<animation condition="Container.Position(0)" effect="slide" start="0,0" end="0,-405" time="180"  easing="inout" reversible="true">Conditional</animation>
				<animation condition="Container.Position(1)" effect="slide" start="0,0" end="0,-324" time="180"  easing="inout" reversible="true">Conditional</animation>
				<animation condition="Container.Position(2)" effect="slide" start="0,0" end="0,-243" time="180"  easing="inout" reversible="true">Conditional</animation>
				<animation condition="Container.Position(3)" effect="slide" start="0,0" end="0,-162" time="180"  easing="inout" reversible="true">Conditional</animation>
				<animation condition="Container.Position(4)" effect="slide" start="0,0" end="0,-81" time="180"  easing="inout" reversible="true">Conditional</animation>
				<animation condition="Container.Position(6)" effect="slide" start="0,0" end="0,81" time="180"  easing="inout" reversible="true">Conditional</animation>
				<animation condition="Container.Position(7)" effect="slide" start="0,0" end="0,162" time="180"  easing="inout" reversible="true">Conditional</animation>
				<animation condition="Container.Position(8)" effect="slide" start="0,0" end="0,243" time="180"  easing="inout" reversible="true">Conditional</animation>
				<animation condition="Container.Position(9)" effect="slide" start="0,0" end="0,324" time="180"  easing="inout" reversible="true">Conditional</animation>
				<animation condition="Container.Position(10)" effect="slide" start="0,0" end="0,405" time="180"  easing="inout" reversible="true">Conditional</animation>
			</control>
			<control type="fixedlist" id="50">
				<posx>0</posx>
				<posy>0</posy>
				<width>802</width>
				<height>891</height>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				<viewtype label="50_">50_List</viewtype>
				<focusposition>5</focusposition>
				<movement>5</movement>
				<preloaditems>4</preloaditems>
				<scrolltime easing="inout" tween="sine">280</scrolltime> 
				<itemlayout width="672" height="81">
					<include>ArrowNF</include>
					<control type="label" description="Main Label">
						<width max="590">auto</width>
						<font>size22</font>
						<include>52MainLabel</include>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label" description="Label2">
						<visible>!ListItem.IsFolder</visible>
						<right>45</right>
						<posy>0</posy>
						<height>81</height>
						<width>270</width>
						<align>right</align>
						<font>size18</font>
						<scroll>false</scroll>
						<textcolor>Grey</textcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>
				<focusedlayout width="672" height="81">
					<include>ArrowFO</include>
					<control type="label" description="Main Label">
						<width max="590">auto</width>
						<font>size22</font>
						<include>52MainLabelFO</include>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label" description="Label2">
						<visible>!ListItem.IsFolder</visible>
						<animation effect="fade" time="300" start="50" end="100" delay="100">Focus</animation>
						<right>45</right>
						<posy>0</posy>
						<height>81</height>
						<width>270</width>
						<align>right</align>
						<font>size18</font>
						<textcolor>HL</textcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</focusedlayout>
			</control>
		</control>
		<!--<include>MediaHeader</include>-->
		<control type="group" description="Thumbs no info">
			<!--<posy>240</posy>-->
			<animation effect="fade" time="400">Visible</animation>
			<animation effect="fade" time="0">Hidden</animation>
			<control type="image" description="Thumb">
				<posx>600</posx>
				<posy>120</posy>
				<width>378</width>
				<height>378</height>
				<include>Icon_Fade</include>
				<texture colordiffuse="$VAR[IconColor]" background="true" fallback="DefaultAddon.png">$VAR[Thumb]</texture>
				<bordertexture border="12">img/ThumbBorder.png</bordertexture>
				<bordersize>9</bordersize>
				<aspectratio aligny="bottom">keep</aspectratio>
			</control>
		</control>
		<control type="group" description="Media info">
			<visible>!ListItem.IsFolder</visible>
			<animation effect="fade" delay="100" time="300">Visible</animation>
			<animation effect="fade" time="0">Hidden</animation>
			<control type="group">
				<posx>510</posx>
				<posy>630</posy>
				<control type="label" description="Main Label">
					<visible>container.content(addons)</visible>
					<posy>-45</posy>
					<width>555</width>
					<font>size22B</font>
					<textcolor>White2</textcolor>
					<include>Genre51Commons</include>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="textbox" description="Plot51">
					<posy>9</posy>
					<width>555</width>
					<include>Plot51Commons</include>
					<!--<label>$VAR[Plots]</label>-->
					<label>$INFO[ListItem.AddonSummary]</label>
				</control>
				<control type="label" description="1 Bottom Label">
					<visible>container.content(addons)</visible>
					<posy>319</posy>
					<width>555</width>
					<font>size18</font>
					<include>Genre51Commons</include>
					<textcolor>HL</textcolor>
					<autoscroll time="6000" delay="8000" repeat="8000">true</autoscroll>
					<label>$INFO[ListItem.AddonDisclaimer]</label>
				</control>
				<control type="label" description="2 bottom Label">
					<visible>container.content(addons)</visible>
					<posy>380</posy>
					<width>655</width>
					<include>Genre51Commons</include>
					<label>$LOCALIZE[24051] $INFO[ListItem.AddonVersion] â€¢ $INFO[ListItem.AddonCreator]</label>
				</control>
			</control>
		</control>
		<control type="grouplist" id="9000">
			<left>36</left>
			<centertop>540</centertop>
			<width>405</width>
			<height>608</height>
			<itemgap>0</itemgap>
			<onleft>50</onleft>
			<onright>50</onright>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<orientation>vertical</orientation>
			<control type="button" id="3" description="Sort">
				<width>405</width>
				<font>size20</font>
				<texturenofocus border="4">img/SettingsButtonNF.png</texturenofocus>
				<texturefocus border="4">img/SettingsButtonFO.png</texturefocus>
			</control>
			<control type="togglebutton" id="4" description="Sort type">
				<width>405</width>
				<font>size20</font>
				<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
				<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
				<texturenofocus border="4">img/SettingsButtonNF.png</texturenofocus>
				<texturefocus border="4">img/SettingsButtonFO.png</texturefocus>
			</control>
			<control type="button" id="9" description="updates">
				<width>405</width>
				<font>size20</font>
				<label>$LOCALIZE[24034]</label>
				<texturenofocus border="4">img/SettingsButtonNF.png</texturenofocus>
				<texturefocus border="4">img/SettingsButtonFO.png</texturefocus>
			</control>
			<control type="button" id="5" description="Settings">
				<width>405</width>
				<font>size20</font>
				<label>$LOCALIZE[10004]</label>
				<texturenofocus border="4">img/SettingsButtonNF.png</texturenofocus>
				<texturefocus border="4">img/SettingsButtonFO.png</texturefocus>
			</control>
			<control type="button" id="19">
				<visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
				<width>405</width>
				<font>size20</font>
				<label>$LOCALIZE[137]</label>
			</control>
			<control type="togglebutton" id="699" description="Playing">
				<width>405</width>
				<font>size20</font>
				<enable>Player.HasMedia</enable>
				<label>$LOCALIZE[16003]</label>
				<altlabel>$LOCALIZE[31977]</altlabel>
				<usealttexture>Player.HasMedia</usealttexture>
				<onclick>fullscreen</onclick>
				<altclick>fullscreen</altclick>
				<animation effect="fade" start="100" end="60" time="100" condition="!Player.HasMedia">Conditional</animation>
			</control>
		</control>
	</controls>
</window>
