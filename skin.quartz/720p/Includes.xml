  <include name="OpenClose">
    <animation effect="fade" time="250">WindowOpen</animation>
    <animation effect="fade" time="150">WindowClose</animation>
  </include>
  <include name="DialogOpenClose">
    <animation type="WindowOpen">
      <effect type="fade" start="0" end="100" time="240"/>
      <effect type="zoom" tween="cubic" easing="out" start="30" end="100" center="640,360" time="240"/>
    </animation>
    <animation type="WindowClose">
      <effect type="fade" start="100" end="0" time="140"/>
      <effect type="zoom" tween="cubic" easing="in" start="100" end="30" center="640,360" time="140"/>
    </animation>
  </include>
  <include name="DialogOpenCloseVisible">
    <animation type="Visible">
      <effect type="fade" start="0" end="100" time="240"/>
      <effect type="zoom" tween="cubic" easing="out" start="30" end="100" center="640,360" time="240"/>
    </animation>
    <animation type="Hidden">
      <effect type="fade" start="100" end="0" time="140"/>
      <effect type="zoom" tween="cubic" easing="in" start="100" end="30" center="640,360" time="140"/>
    </animation>
  </include>
