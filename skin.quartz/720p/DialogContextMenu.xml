<window id="106">
  <defaultcontrol always="true">1000</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <!-- ## Override defaults as dialog does not have fixed position ## -->
  <animation type="WindowOpen">
    <effect type="fade" start="0" end="100" time="200"/>
    <effect type="zoom" easing="out" start="0" end="100" center="auto" time="200"/>
  </animation>
  <animation type="WindowClose">
    <effect type="fade" start="100" end="0" time="100"/>
    <effect type="zoom" easing="in" start="100" end="0" center="auto" time="100"/>
  </animation>
  <coordinates>
    <system>1</system>
  </coordinates>
  <controls>
    <control type="label">
      <posy>-30</posy>
      <posx>30</posx>
      <include>DialogID</include>
      <label>DialogContextMenu.xml</label>
    </control>
    <control type="group">
	<posy>15</posy>
      <control type="image" id="999" description="Background image">
        <posx>-23</posx>
        <posy>-30</posy>
        <height>760</height>
        <width>390</width>
        <texture border="60,60,60,60">img/ContextMenu.png</texture>
      </control>
      <control type="grouplist" id="996" description="Context menu container">
        <posx>12</posx>
        <posy>30</posy>
        <width>320</width>
        <height max="640">auto</height>
        <itemgap>2</itemgap>
      </control>
      <control type="button" id="1000" description="Buttons">
        <posx>-</posx>
        <posy>-</posy>
        <width>320</width>
        <height>40</height>
        <shadowcolor>BlackT</shadowcolor>
        <focusedcolor>White2</focusedcolor>
        <texturefocus border="5">img/ContextButtonFO.png</texturefocus>
        <texturenofocus>-</texturenofocus>
      </control>
    </control>
    <control type="image">
      <posx>0</posx>
      <posy>0</posy>
      <width>1280</width>
      <height>720</height>
      <texture>debuggrid720.png</texture>
      <visible>Skin.HasSetting(DebugGrid)</visible>
    </control>
  </controls>
</window>
