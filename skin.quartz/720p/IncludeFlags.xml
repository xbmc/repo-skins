<includes>
	<include name="VideoCodecflags">
		<control type="grouplist" description="Video resolutio Set">
			<visible>!IsEmpty(ListItem.VideoResolution)</visible>
			<width>505</width>
			<align>left</align>
			<orientation>horizontal</orientation>
			<control type="image" description="DVD">
				<visible>![stringcompare(ListItem.VideoResolution,1080) | stringcompare(ListItem.VideoResolution,720)]</visible>
				<width>80</width>
				<height>24</height>
				<aspectratio align="left">keep</aspectratio>
				<texture>flags/video/dvd.png</texture>
			</control>
			<control type="image" description="BR">
				<visible>[stringcompare(ListItem.VideoResolution,1080) | stringcompare(ListItem.VideoResolution,720)]</visible>
				<width>80</width>
				<height>28</height>
				<aspectratio align="left">keep</aspectratio>
				<texture>flags/video/bluray.png</texture>
			</control>
			<control type="image" description="Video resolution">
				<posx>80</posx>
				<width>70</width>
				<height>24</height>
				<align>left</align>
				<texture align="left">$INFO[ListItem.VideoResolution,flags/video/,.png]</texture>
			</control>
		</control>
		<control type="grouplist" description="Offline Set">
			<visible>IsEmpty(ListItem.VideoResolution) + IsEmpty(ListItem.AudioChannels) + Container.Content(movies) + substring(Container.FolderPath,videodb://1/)</visible>
			<width>505</width>
			<align>left</align>
			<orientation>horizontal</orientation>
			<control type="label" description="Offline file name">
				<posx>0</posx>
				<width>505</width>
				<height>24</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>XSmall</font>
				<textcolor>Grey</textcolor>
				<scroll>true</scroll>
				<info>ListItem.Filename</info>
			</control>
		</control>
	</include>
	<include name="AudioCodecflags">
		<control type="grouplist">
			<width>505</width>
			<align>right</align>
			<orientation>horizontal</orientation>
			<control type="image" description="Audio Channels Image">
				<width>60</width>
				<height>28</height>
				<aspectratio align="right">keep</aspectratio>
				<texture>$INFO[ListItem.AudioChannels,flags/audio/,.png]</texture>
			</control>
			<control type="image" description="Audio Codec Image">
				<width>80</width>
				<height>28</height>
				<aspectratio align="right">keep</aspectratio>
				<texture>$INFO[ListItem.AudioCodec,flags/audio/,.png]</texture>
			</control>
		</control>
	</include>
