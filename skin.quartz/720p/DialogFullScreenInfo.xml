<window type="dialog" id="142">
  <defaultcontrol always="true">603</defaultcontrol>
  <animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
  <animation effect="fade" start="100" end="0" time="150">WindowClose</animation>
  <zorder>2</zorder>
  <controls>
    <control type="group">
      <control type="image" description="Background">
        <posx>0</posx>
        <posy>0</posy>
        <width>1280</width>
        <height>198</height>
        <texture flipy="true">OSD/OSDBackground.png</texture>
        <colordiffuse>BBFFFFFF</colordiffuse>
      </control>
      <control type="label" description="Clock">
        <posx>18r</posx>
        <posy>10</posy>
        <width>130</width>
        <height>40</height>
        <align>right</align>
        <aligny>center</aligny>
        <font>XSmall</font>
        <!--<textcolor>Grey</textcolor>-->
        <label>$INFO[System.Time]</label>
      </control>
      <control type="label" description="End time">
        <posx>18r</posx>
        <posy>38</posy>
        <width>130</width>
        <height>40</height>
        <align>right</align>
        <aligny>center</aligny>
        <font>Panel</font>
        <textcolor>Grey2</textcolor>
        <label>$INFO[Player.FinishTime,(,)]</label>
      </control>
      <control type="group">
        <posy>-40</posy>
        <control type="image">
          <visible>VideoPlayer.Content(Movies)</visible>
          <posx>10</posx>
          <posy>46</posy>
          <width>120</width>
          <height>160</height>
          <bordersize>8</bordersize>
          <texture>$INFO[VideoPlayer.Cover]</texture>
          <aspectratio align="left">stretch</aspectratio>
        </control>
        <control type="image">
          <visible>VideoPlayer.Content(Movies)</visible>
          <posx>10</posx>
          <posy>46</posy>
          <width>120</width>
          <height>160</height>
          <texture border="3">img/CoverOverlay0.png</texture>
          <bordersize>8</bordersize>
        </control>
        <control type="image">
          <visible>!VideoPlayer.Content(Movies)</visible>
          <posx>10</posx>
          <posy>46</posy>
          <width>160</width>
          <height>160</height>
          <bordersize>8</bordersize>
          <texture>$INFO[VideoPlayer.Cover]</texture>
          <aspectratio>scale</aspectratio>
        </control>
        <control type="image">
          <visible>!VideoPlayer.Content(Movies)</visible>
          <posx>10</posx>
          <posy>46</posy>
          <width>160</width>
          <height>160</height>
          <texture border="3">img/CoverOverlay0.png</texture>
          <bordersize>8</bordersize>
        </control>
        <control type="group">
          <posx>-20</posx>
          <posy>44</posy>
          <control type="label" description="Main label">
            <visible>VideoPlayer.Content(MusicVideos)</visible>
            <include>FullscreenInfoLabelMain</include>
            <label>$INFO[VideoPlayer.Artist]</label>
          </control>
          <control type="label" description="Main">
            <visible>VideoPlayer.Content(Movies)</visible>
            <include>FullscreenInfoLabelMain</include>
            <label>$INFO[VideoPlayer.Title]</label>
          </control>
          <control type="label" description="Main">
            <visible>VideoPlayer.Content(Episodes)</visible>
            <include>FullscreenInfoLabelMain</include>
            <label>$INFO[VideoPlayer.Title]</label>
          </control>
          <control type="label" description="label2">
            <visible>VideoPlayer.Content(MusicVideos)</visible>
            <font>Panel</font>
            <include>FullscreenInfoLabel2</include>
            <label>$INFO[VideoPlayer.Album]</label>
          </control>
          <control type="label" description="Label2">
            <visible>VideoPlayer.Content(Movies)</visible>
            <font>Panel</font>
            <include>FullscreenInfoLabel2</include>
            <label>$LOCALIZE[21396] $INFO[Player.Chapter] $INFO[Player.ChapterCount, / ]</label>
          </control>
          <control type="label" description="Label2">
            <visible>VideoPlayer.Content(Episodes)</visible>
            <font>Panel</font>
            <include>FullscreenInfoLabel2</include>
            <label>$INFO[VideoPlayer.TVShowTitle] - $LOCALIZE[20373] $INFO[VideoPlayer.Season], $LOCALIZE[20359] $INFO[VideoPlayer.Episode]</label>
          </control>
          <control type="textbox">
            <posx>200</posx>
            <posy>70</posy>
            <width>850</width>
            <height>86</height>
            <label>$INFO[VideoPlayer.Plot]</label>
            <align>jistify</align>
            <autoscroll>false</autoscroll>
            <font>Plot</font>
          </control>
        </control>
        <control type="grouplist">
          <posx>1140</posx>
          <width>60</width>
          <posy>64</posy>
          <height>130</height>
          <itemgap>20</itemgap>
          <orientation>vertical</orientation>
          <align>right</align>
          <aligny>bottom</aligny>
          <control type="image">
            <height>30</height>
            <width>60</width>
            <posx>0</posx>
            <posy>0</posy>
            <bordersize>3</bordersize>
            <aspectratio>keep</aspectratio>
            <colordiffuse>Silver</colordiffuse>
            <texture>$INFO[VideoPlayer.VideoResolution,badges/video/,.png]</texture>
          </control>
          <control type="image">
            <visible>!IsEmpty(VideoPlayer.VideoCodec)</visible>
            <height>30</height>
            <width>60</width>
            <bordersize>3</bordersize>
            <aspectratio>keep</aspectratio>
            <colordiffuse>Silver</colordiffuse>
            <texture>$INFO[VideoPlayer.VideoCodec,badges/video/,.png]</texture>
          </control>
        </control>
        <control type="grouplist">
          <posx>1206</posx>
          <width>60</width>
          <posy>64</posy>
          <height>130</height>
          <itemgap>20</itemgap>
          <orientation>vertical</orientation>
          <align>right</align>
          <aligny>bottom</aligny>
          <control type="image">
            <visible>!IsEmpty(VideoPlayer.AudioChannels)</visible>
            <height>30</height>
            <width>60</width>
            <bordersize>3</bordersize>
            <aspectratio>keep</aspectratio>
            <colordiffuse>Silver</colordiffuse>
            <texture>$INFO[VideoPlayer.AudioChannels,badges/channels,.png]</texture>
          </control>
          <control type="image">
            <visible>!IsEmpty(VideoPlayer.AudioCodec)</visible>
            <height>30</height>
            <width>60</width>
            <bordersize>3</bordersize>
            <aspectratio>keep</aspectratio>
            <colordiffuse>Silver</colordiffuse>
            <texture>$INFO[VideoPlayer.AudioCodec,badges/audio/,.png]</texture>
          </control>
        </control>
      </control>
    </control>
    <control type="label">
      <include>DialogID</include>
      <label>DialogFullscreenInfo.xml</label>
    </control>
    <include>Debug_Grid</include>
  </controls>
</window>
