<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">300</defaultcontrol>
  
  <include>OpenClose</include>
  <coordinates>
    <origin x="0" y="0" />
  </coordinates>
  <controls>
    <include>MiniBackground</include>
    <include>MusicBackground</include>
    <control type="image" description="Vignette">
      <include>Dimensions_Fullscreen</include>
      <texture>img/Vignette_VideoInfo.png</texture>
      <aspectratio>stretch</aspectratio>
    </control>
    <include>Header</include>
    <control type="group">
      <control type="group" description="Thumbs">
        <posx>0</posx>
        <posy>6</posy>
        <control type="image" description="Icon">
          <posx>1320</posx>
          <posy>270</posy>
          <width>570</width>
          <height>570</height>
          <aspectratio align="right" aligny="top">keep</aspectratio>
          <bordertexture border="4">img/CoverOverlay0.png</bordertexture>
          <bordersize>2</bordersize>
          <texture fallback="DefaultVideo.png">$INFO[ListItem.Thumb]</texture>
        </control>
      </control>
      <control type="group" description="Top info">
        <posx>-30</posx>
        <posy>-486</posy>
        <include>MusicInfo</include>
        <control type="textbox" description="Plot">
          <posx>90</posx>
          <posy>1068</posy>
          <width>1050</width>
          <height>258</height>
          <font>size22</font>
          <align>justify</align>
          <autoscroll delay="6500" time="4000" repeat="10000">Skin.HasSetting(AutoScroll)</autoscroll>
          <label>$INFO[ListItem.Property(Album_Description)]</label>
        </control>
        <control type="textbox" description="Plot">
          <visible>IsEmpty(ListItem.Property(Album_Description))</visible>
          <posx>90</posx>
          <posy>1068</posy>
          <width>1050</width>
          <height>258</height>
          <font>size22</font>
          <align>justify</align>
          <autoscroll delay="6500" time="4000" repeat="10000">Skin.HasSetting(AutoScroll)</autoscroll>
          <label>$INFO[ListItem.Property(Artist_Description)]</label>
        </control>
      </control>
    </control>
    <control type="label" description="Path">
      <visible>Skin.HasSetting(ShowFileInfo)</visible>
      <posx>60</posx>
      <posy>990</posy>
      <width>1800</width>
      <height>27</height>
      <font>size15</font>
      <align>left</align>
      <textcolor>Silver</textcolor>
      <haspath>true</haspath>
      <scroll>true</scroll>
      <label>$INFO[ListItem.FilenameAndPath]</label>
    </control>
    <control type="image">
      <posx>0</posx>
      <posy>1023</posy>
      <height>60</height>
      <width>1920</width>
      <aspectratio>stretch</aspectratio>
      <texture>img/BlackDotT.png</texture>
    </control>
    <control type="image" description="Navbar">
      <posx>-82</posx>
      <posy>1028</posy>
      <width>2085</width>
      <height>1</height>
      <aspectratio>stretch</aspectratio>
      <texture>img/Line1.png</texture>
    </control>
    <control type="group" description="Options">
      <posy>0</posy>
      <posx>0</posx>
      <control type="grouplist" id="300">
        <posx>15</posx>
        <posy>1026</posy>
        <width>1890</width>
        <height>58</height>
        <itemgap>0</itemgap>
        <aligny>bottom</aligny>
        <align>center</align>
        <onup>50</onup>
        <orientation>horizontal</orientation>
        <control type="button" id="12" description="Album Info">
          <height>60</height>
          <width>270</width>
          <label>10523</label>
          <font>size18</font>
          <texturefocus>img/HomeBarFO.png</texturefocus>
          <alttexturefocus>img/HomeBarFO.png</alttexturefocus>
        </control>
        <control type="button" id="13" description="Get Thumb">
          <height>60</height>
          <width>270</width>
          <label>13405</label>
          <font>size18</font>
          <texturefocus>img/HomeBarFO.png</texturefocus>
          <alttexturefocus>img/HomeBarFO.png</alttexturefocus>
        </control>
        <control type="button" id="14" description="Decrease Rating">
          <height>60</height>
          <width>270</width>
          <label>-  $LOCALIZE[563]</label>
          <onclick>DecreaseRating</onclick>
          <font>size18</font>
          <texturefocus>img/HomeBarFO.png</texturefocus>
          <alttexturefocus>img/HomeBarFO.png</alttexturefocus>
        </control>
        <control type="button" id="15" description="Increase Rating">
          <height>60</height>
          <width>270</width>
          <label>+ $LOCALIZE[563]</label>
          <onclick>IncreaseRating</onclick>
          <font>size18</font>
          <texturefocus>img/HomeBarFO.png</texturefocus>
          <alttexturefocus>img/HomeBarFO.png</alttexturefocus>
        </control>
        <control type="button" id="10" description="Save rating">
          <height>60</height>
          <width>270</width>
          <label>186</label>
          <font>size18</font>
          <texturefocus>img/HomeBarFO.png</texturefocus>
          <alttexturefocus>img/HomeBarFO.png</alttexturefocus>
        </control>
        <!--<control type="button" id="11" description="Cancel">
					<height>40</height>
					<width>180</width>
					<label>222</label>
					<font>size18</font>
					<texturefocus>img/HomeBarFO.png</texturefocus>
					<alttexturefocus>img/HomeBarFO.png</alttexturefocus>
				</control>-->
        <control type="togglebutton" id="8999" description="Path">
          <height>60</height>
          <width>270</width>
          <align>center</align>
          <font>size18</font>
          <label>35500</label>
          <onclick>Skin.ToggleSetting(ShowFileInfo)</onclick>
          <texturefocus>img/HomeBarFO.png</texturefocus>
          <alttexturefocus>img/HomeBarFO.png</alttexturefocus>
        </control>
      </control>
    </control>
  </controls>
</window>
