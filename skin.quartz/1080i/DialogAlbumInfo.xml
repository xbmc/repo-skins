<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">300</defaultcontrol>
  
  <coordinates>
    <origin x="0" y="0" />
  </coordinates>
  <include>OpenClose</include>
  <controls>
    <include>MiniBackground</include>
    <include>MusicBackground</include>
    <control type="image" description="Vignette">
      <include>Dimensions_Fullscreen</include>
      <texture>img/Vignette_VideoInfo.png</texture>
      <aspectratio>stretch</aspectratio>
    </control>
    <include>Header</include>
    <control type="group">
      <control type="group" description="Thumbs">
        <posx>0</posx>
        <posy>6</posy>
        <control type="image" description="Icon">
          <posx>1320</posx>
          <posy>270</posy>
          <width>570</width>
          <height>570</height>
          <aspectratio align="right" aligny="top">keep</aspectratio>
          <bordertexture border="4">img/CoverOverlay0.png</bordertexture>
          <bordersize>2</bordersize>
          <texture fallback="DefaultVideo.png">$INFO[ListItem.Thumb]</texture>
        </control>
      </control>
      <control type="group" description="Top info">
        <posx>60</posx>
        <posy>75</posy>
        <control type="label" description="Item Label">
          <visible>true</visible>
          <posy>195</posy>
          <width>1050</width>
          <height>60</height>
          <include>TitleCommons</include>
          <align>left</align>
          <autoscroll time="6000" delay="8000" repeat="8000">true</autoscroll>
          <info>ListItem.Label</info>
        </control>
        <control type="label" description="Album Title">
          <visible>true</visible>
          <posy>195</posy>
          <width>1050</width>
          <height>60</height>
          <include>TitleCommons</include>
          <align>left</align>
          <autoscroll time="6000" delay="8000" repeat="8000">true</autoscroll>
          <info>ListItem.Album</info>
        </control>
        <control type="label" description="Artist Label">
          <visible>!container.content(artists)</visible>
          <posy>270</posy>
          <width>1050</width>
          <height>45</height>
          <font>size22</font>
          <align>left</align>
          <textcolor>Grey</textcolor>
          <label>$INFO[ListItem.Artist]</label>
        </control>
        <control type="label" description="Styles Label">
          <visible>container.content(artists)</visible>
          <posy>270</posy>
          <width>1050</width>
          <height>45</height>
          <font>size22</font>
          <align>left</align>
          <textcolor>Grey</textcolor>
          <scroll>false</scroll>
          <label>$INFO[ListItem.Property(Artist_Style)]</label>
        </control>
        <control type="label" description="Moods Label">
          <visible>container.content(artists)</visible>
          <visible>IsEmpty(ListItem.Property(Artist_Style))</visible>
          <posy>270</posy>
          <width>1050</width>
          <height>45</height>
          <font>size22</font>
          <align>left</align>
          <textcolor>Grey</textcolor>
          <scroll>false</scroll>
          <label>$INFO[ListItem.Property(Artist_Mood)]</label>
        </control>
        <control type="label" description="Year and Genre">
          <posy>315</posy>
          <width>1050</width>
          <height>45</height>
          <font>size22</font>
          <align>left</align>
          <textcolor>Grey</textcolor>
          <label>$INFO[ListItem.Year,, â€¢ ]$INFO[ListItem.Genre]</label>
        </control>
        <control type="label" description="Genre">
          <posy>315</posy>
          <width>1050</width>
          <height>45</height>
          <font>size22</font>
          <align>left</align>
          <textcolor>Grey</textcolor>
          <label>$INFO[ListItem.Property(Artist_Genre)]</label>
        </control>
        <control type="textbox" id="4" description="Plot">
          <posx>0</posx>
          <posy>405</posy>
          <width>1050</width>
          <height>378</height>
          <font>size22</font>
          <align>justify</align>
          <autoscroll delay="6500" time="4000" repeat="10000">Skin.HasSetting(AutoScroll)</autoscroll>
        </control>
      </control>
    </control>
    <control type="label" description="Path">
      <visible>Skin.HasSetting(ShowFileInfo)</visible>
      <posx>60</posx>
      <posy>990</posy>
      <width>1800</width>
      <height>27</height>
      <font>size15</font>
      <align>left</align>
      <textcolor>Grey</textcolor>
      <haspath>true</haspath>
      <scroll>true</scroll>
      <label>$INFO[ListItem.FilenameAndPath]</label>
    </control>
    <control type="image">
      <posx>0</posx>
      <posy>1023</posy>
      <height>60</height>
      <width>1920</width>
      <aspectratio>stretch</aspectratio>
      <texture>img/BlackDotT.png</texture>
    </control>
    <control type="image" description="Navbar">
      <posx>-82</posx>
      <posy>1028</posy>
      <width>2085</width>
      <height>1</height>
      <aspectratio>stretch</aspectratio>
      <texture>img/Line1.png</texture>
    </control>
    <control type="group" description="Options">
      <posy>0</posy>
      <posx>0</posx>
      <control type="grouplist" id="300">
        <posx>15</posx>
        <posy>1024</posy>
        <width>1890</width>
        <height>58</height>
        <itemgap>0</itemgap>
        <aligny>bottom</aligny>
        <align>center</align>
        <onup>50</onup>
        <orientation>horizontal</orientation>
        <control type="button" id="6" description="Refresh">
          <height>60</height>
          <width>330</width>
          <label>184</label>
          <font>size18</font>
          <texturefocus>img/HomeBarFO.png</texturefocus>
          <alttexturefocus>img/HomeBarFO.png</alttexturefocus>
        </control>
        <control type="button" id="10" description="Get Thumb">
          <height>60</height>
          <width>330</width>
          <label>13405</label>
          <font>size18</font>
          <texturefocus>img/HomeBarFO.png</texturefocus>
          <alttexturefocus>img/HomeBarFO.png</alttexturefocus>
        </control>
        <control type="button" id="11" description="Last FM">
          <height>60</height>
          <width>330</width>
          <label>Last FM</label>
          <font>size18</font>
          <texturefocus>img/HomeBarFO.png</texturefocus>
          <alttexturefocus>img/HomeBarFO.png</alttexturefocus>
        </control>
        <control type="button" id="12" description="Get FanArt">
          <height>60</height>
          <width>330</width>
          <label>20413</label>
          <font>size18</font>
          <texturefocus>img/HomeBarFO.png</texturefocus>
          <alttexturefocus>img/HomeBarFO.png</alttexturefocus>
        </control>
        <control type="togglebutton" id="8999" description="Path">
          <visible>!Container.content(artists)</visible>
          <height>60</height>
          <width>270</width>
          <align>center</align>
          <font>size18</font>
          <label>35500</label>
          <onclick>Skin.ToggleSetting(ShowFileInfo)</onclick>
          <texturefocus>img/HomeBarFO.png</texturefocus>
          <alttexturefocus>img/HomeBarFO.png</alttexturefocus>
        </control>
      </control>
    </control>
  </controls>
</window>
