<window>
	<defaultcontrol always="true">32</defaultcontrol>
	<backgroundcolor>0</backgroundcolor>
	<allowoverlay>no</allowoverlay>
	<controls>
	
		<control type="button" id="300">
			<include>HiddenButton</include>
			<onfocus>Setfocus(32)</onfocus>
		</control>

		<control type="group">
			<control type="visualisation"><!-- id="2" -->
				<left>0</left>
				<top>0</top>
				<width>1280</width>
				<height>720</height>
				<visible>Player.HasAudio + !Skin.HasSetting(VisLibrary)</visible>
			</control>
			
			<include>ActualFanart</include>
		</control>

		<control type="label" id="29">
			<description>Empty so we can pass the values up one level</description>
			<visible>False</visible>
		</control>
		<control type="label" id="30">
			<description>Empty so we can pass the values up one level</description>
			<visible>False</visible>
		</control>
		
		<control type="group">
			<description>Small Media Window</description>
			<left>60</left>
			<top>159</top>
			<visible>Control.IsVisible(11) | Control.IsVisible(12)</visible>
		
			<control type="image">
				<left>5</left>
				<top>5</top>
				<width>680</width>
				<height>390</height>
				<aspectratio>stretch</aspectratio>
				<texture border="5">black.png</texture>
			</control>
			<control type="image">
				<left>150</left>
				<top>10</top>
				<width>380</width>
				<height>380</height>
				<texture>nosignal.png</texture>
				<visible>!Player.HasVideo</visible>
				<animation effect="fade" end="0" time="200">VisibleChange</animation>
			</control>
			<control type="videowindow">
				<left>5</left>
				<top>5</top>
				<width>680</width>
				<height>390</height>
				<visible>Player.HasVideo</visible>
				<animation effect="slide" start="0,0" end="-2000,0" time="0">WindowClose</animation>
			</control>
			<control type="image">
				<left>5</left>
				<top>5</top>
				<width>680</width>
				<height>35</height>
				<texture>black.png</texture>
				<aspectratio>stretch</aspectratio>
				<colordiffuse>DDFFFFFF</colordiffuse>
				<visible>Player.HasVideo</visible>
			</control>
			<control type="label">
				<description>Current Video label</description>
				<left>30</left>
				<top>2</top>
				<width>650</width>
				<height>35</height>
				<font>font12</font>
				<textcolor>white</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[VideoPlayer.Title]</label>
				<visible>Player.HasVideo</visible>
			</control>

		</control>

		<control type="group" id="50">
			<include>LiveTVChannelView</include> <!-- view id = 11 -->

		</control>
		 

		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<texture>black.png</texture>
			<aspectratio>stretch</aspectratio>
			<animation effect="fade" time="400">Visible</animation>
			<animation effect="fade" time="200">Hidden</animation>
			<visible>Window.IsActive(FileBrowser) | Window.IsActive(PVRGuideInfo) | Window.IsActive(PVRRecordingInfo) | Window.IsActive(PVRTimerSetting) | Window.IsActive(PVRGroupManager) | Window.IsActive(PVRGuideSearch)</visible>
		</control>

		<control type="group">
			<left>-250</left>

			<control type="grouplist" id="9000">
				<left>0</left>
				<top>110</top>
				<width>250</width>
				<height>600</height>
				<onleft>9000</onleft>
				<onright>50</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<itemgap>0</itemgap>

				<control type="button" id="32">
					<description>TV Channels</description>
					<left>0</left>
					<top>0</top>
					<textwidth>235</textwidth>
					<onfocus>SetFocus(11)</onfocus>
					<label>19023</label>
				</control>
			
			</control>
		</control>

		<include>Background</include>
		<include>BottomInfoBar</include>
		 
	
	</controls>
</window>
