<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">11</defaultcontrol>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<include>fadebackground</include>
		<control type="group">
			<control type="image">
				<!-- Dialog background image -->
				<left>600</left>
				<top>45</top>
				<width>720</width>
				<height>990</height>
				<texture border="14">button-menu-background.png</texture>
			</control>
			<control type="grouplist">
				<left>660</left>
				<top>69</top>
				<width>auto</width>
				<height>60</height>
				<align>left</align>
				<aligny>top</aligny>
				<orientation>horizontal</orientation>
				<control type="label">
					<!-- Video screen heading -->
					<width max="550">auto</width>
					<height>60</height>
					<label>$LOCALIZE[19222] - $INFO[VideoPlayer.ChannelName]</label>
					<font>apptv23</font>
					<wrapmultiline>true</wrapmultiline>
					<aligny>top</aligny>
				</control>
				<control type="label">
					<!-- Number of files -->
					<top>21</top>
					<width max="95">auto</width>
					<height>57</height>
					<label>$INFO[Container(11).NumItems,(,)]</label>
					<font>apptv23</font>
				</control>
			</control>
			<control type="label">
				<!-- Selected items date -->
				<left>660</left>
				<top>135</top>
				<width>645</width>
				<height>45</height>
				<font>apptv22</font>
				<label>$INFO[Container(11).ListItem.StartDate]</label>
				<align>center</align>
			</control>
			<control type="list" id="11">
				<left>645</left>
				<top>195</top>
				<width>615</width>
				<height>735</height>
				<onright condition="String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31877])">noop</onright>
				<onright condition="!String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31877])">60</onright>
				<onup>11</onup>
				<ondown>11</ondown>
				<viewtype label="535">list</viewtype>
				<pagecontrol>60</pagecontrol>
				<itemlayout height="52" width="615">
					<control type="label">
						<left>15</left>
						<top>0</top>
						<width>150</width>
						<height>45</height>
						<selectedcolor>listselected-text</selectedcolor>
						<label>$INFO[ListItem.StartTime]</label>
					</control>
					<control type="image">
						<left>180</left>
						<top>8</top>
						<width>30</width>
						<height>30</height>
						<texture>overlayisrecording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>
					<control type="image">
						<left>180</left>
						<top>8</top>
						<width>30</width>
						<height>30</height>
						<texture>overlayhastimer.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>
					<control type="label">
						<right>600</right>
						<top>0</top>
						<width>450</width>
						<height>45</height>
						<font>apptv23</font>
						<selectedcolor>listselected-text</selectedcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>![ListItem.IsRecording | ListItem.HasTimer]</visible>
					</control>
					<control type="label">
						<right>600</right>
						<top>0</top>
						<width>375</width>
						<height>45</height>
						<font>apptv23</font>
						<selectedcolor>listselected-text</selectedcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>ListItem.IsRecording | ListItem.HasTimer</visible>
					</control>
				</itemlayout>
				<focusedlayout height="52" width="615">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>615</width>
						<height>45</height>
						<texture border="9">button-default-focus.png</texture>
						<visible>Control.HasFocus(11)</visible>
					</control>
					<control type="label">
						<left>15</left>
						<top>0</top>
						<width>150</width>
						<height>45</height>
						<selectedcolor>listselected-text</selectedcolor>
						<label>$INFO[ListItem.StartTime]</label>
					</control>
					<control type="image">
						<left>180</left>
						<top>8</top>
						<width>30</width>
						<height>30</height>
						<texture>overlayisrecording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>
					<control type="image">
						<left>180</left>
						<top>8</top>
						<width>30</width>
						<height>30</height>
						<texture>overlayhastimer.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>
					<control type="label">
						<right>600</right>
						<top>0</top>
						<width>450</width>
						<height>45</height>
						<font>apptv23</font>
						<selectedcolor>listselected-text</selectedcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>![ListItem.IsRecording | ListItem.HasTimer]</visible>
					</control>
					<control type="label">
						<right>600</right>
						<top>0</top>
						<width>375</width>
						<height>45</height>
						<font>apptv23</font>
						<selectedcolor>listselected-text</selectedcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>ListItem.IsRecording | ListItem.HasTimer</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>1270</left>
				<top>195</top>
				<width>20</width>
				<height>735</height>
				<onleft>11</onleft>
				<ondown>61</ondown>
				<onup>61</onup>
				<animation condition="!Control.HasFocus(60) + !Container.Scrolling + !String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31875])" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
				<visible>$EXP[isEnabledScrollbar]</visible>
			</control>
		</control>
	</controls>
</window>