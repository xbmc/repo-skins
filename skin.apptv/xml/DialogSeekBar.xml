<?xml version="1.0" encoding="utf-8"?>
<window>
	<visible>Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding </visible>
	<animation effect="fade" end="0" time="100">WindowClose</animation>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="group">
			<visible>![Window.IsVisible(fullscreeninfo) | Window.IsVisible(sliderdialog) | Window.IsVisible(osdvideosettings) | Window.IsVisible(osdaudiosettings) | Window.IsVisible(videobookmarks) | Window.IsVisible(subtitlesearch) | Window.IsVisible(script-nextup-notification-StillWatchingInfo.xml) | Window.IsVisible(script-nextup-notification-NextUpInfo.xml)]</visible>
			<include>player-mediaicon</include>
		</control>
		<!-- Player action labels -->
		<control type="group">
			<visible>[Window.IsVisible(fullscreenvideo) | Window.IsVisible(visualisation)] + ![Window.IsVisible(sliderdialog) | Window.IsVisible(osdvideosettings) | Window.IsVisible(osdaudiosettings) | Window.IsVisible(subtitlesearch) | Window.IsVisible(videobookmarks)]</visible>
			<control type="image">
				<!-- Seekbar Dialog background image -->
				<left>639</left>
				<top>174</top>
				<height>132</height>
				<width>642</width>
				<texture border="18">backgroundmsg.png</texture>
				<colordiffuse>mask-background</colordiffuse>
				<visible>Player.Caching | Player.Seeking | Player.Paused | Player.Forwarding | Player.Rewinding | !String.IsEmpty(Player.SeekStepSize)</visible>
			</control>
			<control type="grouplist">
				<left>612</left>
				<top>192</top>
				<width>696</width>
				<height>96</height>
				<align>center</align>
				<aligny>center</aligny>
				<orientation>horizontal</orientation>
				<control type="image" id="750">
					<width>96</width>
					<height>96</height>
					<texture>$VAR[PlayStateImage]</texture>
					<animation effect="rotate" start="360" end="0" center="auto" time="5400" loop="true" condition="String.IsEqual(Control.GetLabel(750),busy.png)">conditional</animation>
				</control>
				<control type="label">
					<!-- Player state text -->
					<width min="0" max="570">auto</width>
					<height>90</height>
					<label>$VAR[PlayStateTxt]</label>
					<font>apptv38</font>
				</control>
			</control>
		</control>
		<control type="group">
			<visible>[Window.IsVisible(fullscreenvideo)] + ![Window.IsVisible(sliderdialog) | Window.IsVisible(osdvideosettings) | Window.IsVisible(osdaudiosettings) | Window.IsVisible(subtitlesearch) | Window.IsVisible(videobookmarks) | Window.IsVisible(script-nextup-notification-StillWatchingInfo.xml) | Window.IsVisible(script-nextup-notification-NextUpInfo.xml)]</visible>
			<!-- Player info labels -->
			<control type="label">
				<left>342</left>
				<top>1032</top>
				<width>345</width>
				<height>30</height>
				<font>apptv20</font>
				<label>[COLOR=disabled-text]($INFO[System.Time])[/COLOR] $INFO[VideoPlayer.Time]</label>
				<align>right</align>
			</control>
			<control type="label">
				<left>1617</left>
				<top>1032</top>
				<width>345</width>
				<height>30</height>
				<font>apptv20</font>
				<label>-$INFO[VideoPlayer.TimeRemaining] [COLOR=disabled-text]($INFO[Player.FinishTime])[/COLOR]</label>
			</control>
			<control type="group">
				<animation effect="fade" start="100" end="0" condition="String.IsEmpty(MusicPlayer.TimeRemaining)">Conditional</animation>
				<!-- Progress bar -->
				<control type="progress">
					<left>717</left>
					<top>1040</top>
					<width>870</width>
					<height>18</height>
					<info>Player.ProgressCache</info>
					<colordiffuse>CacheBarColor</colordiffuse>
				</control>
				<control type="progress">
					<left>717</left>
					<top>1040</top>
					<width>870</width>
					<height>18</height>
					<info>Player.Progress</info>
				</control>
				<control type="slider" id="401">
					<!-- Seek Slider -->
					<left>717</left>
					<top>1040</top>
					<width>870</width>
					<height>18</height>
					<textureslidernib>progress-marker-focus.png</textureslidernib>
					<textureslidernibfocus>progress-marker-focus.png</textureslidernibfocus>
					<action>seek</action>
					<animation effect="fade" start="100" end="60" condition="!Control.HasFocus(401) + !Player.DisplayAfterSeek">Conditional</animation>
				</control>
			</control>
		</control>
	</controls>
</window>