<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<onload>ClearProperty(ShowScreenSettings,home)</onload>
	<onunload>ClearProperty(ShowScreenSettings,home)</onunload>
	<menucontrol>9000</menucontrol>
	<controls>
		<include>background</include>
		<control type="label">
			<!-- Video playlist heading -->
			<left>1419</left>
			<top>38</top>
			<width>471</width>
			<height>75</height>
			<label>$LOCALIZE[10522]</label>
			<font>apptv30</font>
			<wrapmultiline>true</wrapmultiline>
			<visible>Window.IsActive(videoplaylist)</visible>
		</control>
		<control type="label">
			<!-- Music playlist heading -->
			<left>1419</left>
			<top>38</top>
			<width>471</width>
			<height>75</height>
			<label>$LOCALIZE[10517]</label>
			<font>apptv30</font>
			<wrapmultiline>true</wrapmultiline>
			<visible>Window.IsActive(musicplaylist)</visible>
		</control>
		<include file="View-General.xml">ListView</include>
		<control type="group">
			<!-- Video Playlist -->
			<visible>Window.IsActive(videoplaylist)</visible>
			<control type="videowindow">
				<left>52</left>
				<top>188</top>
				<width>915</width>
				<height>506</height>
				<visible>Player.HasVideo + !Skin.HasSetting(background-playingmedia)</visible>
			</control>
			<control type="image">
				<left>471</left>
				<top>174</top>
				<width>504</width>
				<height>504</height>
				<texture fallback="DefaultVideo.png" background="true" diffuse="mask-rect.png">$VAR[IconPoster]</texture>
				<aspectratio scalediffuse="true" align="right" aligny="top">keep</aspectratio>
				<visible>Skin.HasSetting(background-playingmedia) | !Player.HasVideo</visible>
			</control>
			<control type="group">
				<visible>Player.HasVideo</visible>
				<control type="label">
					<left>52</left>
					<top>852</top>
					<width>928</width>
					<height>45</height>
					<font>apptv23</font>
					<label>$INFO[VideoPlayer.Title]</label>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
				<control type="progress">
					<left>51</left>
					<top>912</top>
					<width>608</width>
					<height>18</height>
					<info>Player.Progress</info>
				</control>
				<control type="label">
					<!-- Time/Duration Label -->
					<left>682</left>
					<top>900</top>
					<width>300</width>
					<height>38</height>
					<font>apptv22</font>
					<label>$INFO[VideoPlayer.Time]$INFO[VideoPlayer.Duration, / ]</label>
				</control>
			</control>
		</control>
		<control type="group">
			<!-- Music Playlist -->
			<visible>Window.IsActive(musicplaylist)</visible>
			<control type="image">
				<left>183</left>
				<top>174</top>
				<width>576</width>
				<height>576</height>
				<texture background="true" diffuse="mask-squ.png">$INFO[ListItem.Icon]</texture>
				<aspectratio scalediffuse="false">keep</aspectratio>
			</control>
			<control type="group">
				<visible>Player.HasAudio</visible>
				<control type="progress">
					<left>51</left>
					<top>784</top>
					<width>690</width>
					<height>18</height>
					<info>Player.Progress</info>
				</control>
				<control type="label">
					<left>758</left>
					<top>772</top>
					<width>270</width>
					<height>35</height>
					<font>apptv23</font>
					<label>$INFO[Player.Time]$INFO[Player.Duration,/ ]</label>
				</control>
				<control type="label">
					<left>52</left>
					<top>810</top>
					<width>720</width>
					<height>35</height>
					<label>$VAR[PlayerMusicInfo1]</label>
					<font>apptv23</font>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
				<control type="label">
					<left>52</left>
					<top>850</top>
					<width>990</width>
					<height>30</height>
					<font>apptv22</font>
					<label>$VAR[PlayerMusicInfo2]</label>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
				<control type="label">
					<left>52</left>
					<top>886</top>
					<width>990</width>
					<height>30</height>
					<font>apptv22</font>
					<label>$VAR[PlayerMusicInfo3]</label>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
				<control type="label">
					<left>52</left>
					<top>922</top>
					<width>990</width>
					<height>30</height>
					<font>apptv22</font>
					<label>$VAR[PlayerMusicInfo4]</label>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
			</control>
		</control>

		<include>touch-controls</include>

		<control type="group">
			<!-- Screen Settings Menu -->
			<top>1080</top>
			<include>screen-settings</include>
			<include>fadebackground</include>
			<control type="image">
				<!-- Button background -->
				<left>699</left>
				<top>318</top>
				<width>576</width>
				<height>540</height>
				<texture border="14">button-menu-background.png</texture>
			</control>
			<control type="label">
				<!-- Dialog heading -->
				<left>716</left>
				<top>336</top>
				<width>540</width>
				<height>48</height>
				<font>apptv23</font>
				<label>$LOCALIZE[31557]$INFO[Container(9000).NumItems, (,)]</label>
				<align>center</align>
			</control>
			<control type="button">
				<!-- Touch Close button -->
				<left>1242</left>
				<top>303</top>
				<width>48</width>
				<height>48</height>
				<texturefocus>touch-close.png</texturefocus>
				<texturenofocus>touch-close.png</texturenofocus>
				<onclick condition="!String.IsEqual(Window(home).Property(ShowScreenSettings),show)">SetProperty(ShowScreenSettings,show,home)</onclick>
				<onclick condition="String.IsEqual(Window(home).Property(ShowScreenSettings),show)">ClearProperty(ShowScreenSettings,home)</onclick>
				<visible>$EXP[isEnabledTouch]</visible>
			</control>
			<control type="image">
				<left>716</left>
				<top>381</top>
				<width>543</width>
				<height>6</height>
				<texture>separator.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<defaultcontrol>2</defaultcontrol>
				<left>716</left>
				<top>390</top>
				<width>543</width>
				<height>450</height>
				<itemgap>0</itemgap>
				<onleft>ClearProperty(ShowScreenSettings,home)</onleft>
				<onleft>50</onleft>
				<onright>ClearProperty(ShowScreenSettings,home)</onright>
				<onright>50</onright>
				<control type="button" id="20">
					<!-- Shuffle -->
					<width>543</width>
					<height>75</height>
					<font>apptv23</font>
					<label>$LOCALIZE[191]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="radiobutton" id="28">
					<!-- Randomize -->
					<width>543</width>
					<height>75</height>
					<font>apptv23</font>
					<label>$LOCALIZE[13319]</label>
					<textoffsetx>15</textoffsetx>
					<radioposx>495</radioposx>
				</control>
				<control type="button" id="26">
					<!-- Repeat -->
					<width>543</width>
					<height>75</height>
					<font>apptv23</font>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="button" id="21">
					<!-- Save -->
					<width>543</width>
					<height>75</height>
					<font>apptv23</font>
					<label>$LOCALIZE[190]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="button" id="22">
					<!-- Clear -->
					<width>543</width>
					<height>75</height>
					<font>apptv23</font>
					<label>$LOCALIZE[192]</label>
					<onclick condition="Window.IsActive(musicplaylist)">ReplaceWindow(music)</onclick>
					<onclick condition="Window.IsActive(videoplaylist)">ReplaceWindow(videos)</onclick>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="button" id="1200">
					<!-- Player controls -->
					<width>543</width>
					<height>75</height>
					<font>apptv23</font>
					<label>$LOCALIZE[16003] $LOCALIZE[478]</label>
					<textoffsetx>15</textoffsetx>
					<onclick>SetFocus(50)</onclick>
					<onclick condition="String.IsEqual(Window(home).Property(ShowScreenSettings),show)">ClearProperty(ShowScreenSettings,home)</onclick>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<enable>Player.HasAudio | Player.HasVideo</enable>
				</control>
			</control>
		</control>
		<!-- Show a iOS style page indicator to show which focus group has the current focus -->
		<!-- Focus group can be hidden or shown but is potentially focusable, that is it has not be disabled -->
		<control type="group">
			<include content="page-indicator">
				<param name="indicatorleft" value="864" />
				<param name="indicatortop" value="0" />
				<param name="indicatorwidth" value="192" />
				<param name="indicatorheight" value="48" />
				<param name="indicatororientation" value="horizontal" />
				<param name="grp1indicate" value="[ControlGroup(9000).HasFocus()|String.IsEqual(Window(home).Property(ShowScreenSettings),show)]" />
				<param name="grp1visible" value="[!Skin.HasSetting(lock-screensettings)]" />
				<param name="grp2indicate" value="[Control.HasFocus(50)]" />
				<param name="grp2visible" value="[Control.IsVisible(50)]+[!Skin.HasSetting(lock-screensettings)]" />
			</include>
		</control>
	</controls>
</window>