<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol>2</defaultcontrol>
	<controls>
		<!-- Media Info -->
		<control type="group">
			<visible>Player.HasMedia + Player.ShowInfo</visible>
			<animation effect="fade" time="500">VisibleChange</animation>
			<control type="image">
				<!-- Media info background image -->
				<left>0</left>
				<top>837</top>
				<width>1920</width>
				<height>243</height>
				<texture colordiffuse="mask-background">background.png</texture>
			</control>
			<control type="image">
				<!-- Cover image -->
				<left>90</left>
				<top>852</top>
				<width>192</width>
				<height>192</height>
				<texture>$INFO[MusicPlayer.Cover]</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="label">
				<!-- Artist -->
				<left>357</left>
				<top>858</top>
				<label>$INFO[MusicPlayer.Artist]</label>
				<width>1180</width>
				<height>38</height>
				<font>apptv23</font>
			</control>
			<control type="label">
				<!-- Song title -->
				<left>357</left>
				<top>897</top>
				<width>1142</width>
				<height>38</height>
				<label>$INFO[MusicPlayer.Title]</label>
				<font>apptv23</font>
			</control>
			<control type="label">
				<!-- Album title -->
				<left>357</left>
				<top>950</top>
				<width>1142</width>
				<height>38</height>
				<label>$INFO[MusicPlayer.Album]</label>
				<font>apptv23</font>
			</control>
			<control type="label">
				<!-- Player time -->
				<left>357</left>
				<top>990</top>
				<width>1142</width>
				<height>38</height>
				<label>$INFO[musicplayer.Time]$INFO[musicplayer.Duration, / ]</label>
				<font>apptv23</font>
			</control>
			<control type="label">
				<!-- Playlist -->
				<left>1566</left>
				<top>990</top>
				<width>266</width>
				<height>38</height>
				<align>right</align>
				<label>$INFO[musicplayer.Playlistposition,Track ]$INFO[musicplayer.Playlistlength, / ]</label>
				<font>apptv23</font>
			</control>
		</control>
	</controls>
</window>