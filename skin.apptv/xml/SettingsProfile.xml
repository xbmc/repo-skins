<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">2</defaultcontrol>
	<menucontrol>9000</menucontrol>
	<onload>ClearProperty(ShowScreenSettings,home)</onload>
	<onunload>ClearProperty(ShowScreenSettings,home)</onunload>
	<controls>
		<include>background</include>
		<include>fake-overlay</include>
		<control type="label">
			<!-- Screen heading -->
			<left>1419</left>
			<top>75</top>
			<width>464</width>
			<height>45</height>
			<label>$LOCALIZE[31555]</label>
			<font>apptv30</font>
		</control>
		<control type="list" id="2">
			<left>1074</left>
			<top>168</top>
			<width>796</width>
			<height>675</height>
			<onleft condition="Skin.HasSetting(lock-screensettings)">noop</onleft>
			<onleft condition="!Skin.HasSetting(lock-screensettings)">9000</onleft>
			<onright condition="String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31877])">noop</onright>
			<onright condition="!String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31877])">23</onright>
			<onup>2</onup>
			<ondown>2</ondown>
			<viewtype label="31941">list</viewtype>
			<pagecontrol>23</pagecontrol>
			<itemlayout height="84">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>756</width>
					<height>84</height>
				</control>
				<control type="label">
					<left>32</left>
					<top>0</top>
					<width>756</width>
					<height>84</height>
					<font>apptv23</font>
					<selectedcolor>listselected-text</selectedcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout height="84">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>756</width>
					<height>84</height>
					<texture border="9">button-default-focus.png</texture>
					<visible>!Control.HasFocus(4)</visible>
				</control>
				<control type="label">
					<left>32</left>
					<top>0</top>
					<width>670</width>
					<height>84</height>
					<font>apptv23</font>
					<selectedcolor>listselected-text</selectedcolor>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</focusedlayout>
		</control>
		<control type="scrollbar" id="23">
			<left>1870</left>
			<top>168</top>
			<width>18</width>
			<height>675</height>
			<onleft>2</onleft>
			<animation condition="!Control.HasFocus(23) + !Container.Scrolling + !String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31875])" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
			<visible>$EXP[isEnabledScrollbar]</visible>
		</control>
		<control type="image">
			<left>297</left>
			<top>168</top>
			<width>480</width>
			<height>480</height>
			<texture fallback="DefaultUser.png" diffuse="mask-rect.png">$INFO[Container(2).ListItem.Icon]</texture>
			<aspectratio>keep</aspectratio>
		</control>
		<control type="fadelabel" id="3">
			<!-- Last loaded profile -->
			<left>15</left>
			<top>675</top>
			<width>1044</width>
			<height>60</height>
			<label>$LOCALIZE[13204] $INFO[System.ProfileName]</label>
			<font>apptv23</font>
			<align>center</align>
		</control>
		<control type="label">
			<!-- Profile to auto login -->
			<left>15</left>
			<top>750</top>
			<width>1044</width>
			<height>60</height>
			<font>apptv23</font>
			<align>center</align>
			<label>$LOCALIZE[14061]: $INFO[System.ProfileAutoLogin]</label>
			<visible>!System.HasLoginScreen + !String.IsEmpty(System.ProfileAutoLogin)</visible>
		</control>
		<include>touch-controls</include>
		<control type="group">
			<!-- Screen Settings Menu -->
			<top>1080</top>
			<include>screen-settings</include>
			<include>fadebackground</include>
			<control type="image">
				<!-- Dialog background -->
				<left>660</left>
				<top>348</top>
				<width>594</width>
				<height>252</height>
				<texture border="14">button-menu-background.png</texture>
			</control>
			<control type="label">
				<!-- Dialog heading -->
				<left>675</left>
				<top>360</top>
				<width>564</width>
				<height>51</height>
				<font>apptv23</font>
				<label>$LOCALIZE[31557]</label>
				<align>center</align>
			</control>
			<control type="button">
				<!-- Touch Close button -->
				<left>1221</left>
				<top>333</top>
				<width>48</width>
				<height>48</height>
				<texturefocus>touch-close.png</texturefocus>
				<texturenofocus>touch-close.png</texturenofocus>
				<onclick condition="!String.IsEqual(Window(home).Property(ShowScreenSettings),show)">SetProperty(ShowScreenSettings,show,home)</onclick>
				<onclick condition="String.IsEqual(Window(home).Property(ShowScreenSettings),show)">ClearProperty(ShowScreenSettings,home)</onclick>
				<visible>$EXP[isEnabledTouch]</visible>
			</control>
			<control type="image">
				<left>675</left>
				<top>411</top>
				<width>564</width>
				<height>6</height>
				<texture>separator.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<defaultcontrol>4</defaultcontrol>
				<left>675</left>
				<top>428</top>
				<width>564</width>
				<height>225</height>
				<onleft>ClearProperty(ShowScreenSettings,home)</onleft>
				<onleft>2</onleft>
				<onright>ClearProperty(ShowScreenSettings,home)</onright>
				<onright>2</onright>
				<onback>SetFocus(2)</onback>
				<control type="radiobutton" id="4">
					<!-- Enable login screen -->
					<width>564</width>
					<height>75</height>
					<label>$LOCALIZE[20096]</label>
					<font>apptv23</font>
					<aligny>top</aligny>
					<textoffsety>12</textoffsety>
					<radioposx>495</radioposx>
				</control>
				<control type="button" id="5">
					<!-- Choose auto login user -->
					<width>564</width>
					<height>75</height>
					<textoffsety>12</textoffsety>
					<label>$LOCALIZE[14061]</label>
					<label2>$INFO[System.ProfileAutoLogin]</label2>
					<font>apptv23</font>
					<aligny>top</aligny>
					<enable>!System.HasLoginScreen</enable>
				</control>
			</control>
		</control>
		<!-- Show a iOS style page indicator to show which focus group has the current focus -->
		<!-- Focus group can be hidden or shown but is potentially focusable, that is it has not be disabled -->
		<control type="group">
			<include content="page-indicator">
				<param name="indicatorleft" value="864" />
				<param name="indicatortop" value="0" />
				<param name="indicatorwidth" value="192" />
				<param name="indicatorheight" value="48" />
				<param name="indicatororientation" value="horizontal" />
				<param name="grp1indicate" value="[ControlGroup(9000).HasFocus()|String.IsEqual(Window(home).Property(ShowScreenSettings),show)]" />
				<param name="grp1visible" value="[!Skin.HasSetting(lock-screensettings)]" />
				<param name="grp2indicate" value="[Control.HasFocus(2)]" />
				<param name="grp2visible" value="[Control.IsVisible(2)]+[!Skin.HasSetting(lock-screensettings)|!String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31877])]" />
				<param name="grp3indicate" value="[Control.HasFocus(23)]" />
				<param name="grp3visible" value="[!String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31877])]" />
			</include>
		</control>
	</controls>
</window>