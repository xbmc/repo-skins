<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">52</defaultcontrol>
	<visible>!System.ScreenSaverActive | !Window.IsActive(startup)</visible>
	<controls>
		<include>backgroundsimple</include>
		<include content="screen-name">
			<param name="screenlabel" value="$LOCALIZE[20092]"/>
			<param name="listitems" value="Container(52).NumItems"/>
		</include>
		<control type="fixedlist" id="52">
			<left>360</left>
			<top>174</top>
			<width>1200</width>
			<height>684</height>
			<focusposition>1</focusposition>
			<movement>2</movement>
			<preloaditems>4</preloaditems>
			<itemlayout height="171">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>171</width>
					<height>171</height>
					<texture colordiffuse="UnFocusedPosters" background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="label">
					<left>225</left>
					<top>24</top>
					<width>939</width>
					<height>46</height>
					<font>apptv30</font>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="label">
					<left>225</left>
					<top>108</top>
					<width>939</width>
					<height>38</height>
					<textcolor>disabled-text</textcolor>
					<label>$INFO[ListItem.Label2]</label>
				</control>
			</itemlayout>
			<focusedlayout height="171">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>987</width>
					<height>171</height>
					<texture border="9">button-default-focus.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>171</width>
					<height>171</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="label">
					<left>225</left>
					<top>24</top>
					<width>939</width>
					<height>46</height>
					<font>apptv30</font>
					<selectedcolor>listselected-text</selectedcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="label">
					<left>225</left>
					<top>108</top>
					<width>939</width>
					<height>38</height>
					<textcolor>disabled-text</textcolor>
					<label>$INFO[ListItem.Label2]</label>
				</control>
			</focusedlayout>
		</control>
		<control type="label"><!-- Current Profile name -->
			<left>342</left>
			<top>1016</top>
			<width>1236</width>
			<height>46</height>
			<align>center</align>
			<label>$LOCALIZE[13204] $INFO[System.ProfileName]</label>
			<font>apptv30</font>
		</control>
	</controls>
</window>