<?xml version="1.0" encoding="utf-8"?>
<window type="buttonMenu">
	<defaultcontrol>9000</defaultcontrol>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<include>fadebackground</include>
		<control type="image">
			<!-- Dialog background image -->
			<left>660</left>
			<top>153</top>
			<width>570</width>
			<height>768</height>
			<texture border="14">button-menu-background.png</texture>
		</control>
		<control type="label">
			<!-- Dialog heading -->
			<left>675</left>
			<top>168</top>
			<width>540</width>
			<height>45</height>
			<label>$LOCALIZE[31558]$INFO[Container(9000).NumItems,(,)]</label>
			<font>apptv25</font>
			<align>center</align>
		</control>
		<control type="button">
			<!-- Touch mouse close button -->
			<left>1200</left>
			<top>135</top>
			<width>48</width>
			<height>48</height>
			<texturefocus>touch-close.png</texturefocus>
			<texturenofocus>touch-close.png</texturenofocus>
			<onclick>Close</onclick>
			<visible>$EXP[isEnabledTouch]</visible>
		</control>
		<control type="image">
			<left>675</left>
			<top>222</top>
			<width>540</width>
			<height>6</height>
			<texture>separator.png</texture>
		</control>
		<control type="grouplist" id="9000">
			<left>675</left>
			<top>231</top>
			<width>540</width>
			<height>675</height>
			<onleft>Close</onleft>
			<onright>Close</onright>
			<onup>Close</onup>
			<ondown>Close</ondown>
			<aligny>top</aligny>
			<control type="button" id="2">
				<!-- Exit -->
				<width>540</width>
				<height>75</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>495</textwidth>
				<font>apptv22</font>
				<onclick>SetProperty(ShutdownKodi,true,home)</onclick>
				<onclick>Quit()</onclick>
				<label>$LOCALIZE[13009]</label>
			</control>
			<control type="button" id="3">
				<!-- Shutdown -->
				<width>540</width>
				<height>75</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>495</textwidth>
				<font>apptv22</font>
				<onclick>SetProperty(ShutdownKodi,true,home)</onclick>
				<onclick>Powerdown()</onclick>
				<visible>System.CanPowerDown</visible>
				<label>$LOCALIZE[13016]</label>
			</control>
			<control type="button" id="4">
				<!-- Custom shutdown timer -->
				<width>540</width>
				<height>75</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>495</textwidth>
				<font>apptv22</font>
				<onclick>AlarmClock(shutdowntimer,ShutDown())</onclick>
				<label>$LOCALIZE[20150]</label>
				<visible>!System.HasAlarm(shutdowntimer) + [System.CanPowerDown | System.CanSuspend | System.CanHibernate]</visible>
			</control>
			<control type="button" id="5">
				<!-- Cancel shutdown timer -->
				<width>540</width>
				<height>75</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>495</textwidth>
				<font>apptv22</font>
				<onclick>CancelAlarm(shutdowntimer)</onclick>
				<label>$LOCALIZE[20151] $INFO[System.Alarmpos,(,)]</label>
				<visible>System.HasAlarm(shutdowntimer)</visible>
			</control>
			<control type="button" id="6">
				<!-- Suspend -->
				<width>540</width>
				<height>75</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>495</textwidth>
				<font>apptv22</font>
				<onclick>SetProperty(ShutdownKodi,true,home)</onclick>
				<onclick>Suspend()</onclick>
				<visible>System.CanSuspend</visible>
				<label>$LOCALIZE[13011]</label>
			</control>
			<control type="button" id="7">
				<!-- Hibernate -->
				<width>540</width>
				<height>75</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>495</textwidth>
				<font>apptv22</font>
				<onclick>SetProperty(ShutdownKodi,true,home)</onclick>
				<onclick>Hibernate()</onclick>
				<visible>System.CanHibernate</visible>
				<label>$LOCALIZE[13010]</label>
			</control>
			<control type="button" id="8">
				<!-- Reboot -->
				<width>540</width>
				<height>75</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>495</textwidth>
				<font>apptv22</font>
				<onclick>SetProperty(ShutdownKodi,true,home)</onclick>
				<onclick>Reset()</onclick>
				<visible>System.CanReboot</visible>
				<label>$LOCALIZE[13013]</label>
			</control>
			<control type="button" id="9">
				<!-- Reboot to NAND -->
				<width>540</width>
				<height>75</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>495</textwidth>
				<font>apptv22</font>
				<onclick>SetProperty(ShutdownKodi,true,home)</onclick>
				<onclick>System.ExecWait("/usr/sbin/rebootfromnand")</onclick>
				<visible>System.Platform.Android + System.CanReboot</visible>
				<label>$LOCALIZE[31554]</label>
			</control>
			<control type="button" id="10">
				<!-- Logoff -->
				<width>540</width>
				<height>75</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>495</textwidth>
				<font>apptv22</font>
				<onclick>Dialog.Close(all,true)</onclick>
				<onclick>System.LogOff</onclick>
				<label>$LOCALIZE[20126] $INFO[system.profilename]</label>
				<visible>[System.HasLoginScreen | Integer.IsGreater(System.ProfileCount,1)] + System.Loggedon</visible>
			</control>
			<control type="togglebutton" id="11">
				<!-- Master mode -->
				<width>540</width>
				<height>75</height>
				<label>$LOCALIZE[20046]</label>
				<altlabel>$LOCALIZE[20045]</altlabel>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>495</textwidth>
				<font>apptv22</font>
				<usealttexture>!System.IsMaster</usealttexture>
				<onclick>Mastermode</onclick>
				<visible>System.HasLocks</visible>
			</control>
			<control type="button" id="12">
				<!-- Inhibit idle shutdown -->
				<width>540</width>
				<height>75</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>495</textwidth>
				<font>apptv22</font>
				<onclick>InhibitIdleShutdown(true)</onclick>
				<label>$LOCALIZE[13017]</label>
				<visible>System.HasShutdown + !System.IsInhibit</visible>
			</control>
			<control type="button" id="13">
				<!-- Allow idel shutdown -->
				<width>540</width>
				<height>75</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>495</textwidth>
				<font>apptv22</font>
				<onclick>InhibitIdleShutdown(false)</onclick>
				<label>$LOCALIZE[13018]</label>
				<visible>System.HasShutdown + System.IsInhibit</visible>
			</control>
		</control>
	</controls>
</window>