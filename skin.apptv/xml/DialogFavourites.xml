<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">450</defaultcontrol>
	<controls>
		<include>background</include>
		<include>fake-overlay</include>
		<control type="grouplist">
			<left>1170</left>
			<top>52</top>
			<width>auto</width>
			<height>93</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label">
				<!-- Favorites heading -->
				<width max="600">auto</width>
				<height>108</height>
				<label>$LOCALIZE[1036]</label>
				<font>apptv30</font>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
			</control>
			<control type="label">
				<!-- Number of files -->
				<top>20</top>
				<width max="120">auto</width>
				<height>57</height>
				<label>$INFO[Container(450).NumItems,(,)]</label>
			</control>
		</control>
		<control type="list" id="450">
			<left>1062</left>
			<top>168</top>
			<width>756</width>
			<height>832</height>
			<onright condition="String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31877])">noop</onright>
			<onright condition="!String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31877])">423</onright>
			<onup>450</onup>
			<ondown>450</ondown>
			<pagecontrol>423</pagecontrol>
			<itemlayout height="75">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>756</width>
					<height>75</height>
					<texture border="9">button-default.png</texture>
				</control>
				<control type="label">
					<left>26</left>
					<top>0</top>
					<width>674</width>
					<height>60</height>
					<font>apptv23</font>
					<selectedcolor>listselected-text</selectedcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout height="75">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>756</width>
					<height>75</height>
					<texture border="9">button-default-focus.png</texture>
				</control>
				<control type="label">
					<left>26</left>
					<top>0</top>
					<width>674</width>
					<height>60</height>
					<font>apptv23</font>
					<selectedcolor>listselected-text</selectedcolor>
					<label>$INFO[ListItem.Label]</label>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
			</focusedlayout>
		</control>
		<control type="group">
			<control type="image">
				<!-- List item icon -->
				<left>243</left>
				<top>168</top>
				<width>576</width>
				<height>576</height>
				<texture fallback="icon-fav.png" background="true" diffuse="mask-rect.png">$INFO[ListItem.Icon]</texture>
				<aspectratio scalediffuse="false">keep</aspectratio>
			</control>
		</control>
		<control type="scrollbar" id="423">
			<left>1866</left>
			<top>168</top>
			<width>20</width>
			<height>832</height>
			<onleft>450</onleft>
			<animation condition="!Control.HasFocus(423) + !Container.Scrolling + !String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31875])" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
			<visible>$EXP[isEnabledScrollbar]</visible>
		</control>
	</controls>
</window>