<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol>1000</defaultcontrol>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<include>fadebackground</include>
		<control type="image">
			<!-- Dialog background image -->
			<left>180</left>
			<top>90</top>
			<width>1560</width>
			<height>798</height>
			<texture border="14">button-menu-background.png</texture>
		</control>
		<control type="grouplist">
			<left>210</left>
			<top>108</top>
			<width>1494</width>
			<height>56</height>
			<align>center</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label" id="1">
				<!-- Dialog heading -->
				<width max="1350">auto</width>
				<height>56</height>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
				<font>apptv25</font>
			</control>
			<control type="label">
				<!-- Number of files -->
				<width max="144">auto</width>
				<height>56</height>
				<label>$VAR[SelectDialogNumObjects]</label>
				<aligny>top</aligny>
				<font>apptv25</font>
			</control>
		</control>
		<control type="image">
			<left>210</left>
			<top>159</top>
			<width>1494</width>
			<height>6</height>
			<texture>separator.png</texture>
		</control>
		<control type="group" id="1000">
			<control type="list" id="3">
				<!-- Type 3 Select -->
				<left>240</left>
				<top>186</top>
				<width>1050</width>
				<height>672</height>
				<onleft condition="String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31877])">noop</onleft>
				<onleft condition="!String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31877])">23</onleft>
				<onright condition="!Control.IsVisible(5)">7</onright>
				<onright condition="Control.IsVisible(5)">5</onright>
				<pagecontrol>23</pagecontrol>
				<itemlayout width="1050" height="96">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>1050</width>
						<height>96</height>
						<texture border="9">button-default.png</texture>
					</control>
					<control type="group">
						<visible>!String.IsEmpty(ListItem.Label2)</visible>
						<control type="label">
							<left>15</left>
							<top>12</top>
							<width>1020</width>
							<height>36</height>
							<font>apptv22</font>
							<selectedcolor>button-text</selectedcolor>
							<label>$INFO[ListItem.Label]</label>
							<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
						</control>
						<control type="label">
							<left>15</left>
							<top>54</top>
							<width>1020</width>
							<height>36</height>
							<font>apptv20</font>
							<selectedcolor>button-text</selectedcolor>
							<label>[I]$INFO[ListItem.Label2, - ] [/I]</label>
							<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
						</control>
					</control>
					<control type="label">
						<left>15</left>
						<top>30</top>
						<width>1020</width>
						<height>36</height>
						<font>apptv23</font>
						<selectedcolor>button-text</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
						<visible>String.IsEmpty(ListItem.Label2)</visible>
					</control>
				</itemlayout>
				<focusedlayout width="1050" height="96">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>1050</width>
						<height>96</height>
						<texture border="9">button-default-focus.png</texture>
						<animation condition="!Control.HasFocus(3)" effect="fade" start="100" end="60">Conditional</animation>
					</control>
					<control type="group">
						<visible>!String.IsEmpty(ListItem.Label2)</visible>
						<control type="label">
							<left>15</left>
							<top>12</top>
							<width>1020</width>
							<height>36</height>
							<font>apptv22</font>
							<selectedcolor>button-text</selectedcolor>
							<label>$INFO[ListItem.Label]</label>
							<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
						</control>
						<control type="label">
							<left>15</left>
							<top>54</top>
							<width>1020</width>
							<height>36</height>
							<font>apptv20</font>
							<selectedcolor>button-text</selectedcolor>
							<label>[I]$INFO[ListItem.Label2, - ] [/I]</label>
							<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
						</control>
					</control>
					<control type="label">
						<left>15</left>
						<top>30</top>
						<width>1020</width>
						<height>36</height>
						<font>apptv23</font>
						<selectedcolor>button-text</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
						<visible>String.IsEmpty(ListItem.Label2)</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="list" id="6">
				<!-- Type 6 Select -->
				<left>240</left>
				<top>186</top>
				<width>1050</width>
				<height>672</height>
				<onleft condition="String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31877])">noop</onleft>
				<onleft condition="!String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31877])">26</onleft>
				<onright condition="!Control.IsVisible(5)">7</onright>
				<onright condition="Control.IsVisible(5)">5</onright>
				<pagecontrol>26</pagecontrol>
				<itemlayout width="1050" height="96">
					<control type="image">
						<left>0</left>
						<top>3</top>
						<height>78</height>
						<width>78</width>
						<texture fallback="DefaultFile.png">$INFO[ListItem.Icon]</texture>
						<aspectratio>keep</aspectratio>
					</control>
					<control type="image">
						<left>81</left>
						<top>0</top>
						<width>969</width>
						<height>84</height>
						<texture border="9">button-default.png</texture>
					</control>
					<control type="label">
						<left>105</left>
						<top>-6</top>
						<width>921</width>
						<height>84</height>
						<font>apptv22</font>
						<selectedcolor>button-text</selectedcolor>
						<label>$INFO[ListItem.Label] [I]$INFO[ListItem.Label2, - ] [/I]</label>
						<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
					</control>
				</itemlayout>
				<focusedlayout width="1050" height="96">
					<control type="image">
						<left>0</left>
						<top>3</top>
						<height>78</height>
						<width>78</width>
						<texture fallback="DefaultFile.png">$INFO[ListItem.Icon]</texture>
						<aspectratio>keep</aspectratio>
					</control>
					<control type="image">
						<left>81</left>
						<top>0</top>
						<width>969</width>
						<height>84</height>
						<texture border="9">button-default-focus.png</texture>
						<animation condition="!Control.HasFocus(6)" effect="fade" start="100" end="60">Conditional</animation>
					</control>
					<control type="label">
						<left>105</left>
						<top>-6</top>
						<width>921</width>
						<height>84</height>
						<font>apptv22</font>
						<selectedcolor>button-text</selectedcolor>
						<label>$INFO[ListItem.Label] [I]$INFO[ListItem.Label2, - ] [/I]</label>
						<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
					</control>
				</focusedlayout>
			</control>
		</control>
		<control type="scrollbar" id="23">
			<left>208</left>
			<top>186</top>
			<width>16</width>
			<height>672</height>
			<onright>3</onright>
			<animation condition="!Control.HasFocus(23) + !Container.Scrolling + !String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31875])" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
			<visible>Control.IsVisible(3) + !String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31877])</visible>
		</control>
		<control type="group">
			<visible>Control.IsVisible(6)</visible>
			<control type="scrollbar" id="26">
				<left>208</left>
				<top>186</top>
				<width>16</width>
				<height>672</height>
				<onright>6</onright>
				<animation condition="!Control.HasFocus(26) + !Container.Scrolling + !String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31875])" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
				<visible>$EXP[isEnabledScrollbar]</visible>
			</control>
			<control type="image">
				<left>1326</left>
				<top>369</top>
				<height>384</height>
				<width>384</width>
				<texture fallback="DefaultFile.png">$INFO[Container(6).ListItem.Icon]</texture>
				<aspectratio aligny="top">keep</aspectratio>
				<animation effect="fade" time="300">VisibleChange</animation>
			</control>
		</control>
		<control type="button" id="5">
			<!-- Manual -->
			<left>1326</left>
			<top>186</top>
			<width>384</width>
			<height>84</height>
			<font>apptv23</font>
			<label>$LOCALIZE[186]</label>
			<align>center</align>
			<ondown>7</ondown>
			<onleft condition="Control.IsVisible(3)">3</onleft>
			<onleft condition="Control.IsVisible(6)">6</onleft>
		</control>
		<control type="button" id="7">
			<!-- Cancel -->
			<left>1326</left>
			<top>270</top>
			<width>384</width>
			<height>84</height>
			<font>apptv23</font>
			<align>center</align>
			<onup>5</onup>
			<onleft condition="Control.IsVisible(3)">3</onleft>
			<onleft condition="Control.IsVisible(6)">6</onleft>
		</control>
	</controls>
</window>