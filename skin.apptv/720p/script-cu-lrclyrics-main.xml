<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>101</defaultcontrol>
	<animation effect="fade" end="0" time="0" condition="!StringCompare(Skin.String(osd-lyricpath),script.cu.lrclyrics)">Conditional</animation>
	<controls>
		<include>background</include>
		<control type="group">
			<control type="label"><!-- Scraper -->
				<left>10</left>
				<top>50</top>
				<width>550</width>
				<height>30</height>
				<label>$LOCALIZE[21870] - $INFO[Control.GetLabel(200)]</label>
				<font>font12</font>
			</control>
			<control type="label" id="200">
				<visible>false</visible>
			</control>
			<control type="label"><!--Dialog heading -->
				<left>946</left>
				<top>50</top>
				<width>360</width>
				<height>37</height>
				<font>font18</font>
				<label>$ADDON[script.cu.lrclyrics 32199]</label>
			</control>
			<control type="image"><!-- media info background image -->
				<left>0</left>
				<top>570</top>
				<width>1280</width>
				<height>155</height>
				<texture>background.png</texture>
				<colordiffuse>mask-background</colordiffuse>
			</control>
			<control type="image"><!-- Cd overlay -->
				<animation effect="slide" start="-102" end="0" time="900" tween="cubic" easing="out" delay="1000">WindowOpen</animation>
				<animation type="WindowClose">
					<effect type="slide" start="0" end="-98" time="100" tween="cubic" easing="in" delay="0"/>
					<effect type="fade" start="100" end="0" time="200"/>
					<condition type="!Player.Playing"/>
				</animation>
				<animation effect="rotate" end="-360" center="auto" time="3000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
				<width>215</width>
				<height>215</height>
				<left>132</left>
				<top>480</top>
				<texture fallback="DefaultDVDRom.png">$INFO[Player.FolderPath]/cdart.png</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
				<visible>!SubString(Player.Art(thumb),Default,Left)</visible>
			</control>
			<control type="image">
				<left>10</left>
				<top>455</top>
				<height>265</height>
				<width>265</width>
				<texture>case-cd.png</texture>
				<aspectratio>stretch</aspectratio>
				<visible>Skin.HasSetting(media-case) + !SubString(Player.Art(thumb),Default,Left)</visible>
			</control>
			<control type="image"><!-- Cover image -->
				<left>36</left>
				<top>475</top>
				<width>225</width>
				<height>225</height>
				<texture fallback="DefaultAudio.png">$VAR[PlayerMusicCover]</texture>
				<aspectratio aligny="bottom">stretch</aspectratio>
			</control>
			<control type="label"><!-- Song title -->
				<left>370</left>
				<top>572</top>
				<width>656</width>
				<height>45</height>
				<font>font18</font>
				<label>$INFO[MusicPlayer.Title]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
			<control type="label"><!-- Artist -->
				<left>370</left>
				<top>608</top>
				<width>682</width>
				<height>37</height>
				<font>font12</font>
				<label>$INFO[MusicPlayer.Artist]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
			<control type="label"><!-- Album name -->
				<left>370</left>
				<top>638</top>
				<width>656</width>
				<height>37</height>
				<font>font12</font>
				<label>$INFO[MusicPlayer.Album]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
			<control type="label"><!-- Player time -->
				<left>370</left>
				<top>668</top>
				<width>656</width>
				<height>37</height>
				<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
				<font>font12</font>
			</control>
			<control type="progress" id="1">
				<left>558</left>
				<top>680</top>
				<width>685</width>
				<height>16</height>
				<info>Player.Progress</info>
				<colordiffuse>ProgressBarColor</colordiffuse>
				<visible>true</visible>
			</control>
			<control type="slider" id="402"><!-- Seek slider -->
				<left>558</left>
				<top>678</top>
				<width>685</width>
				<height>20</height>
				<action>seek</action>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
			<control type="list" id="110">
				<left>20</left>
				<top>100</top>
				<width>1240</width>
				<height>370</height>
				<onleft>111</onleft>
				<onright>111</onright>
				<onup>110</onup>
				<ondown>110</ondown>
				<pagecontrol>111</pagecontrol>
				<itemlayout height="40">
					<control type="label">
						<left>20</left>
						<top>0</top>
						<width>1240</width>
						<height>40</height>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="50">
					<control type="label">
						<left>20</left>
						<top>0</top>
						<width>1240</width>
						<height>50</height>
						<font>font22</font>
						<textcolor>lightblue</textcolor>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>!Control.HasFocus(110)</visible>
					</control>
					<control type="label">
						<left>20</left>
						<top>0</top>
						<width>1240</width>
						<height>50</height>
						<font>font22</font>
						<textcolor>lightblue</textcolor>
						<align>center</align>
						<label fallback="--">$INFO[ListItem.Label]</label>
						<visible>Control.HasFocus(110)</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="spincontrol" id="111"><!-- Next page button -->
				<left>1195</left>
				<top>580</top>
				<subtype>page</subtype>
				<font>font12</font>
				<onleft>110</onleft>
				<onright>110</onright>
				<ondown>110</ondown>
				<onup>110</onup>
				<showonepage>true</showonepage>
				<visible>Control.IsVisible(110)</visible>
			</control>
			<control type="label" id="2"><!-- Pick -->
				<left>20</left>
				<top>130</top>
				<width>1240</width>
				<height>30</height>
				<align>center</align>
				<selectedcolor>listselected-text</selectedcolor>
				<label>$LOCALIZE[179]?</label>
				<visible>Control.IsVisible(120) + ![Control.IsVisible(100) | Control.IsVisible(110)]</visible>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Song Chooser if it gets it wrong) -->
			<control type="list" id="120">
				<left>20</left>
				<top>140</top>
				<width>1240</width>
				<height>410</height>
				<onleft>121</onleft>
				<onright>121</onright>
				<onup>120</onup>
				<ondown>120</ondown>
				<pagecontrol>121</pagecontrol>
				<animation effect="slide" start="0,0" end="20,0" time="0" condition="!Control.IsVisible(121)">Conditional</animation>
				<itemlayout height="40">
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>1240</width>
						<height>40</height>
						<selectedcolor>listselected-text</selectedcolor>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="40">
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>1240</width>
						<height>40</height>
						<textcolor>listselected-text</textcolor>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="spincontrol" id="121"><!-- Next page button -->
				<left>1195</left>
				<top>580</top>
				<subtype>page</subtype>
				<font>font12</font>
				<onleft>120</onleft>
				<onright>120</onright>
				<ondown>120</ondown>
				<onup>120</onup>
				<showonepage>true</showonepage>
				<visible>Control.IsVisible(120)</visible>
			</control>
		</control>
	</controls>
</window>