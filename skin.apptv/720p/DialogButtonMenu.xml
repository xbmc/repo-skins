<?xml version="1.0" encoding="UTF-8"?>
<window type="buttonMenu">
	<defaultcontrol>9000</defaultcontrol>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<include>fadebackground</include>
		<control type="image"><!-- Dialog background image -->
			<left>440</left>
			<top>102</top>
			<width>380</width>
			<height>512</height>
			<texture border="9">button-menu-background.png</texture>
		</control>
		<control type="label"><!-- Dialog heading -->
			<left>450</left>
			<top>112</top>
			<width>360</width>
			<height>31</height>
			<label>$LOCALIZE[31558]$INFO[Container(9000).NumItems,(,)]</label>
			<align>center</align>
		</control>
		<control type="button"><!-- Touch mouse close button -->
			<left>796</left>
			<top>94</top>
			<width>32</width>
			<height>32</height>
			<texturefocus>touch-close.png</texturefocus>
			<texturenofocus>touch-close.png</texturenofocus>
			<onclick>Close</onclick>
			<visible>Skin.HasSetting(touch-controls)</visible>
		</control>
		<control type="image">
			<left>450</left>
			<top>148</top>
			<width>360</width>
			<height>4</height>
			<texture>separator.png</texture>
		</control>
		<control type="grouplist" id="9000">
			<left>450</left>
			<top>154</top>
			<width>360</width>
			<height>450</height>
			<onleft>Close</onleft>
			<onright>Close</onright>
			<onup>Close</onup>
			<ondown>Close</ondown>
			<aligny>top</aligny>
			<control type="button" id="2"><!-- Exit -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>330</textwidth>
				<font>font11</font>
				<onclick>SetProperty(ShutdownKodi,true,Home)</onclick>
				<onclick>Quit()</onclick>
				<label>$LOCALIZE[13009]</label>
			</control>
			<control type="button" id="3"><!-- Shutdown -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>330</textwidth>
				<font>font11</font>
				<onclick>SetProperty(ShutdownKodi,true,Home)</onclick>
				<onclick>Powerdown()</onclick>
				<visible>System.CanPowerDown</visible>
				<label>$LOCALIZE[13016]</label>
			</control>
			<control type="button" id="4"><!-- Custom shutdown timer -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>330</textwidth>
				<font>font11</font>
				<onclick>AlarmClock(shutdowntimer,ShutDown())</onclick>
				<label>$LOCALIZE[20150]</label>
				<visible>!System.HasAlarm(shutdowntimer) + [System.CanPowerDown | System.CanSuspend | System.CanHibernate]</visible>
			</control>
			<control type="button" id="5"><!-- Cancel shutdown timer -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>330</textwidth>
				<font>font11</font>
				<onclick>CancelAlarm(shutdowntimer)</onclick>
				<label>$LOCALIZE[20151] $INFO[System.Alarmpos,(,)]</label>
				<visible>System.HasAlarm(shutdowntimer)</visible>
			</control>
			<control type="button" id="6"><!-- Suspend -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>330</textwidth>
				<font>font11</font>
				<onclick>SetProperty(ShutdownKodi,true,Home)</onclick>
				<onclick>Suspend()</onclick>
				<visible>System.CanSuspend</visible>
				<label>$LOCALIZE[13011]</label>
			</control>
			<control type="button" id="7"><!-- Hibernate -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>330</textwidth>
				<font>font11</font>
				<onclick>SetProperty(ShutdownKodi,true,Home)</onclick>
				<onclick>Hibernate()</onclick>
				<visible>System.CanHibernate</visible>
				<label>$LOCALIZE[13010]</label>
			</control>
			<control type="button" id="8"><!-- Reboot -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>330</textwidth>
				<font>font11</font>
				<onclick>SetProperty(ShutdownKodi,true,Home)</onclick>
				<onclick>Reset()</onclick>
				<visible>System.CanReboot</visible>
				<label>$LOCALIZE[13013]</label>
			</control>
		   <control type="button" id="9"><!-- Reboot to NAND -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>330</textwidth>
				<font>font11</font>
				<onclick>SetProperty(ShutdownKodi,true,Home)</onclick>
				<onclick>System.ExecWait("/usr/sbin/rebootfromnand")</onclick>
				<visible>System.Platform.Android + System.CanReboot</visible>
				<label>$LOCALIZE[31554]</label>
			</control>
			<control type="button" id="10"><!-- Logoff -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>330</textwidth>
				<font>font11</font>
				<onclick>Dialog.Close(all,true)</onclick>
				<onclick>System.LogOff</onclick>
				<label>$LOCALIZE[20126] $INFO[system.profilename]</label>
				<visible>[System.HasLoginScreen | IntegerGreaterThan(System.ProfileCount,1)] + System.Loggedon</visible>
			</control>
			<control type="togglebutton" id="11"><!-- Master mode -->
				<width>360</width>
				<height>50</height>
				<label>$LOCALIZE[20046]</label>
				<altlabel>$LOCALIZE[20045]</altlabel>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>330</textwidth>
				<font>font11</font>
				<usealttexture>!System.IsMaster</usealttexture>
				<onclick>Mastermode</onclick>
				<visible>System.HasLocks</visible>
			</control>
			<control type="button" id="12"><!-- Inhibit idle shutdown -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>330</textwidth>
				<font>font11</font>
				<onclick>InhibitIdleShutdown(true)</onclick>
				<label>$LOCALIZE[13017]</label>
				<visible>System.HasShutdown + !System.IsInhibit</visible>
			</control>
			<control type="button" id="13"><!-- Allow idel shutdown -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>center</aligny>
				<textwidth>330</textwidth>
				<font>font11</font>
				<onclick>InhibitIdleShutdown(false)</onclick>
				<label>$LOCALIZE[13018]</label>
				<visible>System.HasShutdown + System.IsInhibit</visible>
			</control>
		</control>
	</controls>
</window>
