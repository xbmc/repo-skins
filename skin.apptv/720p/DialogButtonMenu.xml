<?xml version="1.0" encoding="UTF-8"?>
<window type="buttonMenu">
	<defaultcontrol>9000</defaultcontrol>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<include>screen-fade</include>
	<controls>
		<include>fadebackground</include>
		<control type="image"><!-- Dialog background image -->
			<left>440</left>
			<top>102</top>
			<width>380</width>
			<height>500</height>
			<texture border="8">button-menu-background.png</texture>
		</control>
		<control type="label"><!-- Dialog heading -->
			<left>450</left>
			<top>112</top>
			<width>360</width>
			<height>31</height>
			<label>$LOCALIZE[31558]</label>
			<align>center</align>
		</control>
		<control type="image">
			<left>450</left>
			<top>144</top>
			<width>360</width>
			<height>4</height>
			<texture>separator.png</texture>
		</control>
		<control type="grouplist" id="9000">
			<left>450</left>
			<top>74</top>
			<width>360</width>
			<height>500</height>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<itemgap>0</itemgap>
			<align>center</align>
			<control type="button" id="2"><!-- Exit -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>top</aligny>
				<textoffsety>6</textoffsety>
				<textwidth>330</textwidth>
				<onclick>Quit()</onclick>
				<label>$LOCALIZE[13009]</label>
				<visible>System.ShowExitButton</visible>
			</control>
			<control type="button" id="3"><!-- Shutdown -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>top</aligny>
				<textoffsety>6</textoffsety>
				<textwidth>330</textwidth>
				<onclick>Powerdown()</onclick>
				<visible>System.CanPowerDown</visible>
				<label>$LOCALIZE[13016]</label>
			</control>
			<control type="button" id="4"><!-- Custom shutdown timer -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>top</aligny>
				<textoffsety>6</textoffsety>
				<textwidth>330</textwidth>
				<onclick>AlarmClock(shutdowntimer,ShutDown())</onclick>
				<label>$LOCALIZE[20150]</label>
				<visible>!System.HasAlarm(shutdowntimer)</visible>
				<visible>System.CanPowerDown | System.CanSuspend | System.CanHibernate</visible>
			</control>
			<control type="button" id="5"><!-- Cancel shutdown timer -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>top</aligny>
				<textoffsety>6</textoffsety>
				<textwidth>330</textwidth>
				<onclick>CancelAlarm(shutdowntimer)</onclick>
				<label>$LOCALIZE[20151]</label>
				<visible>System.HasAlarm(shutdowntimer)</visible>
			</control>
			<control type="button" id="6"><!-- Suspend -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>top</aligny>
				<textoffsety>6</textoffsety>
				<textwidth>330</textwidth>
				<onclick>Suspend()</onclick>
				<visible>System.CanSuspend</visible>
				<label>$LOCALIZE[13011]</label>
			</control>
			<control type="button" id="7"><!-- Hibernate -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>top</aligny>
				<textoffsety>6</textoffsety>
				<textwidth>330</textwidth>
				<onclick>Hibernate()</onclick>
				<visible>System.CanHibernate</visible>
				<label>$LOCALIZE[13010]</label>
			</control>
			<control type="button" id="8"><!-- Reboot -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>top</aligny>
				<textoffsety>6</textoffsety>
				<textwidth>330</textwidth>
				<onclick>Reset()</onclick>
				<visible>System.CanReboot</visible>
				<label>$LOCALIZE[13013]</label>
			</control>
			<control type="button" id="9"><!-- Logoff -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>top</aligny>
				<textoffsety>6</textoffsety>
				<textwidth>330</textwidth>
				<onclick>Dialog.Close(all,true)</onclick>
				<onclick>System.LogOff</onclick>
				<label>$LOCALIZE[20126] $INFO[system.profilename]</label>
				<visible>System.HasLoginScreen | IntegerGreaterThan(System.ProfileCount,1)</visible>
				<visible>System.Loggedon</visible>
			</control>
			<control type="togglebutton" id="10"><!-- Master mode -->
				<width>360</width>
				<height>50</height>
				<label>$LOCALIZE[20046]</label>
				<altlabel>$LOCALIZE[20045]</altlabel>
				<align>center</align>
				<aligny>top</aligny>
				<textoffsety>6</textoffsety>
				<textwidth>330</textwidth>
				<usealttexture>!System.IsMaster</usealttexture>
				<onclick>Mastermode</onclick>
				<visible>System.HasLocks</visible>
			</control>
			<control type="group" id="11">
				<width>360</width>
				<height>70</height>
				<visible>System.HasAlarm(shutdowntimer)</visible>
				<control type="textbox">
					<left>25</left>
					<top>20</top>
					<width>330</width>
					<height>50</height>
					<font>font12</font>
					<align>center</align>
					<aligny>top</aligny>
					<label>$LOCALIZE[31329] [B]$INFO[System.Alarmpos][/B]</label>
				</control>
			</control>
			<control type="button" id="12"><!-- Inhibit idle shutdown -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>top</aligny>
				<textoffsety>6</textoffsety>
				<textwidth>330</textwidth>
				<onclick>InhibitIdleShutdown(true)</onclick>
				<label>$LOCALIZE[13017]</label>
				<visible>System.HasShutdown +!System.IsInhibit</visible>
			</control>
			<control type="button" id="13"><!-- Allow idel shutdown -->
				<width>360</width>
				<height>50</height>
				<align>center</align>
				<aligny>top</aligny>
				<textoffsety>6</textoffsety>
				<textwidth>330</textwidth>
				<onclick>InhibitIdleShutdown(false)</onclick>
				<label>$LOCALIZE[13018]</label>
				<visible>System.HasShutdown + System.IsInhibit</visible>
			</control>
		</control>
	</controls>
</window>
