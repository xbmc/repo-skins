<?xml version="1.0" encoding="UTF-8"?>
<window>
	<onload condition="Skin.HasSetting(background-slideshow)">RunScript(script.artistslideshow)</onload>
	<visible>!Window.IsVisible(fullscreenvideo) + !Window.IsActive(script-cu-lrclyrics-main.xml)</visible>
	<controls>
		<include>background</include>
		<control type="group"><!-- infos -->
			<visible>Player.ShowInfo</visible>
			<control type="image" id="992"><!-- Music logo if available -->
				<left>8</left>
				<top>80</top>
				<width>400</width>
				<height>155</height>
				<texture>$INFO[Window(home).Property(SkinHelper.Player.Music.ClearLogo)]</texture>
				<aspectratio align="left" aligny="bottom">keep</aspectratio>
			</control>
			<control type="image"><!-- media info background image -->
				<left>0</left>
				<top>570</top>
				<width>1280</width>
				<height>155</height>
				<texture>background.png</texture>
				<colordiffuse>mask-background</colordiffuse>
			</control>
			<control type="image"><!-- Cd overlay -->
				<animation effect="slide" start="-102" end="0" time="900" tween="cubic" easing="out" delay="1000">WindowOpen</animation>
				<animation type="WindowClose">
					<effect type="slide" start="0" end="-98" time="100" tween="cubic" easing="in" delay="0"/>
					<effect type="fade" start="100" end="0" time="200"/>
					<condition type="!Player.Playing"/>
				</animation>
				<animation effect="rotate" end="-360" center="auto" time="3000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
				<width>215</width>
				<height>215</height>
				<left>132</left>
				<top>480</top>
				<texture fallback="DefaultDVDRom.png">$INFO[Window(home).Property(SkinHelper.Player.Music.DiscArt)]</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
				<visible>!SubString(Control.GetLabel(994),DefaultAudio.png,Right) + !SubString(Control.GetLabel(994),icon-radio.png,Right)</visible>
			</control>
			<control type="image">
				<left>10</left>
				<top>455</top>
				<height>265</height>
				<width>265</width>
				<texture>case-cd.png</texture>
				<aspectratio>stretch</aspectratio>
				<visible>Skin.HasSetting(media-case) + !SubString(Control.GetLabel(994),DefaultAudio.png,Right) + !SubString(Control.GetLabel(994),icon-radio.png,Right)</visible>
			</control>
			<control type="image" id="994"><!-- Cover image -->
				<left>36</left>
				<top>475</top>
				<width>225</width>
				<height>225</height>
				<texture fallback="DefaultAudio.png">$VAR[PlayerMusicCover]</texture>
				<aspectratio aligny="bottom">stretch</aspectratio>
			</control>
			<control type="button"><!-- Touch button to get out of Fullscreen -->
				<left>36</left>
				<top>475</top>
				<width>225</width>
				<height>225</height>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onclick>Back</onclick>
				<visible>Skin.HasSetting(touch-controls)</visible>
			</control>
			<control type="label"><!-- Now playing -->
				<left>370</left>
				<top>520</top>
				<width>682</width>
				<height>25</height>
				<label>$LOCALIZE[31037]</label>
				<font>apptv25</font>
				<textcolor>listselected-text</textcolor>
			</control>
			<control type="label"><!-- Partymode enabled -->
				<left>990</left>
				<top>520</top>
				<width>250</width>
				<height>25</height>
				<label>$LOCALIZE[589]</label>
				<align>right</align>
				<font>apptv23</font>
				<visible>MusicPartyMode.Enabled</visible>
			</control>
			<control type="label"><!-- Title label -->
				<left>370</left>
				<top>548</top>
				<width>682</width>
				<height>25</height>
				<font>apptv23</font>
				<label>$LOCALIZE[19021] - $INFO[MusicPlayer.ChannelName]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				<visible>Pvr.IsPlayingRadio</visible>
			</control>
			<control type="label"><!-- Title label -->
				<left>370</left>
				<top>572</top>
				<width>656</width>
				<height>45</height>
				<font>apptv25</font>
				<label>$INFO[MusicPlayer.Title]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
			<control type="label"><!-- Artist label -->
				<left>370</left>
				<top>608</top>
				<width>682</width>
				<height>37</height>
				<font>apptv22</font>
				<label>$INFO[MusicPlayer.Artist]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
			<control type="label"><!-- Album label -->
				<left>370</left>
				<top>638</top>
				<width>656</width>
				<height>37</height>
				<font>apptv22</font>
				<label>$INFO[MusicPlayer.Album]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
			<control type="label"><!-- Time label -->
				<left>370</left>
				<top>668</top>
				<width>656</width>
				<height>37</height>
				<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
				<font>apptv23</font>
				<visible>!Pvr.IsPlayingRadio</visible>
			</control>
			<control type="label"><!-- Playlist label -->
				<left>974</left>
				<top>580</top>
				<width>265</width>
				<height>37</height>
				<align>right</align>
				<label>$INFO[Playlist.Position(music),$LOCALIZE[554]: ]$INFO[Playlist.Length(music), / ]</label>
				<font>apptv23</font>
				<visible>!MusicPartyMode.Enabled + !StringCompare(Playlist.Length(music),0)</visible>
			</control>
			<control type="progress" id="1">
				<left>558</left>
				<top>680</top>
				<width>685</width>
				<height>16</height>
				<info>Player.Progress</info>
				<visible>!Pvr.IsPlayingRadio</visible>
			</control>
			<control type="slider" id="402"><!-- Seek slider -->
				<left>558</left>
				<top>678</top>
				<width>685</width>
				<height>20</height>
				<action>seek</action>
				<visible>!Pvr.IsPlayingRadio</visible>
			</control>
		</control>
		<control type="group"><!-- Codec -->
			<visible>Player.ShowCodec</visible>
			<control type="image"><!-- Preset background image -->
				<left>0</left>
				<top>0</top>
				<width>1280</width>
				<height>90</height>
				<texture>background.png</texture>
				<colordiffuse>mask-background</colordiffuse>
			</control>
			<control type="label"><!-- Codec info -->
				<left>132</left>
				<top>12</top>
				<width>1062</width>
				<height>37</height>
				<label>$LOCALIZE[292] | $INFO[musicplayer.Codec,Codec:,]$INFO[musicplayer.Bitrate, - Bitrate:,kbps]$INFO[musicplayer.bitspersample, - Bits:,bit]$INFO[musicplayer.Samplerate, - Freq.: ,kHz]$INFO[musicplayer.Channels, - Channels: ]</label>
				<font>apptv22</font>
			</control>
			<control type="label"><!-- Presets labels -->
				<left>132</left>
				<top>43</top>
				<width>220</width>
				<height>37</height>
				<label>Visual | fps: $INFO[System.FPS]</label>
				<font>apptv22</font>
			</control>
			<control type="label">
				<left>398</left>
				<top>43</top>
				<width>743</width>
				<height>37</height>
				<label>$INFO[Visualisation.Name]$INFO[Visualisation.Preset, - ]</label>
				<font>apptv22</font>
			</control>
			<control type="image"><!-- Preset locked image -->
				<left>364</left>
				<top>42</top>
				<width>32</width>
				<height>32</height>
				<texture>overlaylocked.png</texture>
				<visible>Visualisation.Locked</visible>
			</control>
		</control>
	</controls>
</window>