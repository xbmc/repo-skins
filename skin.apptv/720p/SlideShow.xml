<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>2</defaultcontrol>
	<controls>
		<control type="group">
			<visible>Player.ShowCodec</visible>
			<control type="image"><!-- Media info background image -->
				<left>0</left>
				<top>0</top>
				<width>1280</width>
				<height>150</height>
				<texture>background.png</texture>
				<colordiffuse>osd-background</colordiffuse>
			</control>
			<control type="label" id="10"><!-- Row 1 label -->
				<left>17</left>
				<top>12</top>
				<width>1239</width>
				<height>25</height>
				<font>font12</font>
			</control>
			<control type="label" id="11"><!-- Row 2 label -->
				<left>17</left>
				<top>37</top>
				<width>1239</width>
				<height>25</height>
				<font>font12</font>
			</control>
			<control type="label" id="12"><!-- Row 3 label -->
				<left>17</left>
				<top>62</top>
				<width>1239</width>
				<height>25</height>
				<font>font12</font>
			</control>
		</control>
		<!-- Media Info -->
		<control type="group">
			<visible>Player.HasMedia + Player.ShowInfo</visible>
			<animation effect="fade" time="500">VisibleChange</animation>
			<control type="image"><!-- Media info background image -->
				<left>0</left>
				<top>558</top>
				<width>1280</width>
				<height>162</height>
				<texture>background.png</texture>
				<colordiffuse>osd-background</colordiffuse>
			</control>
			<control type="image"><!-- Cover image -->
				<left>60</left>
				<top>568</top>
				<width>128</width>
				<height>128</height>
				<texture>$INFO[MusicPlayer.Cover]</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="label"><!-- Artist -->
				<left>238</left>
				<top>572</top>
				<label>$INFO[MusicPlayer.Artist]</label>
				<width>787</width>
				<height>25</height>
				<font>font12</font>
			</control>
			<control type="label"><!-- Song title -->
				<left>238</left>
				<top>598</top>
				<width>761</width>
				<height>25</height>
				<label>$INFO[MusicPlayer.Title]</label>
				<font>font12</font>
			</control>
			<control type="label"><!-- Album title -->
				<left>238</left>
				<top>633</top>
				<width>761</width>
				<height>25</height>
				<label>$INFO[MusicPlayer.Album]</label>
				<font>font12</font>
			</control>
			<control type="label"><!-- Player time -->
				<left>238</left>
				<top>660</top>
				<width>761</width>
				<height>25</height>
				<label>$INFO[musicplayer.Time]$INFO[musicplayer.Duration, / ]</label>
				<font>font12</font>
			</control>
			<control type="label"><!-- Playlist -->
				<left>1044</left>
				<top>660</top>
				<width>177</width>
				<height>25</height>
				<align>right</align>
				<label>$INFO[musicplayer.Playlistposition,Track ]$INFO[musicplayer.Playlistlength, / ]</label>
				<font>font12</font>
			</control>
		</control>
	</controls>
</window>