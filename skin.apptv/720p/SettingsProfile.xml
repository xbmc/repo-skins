<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">2</defaultcontrol>
	<menucontrol>9000</menucontrol>
	<onload>ClearProperty(ShowScreenSettings,Home)</onload>
	<onunload>ClearProperty(ShowScreenSettings,Home)</onunload>
	<controls>
		<include>background</include>
		<include>Fake-Overlay</include>
		<control type="label"><!-- Screen heading -->
			<left>946</left>
			<top>50</top>
			<width>309</width>
			<height>37</height>
			<label>$LOCALIZE[31555]</label>
			<font>font20</font>
		</control>
		<control type="list" id="2">
			<left>716</left>
			<top>112</top>
			<width>531</width>
			<height>450</height>
			<onleft condition="Skin.HasSetting(lock-screensettings)">noop</onleft>
			<onleft condition="!Skin.HasSetting(lock-screensettings)">9000</onleft>
			<onright condition="StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])">noop</onright>
			<onright condition="!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])">23</onright>
			<onup>2</onup>
			<ondown>2</ondown>
			<viewtype label="31941">list</viewtype>
			<pagecontrol>23</pagecontrol>
			<itemlayout height="56">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>504</width>
					<height>56</height>
				</control>
				<control type="label">
					<left>21</left>
					<top>0</top>
					<width>504</width>
					<height>56</height>
					<font>font12</font>
					<selectedcolor>listselected-text</selectedcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout height="56">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>504</width>
					<height>56</height>
					<texture border="8">button-default-focus.png</texture>
					<visible>!Control.HasFocus(4)</visible>
				</control>
				<control type="label">
					<left>21</left>
					<top>0</top>
					<width>447</width>
					<height>56</height>
					<font>font12</font>
					<selectedcolor>listselected-text</selectedcolor>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</focusedlayout>
		</control>
		<control type="scrollbar" id="23">
			<left>1244</left>
			<top>112</top>
			<width>18</width>
			<height>450</height>
			<onleft>2</onleft>
			<animation condition="!Control.HasFocus(23) + !Container.Scrolling + !StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31875])" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
			<visible>!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])</visible>
		</control>
		<control type="image">
			<left>198</left>
			<top>112</top>
			<width>320</width>
			<height>320</height>
			<texture fallback="icon-profile.png" diffuse="mask-rect.png">$INFO[Container(2).ListItem.Icon]</texture>
			<aspectratio>keep</aspectratio>
		</control>
		<control type="fadelabel" id="3"><!-- Last loaded profile -->
			<left>10</left>
			<top>450</top>
			<width>696</width>
			<height>40</height>
			<label>$LOCALIZE[13204] $INFO[System.ProfileName]</label>
			<font>font12</font>
			<align>center</align>
		</control>
		<control type="label"><!-- Profile to auto login -->
			<left>10</left>
			<top>500</top>
			<width>696</width>
			<height>40</height>
			<font>font12</font>
			<align>center</align>
			<label>$LOCALIZE[14061]: $INFO[System.ProfileAutoLogin]</label>
			<visible>!System.HasLoginScreen + !IsEmpty(System.ProfileAutoLogin)</visible>
		</control>

		<control type="group">
			<top>720</top>
			<include>screen-settings</include>
			<include>fadebackground</include>
			<control type="image"><!-- Dialog background -->
				<left>440</left>
				<top>232</top>
				<width>396</width>
				<height>168</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="label"><!-- Dialog heading -->
				<left>450</left>
				<top>240</top>
				<width>376</width>
				<height>34</height>
				<font>font12</font>
				<label>$LOCALIZE[31557]</label>
				<align>center</align>
			</control>
			<control type="button"><!-- Touch Close button -->
				<left>814</left>
				<top>222</top>
				<width>32</width>
				<height>32</height>
				<texturefocus>touch-close.png</texturefocus>
				<texturenofocus>touch-close.png</texturenofocus>
				<onclick condition="!StringCompare(Window(Home).Property(ShowScreenSettings),show)">SetProperty(ShowScreenSettings,show,Home)</onclick>
				<onclick condition="StringCompare(Window(Home).Property(ShowScreenSettings),show)">ClearProperty(ShowScreenSettings,Home)</onclick>
				<visible>System.GetBool(input.enablemouse)</visible>
			</control>
			<control type="image">
				<left>450</left>
				<top>274</top>
				<width>376</width>
				<height>4</height>
				<texture>separator.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>450</left>
				<top>285</top>
				<width>376</width>
				<height>150</height>
				<onleft>2</onleft>
				<onright>2</onright>
				<onback>SetFocus(2)</onback>
				<control type="radiobutton" id="4"><!-- Enable login screen -->
					<width>376</width>
					<height>50</height>
					<label>$LOCALIZE[20096]</label>
					<font>font12</font>
					<aligny>top</aligny>
					<textoffsety>8</textoffsety>
					<radioposx>330</radioposx>
				</control>
				<control type="button" id="5"><!-- Choose auto login user -->
					<width>376</width>
					<height>50</height>
					<textoffsety>8</textoffsety>
					<label>$LOCALIZE[14061]</label>
					<label2>$INFO[System.ProfileAutoLogin]</label2>
					<font>font12</font>
					<aligny>top</aligny>
					<enable>!System.HasLoginScreen</enable>
				</control>
			</control>
		</control>

		<include>touch-controls</include>

	</controls>
</window>