<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">450</defaultcontrol>
	<controls>
		<include>background</include>
		<include>fake-overlay</include>

		<control type="grouplist">
			<left>780</left>
			<top>35</top>
			<width>auto</width>
			<height>62</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label"><!-- Favorites heading -->
				<width max="400">auto</width>
				<height>72</height>
				<label>$LOCALIZE[1036]</label>
				<font>font18</font>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
			</control>
			<control type="label"><!-- Number of files -->
				<top>13</top>
				<width max="80">auto</width>
				<height>38</height>
				<label>$INFO[Container(450).NumItems,(,)]</label>
			</control>
		</control>
		<control type="list" id="450">
			<left>708</left>
			<top>112</top>
			<width>504</width>
			<height>555</height>
			<onright condition="StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])">noop</onright>
			<onright condition="!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])">423</onright>
			<onup>450</onup>
			<ondown>450</ondown>
			<pagecontrol>423</pagecontrol>
			<itemlayout height="50">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>504</width>
					<height>50</height>
					<texture border="6">button-default.png</texture>
				</control>
				<control type="label">
					<left>17</left>
					<top>0</top>
					<width>449</width>
					<height>40</height>
					<font>font12</font>
					<selectedcolor>listselected-text</selectedcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout height="50">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>504</width>
					<height>50</height>
					<texture border="6">button-default-focus.png</texture>
				</control>
				<control type="label">
					<left>17</left>
					<top>0</top>
					<width>449</width>
					<height>40</height>
					<font>font12</font>
					<selectedcolor>listselected-text</selectedcolor>
					<label>$INFO[ListItem.Label]</label>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
			</focusedlayout>
		</control>
		<control type="group">
			<control type="image"><!-- List item icon -->
				<left>162</left>
				<top>112</top>
				<width>384</width>
				<height>384</height>
				<texture fallback="icon-fav.png" background="true" diffuse="mask-rect.png">$INFO[ListItem.Icon]</texture>
				<aspectratio scalediffuse="false">keep</aspectratio>
			</control>
		</control>
		<control type="scrollbar" id="423">
			<left>1244</left>
			<top>112</top>
			<width>18</width>
			<height>555</height>
			<onleft>450</onleft>
			<animation condition="!Control.HasFocus(423) + !Container.Scrolling + !StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31875])" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
			<visible>!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])</visible>
		</control>
	</controls>
</window>