<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">3012</defaultcontrol>
	<onload>Dialog.Close(fullscreeninfo,true)</onload>
	<onload>Dialog.Close(videoosd,true)</onload>
	<include>PropertyIncludes</include>
	<controls>
		<control type="progress" id="3014">
			<include>HiddenObject</include>
		</control>
		<control type="group">
			<bottom>0</bottom>
			<height>115</height>
			<!-- Background -->
			<control type="image">
				<width>100%</width>
				<height>115</height>
				<texture colordiffuse="black">views/player/mask_bottom.png</texture>
			</control>
			<!-- Labels -->
			<control type="group">
				<top>20</top>
				<left>20</left>
				<width>75%</width>
				<!-- Time -->
				<control type="label">
					<width>auto</width>
					<height>35</height>
					<aligny>center</aligny>
					<font>med28</font>
					<textcolor>white</textcolor>
					<label>[LIGHT]$LOCALIZE[31012]   [COLOR $VAR[AccentColor]]$VAR[PlayerTimeRemaining][/COLOR][/LIGHT]</label>
				</control>
				<!-- Details -->
				<control type="grouplist">
					<orientation>horizontal</orientation>
					<height>30</height>
					<top>40</top>
					<itemgap>0</itemgap>
					<control type="label">
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<font>reg24</font>
						<textcolor>white</textcolor>
						<label>$INFO[Window.Property(tvshowtitle),, - ]$INFO[Window.Property(season),S,:]$INFO[Window.Property(episode),E, - ]$INFO[Window.Property(title)]   </label>
						<visible>!String.IsEmpty(Window.Property(title))</visible>
					</control>
					<control type="label">
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<font>reg24</font>
						<textcolor>white</textcolor>
						<label>$INFO[Window.Property(year),,   ]</label>
						<visible>!String.IsEmpty(Window.Property(year))</visible>
					</control>
					<control type="label">
						<animation effect="slide" end="-2,1" time="0" condition="true">Conditional</animation>
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<label>î ¸</label>
						<font>Material26</font>
						<textcolor>red</textcolor>
						<visible>!String.IsEmpty(Window.Property(rating))</visible>
					</control>
					<control type="label">
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<label>$INFO[Window.Property(rating),,   ]</label>
						<font>reg24</font>
						<textcolor>white</textcolor>
						<visible>!String.IsEmpty(Window.Property(rating))</visible>
					</control>
				</control>
			</control>
			<!-- Buttons -->
			<control type="grouplist">
				<orientation>horizontal</orientation>
				<height>56</height>
				<top>30</top>
				<right>20</right>
				<width>25%</width>
				<itemgap>5</itemgap>
				<align>right</align>
				<control type="button" id="3012">
					<include>LightGreyButton</include>
					<label>$LOCALIZE[31010]</label>
				</control>
				<control type="button" id="3013">
					<include>LightGreyButton</include>
					<label>$LOCALIZE[15067]</label>
				</control>
			</control>
		</control>
	</controls>
</window>