<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">20</defaultcontrol>
	<include>PropertyIncludes</include>
	<controls>
		<include>Background</include>
		<control type="group">
			<include>Window_OpenClose</include>
			<centertop>50%</centertop>
			<!-- left col -->
			<control type="grouplist">
				<left>135</left>
				<centertop>50%</centertop>
				<width>800</width>
				<height max="940">auto</height>
				<orientation>vertical</orientation>
				<itemgap>20</itemgap>
				<align>center</align>
				<!-- heading -->
				<control type="group">
					<height>50</height>
					<control type="label">
						<width>800</width>
						<height>48</height>
						<font>Reg24</font>
						<aligny>center</aligny>
						<textoffsetx>5</textoffsetx>
						<textcolor>text_headline</textcolor>
						<label>$VAR[PVRChannelMgrHeader]</label>
					</control>
					<include>GreenBar</include>
				</control>
				<!-- list -->
				<control type="group">
					<height>720</height>
					<control type="image">
						<height>720</height>
						<texture colordiffuse="panel_background">common/white.jpg</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="list" id="20">
						<centerleft>50%</centerleft>
						<top>10</top>
						<height>700</height>
						<onup>6666</onup>
						<onleft>900</onleft>
						<onright>100</onright>
						<ondown>300</ondown>
						<pagecontrol>60</pagecontrol>
						<scrolltime>200</scrolltime>
						<itemlayout height="50" width="800">
							<control type="image">
								<height>50</height>
								<width>50</width>
								<left>15</left>
								<bordersize>5</bordersize>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
							<control type="label">
								<right>20</right>
								<left>80</left>
								<height>50</height>
								<aligny>center</aligny>
								<font>Reg24</font>
								<textcolor>panel_textcolor</textcolor>
								<label>$INFO[ListItem.ChannelNumberLabel,,. ]$INFO[ListItem.Label]</label>
							</control>
						</itemlayout>
						<focusedlayout height="50" width="800">
							<control type="image">
								<width>100%</width>
								<height>50</height>
								<texture colordiffuse="panel_focus">common/white.jpg</texture>
								<visible>Control.HasFocus(20)</visible>
							</control>
							<control type="image">
								<height>50</height>
								<width>50</width>
								<left>15</left>
								<bordersize>5</bordersize>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
							<control type="label">
								<right>20</right>
								<left>80</left>
								<height>50</height>
								<aligny>center</aligny>
								<font>Reg24</font>
								<textcolor>panel_textcolor</textcolor>
								<label>$INFO[ListItem.ChannelNumberLabel,,. ]$INFO[ListItem.Label]</label>
								<visible>Control.HasFocus(20)</visible>
							</control>
							<control type="label">
								<right>20</right>
								<left>80</left>
								<height>50</height>
								<aligny>center</aligny>
								<font>Reg24</font>
								<textcolor>blue</textcolor>
								<label>$INFO[ListItem.ChannelNumberLabel,,. ]$INFO[ListItem.Label]</label>
								<visible>!Control.HasFocus(20)</visible>
							</control>
						</focusedlayout>
					</control>
					<control type="scrollbar" id="60">
						<right>0</right>
						<top>0</top>
						<bottom>0</bottom>
						<width>4</width>
						<orientation>vertical</orientation>
						<showonepage>false</showonepage>
						<texturesliderbackground colordiffuse="00ffffff">common/white.jpg</texturesliderbackground>
						<texturesliderbar colordiffuse="scrollbar_slider">common/white.jpg</texturesliderbar>
					</control>
				</control>
				<!-- Button -->
				<control type="grouplist" id="300">
					<height>50</height>
					<width>100%</width>
