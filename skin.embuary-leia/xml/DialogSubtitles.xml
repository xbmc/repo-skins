<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">150</defaultcontrol>
	<include>PropertyIncludes</include>
	<controls>
		<include>Background</include>
		<control type="group">
			<include>Window_OpenClose</include>
			<centertop>50%</centertop>
			<!-- left col -->
			<control type="grouplist">
				<left>135</left>
				<centertop>50%</centertop>
				<width>800</width>
				<height max="940">auto</height>
				<orientation>vertical</orientation>
				<itemgap>20</itemgap>
				<align>center</align>
				<!-- heading -->
				<control type="group">
					<height>50</height>
					<control type="label">
						<width>100%</width>
						<height>48</height>
						<font>Reg24</font>
						<aligny>center</aligny>
						<textoffsetx>5</textoffsetx>
						<textcolor>text_headline</textcolor>
						<label>$LOCALIZE[31149]</label>
					</control>
					<include>GreenBar</include>
				</control>
				<!-- list -->
				<control type="group">
					<height>720</height>
					<control type="image">
						<height>720</height>
						<texture colordiffuse="panel_background">common/white.jpg</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="list" id="150">
						<centerleft>50%</centerleft>
						<top>10</top>
						<height>700</height>
						<onup>noop</onup>
						<onleft>900</onleft>
						<onright>120</onright>
						<ondown>200</ondown>
						<pagecontrol>70</pagecontrol>
						<scrolltime>200</scrolltime>
						<itemlayout height="100" width="800">
							<control type="image">
								<height>100</height>
								<width>100</width>
								<left>5</left>
								<bordersize>5</bordersize>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
							<control type="label">
								<right>20</right>
								<left>110</left>
								<height>100</height>
								<aligny>center</aligny>
								<font>Reg24</font>
								<textcolor>panel_textcolor</textcolor>
								<label>$INFO[ListItem.Label]</label>
							</control>
						</itemlayout>
						<focusedlayout height="100" width="800">
							<control type="image">
								<width>100%</width>
								<height>100</height>
								<texture colordiffuse="panel_focus">common/white.jpg</texture>
								<visible>Control.HasFocus(150)</visible>
							</control>
							<control type="image">
								<height>100</height>
								<width>100</width>
								<left>5</left>
								<bordersize>5</bordersize>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
							<control type="label">
								<right>20</right>
								<left>110</left>
								<height>100</height>
								<aligny>center</aligny>
								<font>Reg24</font>
								<textcolor>panel_textcolor</textcolor>
								<label>$INFO[ListItem.Label]</label>
							</control>
						</focusedlayout>
					</control>
					<control type="scrollbar" id="70">
						<right>0</right>
						<top>0</top>
						<bottom>0</bottom>
						<width>4</width>
						<orientation>vertical</orientation>
						<showonepage>false</showonepage>
						<texturesliderbackground colordiffuse="00ffffff">common/white.jpg</texturesliderbackground>
						<texturesliderbar colordiffuse="scrollbar_slider">common/white.jpg</texturesliderbar>
					</control>
				</control>
				<!-- Button -->
				<control type="grouplist" id="200">
					<bottom>0</bottom>
					<height>100</height>
					<width>100%</width>
					<orientation>horizontal</orientation>
					<itemgap>5</itemgap>
					<align>center</align>
					<onright>120</onright>
					<onleft>900</onleft>
					<control type="button" id="160">
						<include>DarkGreyButton</include>
						<label>$LOCALIZE[24120]</label>
						<onup>SetFocus(150)</onup>
					</control>
					<control type="button" id="21">
						<include>DarkGreyButton</include>
						<label>$LOCALIZE[222]</label>
						<onup>SetFocus(150)</onup>
						<onclick>back</onclick>
					</control>
				</control>
			</control>
			<!-- right col -->
			<control type="grouplist">
				<right>135</right>
				<centertop>50%</centertop>
				<width>800</width>
				<height max="940">auto</height>
				<orientation>vertical</orientation>
				<itemgap>20</itemgap>
				<align>center</align>
				<!-- heading -->
				<control type="group">
					<height>50</height>
					<control type="label" id="140">
						<width>100%</width>
						<height>48</height>
						<font>Reg24</font>
						<aligny>center</aligny>
						<textoffsetx>5</textoffsetx>
						<textcolor>text_headline</textcolor>
					</control>
					<include>GreenBar</include>
				</control>
				<!-- list -->
				<control type="group">
					<height>720</height>
					<control type="image">
						<height>720</height>
						<texture colordiffuse="panel_background">common/white.jpg</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="list" id="120">
						<centerleft>50%</centerleft>
						<top>10</top>
						<height>700</height>
						<onup>noop</onup>
						<onleft>150</onleft>
						<onright>noop</onright>
						<ondown>200</ondown>
						<pagecontrol>60</pagecontrol>
						<scrolltime>200</scrolltime>
						<itemlayout height="50" width="800">
							<control type="label">
								<right>20</right>
								<left>20</left>
								<height>50</height>
								<aligny>center</aligny>
								<font>Reg24</font>
								<textcolor>panel_textcolor</textcolor>
								<label>$VAR[DownloadSubtitlesFlags,, ]$INFO[ListItem.Label]$INFO[ListItem.Label2,[COLOR softgrey] [,][/COLOR]]</label>
							</control>
						</itemlayout>
						<focusedlayout height="50" width="800">
							<control type="image">
								<width>100%</width>
								<height>50</height>
								<texture colordiffuse="panel_focus">common/white.jpg</texture>
								<visible>Control.HasFocus(120)</visible>
							</control>
							<control type="label">
								<right>20</right>
								<left>20</left>
								<height>50</height>
								<aligny>center</aligny>
								<font>Reg24</font>
								<scroll>true</scroll>
								<textcolor>panel_textcolor</textcolor>
								<label>$VAR[DownloadSubtitlesFlags,, ]$INFO[ListItem.Label]$INFO[ListItem.Label2,[COLOR softgrey] [,][/COLOR]]</label>
							</control>
						</focusedlayout>
					</control>
					<control type="scrollbar" id="60">
						<right>0</right>
						<top>0</top>
						<bottom>0</bottom>
						<width>4</width>
						<orientation>vertical</orientation>
						<showonepage>false</showonepage>
						<texturesliderbackground colordiffuse="00ffffff">common/white.jpg</texturesliderbackground>
						<texturesliderbar colordiffuse="scrollbar_slider">common/white.jpg</texturesliderbar>
					</control>
				</control>
				<control type="label" id="130">
					<right>0</right>
					<left>0</left>
					<height>100</height>
					<font>reg22</font>
					<aligny>top</aligny>
					<wrapmultiline>true</wrapmultiline>
					<label>$INFO[Player.Filename,$LOCALIZE[21800]: ,[CR]]$LOCALIZE[31150]</label>
				</control>
				<control type="label">
					<right>0</right>
					<left>0</left>
					<height>100</height>
					<label>$INFO[Player.Filename,$LOCALIZE[21800]: ]</label>
					<visible>!Control.IsVisible(130)</visible>
				</control>
			</control>
		</control>
		<!-- header bar -->
		<include content="HeaderBar">
			<param name="id">150</param>
			<param name="auto_hide">false</param>
		</include>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">150</param>
		</include>
	</controls>
</window>
