<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="List_View_53">
		<param name="id">53</param>
		<param name="mainlabel">$VAR[MainListLabel]</param>
		<param name="sublabel">$VAR[SubListLabel]</param>
		<param name="thumblabel">$VAR[MainListLabel]</param>
		<param name="thumbmainlabel">$VAR[ThumbMainListLabel]</param>
		<param name="thumbsublabel">$VAR[ThumbSubListLabel]</param>
		<param name="rightlabel">$VAR[RightListLabel]</param>
		<param name="rightlabel2">$VAR[RightListLabel2]</param>
		<definition>
			<control type="group">
				<include>Visible_OpenClose</include>
				<visible>Control.IsVisible($PARAM[id])</visible>
				<!-- List -->
				<control id="$PARAM[id]" type="fixedlist">
					<visible>$EXP[ListViewVisible]</visible>
					<animation effect="slide" time="0" end="0,-120" condition="!Container.HasParent + [Integer.IsEqual(Container($PARAM[id]).NumItems,6) | Integer.IsEqual(Container($PARAM[id]).NumItems,5)]">Conditional</animation>
					<animation effect="slide" time="0" end="0,-240" condition="!Container.HasParent + [Integer.IsEqual(Container($PARAM[id]).NumItems,4) | Integer.IsEqual(Container($PARAM[id]).NumItems,3)]">Conditional</animation>
					<animation effect="slide" time="0" end="0,-360" condition="!Container.HasParent + [Integer.IsEqual(Container($PARAM[id]).NumItems,2) | Integer.IsEqual(Container($PARAM[id]).NumItems,1)]">Conditional</animation>
					<animation effect="slide" time="0" end="0,-120" condition="Container.HasParent + [Integer.IsEqual(Container($PARAM[id]).NumItems,5) | Integer.IsEqual(Container($PARAM[id]).NumItems,4)]">Conditional</animation>
					<animation effect="slide" time="0" end="0,-240" condition="Container.HasParent + [Integer.IsEqual(Container($PARAM[id]).NumItems,3) | Integer.IsEqual(Container($PARAM[id]).NumItems,2)]">Conditional</animation>
					<animation effect="slide" time="0" end="0,-360" condition="Container.HasParent + [Integer.IsEqual(Container($PARAM[id]).NumItems,1) | Integer.IsEqual(Container($PARAM[id]).NumItems,0)]">Conditional</animation>
					<left>660</left>
					<height>100%</height>
					<onup>SetFocus(6666)</onup>
					<onright condition="!Control.IsVisible(7000) + Control.IsVisible(17)">SetFocus(17)</onright>
					<onright condition="Control.IsVisible(7000)">SetFocus(7000)</onright>
					<ondown>noop</ondown>
					<onleft condition="Window.IsVisible(MyPlaylist.xml)">100</onleft>
					<onleft condition="!Window.IsVisible(MyPlaylist.xml)">900</onleft>
					<defaultcontrol always="true">0</defaultcontrol>
					<focusposition>4</focusposition>
					<movement>3</movement>
					<orientation>vertical</orientation>
					<viewtype label="535">list</viewtype>
					<pagecontrol>17</pagecontrol>
					<include>ScrollTime</include>
					<preloaditems>4</preloaditems>
					<oninfo condition="String.IsEqual(ListItem.DBType,set) + !String.IsEmpty(Container(2001).ListItem.Label)">RunScript(script.embuary.helper,action=textviewer,header='$ESCINFO[ListItem.Title]',message='$ESCVAR[ListViewPlot]')</oninfo>
					<oninfo condition="String.IsEqual(ListItem.DBType,musicvideo) + !String.IsEmpty(ListItem.Plot)">RunScript(script.embuary.helper,action=textviewer,header='$ESCINFO[ListItem.Title]',message='$ESCVAR[ListViewPlot]')</oninfo>
					<itemlayout height="120" width="1229">
						<control type="group">
							<left>70</left>
							<right>70</right>
							<include content="ListLayout">
								<param name="id">$PARAM[id]</param>
								<param name="mainlabel">$PARAM[mainlabel]</param>
								<param name="sublabel">$PARAM[sublabel]</param>
								<param name="rightlabel">$PARAM[rightlabel]</param>
								<param name="rightlabel2">$PARAM[rightlabel2]</param>
							</include>
						</control>
					</itemlayout>
					<focusedlayout height="120" width="1229">
						<include content="SetPropertyOnFocus">
							<param name="id" value="$PARAM[id]"/>
						</include>
						<control type="group">
							<left>70</left>
							<right>70</right>
							<include content="ListLayout">
								<param name="focused" value="true"/>
								<param name="id">$PARAM[id]</param>
								<param name="mainlabel">$PARAM[mainlabel]</param>
								<param name="sublabel">$PARAM[sublabel]</param>
								<param name="rightlabel">$PARAM[rightlabel]</param>
								<param name="rightlabel2">$PARAM[rightlabel2]</param>
							</include>
						</control>
					</focusedlayout>
				</control>
				<!-- side info panel -->
				<control type="group">
					<left>20</left>
					<width>690</width>
					<control type="group">
						<top>120</top>
						<bottom>120</bottom>
						<centerleft>50%</centerleft>
						<width>590</width>
						<!-- wide thumb -->
						<control type="group">
							<visible>$EXP[ListHasWideThumb] + !$EXP[PVR4to3Thumb] + !$EXP[PVR2to3Thumb]</visible>
							<control type="group">
								<control type="image">
									<top>-2</top>
									<left>-2</left>
									<width>596</width>
									<height>338</height>
									<texture border="20,20,20,20">items/shadow.png</texture>
								</control>
								<control type="group">
									<visible>String.IsEmpty(ListItem.Art(fanart)) + String.IsEmpty(ListItem.Art(tvshow.fanart)) + String.IsEmpty(ListItem.Art(landscape)) + String.IsEmpty(ListItem.Art(tvshow.landscape)) + [String.IsEmpty(ListItem.Icon) | String.StartsWith(ListItem.Icon,Default)]</visible>
									<control type="image">
										<width>590</width>
										<height>332</height>
										<texture colordiffuse="$VAR[ThumbFallbackColor]">common/white.jpg</texture>
										<aspectratio scalediffuse="false">stretch</aspectratio>
									</control>
									<control type="textbox">
										<top>10</top>
										<left>10</left>
										<width>570</width>
										<height>312</height>
										<font>Light24</font>
										<textcolor>white</textcolor>
										<align>center</align>
										<aligny>center</aligny>
										<label>$PARAM[thumblabel]</label>
									</control>
								</control>
								<control type="group">
									<visible>![String.IsEmpty(ListItem.Art(fanart)) + String.IsEmpty(ListItem.Art(tvshow.fanart)) + String.IsEmpty(ListItem.Art(landscape)) + String.IsEmpty(ListItem.Art(tvshow.landscape)) + [String.IsEmpty(ListItem.Icon) | String.StartsWith(ListItem.Icon,Default)]]</visible>
									<control type="image">
										<width>590</width>
										<height>332</height>
										<texture colordiffuse="thumb_background">common/white.jpg</texture>
										<aspectratio scalediffuse="false">stretch</aspectratio>
									</control>
									<control type="image">
										<width>590</width>
										<height>332</height>
										<texture background="true">$VAR[IconLandscape]</texture>
										<aspectratio scalediffuse="false">keep</aspectratio>
									</control>
								</control>
								<control type="group">
									<width>590</width>
									<height>332</height>
									<include>listitem_overlay</include>
								</control>
								<include content="progress">
									<param name="top" value="328"/>
									<param name="width" value="590"/>
								</include>
							</control>
						</control>
						<!-- poster thumb -->
						<control type="group">
							<visible>[$EXP[ListHasPosterThumb] + !$EXP[ListHasWideThumb]] | $EXP[PVR2to3Thumb]</visible>
							<centerleft>50%</centerleft>
							<width>228</width>
							<control type="group">
								<control type="image">
									<top>-2</top>
									<left>-2</left>
									<width>228</width>
									<height>338</height>
									<texture border="20,20,20,20">items/shadow.png</texture>
								</control>
								<control type="image">
									<width>222</width>
									<height>332</height>
									<texture colordiffuse="$VAR[ThumbFallbackColor]">common/white.jpg</texture>
									<aspectratio scalediffuse="false">stretch</aspectratio>
									<visible>String.IsEmpty(ListItem.Icon) | String.StartsWith(ListItem.Icon,Default)</visible>
								</control>
								<control type="image">
									<width>222</width>
									<height>332</height>
									<texture colordiffuse="thumb_background">common/white.jpg</texture>
									<aspectratio scalediffuse="false">stretch</aspectratio>
									<visible>!String.IsEmpty(ListItem.Icon) + !String.StartsWith(ListItem.Icon,Default)</visible>
								</control>
								<control type="textbox">
									<top>10</top>
									<left>10</left>
									<width>202</width>
									<height>312</height>
									<font>Light24</font>
									<textcolor>white</textcolor>
									<align>center</align>
									<aligny>center</aligny>
									<label>$PARAM[thumblabel]</label>
									<visible>String.IsEmpty(ListItem.Icon) | String.StartsWith(ListItem.Icon,Default)</visible>
								</control>
								<control type="image">
									<width>222</width>
									<height>332</height>
									<texture background="true">$VAR[IconPoster]</texture>
									<aspectratio scalediffuse="false">stretch</aspectratio>
									<visible>!$EXP[PVR2to3Thumb] | !String.IsEmpty(ListItem.EpgEventIcon) | $EXP[RecHasThumb]</visible>
								</control>
								<control type="image">
									<width>222</width>
									<height>332</height>
									<texture background="true">$VAR[IconPoster]</texture>
									<aspectratio scalediffuse="false">keep</aspectratio>
									<visible>$EXP[PVR2to3Thumb] + String.IsEmpty(ListItem.EpgEventIcon) + !$EXP[RecHasThumb]</visible>
								</control>
								<control type="group">
									<width>222</width>
									<height>332</height>
									<include>listitem_overlay</include>
								</control>
								<include content="progress">
									<param name="top" value="328"/>
									<param name="width" value="222"/>
								</include>
							</control>
						</control>
						<!-- square thumb -->
						<control type="group">
							<visible>!$EXP[ListHasPosterThumb] + !$EXP[ListHasWideThumb] + !$EXP[PVR4to3Thumb] + !$EXP[PVR2to3Thumb]</visible>
							<centerleft>50%</centerleft>
							<width>332</width>
							<control type="group">
								<control type="image">
									<top>-2</top>
									<left>-2</left>
									<width>338</width>
									<height>338</height>
									<texture border="20,20,20,20">items/shadow.png</texture>
								</control>
								<control type="image">
									<width>332</width>
									<height>332</height>
									<texture colordiffuse="$VAR[ThumbFallbackColor]">common/white.jpg</texture>
									<aspectratio scalediffuse="false">stretch</aspectratio>
									<visible>String.IsEmpty(ListItem.Icon) | String.StartsWith(ListItem.Icon,Default)</visible>
								</control>
								<control type="image">
									<width>332</width>
									<height>332</height>
									<texture colordiffuse="dark_button">common/white.jpg</texture>
									<aspectratio scalediffuse="false">stretch</aspectratio>
									<visible>!String.IsEmpty(ListItem.Icon) + !String.StartsWith(ListItem.Icon,Default)</visible>
								</control>
								<control type="textbox">
									<top>10</top>
									<left>10</left>
									<width>312</width>
									<height>312</height>
									<font>Light24</font>
									<textcolor>white</textcolor>
									<align>center</align>
									<aligny>center</aligny>
									<label>$PARAM[thumblabel]</label>
									<visible>String.IsEmpty(ListItem.Icon) | String.StartsWith(ListItem.Icon,Default)</visible>
								</control>
								<control type="image">
									<width>332</width>
									<height>332</height>
									<texture background="true">$VAR[IconSquare]</texture>
									<aspectratio scalediffuse="false">scale</aspectratio>
								</control>
								<control type="group">
									<width>332</width>
									<height>332</height>
									<include>listitem_overlay</include>
								</control>
								<include content="progress">
									<param name="top" value="328"/>
									<param name="width" value="332"/>
								</include>
							</control>
						</control>
						<!-- 4:3 thumb -->
						<control type="group">
							<visible>$EXP[PVR4to3Thumb]</visible>
							<centerleft>50%</centerleft>
							<width>498</width>
							<control type="group">
								<control type="image">
									<top>-2</top>
									<left>-2</left>
									<width>504</width>
									<height>338</height>
									<texture border="20,20,20,20">items/shadow.png</texture>
								</control>
								<control type="group">
									<visible>String.IsEmpty(ListItem.Art(fanart)) + String.IsEmpty(ListItem.Art(tvshow.fanart)) + String.IsEmpty(ListItem.Art(landscape)) + String.IsEmpty(ListItem.Art(tvshow.landscape)) + [String.IsEmpty(ListItem.Icon) | String.StartsWith(ListItem.Icon,Default)]</visible>
									<control type="image">
										<width>498</width>
										<height>332</height>
										<texture colordiffuse="$VAR[ThumbFallbackColor]">common/white.jpg</texture>
										<aspectratio scalediffuse="false">stretch</aspectratio>
									</control>
									<control type="textbox">
										<top>10</top>
										<left>10</left>
										<width>478</width>
										<height>312</height>
										<font>Light24</font>
										<textcolor>white</textcolor>
										<align>center</align>
										<aligny>center</aligny>
										<label>$PARAM[thumblabel]</label>
									</control>
								</control>
								<control type="group">
									<visible>![String.IsEmpty(ListItem.Art(fanart)) + String.IsEmpty(ListItem.Art(tvshow.fanart)) + String.IsEmpty(ListItem.Art(landscape)) + String.IsEmpty(ListItem.Art(tvshow.landscape)) + [String.IsEmpty(ListItem.Icon) | String.StartsWith(ListItem.Icon,Default)]]</visible>
									<control type="image">
										<width>498</width>
										<height>332</height>
										<texture colordiffuse="thumb_background">common/white.jpg</texture>
										<aspectratio scalediffuse="false">stretch</aspectratio>
									</control>
									<control type="image">
										<width>498</width>
										<height>332</height>
										<texture background="true">$VAR[IconLandscape]</texture>
										<aspectratio scalediffuse="false">keep</aspectratio>
									</control>
								</control>
								<control type="group">
									<width>498</width>
									<height>332</height>
									<include>listitem_overlay</include>
								</control>
								<include content="progress">
									<param name="top" value="328"/>
									<param name="width" value="498"/>
								</include>
							</control>
						</control>
						<!-- desc -->
						<include content="static_labels">
							<param name="top">348</param>
							<param name="width">590</param>
							<param name="mainlabel">$PARAM[thumbmainlabel]</param>
							<param name="sublabel">$PARAM[thumbsublabel]</param>
						</include>
						<!-- Buttons -->
						<control type="grouplist" id="100">
							<visible>Window.IsVisible(MyPlaylist.xml)</visible>
							<top>431</top>
							<height>75</height>
							<orientation>horizontal</orientation>
							<itemgap>5</itemgap>
							<onright>50</onright>
							<onleft>900</onleft>
							<align>center</align>
							<control type="button" id="8">
								<include>LightGreyButton</include>
								<label>$LOCALIZE[15067]</label>
								<onclick>close</onclick>
								<visible>false</visible>
							</control>
							<control type="button" id="101">
								<include>LightGreyButton</include>
								<label>$VAR[PartyModeButton]</label>
								<onclick condition="MusicPartyMode.Enabled">Playercontrol(stop)</onclick>
								<onclick condition="!MusicPartyMode.Enabled">Playercontrol(partymode(music))</onclick>
								<onclick>close</onclick>
								<visible>Window.IsVisible(musicplaylist) + String.IsEqual(ListItemAbsolute(0).DBtype,song)</visible>
							</control>
							<control type="button" id="21">
								<include>LightGreyButton</include>
								<label>$LOCALIZE[190]</label>
								<visible>!MusicPartyMode.Enabled | Window.IsVisible(videoplaylist)</visible>
							</control>
							<control type="button" id="22">
								<include>LightGreyButton</include>
								<label>$LOCALIZE[192]</label>
								<onclick>close</onclick>
								<visible>!MusicPartyMode.Enabled | Window.IsVisible(videoplaylist)</visible>
							</control>
							<control type="button" id="97">
								<include>LightGreyButton</include>
								<width>70</width>
								<height>50</height>
								<font>material24</font>
								<label></label>
								<onclick>RunScript(script.embuary.helper,action=textviewer,header='$ESCVAR[TinyInfoDialogHeadline]',message='$ESCVAR[TinyInfoDialogPlot]')</onclick>
								<visible>!String.IsEmpty(ListItem.Plot) + Window.IsVisible(videoplaylist)</visible>
							</control>
						</control>
						<!-- plot -->
						<control type="textbox">
							<top>510</top>
							<bottom>-5</bottom>
							<align>justify</align>
							<aligny>top</aligny>
							<label>$VAR[ListViewPlot]</label>
							<font>Light24</font>
							<autoscroll>false</autoscroll>
							<visible>Window.IsVisible(MyPlaylist.xml)</visible>
						</control>
						<control type="textbox">
							<top>435</top>
							<bottom>0</bottom>
							<align>justify</align>
							<aligny>top</aligny>
							<label>$VAR[ListViewPlot]</label>
							<font>Light24</font>
							<autoscroll>false</autoscroll>
							<visible>!Window.IsVisible(MyPlaylist.xml)</visible>
						</control>
					</control>
				</control>
			</control>
		</definition>
	</include>
</includes>