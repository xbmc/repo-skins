<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">100</defaultcontrol>
	<include>PropertyIncludes</include>
	<controls>
		<include content="DiffuseMask">
			<param name="color">background_diffuse</param>
		</include>
		<control type="scrollbar" id="3000">
			<include>HiddenObject</include>
		</control>
		<control type="grouplist">
			<include>Dialog_PopupOpenClose</include>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>1860</width>
			<height max="940">auto</height>
			<orientation>vertical</orientation>
			<itemgap>20</itemgap>
			<align>center</align>
			<!-- Thumb image -->
			<control type="grouplist">
				<height>338</height>
				<width>100%</width>
				<orientation>horizontal</orientation>
				<itemgap>5</itemgap>
				<align>center</align>
				<onright>noop</onright>
				<onleft>noop</onleft>
				<control type="group">
					<width>596</width>
					<control type="image">
						<top>-2</top>
						<left>-2</left>
						<width>596</width>
						<height>338</height>
						<texture border="20,20,20,20">items/shadow.png</texture>
					</control>
					<control type="image">
						<width>590</width>
						<height>332</height>
						<texture colordiffuse="$VAR[ThumbFallbackColor]">common/white.jpg</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>String.IsEmpty(ListItem.Icon) | String.StartsWith(ListItem.Icon,Default)</visible>
					</control>
					<control type="image">
						<width>590</width>
						<height>332</height>
						<texture colordiffuse="dark_button">common/white.jpg</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>!String.IsEmpty(ListItem.Icon) + !String.StartsWith(ListItem.Icon,Default)</visible>
					</control>
					<control type="textbox">
						<top>10</top>
						<left>10</left>
						<width>570</width>
						<height>312</height>
						<font>Light24</font>
						<align>center</align>
						<aligny>center</aligny>
						<label>$PARAM[thumblabel]</label>
						<visible>String.IsEmpty(ListItem.Icon) | String.StartsWith(ListItem.Icon,Default)</visible>
					</control>
					<control type="image">
						<width>590</width>
						<height>332</height>
						<texture background="true">$VAR[IconLandscape]</texture>
						<aspectratio scalediffuse="false">keep</aspectratio>
						<visible>!String.StartsWith(ListItem.Icon,Default)</visible>
					</control>
				</control>
			</control>
			<!-- message -->
			<control id="5" type="list">
				<centerleft>50%</centerleft>
				<width>100%</width>
				<height>300</height>
				<autoscroll>false</autoscroll>
				<align>center</align>
				<aligny>top</aligny>
				<pagecontrol>3000</pagecontrol>
				<focusedlayout height="50" width="1860">
					<control type="label">
						<height>50</height>
						<align>center</align>
						<aligny>center</aligny>
						<font>PopUpText</font>
						<label>[COLOR softgrey]$INFO[ListItem.Label]    [/COLOR]$INFO[ListItem.Label2]</label>
					</control>
				</focusedlayout>
				<itemlayout height="50" width="1860">
					<control type="label">
						<height>50</height>
						<align>center</align>
						<aligny>center</aligny>
						<label>[COLOR softgrey]$INFO[ListItem.Label]    [/COLOR]$INFO[ListItem.Label2]</label>
						<font>PopUpText</font>
					</control>
				</itemlayout>
			</control>
			<!-- Button -->
			<control type="grouplist" id="100">
				<height>50</height>
				<width>100%</width>
				<orientation>horizontal</orientation>
				<itemgap>5</itemgap>
				<align>center</align>
				<onright>noop</onright>
				<onleft>noop</onleft>
				<control type="button" id="101">
					<include>DarkGreyButton</include>
					<label>$LOCALIZE[15067]</label>
					<onclick>close</onclick>
					<onup>PageUp(3000)</onup>
					<ondown>PageDown(3000)</ondown>
				</control>
			</control>
		</control>
	</controls>
</window>
