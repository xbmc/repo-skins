<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">100</defaultcontrol>
	<include>PropertyIncludes</include>
	<controls>
		<include content="DiffuseMask">
			<param name="color">background_diffuse</param>
		</include>
		<control type="grouplist">
			<visible>!Window.IsVisible(DialogSettings.xml) + !Window.IsVisible(filebrowser)</visible>
			<include>Visible_PopupOpenClose</include>
			<include>Dialog_PopupOpenClose</include>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>800</width>
			<height max="940">auto</height>
			<orientation>vertical</orientation>
			<itemgap>20</itemgap>
			<align>center</align>
			<!-- edit -->
			<control type="group">
				<height>50</height>
				<control id="12" type="edit">
					<width>100%</width>
					<height>48</height>
					<ondown>10</ondown>
					<font>Reg24</font>
					<textcolor>text_headline</textcolor>
					<focusedcolor>$VAR[AccentColor]</focusedcolor>
					<hinttext>[COLOR text_white]$LOCALIZE[21899][/COLOR]</hinttext>
					<onup>noop</onup>
					<onleft>noop</onleft>
					<onright>noop</onright>
					<ondown>10</ondown>
				</control>
				<include>GreenBar</include>
			</control>
			<!-- list -->
			<control type="group">
				<height>270</height>
				<control type="image">
					<height>270</height>
					<texture colordiffuse="panel_background">common/white.jpg</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="list" id="10">
					<centerleft>50%</centerleft>
					<top>10</top>
					<height>250</height>
					<onup>12</onup>
					<onleft>noop</onleft>
					<onright>noop</onright>
					<ondown>100</ondown>
					<pagecontrol>60</pagecontrol>
					<itemlayout height="50" width="800">
						<control type="label">
							<width>100%</width>
							<heigth>50</heigth>
							<font>Light26</font>
							<autoscroll>false</autoscroll>
							<align>center</align>
							<aligny>center</aligny>
							<textcolor>panel_textcolor</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</itemlayout>
					<focusedlayout height="50" width="800">
						<control type="image">
							<width>100%</width>
							<height>50</height>
							<texture colordiffuse="panel_focus">common/white.jpg</texture>
						</control>
						<control type="label">
							<width>100%</width>
							<heigth>50</heigth>
							<font>Light26</font>
							<autoscroll>false</autoscroll>
							<align>center</align>
							<aligny>center</aligny>
							<textcolor>panel_textcolor</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</focusedlayout>
				</control>
			</control>
			<!-- Button -->
			<control type="grouplist" id="100">
				<height>50</height>
				<width>100%</width>
				<orientation>horizontal</orientation>
				<itemgap>5</itemgap>
				<align>center</align>
				<onright>noop</onright>
				<onleft>noop</onleft>
				<control type="button" id="18">
					<visible>Control.IsEnabled(18)</visible>
					<include>DarkGreyButton</include>
					<label>$LOCALIZE[186]</label>
					<onup>SetFocus(10)</onup>
				</control>
				<control type="button" id="11">
					<include>DarkGreyButton</include>
					<label>$LOCALIZE[1024]</label>
					<onup>SetFocus(10)</onup>
				</control>
				<control type="button" id="13">
					<visible>Control.IsEnabled(13)</visible>
					<include>DarkGreyButton</include>
					<label>$LOCALIZE[15019]</label>
					<onup>SetFocus(10)</onup>
				</control>
				<control type="button" id="14">
					<visible>Control.IsEnabled(14)</visible>
					<include>DarkGreyButton</include>
					<label>$LOCALIZE[1210]</label>
					<onup>SetFocus(10)</onup>
				</control>
				<control type="button" id="19">
					<visible>Control.IsEnabled(19)</visible>
					<include>DarkGreyButton</include>
					<label>$LOCALIZE[222]</label>
					<onup>SetFocus(10)</onup>
				</control>
			</control>
		</control>
	</controls>
</window>
