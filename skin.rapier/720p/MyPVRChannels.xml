<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<menucontrol>850</menucontrol>
	<views>50</views>

	<controls>
		<control type="group">
			<depth>DepthBackground</depth>
			<include>BackgroundDefault</include>
			<include condition="[[!String.IsEmpty(Skin.String(CustomPVRBGPath)) + [Skin.String(CustomPVRBGType,2) | Skin.String(CustomPVRBGType,3)]] | Skin.String(CustomPVRBGType,4)] + Skin.HasSetting(ApplyAllPVRCustomBG) + Window.IsActive(TVChannels)">BackgroundPVR</include>
			<include condition="[[!String.IsEmpty(Skin.String(CustomPVRRadioBGPath)) + [Skin.String(CustomPVRRadioBGType,2) | Skin.String(CustomPVRRadioBGType,3)]] | Skin.String(CustomPVRRadioBGType,4)] + Skin.HasSetting(ApplyAllPVRRadioCustomBG) + Window.IsActive(RadioChannels)">BackgroundPVRRadio</include>
			<include>BackgroundOpenCloseAnim</include>
		</control>
		
		<control type="group">
			<depth>DepthContent</depth>
			<visible>!Window.IsActive(DialogPVRInfo.xml)</visible>
			<include>MediaInfoOpenCloseAnim</include>
			
			<include>LiveTVListInfoArea</include>

			<control type="group" id="500">
				<defaultcontrol always="true">50</defaultcontrol>
				<include>ControlsOpenCloseAnim</include>

				<control type="list" id="50">
					<left>595</left>
					<top>110</top>
					<width>630</width>
					<height>518</height>
					<pagecontrol>906</pagecontrol>
					<preloaditems>2</preloaditems>
					<scrolltime tween="sine" easing="inout">300</scrolltime>
					<onup>50</onup>
					<ondown>50</ondown>
					<onleft>850</onleft>
					<onright>150</onright>
					<itemlayout height="74">
						<include>LiveTVListInfoStyleItemLayout</include>
						<control type="group">
							<description>Progress</description>
							<left>596</left>
							<top>25</top>
							<include>LiveTVProgressImage</include>
						</control>
					</itemlayout>
					<focusedlayout height="74">
						<include>LiveTVListInfoStyleFocusedLayout</include>
						<control type="group">
							<description>Progress</description>
							<left>596</left>
							<top>25</top>
							<include>LiveTVProgressImage</include>
						</control>
					</focusedlayout>
				</control>

				<include>ListInfo2ViewScrollbar</include>
				
				<control type="group">
					<description>Bottom Bar Area</description>
					<top>BottomPaneOffsetY</top>
					<!--<include>InfoPaneImage</include>-->
					<include>InfoPaneMediaDetails</include>
					<include>BottomPaneOpenCloseAnim</include>
				</control>

				<include>ViewsDialogPopUpScreenDim</include>
			</control>
		</control>
		
		<include>PVRMenuBar</include>

		<control type="group">
			<description>Top Bar Area</description>
			<visible>![System.IdleTime(3) + !Control.IsVisible(505) + Skin.HasSetting(HideTopBar) + !Control.HasFocus(555)]</visible>
			<depth>DepthTopBar</depth>
			<include>TopBarImage</include>
			<include>TopBarOpenCloseAnim</include>
			<include>BreadCrumbPVR</include>
			<include>Notifications</include>
			<include>SortLetterNotification</include>
		</control>
	</controls>
</window>