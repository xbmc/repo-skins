<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">850</defaultcontrol>
	<menucontrol>850</menucontrol>
	<onload condition="String.IsEqual(Weather.Plugin,weather.openweathermap.extended) + String.IsEmpty(Skin.String(OpenWeatherMap))">Skin.SetString(OpenWeatherMap,1)</onload>
	
	<controls>
		<control type="group">
			<depth>DepthBackground</depth>
			<include>BackgroundDefault</include>
