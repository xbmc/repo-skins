<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="DialogBtn">
		<width>120</width>
		<textwidth>110</textwidth>
	</include>

	<include name="DialogTitle">
		<left>DialogHeadingOffsetX</left>
		<top>DialogHeadingOffsetY</top>
		<width>590</width>
		<font>DialogTitleFont</font>
		<textcolor>DialogTitleColor</textcolor>
		<shadowcolor>ShadowColor</shadowcolor>
		<align>center</align>
		<scroll>true</scroll>
	</include>

	<include name="DialogHeadLabel">
		<font>DialogHeadFont</font>
		<textcolor>DefaultColor2</textcolor>
		<shadowcolor>ShadowColor</shadowcolor>
		<focusedcolor>ButtonFocusColor</focusedcolor>
		<selectedcolor>SelectedColor2</selectedcolor>
		<disabledcolor>DefaultColor2</disabledcolor>
		<enable>false</enable>
		<align>left</align>
	</include>

	<include name="DialogContentLabel">
		<font>ButtonFont2</font>
		<textcolor>ButtonColor</textcolor>
		<shadowcolor>ShadowColor</shadowcolor>
		<focusedcolor>ButtonFocusColor</focusedcolor>
		<selectedcolor>SelectedColor2</selectedcolor>
		<disabledcolor>DisabledColor</disabledcolor>
		<aligny>center</aligny>
		<align>left</align>
	</include>
	
	<include name="DialogContentLabel2">
		<width>100</width>
		<height>24</height>
		<aligny>top</aligny>
		<font>ButtonFont2</font>
		<textcolor>ButtonColor</textcolor>
		<shadowcolor>ShadowColor</shadowcolor>
		<align>left</align>
	</include>

	<include name="DialogMenuBarBtn">
		<width>170</width>
		<height>44</height>
		<shadowcolor>ShadowColor</shadowcolor>
		<textwidth>160</textwidth>
		<texturefocus border="4">gui/menu-bar-button-focus.png</texturefocus>
		<texturenofocus />
	</include>

	<include name="DialogMenuBarSmallBtn">
		<width>150</width>
		<height>44</height>
		<shadowcolor>ShadowColor</shadowcolor>
		<textwidth>140</textwidth>
		<texturefocus border="4">gui/menu-bar-button-focus.png</texturefocus>
		<texturenofocus />
	</include>

	<include name="DialogMenuBarSmallestBtn">
		<width>120</width>
		<height>44</height>
		<shadowcolor>ShadowColor</shadowcolor>
		<textwidth>110</textwidth>
		<texturefocus border="4">gui/menu-bar-button-focus.png</texturefocus>
		<texturenofocus />
	</include>

	<include name="DialogCloseBtn">
		<top>8</top>
		<width>34</width>
		<height>16</height>
		<texturenofocus>controls/dialog-close-nofocus.png</texturenofocus>
		<texturefocus>controls/dialog-close-focus.png</texturefocus>
		<onclick>PreviousMenu</onclick>
		<visible>!Skin.HasSetting(HideDialogCloseBtns) + System.GetBool(input.enablemouse)</visible>
		<pulseonselect>false</pulseonselect>
		<aspectratio>stretch</aspectratio>
	</include>
	
	<include name="DialogWithCloseBtn">
		<control type="image">
			<width>$PARAM[width]</width>
			<height>$PARAM[height]</height>
			<texture border="50,70,50,75">panels/dialog-background.png</texture>
		</control>

		<control type="button">
			<left>$PARAM[left]</left>
			<include>DialogCloseBtn</include>
		</control>
	</include>
	
	<include name="DialogWithCloseBtnLabel">
		<control type="image">
			<width>$PARAM[width]</width>
			<height>$PARAM[height]</height>
			<texture border="50,70,50,75">panels/dialog-background.png</texture>
		</control>

		<control type="button">
			<left>$PARAM[left]</left>
			<include>DialogCloseBtn</include>
		</control>
		
		<control type="label">
			<width>$PARAM[labelwidth]</width>
			<label>$PARAM[label]</label>
			<include>DialogTitle</include>
		</control>
	</include>
	
	<include name="DialogWithCloseBtnLabelID">
		<control type="image">
			<width>$PARAM[width]</width>
			<height>$PARAM[height]</height>
			<texture border="50,70,50,75">panels/dialog-background.png</texture>
		</control>

		<control type="button">
			<left>$PARAM[left]</left>
			<include>DialogCloseBtn</include>
		</control>
		
		<control type="label" id="$PARAM[id]">
			<width>$PARAM[labelwidth]</width>
			<label>$PARAM[label]</label>
			<include>DialogTitle</include>
		</control>
	</include>
	
	<include name="DialogWithCloseBtn2">
		<control type="image">
