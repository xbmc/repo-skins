<?xml version="1.0" encoding="UTF-8"?>
<window id="2007">
	<defaultcontrol>2</defaultcontrol>
	<depth>DepthOSD-</depth>
	
	<controls>
		<control type="group">		
			<visible>Player.ShowInfo + Player.HasAudio</visible>
			
			<control type="image">
				<left>28</left>
				<top>-10</top>
				<width>1224</width>
				<height>140</height>
				<texture border="8">panels/panel.png</texture>
			</control>
			
			<include>FSTopPanelOpenCloseAnim</include>
			
			<control type="label">
				<description>System Time</description>
				<right>55</right>
				<top>12</top>
				<width>150</width>
				<align>right</align>
				<font>FSInfoTitleFont</font>
				<textcolor>FFFFFFFF</textcolor>
				<shadowcolor>ShadowColor</shadowcolor>
				<info>System.Time</info>
			</control>
			
			<control type="image">
				<description>Cover</description>
				<left>55</left>
				<top>11</top>
				<width>104</width>
				<height>104</height>
				<texture diffuse="covers/player-album-cover-diffuse.png">$INFO[MusicPlayer.Cover]</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			
			<control type="group">			
				<left>179</left>
				
				<control type="grouplist">
					<top>5</top>
					<width>862</width>
					<height>50</height>
					<itemgap>15</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<orientation>horizontal</orientation>
					<control type="label">
						<description>Title</description>
						<width min="50" max="752">auto</width>
						<height>50</height>
						<font>FSInfoTitleFont</font>
						<textcolor>MediaInfoTitleColor</textcolor>
						<label>[UPPERCASE]$VAR[MusicPlayingTitle][/UPPERCASE]</label>
						<scroll>true</scroll>
					</control>
					<control type="image">
						<description>Star Rating</description>
						<top>2</top>
						<width>100</width>
						<height>32</height>		
						<texture>$INFO[Player.StarRating]</texture>
						<aspectratio align="left">keep</aspectratio>
						<include>StarRatingFadeAnim</include>
					</control>
				</control>
				
				<control type="label">
					<description>Genre</description>
					<top>35</top>
					<width>862</width>
					<font>FSInfoFont</font>
					<textcolor>MediaInfoTitleColor2</textcolor>
					<label>[UPPERCASE]$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, - ,]$INFO[MusicPlayer.Year, (,)][/UPPERCASE]</label>
				</control>

				<control type="grouplist">
					<description>Media Flags Area</description>
					<top>75</top>
					<width>862</width>
					<height>35</height>
					<itemgap>5</itemgap>
					<align>left</align>
					<usecontrolcoords>true</usecontrolcoords>
					<orientation>horizontal</orientation>
					<include>MediaFlagFadeAnim</include>
					<include>PlayerAudioMediaFlags</include>
				</control>
			</control>
			
			<control type="label">
				<description>Party Mode</description>
				<left>1225</left>
				<top>67</top>
				<width>350</width>
				<font>FSInfoFont2</font>
				<textcolor>DefaultColor3</textcolor>
				<align>right</align>
				<aligny>center</aligny>
				<label>$LOCALIZE[589]</label>
				<visible>MusicPartyMode.Enabled</visible>
			</control>
				
			<control type="grouplist">
				<description>Next Track</description>
				<left>725</left>
				<top>89</top>
				<width>500</width>
				<align>right</align>
				<orientation>horizontal</orientation>
				<control type="label">
					<width min="10" max="500">auto</width>
					<font>FSInfoFont2</font>
					<textcolor>MediaInfoItemColor</textcolor>
					<label>$LOCALIZE[209]:</label>
				</control>
				<control type="label">
					<width min="10" max="500">auto</width>
					<font>FSInfoFont2</font>
					<textcolor>MediaInfoItemColor2</textcolor>
					<label>$INFO[MusicPlayer.offset(1).Artist] $INFO[MusicPlayer.offset(1).Title,- ]</label>
					<scroll>true</scroll>
				</control>
			</control>
		</control>
		
		<control type="group" id="13">		
			<visible>!Skin.HasSetting(Show_SlideShow_Paused)</visible>
			<control type="image">
				<animation effect="fade" end="60" condition="true">Conditional</animation>
				<left>978</left>
				<top>12</top>
				<width>120</width>
				<height>35</height>
				<texture border="4">black.png</texture>
			</control>
			<control type="label">
				<description>paused label</description>
				<left>988</left>
				<top>12</top>
				<width>100</width>
				<height>35</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>MediaInfoFont</font>
				<textcolor>white</textcolor>
				<label>[UPPERCASE]$LOCALIZE[112][/UPPERCASE]</label>
			</control>
			<control type="label">
				<description>System Time</description>
				<right>55</right>
				<top>12</top>
				<width>150</width>
				<align>right</align>
				<font>FSInfoTitleFont</font>
				<textcolor>FFFFFFFF</textcolor>
				<shadowcolor>ShadowColor</shadowcolor>
				<info>System.Time</info>
				<visible>!Player.ShowInfo + Player.HasAudio</visible>
			</control>
		</control>
	</controls>
</window>