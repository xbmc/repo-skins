			<depth>DepthBackground</depth>
			<include>BackgroundOpenCloseAnim</include>
			<include>FSMediaInfoBackgroundDim2</include>
		</control>
		
		<control type="group">
			<depth>DepthContent</depth>
				
			<control type="image" id="903">
				<left>100</left>
				<top>121</top>
				<width>328</width>
				<height>328</height>
				<texture fallback="DefaultTVShows.png">$INFO[ListItem.Icon]</texture>
				<bordertexture border="4">covers/cover-case2.png</bordertexture>
				<bordersize>4</bordersize>
				<aspectratio align="center" aligny="center">keep</aspectratio>
				<animation effect="fade" end="70" condition="String.IsEqual(Control.GetLabel(903),DefaultTVShows.png) | String.IsEqual(Control.GetLabel(903),DefaultVideo.png)">Conditional</animation>
				<include>FSMediaInfoOpenCloseAnim</include>
			</control>
			
			<control type="group">
				<left>470</left>
				<top>79</top>
				
				<control type="label">
					<description>Title</description>
					<top>32</top>
					<width>710</width>
					<align>center</align>
					<font>FullMediaInfoTitleFont3</font>
					<textcolor>MediaInfoTitleColor</textcolor>
					<shadowcolor>ShadowColor</shadowcolor>
					<label>[UPPERCASE]$INFO[ListItem.Title][/UPPERCASE]</label>
					<scroll>true</scroll>
					<visible>String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.ClearLogo))</visible>
				</control>
				
				<control type="image">
					<top>10</top>
					<width>710</width>
					<height>68</height>
					<align>center</align>
					<texture background="true">$INFO[Window(Home).Property(SkinHelper.ListItem.Art.ClearLogo)]</texture>
					<aspectratio>keep</aspectratio>
					<visible>!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.ClearLogo))</visible>
				</control>
				
				<control type="image">
					<top>80</top>
					<width>710</width>
					<height>2</height>
					<animation effect="fade" end="30" condition="true">Conditional</animation>
					<texture>views/videoinfo-separator.png</texture>
				</control>
				
				<control type="label">
					<description>Genre</description>
					<top>87</top>
					<width>710</width>
					<align>center</align>
					<font>FullMediaInfoTitleFont2</font>
					<textcolor>MediaInfoTitleColor2</textcolor>
					<shadowcolor>ShadowColor</shadowcolor>
					<label fallback="31000">[UPPERCASE]$INFO[ListItem.Genre][/UPPERCASE]</label>
				</control>
				
				<control type="image">
					<top>118</top>
					<width>710</width>
					<height>2</height>
					<animation effect="fade" end="30" condition="true">Conditional</animation>
					<texture>views/videoinfo-separator.png</texture>
				</control>
			</control>

			<control type="list" id="901">
				<left>465</left>
				<top>199</top>
				<width>720</width>
				<height>249</height>
				<onup>987</onup>
				<ondown>61</ondown>
				<onleft>987</onleft>
				<itemlayout width="720" height="31">
					<control type="image">
						<top>29</top>
						<left>5</left>
						<width>710</width>
						<height>2</height>
						<animation effect="fade" end="30" condition="true">Conditional</animation>
						<texture>views/videoinfo-separator.png</texture>
					</control>
					<control type="image">
						<left>170</left>
						<width>1</width>
						<height>34</height>
						<animation effect="fade" end="25" condition="true">Conditional</animation>
						<texture border="1,0,0,10" flipy="true">views/videoinfo-separator.png</texture>
					</control>
					<control type="label">
						<left>5</left>
						<width>165</width>
						<height>31</height>
						<font>FullMediaInfoFont</font>
						<aligny>center</aligny>
						<textcolor>MediaInfoItemColor</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
					</control>
					<control type="label">
						<left>179</left>
						<width>533</width>
						<height>31</height>
						<font>FullMediaInfoFont2</font>
						<aligny>center</aligny>
						<textcolor>MediaInfoItemColor2</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<label fallback="31000">$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>
				<focusedlayout width="720" height="31">
					<control type="image">
						<top>29</top>
						<left>5</left>
						<width>710</width>
						<height>2</height>
						<animation effect="fade" end="30" condition="true">Conditional</animation>
						<texture>views/videoinfo-separator.png</texture>
					</control>
					<control type="image">
						<left>170</left>
						<width>1</width>
						<height>34</height>
						<animation effect="fade" end="25" condition="true">Conditional</animation>
						<texture border="1,0,0,10" flipy="true">views/videoinfo-separator.png</texture>
						<animation effect="fade" start="100" end="0" condition="Control.HasFocus(901)">Conditional</animation>
					</control>
					<control type="image">
						<width>720</width>
						<height>31</height>
						<texture border="4">views/list-focus.png</texture>
						<aspectratio>stretch</aspectratio>
						<visible>Control.HasFocus(901)</visible>
						<include>ListViewSelectFadeAnim</include>
						<include condition="![Skin.String(LowCPUPowerMode,Animations) | Skin.String(LowCPUPowerMode,Full)]">MediaInfoListScrollAnim2</include>
					</control>
					<control type="label">
						<left>5</left>
						<width>165</width>
						<height>31</height>
						<font>FullMediaInfoFont</font>
						<aligny>center</aligny>
						<textcolor>MediaInfoItemColor</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
					</control>
					<control type="label">
						<left>179</left>
						<width>533</width>
						<height>31</height>
						<font>FullMediaInfoFont2</font>
						<aligny>center</aligny>
						<textcolor>MediaInfoItemColor2</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<label fallback="31000">$INFO[ListItem.Label2]</label>
					</control>
				</focusedlayout>
				<content>
					<item id="1">
						<description>Channel Name</description>
						<label>$LOCALIZE[19148]</label>
						<label2>$INFO[ListItem.ChannelName]</label2>
						<onclick>noop</onclick>
						<visible>!String.IsEmpty(ListItem.ChannelName)</visible>
					</item>
					<item id="2">
						<description>Season Number / Episode Number / Episode Name</description>
						<label>$LOCALIZE[369]</label>
						<label2>$VAR[SeasonEpisodesNumberVar,,. ]$INFO[ListItem.EpisodeName]</label2>
						<onclick>noop</onclick>
						<visible>!String.IsEmpty(ListItem.EpisodeName)</visible>
					</item>
					<item id="3">
						<description>Title</description>
						<label>$LOCALIZE[369]</label>
						<label2>$INFO[ListItem.Title]</label2>
						<onclick>noop</onclick>
						<visible>!String.IsEmpty(ListItem.Title) + String.IsEmpty(ListItem.EpisodeName)</visible>
					</item>
					<item id="4">
						<description>Director</description>
						<label>$LOCALIZE[20339]</label>
						<label2>$INFO[ListItem.Director]</label2>
						<onclick>noop</onclick>
						<visible>!String.IsEmpty(ListItem.Director)</visible>
					</item>
					<item id="5">
						<description>Writer</description>
						<label>$LOCALIZE[20417]</label>
						<label2>$INFO[ListItem.Writer]</label2>
						<onclick>noop</onclick>
						<visible>!String.IsEmpty(ListItem.Writer)</visible>
					</item>
					<item id="6">
						<description>Start Date</description>
						<label>$LOCALIZE[552]</label>
						<label2>$INFO[ListItem.StartDate]</label2>
						<onclick>noop</onclick>
						<visible>!String.IsEmpty(ListItem.StartDate)</visible>
					</item>
					<item id="7">
						<description>Time</description>
						<label>$LOCALIZE[555]</label>
						<label2>$INFO[ListItem.StartTime] - $INFO[ListItem.EndTime]</label2>
						<onclick>noop</onclick>
						<visible>!String.IsEmpty(ListItem.StartTime) + !String.IsEmpty(ListItem.EndTime)</visible>
					</item>
					<item id="8">
						<description>Duration</description>
						<label>$LOCALIZE[180]</label>
						<label2>$INFO[ListItem.Duration]</label2>
						<onclick>noop</onclick>
						<visible>!String.IsEmpty(ListItem.Duration)</visible>
					</item>
					<item id="9">
						<description>Rating</description>
						<label>$LOCALIZE[563]</label>
						<label2>$INFO[Window(Home).Property(SkinHelper.ListItem.Rating)]</label2>
						<onclick>noop</onclick>
						<visible>!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Rating)) + [String.IsEmpty(ListItem.Director) | String.IsEmpty(ListItem.Writer) | String.IsEmpty(ListItem.Premiered)]</visible>
					</item>
					<item id="10">
						<description>Premiered</description>
						<label>$LOCALIZE[31936]</label>
						<label2>$INFO[ListItem.Premiered]</label2>
						<onclick>noop</onclick>
						<visible>!String.IsEmpty(ListItem.Premiered)</visible>
					</item>
