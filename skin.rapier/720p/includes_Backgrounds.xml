					<timeperimage>10000</timeperimage>
					<fadetime>BackgroundCrossfadeTime</fadetime>
					<randomize>true</randomize>
					<include condition="Skin.HasSetting(AnimateBackground)">CustomBackgroundAnim</include>
				</control>
			</control>
		</control>
	</include>

