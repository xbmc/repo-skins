<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<control type="group">
			<depth>DepthTopBar</depth>
			<top>StatusBartop</top>
			
			<control type="grouplist">
				<left>1114</left>
				<height>43</height>
				<width>128</width>
				<usecontrolcoords>true</usecontrolcoords>
				<orientation>horizontal</orientation>
				<align>left</align>
				<visible>[Window.IsActive(FullScreenVideo) | Window.IsActive(Visualisation)] + !Player.Muted</visible>
				<include>NotificationsOpenCloseAnim</include>
				<control type="image">
					<description>Volume</description>
					<width>128</width>
					<height>43</height>
					<texture border="8">gui/notification-volume.png</texture>
					<bordersize>1</bordersize>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="progress">
					<description>Volume Progress</description>
					<left>-87</left>
					<top>7</top>
					<width>73</width>
					<height>29</height>
					<info>Player.Volume</info>
					<texturebg border="5">controls/volume-slider-background.png</texturebg>
					<midtexture border="5">controls/volume-slider.png</midtexture>
				</control>
			</control>
			
			<control type="image">
				<description>Volume Mute</description>
				<left>1187</left>
				<width>53</width>
				<height>43</height>
				<texture border="8">gui/notification-volume-mute.png</texture>
				<bordersize>1</bordersize>
				<aspectratio>keep</aspectratio>
				<include>NotificationsOpenCloseAnim</include>
				<visible>[Window.IsActive(FullScreenVideo) | Window.IsActive(Visualisation)] + Player.Muted</visible>
			</control>
		</control>
	</controls>
</window>