					<onclick>Skin.Reset(ShowClearLogoOSD)</onclick>
				</control>
				<control type="radiobutton" id="3030">
					<description>Show Clear Logo On OSD</description>
					<include>SettingsContentRadioBtn</include>
					<label>$LOCALIZE[31435]</label>
