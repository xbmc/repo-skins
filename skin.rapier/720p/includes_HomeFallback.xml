<includes>
	<include name="HomePVRCategoryFallback">
		<item id="50">
			<description>PVR Category</description>
			<label>pvr</label>
			<icon>homecategories/English/pvr-text-nofocus.png</icon>
			<thumb>$INFO[Skin.String(CustomPVRBGPath)]</thumb>
			<onclick>ActivateWindowAndFocus(MyPVR, 850,0, 32,0)</onclick>
		</item>
	</include>
	
	<include name="HomeMenuFallback">
		<control type="wraplist" id="850">
			<description>Home Menu</description>
			<posx>130</posx>
			<posy>28</posy>
			<width>1020</width>
			<height>96</height>
			<focusposition>1</focusposition>
			<scrolltime>250</scrolltime>
			<pagecontrol>-</pagecontrol>
			<orientation>horizontal</orientation>
			<itemgap>0</itemgap>
			<preloaditems>2</preloaditems>
			<onup>110</onup>
			<ondown>-</ondown>
			<include>HomeMenuOpenCloseAnim</include>	
			<include>HomeMenuFocusAnim</include>
			<itemlayout width="340">
				<control type="image">
					<posx>20</posx>
					<posy>0</posy>
					<width>300</width>
					<height>54</height>
					<texture background="true">$INFO[ListItem.ActualIcon]</texture>
					<aspectratio>keep</aspectratio>
					<animation effect="fade" start="100" end="30" time="650" condition="true">Conditional</animation>
					<animation effect="fade" start="100" end="30" time="650" condition="Window.IsActive(3006) | Window.IsActive(3007) | Window.IsActive(3011)
					| Window.IsActive(3012) | Window.IsActive(3013) | Window.IsActive(3014) | Window.IsActive(3015) | Window.IsActive(3016)">Conditional</animation>
				</control>
			</itemlayout>	
			<focusedlayout width="340">
			</focusedlayout>	
			<content>
				<item id="1">
					<description>Music Category</description>
					<label>music</label>
					<icon>homecategories/English/music-text-nofocus.png</icon>
					<include condition="Skin.String(CustomMusicBGType,2) | Skin.String(CustomMusicBGType,3)">HomeMusicCustomBGPath</include>
					<include condition="Skin.String(CustomMusicBGType,4)">HomeMusicFanartBGPath</include>
					<include condition="Skin.HasSetting(RedirectMusicCategoryFiles)">RedirectMusicCategoryFiles</include>
					<include condition="!Skin.HasSetting(RedirectMusicCategoryFiles)">RedirectMusicCategoryLibrary</include>
					<visible>!Skin.HasSetting(HideMusicCategory)</visible>
				</item>

				<include condition="!Skin.HasSetting(HidePVRCategory) + System.GetBool(pvrmanager.enabled) 
				+ [system.hasaddon(pvr.demo)
				| system.hasaddon(pvr.fortherecord.argus)
				| system.hasaddon(pvr.fortherecord.argus-rtsp) 
				| system.hasaddon(pvr.hts) 
				| system.hasaddon(pvr.mythtv) 
				| system.hasaddon(pvr.team-mediaportal.tvserver) 
				| system.hasaddon(pvr.team-mediaportal.tvserver-tsreader) 
				| system.hasaddon(pvr.vdr.vnsi)]">HomePVRCategoryFallback</include>
				
				<item id="2">
					<description>Videos Category</description>
					<label>videos</label>
					<icon>homecategories/English/videos-text-nofocus.png</icon>
					<include condition="Skin.String(CustomVideosBGType,2) | Skin.String(CustomVideosBGType,3)">HomeVideosCustomBGPath</include>
					<include condition="Skin.String(CustomVideosBGType,4)">HomeVideosFanartBGPath</include>
					<include condition="!Skin.HasSetting(RedirectVideosCategoryLibrary)">RedirectVideosCategoryFiles</include>
					<include condition="Skin.HasSetting(RedirectVideosCategoryLibrary)">RedirectVideosCategoryLibrary</include>
					<visible>!Skin.HasSetting(HideVideosCategory)</visible>
				</item>
				<item id="3">
					<description>Movies Category</description>
					<label>movies</label>
					<icon>homecategories/English/movies-text-nofocus.png</icon>
					<include condition="Skin.String(CustomMoviesBGType,2) | Skin.String(CustomMoviesBGType,3)">HomeMoviesCustomBGPath</include>
					<include condition="Skin.String(CustomMoviesBGType,4)">HomeMoviesFanartBGPath</include>
					<onclick>ActivateWindow(Videos,MovieTitles,Return)</onclick>  
					<visible>!Skin.HasSetting(HideMoviesCategory) + Library.HasContent(Movies)</visible>
				</item>
				<item id="4">
					<description>TV Shows Category</description>
					<label>tvshows</label>
					<icon>homecategories/English/tvshows-text-nofocus.png</icon>
					<include condition="Skin.String(CustomTVShowsBGType,2) | Skin.String(CustomTVShowsBGType,3)">HomeTVShowsCustomBGPath</include>
					<include condition="Skin.String(CustomTVShowsBGType,4)">HomeTVShowsFanartBGPath</include>
					<onclick>ActivateWindow(Videos,TVShowTitles,Return)</onclick>
					<visible>!Skin.HasSetting(HideTVShowsCategory) + Library.HasContent(TVShows)</visible>
				</item>
				<item id="5">
					<description>Programs Category</description>
					<label>programs</label>
					<icon>homecategories/English/programs-text-nofocus.png</icon>
					<include condition="Skin.String(CustomProgramsBGType,2) | Skin.String(CustomProgramsBGType,3)">HomeProgramsCustomBGPath</include>
					<onclick>ActivateWindow(Programs)</onclick>	
					<visible>!Skin.HasSetting(HideProgramsCategory)</visible>
				</item>
				<item id="6">
					<description>Pictures Category</description>
					<label>pictures</label>
					<icon>homecategories/English/pictures-text-nofocus.png</icon>
					<include condition="Skin.String(CustomPicturesBGType,2) | Skin.String(CustomPicturesBGType,3)">HomePicturesCustomBGPath</include>
					<onclick>ActivateWindow(Pictures)</onclick>
					<visible>!Skin.HasSetting(HidePicturesCategory)</visible>
				</item>
				<include condition="Skin.HasSetting(EnableCustomCategory1)">HomeCustomCategory1</include>
				<include condition="Skin.HasSetting(EnableCustomCategory2)">HomeCustomCategory2</include>
				<include condition="Skin.HasSetting(EnableCustomCategory3)">HomeCustomCategory3</include>
				<include condition="Skin.HasSetting(EnableCustomCategory4)">HomeCustomCategory4</include>
				<include condition="Skin.HasSetting(EnableCustomCategory5)">HomeCustomCategory5</include>
				<include condition="Skin.HasSetting(EnableCustomCategory6)">HomeCustomCategory6</include>
				<include condition="Skin.HasSetting(EnableCustomCategory7)">HomeCustomCategory7</include>
				<include condition="Skin.HasSetting(EnableCustomCategory8)">HomeCustomCategory8</include>
				<include condition="Skin.HasSetting(EnableCustomCategory9)">HomeCustomCategory9</include>
				<include condition="Skin.HasSetting(EnableCustomCategory10)">HomeCustomCategory10</include>
				<include condition="Skin.HasSetting(EnableCustomCategory11)">HomeCustomCategory11</include>
				<include condition="Skin.HasSetting(EnableCustomCategory12)">HomeCustomCategory12</include>
				<include condition="Skin.HasSetting(EnableCustomCategory13)">HomeCustomCategory13</include>
				<include condition="Skin.HasSetting(EnableCustomCategory14)">HomeCustomCategory14</include>
				<include condition="Skin.HasSetting(EnableCustomCategory15)">HomeCustomCategory15</include>
				<include condition="Skin.HasSetting(EnableCustomCategory16)">HomeCustomCategory16</include>
				<item id="15">
					<description>General Category</description>
					<label>general</label>
					<icon>homecategories/English/general-text-nofocus.png</icon>
					<include condition="Skin.String(CustomGeneralBGType,2) | Skin.String(CustomGeneralBGType,3)">HomeGeneralCustomBGPath</include>
					<onclick>ActivateWindow(Filemanager)</onclick>		
					<visible>!Skin.HasSetting(HideGeneralCategory)</visible>
				</item>	
				<item id="16">
					<description>System Category</description>
					<label>system</label>
					<icon>homecategories/English/system-text-nofocus.png</icon>
					<include condition="Skin.String(CustomSystemBGType,2) | Skin.String(CustomSystemBGType,3)">HomeSystemCustomBGPath</include>
					<onclick>ActivateWindow(AppearanceSettings)</onclick>    
					<visible>!Skin.HasSetting(HideSystemCategory)</visible>
				</item>					
			</content>					
		</control>

		<control type="image">
			<Description>Category Focus Image</Description>
			<include>HomeCategoryFocusImage</include>		
			<texture>homecategories/English/$INFO[Control.GetLabel(850)]-text-focus.png</texture>
		</control>

		<include condition="Skin.HasSetting(EnableCustomCategory1)">HomeCustomCategoryFocus1</include>
		<include condition="Skin.HasSetting(EnableCustomCategory2)">HomeCustomCategoryFocus2</include>
		<include condition="Skin.HasSetting(EnableCustomCategory3)">HomeCustomCategoryFocus3</include>
		<include condition="Skin.HasSetting(EnableCustomCategory4)">HomeCustomCategoryFocus4</include>
		<include condition="Skin.HasSetting(EnableCustomCategory5)">HomeCustomCategoryFocus5</include>
		<include condition="Skin.HasSetting(EnableCustomCategory6)">HomeCustomCategoryFocus6</include>
		<include condition="Skin.HasSetting(EnableCustomCategory7)">HomeCustomCategoryFocus7</include>
		<include condition="Skin.HasSetting(EnableCustomCategory8)">HomeCustomCategoryFocus8</include>
		<include condition="Skin.HasSetting(EnableCustomCategory9)">HomeCustomCategoryFocus9</include>
		<include condition="Skin.HasSetting(EnableCustomCategory10)">HomeCustomCategoryFocus10</include>
		<include condition="Skin.HasSetting(EnableCustomCategory11)">HomeCustomCategoryFocus11</include>
		<include condition="Skin.HasSetting(EnableCustomCategory12)">HomeCustomCategoryFocus12</include>
		<include condition="Skin.HasSetting(EnableCustomCategory13)">HomeCustomCategoryFocus13</include>
		<include condition="Skin.HasSetting(EnableCustomCategory14)">HomeCustomCategoryFocus14</include>
		<include condition="Skin.HasSetting(EnableCustomCategory15)">HomeCustomCategoryFocus15</include>
		<include condition="Skin.HasSetting(EnableCustomCategory16)">HomeCustomCategoryFocus16</include>
	</include>
</includes>	