					<onclick condition="String.IsEqual(ListItem.DBTYPE,album) + Skin.String(DialogVideoInfoButtonMenu,artist)">RunScript(script.libraryeditor,DBID=$INFO[ListItem.DBID]&amp;tag=arr_artist&amp;type=Album)</onclick>
