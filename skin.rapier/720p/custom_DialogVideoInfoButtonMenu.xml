				<control type="button" id="982">
					<description>Show Related Movies and TV Shows</description>
					<label>$LOCALIZE[31301]</label>
					<onclick>Dialog.Close(980)</onclick>
					<onclick>SendClick(2003,13)</onclick>
					<width>300</width>
					<textwidth>290</textwidth>
					<include>ContextMenuBtn</include>
					<visible>Skin.String(DialogVideoInfoButtonMenu,director)</visible>
				</control>
				<control type="button" id="983">
					<description>Edit Database</description>
					<label>$LOCALIZE[21435] $LOCALIZE[15101]</label>
					<onclick>Dialog.Close(980)</onclick>
					<onclick condition="String.IsEqual(ListItem.DBTYPE,movie) + Skin.String(DialogVideoInfoButtonMenu,director)">RunScript(script.libraryeditor,DBID=$INFO[ListItem.DBID]&amp;tag=director&amp;type=Movie)</onclick>
					<onclick condition="String.IsEqual(ListItem.DBTYPE,movie) + Skin.String(DialogVideoInfoButtonMenu,writer)">RunScript(script.libraryeditor,DBID=$INFO[ListItem.DBID]&amp;tag=writer&amp;type=Movie)</onclick>
					<onclick condition="String.IsEqual(ListItem.DBTYPE,episode) + Skin.String(DialogVideoInfoButtonMenu,director)">RunScript(script.libraryeditor,DBID=$INFO[ListItem.DBID]&amp;tag=director&amp;type=Episode)</onclick>
					<onclick condition="String.IsEqual(ListItem.DBTYPE,episode) + Skin.String(DialogVideoInfoButtonMenu,writer)">RunScript(script.libraryeditor,DBID=$INFO[ListItem.DBID]&amp;tag=writer&amp;type=Episode)</onclick>
					<onclick condition="String.IsEqual(ListItem.DBTYPE,musicvideo) + Skin.String(DialogVideoInfoButtonMenu,director)">RunScript(script.libraryeditor,DBID=$INFO[ListItem.DBID]&amp;tag=director&amp;type=MusicVideo)</onclick>
