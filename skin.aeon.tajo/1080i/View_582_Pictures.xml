<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Picture Wall -->
	<include name="PictureFilmstrip">
		<control type="group">
			<visible>Control.IsVisible(582) + !Window.IsActive(addoninformation)</visible>
			<top>-85</top>
			<control type="image">
				<visible>String.IsEmpty(Container(582).ListItem.PicturePath)</visible>
				<top>85</top>
				<fadetime>400</fadetime>
				<width>1920</width>
				<height>1080</height>
				<aspectratio>keep</aspectratio>
				<texture>$INFO[Container(582).ListItem.Icon]</texture>
			</control>
			<control type="group">
				<control type="image">
					<top>85</top>
					<fadetime>200</fadetime>
					<width>1920</width>
					<height>1080</height>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<texture>$INFO[Container(582).ListItem.PicturePath]</texture>
				</control>
			</control>
			<control type="image">
				<animation effect="fade" start="80" end="0" time="800" tween="sine" easing="inout" condition="System.IdleTime(4)">Conditional</animation>
				<animation effect="slide" start="0,0" end="0,-56" time="0" condition="Control.IsVisible(58260)">Conditional</animation>
				<animation effect="fade" end="80" condition="true">Conditional</animation>
				<left>880</left>
				<top>890</top>
				<width>250</width>
				<height>285</height>
				<texture diffuse="tajo/mask_cover3.png">tajo/white.jpg</texture>
				<colordiffuse>Skin.String(flat_back)</colordiffuse>
			</control>
			<control type="image">
				<animation effect="fade" start="100" end="0" time="800" tween="sine" easing="inout" condition="System.IdleTime(4)">Conditional</animation>
				<animation effect="slide" start="0,0" end="0,-56" time="0" condition="Control.IsVisible(58260)">Conditional</animation>
				<left>-50</left>
				<top>890</top>
				<width>2000</width>
				<height>350</height>
				<texture colordiffuse="grey">blackk.jpg</texture>
			</control>
			<control type="image">
				<animation effect="fade" start="100" end="0" time="800" tween="sine" easing="inout" condition="System.IdleTime(4) + !ListItem.IsFolder">Conditional</animation>
				<left>-50</left>
				<top>80</top>
				<width>2000</width>
				<height>60</height>
				<texture colordiffuse="grey">blackk.jpg</texture>
			</control>
			<control type="textbox">
				<animation effect="fade" start="100" end="0" time="800" tween="sine" easing="inout" condition="System.IdleTime(4)">Conditional</animation>
				<visible>!ListItem.IsFolder</visible>
				<top>85</top>
				<left>110</left>
				<align>center</align>
				<aligny>center</aligny>
				<width>1650</width>
				<height>50</height>
				<font>font15t</font>
				<label>$INFO[ListItem.Label,,  •  ]$INFO[ListItem.PictureDatetime,,  •  ]$INFO[ListItem.Label2]</label>
				<textcolor>grey</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="textbox">
				<visible>ListItem.IsFolder</visible>
				<top>85</top>
				<left>110</left>
				<align>center</align>
				<aligny>center</aligny>
				<width>1650</width>
				<height>50</height>
				<font>font15t</font>
				<label>$INFO[ListItem.Label]</label>
				<textcolor>grey</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="fixedlist" id="582">
				<animation effect="fade" start="100" end="0" time="800" tween="sine" easing="inout" condition="System.IdleTime(4)">Conditional</animation>
				<animation effect="slide" start="0,0" end="0,-56" time="0" condition="Control.IsVisible(58260)">Conditional</animation>
				<left>-40</left>
				<top>855</top>
				<width>1960</width>
				<height>330</height>
				<orientation>horizontal</orientation>
				<viewtype label="32046">list</viewtype>
				<onup>SetProperty(MediaMenu,True,home)</onup>
				<onup>SetFocus(9050)</onup>
				<ondown>58260</ondown>
				<onleft>582</onleft>
				<onright>582</onright>
				<pagecontrol>58260</pagecontrol>
				<preloaditems>2</preloaditems>
				<focusposition>4</focusposition>
				<visible>!Container.Content(addons)</visible>
				<visible>Window.IsActive(pictures)</visible>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<itemlayout height="225" width="235">
					<control type="image">
						<top>67</top>
						<width>210</width>
						<height>210</height>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
				</itemlayout>
				<focusedlayout height="225" width="235">
					<control type="image">
						<top>67</top>
						<width>210</width>
						<height>210</height>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="58260">
				<include>ScrollBar_Horizontal</include>
				<left>185</left>
				<top>1113</top>
				<width>1550</width>
				<onup>582</onup>
				<ondown>582</ondown>
				<animation effect="fade" start="0" end="100" time="300" tween="sine" easing="inout">Visible</animation>
				<visible allowhiddenfocus="true">Control.IsVisible(582) + Control.HasFocus(58260)</visible>
			</control>
		</control>
		<control type="grouplist">
			<visible>!Skin.HasSetting(noshow_Time)</visible>
			<visible>!ListItem.IsParentFolder</visible>
			<visible>Control.IsVisible(582)</visible>
			<animation effect="fade" start="100" end="0" time="800" tween="sine" easing="inout" condition="System.IdleTime(4) + !ListItem.IsFolder">Conditional</animation>
			<left>10</left>
			<width>400</width>
			<align>left</align>
			<orientation>horizontal</orientation>
			<itemgap>0</itemgap>
			<control type="label">
				<align>left</align>
				<width min="20" max="200">auto</width>
				<height>40</height>
				<textcolor>grey2</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>fontDiscog</font>
				<label>$INFO[System.Time(hh)]</label>
			</control>
			<control type="label">
				<align>left</align>
				<width min="20" max="200">auto</width>
				<height>34</height>
				<textcolor>grey2</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>Font_bro</font>
				<label>:$INFO[System.Time(mm)]</label>
			</control>
		</control>
		<control type="grouplist">
			<visible>!Skin.HasSetting(noshow_numItems)</visible>
			<visible>Control.IsVisible(582)</visible>
			<visible>!ListItem.IsParentFolder</visible>
			<animation effect="fade" start="100" end="0" time="800" tween="sine" easing="inout" condition="System.IdleTime(4) + !ListItem.IsFolder">Conditional</animation>
			<left>1485</left>
			<width>400</width>
			<align>right</align>
			<orientation>horizontal</orientation>
			<itemgap>0</itemgap>
			<control type="label">
				<align>left</align>
				<width min="20" max="200">auto</width>
				<height>40</height>
				<textcolor>grey2</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>fontDiscog</font>
				<label>$INFO[Container.CurrentItem]</label>
			</control>
			<control type="label">
				<align>left</align>
				<width min="20" max="200">auto</width>
				<height>52</height>
				<textcolor>grey2</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>Font_bro</font>
				<label>/$INFO[Container.NumItems]</label>
			</control>
		</control>
	</include>
</includes>