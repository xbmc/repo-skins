					</control>
					<control type="label">
						<left>175</left>
						<top>56</top>
						<width>950</width>
						<height>52</height>
						<selectedcolor>Skin.String(theme_text)</selectedcolor>
						<label>$INFO[ListItem.Comment,, - ]$INFO[ListItem.Date]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="72">
				<include>ScrollBar_Vertical2</include>
				<left>1180</left>
				<top>145</top>
				<height>765</height>
				<onleft>50</onleft>
				<onright>SetProperty(MediaMenu,True,home)</onright>
				<onright>SetFocus(9050)</onright>
			</control>
			<control type="group">
				<description>Small Media Window</description>
				<left>1210</left>
				<control type="image">
					<left>35</left>
					<top>32</top>
					<width>580</width>
					<height>325</height>
					<texture>search-tv.jpg</texture>
					<visible>String.IsEmpty(ListItem.Date)</visible>
					<visible>!Player.HasVideo</visible>
				</control>
				<control type="image">
					<left>35</left>
					<top>32</top>
					<width>580</width>
					<height>325</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<visible>!String.IsEmpty(ListItem.Date)</visible>
					<fadetime>400</fadetime>
					<visible>!Player.HasVideo</visible>
				</control>
				<control type="videowindow">
					<left>35</left>
					<top>32</top>
					<width>580</width>
					<height>325</height>
					<visible>Player.HasVideo</visible>
				</control>
			</control>
			<control type="group">
				<left>1245</left>
				<top>365</top>
