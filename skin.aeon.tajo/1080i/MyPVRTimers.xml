				<align>left</align>
				<width min="20" max="200">auto</width>
				<height>40</height>
				<textcolor>grey2</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>fontDiscog</font>
				<label>$INFO[Container.CurrentItem]</label>
			</control>
			<control type="label">
				<align>left</align>
				<width min="20" max="200">auto</width>
				<height>52</height>
				<textcolor>grey2</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>Font_bro</font>
				<label>/$INFO[Container.NumItems]</label>
			</control>
		</control>
		<control type="group">
			<description>Timers group</description>
			<visible>Control.IsVisible(50)</visible>
			<top>65</top>
			<control type="list" id="50">
				<left>82</left>
				<top>32</top>
				<width>1100</width>
				<height>842</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>72</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				<viewtype label="535">list</viewtype>
				<pagecontrol>72</pagecontrol>
				<scrolltime tween="quadratic" easing="out">200</scrolltime>
				<itemlayout height="120" width="1100">
					<control type="image">
						<visible>!String.IsEmpty(ListItem.Date)</visible>
						<left>9</left>
						<top>40</top>
						<width>37</width>
						<height>37</height>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<texture>$VAR[ListPVRTimersIconVar]</texture>
					</control>
					<control type="image">
						<visible>!String.IsEmpty(ListItem.Date)</visible>
						<left>58</left>
						<top>8</top>
						<width>105</width>
						<height>105</height>
						<aspectratio>keep</aspectratio>
						<colordiffuse>88FFFFFF</colordiffuse>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<visible>!String.IsEmpty(ListItem.Date)</visible>
						<left>175</left>
						<width>950</width>
						<height>70</height>
						<font>font30</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>Skin.String(theme_text)</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<visible>String.IsEmpty(ListItem.Date)</visible>
						<top>30</top>
						<left>58</left>
						<width>950</width>
						<height>70</height>
						<font>font30</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>Skin.String(theme_text)</selectedcolor>
						<label>[B]$INFO[ListItem.Label][/B]</label>
					</control>
					<control type="label">
						<left>175</left>
						<top>56</top>
						<width>950</width>
						<height>52</height>
						<textcolor>grey2</textcolor>
						<selectedcolor>Skin.String(theme_text)</selectedcolor>
						<label>$INFO[ListItem.Comment,, - ]$INFO[ListItem.Date]</label>
					</control>
				</itemlayout>
				<focusedlayout height="120" width="1100">
					<control type="image">
						<top>-1</top>
						<width>1100</width>
						<height>122</height>
						<texture border="4">listselect_fo.png</texture>
						<colordiffuse>Skin.String(flat_back)</colordiffuse>
						<visible>Control.HasFocus(50)</visible>
						<include>VisibleFadeAnimation</include>
					</control>
					<control type="image">
						<visible>!String.IsEmpty(ListItem.Date)</visible>
						<left>9</left>
						<top>40</top>
						<width>37</width>
						<height>37</height>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<texture>$VAR[ListPVRTimersIconVar]</texture>
					</control>
					<control type="image">
						<visible>!String.IsEmpty(ListItem.Date)</visible>
						<left>58</left>
						<top>8</top>
						<width>105</width>
						<height>105</height>
						<aspectratio>keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<visible>!String.IsEmpty(ListItem.Date)</visible>
						<left>175</left>
						<width>950</width>
						<height>70</height>
						<font>font30</font>
						<selectedcolor>Skin.String(theme_text)</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<visible>String.IsEmpty(ListItem.Date)</visible>
						<top>30</top>
						<left>58</left>
						<width>950</width>
						<height>70</height>
						<font>font30</font>
						<selectedcolor>Skin.String(theme_text)</selectedcolor>
