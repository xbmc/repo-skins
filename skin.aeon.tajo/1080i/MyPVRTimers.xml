			<control type="label">
				<align>left</align>
				<width min="20" max="200">auto</width>
				<height>34</height>
				<textcolor>grey2</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>Font_bro</font>
				<label>:$INFO[System.Time(mm)]</label>
			</control>
		</control>
		<control type="grouplist">
