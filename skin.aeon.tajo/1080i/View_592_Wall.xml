<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Picture Wall -->
	<include name="PictureWall">
		<control type="group">
			<visible>Control.IsVisible(592) + !Window.IsActive(addoninformation)</visible>
			<top>-85</top>
			<control type="group">
				<top>136</top>
				<left>70</left>
				<animation effect="slide" end="0,490" time="300" tween="cubic" easing="inout" condition="Integer.IsGreater(Container(592).Row,0)">Conditional</animation>
				<animation effect="slide" end="560,0" time="300" tween="cubic" easing="inout" condition="Integer.IsGreater(Container(592).Column,1)">Conditional</animation>
				<animation effect="slide" end="560,0" time="300" tween="cubic" easing="inout" condition="Integer.IsGreater(Container(592).Column,0)">Conditional</animation>
				<control type="image">
					<visible>Control.IsVisible(592)</visible>
					<left>80</left>
					<width>490</width>
					<height>490</height>
					<texture diffuse="tajo/mask_cover3.png">tajo/white.jpg</texture>
					<aspectratio align="center">stretch</aspectratio>
					<colordiffuse>Skin.String(flat_back)</colordiffuse>
				</control>
			</control>
			<control type="panel" id="592">
				<viewtype label="Wall">icon</viewtype>
				<left>60</left>
				<top>135</top>
				<width>1710</width>
				<height>980</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>59260</onright>
				<onup>592</onup>
				<ondown>592</ondown>
				<pagecontrol>59260</pagecontrol>
				<preloaditems>2</preloaditems>
				<visible>!Container.Content(addons)</visible>
				<visible>Window.IsActive(pictures)</visible>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<itemlayout height="490" width="560">
					<control type="image">
						<top>20</top>
						<left>110</left>
						<width>450</width>
						<height>450</height>
						<texture background="true">black.png</texture>
					</control>
					<control type="image">
						<left>110</left>
						<top>20</top>
						<width>450</width>
						<height>450</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<left>110</left>
						<top>420</top>
						<width>450</width>
						<height>50</height>
						<texture>black.png</texture>
						<colordiffuse>bbffffff</colordiffuse>
					</control>
					<control type="label">
						<visible>!ListItem.IsParentFolder</visible>
						<left>110</left>
						<top>425</top>
						<width>450</width>
						<height>45</height>
						<font>font13_title_sel</font>
						<textoffsetx>15</textoffsetx>
						<textcolor>white</textcolor>
						<info>ListItem.Label</info>
					</control>
					<control type="label">
						<visible>!ListItem.IsParentFolder</visible>
						<left>110</left>
						<top>425</top>
						<width>450</width>
						<height>45</height>
						<font>font13_title_sel</font>
						<align>right</align>
						<textoffsetx>15</textoffsetx>
						<textcolor>white</textcolor>
						<info>ListItem.Label2</info>
					</control>
					<control type="image">
						<left>109</left>
						<top>19</top>
						<width>452</width>
						<height>452</height>
						<aspectratio>scale</aspectratio>
						<texture colordiffuse="55FFFFFF">black.png</texture>
					</control>
				</itemlayout>
				<focusedlayout height="490" width="560">
					<control type="image">
						<top>20</top>
						<left>110</left>
						<width>450</width>
						<height>450</height>
						<texture background="true">black.png</texture>
					</control>
					<control type="image">
						<top>20</top>
						<left>110</left>
						<width>450</width>
						<height>450</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<left>110</left>
						<top>420</top>
						<width>450</width>
						<height>50</height>
						<texture>black.png</texture>
						<colordiffuse>bbffffff</colordiffuse>
					</control>
					<control type="label">
						<visible>!ListItem.IsParentFolder</visible>
						<top>425</top>
						<left>110</left>
						<width>450</width>
						<height>45</height>
						<textcolor>Skin.String(theme_text)</textcolor>
						<font>font13_title_sel</font>
						<textoffsetx>15</textoffsetx>
						<info>ListItem.Label</info>
						<animation effect="fade" end="100" start="70" time="200" tween="sine" easing="inout">Focus</animation>
						<animation effect="fade" start="100" end="70" time="200" tween="sine" easing="inout">UnFocus</animation>
					</control>
					<control type="label">
						<visible>!ListItem.IsParentFolder</visible>
						<top>425</top>
						<left>110</left>
						<width>450</width>
						<height>45</height>
						<align>right</align>
						<font>font13_title_sel</font>
						<textcolor>Skin.String(theme_text)</textcolor>
						<textoffsetx>15</textoffsetx>
						<info>ListItem.Label2</info>
						<animation effect="fade" end="100" start="70" time="200" tween="sine" easing="inout">Focus</animation>
						<animation effect="fade" start="100" end="70" time="200" tween="sine" easing="inout">UnFocus</animation>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="59260">
				<include>ScrollBar_Vertical</include>
				<left>1797</left>
				<top>150</top>
				<height>950</height>
				<onleft>592</onleft>
				<onright>592</onright>
				<visible allowhiddenfocus="true">Control.IsVisible(592)</visible>
			</control>
		</control>
	</include>
</includes>