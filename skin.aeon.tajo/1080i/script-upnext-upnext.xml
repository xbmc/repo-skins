<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">3012</defaultcontrol>
	<onload>Dialog.Close(fullscreeninfo,true)</onload>
	<onload>Dialog.Close(videoosd,true)</onload>
	<controls>
		<control type="group">
			<animation type="WindowOpen" reversible="false">
				<effect type="fade" start="0" end="100" time="400"/>
				<effect type="slide" start="0,-181" end="0,0" time="400"/>
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="fade" start="100" end="0" time="400"/>
				<effect type="slide" start="0,0" end="0,-181" time="400"/>
			</animation>
			<control type="group">
				<height>181</height>
				<!-- Background -->
				<control type="image">
					<left>-10</left>
					<top>-5</top>
					<width>108%</width>
					<height>188</height>
					<colordiffuse>88ffffff</colordiffuse>
					<texture border="40">dialogs/default/bg.png</texture>
				</control>
				<!-- Thumb -->
				<control type="group">
					<top>20</top>
					<left>20</left>
					<control type="image">
						<top>-2</top>
						<left>-2</left>
						<width>254</width>
						<height>144</height>
						<texture>shadow.png</texture>
					</control>
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture colordiffuse="FF12A0C7">white.jpg</texture>
						<visible>String.IsEmpty(Window.Property(thumb)) + String.IsEmpty(Window.Property(landscape)) + String.IsEmpty(Window.Property(fanart))</visible>
					</control>
					<control type="textbox">
						<top>10</top>
						<left>10</left>
						<width>230</width>
						<height>121</height>
						<font>font12</font>
						<textcolor>ffffffff</textcolor>
						<shadowcolor>00000000</shadowcolor>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[Window.Property(tvshowtitle)]</label>
						<visible>String.IsEmpty(Window.Property(thumb)) + String.IsEmpty(Window.Property(landscape)) + String.IsEmpty(Window.Property(fanart))</visible>
					</control>
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture>$INFO[Window.Property(landscape)]</texture>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture>$INFO[Window.Property(fanart)]</texture>
						<aspectratio>scale</aspectratio>
						<visible>String.IsEmpty(Window.Property(landscape))</visible>
					</control>
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture>$INFO[Window.Property(thumb)]</texture>
						<aspectratio>scale</aspectratio>
						<visible>String.IsEmpty(Window.Property(landscape)) + String.IsEmpty(Window.Property(fanart))</visible>
					</control>
					<control type="progress" id="3014">
						<width>250</width>
						<top>131</top>
						<height>10</height>
						<reveal>true</reveal>
						<righttexture/>
						<overlaytexture/>
						<lefttexture/>
						<texturebg colordiffuse="00ffffff">white.jpg</texturebg>
						<midtexture colordiffuse="$INFO[Skin.String(flat_back)]">white.jpg</midtexture>
					</control>
				</control>
				<!-- Labels -->
				<control type="group">
					<top>50</top>
					<left>740</left>
					<right>20</right>
					<!-- Time -->
					<control type="label">
						<width>auto</width>
						<height>70</height>
						<aligny>center</aligny>
						<font>font15t</font>
						<textcolor>eeffffff</textcolor>
						<shadowcolor>00000000</shadowcolor>
						<label>$ADDON[service.upnext 30008]... $INFO[Window.Property(tvshowtitle),, - ]$INFO[Window.Property(season),S,]$INFO[Window.Property(episode),E, - ]$INFO[Window.Property(title)][CR]$ADDON[service.upnext 30036]</label>
					</control>
					<!-- Buttons -->
					<control type="grouplist">
						<orientation>vertical</orientation>
						<top>-20</top>
						<left>-425</left>
						<height>130</height>
						<bottom>20</bottom>
						<itemgap>10</itemgap>
						<control type="button" id="3012">
							<label>$ADDON[service.upnext 30006]</label>
							<height>56</height>
							<width>380</width>
							<font>Font_plot</font>
							<textoffsetx>55</textoffsetx>
							<textcolor>ddffffff</textcolor>
							<focusedcolor>eeffffff</focusedcolor>
							<selectedcolor>ddffffff</selectedcolor>
							<shadowcolor>22000000</shadowcolor>
							<aligny>center</aligny>
							<align>center</align>
							<texturefocus border="10" colordiffuse="ff0d6767">button.png</texturefocus>
							<texturenofocus border="10" colordiffuse="FF212121">button.png</texturenofocus>
							<pulseonselect>no</pulseonselect>
						</control>
						<control type="button" id="3013">
							<label>$ADDON[service.upnext 30034]</label>
							<height>56</height>
							<width>380</width>
							<font>Font_plot</font>
							<textoffsetx>15</textoffsetx>
							<textcolor>ddffffff</textcolor>
							<focusedcolor>eeffffff</focusedcolor>
							<selectedcolor>ddffffff</selectedcolor>
							<shadowcolor>22000000</shadowcolor>
							<aligny>center</aligny>
							<align>center</align>
							<texturefocus border="10" colordiffuse="ff0d6767">button.png</texturefocus>
							<texturenofocus border="10" colordiffuse="FF212121">button.png</texturenofocus>
							<pulseonselect>no</pulseonselect>
						</control>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>