<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>50</defaultcontrol>
	<onload>ClearProperty(MediaMenu,Home)</onload>
	<menucontrol>9051</menucontrol>
	<views>50</views>
	<controls>
		<include>CommonBackground</include>
		<control type="grouplist">
			<visible>!Skin.HasSetting(noshow_Time)</visible>
			<left>10</left>
			<width>400</width>
			<align>left</align>
			<orientation>horizontal</orientation>
			<itemgap>0</itemgap>
			<control type="label">
				<align>left</align>
				<width min="20" max="200">auto</width>
				<height>40</height>
				<textcolor>grey2</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>fontDiscog</font>
				<label>$INFO[System.Time(hh)]</label>
			</control>
			<control type="label">
				<align>left</align>
				<width min="20" max="200">auto</width>
				<height>34</height>
				<textcolor>grey2</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>Font_bro</font>
				<label>:$INFO[System.Time(mm)]</label>
			</control>
		</control>
		<control type="grouplist">
			<visible>!Skin.HasSetting(noshow_numItems)</visible>
			<visible>!ListItem.IsParentFolder</visible>
			<left>1485</left>
			<top>1030</top>
			<width>400</width>
			<align>right</align>
			<orientation>horizontal</orientation>
			<itemgap>0</itemgap>
			<control type="label">
				<align>left</align>
				<width min="20" max="200">auto</width>
				<height>40</height>
				<textcolor>grey2</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>fontDiscog</font>
				<label>$INFO[Container.CurrentItem]</label>
			</control>
			<control type="label">
				<align>left</align>
				<width min="20" max="200">auto</width>
				<height>52</height>
				<textcolor>grey2</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>Font_bro</font>
				<label>/$INFO[Container.NumItems]</label>
			</control>
		</control>
		<control type="group">
			<description>Recordings group</description>
			<visible>Control.IsVisible(50)</visible>
			<left>60</left>
			<top>-40</top>
			<control type="list" id="50">
				<top>180</top>
				<width>1020</width>
				<height>841</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>72</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				<viewtype label="535">list</viewtype>
				<pagecontrol>72</pagecontrol>
				<scrolltime tween="quadratic">200</scrolltime>
				<itemlayout height="60" width="1140">
					<control type="image">
						<left>-15</left>
						<top>4</top>
						<width>105</width>
						<height>52</height>
						<aspectratio>keep</aspectratio>
						<texture background="true" fallback="views/list/DefaultVideo.png">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>90</left>
						<top>12</top>
						<width>860</width>
						<height>35</height>
						<font>font15</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>Skin.String(theme_text)</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>50</left>
						<width>890</width>
						<height>60</height>
						<font>font14</font>
						<align>right</align>
						<textcolor>grey2</textcolor>
						<selectedcolor>Skin.String(theme_text)</selectedcolor>
						<label>$INFO[ListItem.Date]</label>
					</control>
					<control type="image">
						<left>962</left>
						<width>60</width>
						<height>62</height>
						<aspectratio>keep</aspectratio>
						<visible>String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
						<texture colordiffuse="$INFO[Skin.String(mark_color)]">$VAR[watched_style]</texture>
					</control>
				</itemlayout>
				<focusedlayout height="60" width="1140">
					<control type="image">
						<width>1020</width>
						<height>60</height>
						<texture border="4">listselect_fo.png</texture>
						<colordiffuse>Skin.String(flat_back)</colordiffuse>
						<visible>Control.HasFocus(50)</visible>
						<include>VisibleFadeAnimation</include>
					</control>
					<control type="image">
						<left>-15</left>
						<top>4</top>
						<width>105</width>
						<height>52</height>
						<aspectratio>keep</aspectratio>
						<texture background="true" fallback="views/list/DefaultVideo.png">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>90</left>
						<top>12</top>
						<width>900</width>
						<height>35</height>
						<font>font15</font>
						<textcolor>white</textcolor>
						<selectedcolor>Skin.String(theme_text)</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(50)">Conditional</animation>
					</control>
					<control type="label">
						<left>50</left>
						<width>890</width>
						<height>60</height>
						<font>font14</font>
						<align>right</align>
						<textcolor>white</textcolor>
						<selectedcolor>Skin.String(theme_text)</selectedcolor>
						<label>$INFO[ListItem.Date]</label>
						<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(50)">Conditional</animation>
					</control>
					<control type="image">
						<left>962</left>
						<width>60</width>
						<height>62</height>
						<aspectratio>keep</aspectratio>
						<visible>String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
						<texture colordiffuse="$INFO[Skin.String(mark_color)]">$VAR[watched_style]</texture>
					</control>
				</focusedlayout>
			</control>
			<!-- Single Recordings Group - 2 Boxes -->
			<control type="group">
				<visible>!ListItem.IsFolder</visible>
				<top>450</top>
				<left>1054</left>
				<!-- Recording Thumb and Label Top Bar -->
				<control type="group">
					<top>-302</top>
					<control type="group">
						<top>20</top>
						<left>20</left>
						<width>272</width>
						<height>272</height>
						<control type="image">
							<aspectratio align="left" aligny="center">keep</aspectratio>
							<texture background="true" fallback="DefaultVideo.png">$INFO[Container(50).ListItem.Icon]</texture>
							<fadetime>400</fadetime>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
					</control>
					<!-- TopBar Label -->
					<control type="label">
						<top>30</top>
						<left>320</left>
						<width>415</width>
						<height>62</height>
						<font>font35</font>
						<scroll>true</scroll>
						<label>[COLOR $INFO[Skin.String(theme_text)]][B]$INFO[ListItem.ChannelName][/B][/COLOR]</label>
					</control>
					<control type="label">
						<top>45</top>
						<width>415</width>
						<left>320</left>
						<height>262</height>
						<wrapmultiline>true</wrapmultiline>
						<label>$INFO[ListItem.Date][CR][CR][COLOR $INFO[Skin.String(theme_text)]]$LOCALIZE[180]: [/COLOR]$INFO[ListItem.Duration]</label>
					</control>
				</control>
				<!-- Plot -->
				<control type="group">
					<left>36</left>
					<control type="grouplist">
						<top>40</top>
						<height>430</height>
						<control type="label">
							<width>700</width>
							<height>40</height>
							<font>font35</font>
							<label>[B][COLOR $INFO[Skin.String(theme_text)]]$INFO[Container(50).ListItem.Title][/COLOR][/B]</label>
						</control>
						<control type="label">
							<width>700</width>
							<height>40</height>
							<label>$INFO[Container(50).ListItem.PlotOutline]</label>
							<visible>!String.IsEmpty(Container(50).ListItem.PlotOutline)</visible>
						</control>
						<control type="label">
							<width>700</width>
							<height>40</height>
							<label>[COLOR $INFO[Skin.String(theme_text)]]$LOCALIZE[515]: [/COLOR]$INFO[Container(50).ListItem.Genre]</label>
						</control>
						<control type="label">
							<width>700</width>
							<height>15</height>
							<label/>
							<font>font12</font>
						</control>
						<control type="textbox">
							<width>700</width>
							<height>298</height>
							<label>$INFO[Container(50).ListItem.Plot]</label>
							<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
							<font>font14_textbox2</font>
						</control>
					</control>
				</control>
			</control>
			<!-- RecordingsFolder -->
			<control type="group">
				<visible>ListItem.IsFolder</visible>
				<top>148</top>
				<left>1054</left>
				<control type="group">
					<top>40</top>
					<left>40</left>
					<visible>ListItem.IsFolder</visible>
					<control type="label">
						<width>740</width>
						<height>50</height>
						<label>[COLOR $INFO[Skin.String(theme_text)]]$LOCALIZE[19076] ($INFO[Container(5000).NumItems] $LOCALIZE[31025])[/COLOR]</label>
						<font>font16</font>
					</control>
					<control type="group">
						<left>10</left>
						<top>60</top>
						<control type="panel" id="5000">
							<width>590</width>
							<height>502</height>
							<orientation>vertical</orientation>
							<focusedlayout height="50" width="590">
								<control type="label">
									<visible>!String.IsEmpty(ListItem.Duration)</visible>
									<left>23</left>
									<height>50</height>
									<width>590</width>
									<label>$INFO[ListItem.Duration]  -  $INFO[ListItem.Label]</label>
								</control>
								<control type="label">
									<visible>String.IsEmpty(ListItem.Duration)</visible>
									<height>60</height>
									<width>590</width>
									<label>[B]- $INFO[ListItem.Label][/B]</label>
								</control>
							</focusedlayout>
							<itemlayout height="50" width="590">
								<control type="label">
									<visible>!String.IsEmpty(ListItem.Duration)</visible>
									<left>23</left>
									<height>50</height>
									<width>590</width>
									<label>$INFO[ListItem.Duration]  -  $INFO[ListItem.Label]</label>
								</control>
								<control type="label">
									<visible>String.IsEmpty(ListItem.Duration)</visible>
									<height>60</height>
									<width>590</width>
									<label>[B]- $INFO[ListItem.Label][/B]</label>
								</control>
							</itemlayout>
							<content>$INFO[ListItem.FolderPath]</content>
						</control>
					</control>
				</control>
			</control>
			<control type="scrollbar" id="72">
				<left>1022</left>
				<top>180</top>
				<height>840</height>
				<onleft>50</onleft>
				<onright>SetProperty(MediaMenu,True,home)</onright>
				<onright>SetFocus(9050)</onright>
				<include>ScrollBar_Vertical</include>
			</control>
			<!-- Recording disk space -->
			<control type="group">
				<top>925</top>
				<left>1054</left>
				<control type="group">
					<left>40</left>
					<control type="label">
						<description>Disk usage text</description>
						<top>50</top>
						<width>700</width>
						<height>20</height>
						<label>[COLOR $INFO[Skin.String(theme_text)]]$INFO[PVR.backenddiskspace][/COLOR]</label>
						<align>center</align>
						<font>font13</font>
					</control>
					<control type="progress">
						<description>Disk usage bar</description>
						<top>90</top>
						<left>20</left>
						<width>660</width>
						<height>18</height>>
						<info>PVR.backenddiskspaceprogr</info>
						<midtexture colordiffuse="$INFO[Skin.String(flat_back)]">new_pvr/texturebg_white.png</midtexture>
						<texturebg colordiffuse="$INFO[Skin.String(flat_back)]" border="3,0,3,0">new_pvr/texturebg_border_white.png</texturebg>
						<visible>!IntegerGreaterThan(PVR.backenddiskspaceprogr,100)</visible>
					</control>
				</control>
			</control>
		</control>
		<control type="image">
			<width>100%</width>
			<height>1080</height>
			<texture>black-back.png</texture>
			<animation effect="fade" time="400">Visible</animation>
			<animation effect="fade" time="200">Hidden</animation>
			<visible>Window.IsActive(FileBrowser) | Window.IsActive(PVRGuideInfo) | Window.IsActive(PVRRecordingInfo) | Window.IsActive(PVRTimerSetting) | Window.IsActive(PVRGroupManager) | Window.IsActive(PVRGuideSearch)</visible>
		</control>
		<include>PVRMediaMenu</include>
	</controls>
</window>
