	  </control>
	  
	  <control type="panel" id="52" description="WidgetContent_52">
		<onup>520</onup>
		<include>SquareShortcutsCommons</include>
		<visible>!StringCompare(Container.Viewmode,$LOCALIZE[31015]) + !Control.IsVisible(53)</visible>
		
		<visible>[Container(9000).Position(2) | Container(50).Position(2)] | [[Container(9000).Position(1) | Container(50).Position(1)] + [SubString(Container(9000).ListItem(1).Label,$LOCALIZE[342]) | SubString(Container(50).ListItem(1).Label,$LOCALIZE[342]) | SubString(Container(9000).ListItem(1).Label,$LOCALIZE[20343]) | SubString(Container(50).ListItem(1).Label,$LOCALIZE[20343])]] | [[Container(9000).Position(0) | Container(9000).Position(1) | Container(50).Position(0) | Container(50).Position(1)] + !StringCompare(Container.Viewmode,$LOCALIZE[31015]) + !Control.IsVisible(53)]</visible>
