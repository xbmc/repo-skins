<?xml version="1.0" encoding="utf-8"?>
<window>
    <onload condition="Skin.HasSetting(Use_Artist_Slideshow) + system.hasaddon(script.artistslideshow)">RunScript(script.artistslideshow)</onload>
    <controls>
        <control type="group">
            <include>Fanart_Art</include>
            <include>Player_Show</include>
            <include>OverlayFull</include>
            <control type="progress" id="23">
                <visible>true</visible>
                <posx>-2000</posx>
                <posy>-1500</posy>
                <width>747</width>
                <info>Player.Progress</info>
                <visible>true</visible>
            </control>
            <control type="group">
                <control type="group">
                    <animation effect="slide" start="0,0" end="0,140" time="150" delay="0" tween="cubic" easing="out" condition="!Window.IsActive(DialogSeekbar.xml)">Conditional</animation>
                    <visible>[Player.Paused |Player.ShowInfo | Window.IsActive(MusicOSD)] + ![Window.IsVisible(AddonSettings) | Window.IsVisible(SelectDialog) | Window.IsVisible(VisualisationPresetList) | Window.IsVisible(script-cu-lrclyrics-main.xml)]</visible>
                    <include>OSDOpenClose</include>
                    <include>OSDFade</include>
                    <control type="image">
                        <include>OverlayTransparencyOSD</include>
                        <posx>0</posx>
                        <bottom>85</bottom>
                        <width>1920</width>
                        <height>395</height>
                        <colordiffuse>$VAR[Picked.Theme.Color]</colordiffuse>
                        <texture border="5">common/overlay_dialog_gradient.png</texture>
                    </control>
                    <control type="image">
                        <include>TopBarOSDVisibleFadeEffectOverlay</include>
                        <posx>0</posx>
                        <posy>600</posy>
                        <width>1920</width>
                        <height>2</height>
                        <colordiffuse>$VAR[Picked.HighLight.Color]</colordiffuse>
                        <texture border="2,0,2,0">common/line_gray_horizontal.png</texture>
                    </control>
                    <control type="group">
                        <include>OpenClose</include>
                        <posy>630</posy>
                        <include content="DiscArt">
                            <param name="visible" value="!String.IsEmpty(Player.Art(thumb))"/>
                            <param name="x" value="20"/>
                            <param name="y" value="20"/>
                            <param name="width" value="300"/>
                            <param name="height" value="300"/>
                            <param name="texture" value="$VAR[MusicPlayerCdArt]"/>
                        </include>
                        <control type="image">
                            <animation effect="slide" time="0" start="0,0" end="95,0" condition="!Skin.HasSetting(plexbmc)+Skin.HasSetting(EnableCdArt)">Conditional</animation>
                            <visible>String.IsEmpty(Player.Art(thumb))</visible>
                            <posx>70</posx>
                            <posy>10</posy>
                            <width>321</width>
                            <height>321</height>
                            <aspectratio aligny="top">keep</aspectratio>
                            <colordiffuse>$VAR[Picked.HighLight.Color]</colordiffuse>
                            <texture>defaultAudioBig.png</texture>
                            <bordertexture border="2" colordiffuse="$VAR[Picked.HighLight.Color]">common/frame_focus.png</bordertexture>
                            <bordersize>2</bordersize>
                        </control>
                        <control type="image">
                            <animation effect="slide" time="0" start="0,0" end="95,0" condition="!Skin.HasSetting(plexbmc)+Skin.HasSetting(EnableCdArt)">Conditional</animation>
                            <posx>70</posx>
                            <posy>10</posy>
                            <width>321</width>
                            <height>321</height>
                            <aspectratio aligny="top">scale</aspectratio>
                            <texture background="true">$INFO[Player.Art(thumb)]</texture>
                            <bordertexture border="2" colordiffuse="$VAR[Picked.HighLight.Color]">common/frame_focus.png</bordertexture>
                            <bordersize>2</bordersize>
                        </control>
                        <control type="group">
                            <visible>!Skin.HasSetting(EnableCdArt)</visible>
                            <control type="label">
                                <posx>460</posx>
                                <posy>10</posy>
                                <height>50</height>
                                <width>1390</width>
                                <font>FacadeListTitleFont</font>
                                <include>TextColor_MainColor</include>
                                <scroll>true</scroll>
                                <label>$INFO[MusicPlayer.Title]</label>
                            </control>
                            <control type="label">
                                <posx>460</posx>
                                <posy>60</posy>
                                <height>50</height>
                                <width>1390</width>
                                <font>FacadeListSubTitleFont</font>
                                <include>TextColor_MainColor</include>
                                <scroll>true</scroll>
                                <label>$VAR[DetailsRow3]</label>
                            </control>
                            <control type="label">
                                <posx>460</posx>
                                <posy>115</posy>
                                <height>50</height>
                                <width>1010</width>
                                <font>FacadeListSubTitleFont</font>
                                <include>TextColor_MainColor</include>
                                <scroll>true</scroll>
                                <label>$INFO[MusicPlayer.Artist]</label>
                            </control>
                            <control type="label">
                                <posx>460</posx>
                                <posy>165</posy>
                                <height>50</height>
                                <width>1010</width>
                                <font>FacadeListSubTitleFont</font>
                                <include>TextColor_MainColor</include>
                                <scroll>true</scroll>
                                <label>$INFO[MusicPlayer.Album]$INFO[MusicPlayer.Year,[COLOR=SeparatorColor] › [/COLOR]]</label>
                            </control>
                            <control type="label">
                                <posx>460</posx>
                                <posy>215</posy>
                                <height>50</height>
                                <width>1010</width>
                                <font>FacadeListSubTitleFont</font>
                                <include>TextColor_MainColor</include>
                                <scroll>true</scroll>
                                <label>$INFO[MusicPlayer.Genre]</label>
                            </control>
                        </control>
                        <control type="group">
                            <visible>!Skin.HasSetting(plexbmc)+Skin.HasSetting(EnableCdArt)</visible>
                            <control type="label">
                                <posx>555</posx>
                                <posy>10</posy>
                                <height>50</height>
                                <width>1295</width>
                                <font>FacadeListTitleFont</font>
                                <include>TextColor_MainColor</include>
                                <scroll>true</scroll>
                                <label>$INFO[MusicPlayer.Title]</label>
                            </control>
                            <control type="label">
                                <posx>555</posx>
                                <posy>60</posy>
                                <height>50</height>
                                <width>1295</width>
                                <font>FacadeListSubTitleFont</font>
                                <include>TextColor_MainColor</include>
                                <scroll>true</scroll>
                                <label>$VAR[DetailsRow3]</label>
                            </control>
                            <control type="label">
                                <posx>555</posx>
                                <posy>115</posy>
                                <height>50</height>
                                <width>915</width>
                                <font>FacadeListSubTitleFont</font>
                                <include>TextColor_MainColor</include>
                                <scroll>true</scroll>
                                <label>$INFO[MusicPlayer.Artist]</label>
                            </control>
                            <control type="label">
                                <posx>555</posx>
                                <posy>165</posy>
                                <height>50</height>
                                <width>915</width>
                                <font>FacadeListSubTitleFont</font>
                                <include>TextColor_MainColor</include>
                                <scroll>true</scroll>
                                <label>$INFO[MusicPlayer.Album]$INFO[MusicPlayer.Year,[COLOR=SeparatorColor] › [/COLOR]]</label>
                            </control>
                            <control type="label">
                                <posx>555</posx>
                                <posy>215</posy>
                                <height>50</height>
                                <width>915</width>
                                <font>FacadeListSubTitleFont</font>
                                <include>TextColor_MainColor</include>
                                <scroll>true</scroll>
                                <label>$INFO[MusicPlayer.Genre]</label>
                            </control>
                        </control>
                        <include content="CodecsMusicOSD">
                            <param name="x" value="1550"/>
                            <param name="y" value="115"/>
                            <param name="width" value="240"/>
                        </include>
                    </control>
                    <control type="image">
                        <animation effect="slide" time="0" start="0,0" end="95,0" condition="!Skin.HasSetting(plexbmc)+Skin.HasSetting(EnableCdArt)">Conditional</animation>
                        <visible>Skin.HasSetting(EnableClearArt) | Skin.HasSetting(EnableClearLogo)</visible>
                        <posx>70</posx>
                        <posy>450</posy>
                        <width>321</width>
                        <height>150</height>
                        <aspectratio aligny="bottom" align="left">keep</aspectratio>
                        <texture background="true">$INFO[Window(Home).Property(SkinHelper.Player.Art.ClearLogo)]</texture>
                    </control>
                    <include content="StudioArt">
                        <param name="x" value="1470"/>
                        <param name="y" value="450"/>
                        <param name="width" value="321"/>
                        <param name="height" value="150"/>
                        <param name="visible" value="true"/>
                        <param name="align" value="right"/>
                        <param name="aligny" value="bottom"/>
                    </include>
                </control>
            </control>
        </control>
    </controls>
</window>
