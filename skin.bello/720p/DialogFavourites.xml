<window type="dialog" id="134">
	<defaultcontrol always="true">450</defaultcontrol>
	<onload condition="!IntegerGreaterThan(Container(450).NumItems,0)">ActivateWindow(1110)</onload>
	<controls>

		<control type="group">
	    <include>GlobalSearchSlideAnimations</include>
      <animation type="Conditional" reversible="true" condition="Window.IsActive(ShutdownMenu) | Window.IsActive(virtualkeyboard) | Window.IsActive(filebrowser) | Window.IsActive(playercontrols)">
        <effect type="fade" start="100" end="0" time="250" tween="sine" easing="inout" />
        <effect type="slide" start="0,0" end="0,35" time="300" tween="sine" easing="inout" />
      </animation>
      <animation type="Conditional" reversible="true" condition="Window.IsActive(ContextMenu)">
        <effect type="slide" start="0,0" end="0,75" time="280" tween="sine" easing="inout" />
      </animation>
			<control type="panel" id="450">
				<posx>25</posx>
				<posy>200</posy>
				<width>1230</width>
				<height>360</height>
				<onleft>450</onleft>
				<onright>450</onright>
				<onup>close</onup>
				<ondown>close</ondown>
	      <orientation>horizontal</orientation>
				<viewtype label="31085">list</viewtype>
	      <scrolltime tween="Cubic" easing="out">500</scrolltime>
				<itemlayout height="265" width="244">
					<control type="image">
						<width>260</width>
						<height>280</height>
						<aspectratio align="center" aligny="center">stretch</aspectratio>
						<texture border="25">views/thumbnails/thumb_panel.png</texture>
					</control>
					<control type="image">
						<posx>25</posx>
						<posy>24</posy>
						<width>206</width>
						<height>200</height>
						<aspectratio align="center" aligny="center">stretch</aspectratio>
					  <texture background="true">empty_icon.png</texture>
						<bordertexture border="15">dialogs/other/iconborder_black.png</bordertexture>
					</control>
					<control type="image">
						<posx>25</posx>
						<posy>24</posy>
						<width>206</width>
						<height>200</height>
						<aspectratio align="center" aligny="center">keep</aspectratio>
					  <texture background="true" fallback="thumbs/fallback_square_tp.png">$INFO[ListItem.Thumb]</texture>
					  <bordersize>6</bordersize>
					</control>
					<control type="label">
						<posx>128</posx>
						<posy>220</posy>
						<width>210</width>
						<height>35</height>
						<textcolor>99white</textcolor>
						<shadowcolor>99000000</shadowcolor>
						<font>FontSize_20</font>
						<scroll>false</scroll>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="265" width="244">
					<control type="image">
						<width>260</width>
						<height>280</height>
						<aspectratio align="center" aligny="center">stretch</aspectratio>
						<texture border="25">views/thumbnails/thumb_panel.png</texture>
					</control>
					<control type="image">
						<posx>25</posx>
						<posy>24</posy>
						<width>206</width>
						<height>200</height>
						<aspectratio align="center" aligny="center">stretch</aspectratio>
					  <texture background="true">empty_icon.png</texture>
						<bordertexture border="15">dialogs/other/iconborder_black.png</bordertexture>
					</control>
					<control type="image">
						<posx>25</posx>
						<posy>24</posy>
						<width>206</width>
						<height>200</height>
						<aspectratio align="center" aligny="center">keep</aspectratio>
					  <texture background="true" fallback="thumbs/fallback_square_tp.png">$INFO[ListItem.Thumb]</texture>
					  <bordersize>6</bordersize>
					</control>
					<control type="label">
						<posx>128</posx>
						<posy>220</posy>
						<width>210</width>
						<height>35</height>
						<textcolor>blue</textcolor>
						<shadowcolor>99000000</shadowcolor>
						<font>FontSize_20</font>
						<scrollspeed>35</scrollspeed>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="image">
						<width>260</width>
						<height>280</height>
						<aspectratio align="center" aligny="center">stretch</aspectratio>
						<texture border="25">views/thumbnails/focus.png</texture>
            <animation type="Focus">
              <effect type="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" />
              <effect type="fade" start="0" end="100" time="200" tween="sine" easing="in" />
            </animation>
            <animation type="Unfocus">
              <effect type="zoom" start="100" end="95" time="200" tween="sine" easing="inout" center="auto" />
              <effect type="fade" start="100" end="0" time="200" tween="sine" easing="out" />
            </animation>
					</control>
				</focusedlayout>
			</control>
		</control>

	 <control type="group">
		  <posx>45</posx>
		  <posy>25</posy>
	    <include>TopOptionsSlideAnimations</include>
      <animation type="Conditional" reversible="true" condition="Window.IsActive(ShutdownMenu) | Window.IsActive(ContextMenu)">
        <effect type="fade" start="100" end="0" time="300" tween="sine" easing="inout" />
        <effect type="slide" start="0,0" end="0,35" time="350" tween="sine" easing="inout" />
      </animation>
		  <!--  Content Info  -->
			<control type="grouplist">
				<posx>0</posx>
				<posy>0</posy>
				<height>70</height>
				<width>1000</width>
				<align>left</align>
				<itemgap>20</itemgap>
				<orientation>horizontal</orientation>
		    <control type="label">
				  <include>TopBigLabel</include>
					<label>1036</label>
				</control>
			</control>
			<control type="label">
				<description>Page Count Label</description>
				<posx>0</posx>
				<posy>48</posy>
				<width>300</width>
				<height>20</height>
				<font>FontSize_18</font>
				<textcolor>blue</textcolor>
				<scroll>false</scroll>
				<align>left</align>
				<aligny>center</aligny>
				<label>$INFO[Container(450).NumItems,, $LOCALIZE[31025]]</label>
			  <visible>IntegerGreaterThan(Container(450).NumItems,0)</visible>
			</control>
	 </control>
	</controls>
</window>