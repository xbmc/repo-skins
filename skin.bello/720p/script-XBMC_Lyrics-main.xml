<window>
	<allowoverlay>no</allowoverlay>
	<controls>
		<control type="group">
			  <visible>!Window.IsActive(ShutdownMenu)</visible>
				<posx>42r</posx>
				<posy>170</posy>
				<visible>Control.IsVisible(110)</visible>
				<animation effect="fade" start="0" end="100" delay="300" time="200">WindowOpen</animation>
				<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
				<animation effect="fade" start="0" end="100" delay="300" time="200">Visible</animation>
				<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
			<control type="label">
			  <description>header label</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>300</width>
				<label>$INFO[Control.GetLabel(200)]</label>
				<font>FontSize_36</font>
				<textcolor>white</textcolor>
				<align>right</align>
				<scroll>true</scroll>
				<scrollspeed>20</scrollspeed>
				<visible>!IsEmpty(Control.GetLabel(200))</visible>
			</control>
			<control type="label">
			  <description>header label</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>300</width>
				<label>$LOCALIZE[SCRIPT0]</label>
				<font>FontSize_36</font>
				<textcolor>white</textcolor>
				<align>right</align>
				<scroll>true</scroll>
				<scrollspeed>20</scrollspeed>
				<visible>IsEmpty(Control.GetLabel(200))</visible>
			</control>
		</control>

			<!-- ** Required ** Do not change <id> or <type> (Text box for lyrics) -->
			<control type="textbox" id="100">
				<description>textarea</description>
			  <visible>!Window.IsActive(ShutdownMenu)</visible>
				<posx>0</posx>
				<posy>230</posy>
				<width>1280</width>
				<height>490</height>
				<align>center</align>
				<font>FontSize_46</font>
				<textcolor>white</textcolor>
				<shadowcolor>99000000</shadowcolor>
        <onleft>101</onleft>
        <onright>101</onright>
        <pagecontrol>101</pagecontrol>
				<autoscroll time="3500" delay="10000" repeat="10000">true</autoscroll>
				<animation effect="fade" start="0" end="100" delay="300" time="300">WindowOpen</animation>
				<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
				<animation effect="fade" start="0" end="100" delay="300" time="300">Visible</animation>
				<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
			</control>
			<control type="spincontrol" id="101">
				<visible>false</visible>
			</control>


			<!-- ** Required ** Do not change <id> or <type> -->
      <control type="list" id="110">
				<posx>0</posx>
				<posy>230</posy>
				<width>1280</width>
				<height>490</height>
				<onleft>111</onleft>
				<onright>111</onright>
				<onup>110</onup>
				<ondown>110</ondown>
				<pagecontrol>111</pagecontrol>
			  <scrolltime tween="cubic" easing="out">500</scrolltime>
			  <visible>!Window.IsActive(ShutdownMenu)</visible>
				<itemlayout height="54">
					<control type="label">
						<posx>640</posx>
						<posy>0</posy>
						<width>1280</width>
						<height>42</height>
				    <font>FontSize_44</font>
						<aligny>center</aligny>
						<align>center</align>
				    <textcolor>77white</textcolor>
				    <shadowcolor>77000000</shadowcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="54">
					<control type="label">
						<posx>640</posx>
						<posy>0</posy>
						<width>1280</width>
						<height>42</height>
				    <font>FontSize_44</font>
						<aligny>center</aligny>
						<align>center</align>
				    <textcolor>77white</textcolor>
				    <shadowcolor>77000000</shadowcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>!Control.HasFocus(110)</visible>
					</control>
					<control type="label">
						<posx>640</posx>
						<posy>0</posy>
						<width>1280</width>
						<height>42</height>
				    <font>FontSize_44</font>
						<aligny>center</aligny>
						<align>center</align>
				    <textcolor>white</textcolor>
				    <shadowcolor>99000000</shadowcolor>
						<label fallback="--">$INFO[ListItem.Label]</label>
						<visible>Control.HasFocus(110)</visible>
					</control>
				</focusedlayout>
      </control>
			<control type="spincontrol" id="111">
				<visible>false</visible>
			</control>
			
			
			<!-- ** Required ** Do not change <id> or <type> -->
			<control type="list" id="120">
				<visible>false</visible>
			</control>
			<control type="spincontrol" id="121">
				<visible>false</visible>
			</control>


			<!-- ** Required ** Do not change <id> or <type> -->
			<control type="label" id="200">
				<description>Scraper label</description>
				<visible>false</visible>
			</control>

	</controls>
</window>