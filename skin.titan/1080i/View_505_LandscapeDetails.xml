<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <include name="View_505_LandscapeDetails">
         <control type="group">
		<include>animation_view_change</include>
		<visible>Control.IsVisible(505)</visible>
		
        <include>MovieDetailsLeft</include>

		<control type="panel" id="505">
            <animation effect="slide" end="-625" time="250" condition="Skin.HasSetting(View505_ShowInfoRight)">Conditional</animation>
			<right>40</right>
            <bottom>8%</bottom>
            <height>790</height>
            <width>1190</width>
			<orientation>vertical</orientation>
			<onleft>9000</onleft>
			<onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
        <onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
			<onup>505</onup>
			<ondown>505</ondown>
			<preloaditems>4</preloaditems>
			<pagecontrol>60</pagecontrol>
			<viewtype label="31432">mediainfo</viewtype>
			<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),505) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
            <visible>!Container.Content(files)</visible>
			<scrolltime tween="cubic" easing="inout">500</scrolltime>
			<itemlayout width="595" height="395" condition="![Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
				<control type="group">
                    <width>575</width>
                    <height>330</height>
                    <include>LandscapeLayout</include>
                </control>
			</itemlayout>
			<focusedlayout width="595" height="395" condition="![Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
				<control type="group">
                    <width>575</width>
                    <height>330</height>
                    <include>LandscapeLayoutFocus</include>
                    <include>AutoTrailerButton</include>
                </control>
			</focusedlayout>
            <itemlayout width="595" height="395" condition="[Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
                <control type="group">
                    <width>493</width>
                    <height>340</height>
                    <left>60</left>
                    <include>LandscapeLayout</include>
                </control>
            </itemlayout>
            <focusedlayout width="595" height="395" condition="[Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
                <control type="group">
                    <width>493</width>
                    <height>340</height>
                    <left>60</left>
                    <include>LandscapeLayoutFocus</include>
                </control>
            </focusedlayout>
		</control>
		  
		  
		  
		  <!--vertical Scollbar-->
			<control type="scrollbar" id="60">
				<visible>Control.IsVisible(505) + IntegerGreaterThan(Container.Numitems,0)</visible>
				<right>15</right>
				<bottom>13%</bottom>
                <height>736</height>
				<onup>60</onup>
				<ondown>6000</ondown>
				<onleft>505</onleft>
				<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
			</control>
			
	  
    </control>

  </include>
</includes>
