<?xml version="1.0" encoding="UTF-8"?>
<includes>
  
  <include name="View_510_PanelSquareDetails">
	
    <control type="group">
      <visible>Control.IsVisible(510)</visible>
      <include>animation_view_change</include>
	  
    <include>MovieDetailsLeft</include>
	  
	  
      <control type="panel" id="510">
        <animation effect="slide" end="-630" time="250" condition="Skin.HasSetting(View510_ShowInfoRight)">Conditional</animation>
        <viewtype label="31437">icons</viewtype>
        <right>40</right>
        <bottom>12%</bottom>
        <height>750</height>
        <width>1200</width>
        <orientation>vertical</orientation>
        <onleft>9000</onleft>
        <onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
        <onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
        <onup>510</onup>
        <ondown>510</ondown>
        <preloaditems>4</preloaditems>
        <pagecontrol>60</pagecontrol>
		<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),510) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
        <itemlayout height="250" width="240">
            <control type="group">
                <width>240</width>
                <height>240</height>
                <include>SquarePosterPanelLayout</include>
            </control>
        </itemlayout>
        <focusedlayout height="250" width="240">
		  <control type="group">
                <width>240</width>
                <height>240</height>
                <include>SquarePosterPanelLayoutFocus</include>
                <include>AutoTrailerButton</include>
            </control>
        </focusedlayout>
      </control>
      
	  
			<!--vertical Scollbar-->
		<control type="scrollbar" id="60">
			<visible>Control.IsVisible(510) + IntegerGreaterThan(Container.Numitems,0)</visible>
			<right>15</right>
			<bottom>135</bottom>
			<height>770</height>
			<onup>60</onup>
			<ondown>6000</ondown>
			<onleft>510</onleft>
			<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
			<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
		</control>
    
	  
    </control>
	
	

  </include>
</includes>
