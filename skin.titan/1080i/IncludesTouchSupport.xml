<?xml version="1.0" encoding="utf-8"?>
<includes>

<include name="TouchControlsHome">
	<!-- page button left -->
	<control type="button">
		<left>0</left>
		<top>465</top>
		<width>30</width>
		<height>149</height>
		<align>center</align>
		<aligny>center</aligny>
		<label>-</label>
		<pulseonselect>false</pulseonselect>
		<texturefocus colordiffuse="white">basichome_left.png</texturefocus>
		<texturenofocus>basichome_left.png</texturenofocus>
		<onclick>PageUp(60)</onclick>
		<visible>Control.IsVisible(300) + Container(300).HasPrevious + ![ControlGroup(77777).HasFocus | StringCompare(Window(Home).Property(ShowWidget),show)]</visible>
	</control>

	<!-- page button right -->
	<control type="button">
		<right>0</right>
		<top>465</top>
		<width>30</width>
		<height>149</height>
		<align>center</align>
		<aligny>center</aligny>
		<label>-</label>
		<pulseonselect>false</pulseonselect>
		<texturefocus colordiffuse="white">basichome_right.png</texturefocus>
		<texturenofocus>basichome_right.png</texturenofocus>
		<onclick>PageDown(60)</onclick>
		<visible>Control.IsVisible(300) + Container(300).HasNext + ![ControlGroup(77777).HasFocus | StringCompare(Window(Home).Property(ShowWidget),show)]</visible>
	</control>
</include>

<include name="TouchControlsFooter">
	<control type="grouplist">
		<posx>60</posx>
		<posy>1005</posy>
		<width>1000</width>
		<height>130</height>
		<itemgap>25</itemgap>
		<onup>noop</onup>
		<ondown>noop</ondown>
		<onleft>200</onleft>
		<onright>200</onright>
		<orientation>horizontal</orientation>
		<animation effect="zoom" start="100" end="80" center="auto" easing="out" tween="back" time="0" condition="skin.hastheme(classic)">Conditional</animation>
		<animation effect="slide" start="0,0" end="0,-31" center="auto" easing="out" tween="back" time="0" condition="skin.hastheme(classic)">Conditional</animation>
		<animation time="200" effect="fade" start="100" end="0" delay="0" condition="SubString(Window(Home).Property(submenu),show) + !skin.hastheme(classic)">Conditional</animation>
		<visible>!Window.IsActive(startup)</visible>
		
		<control type="button">
			<label></label>
			<include>animation_fade_visible_hidden</include>
			<width>60</width>
			<height>60</height>
			<font>-</font>
			<texturefocus colordiffuse="white">icon_back.png</texturefocus>
			<texturenofocus colordiffuse="bbwhite">icon_back.png</texturenofocus>
			<aspectratio aligny="bottom">keep</aspectratio>
			<onclick>Back</onclick>
			<onclick>ClearProperty(ShowViewSubMenu, Home)</onclick>
			<onclick>ClearProperty(ShowWidget, Home)</onclick>
			<visible>!Window.IsActive(Home) | [Window.IsActive(Home) + Player.HasMedia]</visible>
		</control>
		<control type="button">
			<visible>!Window.IsActive(Home)</visible>
			<include>animation_fade_visible_hidden</include>
			<width>60</width>
			<height>60</height>
			<label>210</label>
			<font>-</font>
			<texturefocus colordiffuse="white">icon_home.png</texturefocus>
			<texturenofocus colordiffuse="bbwhite">icon_home.png</texturenofocus>
			<aspectratio>keep</aspectratio>
			<onclick>ActivateWindow(Home)</onclick>
			<onclick>ClearProperty(ShowViewSubMenu, Home)</onclick>
		</control>
		<control type="button">
			<label></label>
			<include>animation_fade_visible_hidden</include>
			<width>60</width>
			<height>60</height>
			<font>-</font>
			<texturefocus colordiffuse="white">icon_power.png</texturefocus>
			<texturenofocus colordiffuse="bbwhite">icon_power.png</texturenofocus>
			<aspectratio aligny="bottom">keep</aspectratio>
			<onclick>ActivateWindow(111)</onclick>
			<onclick>ClearProperty(ShowViewSubMenu, Home)</onclick>
			<visible>Window.IsActive(Home)</visible>
		</control>
		<!-- settings button on home -->
		<control type="button">
			<label></label>
			<include>animation_fade_visible_hidden</include>
			<width>60</width>
			<height>60</height>
			<font>-</font>
			<texturefocus colordiffuse="white">icon_settings.png</texturefocus>
			<texturenofocus colordiffuse="bbwhite">icon_settings.png</texturenofocus>
			<aspectratio aligny="bottom">keep</aspectratio>
			<onclick>ActivateWindow(settings)</onclick>
			<visible>Window.IsActive(Home)</visible>
		</control>
		<!-- sideblade menu -->
		<control type="button">
			<label></label>
			<include>animation_fade_visible_hidden</include>
			<width>60</width>
			<height>60</height>
			<font>-</font>
			<texturefocus colordiffuse="white">icon_menu.png</texturefocus>
			<texturenofocus colordiffuse="bbwhite">icon_menu.png</texturenofocus>
			<aspectratio aligny="bottom">keep</aspectratio>
			<onclick condition="!StringCompare(Window(Home).Property(ShowViewSubMenu),show)">SetProperty(ShowViewSubMenu, show, Home)</onclick>
			<onclick condition="StringCompare(Window(Home).Property(ShowViewSubMenu),show)">ClearProperty(ShowViewSubMenu, Home)</onclick>
			<visible>Control.IsVisible(9000) + !Window.IsActive(settings) + !Window.IsActive(settingscategory.xml) + !Window.IsActive(DialogContextMenu.xml)</visible>
		</control>
		<!-- show widget -->
		<control type="button">
			<label></label>
			<include>animation_fade_visible_hidden</include>
			<width>60</width>
			<height>60</height>
			<font>-</font>
			<texturefocus colordiffuse="white">icon_menu.png</texturefocus>
			<texturenofocus colordiffuse="bbwhite">icon_menu.png</texturenofocus>
			<aspectratio aligny="bottom">keep</aspectratio>
			<onclick condition="!StringCompare(Window(Home).Property(ShowWidget),show)">XBMC.RunScript(script.titanskin.helpers,SHOWWIDGET)</onclick>
			<onclick condition="StringCompare(Window(Home).Property(ShowWidget),show)">Control.SetFocus(300)</onclick>
			<onclick condition="!StringCompare(Window(Home).Property(ShowWidget),show)">SetProperty(ShowWidget, show, Home)</onclick>
			<onclick condition="StringCompare(Window(Home).Property(ShowWidget),show)">ClearProperty(ShowWidget, Home)</onclick>
			<visible>Window.IsActive(Home)</visible>
			<visible>!IsEmpty(Container(300).ListItem.Property(widget))</visible>
		</control>
	</control>

	<!-- battery status -->
	<control type="group">
		<posy>1020</posy>
		<visible>Window.IsActive(Home)</visible>
		<visible>!skin.hastheme(classic)</visible>
		<animation time="200" effect="fade" start="100" end="0" delay="0" condition="SubString(Window(Home).Property(submenu),show)">Conditional</animation>
		<control type="group">
			<posx>110r</posx>
			<posy>-5</posy>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>4</width>
				<height>30</height>
				<colordiffuse>white</colordiffuse>
				<texture>BatteryBackBase.png</texture>
			</control>
			<control type="progress">
				<description>Battery Percent</description>
				<posx>4</posx>
				<posy>0</posy>
				<width>48</width>
				<height>30</height>
				<texturebg colordiffuse="white">BatteryBack.png</texturebg>
				<midtexture colordiffuse="white">BatteryFront.png</midtexture>
				<info>System.BatteryLevel</info>
				
			</control>
			<control type="image">
				<posx>52</posx>
				<posy>0</posy>
				<width>10</width>
				<height>30</height>
				<texture border="2,0,0,0">BatteryBackCap.png</texture>
				<colordiffuse>white</colordiffuse>
			</control>
			</control>
			<control type="label">
				<posx>120r</posx>
				<posy>0</posy>
				<width>200</width>
				<height>18</height>
				<font>Reg26</font>
				<textcolor>white</textcolor>
				<align>right</align>
				<aligny>center</aligny>
				<label>$INFO[System.BatteryLevel]</label>
			</control>
		</control>
	</include>

<include name="WindowsTouchScreenWorkaround">
	<control type="group">
		<posx>0</posx>
		<posy>0</posy>
		<control type="list" id="19000">
			<width>1920</width>
			<height>1080</height>
			<pagecontrol>-</pagecontrol>
			<orientation>vertical</orientation>
			<itemlayout width="1920" height="1080">
			</itemlayout>
			<focusedlayout width="1920" height="1080">
			</focusedlayout>
			<content>
				<item id="1">
					<label></label>
					<thumb>-</thumb>
					<onclick>ClearProperty(ShowViewSubMenu, Home)</onclick>
					<onclick>ClearProperty(ShowWidget, Home)</onclick>
					<onclick>ClearProperty(ShowWidget, Home)</onclick>
					<onclick condition="SubString(Window.Property(xmlfile),Dialog)">Dialog.Close(all,true)</onclick>
