<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <include name="View_10_SimplePVR">
         <control type="group">
            <visible>Control.IsVisible(10)</visible>
            <animation effect="slide" end="0,105" time="0" condition="!Skin.String(general_header,disable) + StringCompare(Skin.AspectRatio,16:10)">Conditional</animation>
            <control type="group">
                <!--Panel-->

				<!-- Background Panel TOP-->
				<control type="image">
					<posx>50</posx>
					<posy>170</posy>
					<width>1820</width>
					<height>240</height>
					<texture border="15">diffuse/bgpanel.png</texture>
					<colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
                    <visible>!Skin.HasSetting(View10_Hidepanel)</visible>
				</control>
				<!-- Background Panel BOTTOM-->
				<control type="image">
					<posx>50</posx>
					<posy>430</posy>
					<width>1820</width>
					<height>510</height>
					<texture border="15">diffuse/bgpanel.png</texture>
					<colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
                     <visible>!Skin.HasSetting(View10_Hidepanel)</visible>
				</control>
				<!-- Background Panel TITLEBAR-->
				<control type="image">
					<posx>50</posx>
					<posy>430</posy>
					<width>1820</width>
					<height>60</height>
					<texture border="15">diffuse/bgpanel.png</texture>
					<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
				</control>
                <control type="image">
					<posx>50</posx>
					<posy>430</posy>
					<width>1820</width>
					<height>60</height>
					<texture border="15">diffuse/bgpanel.png</texture>
					<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
				</control>
	
            </control>
            <control type="group">
                <visible>!IsEmpty(ListItem.Date)</visible>
                <posx>80</posx>
                <posy>190</posy>
                <control type="image">
                    <!--Background-->
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>350</width>
                    <height>200</height>
                    <texture fallback="DefaultAddonTvInfo.png" diffuse="home/home_matte2.png">$VAR[PVRThumb]</texture>
                    <aspectratio align="left">keep</aspectratio>
                    <visible>![VideoPlayer.Content(livetv) + Skin.HasSetting(PVRShowPreview)]</visible>
                </control>
            <!-- black background behind video -->
                <control type="image">
                    <texture>colors/color_black.png</texture>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>350</width>
                    <height>200</height>
                    <visible>VideoPlayer.Content(livetv) + Skin.HasSetting(PVRShowPreview)</visible>
                </control>
				<!--Video Window -->
                <control type="videowindow">
                   <posx>0</posx>
                    <posy>0</posy>
                    <width>350</width>
                    <height>200</height>
                    <visible>VideoPlayer.Content(livetv) + Skin.HasSetting(PVRShowPreview)</visible>
                </control>
            </control>
            <control type="label">
                <!--Title-->
                <posx>450</posx>
                <posy>190</posy>
                <width>650</width>
                <height>50</height>
                <font>Bold38</font>
                <textcolor>$INFO[Skin.String(ViewDetailsHighlightTextColor)]</textcolor>
                <shadowcolor>$INFO[Skin.String(ViewDetailsHighlightTextShadowColor)]</shadowcolor>
                <label>$VAR[ListTitlePVR]</label>
            </control>
            <control type="grouplist">
                <!--Start, End, Duration-->
                <posx>450</posx>
                <posy>245</posy>
                <control type="group">
                    <!-- Ground 1 -->
                    <height>40</height>
                    <visible>!IsEmpty(ListItem.Date)</visible>
                    <control type="label">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>180</width>
                        <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
						<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$LOCALIZE[142]</label>
                    </control>
                    <control type="label">
                        <posx>160</posx>
                        <posy>0</posy>
                        <width>500</width>
                        <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$VAR[ListDateInfoPVR]</label>
                        <scroll>true</scroll>
                    </control>
                </control>
                <control type="group">
                    <!-- Ground 2 -->
                    <height>40</height>
                    <visible>!IsEmpty(ListItem.Duration) + IsEmpty(ListItem.Timertype)</visible>
                    <control type="label">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>180</width>
                        <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$LOCALIZE[180]:</label>
                    </control>
                    <control type="label">
                        <posx>160</posx>
                        <posy>0</posy>
                        <width>300</width>
                        <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$VAR[ListItemDuration]</label>
                    </control>
                </control>
                <control type="group">
                    <!-- Ground 3 -->
                    <height>40</height>
                    <visible>!IsEmpty(ListItem.ChannelName) | !IsEmpty(Window(home).property(SkinHelper.ListItem.ChannelName))</visible>
                    <control type="label">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>180</width>
                        <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$LOCALIZE[19148]:</label>
                    </control>
                    <control type="label">
                        <posx>160</posx>
                        <posy>0</posy>
                        <width>300</width>
                        <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$VAR[PVRChannelName]</label>
                    </control>
                </control>
                <control type="group">
                    <!-- Timertype -->
                    <height>40</height>
                    <visible>!IsEmpty(ListItem.Timertype)</visible>
                    <control type="label">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>180</width>
                        <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$LOCALIZE[467]:</label>
                    </control>
                    <control type="label">
                        <posx>160</posx>
                        <posy>0</posy>
                        <width>500</width>
                        <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$INFO[ListItem.Timertype]</label>
                    </control>
                </control>
            </control>
            <control type="textbox">
                <!--Info Plot-->
                <posx>1150</posx>
                <posy>190</posy>
                <width>650</width>
                <height>198</height>
                <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                <label fallback="195">$VAR[Plots]</label>
            </control>
            <control type="group">
                <!--Top Bar-->
                <posx>70</posx>
                <posy>413</posy>
                <control type="label">
                    <!--Channel Name-->
                    <posx>155</posx>
                    <posy>30</posy>
                    <width>300</width>
                    <height>30</height>
                    <font>Reg30</font>
                    <textoffsetx>0</textoffsetx>
                    <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
                    <label>19148</label>
                </control>
                <control type="label">
                    <!--Channle Title-->
                    <posx>425</posx>
                    <posy>30</posy>
                    <width>300</width>
                    <height>30</height>
                    <font>Reg30</font>
                    <textoffsetx>0</textoffsetx>
                    <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
                    <label>369</label>
                </control>
                <control type="label">
                    <!--Time-->
                    <posx>1200</posx>
                    <posy>30</posy>
                    <width>100</width>
                    <height>30</height>
                    <font>Reg30</font>
                    <textoffsetx>0</textoffsetx>
                    <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
                    <label>555</label>
                </control>

            </control>
            <control type="list" id="10">
                <!--List ID=14-->
				<viewtype label="31567">list</viewtype>
                <visible>[Window.IsActive(tvchannels) | Window.IsActive(tvtimers) | Window.IsActive(tvsearch) | Window.IsActive(tvrecordings)]</visible>
                <visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),10) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
                <posx>70</posx>
                <posy>510</posy>
                <width>1780</width>
                <height>400</height>
                <onup>10</onup>
                <ondown>10</ondown>
                <onleft>9000</onleft>
                <onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
                <onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
                <pagecontrol>60</pagecontrol>
                <scrolltime>200</scrolltime>
                <itemlayout height="80"  width="1780">
                     <control type="label">
                        <!--Channel Number-->
                        <posx>20</posx>
                        <posy>0</posy>
                        <width>120</width>
                        <height>80</height>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
                        <label>$VAR[ListChannelNumberPVR]</label>
                    </control>
                    <control type="image">
                        <posx>155</posx>
                        <posy>5</posy>
                        <width>60</width>
                        <height>60</height>
                        <texture>common/folder.png</texture>
                        <colordiffuse>$INFO[Skin.String(ViewDetailsListItemTextColor)]</colordiffuse>
                        <visible>ListItem.IsFolder</visible>
                    </control>
                    <control type="label">
                        <!--Channel Name-->
                        <description>Channel Value</description>
                        <posx>155</posx>
                        <posy>0</posy>
                        <width>250</width>
                        <height>80</height>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
                        <label>$INFO[ListItem.ChannelName]</label>
                        <visible>!ListItem.IsFolder</visible>
                    </control>
                    <control type="label">
                        <!--Channel Show-->
                        <posx>425</posx>
                        <posy>0</posy>
                        <width>755</width>
                        <height>80</height>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
                        <label>$VAR[ListTitlePVR]</label>
                    </control>
                    <control type="label">
                        <!--Date-->
                        <posx>1200</posx>
                        <posy>0</posy>
                        <width>500</width>
                        <height>80</height>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
                        <label>$VAR[ListDatePVR]</label>
                    </control>
                    <control type="image">
                        <!--Separator-->
                        <posx>0</posx>
                        <posy>80</posy>
                        <width>100%</width>
                        <height>20</height>
                        <fadetime>400</fadetime>
                        <colordiffuse>list_separator</colordiffuse>
                        <texture>common/separator.png</texture>
                    </control>
                    <control type="group">
                        <!--Watched Overlay-->
						<right>0</right>
                        <top>0</top>
                        <include>WatchedIndicatorNormal</include>
                    </control>
                </itemlayout>
                <focusedlayout height="80" width="1780">
                    <control type="image">
                        <!--Slide-->
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>100%</width>
                        <height>80</height>
                        <texture diffuse="diffuse/panel.png" border="5" colordiffuse="$VAR[ViewDetailsFocusColor]">diffuse/panel.png</texture>
                    </control>
                    <control type="label">
                        <!--Channel Number-->
                        <posx>20</posx>
                        <posy>0</posy>
                        <width>120</width>
                        <height>80</height>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                        <label>$VAR[ListChannelNumberPVR]</label>
                    </control>
                    <control type="image">
                        <posx>155</posx>
                        <posy>5</posy>
                        <width>60</width>
                        <height>60</height>
                        <texture>common/folder.png</texture>
                        <colordiffuse>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</colordiffuse>
                        <visible>ListItem.IsFolder</visible>
                    </control>

                    <control type="label">
                        <!--Channel Name-->
                        <posx>155</posx>
                        <posy>0</posy>
                        <width>250</width>
                        <height>80</height>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                        <label>$INFO[ListItem.ChannelName]</label>
                        <visible>!ListItem.IsFolder</visible>
                    </control>
                    <control type="label">
                        <!--Channel Show-->
                        <posx>425</posx>
                        <posy>0</posy>
                        <width>755</width>
                        <height>80</height>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                        <label>$VAR[ListTitlePVR]</label>
                    </control>
                    <control type="label">
                        <!--Date-->
                        <posx>1200</posx>
                        <posy>0</posy>
                        <width>500</width>
                        <height>80</height>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                        <label>$VAR[ListDatePVR]</label>
                    </control>
                    <control type="image">
                        <!--Separator-->
                        <posx>0</posx>
                        <posy>80</posy>
                        <width>100%</width>
                        <height>20</height>
                        <fadetime>400</fadetime>
                        <colordiffuse>list_separator</colordiffuse>
                        <texture>common/separator.png</texture>
                    </control>
                    <control type="group">
                        <!--Watched Overlay-->
						<right>0</right>
                        <top>0</top>
                        <include>WatchedIndicatorNormal</include>
                    </control>
                </focusedlayout>

            </control>
            <!--vertical Scollbar-->
            <control type="scrollbar" id="60">
                <visible>Control.IsVisible(10) + IntegerGreaterThan(Container.Numitems,0)</visible>
                <right>15</right>
                <posy>540</posy>
                <height>400</height>
                <onup>60</onup>
                <ondown>6000</ondown>
                <onleft>10</onleft>
                <animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
                <animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
            </control>
        </control>
      </include>
</includes>
