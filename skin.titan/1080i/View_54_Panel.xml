<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_54_Panel">
	
		<!-- panel no info -->
        <control type="group">
            <visible>Control.IsVisible(54)</visible>
            <include>animation_view_change</include>
			
			<control type="panel" id="54">
                <posx>40</posx>
                <bottom>13%</bottom>
                <height>798</height>
                <width>1860</width>
                <onup>54</onup>
                <ondown>54</ondown>
                <onleft>9000</onleft>
                <onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
                <onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="31680">icons</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <orientation>vertical</orientation>
                <preloaditems>2</preloaditems>
				<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),54) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
                <!-- itemlayout movies -->
                <itemlayout height="266" width="185">
                    <control type="group">
                        <width>183</width>
                        <height>264</height>
                        <include>SmallPosterPanelLayout</include>
                      </control>
                </itemlayout>
                <!-- focussed layout movies -->
                <focusedlayout height="266" width="185">
                    <control type="group">
                        <width>183</width>
                        <height>264</height>
                        <include>SmallPosterPanelLayoutFocus</include>
                      </control>
                </focusedlayout>
			</control>
		
			<!--vertical Scollbar-->
			<control type="scrollbar" id="60">
				<visible>Control.IsVisible(54) + IntegerGreaterThan(Container.Numitems,0)</visible>
				<right>5</right>
				<bottom>140</bottom>
				<height>770</height>
				<onup>60</onup>
				<ondown>6000</ondown>
				<onleft>54</onleft>
				<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
			</control>
    
		</control>

    </include>
</includes>