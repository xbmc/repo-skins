<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <!--Default-->
    <include name="View_502_LandscapeSingle">
	
		<control type="group">
			<include>animation_view_change</include>
			<defaultcontrol always="true">502</defaultcontrol>
		    <visible>Control.IsVisible(502)</visible>
			
			<!-- movie details -->
			<control type="group">
				<visible>Skin.HasSetting(LandscapeViewShowInfo)</visible>
				<include>MovieDetailsTop</include>
			</control>
            
            <!--cdart image-->
            <control type="image">
                <width>530</width>
                <height>530</height>
                <bottom>17%</bottom>
                <posx>700</posx>
                <texture background="true" diffuse="diffuse/halfcd.png" fallback="diffuse/halfcd.png">$VAR[DiscArtImage]</texture>
                <aspectratio scalediffuse="false" align="center" aligny="top">scale</aspectratio>
                <animation effect="slide" start="0,230" end="0" tween="cubic" easing="inout" time="1200" delay="1200">Visible</animation>
                <animation effect="fade" start="0" end="100" delay="800" time="1200" pulse="false">Visible</animation>
                <visible>Skin.HasSetting(View502_ShowCDart) + ![SubString(ListItem.Thumb,Default,left) | IsEmpty(ListItem.Thumb)] + ![Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)] + !Container.IsScrolling + !Container.OnScrollNext + !Container.OnScrollPrevious</visible>
                <visible>IntegerGreaterThan(Container.NumItems,0)</visible>
            </control>
			
			
			<control type="fixedlist" id="502">
				<posx>60</posx>
				<width>1800</width>
				<height>325</height>
				<bottom>16%</bottom>
				<onup>9000</onup>
				<ondown condition="Skin.HasSetting(EnableQuickJump)">7000</ondown>
                <ondown condition="!Skin.HasSetting(EnableQuickJump)">60</ondown>
				<onleft>502</onleft>
				<onright>502</onright>
				<pagecontrol>60</pagecontrol>
				<viewtype label="31431">thumbnail</viewtype>
				<orientation>horizontal</orientation>
				<focusposition>1</focusposition>
				<preloaditems>4</preloaditems>
				<scrolltime tween="cubic" easing="inout">500</scrolltime>
				<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),502) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
				<visible>!Container.Content(files)</visible>	
				<itemlayout width="620" height="325" condition="![Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
					<control type="group">
                        <width>565</width>
                        <height>325</height>
                        <include>LandscapeLayout</include>
                    </control>
				</itemlayout>
				<focusedlayout width="620" height="325" condition="![Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
                    <control type="group">
                        <width>565</width>
                        <height>325</height>
                        <include>LandscapeLayoutFocus</include>
                    </control>
				</focusedlayout>
                    <itemlayout width="450" height="325" condition="[Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
					<control type="group">
                        <width>440</width>
                        <height>303</height>
                        <include>LandscapeLayout</include>
                    </control>
				</itemlayout>
				<focusedlayout width="450" height="325" condition="[Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
                    <control type="group">
                        <width>440</width>
                        <height>303</height>
                        <include>LandscapeLayoutFocus</include>
                    </control>
				</focusedlayout>
			</control>

		
			<!--horizontal Scrollbar-->
			<control type="group">
				<control type="scrollbar" id="60">
					<visible>Control.IsVisible(502) + IntegerGreaterThan(Container.Numitems,0)</visible>
					<left>60</left>
					<bottom>14%</bottom>
					<width>1800</width>
					<height>15</height>
					<onup>502</onup>
					<onleft>60</onleft>
					<onright>60</onright>
					<orientation>horizontal</orientation>
					<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
					<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
				</control>
			</control>
			
		</control>
	</include>
</includes>