<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <include name="View_522_RightList">
        <!--Panel-->
		
        <control type="group">
            <visible>Control.IsVisible(522)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include>animation_view_change</include>
			
			<!-- Background Panel-->
			<control type="image">
				<posx>50</posx>
				<width>1820</width>
                <bottom>13%</bottom>
                <height>736</height>
				<texture border="15">diffuse/bgpanel.png</texture>
				<colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
                <visible>!Skin.HasSetting(View522_HidePanel)</visible>
                <visible>IntegerGreaterThan(Container.NumItems,0)</visible>
			</control>
            
            <include>MovieDetailsLeft_Small</include>
            
            <!-- ID="522" -->
            <control type="list" id="522">
                <bottom>14%</bottom>
                <height>720</height>
                <right>65</right>
                <width>800</width>
                <height>690</height>
                <onleft>9000</onleft>
                <onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
                <onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
                <onup>522</onup>
                <ondown>522</ondown>
                <pagecontrol>60</pagecontrol>
                <viewtype label="31722">list</viewtype>
                <scrolltime>300</scrolltime>
				<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),522) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
                <itemlayout width="800" height="62">
                    <control type="label">
                        <!--Label 1-->
                        <align>right</align>
                        <right>5</right>
                        <width>100%</width>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
                        <label>$VAR[ListTitle]</label>
                    </control>
                    <control type="image">
                        <!--Separator-->
                        <right>0</right>
                        <posy>56</posy>
                        <width>100%</width>
                        <height>20</height>
                        <fadetime>400</fadetime>
                        <colordiffuse>list_separator</colordiffuse>
                        <texture>common/separator.png</texture>
                    </control>
                </itemlayout>
                <focusedlayout width="800" height="90">
                    <control type="image">
						<right>0</right>
						<posy>0</posy>
						<height>86</height>
						<width>100%</width>
						<texture border="5">diffuse/panel.png</texture>
						<colordiffuse>$VAR[ViewDetailsFocusColor]</colordiffuse>
					</control>
                    <control type="label">
                        <!--Label 1-->
                        <align>right</align>
                        <right>5</right>
                        <width>100%</width>
                        <height>55</height>
                        <font>Reg36</font>
						<scroll>true</scroll>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                        <label>$VAR[ListTitle]</label>
                    </control>
                    <control type="label">
                        <!--Label 2-->
                        <align>right</align>
                        <right>5</right>
                        <width>100%</width>
                        <posy>52</posy>
                        <height>30</height>
                        <font>Light30</font>
						<scroll>true</scroll>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                        <label>$VAR[ListDetails]</label>
                        <visible>!StringCompare(ListItem.Label,..)</visible>
                    </control>
                    <control type="image">
                        <!--Separator-->
                        <right>0</right>
                        <posy>86</posy>
                        <width>100%</width>
                        <height>20</height>
                        <fadetime>400</fadetime>
                        <colordiffuse>list_separator</colordiffuse>
                        <texture>common/separator.png</texture>
                    </control>
					
                </focusedlayout>
            </control>
            
            <!--Poster with discart-->
            <control type="group">
                <right>870</right>
                <width>500</width>
                <bottom>13%</bottom>
                <height>736</height>
                <visible>IntegerGreaterThan(Container.NumItems,0)</visible>
                <control type="image">
					<!--cdart image-->
                    <width>500</width>
                    <height>500</height>
                    <top>118</top>
					<texture background="true" diffuse="diffuse/cdmask_new.png">$VAR[DiscArtImage]</texture>
					<aspectratio scalediffuse="false" align="center" aligny="center">scale</aspectratio>
					<animation effect="slide" start="0,0" end="200,0" tween="cubic" easing="inout" time="1200" delay="600" condition="Skin.HasSetting(View522_ShowCDart)">Conditional</animation>
					<animation effect="fade" start="0" end="100" delay="600" time="800" pulse="false" condition="Skin.HasSetting(View522_ShowCDart)">Conditional</animation>
					<animation effect="rotate" end="-360" center="auto" time="20000" loop="true" reversible="false" condition="Skin.HasSetting(AnimateDiscArt)">Conditional</animation>
					<visible>Skin.HasSetting(View522_ShowCDart) + [!IsEmpty(ListItem.Art(poster)) | !IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.Poster))]</visible>
                    <visible>![ListItem.IsCollection + Skin.HasSetting(EmbyCovertArtEnabled)]</visible>
                    <visible>Window.IsActive(Videos)</visible>
				</control>
                <control type="image">
					<aspectratio align="center" aligny="center" scalediffuse="true">stretch</aspectratio>
					<texture background="true" diffuse="diffuse/poster.png" fallback="DefaultVideo.png">$VAR[PosterThumb]</texture>
					<bordersize>8</bordersize>
                    <visible>[!IsEmpty(ListItem.Art(poster)) | !IsEmpty(ListItem.Art(tvshow.poster))]</visible>
                    <visible>![ListItem.IsCollection + Skin.HasSetting(EmbyCovertArtEnabled)]</visible>
				</control>
                <control type="image">
					<aspectratio align="left" aligny="center" scalediffuse="true">keep</aspectratio>
					<texture background="true" diffuse="diffuse/poster.png" fallback="DefaultVideo.png">$VAR[PosterThumb]</texture>
					<bordersize>8</bordersize>
                    <width>700</width>
                    <visible>[ListItem.IsCollection + Skin.HasSetting(EmbyCovertArtEnabled)]</visible>
				</control>
                <control type="image">
					<aspectratio align="center" aligny="bottom" scalediffuse="true">keep</aspectratio>
					<texture background="true" diffuse="diffuse/poster.png" fallback="DefaultVideo.png">$VAR[PosterThumb]</texture>
					<bordersize>8</bordersize>
                    <visible>![ListItem.IsCollection + Skin.HasSetting(EmbyCovertArtEnabled)]</visible>
                    <visible>IsEmpty(ListItem.Art(poster)) + IsEmpty(ListItem.Art(tvshow.poster))</visible>
				</control>
                <control type="group">
                    <right>8</right>
                    <posy>8</posy>
                    <include>WatchedIndicatorLarge</include>
                    <visible>![ListItem.IsCollection + Skin.HasSetting(EmbyCovertArtEnabled)]</visible>
                </control>
            </control>
        

            <!--vertical Scollbar-->
            <control type="scrollbar" id="60">
                <visible>Control.IsVisible(522) + IntegerGreaterThan(Container.Numitems,0)</visible>
                <right>15</right>
                <bottom>13%</bottom>
                <height>736</height>
                <onup>60</onup>
                <ondown>6000</ondown>
                <onleft>522</onleft>
                <animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
                <animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
            </control>
        </control>
 	</include>
</includes>