<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">570</defaultcontrol>
	<menucontrol>9000</menucontrol>
    <views>570</views>
    <controls>

        <!--Global Background-->
        <include>GlobalBackground</include>
        <!--Time & Weather-->
        <include condition="!Skin.HasSetting(DisableHeader)">TimeInfo</include>
		<!-- Now playing -->
		<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
		
        <!--Header-->
        <include>Header</include>
        
		<control type="group">
            <include>animation_window_open_close</include>
            <bottom>125</bottom>
            <height>75%</height>
           <!--Panel-->
            <control type="image">
                <posx>50</posx>
                <width>1820</width>
                <texture border="15">diffuse/bgpanel.png</texture>
                <colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
            
            <control type="image">
                <posx>50</posx>
                <width>520</width>
                <texture border="15">diffuse/bgpanel.png</texture>
                <colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
            
            <control type="list" id="570">
                <left>600</left>
                <top>20</top>
                <width>1250</width>
                <height>100%</height>
                <onleft>9000</onleft>
                <onright>60</onright>
                <onup>570</onup>
                <ondown>570</ondown>
                <viewtype label="535">list</viewtype>
                <pagecontrol>60</pagecontrol>
                <scrolltime>200</scrolltime>
                <itemlayout height="85" width="1250">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <height>80</height>
                        <width>100%</width>
                        <texture border="5">diffuse/panel.png</texture>
                        <colordiffuse>$INFO[Skin.String(ButtonColor)]</colordiffuse>
                    </control>
                    <control type="image">
                        <left>2</left>
                        <top>2</top>
                        <width>80</width>
                        <height>76</height>
                        <texture>$INFO[Listitem.Icon]</texture>
                        <aspectratio>keep</aspectratio>
                        <bordersize>2</bordersize>
                    </control>
                    <control type="label">
                        <left>90</left>
                        <top>0</top>
                        <width>870</width>
                        <height>30</height>
                        <font>Reg24</font>
                        <textcolor>$INFO[Skin.String(ButtonTextColor)]</textcolor>
                        <align>left</align>
                        <aligny>center</aligny>
                        <label>[B]$INFO[ListItem.Label][/B]</label>
                    </control>
                    <control type="textbox">
                        <left>90</left>
                        <top>32</top>
                        <width>870</width>
                        <height>48</height>
                        <font>Reg22</font>
                        <textcolor>$INFO[Skin.String(ButtonTextColor)]</textcolor>
                        <align>left</align>
                        <label>$INFO[ListItem.Property(Event.Description)]</label>
                    </control>
                    <control type="label">
                        <right>10</right>
                        <top>0</top>
                        <width>970</width>
                        <height>30</height>
                        <font>Reg22</font>
                        <textcolor>$INFO[Skin.String(ButtonTextColor)]</textcolor>
                        <align>right</align>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="85" width="1250">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <height>80</height>
                        <width>100%</width>
                        <texture border="5">diffuse/panel.png</texture>
                        <colordiffuse>$INFO[Skin.String(ButtonFocusColor)]</colordiffuse>
                        <animation effect="fade" start="100" end="30" time="0" condition="!Control.HasFocus(570)">conditional</animation>
                    </control>
                    <control type="image">
                        <left>2</left>
                        <top>2</top>
                        <width>80</width>
                        <height>76</height>
                        <texture>$INFO[Listitem.Icon]</texture>
                        <aspectratio>keep</aspectratio>
                        <bordersize>2</bordersize>
                    </control>
                    <control type="label">
                        <left>90</left>
                        <top>0</top>
                        <width>870</width>
                        <height>30</height>
                        <font>Reg24</font>
                        <textcolor>$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
                        <align>left</align>
                        <aligny>center</aligny>
                        <label>[B]$INFO[ListItem.Label][/B]</label>
                    </control>
                    <control type="textbox">
                        <left>90</left>
                        <top>32</top>
                        <width>870</width>
                        <height>48</height>
                        <font>Reg22</font>
                        <textcolor>$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
                        <align>left</align>
                        <label>$INFO[ListItem.Property(Event.Description)]</label>
                    </control>
                    <control type="label">
                        <right>10</right>
                        <top>0</top>
                        <width>970</width>
                        <height>30</height>
                        <font>Reg22</font>
                        <textcolor>$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
                        <align>right</align>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="60">
                <right>15</right>
                <top>-20</top>
                <height>102%</height>
                <onleft>570</onleft>
                <showonepage>false</showonepage>
            </control>
        
		
            <control type="grouplist" id="9000">
                <posx>90</posx>
                <posy>20</posy>
                <width>450</width>
                <ondown>9000</ondown>
                <onright>570</onright>
                <control type="togglebutton" id="4">
                    <description>Sort asc</description>
                    <font>Reg28</font>
                    <align>left</align>
                    <height>47</height>
                    <width>450</width>
                    <label>584</label>
					<altlabel>585</altlabel>
                    <usealttexture>Container.SortDirection(Ascending)</usealttexture>
                </control>
                <control type="button" id="21">
                    <description>Level button</description>
                    <textwidth>235</textwidth>
                    <font>Reg28</font>
                    <align>left</align>
                    <height>47</height>
                    <width>450</width>
                    <label>-</label>
                </control>
                <control type="radiobutton" id="22">
                    <description>Only show current level</description>
                    <font>Reg28</font>
                    <align>left</align>
                    <height>47</height>
                    <width>450</width>
                    <label>-</label>
                </control>
                <control type="button" id="20">
                    <description>Clear button</description>
                    <font>Reg28</font>
                    <align>left</align>
                    <height>47</height>
                    <width>450</width>
                    <label>192</label>
                </control>
        
            </control>
        </control>
		<!--Footer-->
        <include condition="!skin.hassetting(nofooterbar)">Footer</include>
		<!--Titan Version-->
        <include>TitanVersion</include>
		
    </controls>
</window>