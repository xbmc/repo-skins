<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
	
	<include name="SlimListLayout">

		<!--Title-->
		<control type="label">
			<posx>10</posx>
			<align>left</align>
			<width>65%</width>
			<label>[B]$INFO[ListItem.Label][/B]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
            <visible>![Window.IsActive(tvchannels) | Window.IsActive(tvguide) | Window.IsActive(tvtimers) | Window.IsActive(tvsearch) | Window.IsActive(tvrecordings) | Window.IsActive(addonbrowser)]</visible>
			<font>Light30</font>
		</control>
         <!--Details PVR or addons-->
		<control type="label">
			<posx>10</posx>
			<align>left</align>
			<width>90%</width>
			<label>[B]$INFO[ListItem.Label][/B]$VAR[ListDetails, • ]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
			<font>Light30</font>
            <visible>[Window.IsActive(tvchannels) | Window.IsActive(tvguide) | Window.IsActive(tvtimers) | Window.IsActive(tvsearch) | Window.IsActive(tvrecordings) | Window.IsActive(addonbrowser)]</visible>
		</control>
		
		<!--quality-->
		<control type="label">
			<right>5</right>
			<width>80</width>
			<align>right</align>
			<label>[B]$VAR[HDIndicator][/B]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
			<font>Light28</font>
            <visible>![Window.IsActive(tvchannels) | Window.IsActive(tvguide) | Window.IsActive(tvtimers) | Window.IsActive(tvsearch) | Window.IsActive(tvrecordings) | Window.IsActive(addonbrowser)]</visible>
			<visible>![[Skin.HasSetting(WatchedIndicator.Watched) + StringCompare(ListItem.Overlay,OverlayWatched.png)] | [Skin.HasSetting(WatchedIndicator.Sets) + SubString(ListItem.Path,videodb://movies/sets/)] | [Skin.HasSetting(WatchedIndicator.Progress) + ListItem.IsResumable] | [Skin.HasSetting(WatchedIndicator.Episodes) + IntegerGreaterThan(ListItem.Property(UnWatchedEpisodes),0)] | ListItem.IsPlaying | ListItem.IsRecording | Skin.HasSetting(WatchedIndicator.UnWatched)]</visible>
		</control>
		
		<!--Rating-->
		<control type="label">
			<right>80</right>
			<width>80</width>
			<align>center</align>
			<label>$INFO[ListItem.Rating]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
			<font>Light28</font>
            <visible>![Window.IsActive(tvchannels) | Window.IsActive(tvguide) | Window.IsActive(tvtimers) | Window.IsActive(tvsearch) | Window.IsActive(tvrecordings) | Window.IsActive(addonbrowser)]</visible>
			<visible>!Control.IsVisible(51) + !Control.IsVisible(515)</visible>
		</control>
		
		
		<!--runtime-->
		<control type="label">
			<right>160</right>
			<width>140</width>
			<align>center</align>
			<label>$INFO[ListItem.Duration,, min.]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
			<visible>![Skin.HasSetting(BigListViewShowInfo) + Control.IsVisible(51)] + !Control.IsVisible(515)</visible>
            <visible>![Window.IsActive(tvchannels) | Window.IsActive(tvguide) | Window.IsActive(tvtimers) | Window.IsActive(tvsearch) | Window.IsActive(tvrecordings) | Window.IsActive(addonbrowser)]</visible>
			<font>Light28</font>
		</control>
		
		<!--Year-->
		<control type="label">
			<right>320</right>
			<width>110</width>
			<align>center</align>
			<label>$INFO[ListItem.Year]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
			<visible>![Skin.HasSetting(BigListViewShowInfo) + Control.IsVisible(51)] + !Control.IsVisible(515)</visible>
            <visible>![Window.IsActive(tvchannels) | Window.IsActive(tvguide) | Window.IsActive(tvtimers) | Window.IsActive(tvsearch) | Window.IsActive(tvrecordings) | Window.IsActive(addonbrowser)]</visible>
			<font>Light28</font>
		</control>
		
		<include>WatchedIndicatorSmall</include>
		
		<control type="image">
			<bottom>0</bottom>
			<posy>0</posy>
			<height>1</height>
			<texture>diffuse/panel.png</texture>
			<colordiffuse>grey</colordiffuse>
		</control>
	</include>

