<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">6</defaultcontrol>
	
    <controls>
        <control type="group">
            <!--Dialog Overlay-->
            <include>DialogOverlayExtra</include>
            <!--Dialog Picture Info-->
            <control type="group">
                <include>animation_window_open_close</include>
                <control type="button" id="6">
                    <onfocus>SetFocus(5)</onfocus>
                    <texturefocus>-</texturefocus>
                    <texturenofocus>-</texturenofocus>
                </control>
                         <!-- background panel -->
                <control type="image">
                    <posx>367</posx>
                    <posy>236</posy>
                    <width>1190</width>
                    <height>690</height>
                    <texture border="15">diffuse/bgpanel.png</texture>
                    <colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
                </control>
                <control type="image">
                    <posx>367</posx>
                    <posy>236</posy>
                    <width>1190</width>
                    <height>690</height>
                    <texture border="15">diffuse/bgpanel.png</texture>
                    <bordersize>10</bordersize>
                    <colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
                </control>

                <!--Header-->
                <control type="label">
                    <description>Heading</description>
                    <posx>415</posx>
                    <posy>225</posy>
                    <width>1100</width>
                    <height>100</height>
                    <label>$LOCALIZE[13406]</label>
                    <include>DialogHeader_Alt</include>
                    <align>center</align>
                    <wrapmultiline>true</wrapmultiline>
                </control>
                <control type="list" id="5">
                    <posx>415</posx>
                    <posy>315</posy>
                    <width>1100</width>
                    <height>480</height>
                    <onleft>8000</onleft>
                    <onright>8000</onright>
                    <onup>5</onup>
                    <ondown>5</ondown>
                    <pagecontrol>60</pagecontrol>
                    <scrolltime tween="cubic" easing="out">500</scrolltime>
                    <itemlayout height="60" width="1100">
                        <control type="image">
                            <posx>0</posx>
                            <posy>1</posy>
                            <width>100%</width>
                            <height>60</height>
                            <texture>dialogs/default/separator.png</texture>
                        </control>
                        <control type="label">
                            <posx>20</posx>
                            <posy>0</posy>
                            <width>604</width>
                            <height>60</height>
                            <info>ListItem.Label</info>
                            <include>DialogListNF</include>
                            <align>left</align>
                            <aligny>center</aligny>
                            <scroll>false</scroll>
                        </control>
                        <control type="label">
                            <right>20</right>
                            <posy>0</posy>
                            <width>604</width>
                            <height>60</height>
                            <info>ListItem.Label2</info>
                            <include>DialogListNF</include>
                            <align>right</align>
                            <aligny>center</aligny>
                            <scroll>false</scroll>
                        </control>
                    </itemlayout>
                    <focusedlayout height="60" width="1100">
                        <control type="group">
                            <visible>!Control.HasFocus(5)</visible>
                            <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="inout" condition="![Container(5).Scrolling | Container(5).OnScrollNext | Container(5).OnScrollPrevious]">Visible</animation>
                            <animation effect="fade" start="100" end="0" time="300" tween="sine" easing="inout" condition="![Container(5).Scrolling | Container(5).OnScrollNext | Container(5).OnScrollPrevious]">Hidden</animation>
                            <control type="image">
                                <posx>0</posx>
                                <posy>1</posy>
                                <width>100%</width>
                                <height>60</height>
                                <texture>dialogs/default/separator.png</texture>
                            </control>
                            <control type="label">
                                <posx>20</posx>
                                <posy>0</posy>
                                <width>604</width>
                                <height>60</height>
                                <info>ListItem.Label</info>
                                <include>DialogListNF</include>
                                <align>left</align>
                                <aligny>center</aligny>
                                <scroll>false</scroll>
                            </control>
                            <control type="label">
                                <right>20</right>
                                <posy>0</posy>
                                <width>604</width>
                                <height>60</height>
                                <info>ListItem.Label2</info>
                                <include>DialogListNF</include>
                                <align>right</align>
                                <aligny>center</aligny>
                                <scroll>false</scroll>
                            </control>
                        </control>
                        <control type="group">
                            <visible>Control.HasFocus(5)</visible>
                            <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="inout" condition="![Container(5).Scrolling | Container(5).OnScrollNext | Container(5).OnScrollPrevious]">Visible</animation>
                            <animation effect="fade" start="100" end="0" time="300" tween="sine" easing="inout" condition="![Container(5).Scrolling | Container(5).OnScrollNext | Container(5).OnScrollPrevious]">Hidden</animation>
                            <control type="image">
                                <width>100%</width>
                                <height>60</height>
                                <texture border="5">diffuse/panel.png</texture><colordiffuse>$INFO[Skin.String(ButtonFocusColor)]</colordiffuse>
                            </control>
                            <control type="label">
                                <posx>20</posx>
                                <posy>0</posy>
                                <width>604</width>
                                <height>60</height>
                                <info>ListItem.Label</info>
                                <include>DialogListFO</include>
                                <align>left</align>
                                <aligny>center</aligny>
                                <scroll>false</scroll>
                            </control>
                            <control type="label">
                                <right>20</right>
                                <posy>0</posy>
                                <width>604</width>
                                <height>60</height>
                                <info>ListItem.Label2</info>
                                <include>DialogListFO</include>
                                <align>right</align>
                                <aligny>center</aligny>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
                         <control type="scrollbar" id="60">
                    <posx>1520</posx>
                    <posy>315</posy>
                    <height>480</height>
                    <onup>60</onup>
                    <ondown>60</ondown>
                    <onleft>3</onleft>
                    <animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
                    <animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
                </control>
                         <!--Buttons-->
                <control type="grouplist" id="8000">
                    <posx>410</posx>
                    <posy>820</posy>
                    <width>1050</width>
                    <height>690</height>
                    <orientation>horizontal</orientation>
                    <onup condition="Control.IsVisible(6)">6</onup>
                    <ondown condition="Control.IsVisible(6)">6</ondown>
                    <onup condition="!Control.IsVisible(6)">3</onup>
                    <ondown condition="!Control.IsVisible(6)">3</ondown>
                    <control type="button" id="7">
                        <right>0</right>
                        <description>Close</description>
                        <label>$LOCALIZE[222]</label>
                        <width>500</width>
                        <include>DialogButtonOther</include>
                        <height>80</height>
                        <visible>true</visible>
                        <onclick>Close</onclick>
                    </control>
                </control>
                 </control>
        </control>
    </controls>
</window>