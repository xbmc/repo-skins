<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_521_Panel_Low">
	
		<!-- panel no info -->
        <control type="group">
            <visible>Control.IsVisible(521)</visible>
            <include>animation_view_change</include>
			
			<control type="panel" id="521">
                <posx>40</posx>
                <bottom>13%</bottom>
                <height>496</height>
                <width>1860</width>
                <onup>521</onup>
                <ondown>521</ondown>
                <onleft>9000</onleft>
                <onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
        <onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="31681">icons</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>vertical</orientation>
                <preloaditems>2</preloaditems>
				<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),521) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
                <!-- itemlayout movies -->
                <itemlayout height="248" width="168">
                    <control type="group">
                        <width>162</width>
                        <height>240</height>
                        <include>SmallPosterPanelLayout</include>
                      </control>
                </itemlayout>
                <!-- focussed layout movies -->
                <focusedlayout height="248" width="165">
                    <control type="group">
                        <width>162</width>
                        <height>240</height>
                        <include>SmallPosterPanelLayoutFocus</include>
                        <animation type="focus">
							<effect type="zoom" start="100" end="115" center="auto" time="150" />
						</animation>
						<animation type="unfocus">
							<effect type="zoom" start="115" end="100" center="auto" time="150" />
						</animation>
                      </control>
                </focusedlayout>
			</control>
		
			<!--vertical Scollbar-->
			<control type="scrollbar" id="60">
				<visible>Control.IsVisible(521) + IntegerGreaterThan(Container.Numitems,0)</visible>
				<right>15</right>
				<bottom>13%</bottom>
				<height>496</height>
				<onup>60</onup>
				<ondown>6000</ondown>
				<onleft>521</onleft>
				<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
			</control>
    
		</control>

    </include>
</includes>