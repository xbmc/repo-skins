<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <!--Default-->
    <include name="View_501_Landscape">
		<control type="group">
			<defaultcontrol always="true">501</defaultcontrol>
		    <visible>Control.IsVisible(501)</visible>
			<include>animation_view_change</include>

			<control type="panel" id="501">
				<posx>60</posx>
				<width>1880</width>
				<bottom>150</bottom>
                <height>700</height>
				<onup condition="Skin.HasSetting(View_501_HorizontalNavigation)">9000</onup>
                <onup condition="!Skin.HasSetting(View_501_HorizontalNavigation)">501</onup>
				<ondown condition="Skin.HasSetting(View_501_HorizontalNavigation)">6000</ondown>
                <ondown condition="!Skin.HasSetting(View_501_HorizontalNavigation)">501</ondown>
				<onleft condition="Skin.HasSetting(View_501_HorizontalNavigation)">501</onleft>
                <onleft condition="!Skin.HasSetting(View_501_HorizontalNavigation)">9000</onleft>
				<onright condition="Skin.HasSetting(View_501_HorizontalNavigation)">501</onright>
                <onright condition="!Skin.HasSetting(View_501_HorizontalNavigation)">6000</onright>
				<pagecontrol>60</pagecontrol>
				<viewtype label="31430">thumbnail</viewtype>
                <include condition="Skin.HasSetting(View_501_HorizontalNavigation)">navigation_horizontal</include>
				<orientation>vertical</orientation>
				<preloaditems>4</preloaditems>
				<scrolltime tween="cubic" easing="inout">500</scrolltime>
				<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),501) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
                <visible>!Container.Content(files)</visible>
				<itemlayout width="620" height="350" condition="![Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
                    <control type="group">
                        <width>565</width>
                        <height>325</height>
                        <include>LandscapeLayout</include>
                    </control>
				</itemlayout>
				<focusedlayout width="620" height="350" condition="![Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
					<control type="group">
                        <width>565</width>
                        <height>325</height>
						<include>LandscapeLayoutFocus</include>
					</control>
				</focusedlayout>
                <itemlayout width="620" height="350" condition="[Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
                    <control type="group">
                        <width>493</width>
                        <left>30</left>
                        <height>340</height>
                        <include>LandscapeLayout</include>
                    </control>
				</itemlayout>
				<focusedlayout width="620" height="350" condition="[Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
					<control type="group">
                        <width>493</width>
                        <height>340</height>
                        <left>30</left>
						<include>LandscapeLayoutFocus</include>
					</control>
				</focusedlayout>
			</control>

			
			<control type="group">
                <!--horizontal Scrollbar-->
				<control type="scrollbar" id="60">
					<visible>Control.IsVisible(501) + IntegerGreaterThan(Container.Numitems,0) + Skin.HasSetting(View_501_HorizontalNavigation)</visible>
					<left>60</left>
					<bottom>140</bottom>
					<width>1800</width>
					<height>15</height>
					<onup>501</onup>
					<onleft>60</onleft>
					<onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
                    <onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
					<orientation>horizontal</orientation>
					<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
					<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
				</control>
                <!--vertical Scollbar-->
                <control type="scrollbar" id="60">
                    <visible>Control.IsVisible(501) + IntegerGreaterThan(Container.Numitems,0) + !Skin.HasSetting(View_501_HorizontalNavigation)</visible>
                    <right>15</right>
                    <bottom>150</bottom>
                    <height>700</height>
                    <onup>60</onup>
                    <ondown>6000</ondown>
                    <onleft>501</onleft>
                    <animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
                    <animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
                </control>
			</control>
     			
		</control>
	
	</include>
</includes>