<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">9000</defaultcontrol>
    <controls>
        <!--Dialog Overlay-->
		<control type="group">
			<visible>!Window.IsActive(VideoFullScreen.xml) + !Window.IsActive(filebrowser)</visible>
			<include>DialogOverlayExtra</include>
			<animation effect="fade" time="250" start="0" end="100" reversible="false">WindowOpen</animation>
        </control>
		
        <!--Dialog Info-->
        <control type="group">
            <visible>!Window.IsVisible(yesnodialog) + !Window.IsActive(filebrowser)</visible>
			<animation type="WindowOpen">
				<effect type="slide" start="1200" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="1200" time="250" tween="cubic" easing="inout" />
			</animation>
            <!--Panel-->
            <control type="image">
                <posx>630</posx>
                <posy>0</posy>
                <width>1340</width>
                <height>100%</height>
				<texture border="15">diffuse/bgpanel.png</texture>
				<animation effect="fade" end="99" time="0" condition="true">Conditional</animation>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>

			<!-- close dialog -->
			<control type="button">
				<label></label>
				<include>animation_fade_visible_hidden</include>
				<width>60</width>
				<height>60</height>
				<right>60</right>
                <posy>40</posy>
				<font>-</font>
				<texturefocus colordiffuse="white">touchcontrols/icon_close.png</texturefocus>
				<texturenofocus colordiffuse="bbwhite">touchcontrols/icon_close.png</texturenofocus>
				<onclick>back</onclick>
				<visible>Skin.HasSetting(EnableTouchSupport)</visible>
			</control>
			
           <!--Header-->
            <control type="label">
                <description>Heading</description>
                <posx>700</posx>
                <posy>10</posy>
                <width>1200</width>
				<font>Bold45</font>
				<shadowcolor>black</shadowcolor>
                <align>left</align>
				<height>100</height>
				<label>658</label>
            </control>
			<!-- Artist -->
			<control type="label">
				<posx>700</posx>
				<posy>150</posy>
				<width>800</width>
				<font>Reg36</font>
				<align>left</align>
				<textcolor>aawhite</textcolor>
				<label>$INFO[ListItem.Artist] - $INFO[ListItem.Title]</label>
            </control>
			
			<control type="image">
				<posx>680</posx>
                <posy>220</posy>
				<width>1200</width>
				<height>250</height>
				<texture border="5">dialogs/default/inner.png</texture>
			</control>
			
			<!--Icon-->
            <control type="image" id="3">
                <right>-5</right>
                <posy>235</posy>
                <width>350</width>
                <height>220</height>
                <fadetime>800</fadetime>
                <aspectratio align="center" aligny="center">keep</aspectratio>
                <texture background="true" diffuse="diffuse/panel.png">$INFO[ListItem.Icon]</texture>
            </control>
			
            <control type="grouplist">
                <posx>680</posx>
                <posy>220</posy>

                <control type="button">
                    <description>Genre</description>
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[515]:</label>
                    <label2>$INFO[ListItem.Genre]</label2>
                    <enable>false</enable>
					<disabledcolor>white</disabledcolor>
                </control>
                <control type="button">
                    <description>Year</description>
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[562]:</label>
                    <label2>$INFO[ListItem.Year]</label2>
                    <enable>false</enable>
					<disabledcolor>white</disabledcolor>
                </control>
                <control type="button">
                    <description>Rating</description>
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <texturenofocus>-</texturenofocus>
                    <label>$LOCALIZE[563]:</label>
                    <label2 fallback="161">$INFO[ListItem.Rating]</label2>
                    <enable>false</enable>
					<disabledcolor>white</disabledcolor>
                </control>
            </control>
            <control type="image">
                <posx>680</posx>
                <posy>486</posy>
                <width>1200</width>
                <height>430</height>
                <texture border="5">dialogs/default/inner.png</texture>
            </control>
            <control type="textbox" id="4">
                <description>Plot value</description>
                <posx>700</posx>
                <posy>506</posy>
                <width>1160</width>
                <height>388</height>
                <align>justify</align>
                <pagecontrol>60</pagecontrol>
                <label fallback="19055">$INFO[ListItem.Plot]</label>
            </control>
			<!--Button Group-->
            <control type="grouplist" id="9000">
                <posx>680</posx>
                <posy>940</posy>
				<orientation>horizontal</orientation>
				<itemgap>20</itemgap>
                <defaultcontrol>5</defaultcontrol>
				<onup>50</onup>
				<control type="button" id="10">
                    <!--OK-->
                    <width>290</width>
                    <height>80</height>
                    <align>center</align>
                    <label>186</label>
					<include>DialogButtonOther</include>
                </control>
				<control type="button" id="11">
                    <!--Cancel-->
                    <width>290</width>
                    <height>80</height>
                    <align>center</align>
                    <label>222</label>
					<include>DialogButtonOther</include>
                </control>
				<control type="button" id="12">
                    <!--Album Info button-->
                    <width>290</width>
                    <height>80</height>
                    <align>center</align>
					<include>DialogButtonOther</include>
                    <label>10523</label>
                </control>
                <control type="button" id="13">
                    <!--Get Thumb button-->
                    <width>290</width>
                    <height>80</height>
                    <align>center</align>
					<include>DialogButtonOther</include>
                    <label>13405</label>
					<enable>!Skin.HasSetting(KioskMode.Enabled)</enable>
                </control>
            </control>
        </control>
    </controls>
</window>