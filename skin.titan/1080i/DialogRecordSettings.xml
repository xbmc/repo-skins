<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window type="dialog">
    <defaultcontrol always="true">10</defaultcontrol>
    <controls>
        <!--Dialog Overlay-->
		<control type="group">
			<visible>!window.isactive(fullscreenvideo)</visible>
			<include>DialogOverlayExtra</include>
			<animation effect="fade" time="250" start="0" end="100" reversible="false">WindowOpen</animation>
        </control>
		
        <!--Dialog PVR Guid Info-->
        <control type="group">
            <visible>!Window.IsVisible(yesnodialog)</visible>
			<animation type="WindowOpen">
				<effect type="slide" start="1200" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="1200" time="250" tween="cubic" easing="inout" />
			</animation>
            <!--Panel-->
           <control type="image">
                <posx>640</posx>
                <posy>0</posy>
                <width>1340</width>
                <height>100%</height>
                <texture border="15">diffuse/bgpanel.png</texture>
				
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
            <!--Header-->
            <control type="label">
                <description>Heading</description>
                <posx>700</posx>
                <posy>10</posy>
                <width>1200</width>
				<font>Bold45</font>
				<textcolor>$INFO[Skin.String(GeneralHighlightTextColor)]</textcolor>
                <label>$ADDON[pvr.mediaportal.tvserver 30100]</label>
                <height>100</height>
                <align>left</align>
            </control>
			<!-- program title -->
			
			<control type="grouplist">
				<orientation>horizontal</orientation>
				<posx>700</posx>
				<posy>150</posy>
				<width>1200</width>
				<height>50</height>
				<control type="label" id="20">
					<width>auto</width>
					<font>Reg36</font>
					<aligny>bottom</aligny>
					<height>50</height>
					
				</control>
				<control type="label">
					<width>auto</width>
					<font>Reg28</font>
					<align>left</align>
					<label> • </label>
					<aligny>bottom</aligny>
					<height>50</height>
					
				</control>
				<control type="label" id="21">
					<width>auto</width>
					<font>Reg28</font>
					<align>left</align>
					<aligny>bottom</aligny>
					<height>50</height>
					
				</control>
				<control type="label">
					<width>auto</width>
					<font>Reg28</font>
					<align>left</align>
					<label> • </label>
					<aligny>bottom</aligny>
					<height>50</height>
					
				</control>
				<control type="label" id="22">
					<width>auto</width>
					<font>Reg28</font>
					<align>left</align>
					<aligny>bottom</aligny>
					<height>50</height>
					
				</control>
			</control>
			
            <control type="group">
                <posx>680</posx>
                <posy>220</posy>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1200</width>
                    <height>700</height>
                    <texture border="5">dialogs/default/inner.png</texture>
                </control>
                         <control type="grouplist" id="23">
                    <posx>0</posx>
                    <posy>25</posy>
                    <itemgap>5</itemgap>
                    <width>1200</width>
                    <height>750</height>
                    <onup>9001</onup>
                    <ondown>9001</ondown>
                    <control type="spincontrolex" id="10">
                        <description>Frequency</description>
                        <width>1200</width>
                        <label>$ADDON[pvr.mediaportal.tvserver 30101]</label>
                        <align>left</align>
						<textoffsetx>20</textoffsetx>
                    </control>
                    <control type="spincontrolex" id="11">
                        <description>Airtime</description>
                        <width>1200</width>
                        <label>$ADDON[pvr.mediaportal.tvserver 30102]</label>
                        <align>left</align>
						<textoffsetx>20</textoffsetx>
                    </control>
                    <control type="spincontrolex" id="12">
                        <description>Channels</description>
                        <width>1200</width>
                        <label>$ADDON[pvr.mediaportal.tvserver 30103]</label>
						<textoffsetx>20</textoffsetx>
                    </control>
                    <control type="image" id="24">
                        <description>Separator</description>
                        <height>2</height>
                        <width>1200</width>
                        <aspectratio align="left" aligny="top">stretch</aspectratio>
                        <texture>common/separator.png</texture>
                    </control>
                    <control type="spincontrolex" id="13">
                        <description>Keep</description>
                        <width>1200</width>
                        <label>$ADDON[pvr.mediaportal.tvserver 30104]</label>
                        <align>left</align>
						<textoffsetx>20</textoffsetx>
                    </control>
                    <control type="spincontrolex" id="14">
                        <description>Record minutes before start</description>
                        <width>1200</width>
                        <label>$ADDON[pvr.mediaportal.tvserver 30105]</label>
                        <align>left</align>
						<textoffsetx>20</textoffsetx>
                    </control>
                    <control type="spincontrolex" id="15">
                        <description>Record minutes after end</description>
                        <width>1200</width>
                        <label>$ADDON[pvr.mediaportal.tvserver 30106]</label>
                        <align>left</align>
						<textoffsetx>20</textoffsetx>
                    </control>
                </control>
            </control>
            <!--Button Group-->
            <control type="grouplist" id="9001">
                <posx>680</posx>
                <posy>940</posy>
				<orientation>horizontal</orientation>
				<itemgap>20</itemgap>
                <defaultcontrol>1</defaultcontrol>
                         <control type="button" id="1">
                    <width>350</width>
                    <align>center</align>
					<description>OK</description>
                    <label>186</label>
                    <onup>15</onup>
                    <ondown>15</ondown>
					<font>Reg26</font>
                </control>
                <control type="button" id="2">
                    <width>350</width>
                    <description>Close</description>
                    <label>$LOCALIZE[222]</label>
                    <align>center</align>
                    <onup>15</onup>
                    <ondown>15</ondown>
					<font>Reg26</font>
                </control>
            </control>
        </control>
    </controls>
</window>
		
        