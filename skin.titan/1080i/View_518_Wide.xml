<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>
    
    <variable name="WideView_LargeEpisodeLabel">
        <value condition="!IntegerGreaterThan(ListItem.Episode,9) + !IsEmpty(ListItem.Episode)">$INFO[ListItem.Episode,0]</value>
        <value condition="IntegerGreaterThan(ListItem.Episode,9) + !IsEmpty(ListItem.Episode)">$INFO[ListItem.Episode]</value>
    </variable>

    <include name="View_518_Wide">
        <control type="group">
            <include>animation_view_change</include>
            <visible>Control.IsVisible(518)</visible>
            <control type="group">
                <control type="fixedlist" id="518">
                    <posx>60</posx>
                    <bottom>13%</bottom>
                    <height>810</height>
                    <width>1800</width>
                    <onup>518</onup>
                    <ondown>518</ondown>
                    <onleft>9000</onleft>
                    <onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
        <onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
                    <orientation>vertical</orientation>
                    <pagecontrol>60</pagecontrol>
                    <preloaditems>2</preloaditems>
                    <focusposition>4</focusposition>
                    <viewtype label="31659">list</viewtype>
                    <scrolltime tween="quadratic">400</scrolltime>
                    <itemlayout width="1800" height="100">
                        <control type="group">
                            <width>1800</width>
                            <height>100</height>
                            <animation effect="fade" start="100" end="50" time="0" condition="true">Conditional</animation>
                            <control type="image">
                                <texture border="5">diffuse/wide.png</texture>
                                <colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
                                <include condition="Skin.String(thumbsborder_unfocused, 0)">thumbborder_0</include>
                                <include condition="Skin.String(thumbsborder_unfocused, 2)">thumbborder_2</include>
                                <include condition="Skin.String(thumbsborder_unfocused, 4)">thumbborder_4</include>
                                <include condition="Skin.String(thumbsborder_unfocused, 6)">thumbborder_6</include>
                            </control>
                            <control type="image">
                                <!--Panel icon image-->
                                <width>30%</width>
                                <height>100%</height>
                                <bordersize>8</bordersize>
                                <texture background="true" diffuse="diffuse/wide.png">$VAR[LandscapeImage]</texture>
                                <aspectratio scalediffuse="false" align="center" aligny="center">scale</aspectratio>
                            </control>
                            <control type="label">
                                <left>31%</left>
                                <width>6%</width>
                                <top>0</top>
                                <height>100</height>
                                <aligny>center</aligny>
                                <align>left</align>
                                <font>Bold75</font>
                                <textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
                                <selectedcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</selectedcolor>
                                <label>$VAR[WideView_LargeEpisodeLabel]</label>
                                <visible>Container.Content(episodes) + !IsEmpty(ListItem.episode)</visible>
                            </control>
                            <control type="label">
                                <left>31%</left>
                                <width>61%</width>
                                <top>8</top>
                                <height>50</height>
                                <align>left</align>
                                <font>Bold30</font>
                                <textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
                                <selectedcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</selectedcolor>
                                <label>$INFO[ListItem.Label]</label>
                                <animation effect="slide" start="0" end="120" time="0" condition="Container.Content(episodes)">Conditional</animation>
                            </control>
                            <control type="label">
                                <left>31%</left>
                                <width>63%</width>
                                <top>50</top>
                                <aligny>center</aligny>
                                <height>38</height>
                                <align>left</align>
                                <font>Reg26</font>
                                <textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
                                <selectedcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</selectedcolor>
                                <label fallback="19055">$VAR[ListDetails]</label>
                                <animation effect="slide" start="0" end="120" time="0" condition="Container.Content(episodes)">Conditional</animation>
                            </control>
                            <control type="group">
                                <right>8</right>
                                <top>8</top>
                                <include>WatchedIndicatorNormal</include>
                             </control>
                        </control>
                    </itemlayout>
                    <focusedlayout width="1800" height="310">
                        <control type="group">
                            <width>1800</width>
                            <top>0</top>
                            <height>310</height>
                            <control type="image">
                                <texture border="5">diffuse/wide.png</texture>
                                <colordiffuse>$VAR[ViewDetailsFocusColor]</colordiffuse>
                                <include condition="Skin.String(thumbsborder_unfocused, 0)">thumbborder_0</include>
                                <include condition="Skin.String(thumbsborder_unfocused, 2)">thumbborder_2</include>
                                <include condition="Skin.String(thumbsborder_unfocused, 4)">thumbborder_4</include>
                                <include condition="Skin.String(thumbsborder_unfocused, 6)">thumbborder_6</include>
                            </control>
                            <control type="image">
                                <!--Panel icon image-->
                                <width>30%</width>
                                <height>100%</height>
                                <bordersize>8</bordersize>
                                <texture background="true" diffuse="diffuse/wide.png">$VAR[LandscapeImage]</texture>
                                <aspectratio scalediffuse="false" align="left" aligny="center">stretch</aspectratio>
                            </control>
                             <control type="label">
                                <left>31%</left>
                                <width>6%</width>
                                <top>20</top>
                                <height>100</height>
                                <aligny>center</aligny>
                                <align>left</align>
                                <font>Bold74</font>
                                <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                                <selectedcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</selectedcolor>
                                <label>$VAR[WideView_LargeEpisodeLabel]</label>
                                <visible>Container.Content(episodes) + !IsEmpty(ListItem.episode)</visible>
                            </control>
                            <control type="label">
                                <left>31%</left>
                                <width>61%</width>
                                <top>20</top>
                                <height>50</height>
                                <align>left</align>
                                <font>Bold30</font>
                                <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                                <selectedcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</selectedcolor>
                                <label>$INFO[ListItem.Label]</label>
                                <animation effect="slide" start="0" end="120" time="0" condition="Container.Content(episodes)">Conditional</animation>
                            </control>
                            <control type="label">
                                <left>31%</left>
                                <width>62%</width>
                                <top>70</top>
                                <aligny>center</aligny>
                                <height>38</height>
                                <align>left</align>
                                <font>Reg26</font>
                                <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                                <selectedcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</selectedcolor>
                                <label fallback="19055">$VAR[ListDetails]</label>
                                <animation effect="slide" start="0" end="120" time="0" condition="Container.Content(episodes)">Conditional</animation>
                            </control>
                            <control type="textbox">
                                <left>31%</left>
                                <right>30</right>
                                <top>110</top>
                                <height>188</height>
                                <align>justify</align>
                                <font>Reg26</font>
                                <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                                <selectedcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</selectedcolor>
                                <label>$VAR[Plots]</label>
                                <autoscroll delay="4000" time="4000" repeat="2000">true</autoscroll>
                            </control>
                            <control type="group">
                                <right>8</right>
                                <top>8</top>
                                <include>WatchedIndicatorNormal</include>
                             </control>
                        </control>
                    </focusedlayout>
                </control>
                <!--vertical Scollbar-->
                <control type="scrollbar" id="60">
                    <visible>Control.IsVisible(518) + IntegerGreaterThan(Container.Numitems,0)</visible>
                    <right>15</right>
                    <bottom>13%</bottom>
                    <height>810</height>
                    <onup>60</onup>
                    <ondown>6000</ondown>
                    <onleft>518</onleft>
                    <animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
                    <animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
                </control>
            </control>
         </control>
    </include>
   

</includes>
