<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">5</defaultcontrol>
    <allowoverlay>no</allowoverlay>
	
    <controls>
        <!--Dialog Overlay-->
		<include condition="!Window.IsActive(ProfileSettings.xml)">DialogOverlayExtra</include>
        <!--Lock Settings-->
        <control type="group">
            <include>animation_window_open_close</include>
            <visible>!Window.IsVisible(virtualkeyboard) + !Window.IsVisible(numericinput) + !Window.IsVisible(okdialog)</visible>
			
			<control type="image">
                <!--Panel-->
                <posx>604</posx>
                <posy>160</posy>
                <width>712</width>
                <height>720</height>
                <texture border="15">diffuse/bgpanel.png</texture>
				
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
			<control type="image">
                <!--Panel-->
                <posx>604</posx>
                <posy>160</posy>
                <width>712</width>
                <height>720</height>
				<bordersize>10</bordersize>
                <texture border="15">diffuse/bgpanel.png</texture>
				
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
			
			<control type="label" id="2">
                <description>Heading</description>
                <posx>473</posx>
                <posy>190</posy>
                <width>974</width>
                <label>$LOCALIZE[20043]</label>
                <include>DialogHeader</include>
                <align>center</align>
            </control>
			
            <control type="image">
                <posx>638</posx>
                <posy>293</posy>
                <width>644</width>
                <height>61</height>
                <texture border="5">dialogs/default/inner.png</texture>
            </control>
            <control type="image">
                <posx>638</posx>
                <posy>355</posy>
                <width>644</width>
                <height>421</height>
                <texture border="5">dialogs/default/inner.png</texture>
            </control>
            <control type="grouplist" id="5">
                <description>Control Area</description>
                <posx>638</posx>
                <posy>293</posy>
                <width>644</width>
                <height>494</height>
                <itemgap>0</itemgap>
                <onleft>9000</onleft>
                <onright>9000</onright>
                <onup>9000</onup>
                <ondown>5</ondown>
            </control>
            <control type="button" id="7">
                <description>default</description>
                <height>60</height>
                <textoffsetx>20</textoffsetx>
                <align>left</align>
                <include>DialogButton</include>
                <texturefocus colordiffuse="$INFO[Skin.String(ButtonFocusColor)]">colors/color_white.png</texturefocus>
                <texturenofocus>-</texturenofocus>
            </control>
            <control type="radiobutton" id="8">
                <description>radioButton</description>
                <height>60</height>
                <align>left</align>
                <textoffsetx>20</textoffsetx>
                <radioposx>538</radioposx>
                <include>DialogButton</include>
                <visible>!Window.IsActive(contextmenu)</visible>
                <animation effect="fade" time="300" start="0" end="100" tween="sine" easing="out">Visible</animation>
                <animation effect="fade" time="300" start="100" end="0" tween="sine" easing="in">Hidden</animation>
            </control>
            <control type="spincontrolex" id="9">
                <description>Directory Content</description>
                <include>DialogButton</include>
                <textoffsetx>20</textoffsetx>
                <spinposx>9</spinposx>
                <visible>!Window.IsActive(contextmenu)</visible>
                <animation effect="fade" time="300" start="0" end="100" tween="sine" easing="out">Visible</animation>
                <animation effect="fade" time="300" start="100" end="0" tween="sine" easing="in">Hidden</animation>
            </control>
            <control type="image" id="11">
                <description>separator image</description>
                <height>14</height>
                <texture>-</texture>
                <visible>!Window.IsActive(contextmenu)</visible>
                <animation effect="fade" time="300" start="0" end="100" tween="sine" easing="out">Visible</animation>
                <animation effect="fade" time="300" start="100" end="0" tween="sine" easing="in">Hidden</animation>
            </control>
            <control type="group" id="9000">
                <posx>626</posx>
                <posy>783</posy>
                <control type="button" id="28">
                    <description>OK</description>
                    <label>186</label>
					<width>300</width>
                    <include>DialogButtonOther</include>
                    <onleft>29</onleft>
                    <onright>29</onright>
                    <onup>5</onup>
                    <ondown>5</ondown>
                    <animation effect="fade" start="100" end="75" time="0" condition="!Control.IsEnabled(28)">Conditional</animation>
                </control>
                <control type="button" id="29">
                    <description>Cancel</description>
                    <posx>360</posx>
					<width>300</width>
                    <label>$LOCALIZE[222]</label>
                    <include>DialogButtonOther</include>
                    <onleft>28</onleft>
                    <onright>28</onright>
                    <onup>5</onup>
                    <ondown>5</ondown>
                    <animation effect="fade" start="100" end="75" time="0" condition="!Control.IsEnabled(29)">Conditional</animation>
                </control>
            </control>
        </control>
    </controls>
</window>