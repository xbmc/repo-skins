<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">1</defaultcontrol>
    <controls>
	
	<control type="group">
			<posx>-660</posx>
			<posy>0</posy>
			<animation type="WindowOpen">
				<effect type="slide" start="0" end="660" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="660" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<!--Panel-->
		<control type="image">
			<posy>0</posy>
			<posx>0</posx>
			<width>590</width>
			<height>100%</height>
			<texture border="5">diffuse/panel.png</texture>
			<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
        <control type="image">
			<posy>0</posy>
			<posx>0</posx>
			<width>585</width>
			<height>100%</height>
			<texture border="5">diffuse/panel.png</texture>
			<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
        <control type="image">
			<posy>0</posy>
			<posx>0</posx>
			<width>585</width>
			<height>100%</height>
			<texture border="5">diffuse/panel.png</texture>
			<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
		
		
		<!-- header -->
        <control type="label">
            <posx>10</posx>
            <posy>10</posy>
            <width>565</width>
            <height>100</height>
            <font>Bold45</font>
            <align>center</align>
            <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
            <label>$LOCALIZE[298] ($INFO[Container(11).NumItems])</label>
			<visible>!Window.IsActive(notification) + !Window.IsActive(extendedprogressdialog)</visible>
        </control>
            <!--Label Menu: -->
			<control type="image">
				<width>545</width>
                <posx>20</posx>
				<posy>115</posy>
				<height>210</height>
				<texture>$INFO[Container(11).ListItem.Icon]</texture>
				<aspectratio>scale</aspectratio>
			</control>	
			<control type="list" id="11">
                <!--List ID=11-->
                <width>545</width>
                <posx>20</posx>
                <posy>345</posy>
				<onright>Dialog.Close(all,true)</onright>
				<onleft>1</onleft>
                <height>455</height>
                <onup>11</onup>
                <ondown>1</ondown>
                <scrolltime>100</scrolltime>
				
				<itemlayout width="545" height="65">
					<control type="group">
						<control type="button">
							<label></label>
							<width>545</width>
							<height>60</height>
							<font>Reg24</font>
							<textcolor>blue</textcolor>
							<align>center</align>
							<aligny>center</aligny>
						</control>
						<control type="label"> <!--label-->
							<left>20</left>
							<width>545</width>
							<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, (,)]</label>
							<font>Reg24</font>
							<scroll>false</scroll>
							<textcolor>$INFO[Skin.String(ButtonTextColor)]</textcolor>
							<selectedcolor>$INFO[Skin.String(ButtonTextColor)]</selectedcolor>
							<disabledcolor>midgrey</disabledcolor>
						</control>
					</control>
				</itemlayout>
				
				<focusedlayout width="545" height="65">
					<control type="group">
						<control type="button">
							<label></label>
							<width>545</width>
							<height>60</height>
							<font>Reg24</font>
							<textcolor>blue</textcolor>
							<align>center</align>
							<aligny>center</aligny>
							<visible>!Control.HasFocus(11)</visible>
						</control>
						<control type="image">
							<width>545</width>
							<height>60</height>
							<texture diffuse="diffuse/panel.png" border="5" colordiffuse="$INFO[Skin.String(ButtonFocusColor)]">colors/color_white.png</texture>
							<visible>Control.HasFocus(11)</visible>
						</control>
						<control type="label"> <!--label-->
							<left>20</left>
							<width>545</width>
							<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, (,)]</label>
							<font>Reg24</font>
							<scroll>true</scroll>
							<textcolor>$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
							<selectedcolor>$INFO[Skin.String(ButtonFocusTextColor)]</selectedcolor>
							<visible>Control.HasFocus(11)</visible>
						</control>
						<control type="label"> <!--label-->
							<left>20</left>
							<width>320</width>
							<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, (,)]</label>
							<font>Reg24</font>
							<scroll>false</scroll>
							<textcolor>$INFO[Skin.String(ButtonTextColor)]</textcolor>
							<selectedcolor>$INFO[Skin.String(ButtonTextColor)]</selectedcolor>
							<visible>!Control.HasFocus(11)</visible>
						</control>
					</control>
				</focusedlayout>

			</control>
			
            <control type="grouplist" id="1">
                <!--Buttons-->
                <posx>20</posx>
                <posy>820</posy>
                <height>270</height>
                <width>545</width>
                <itemgap>5</itemgap>
                <orientation>vertical</orientation>
                <onup>11</onup>
                <onright>Dialog.Close(all,true)</onright>
                <control type="button" id="2">
                    <description>Add</description>
					<width>545</width>
					<include>DialogButtonOther</include>
                    <height>60</height>
					<label>15019</label>
                </control>
                <control type="button" id="3">
                    <description>Delete</description>
					<width>545</width>
					<include>DialogButtonOther</include>
                    <height>60</height>
					<label>117</label>
                </control>
				<control type="button" id="4">
                    <description>Episode Bookmarks</description>
					<width>545</width>
					<include>DialogButtonOther</include>
                    <height>60</height>
					<label>20406</label>
					<visible>videoplayer.content(episodes)</visible>
                </control>
				<control type="button" id="99">
                    <description>Close</description>
					<width>545</width>
					<include>DialogButtonOther</include>
                    <height>60</height>
					<label>222</label>
					<onclick>Dialog.Close(all,true)</onclick>
                </control>
            </control>
			
        </control>
	

    </controls>
</window>