<?xml version="1.0" encoding="utf-8"?>
<!--custom dialog for TV headend PVR-->
<window type="dialog">
    <defaultcontrol always="true">22</defaultcontrol>
    <controls>
        <!--Dialog Overlay-->
		<control type="group">
			<visible>!window.isactive(fullscreenvideo)</visible>
			<include>DialogOverlayExtra</include>
			<animation effect="fade" time="250" start="0" end="100" reversible="false">WindowOpen</animation>
        </control>
		
        <!--Dialog PVR Guid Info-->
        <control type="group">
            <visible>!Window.IsVisible(yesnodialog)</visible>
			<animation type="WindowOpen">
				<effect type="slide" start="1200" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="1200" time="250" tween="cubic" easing="inout" />
			</animation>
            <!--Panel-->
           <control type="image">
                <posx>640</posx>
                <posy>0</posy>
                <width>1340</width>
                <height>100%</height>
                <texture border="15">diffuse/bgpanel.png</texture>
				
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
            <!--Header-->
            <control type="label">
                <description>Heading</description>
                <posx>700</posx>
                <posy>10</posy>
                <width>1200</width>
				<font>Bold45</font>
				<textcolor>$INFO[Skin.String(GeneralHighlightTextColor)]</textcolor>
                <label>$ADDON[pvr.tvh.autorec 31020]</label>
                <height>100</height>
                <align>left</align>
            </control>
			
			
			<control type="grouplist">
				<orientation>horizontal</orientation>
				<posx>700</posx>
				<posy>150</posy>
				<width>1200</width>
				<height>50</height>
				<!-- program title -->
				<control type="label" id="31">
					<width>auto</width>
					<font>Reg36</font>
					<aligny>bottom</aligny>
					<height>50</height>
					
				</control>
			</control>
			
            <control type="group">
                <posx>680</posx>
                <posy>220</posy>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1200</width>
                    <height>700</height>
                    <texture border="5">dialogs/default/inner.png</texture>
                </control>
                         <control type="grouplist" id="9002">
                    <posx>0</posx>
                    <posy>25</posy>
                    <itemgap>5</itemgap>
                    <width>1200</width>
                    <height>750</height>
                    <onup>9001</onup>
                    <ondown>9001</ondown>
					<control type="button" id="21">
						<description>Record once</description>
						<width>1200</width>
						<label>$ADDON[pvr.tvh.autorec 31021]</label>
						<align>left</align>
						<textoffsetx>20</textoffsetx>
					</control>

                    <control type="button" id="22">
                        <description>Record every time</description>
                        <width>1200</width>
                        <label>$ADDON[pvr.tvh.autorec 31022]</label>
                        <align>left</align>
						<textoffsetx>20</textoffsetx>
                    </control>
					<control type="button" id="23">
                        <description>Record every week at this time</description>
                        <width>1200</width>
                        <label>$ADDON[pvr.tvh.autorec 31023]</label>
                        <align>left</align>
						<textoffsetx>20</textoffsetx>
                    </control>
					<control type="button" id="24">
                        <description>Record every day at this time</description>
                        <width>1200</width>
                        <label>$ADDON[pvr.tvh.autorec 31024]</label>
                        <align>left</align>
						<textoffsetx>20</textoffsetx>
                    </control>
					<control type="button" id="25">
                        <description>Record weekdays</description>
                        <width>1200</width>
                        <label>$ADDON[pvr.tvh.autorec 31025]</label>
                        <align>left</align>
						<textoffsetx>20</textoffsetx>
                    </control>
					<control type="button" id="26">
                        <description>Record weekends</description>
                        <width>1200</width>
                        <label>$ADDON[pvr.tvh.autorec 31026]</label>
                        <align>left</align>
						<textoffsetx>20</textoffsetx>
                    </control>
                </control>
            </control>
            <!--Button Group-->
            <control type="grouplist" id="9001">
                <posx>680</posx>
                <posy>940</posy>
				<orientation>horizontal</orientation>
				<itemgap>20</itemgap>
				<onup>9002</onup>
                         <control type="button" id="30">
                    <width>350</width>
                    <description>Close</description>
                    <label>$LOCALIZE[222]</label>
                    <align>center</align>
                    <onup>9002</onup>
					<font>Reg26</font>
                </control>
            </control>
        </control>
    </controls>
</window>
		
        