<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_520_Panel_Wall">
	
		<!-- panel no info -->
        <control type="group">
            <visible>Control.IsVisible(520)</visible>
            <include>animation_view_change</include>
			<include>GlobalBackground</include>
			
            <control type="panel" id="520">
                <posx>20</posx>
                <top>20</top>
                <height>1040</height>
                <width>1881</width>
                <onup>520</onup>
                <ondown>520</ondown>
                <onleft>9000</onleft>
                <onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
        <onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="31423">icons</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>vertical</orientation>
                <preloaditems>2</preloaditems>
				<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),520) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
                <animation effect="slide" end="0,80" time="0" condition="skin.hassetting(nofooterbar) + StringCompare(Skin.AspectRatio,16:10)">Conditional</animation>
                <!-- itemlayout movies -->
                <itemlayout height="260" width="171">
                    <control type="group">
                        <width>169</width>
                        <height>258</height>
                        <include>SmallPosterPanelLayout</include>
                      </control>
                </itemlayout>
                <!-- focussed layout movies -->
                <focusedlayout height="260" width="171">
                    <control type="group">
                        <width>169</width>
                        <height>258</height>
                        <include>SmallPosterPanelLayoutFocus</include>
                      </control>
                </focusedlayout>
			</control>
		
			<!--vertical Scollbar-->
			<control type="scrollbar" id="60">
				<visible>Control.IsVisible(520) + IntegerGreaterThan(Container.Numitems,0)</visible>
				<right>0</right>
				<top>20</top>
				<height>1040</height>
				<onup>60</onup>
				<ondown>6000</ondown>
				<onleft>520</onleft>
                <animation effect="slide" end="0,80" time="0" condition="skin.hassetting(nofooterbar) + StringCompare(Skin.AspectRatio,16:10)">Conditional</animation>
				<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
			</control>
            <include condition="!skin.hassetting(nofooterbar) + StringCompare(Skin.AspectRatio,16:10)">Footer</include>
		</control>

    </include>
</includes>