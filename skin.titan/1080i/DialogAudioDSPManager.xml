<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">9000</defaultcontrol>
    <controls>
        <!--Global Background-->
        <include>GlobalBackground</include>
         <!-- Now playing -->
		<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
		
        <!--Header-->
        <include>Header</include>

        <control type="group">
			<bottom>125</bottom>
			<height>75%</height>
			<control type="image">
				<posx>50</posx>
				<posy>0</posy>
				<width>1820</width>
				<texture border="15">diffuse/bgpanel.png</texture>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			</control>
			
			<control type="image">
				<posx>50</posx>
				<posy>0</posy>
				<width>500</width>
				<texture border="15">diffuse/bgpanel.png</texture>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			</control>
			
			<!--List 9000 - available options-->
			<control type="list" id="9000">
				<description>List</description>
				<posx>90</posx>
				<posy>20</posy>
				<width>440</width>
				<height>96%</height>
				<onleft>9001</onleft>
				<onright>20</onright>
				<scrolltime>0</scrolltime>
				<orientation>vertical</orientation>
				<itemlayout width="440" height="70">
                    <control type="group">
                        <control type="button">
                            <label></label>
                            <width>440</width>
                            <height>60</height>
                        </control>
                        <control type="label"> <!--label-->
                            <left>20</left>
                            <width>400</width>
                            <label>$INFO[ListItem.Label]</label>
                            <font>Reg28</font>
                            <scroll>false</scroll>
                            <textcolor>$INFO[Skin.String(ButtonTextColor)]</textcolor>
                            <selectedcolor>$INFO[Skin.String(ButtonTextColor)]</selectedcolor>
                            <disabledcolor>midgrey</disabledcolor>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout width="440" height="70">
                    <control type="group">
                        <control type="image">
                            <width>440</width>
                            <height>60</height>
                            <texture border="5" colordiffuse="$INFO[Skin.String(ButtonFocusColor)]">diffuse/panel.png</texture>
                            <animation effect="fade" start="100" end="30" time="0" condition="!Control.HasFocus(9000)">conditional</animation>
                        </control>
                        <control type="label"> <!--label-->
                            <left>20</left>
                            <width>400</width>
                            <label>$INFO[ListItem.Label]</label>
                            <font>Reg28</font>
                            <scroll>false</scroll>
                            <textcolor>$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
                            <selectedcolor>$INFO[Skin.String(ButtonFocusTextColor)]</selectedcolor>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            
            <!-- actions -->
            <control type="grouplist" id="9001">
                <posx>90</posx>
                <bottom>20</bottom>
                <orientation>vertical</orientation>
                <itemgap>20</itemgap>
                <defaultcontrol>5</defaultcontrol>
                <onup>9000</onup>
                <ondown>9001</ondown>
                <onright>20</onright>
                <width>440</width>
                <height>240</height>
                <control type="radiobutton" id="22">
                    <description>Default RadioButton</description>
                    <label>15064</label>
                    <textoffsetx>20</textoffsetx>
                    <include>SkinSettings_MenuButtonLarge</include>
                </control>
                <control type="button" id="23">
                    <description>Apply changes button</description>
                    <textoffsetx>20</textoffsetx>
                    <label>14070</label>
                    <include>SkinSettings_MenuButtonLarge</include>
                </control>
                <control type="button" id="24">
                    <description>Clear active modes button</description>
                    <label>15066</label>
                    <textoffsetx>20</textoffsetx>
                    <include>SkinSettings_MenuButtonLarge</include>
                </control>
            </control>
            
			<!--Group 1000 Right Area-->
			<control type="group" id="1000">
				<posx>600</posx>
				<posy>20</posy>
                <width>1250</width>
                <height>100%</height>

