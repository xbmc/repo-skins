						<control type="image">
							<left>5</left>
							<top>8</top>
							<width>50</width>
							<height>50</height>
							<texture>$INFO[ListItem.Icon]</texture>
							<aspectratio aligny="center" align="left">keep</aspectratio>
							<visible>!StringCompare(ListItem.Icon,"")</visible>
