                            <top>3</top>
							<width>550</width>
							<height>60</height>
                            <texture border="5" colordiffuse="$INFO[Skin.String(ButtonColor)]">diffuse/panel.png</texture>
                        </control>
						<control type="image">
							<left>15</left>
							<top>8</top>
							<width>30</width>
							<height>30</height>
							<texture>$INFO[ListItem.Icon]</texture>
							<aspectratio aligny="center" align="left">keep</aspectratio>
							<visible>!StringCompare(ListItem.Icon,"")</visible>
						</control>
						<control type="image">
							<left>15</left>
							<top>8</top>
							<width>30</width>
							<height>30</height>
							<texture>DefaultAudioDSP.png</texture>
							<aspectratio aligny="center" align="left">keep</aspectratio>
							<visible>StringCompare(ListItem.Icon,"")</visible>
