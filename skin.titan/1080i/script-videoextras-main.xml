<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="3001">
    <defaultcontrol always="true">51</defaultcontrol>
    <allowoverlay>no</allowoverlay>
	<onload condition="System.HasAddon(script.videoextras)">XBMC.RunScript(script.videoextras,check,"$INFO[ListItem.FilenameAndPath]")</onload>

    <controls>
		<include>GlobalBackground</include>
		<!-- Header -->
		<control type="group">
			<control type="label">
				<posx>61</posx>
				<posy>10</posy>
				<width min="80" max="1400">auto</width>
				<height>100</height>
				<font>Bold45</font>
				<align>left</align>
				<textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
				<label>$ADDON[script.videoextras 32001]</label>
				<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
			</control>
			 <control type="label">
				<posy>85</posy>
				<posx>61</posx>
				<width min="0" max="1100">auto</width>
				<height>50</height>
				<label>$INFO[ListItem.Title]</label>
				<font>Reg30</font>
				<textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
				<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
			</control>
		</control>
		
        <include condition="!Skin.String(general_header,disable)">TimeInfo</include>
		<include condition="!skin.hassetting(nofooterbar)">Footer</include>
			
		<control type="group">
			<include>animation_window_open_close</include>
			<!-- panel background -->
			<control type="image">
				<posx>-80</posx>
				<width>2260</width>
				<posy>160</posy>
				<height>800</height>
				<texture>views/view_50_list_panel1.png</texture>
				<visible>skin.hastheme(classic)</visible>
			</control>
			
			<!-- Background Panel-->
			<control type="image">
				<posx>0</posx>
				<posy>210</posy>
				<width>100%</width>
				<height>680</height>
				<texture border="5">diffuse/panel.png</texture>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
				<visible>!skin.hastheme(classic)</visible>
			</control>
			
			<control type="image">
				<posx>1300</posx>
				<posy>210</posy>
				<width>650</width>
				<height>680</height>
				<texture border="5">diffuse/panel.png</texture>
				<visible>!skin.hastheme(classic)</visible>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			</control>

			<control type="group">
				<!--Start Dialog-->			
		
				<control type="group" id="9002">
					<include>animation_window_open_close</include>

					<control type="list" id="51">
						<posx>0</posx>
						<posy>220</posy>
						<width>1684</width>
						<height>660</height>
						<onup>noop</onup>
						<ondown>9000</ondown>
						<scrolltime>200</scrolltime>
						<orientation>vertical</orientation>
						<focusposition>0</focusposition>
						<viewtype label="actor list">list</viewtype>
						<itemlayout height="60">
							<control type="label">
								<posx>60</posx>
								<posy>0</posy>
								<width>950</width>
								<height>50</height>
								<label>$INFO[ListItem.label] $INFO[ListItem.Label2,(,)]</label>
								<font>Reg28</font>
								<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
								<shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
								<align>left</align>
								<aligny>center</aligny>
								<scroll>no</scroll>
							</control>
							<control type="image">
								<posx>10</posx>
								<posy>5</posy>
								<width>40</width>
								<height>40</height>
								<texture>overlays/rounded/OverlayWatched.png</texture>
								<visible>IntegerGreaterThan(ListItem.PlayCount,0)</visible>
							</control>
						</itemlayout>
						<focusedlayout height="60">
							<control type="label">
								<posx>60</posx>
								<posy>0</posy>
								<width>950</width>
								<height>50</height>
								<label>$INFO[ListItem.label] $INFO[ListItem.Label2,(,)]</label>
								<textcolor>$INFO[Skin.String(ViewDetailsHighlightTextColor)]</textcolor><shadowcolor>$INFO[Skin.String(ViewDetailsHighlightTextShadowColor)]</shadowcolor>
								
								<font>Reg28</font>
								<align>left</align>
								<aligny>center</aligny>
							</control>
							<control type="image">
								<posx>10</posx>
								<posy>5</posy>
								<width>40</width>
								<height>40</height>
								<texture>overlays/rounded/OverlayWatched.png</texture>
								<visible>IntegerGreaterThan(ListItem.PlayCount,0)</visible>
							</control>
						</focusedlayout>
					</control>
					<control type="image">
						<description>image</description>
						<right>60</right>
						<posy>210</posy>
						<width>450</width>
						<height>680</height>
						<aspectratio align="right" aligny="center">keep</aspectratio>
						<texture background="true">$INFO[Container(51).ListItem.Icon]</texture>
						<fadetime>300</fadetime>
						<visible>!IsEmpty(Container(51).ListItem.Icon)</visible>
					</control>
					<control type="image">
						<description>image</description>
						<right>60</right>
						<posy>210</posy>
						<width>450</width>
						<height>680</height>
						<aspectratio align="right" aligny="center">keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<fadetime>300</fadetime>
						<visible>IsEmpty(Container(51).ListItem.Icon)</visible>
					</control>
					<control type="textbox">
						<description>plot</description>
						<right>60</right>
						<posy>230</posy>
						<width>450</width>
						<height>640</height>
						<label>$INFO[ListItem.Plot]</label>
						<align>justify</align>
						<visible>IsEmpty(Container(51).ListItem.Icon) + IsEmpty(ListItem.Icon)</visible>
					</control>
				</control>
			</control>
			</control>
	</controls>
</window>