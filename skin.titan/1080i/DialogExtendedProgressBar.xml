<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">401</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <controls>
        <control type="group" id="99999">
            <animation type="WindowOpen" reversible="false">
				<effect type="slide" start="0,-400" end="0,0" tween="cubic" delay="500" easing="out" time="500" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="slide" start="0,0" end="0,-400" tween="cubic" easing="out" time="500" />
			</animation>
			
            <visible>!Window.IsActive(notification) + !window.isactive(fullscreenvideo) + !Window.IsVisible(startup)</visible>
			
			
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>100%</width>
				<height>130</height>
				<texture border="5">diffuse/panel.png</texture>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
				<visible>!skin.hastheme(classic)</visible>
			</control>
			
            <control type="group">
				<posx>60</posx>
				<posy>20</posy>
				<control type="label" id="1">
					<posx>-5</posx>
					<posy>2</posy>
					<width>90</width>
					<height>80</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>Reg24</font>
					<textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>$INFO[Control.GetLabel(32),,%]</label>
				</control>
				<control type="progress" id="32">
					<posx>48</posx>
					<posy>10</posy>
					<width>555</width>
					<height>8</height>
					<texturebg>-</texturebg>
					<midtexture>-</midtexture>
					<righttexture>-</righttexture>
					<lefttexture>-</lefttexture>
				</control>
				<control type="multiimage">
					<!--Busy Image-->
					<description>Busy animation</description>
					<posx>-5</posx>
					<posy>0</posy>
					<width>95</width>
					<height>95</height>
					<colordiffuse>$INFO[Skin.String(SpinnerTexture.Color)]</colordiffuse>
					<imagepath>dialogs/extended_progress_bar</imagepath>
					<timeperimage>100</timeperimage>
					<fadetime>0</fadetime>
				</control>
				<control type="label" id="30">
					<!--Header-->
					<posx>115</posx>
					<posy>0</posy>
					<width>1200</width>
					<height>50</height>
					<font>Bold38</font>
					<textcolor>$INFO[Skin.String(GeneralHighlightTextColor)]</textcolor>
					<label>-</label>
					<scroll>false</scroll>
				</control>
				<control type="label" id="31">
					<!--Current Directory Label-->
					<posx>115</posx>
					<posy>40</posy>
					<width>1200</width>
					<height>50</height>
					<font>Reg30</font>
					<textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
					<label>-</label>
					<scroll>false</scroll>
				</control>
			</control>
        </control>
	
	</controls>
</window>