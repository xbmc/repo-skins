<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>

	<include name="LowListLayout">

		<!--Title-->
		<control type="label">
			<posx>10</posx>
			<posy>10</posy>
			<height>40</height>
			<align>left</align>
			<label>$INFO[ListItem.Label]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
			<font>Reg36</font>
			<animation effect="slide" end="90" reversible="false" time="0" condition="Window.IsActive(tvchannels) | Window.IsActive(tvrecordings) | Window.IsActive(radiochannels)">Conditional</animation>
		</control>
		<!--Details-->
		<control type="label">
			<posx>10</posx>
			<posy>50</posy>
			<height>60</height>
			<align>left</align>
			<label>$VAR[ListDetails]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
			<font>Light28</font>
			<animation effect="slide" end="90" reversible="false" time="0" condition="Window.IsActive(tvchannels) | Window.IsActive(tvrecordings) | Window.IsActive(radiochannels)">Conditional</animation>
		</control>
		<control type="image">
			<bottom>0</bottom>
			<posy>0</posy>
			<height>1</height>
			<texture>diffuse/panel.png</texture>
			<colordiffuse>grey</colordiffuse>
		</control>
		<include>WatchedIndicatorNormal</include>
		
		<control type="image">
			<!--icon-->
			<posy>10</posy>
			<left>0</left>
			<width>90</width>
			<height>95</height>
			<texture>$VAR[PosterThumbList]</texture>
			<aspectratio align="center" aligny="center">keep</aspectratio>
			<visible>Window.IsActive(tvchannels) | Window.IsActive(tvrecordings) | Window.IsActive(radiochannels)</visible>
		</control>

	</include>

    <include name="LowListFocusLayout">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<height>115</height>
			<texture border="5">diffuse/panel.png</texture>
			<colordiffuse>$VAR[ViewDetailsFocusColor]</colordiffuse>
			
		</control>
		<!--Title-->
		<control type="label">
			<posx>10</posx>
			<posy>10</posy>
			<height>40</height>
			<align>left</align>
			<label>$INFO[ListItem.Label]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
			<font>Reg36</font>
			<scroll>true</scroll>
			<animation effect="slide" end="90" reversible="false" time="0" condition="Window.IsActive(tvchannels) | Window.IsActive(tvrecordings) | Window.IsActive(radiochannels)">Conditional</animation>
		</control>
		<!--Details-->
		<control type="label">
			<posx>10</posx>
			<posy>50</posy>
			<height>60</height>
			<align>left</align>
			<label>$VAR[ListDetails]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
			<font>Light28</font>
			<scroll>true</scroll>
			<animation effect="slide" end="90" reversible="false" time="0" condition="Window.IsActive(tvchannels) | Window.IsActive(tvrecordings) | Window.IsActive(radiochannels)">Conditional</animation>
		</control>
		<control type="image">
			<bottom>0</bottom>
			<posy>0</posy>
			<height>1</height>
			<texture>diffuse/panel.png</texture>
			<colordiffuse>grey</colordiffuse>
		</control>
		<include>WatchedIndicatorNormal</include>
		
		<control type="image">
			<!--icon-->
			<posy>10</posy>
			<left>0</left>
			<width>90</width>
			<height>95</height>
			<texture>$VAR[PosterThumbList]</texture>
			<aspectratio align="center" aligny="center">keep</aspectratio>
			<visible>Window.IsActive(tvchannels) | Window.IsActive(tvrecordings) | Window.IsActive(radiochannels)</visible>
		</control>
		
	</include>
	

	<include name="LowListSlimLayout">

		<!--Title-->
		<control type="label">
			<posx>10</posx>
			<align>left</align>
			<width>90%</width>
			<label>[B]$INFO[ListItem.Label][/B]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
			<font>Light30</font>
		</control>
		
		<!--duration-->
		<control type="label">
			<right>5</right>
			<width>150</width>
			<align>right</align>
			<label>$INFO[ListItem.Duration,, min.]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
			<font>Light28</font>
			<visible>![[Skin.HasSetting(WatchedIndicator.Watched) + StringCompare(ListItem.Overlay,OverlayWatched.png)] | [Skin.HasSetting(WatchedIndicator.Sets) + SubString(ListItem.Path,videodb://movies/sets/)] | [Skin.HasSetting(WatchedIndicator.Progress) + ListItem.IsResumable] | [Skin.HasSetting(WatchedIndicator.Episodes) + IntegerGreaterThan(ListItem.Property(UnWatchedEpisodes),0)]]</visible>
		</control>
		
		<include>WatchedIndicatorSmall</include>
		
		<control type="image">
			<bottom>0</bottom>
			<posy>0</posy>
			<height>1</height>
			<texture>diffuse/panel.png</texture>
			<colordiffuse>grey</colordiffuse>
			
		</control>
	</include>

    <include name="LowListSlimLayoutFocus">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<texture border="5">diffuse/panel.png</texture>
			<colordiffuse>$VAR[ViewDetailsFocusColor]</colordiffuse>
			
		</control>
		<!--Title-->
		<control type="label">
			<posx>10</posx>
			<align>left</align>
			<width>90%</width>
			<label>[B]$INFO[ListItem.Label][/B]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
			<font>Light30</font>
			<scroll>true</scroll>
		</control>
		
		<!--duration-->
		<control type="label">
			<right>5</right>
			<width>150</width>
			<align>right</align>
			<label>$INFO[ListItem.Duration,, min.]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
			<font>Light28</font>
			<visible>![[Skin.HasSetting(WatchedIndicator.Watched) + StringCompare(ListItem.Overlay,OverlayWatched.png)] | [Skin.HasSetting(WatchedIndicator.Sets) + SubString(ListItem.Path,videodb://movies/sets/)] | [Skin.HasSetting(WatchedIndicator.Progress) + ListItem.IsResumable] | [Skin.HasSetting(WatchedIndicator.Episodes) + IntegerGreaterThan(ListItem.Property(UnWatchedEpisodes),0)]]</visible>
		</control>
		
		<include>WatchedIndicatorSmall</include>
		
		<control type="image">
			<bottom>0</bottom>
			<posy>0</posy>
			<height>1</height>
			<texture>diffuse/panel.png</texture>
			<colordiffuse>grey</colordiffuse>
			
		</control>
	</include>

    <include name="View_515_LowList">
	
		<control type="group">
			<include>animation_view_change</include>
			<defaultcontrol always="true">515</defaultcontrol>
			<visible>Control.IsVisible(515)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
			<bottom>125</bottom>
			<height>365</height>
			
			<!-- Background Panel-->
			<control type="image">
				<posx>50</posx>
				<width>1820</width>
				<texture border="15">diffuse/bgpanel.png</texture>
				<colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
				<visible>!Skin.HasSetting(View515_HidePanel)</visible>
                <visible>IntegerGreaterThan(Container.NumItems,0)</visible>
			</control>
			<control type="image">
				<posx>1200</posx>
				<width>670</width>
				<texture border="15">diffuse/bgpanel.png</texture>
				<colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
				<visible>!Skin.HasSetting(View515_HidePanel)</visible>
                <visible>IntegerGreaterThan(Container.NumItems,0)</visible>
			</control>
		
			<control type="panel" id="515">
					
				<posx>330</posx>
				<posy>10</posy>
				<width>1400</width>
				<height>345</height>
				<onup>515</onup>
				<ondown>515</ondown>
				<onleft>9000</onleft>
				<onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
        <onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
				<viewtype label="31442">list</viewtype>
				<orientation>vertical</orientation>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="cubic" easing="out">600</scrolltime>
				<preloaditems>2</preloaditems>
				<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),515) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
			

				<itemlayout width="857" height="115" condition="!Skin.HasSetting(View515_UseSlimList) + ![Skin.HasSetting(View515_ShowBanners) + container.content(tvshows)]">		
					<include>LowListLayout</include>
				</itemlayout>
				<focusedlayout width="857" height="115" condition="!Skin.HasSetting(View515_UseSlimList) + ![Skin.HasSetting(View515_ShowBanners) + container.content(tvshows)]">
					<include>LowListFocusLayout</include>
				</focusedlayout>
				
				<itemlayout width="857" height="69" condition="Skin.HasSetting(View515_UseSlimList) + ![Skin.HasSetting(View515_ShowBanners) + container.content(tvshows)]">		
					<include>LowListSlimLayout</include>
				</itemlayout>
				<focusedlayout width="857" height="69" condition="Skin.HasSetting(View515_UseSlimList) + ![Skin.HasSetting(View515_ShowBanners) + container.content(tvshows)]">
					<include>LowListSlimLayoutFocus</include>
				</focusedlayout>
				
				<itemlayout height="173" width="857" condition="[Skin.HasSetting(View515_ShowBanners) + container.content(tvshows)]">
                    <control type="group">
                        <width>840</width>
                        <height>160</height>
                        <control type="image">
                            <texture border="5">diffuse/banner.png</texture>
                            <colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
                            <aspectratio scalediffuse="false" align="left">stretch</aspectratio>
                            <include condition="Skin.String(thumbsborder_unfocused, 0)">thumbborder_0</include>
                            <include condition="Skin.String(thumbsborder_unfocused, 2)">thumbborder_2</include>
                            <include condition="Skin.String(thumbsborder_unfocused, 4)">thumbborder_4</include>
                            <include condition="Skin.String(thumbsborder_unfocused, 6)">thumbborder_6</include>
                        </control>
                        <include>BannerLayout</include>
					</control>
                </itemlayout>
                <focusedlayout height="173" width="857" condition="[Skin.HasSetting(View515_ShowBanners) + container.content(tvshows)]">
					<control type="group">
                        <width>840</width>
                        <height>160</height>
                        <control type="image">
                            <texture border="5">diffuse/banner.png</texture>
                            <colordiffuse>$VAR[ViewDetailsFocusColor]</colordiffuse>
                            <aspectratio scalediffuse="false" align="left">stretch</aspectratio>
                            <include condition="Skin.String(thumbsborder_focused, 2)">thumbborder_2</include>
                            <include condition="Skin.String(thumbsborder_focused, 4)">thumbborder_4</include>
                            <include condition="Skin.String(thumbsborder_focused, 6)">thumbborder_6</include>
                        </control>
                        <include>BannerLayout</include>
					</control>
                </focusedlayout>
			
			</control>
			
			<!--info-->
			<control type="group">
				
				<control type="textbox">
					<right>80</right>
					<posy>5</posy>
					<width>625</width>
					<height>335</height>
					<label>$VAR[Plots]</label>
					<font>Light28</font>
					<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
					<aligny>top</aligny>
					<visible>![VideoPlayer.Content(livetv) + Skin.HasSetting(PVRShowPreview)]</visible>
                    <visible>IntegerGreaterThan(Container.NumItems,0)</visible>
				</control>
			</control>
		
			<!--large poster-->
			<control type="group">
                <visible>IntegerGreaterThan(Container.NumItems,0)</visible>
				<control type="image">
					<left>65</left>
					<posy>7</posy>
					<width>255</width>
					<height>350</height>
					<aspectratio align="left" aligny="top" scalediffuse="true">keep</aspectratio>
					<texture background="true" diffuse="diffuse/poster.png" fallback="DefaultVideo.png">$VAR[PosterThumb]</texture>
				</control>
			</control>
			 <!-- black background behind video -->
            <control type="image">
                <texture>colors/color_black.png</texture>
                <right>50</right>
				<posy>10</posy>
				<width>670</width>
				<height>350</height>
				<visible>VideoPlayer.Content(livetv) + Skin.HasSetting(PVRShowPreview)</visible>
            </control>
			<!--Video Window -->
			<control type="videowindow">
				<right>50</right>
				<posy>10</posy>
				<width>670</width>
				<height>350</height>
				<visible>VideoPlayer.Content(livetv) + Skin.HasSetting(PVRShowPreview)</visible>
			</control>
			
			<!--vertical Scollbar-->
			<control type="scrollbar" id="60">
				<visible>Control.IsVisible(515) + IntegerGreaterThan(Container.Numitems,0)</visible>
				<right>15</right>
				<posy>0</posy>
				<height>365</height>
				<onup>60</onup>
				<ondown>6000</ondown>
				<onleft>515</onleft>
				<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
			</control>

		</control>
		
	</include>

</includes>