			  </focusedlayout>
			  <content>
				<include condition="!Skin.HasSetting(DisableAllSubmenus)">skinshortcuts-submenu</include>
			  </content>
			</control>
		  </control>
          <!--Footer-->
          <include condition="!skin.hassetting(nofooterbar)">Footer</include>
          
          <!-- Power button -->
         <control type="group">
            <posx>930</posx>
            <bottom>20</bottom>
            <width>60</width>
            <height>60</height>
            <visible>!Control.isVisible(77551)</visible>
