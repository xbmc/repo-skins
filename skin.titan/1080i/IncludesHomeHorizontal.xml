				  <posy>0</posy>
				  <height>50</height>
				  <width>384</width>
				  <align>center</align>
				  <aligny>center</aligny>
				  <font>Reg26</font>
				  <scroll>false</scroll>
				  <label>$INFO[ListItem.Label]</label>
				  <textcolor>$INFO[Skin.String(MainMenuTextColor)]</textcolor>
