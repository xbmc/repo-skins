<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">100</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <include>DefaultSkinSettings</include>
    <include>WidgetsAutoRotateUnload</include>
    <onload condition="!Skin.HasSetting(resourceaddoncheckcompleted)">RunScript(script.skin.helper.service,action=CHECKRESOURCEADDONS,ADDONSLIST=WeatherIconPack;resource.images.weathericons;Weather Icons|WeatherFanArtPack;resource.images.weatherfanart;Weather FanArt|SkinHelper.StudioLogos;resource.images.studios;Studio Logos|LanguageFlags;resource.images.languageflags;Language Flags)</onload>
    <onunload>Skin.SetBool(resourceaddoncheckcompleted)</onunload>
    <controls>
        <!--Global Background-->
        <include>GlobalBackground</include>
         <!-- Now playing -->
		<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
		
        <!--Header-->
        <include>Header</include>

        <control type="group">
			<bottom>125</bottom>
			<height>75%</height>
            <visible>!System.HasModalDialog</visible>
			<control type="image">
				<posx>50</posx>
				<posy>0</posy>
				<width>1820</width>
				<texture border="15">diffuse/bgpanel.png</texture>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			</control>
			
			<control type="image">
				<posx>50</posx>
				<posy>0</posy>
				<width>500</width>
				<texture border="15">diffuse/bgpanel.png</texture>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			</control>
			
			<!--List 100 Left Area-->
			<control type="grouplist" id="100">
				<description>List</description>
				<posx>90</posx>
				<posy>20</posy>
				<width>440</width>
				<height>96%</height>
				<onleft>noop</onleft>
				<onright>1000</onright>
				<scrolltime>0</scrolltime>
				<orientation>vertical</orientation>
				<include>SkinSettings_MenuOptions</include>
			</control>
			<!--Group 1000 Right Area-->
			<control type="group" id="1000">
				<posx>600</posx>
				<posy>20</posy>
                <width>1200</width>
                <include>SkinSettings_HomeLayout</include>
                <include>SkinSettings_Shortcuts</include>
                <include>SkinSettings_Background</include>
                <include>SkinSettings_Library</include>
                <include>SkinSettings_ForcedViews</include>
                <include>SkinSettings_OSD</include>
                <include>SkinSettings_PVR</include>
                <include>SkinSettings_SmartShortcuts</include>
                <include>SkinSettings_ColorThemes</include>
                <include>SkinSettings_General</include>
                <include>SkinSettings_Backup</include>
                <include>SkinSettings_CustomColors</include>
                <include>SkinSettings_Addons</include>
			</control>
        </control>
    
		<!--Footer-->
        <include condition="!skin.hassetting(nofooterbar)">Footer</include>
		<!--Titan Version-->
        <include>TitanVersion</include>
        <include condition="Skin.HasSetting(DebugGrid) | Skin.HasSetting(DebugInfo)">DebugInfo</include>
	</controls>
</window>
