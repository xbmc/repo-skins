<window>
    <allowoverlay>no</allowoverlay>
    <controls>
	
		<control type="label" id="2">
			<description>Pick label</description>
			<visible>false</visible>
		</control>
        <control type="label" id="200">
			<description>Scraper label</description>
			<visible>false</visible>
		</control>

		<control type="spincontrol" id="111">
			<posx>-100</posx>
			<posy>-100</posy>
			<visible>false</visible>
		</control>
		<control type="spincontrol" id="121">
			<posx>-100</posx>
			<posy>-100</posy>
			<visible>false</visible>
		</control>
			
		<control type="group">
			<animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="100" time="150"/>
            </animation>

			<!-- touchscreen workaround -->
			<!-- hidden button to exit dialog in touchscreen mode -->
			<control type="button">
				<posx>0</posx>
				<posy>0</posy>
				<width>100%</width>
				<height>100%</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>Light28</font>
				<label>-</label>
				<textcolor>-</textcolor>
				<focusedcolor>-</focusedcolor>
				<disabledcolor>-</disabledcolor>
				<texturefocus>colors/color_transparent.png</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onclick>back</onclick>
				<visible>Skin.HasSetting(EnableTouchSupport)</visible>
			</control>
					

			<control type="group">

				<!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
                <control type="list" id="110">
					<posx>0</posx>
					<posy>220</posy>
					<width>1920</width>
					<height>505</height>
					<onleft>111</onleft>
					<onright>111</onright>
					<onup>110</onup>
					<ondown>110</ondown>
					<pagecontrol>111</pagecontrol>
					<scrolltime>200</scrolltime>
					<itemlayout width="1920" height="70">
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>1920</width>
							<height>70</height>
							<label fallback="•••">$INFO[ListItem.Label]</label>
							<font>Reg56</font>
							<align>center</align>
							<textcolor>$INFO[Skin.String(LyricsTextColor)]</textcolor>
                            <shadowcolor>$INFO[Skin.String(LyricsTextShadowColor)]</shadowcolor>
						</control>
					</itemlayout>
					<focusedlayout width="1920" height="85">
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>1920</width>
							<height>85</height>
							<label fallback="•••">$INFO[ListItem.Label,[B],[/B]]</label>
							<font>Reg62</font>
							<align>center</align>
							<textcolor>$INFO[Skin.String(LyricsFocusTextColor)]</textcolor>
                            <shadowcolor>$INFO[Skin.String(LyricsFocusTextShadowColor)]</shadowcolor>
                            <scroll>true</scroll>
						</control>
					</focusedlayout>
				</control>
				
				<!-- ** Required ** Do not change <id> or <type> (Song Chooser if it gets it wrong) -->
                <control type="list" id="120">
					<posx>0</posx>
					<posy>220</posy>
					<width>1920</width>
					<height>505</height>
					<onleft>121</onleft>
                    <onright>121</onright>
                    <onup>120</onup>
                    <ondown>120</ondown>
                    <pagecontrol>121</pagecontrol>
                    <scrolltime>200</scrolltime>
					<itemlayout width="1920" height="70">
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>1920</width>
							<height>70</height>
							<label fallback="•••">$INFO[ListItem.Label]</label>
							<font>Reg56</font>
							<align>center</align>
							<textcolor>$INFO[Skin.String(LyricsTextColor)]</textcolor>
                            <shadowcolor>$INFO[Skin.String(LyricsTextShadowColor)]</shadowcolor>
						</control>
					</itemlayout>
					<focusedlayout width="1920" height="85">
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>1920</width>
							<height>85</height>
							<label fallback="•••">$INFO[ListItem.Label,[B],[/B]]</label>
							<font>Reg62</font>
							<align>center</align>
							<textcolor>$INFO[Skin.String(LyricsFocusTextColor)]</textcolor>
                            <shadowcolor>$INFO[Skin.String(LyricsFocusTextShadowColor)]</shadowcolor>
                            <scroll>true</scroll>
						</control>
					</focusedlayout>
				</control>
			</control>
		</control>
    </controls>
</window>
