<?xml version="1.0" encoding="UTF-8"?>
<includes>
  
  <include name="View_512_ThumbsDetails">
	
    <control type="group">
      <visible>Control.IsVisible(512)</visible>
		<include>animation_view_change</include>
      

    <include>MovieDetailsLeft</include>
	  
	  <control type="panel" id="512">
        <animation effect="slide" end="-635" time="250" condition="Skin.HasSetting(View512_ShowInfoRight)">Conditional</animation>
        <viewtype label="31439">icons</viewtype>
        <right>40</right>
        <bottom>12%</bottom>
        <height>744</height>
        <width>1192</width>
        <orientation>vertical</orientation>
        <onleft>9000</onleft>
        <onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
        <onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
        <onup>512</onup>
        <ondown>512</ondown>
        <preloaditems>4</preloaditems>
        <pagecontrol>60</pagecontrol>
		<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),512) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
		<itemlayout height="186" width="298" condition="![Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
            <control type="group">
                <width>290</width>
                <height>178</height>
                <include>ThumbsViewLayout</include>
            </control>
        </itemlayout>
        <focusedlayout height="186" width="298" condition="![Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
			<control type="group">
                <width>290</width>
                <height>178</height>
				<include>ThumbsViewLayoutFocus</include>
                <include>AutoTrailerButton</include>
			</control>
        </focusedlayout>
         <itemlayout height="248" width="397" condition="[Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
			<control type="group">
                <width>356</width>
                <height>240</height>
                <left>20</left>
                <include>ThumbsViewLayout</include>
            </control>
        </itemlayout>
        <focusedlayout height="248" width="397" condition="[Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
			<control type="group">
				<animation type="focus">
					<effect type="zoom" start="100" end="105" center="auto" time="150" />
				</animation>
				<animation type="unfocus">
					<effect type="zoom" start="105" end="100" center="auto" time="150" />
				</animation>
                <width>356</width>
                <height>240</height>
                <left>20</left>
				<include>ThumbsViewLayoutFocus</include>
			</control>
        </focusedlayout>
 	  </control>
      
	  
	  
	  <!--vertical Scollbar-->
		<control type="scrollbar" id="60">
			<visible>Control.IsVisible(512) + IntegerGreaterThan(Container.Numitems,0)</visible>
			<right>15</right>
			<bottom>12%</bottom>
            <height>744</height>
			<onup>60</onup>
			<ondown>6000</ondown>
			<onleft>509</onleft>
			<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
			<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
		</control>
    
	  
    </control>
	
	
	

  </include>
</includes>
