<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">10</defaultcontrol>
    <controls>
        <include condition="Skin.HasSetting(EnableTouchSupport)">TouchScreenWorkaround</include>
        <control type="button" id="10">
            <onfocus condition="Skin.HasSetting(pvrGuideOnFullscreenVideo)">SetProperty(pvrGuideOnFullscreenVideo,fullscreenvideo,home)</onfocus>
            <onfocus condition="Skin.HasSetting(pvrGuideOnFullscreenVideo)">Dialog.Close(VideoOSD)</onfocus>
            <onfocus condition="Skin.HasSetting(pvrGuideOnFullscreenVideo)">Dialog.Close(seekbar)</onfocus>
            <onfocus condition="Skin.HasSetting(pvrGuideOnFullscreenVideo)">Dialog.Close(pvrosdguide)</onfocus>
            <onfocus condition="Skin.HasSetting(pvrGuideOnFullscreenVideo)">Dialog.Close(fullscreenvideo)</onfocus>
            <onfocus condition="Skin.HasSetting(pvrGuideOnFullscreenVideo)">ActivateWindow(tvguide)</onfocus>
            <onfocus condition="!Skin.HasSetting(pvrGuideOnFullscreenVideo)">SetFocus(11)</onfocus>
            <visible allowhiddenfocus="true">false</visible>
        </control>
		<control type="group">
			<posx>-660</posx>
			<posy>0</posy>
			<animation type="WindowOpen">
				<effect type="slide" start="0" end="660" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="660" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<!--Panel-->
			<control type="image">
				<posy>-250</posy>
				<posx>-20</posx>
				<width>695</width>
				<height>1750</height>
				<texture border="5">diffuse/panel.png</texture>
				<colordiffuse>$INFO[Skin.String(OSDPanelColor)]</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
            <control type="image">
				<posy>-250</posy>
				<posx>-20</posx>
				<width>690</width>
				<height>1750</height>
				<texture border="5">diffuse/panel.png</texture>
				<colordiffuse>$INFO[Skin.String(OSDPanelColor)]</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			
			<control type="image">
				<!--Channel Icon-->
				<posx>10</posx>
				<posy>25</posy>
				<width>100</width>
				<height>100</height>
				<texture>$INFO[VideoPlayer.Cover]</texture>
				<aspectratio>keep</aspectratio>
			</control>

		
			<!-- header -->
			<control type="label">
				<posx>140</posx>
				<posy>10</posy>
				<width min="80" max="524">auto</width>
				<height>100</height>
				<font>Bold45</font>
				<align>left</align>
				<textcolor>$INFO[Skin.String(OSDSecondaryTextColor)]</textcolor>
				<label>$LOCALIZE[19222]$INFO[VideoPlayer.ChannelName, â€¢ ,]</label>
				<visible>!Window.IsActive(notification) + !Window.IsActive(extendedprogressdialog)</visible>
				<animation effect="slide" start="0" end="-130" time="0" reversible="false" condition="IsEmpty(VideoPlayer.Cover)">Conditional</animation>
			</control>
			
			<control type="label">
				<!--Info Time Date-->
				<posx>140</posx>
				<posy>80</posy>
				<width>524</width>
				<height>50</height>
				<font>Reg28</font>
				<textcolor>$INFO[Skin.String(OSDPrimaryTextColor)]</textcolor>
				<label>$INFO[Container(11).ListItem.StartDate]</label>
				<animation effect="slide" start="0" end="-130" time="0" reversible="false" condition="IsEmpty(VideoPlayer.Cover)">Conditional</animation>
			</control>
			
			<!--Label Menu: -->
			<control type="image">
				<!--Seperator-->
				<posx>-80</posx>
				<posy>140</posy>
				<width>790</width>
				<height>20</height>
				<align>left</align>
				<texture>common/menu-separator.png</texture>
			</control>
            <!-- Scollbar behind panel for touch control-->
            <control type="scrollbar" id="60">
                <posx>0</posx>
                <posy>140</posy>
                <width>680</width>
                <height>960</height>
                <onup>60</onup>
                <ondown>60</ondown>
                <onleft>50</onleft>
                <animation effect="fade" start="100" end="0" time="10" condition="true">Conditional</animation>
            </control>
			
			<!--List ID=11-->
			<control type="list" id="11">
				<posx>0</posx>
				<posy>150</posy>
				<width>670</width>
				<height>910</height>
				<onleft>noop</onleft>
				<onright>dialog.close(all,true)</onright>
				<onup>11</onup>
				<ondown>11</ondown>
				<viewtype label="535">list</viewtype>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="62" width="667">
					<control type="label">
						<!--Time-->
						<posx>10</posx>
						<posy>10</posy>
						<width>120</width>
						<height>25</height>
						<font>Reg26</font>
						<textcolor>$INFO[Skin.String(OSDPrimaryTextColor)]</textcolor>
						
						<align>left</align>
						<info>ListItem.StartTime</info>
					</control>
					<control type="image">
						<!--Rec-->
						<posx>140</posx>
						<posy>0</posy>
						<width>55</width>
						<height>55</height>
						<texture>pvr/icons/pvr_record.png</texture>
						<visible>ListItem.IsRecording | ListItem.HasTimer</visible>
					</control>
					<control type="image">
						<!--Now Playing Icon-->
						<posx>140</posx>
						<posy>0</posy>
						<width>55</width>
						<height>55</height>
						<fadetime>600</fadetime>
						<texture>pvr/icons/pvr_play.png</texture>
						<visible>ListItem.IsPlaying + !ListItem.IsRecording + !ListItem.HasTimer</visible>
					</control>
					<control type="label">
						<!--Channel Name-->
						<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="ListItem.Isplaying | ListItem.IsRecording | ListItem.HasTimer">Conditional</animation>
						<posx>140</posx>
						<posy>10</posy>
						<width>450</width>
						<height>25</height>
						<font>Reg28</font>
						<textcolor>$INFO[Skin.String(OSDPrimaryTextColor)]</textcolor>
						
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="image">
						<!--Separator-->
						<posx>0</posx>
						<posy>105</posy>
						<width>530</width>
						<height>20</height>
						<fadetime>400</fadetime>
						<colordiffuse>list_separator</colordiffuse>
						<texture>common/separator.png</texture>
					</control>
				</itemlayout>
				<focusedlayout height="185" width="667">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>660</width>
						<height>185</height>
						<texture border="5">diffuse/panel.png</texture>
						<colordiffuse>$INFO[Skin.String(ButtonFocusColor)]</colordiffuse>
					</control>
					<control type="label">
						<!--Time-->
						<posx>10</posx>
						<posy>10</posy>
						<width>120</width>
						<height>25</height>
						<font>Reg26</font>
						<textcolor>$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
						<align>left</align>
						<label>[B]$INFO[ListItem.StartTime][/B]</label>
					</control>
					<control type="image">
						<!--Rec-->
						<posx>140</posx>
						<posy>0</posy>
						<width>55</width>
						<height>55</height>
						<texture>pvr/icons/pvr_record.png</texture>
						<visible>ListItem.IsRecording | ListItem.HasTimer</visible>
					</control>
					<control type="image">
						<!--Now Playing Icon-->
						<posx>140</posx>
						<posy>0</posy>
						<width>55</width>
						<height>55</height>
						<fadetime>600</fadetime>
						<texture>pvr/icons/pvr_play.png</texture>
						<visible>ListItem.IsPlaying + !ListItem.IsRecording + !ListItem.HasTimer</visible>
					</control>
					<control type="label">
						<!--Channel Name-->
						<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="ListItem.Isplaying | ListItem.IsRecording | ListItem.HasTimer">Conditional</animation>
						<posx>140</posx>
						<posy>10</posy>
						<width>450</width>
						<height>25</height>
						<font>Reg28</font>
						<textcolor>$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>[B]$INFO[ListItem.Label][/B]</label>
					</control>
					<control type="textbox">
						<!--Info Plot-->
						<posx>10</posx>
						<posy>38</posy>
						<width>650</width>
						<height>137</height>
						<font>Reg24</font>
						<align>left</align>
						<label fallback="19055">$INFO[ListItem.Plot]</label>
						<textcolor>$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
					</control>
				</focusedlayout>
			</control>

		</control>
	</controls>
</window>
