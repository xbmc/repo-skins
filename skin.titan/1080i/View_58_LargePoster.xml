<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>

    <include name="View_58_LargePoster">
        <!--Panel-->
        <control type="group">
            <visible>Control.IsVisible(58)</visible>
            <include>animation_view_change</include>
            <bottom>13%</bottom>
			<height>222</height>
			<control type="image">
                <visible>!IsEmpty(ListItem.Label)</visible>
                <posx>50</posx>
                <width>1820</width>
                <texture border="15">diffuse/bgpanel.png</texture>
				<colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
            </control>
					
			<!--Info-->
			<control type="grouplist">
				<itemgap>0</itemgap>
				<orientation>vertical</orientation>
                <visible>IntegerGreaterThan(Container.NumItems,0)</visible>
				<posx>60</posx>
				<posy>10</posy>
				<control type="label">
					<height>33</height>
					<width>1100</width>
					<font>Bold30</font>
					<textcolor>$INFO[Skin.String(ViewDetailsHighlightTextColor)]</textcolor><shadowcolor>$INFO[Skin.String(ViewDetailsHighlightTextShadowColor)]</shadowcolor>
					
					<label>[UPPERCASE]$VAR[mediatitle][/UPPERCASE]</label>
				</control>
					<control type="label">
					  <height>40</height>
					  <width>1100</width>
					  <font>Reg31</font>
					  <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
					  <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
					  <label>$VAR[Details]</label>
				</control>
			   
				<control type="textbox">
					<posx>0</posx>
					<posy>0</posy>
					<width>1270</width>
					<height>130</height>
					<label>$VAR[Plots]</label>
					<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
					<align>justify</align>
					<font>Light28</font>
				</control>
			</control>
            
            <!--cdart image-->
            <control type="image">
                <width>520</width>
                <height>520</height>
                <bordersize>20</bordersize>
                <bottom>95</bottom>
                <right>45</right>
                <texture background="true" diffuse="diffuse/cdmask_new.png" fallback="defaultcovers/cd_big.png">$VAR[DiscArtImage]</texture>
                <aspectratio scalediffuse="false" align="center" aligny="center">scale</aspectratio>
                <animation effect="slide" start="0" end="-210" tween="cubic" easing="inout" time="1200" delay="1800">Visible</animation>
                <animation effect="fade" start="0" end="100" delay="1200" time="800" pulse="false">Visible</animation>
                <animation effect="rotate" end="-360" center="auto" time="20000" loop="true" reversible="false" condition="Skin.HasSetting(AnimateDiscArt)">Conditional</animation>
                <visible>Skin.HasSetting(View58_ShowCDart) + ![SubString(ListItem.Thumb,Default,left) | IsEmpty(ListItem.Thumb)] + !Container.IsScrolling + !Container.OnScrollNext + !Container.OnScrollPrevious</visible>
                <visible>IntegerGreaterThan(Container.NumItems,0)</visible>
            </control>
			
			<!-- ID="58" -->
			<control type="panel" id="58">
				<right>45</right>
				<bottom>-20</bottom>
				<width>520</width>
				<height>946</height>
				<onup>9000</onup>
				<ondown condition="Skin.HasSetting(EnableQuickJump)">7000</ondown>
                <ondown condition="!Skin.HasSetting(EnableQuickJump)">60</ondown>
				<onleft>58</onleft>
				<onright>58</onright>
				<viewtype label="31427">mediainfo</viewtype>
				<scrolltime tween="Cubic" easing="inout">500</scrolltime>
				<focusposition>0</focusposition>
				<orientation>horizontal</orientation>
				<preloaditems>2</preloaditems>
				<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),58) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
				<itemlayout height="946" width="520">
					<control type="group">
						<posy>200</posy>
						<control type="image">
							<!--Poster-->
							<width>520</width>
							<height>746</height>
							<include condition="!Skin.HasSetting(EmbyCovertArtEnabled)">poster_shadow</include>
							<bordersize>20</bordersize>
							<texture background="true" diffuse="diffuse/poster.png" fallback="colors/color_keyboard.png">$VAR[PosterThumbList]</texture>
							<aspectratio align="right" aligny="center">stretch</aspectratio>
						</control>
						<control type="group">
							<left>20</left>
							<top>20</top>
							<width>480</width>
							<height>706</height>
                            <include condition="!Window.IsActive(Home)">PosterTagOverlay</include>
							<include condition="Skin.HasSetting(CaseOverlays)">PosterCaseOverlay</include>
					    </control>
						<control type="group">
						<right>20</right>
						<top>19</top>
						<include>WatchedIndicatorLarge</include>
                        <visible>![ListItem.IsCollection + Skin.HasSetting(EmbyCovertArtEnabled)]</visible>
						</control>
					</control>
				</itemlayout>
				<focusedlayout height="946" width="520">
					<control type="group">
						<posy>200</posy>
						<control type="image">
							<!--Poster-->
							<width>520</width>
							<height>746</height>
							<include condition="!Skin.HasSetting(EmbyCovertArtEnabled)">poster_shadow</include>
							<bordersize>20</bordersize>
							<texture background="true" diffuse="diffuse/poster.png" fallback="colors/color_keyboard.png">$VAR[PosterThumbList]</texture>
							<aspectratio align="right" aligny="center">stretch</aspectratio>
						</control>
						<control type="group">
							<left>20</left>
							<top>20</top>
							<width>480</width>
							<height>706</height>
                            <include condition="!Window.IsActive(Home)">PosterTagOverlay</include>
							<include condition="Skin.HasSetting(CaseOverlays)">PosterCaseOverlay</include>
					    </control>
						<control type="group">
						<right>20</right>
						<top>19</top>
						<include>WatchedIndicatorLarge</include>
						</control>
					</control>
					
				</focusedlayout>
			</control>

			
			
        </control>

	</include>
</includes>