<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="602">
    <defaultcontrol always="true">10</defaultcontrol>
    <controls>
        <!--Dialog Overlay-->
        <include>DialogOverlay</include>
        <!--Dialog PVR Guid Info-->
        <control type="group">
            <include>animation_fade_open_close</include>
            <include>animation_fade_visible_hidden</include>
            <visible>!Window.IsVisible(yesnodialog)</visible>
            <!--Panel-->
            <control type="image">
                <posx>920</posx>
                <posy>180</posy>
                <width>80</width>
                <height>60</height>
                <texture>dialogs/default/arrow.png</texture>
            </control>
            <control type="image">
                <posx>526</posx>
                <posy>200</posy>
                <width>868</width>
                <height>750</height>
                <texture border="39">dialogs/default/bg.png</texture>
            </control>
            <!--Header-->
            <control type="label">
                <description>Heading</description>
                <posx>560</posx>
                <posy>135</posy>
                <width>800</width>
                <label>$INFO[ListItem.Title]</label>
                <include>DialogHeader</include>
                <align>center</align>
            </control>
            <control type="group">
                <posx>560</posx>
                <posy>234</posy>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>800</width>
                    <height>241</height>
                    <texture border="5">dialogs/default/inner.png</texture>
                </control>
                <control type="button">
                    <description>Time</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <include condition="!Skin.HasTheme(classic)">DialogLabelAlt</include>
                    <include condition="Skin.HasTheme(classic)">DialogLabel</include>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[142]</label>
                    <label2>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ] ($INFO[ListItem.StartDate])</label2>
                    <enable>false</enable>
                </control>
                <control type="button">
                    <description>Duration</description>
                    <posx>0</posx>
                    <posy>59</posy>
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <include condition="!Skin.HasTheme(classic)">DialogLabelAlt</include>
                    <include condition="Skin.HasTheme(classic)">DialogLabel</include>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[180]</label>
                    <label2>$INFO[ListItem.Duration]</label2>
                    <enable>false</enable>
                </control>
                <control type="button">
                    <description>Channel</description>
                    <posx>0</posx>
                    <posy>118</posy>
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <include condition="!Skin.HasTheme(classic)">DialogLabelAlt</include>
                    <include condition="Skin.HasTheme(classic)">DialogLabel</include>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[19148]</label>
                    <label2>$INFO[ListItem.ChannelName]</label2>
                    <enable>false</enable>
                </control>
                <control type="button">
                    <description>Genre</description>
                    <posx>0</posx>
                    <posy>177</posy>
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <include condition="!Skin.HasTheme(classic)">DialogLabelAlt</include>
                    <include condition="Skin.HasTheme(classic)">DialogLabel</include>
                    <label>$LOCALIZE[135]</label>
                    <texturenofocus>-</texturenofocus>
                    <label2 fallback="161">$INFO[ListItem.Genre]</label2>
                    <enable>false</enable>
                </control>
            </control>
            <control type="image">
                <posx>560</posx>
                <posy>486</posy>
                <width>800</width>
                <height>360</height>
                <texture border="5">dialogs/default/inner.png</texture>
            </control>
            <control type="textbox" id="400">
                <description>Plot value</description>
                <posx>580</posx>
                <posy>506</posy>
                <width>760</width>
                <height>310</height>
                <align>justify</align>
                <include condition="!Skin.HasTheme(classic)">DialogLabelAlt</include>
                <include condition="Skin.HasTheme(classic)">DialogLabel</include>
                <pagecontrol>60</pagecontrol>
                <autoscroll delay="10000" time="3000" repeat="6000">!Control.HasFocus(60) + !Skin.HasSetting(AutoScroll.Disable)</autoscroll>
                <label fallback="161">$INFO[ListItem.Plot]</label>
            </control>
            <control type="scrollbar" id="60">
                <posx>1346</posx>
                <posy>509</posy>
                <width>11</width>
                <height>314</height>
                <texturesliderbackground>-</texturesliderbackground>
                <texturesliderbar border="0,6,0,6">dialogs/default/scrollbar.png</texturesliderbar>
                <texturesliderbarfocus border="0,6,0,6">dialogs/default/scrollbar.png</texturesliderbarfocus>
                <textureslidernib>-</textureslidernib>
                <textureslidernibfocus>-</textureslidernibfocus>
                <onleft>8000</onleft>
                <onright>8000</onright>
                <ondown>60</ondown>
                <onup>60</onup>
                <showonepage>false</showonepage>
                <orientation>vertical</orientation>
                <animation effect="fade" start="75" end="0" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(60)">Conditional</animation>
            </control>
            <control type="group" id="8000">
                <posx>540</posx>
                <posy>843</posy>
                <control type="button" id="10">
                    <!--Cancel-->
                    <width>350</width>
                    <height>100</height>
                    <label>$LOCALIZE[222]</label>
                    <align>left</align>
                    <textoffsetx>100</textoffsetx>
                    <include>DialogButtonOKCancel</include>
                    <texturefocus border="100,0,0,0">common/cancel-fo.png</texturefocus>
                    <!-- left,top,right,bottom-->
                    <texturenofocus border="100,0,0,0">common/cancel-nf.png</texturenofocus>
                    <onleft>6</onleft>
                    <onright>5</onright>
                    <onup>60</onup>
                    <ondown>60</ondown>
                </control>
            </control>
        </control>
    </controls>
</window>