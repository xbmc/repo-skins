<?xml version="1.0" encoding="UTF-8"?>

<includes>

	<include name="ViewExtendedList">
	
	
		<control type="group">
		
			<posx>30</posx>
			<bottom>110</bottom>
			<height>840</height>
			<defaultcontrol always="true">506</defaultcontrol>
			<visible>Control.IsVisible(506)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
			<include>animation_view_change</include>
			

			<control type="panel" id="506">
					
				<posx>20</posx>
				<posy>-30</posy>
				<width>1820</width>
				<height>840</height>
				<onup>9000</onup>
				<ondown condition="Skin.HasSetting(EnableQuickJump)">7000</ondown>
                <ondown condition="!Skin.HasSetting(EnableQuickJump)">60</ondown>
				<onleft>506</onleft>
				<onright>506</onright>
				<viewtype label="31433">biglist</viewtype>
				<orientation>horizontal</orientation>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="cubic" easing="out">600</scrolltime>
				<preloaditems>2</preloaditems>
				<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),506) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
                <visible>!Container.Content(files)</visible>
				<itemlayout width="454" height="900">
				
					<control type="group">
						<posx>0</posx>
						<posy>40</posy>
						<width>460</width>
						<height>900</height>

						<control type="image">
							<posx>8</posx>
							<posy>7</posy>
							<width>443</width>
							<height>765</height>
							<texture border="15">diffuse/bgpanel.png</texture>
							<colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
						</control>
						
						<control type="image">
							<!--Panel icon image-->
							<posx>18</posx>
							<posy>18</posy>
							<width>423</width>
							<height>250</height>
							<texture background="true" diffuse="home/home_matte2.png" fallback="resource://resource.images.skinicons.wide/video.png">$VAR[LandscapeImage]</texture>
							<aspectratio scalediffuse="true" align="center" aligny="center">stretch</aspectratio>
						</control>
                                  						
						<control type="group">
							<!--Watched Overlay-->
							<right>18</right>
							<top>18</top>
							<include>WatchedIndicatorNormal</include>
						</control>
						
						<control type="label">
							<posx>25</posx>
							<posy>360</posy>
							<width>400</width>
							<height>80</height>
							<label>$INFO[ListItem.Genre,,[CR]]$VAR[ListDetails]</label>
							<font>Reg24</font>
							<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
						</control>
						
						<control type="textbox">
							<posx>25</posx>
							<posy>280</posy>
							<width>400</width>
							<height>80</height>
							<label>$VAR[View_Item_Header]</label>
							<font>Bold32</font>
                            
							<textcolor>$INFO[Skin.String(ViewDetailsHighlightTextColor)]</textcolor>
							<aligny>top</aligny>
						</control>
						
						<control type="textbox">
							<posx>25</posx>
							<posy>440</posy>
							<width>410</width>
							<height>305</height>
							<label>$VAR[Plots]</label>
							<font>Reg24</font>
                            
							<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
							<aligny>top</aligny>
							<autoscroll>false</autoscroll>
						</control>
						
						
					</control>
				</itemlayout>
				<focusedlayout width="454" height="900">
				
					<control type="group">
						<posx>0</posx>
						<posy>40</posy>
						<width>460</width>
						<height>900</height>
						
						<control type="image">
							<posx>8</posx>
							<posy>7</posy>
							<width>443</width>
							<height>765</height>
							<texture border="15">diffuse/bgpanel.png</texture>
							<colordiffuse>$VAR[ViewDetailsFocusColor]</colordiffuse>
						</control>
						
						<control type="image">
							<!--Panel icon image-->
							<posx>18</posx>
							<posy>18</posy>
							<width>423</width>
							<height>250</height>
							<texture background="true" diffuse="home/home_matte2.png" fallback="resource://resource.images.skinicons.wide/video.png">$VAR[LandscapeImage]</texture>
							<aspectratio scalediffuse="true" align="center" aligny="center">stretch</aspectratio>
						</control>
						
						<control type="group">
							<!--Watched Overlay-->
							<right>18</right>
							<top>18</top>
							<include>WatchedIndicatorNormal</include>
						</control>
					
						<control type="textbox">
							<posx>25</posx>
							<posy>280</posy>
							<width>400</width>
							<height>80</height>
							<label>$VAR[View_Item_Header]</label>
							<font>Bold32</font>
                            
							<textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
							<aligny>top</aligny>
						</control>
						
						<control type="label">
							<posx>25</posx>
							<posy>360</posy>
							<width>400</width>
							<height>80</height>
							<label>[COLOR=$INFO[Skin.String(ViewDetailsHighlightTextColor)]]$INFO[ListItem.Genre,,[CR]][/COLOR]$VAR[ListDetails]</label>
							<font>Reg24</font>
							<textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
						</control>
						
						<control type="textbox">
							<posx>25</posx>
							<posy>440</posy>
							<width>410</width>
							<height>305</height>
							<label>$VAR[Plots]</label>
							<font>Reg24</font>
                            
							<textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
							<aligny>top</aligny>
						</control>
					
					</control>	
					
				</focusedlayout>

			
			</control>
		
			<!--horizontal Scrollbar-->
			<control type="group">
				<control type="scrollbar" id="60">
					<visible>Control.IsVisible(506) + IntegerGreaterThan(Container.Numitems,0)</visible>
					<left>30</left>
					<posy>795</posy>
					<width>1800</width>
					<height>15</height>
					<onup>506</onup>
					<onleft>60</onleft>
					<onright>60</onright>
					<orientation>horizontal</orientation>
					<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
					<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
				</control>
			</control>
			
		
		</control>
		
	</include>

</includes>
