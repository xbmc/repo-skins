<?xml version="1.0" encoding="UTF-8"?>
<includes>
  
  
  <include name="View_57_BigPanel">
    <control type="group">
      <visible>Control.IsVisible(57)</visible>
      <include>animation_view_change</include>
      
	  <control type="panel" id="57">
        <viewtype label="31426">icons</viewtype>
        <posx>45</posx>
        <bottom>119</bottom>
        <height>760</height>
        <width>1834</width>
        <orientation>vertical</orientation>
        <onleft>9000</onleft>
        <onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
        <onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
        <onup>57</onup>
        <ondown>57</ondown>
        <preloaditems>4</preloaditems>
        <pagecontrol>60</pagecontrol>
		<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),57) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
        <itemlayout height="380" width="262">
          <control type="group">
            <width>259</width>
            <height>380</height>
            <include>PosterPanelLayout</include>
          </control>
        </itemlayout>
        <focusedlayout height="380" width="262">
          <control type="group">
            <width>259</width>
            <height>380</height>
            <include>PosterPanelLayoutFocus</include>
          </control>
        </focusedlayout>
        </control>
      
		<!--vertical Scollbar-->
		<control type="scrollbar" id="60">
			<visible>Control.IsVisible(57) + IntegerGreaterThan(Container.Numitems,0)</visible>
			<right>15</right>
			<bottom>150</bottom>
			<height>730</height>
			<onup>60</onup>
			<ondown>6000</ondown>
			<onleft>57</onleft>
			<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
			<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
		</control>
		
    </control>
	
	
	
  </include>

  </includes>
