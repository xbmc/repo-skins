		    <include>OpenCloseSlideAnimationTwo</include>
				<control type="label">
				  <include>TopBigLabel</include>
					<label>$LOCALIZE[3] $LOCALIZE[559]</label>
					<visible>Window.IsActive(videoplaylist)</visible>
				</control>
				<control type="label">
				  <include>TopBigLabel</include>
					<label>$LOCALIZE[2] $LOCALIZE[559]</label>
