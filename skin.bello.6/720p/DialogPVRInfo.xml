				  <include>TopMenuButton</include>
					<label>$LOCALIZE[19165]</label>
					<oninfo>PreviousMenu</oninfo>
			    <visible>Window.IsVisible(PVRGuideInfo)</visible>
				</control>
				<control type="button" id="8">
