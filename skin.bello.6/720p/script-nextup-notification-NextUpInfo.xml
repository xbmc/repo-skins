<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">3012</defaultcontrol>
	<controls>
		<control type="group">
	    <animation type="WindowOpen" reversible="false">
	      <include>CommonOpenEffect</include>
	    </animation>
	    <animation type="WindowClose" reversible="false">
	      <include>CommonCloseEffect</include>
	    </animation>
      <animation effect="slide" start="0,0" end="0,40" time="250" tween="sine" easing="out" condition="Player.ShowInfo | [[Player.Paused | Player.Forwarding | Player.Rewinding | Player.Seeking | Player.DisplayAfterSeek] + StringCompare(Skin.String(DialogSeekBarStyle),3)]">Conditional</animation>
      <animation effect="slide" start="0,0" end="0,60" time="260" tween="sine" easing="out" condition="[Window.IsActive(VolumeBar) + !Player.Muted]">Conditional</animation>
			<control type="grouplist" id="30">
  			<left>48</left>
  			<top>38</top>
  			<width>1195</width>
  			<height>60</height>
				<onleft>30</onleft>
				<onright>30</onright>
  			<itemgap>-6</itemgap>
				<align>right</align>
			  <aligny>center</aligny>
				<orientation>horizontal</orientation>
				<control type="group" id="33">
					<width>647</width>
					<control type="fadelabel">
					  <description>1st Label</description>
						<top>0</top>
						<height>41</height>
						<width>560</width>
						<label>$LOCALIZE[31318]</label>
						<label>$LOCALIZE[31317]</label>
						<align>right</align>
						<aligny>center</aligny>
						<font>NotificationsFont</font>
						<textcolor>bbwhite</textcolor>
						<shadowcolor>77000000</shadowcolor>
		        <scroll>false</scroll>
		        <scrollout>false</scrollout>
		        <scrollspeed>100</scrollspeed>
		        <pauseatend>6000</pauseatend>
						<visible>!IntegerGreaterThan(Player.TimeRemaining,15)</visible>
					</control>
					<control type="label">
					  <description>1st Label</description>
						<top>0</top>
						<height>41</height>
						<width>640</width>
						<font>NotificationsFont</font>
						<textcolor>bbwhite</textcolor>
						<shadowcolor>77000000</shadowcolor>
				    <align>right</align>
				    <aligny>center</aligny>
						<scroll>false</scroll>
						<label>$LOCALIZE[31317]</label>
				    <visible>IntegerGreaterThan(Player.TimeRemaining,15)</visible>
					</control>
					<control type="label">
					  <description>2nd Label</description>
						<top>20</top>
						<height>44</height>
						<width>640</width>
						<font>NotificationsFont</font>
						<textcolor>77white</textcolor>
						<shadowcolor>77000000</shadowcolor>
				    <align>right</align>
				    <aligny>center</aligny>
						<scroll>false</scroll>
						<label>$INFO[Control.GetLabel(3002),[COLOR=bbwhite]$ADDON[service.nextup.notification 30008]:[/COLOR] ,]$INFO[Control.GetLabel(3000), ,]</label>
					</control>
				</control>
				<control type="label" id="32">
					<height>62</height>
					<width>65</width>
			    <label>$INFO[Player.TimeRemaining(ss)]</label>
					<align>center</align>
					<aligny>center</aligny>
					<font>FontSize_48</font>
					<textcolor>bbwhite</textcolor>
					<shadowcolor>77000000</shadowcolor>
					<visible>IntegerGreaterThan(Player.TimeRemaining,0) + !IntegerGreaterThan(Player.TimeRemaining,15)</visible>
				</control>
				<control type="button" id="3012">
	        <include>OSDControlsButtonBig</include>
					<texturefocus colordiffuse="$VAR[Text.GlobalColor]">osd/play_fo.png</texturefocus>
					<texturenofocus>osd/play_nf.png</texturenofocus>
				</control>
				<control type="button" id="3013">
	        <include>OSDControlsButtonBig</include>
					<texturefocus colordiffuse="$VAR[Text.GlobalColor]">osd/stop_fo.png</texturefocus>
					<texturenofocus>osd/stop_nf.png</texturenofocus>
				</control>
			</control>
