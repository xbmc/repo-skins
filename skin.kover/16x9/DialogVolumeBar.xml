<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- volumebar -->
	<zorder>2</zorder>

	<controls>

		<control type="group">
			<centerleft>50%</centerleft>
			<top>15</top>
			<width>636</width>
			<height>118</height>
			<animation effect="fade" start="0" end="100" time="200">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="200" delay="400">WindowClose</animation>
			<animation effect="slide" start="0,0" end="119,0" time="100" condition="Window.IsActive(infodialog) | Window.IsActive(extendedprogressdialog)">Conditional</animation>
			<animation effect="fade" start="100" end="0" time="0" condition="Window.IsActive(mutebug)">Conditional</animation>

			<!-- Background image -->
			<control type="image">
				<left>0</left>
				<top>0</top>
				<height>118</height>
				<align>center</align>
				<bordersize>0,0,1,0</bordersize>
				<texture colordiffuse="$VAR[CategoryColor2]">common/white.png</texture>
			</control>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<height>118</height>
				<width>118</width>
				<align>center</align>
				<texture colordiffuse="$VAR[CategoryColor]">common/white.png</texture>
			</control>

			<!-- Info Icon -->
			<control type="image">
				<left>20</left>
				<top>20</top>
				<width>80</width>
				<height>80</height>
				<align>center</align>
				<aspectratio>keep</aspectratio>
				<texture colordiffuse="$INFO[Skin.String(Color.B1Txt1F)]">material/volume.png</texture>
			</control>

			<!-- Heading -->
			<control type="label" id="30">
				<left>142</left>
				<top>20</top>
				<width>470</width>
				<height>50</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>Font27</font>
				<textcolor>$INFO[Skin.String(Color.DIATitle)]</textcolor>
				<label>13376</label>
			</control>

			<!-- Details -->
			<control type="label">
				<left>142</left>
				<top>50</top>
				<width>470</width>
				<height>50</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>FontSmallR</font>
				<textcolor>$INFO[Skin.String(Color.DIATxtNF)]</textcolor>
				<label>$INFO[Control.GetLabel(404),,%]</label>
			</control>

			<!-- Progress -->
			<control type="progress" id="404">
				<visible>false</visible>
				<info>player.volume</info>
			</control>

		</control>

	</controls>

</window>