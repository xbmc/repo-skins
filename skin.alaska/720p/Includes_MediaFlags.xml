<!--Alaska-->
<includes>
	<include name="PosterMediaFlagsVars">
		<posy>0</posy>
		<height>36</height>
		<align>center</align>
		<aligny>center</aligny>
		<colordiffuse>FlagDiffuse</colordiffuse>
	</include>
	<include name="PosterMediaFlagsVarsCodec">
		<posx>56</posx>
		<width>60</width>
		<height>36</height>
		<align>center</align>
		<aligny>center</aligny>
		<colordiffuse>CodecDiffuse</colordiffuse>
	</include>
	<include name="PosterMediaFlagsVarsStudio">
		<posy>0</posy>
		<height>36</height>
		<align>center</align>
		<aligny>center</aligny>
		<colordiffuse>StudioDiffuse</colordiffuse>
	</include>
	<include name="PosterMediaFlags">
		<control type="group">
			<include>Animation_SlideUpFadeOut</include>
			<include>Animation_HiddenByInfo</include>
			<posx>494</posx>
			<posy>632</posy>
			<width>418</width>
			<animation effect="slide" start="0,0" end="0,30" time="200" condition="!system.getbool(lookandfeel.enablerssfeeds) | Skin.HasSetting(RSS_only_on_home) + !Window.IsActive(home) + !Window.IsVisible(2006)">Conditional</animation>
			<visible>![Skin.HasSetting(nolanguagepanel) + Skin.HasSetting(noyearpanel) + Skin.HasSetting(nostudiopanel) + Skin.HasSetting(noratingpanel) + Skin.HasSetting(novideopanel) + Skin.HasSetting(noaudiopanel) + Skin.HasSetting(nosubtitlepanel)] + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes)]</visible>
			<!-- Subtitle Panel -->
			<control type="group">
				<posx>-8</posx>
				<visible>!Skin.HasSetting(nosubtitlepanel)</visible>
				<animation effect="slide" start="0,0" end="98,0" condition="Skin.HasSetting(nolanguagepanel) | IsEmpty(ListItem.AudioLanguage)">Conditional</animation>
				<animation effect="slide" start="0,0" end="84,0" condition="Skin.HasSetting(noyearpanel) | IsEmpty(ListItem.Year)">Conditional</animation>
				<animation effect="slide" start="0,0" end="98,0" condition="Skin.HasSetting(noratingpanel) | IsEmpty(ListItem.Rating)">Conditional</animation>
				<animation effect="slide" start="0,0" end="175,0" condition="Skin.HasSetting(novideopanel) | IsEmpty(ListItem.VideoResolution)">Conditional</animation>
				<animation effect="slide" start="0,0" end="108,0" condition="Skin.HasSetting(noaudiopanel) | IsEmpty(ListItem.AudioChannels)">Conditional</animation>
				<animation effect="slide" start="0,0" end="108,0" condition="Skin.HasSetting(nostudiopanel) | IsEmpty(ListItem.Studio) | StringCompare(Control.GetLabel(3500),empty)">Conditional</animation>
				<control type="image">
					<width>94</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_sub.png</texture>
					<visible>!IsEmpty(ListItem.SubtitleLanguage)</visible>
				</control>
				<control type="label">
					<label>$INFO[ListItem.SubtitleLanguage]</label>
					<posx>36</posx>
					<posy>-1</posy>
					<width>56</width>
					<include>PosterMediaFlagsVars</include>
					<font>Font_Flags_Large</font>
					<textcolor>FlagText</textcolor>
					<visible>!IsEmpty(ListItem.SubtitleLanguage)</visible>
				</control>
			</control>
			<!-- Language Panel -->
			<control type="group">
				<posx>96</posx>
				<visible>!Skin.HasSetting(nolanguagepanel)</visible>
				<animation effect="slide" start="0,0" end="84,0" condition="Skin.HasSetting(noyearpanel) | IsEmpty(ListItem.Year)">Conditional</animation>
				<animation effect="slide" start="0,0" end="98,0" condition="Skin.HasSetting(noratingpanel) | IsEmpty(ListItem.Rating)">Conditional</animation>
				<animation effect="slide" start="0,0" end="175,0" condition="Skin.HasSetting(novideopanel) | IsEmpty(ListItem.VideoResolution)">Conditional</animation>
				<animation effect="slide" start="0,0" end="108,0" condition="Skin.HasSetting(noaudiopanel) | IsEmpty(ListItem.AudioChannels)">Conditional</animation>
				<animation effect="slide" start="0,0" end="108,0" condition="Skin.HasSetting(nostudiopanel) | IsEmpty(ListItem.Studio) | StringCompare(Control.GetLabel(3500),empty)">Conditional</animation>
				<control type="image">
					<width>88</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_lang.png</texture>
					<visible>!IsEmpty(ListItem.AudioLanguage)</visible>
				</control>
				<control type="label">
					<label>$INFO[ListItem.AudioLanguage]</label>
					<posx>30</posx>
					<posy>-1</posy>
					<width>56</width>
					<include>PosterMediaFlagsVars</include>
					<font>Font_Flags_Large</font>
					<textcolor>FlagText</textcolor>
					<visible>!IsEmpty(ListItem.AudioLanguage)</visible>
				</control>
			</control>
			<!-- Year Panel -->
			<control type="group">
				<posx>194</posx>
				<visible>!Skin.HasSetting(noyearpanel)</visible>
				<animation effect="slide" start="0,0" end="98,0" condition="Skin.HasSetting(noratingpanel) | IsEmpty(ListItem.Rating)">Conditional</animation>
				<animation effect="slide" start="0,0" end="175,0" condition="Skin.HasSetting(novideopanel) | IsEmpty(ListItem.VideoResolution)">Conditional</animation>
				<animation effect="slide" start="0,0" end="108,0" condition="Skin.HasSetting(noaudiopanel) | IsEmpty(ListItem.AudioChannels)">Conditional</animation>
				<animation effect="slide" start="0,0" end="108,0" condition="Skin.HasSetting(nostudiopanel) | IsEmpty(ListItem.Studio) | StringCompare(Control.GetLabel(3500),empty)">Conditional</animation>
				<control type="image">
					<width>72</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_year.png</texture>
					<visible>!IsEmpty(ListItem.Year)</visible>
				</control>
				<control type="label">
					<label>$INFO[ListItem.Year]</label>
					<posx>8</posx>
					<posy>-1</posy>
					<width>56</width>
					<include>PosterMediaFlagsVars</include>
					<font>Font_Flags_Large</font>
					<textcolor>FlagText</textcolor>
					<visible>!IsEmpty(ListItem.Year)</visible>
				</control>
			</control>
			<!-- Rating Panel -->
			<control type="group" id="600">
				<posx>276</posx>
				<visible>!Skin.HasSetting(noratingpanel)</visible>
				<animation effect="slide" start="0,0" end="175,0" condition="Skin.HasSetting(novideopanel) | IsEmpty(ListItem.VideoResolution)">Conditional</animation>
				<animation effect="slide" start="0,0" end="108,0" condition="Skin.HasSetting(noaudiopanel) | IsEmpty(ListItem.AudioChannels)">Conditional</animation>
				<animation effect="slide" start="0,0" end="108,0" condition="Skin.HasSetting(nostudiopanel) | IsEmpty(ListItem.Studio) | StringCompare(Control.GetLabel(3500),empty)">Conditional</animation>
				<control type="image" id="601">
					<width>88</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_imdb.png</texture>
					<visible>!IsEmpty(ListItem.Rating)</visible>
				</control>
				<control type="label" id="602">
					<label>$INFO[ListItem.Rating]</label>
					<posx>29</posx>
					<posy>-1</posy>
					<width>56</width>
					<include>PosterMediaFlagsVars</include>
					<font>Font_Flags_Large</font>
					<textcolor>FlagText</textcolor>
					<visible>!IsEmpty(ListItem.Rating)</visible>
				</control>
			</control>
			<!-- Video Panel -->
			<control type="group">
				<posx>376</posx>
				<visible>!Skin.HasSetting(novideopanel)</visible>
				<animation effect="slide" start="0,0" end="108,0" condition="Skin.HasSetting(noaudiopanel) | IsEmpty(ListItem.AudioChannels)">Conditional</animation>
				<animation effect="slide" start="0,0" end="108,0" condition="Skin.HasSetting(nostudiopanel) | IsEmpty(ListItem.Studio) | StringCompare(Control.GetLabel(3500),empty)">Conditional</animation>
				<control type="image">
					<width>167</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_aspect_480.png</texture>
					<visible>!IsEmpty(ListItem.VideoResolution) + substring(ListItem.VideoResolution,480)</visible>
				</control>
				<control type="image">
					<width>167</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_aspect_540.png</texture>
					<visible>!IsEmpty(ListItem.VideoResolution) + substring(ListItem.VideoResolution,540)</visible>
				</control>
				<control type="image">
					<width>167</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_aspect_720.png</texture>
					<visible>!IsEmpty(ListItem.VideoResolution) + substring(ListItem.VideoResolution,720)</visible>
				</control>
				<control type="image">
					<width>167</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_aspect_1080.png</texture>
					<visible>!IsEmpty(ListItem.VideoResolution) + substring(ListItem.VideoResolution,1080)</visible>
				</control>
				<control type="image">
					<width>167</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_aspect_133.png</texture>
					<visible>!IsEmpty(ListItem.VideoResolution) + substring(ListItem.VideoAspect,1.33)</visible>
				</control>
				<control type="image">
					<width>167</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_aspect_166.png</texture>
					<visible>!IsEmpty(ListItem.VideoResolution) + substring(ListItem.VideoAspect,1.66)</visible>
				</control>
				<control type="image">
					<width>167</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_aspect_178.png</texture>
					<visible>!IsEmpty(ListItem.VideoResolution) + substring(ListItem.VideoAspect,1.78)</visible>
				</control>
				<control type="image">
					<width>167</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_aspect_185.png</texture>
					<visible>!IsEmpty(ListItem.VideoResolution) + substring(ListItem.VideoAspect,1.85)</visible>
				</control>
				<control type="image">
					<width>167</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_aspect_220.png</texture>
					<visible>!IsEmpty(ListItem.VideoResolution) + substring(ListItem.VideoAspect,2.20)</visible>
				</control>
				<control type="image">
					<width>167</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_aspect_235.png</texture>
					<visible>!IsEmpty(ListItem.VideoResolution) + substring(ListItem.VideoAspect,2.35)</visible>
				</control>
				<control type="image">
					<width>167</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_aspect_right.png</texture>
					<visible>!IsEmpty(ListItem.VideoResolution) + IsEmpty(ListItem.VideoAspect)</visible>
				</control>
				<control type="image">
					<include>PosterMediaFlagsVarsCodec</include>
					<texture fallback="empty">$INFO[Listitem.VideoCodec,flags/VideoCodec/,.png]</texture>
					<visible>!substring(listitem.filename,hdtv) + !substring(listitem.filename,dvd) + !substring(listitem.filename,bluray) + !substring(listitem.filename,blu-ray) + !substring(listitem.filename,bdrip) + !substring(listitem.filename,.iso,Right) + !substring(listitem.filename,.ifo,Right) + !substring(listitem.filename,sdtv)</visible>
					<visible>!IsEmpty(ListItem.VideoResolution)</visible>
				</control>
				<control type="image">
					<include>PosterMediaFlagsVarsCodec</include>
					<texture>flags/Source/sdtv.png</texture>
					<visible>substring(listitem.filename,sdtv)</visible>
					<visible>!IsEmpty(ListItem.VideoResolution)</visible>
				</control>
				<control type="image">
					<include>PosterMediaFlagsVarsCodec</include>
					<texture>flags/Source/hdtv.png</texture>
					<visible>substring(listitem.filename,hdtv)</visible>
					<visible>!IsEmpty(ListItem.VideoResolution)</visible>
				</control>
				<control type="image">
					<include>PosterMediaFlagsVarsCodec</include>
					<texture>flags/Source/hddvd.png</texture>
					<visible>substring(listitem.filename,hddvd) | substring(listitem.filename,hd-dvd)</visible>
					<visible>!IsEmpty(ListItem.VideoResolution)</visible>
				</control>
				<control type="image">
					<include>PosterMediaFlagsVarsCodec</include>
					<texture>flags/Source/bluray.png</texture>
					<visible>substring(listitem.filename,bluray) | substring(listitem.filename,blu-ray) | substring(listitem.filename,bdrip)</visible>
					<visible>!IsEmpty(ListItem.VideoResolution)</visible>
				</control>
				<control type="image">
					<include>PosterMediaFlagsVarsCodec</include>
					<texture>flags/Source/dvd.png</texture>
					<visible>[substring(listitem.filename,dvd) + !substring(listitem.filename,hddvd) + !substring(listitem.filename,hd-dvd) + !substring(listitem.filename,bluray)] | [substring(listitem.filename,.iso,Right) + !substring(listitem.filename,bluray)] | substring(listitem.filename,.ifo,Right)</visible>
					<visible>!IsEmpty(ListItem.VideoResolution)</visible>
				</control>
			</control>
			<!-- Audio Panel -->
			<control type="group">
				<posx>552</posx>
				<visible>!Skin.HasSetting(noaudiopanel)</visible>
				<animation effect="slide" start="0,0" end="108,0" condition="Skin.HasSetting(nostudiopanel) | IsEmpty(ListItem.Studio) | StringCompare(Control.GetLabel(3500),empty)">Conditional</animation>
				<control type="image">
					<width>100</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_audio_1_0.png</texture>
					<visible>!IsEmpty(ListItem.AudioChannels) + substring(ListItem.AudioChannels,1)</visible>
				</control>
				<control type="image">
					<width>100</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_audio_2_0.png</texture>
					<visible>!IsEmpty(ListItem.AudioChannels) + substring(ListItem.AudioChannels,2)</visible>
				</control>
				<control type="image">
					<width>100</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_audio_4_0.png</texture>
					<visible>!IsEmpty(ListItem.AudioChannels) + substring(ListItem.AudioChannels,4)</visible>
				</control>
				<control type="image">
					<width>100</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_audio_5_0.png</texture>
					<visible>!IsEmpty(ListItem.AudioChannels) + substring(ListItem.AudioChannels,5)</visible>
				</control>
				<control type="image">
					<width>100</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_audio_5_1.png</texture>
					<visible>!IsEmpty(ListItem.AudioChannels) + substring(ListItem.AudioChannels,6)</visible>
				</control>
				<control type="image">
					<width>100</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_audio_6_1.png</texture>
					<visible>!IsEmpty(ListItem.AudioChannels) + substring(ListItem.AudioChannels,7)</visible>
				</control>
				<control type="image">
					<width>100</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_audio_7_1.png</texture>
					<visible>!IsEmpty(ListItem.AudioChannels) + substring(ListItem.AudioChannels,8)</visible>
				</control>
				<control type="image">
					<posx>5</posx>
					<include>PosterMediaFlagsVarsCodec</include>
					<texture fallback="empty">$INFO[Listitem.AudioCodec,flags/AudioCodec/,.png]</texture>
					<visible>!IsEmpty(ListItem.AudioChannels)</visible>
				</control>
			</control>
			<!-- Studio Panel -->
			<control type="group">
				<posx>664</posx>
				<posy>-30</posy>
				<animation effect="fade" start="100" end="0" condition="Skin.HasSetting(nostudiopanel) | IsEmpty(ListItem.Studio) | StringCompare(Control.GetLabel(3500),empty)">Conditional</animation>
				<visible>!Skin.HasSetting(nostudiopanel) | !IsEmpty(ListItem.Studio)</visible>
				<control type="image">
					<width>92</width>
					<height>63</height>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_studio.png</texture>
				</control>
				<control type="image" id="3500">
					<posx>2</posx>
					<posy>2</posy>
					<width>88</width>
					<height>59</height>
					<include>PosterMediaFlagsVarsStudio</include>
					<texture fallback="empty">studios/$INFO[ListItem.Studio,,.png]</texture>
				</control>
			</control>
		</control>
	</include>
</includes>