<includes>
	<include name="Viewtype_Landscape">
		<!-- Browser -->
		<control type="fixedlist" id="52">
			<posx>-110</posx>
			<posy>50</posy>
			<height>500</height>
			<width>1400</width>
			<onleft>52</onleft>
			<onright>52</onright>
			<onup>7000</onup>
			<ondown>7777</ondown>
			<viewtype label="40291">list</viewtype>
			<orientation>horizontal</orientation>
			<focusposition>2</focusposition>
			<scrolltime>200</scrolltime>
			<preloaditems>2</preloaditems>
			<include>Animation_ZoomInZoomOut</include>
			<include>Animation_ZoomedByMenu</include>
			<visible>Container.Content(movies) | Container.Content(albums) | Container.Content(artists) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)</visible>
			<itemlayout width="278" height="194">
				<control type="image">
					<posx>1</posx>
					<posy>131</posy>
					<width>270</width>
					<height>152</height>
					<texture>landscape/landscapematteNF.png</texture>
					<colordiffuse>BackgroundColor</colordiffuse>
					<include>Animation_HiddenByInfo</include>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>131</posy>
					<width>270</width>
					<height>152</height>
					<texture background="true" diffuse="landscape/landscapematteNF.png">$INFO[ListItem.Icon]</texture>
					<fadetime>200</fadetime>
					<colordiffuse>IconDiffuse</colordiffuse>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_HiddenByInfo</include>
					<visible>Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)</visible>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>131</posy>
					<width>270</width>
					<height>152</height>
					<texture background="true" fallback="special://skin/backdrops/movies.jpg" diffuse="landscape/landscapematteNF.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
					<fadetime>200</fadetime>
					<colordiffuse>IconDiffuse</colordiffuse>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_HiddenByInfo</include>
					<visible>Container.Content(movies) | Container.Content(albums) | Container.Content(artists)</visible>
				</control>
				<control type="image">
					<posx>-1</posx>
					<posy>129</posy>
					<width>274</width>
					<height>156</height>
					<texture>landscape/landscapeframeNF.png</texture>
					<include>Animation_HiddenByInfo</include>
				</control>
				<include condition="Skin.HasSetting(tvoverlays) + Window.IsActive(25)">LandscapeTVOverlaysNF</include>
				<include condition="Skin.HasSetting(movieoverlays) + Window.IsActive(25)">LandscapeMovieOverlaysNF</include>
				<control type="image">
					<posx>1</posx>
					<posy>288</posy>
					<width>270</width>
					<height>152</height>
					<texture background="true" flipy="true" diffuse="landscape/landscapematteNF_reflect.png">$INFO[ListItem.Icon]</texture>
					<fadetime>200</fadetime>
					<colordiffuse>IconDiffuse</colordiffuse>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_HiddenByInfo</include>
					<visible>Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)</visible>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>288</posy>
					<width>270</width>
					<height>152</height>
					<texture background="true" flipy="true" fallback="special://skin/backdrops/movies.jpg" diffuse="landscape/landscapematteNF_reflect.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
					<fadetime>200</fadetime>
					<colordiffuse>IconDiffuse</colordiffuse>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_HiddenByInfo</include>
					<visible>Container.Content(movies) | Container.Content(albums) | Container.Content(artists)</visible>
				</control>
			</itemlayout>
			<focusedlayout width="388" height="222">
				<control type="image">
					<posx>1</posx>
					<posy>76</posy>
					<width>380</width>
					<height>214</height>
					<texture background="true" diffuse="landscape/landscapematteFO.png">$INFO[ListItem.Icon]</texture>
					<fadetime>200</fadetime>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_LandscapeInfoSlide</include>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="191,263" start="70" end="100" time="400" tween="back" easing="out" />
						<effect type="fade" start="80" end="100" time="400" />
					</animation>
					<visible>Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)</visible>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>76</posy>
					<width>380</width>
					<height>214</height>
					<texture background="true" fallback="special://skin/backdrops/movies.jpg" diffuse="landscape/landscapematteFO.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
					<fadetime>200</fadetime>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_LandscapeInfoSlide</include>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="191,263" start="70" end="100" time="400" tween="back" easing="out" />
						<effect type="fade" start="80" end="100" time="400" />
					</animation>
					<visible>Container.Content(movies) | Container.Content(albums) | Container.Content(artists)</visible>
				</control>
				<control type="image">
					<posx>-15</posx>
					<posy>62</posy>
					<width>412</width>
					<height>242</height>
					<texture>landscape/landscapeframeFO.png</texture>
					<include>Animation_LandscapeInfoSlide</include>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="191,263" start="70" end="100" time="400" tween="back" easing="out" />
						<effect type="fade" start="80" end="100" time="400" />
					</animation>
				</control>
				<include condition="Skin.HasSetting(movieoverlays) + Window.IsActive(25)">LandscapeMovieOverlaysFO</include>
				<include condition="Skin.HasSetting(tvoverlays) + Window.IsActive(25)">LandscapeTVOverlaysFO</include>
			</focusedlayout>
		</control>
		<!-- Browser label and flags -->
		<control type="group">
			<posx>458</posx>
			<posy>344</posy>
			<visible>Control.IsVisible(52)</visible>
			<include>Animation_ZoomInZoomOut</include>
			<include>Animation_ZoomedByMenu</include>
			<include>Animation_HiddenByInfo</include>
