			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<width>640</width>
				<height>50</height>
				<aligny>center</aligny>
				<font>Font_MainMenuLabel</font>
				<textcolor>PosterTitle</textcolor>
				<label>[B]$INFO[ListItem.Label][/B]</label>
