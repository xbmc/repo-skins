			<control type="label">
				<posx>0</posx>
				<posy>32</posy>
				<width>640</width>
				<height>50</height>
				<aligny>center</aligny>
				<font>Font_LandScapeTVShow</font>
				<textcolor>LandscapeTitle</textcolor>
				<label>$INFO[ListItem.Genre,[B]$LOCALIZE[515]: [/B]]</label>
