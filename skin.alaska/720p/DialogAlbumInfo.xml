<!--Alaska-->
<window id="2001">
	<defaultcontrol always="true">7050</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<animation type="WindowOpen">
		<effect type="zoom" delay="400" time="400" center="640,360" start="180" end="100" tween="back" easing="out" />
		<effect type="fade" delay="400" time="400" center="640,360" start="0" end="100" />
	</animation>
	<animation type="WindowClose">
		<effect type="zoom" time="200" center="640,360" start="100" end="180" tween="cubic" easing="in" />
		<effect type="fade" time="200" center="640,360" start="100" end="0" />
	</animation>
	<controls>
		<!-- invisible button to trigger view options -->
		<control type="button" id="7050">
			<texturefocus />
			<texturenofocus />
			<onleft>50</onleft>
			<onright>50</onright>
			<onup>7001</onup>
			<ondown>7001</ondown>
			<onclick />
		</control>
		<control type="image">
			<description>Cover image</description>
			<posx>200</posx>
			<posy>140</posy>
			<width>350</width>
			<height>350</height>
			<info>Listitem.Icon</info>
			<aspectratio>keep</aspectratio>
			<bordertexture border="8">common/thumb_border.png</bordertexture>
			<bordersize>8</bordersize>
			<include>Animation_ZoomedByMenu</include>
		</control>
		<control type="group">
			<posx>580</posx>
			<posy>140</posy>
			<include>Animation_ZoomedByMenu</include>
			<!-- artist -->
			<control type="label">
				<description>Title</description>
				<visible>Container.Content(artists)</visible>
				<label>$INFO[Listitem.Artist]</label>
				<width>550</width>
				<font>Font_PosterTitle</font>
				<textcolor>InfoTitle</textcolor>
				<info>ListItem.Label</info>
			</control>
			<control type="label">
				<visible>Container.Content(artists)</visible>
				<label>[B]$LOCALIZE[515]:[/B] $INFO[ListItem.Genre]</label>
				<posx>0</posx>
				<posy>45</posy>
				<width>550</width>
				<height>25</height>
				<font>Font_Date</font>
				<textcolor>InfoGenre</textcolor>
			</control>
			<control type="label">
				<visible>Container.Content(artists) + IsEmpty(ListItem.Property(Formed))</visible>
				<label>[B]$LOCALIZE[21893]:[/B] $INFO[ListItem.Property(Born)]</label>
				<posx>0</posx>
				<posy>70</posy>
				<width>550</width>
				<height>25</height>
				<font>Font_Date</font>
				<textcolor>InfoGenre</textcolor>
			</control>
			<control type="label">
				<visible>Container.Content(artists) + IsEmpty(ListItem.Property(Born)) + !IsEmpty(ListItem.Property(Formed))</visible>
				<label>[B]$LOCALIZE[21894]:[/B] $INFO[ListItem.Property(Formed)]</label>
				<posx>0</posx>
				<posy>70</posy>
				<width>550</width>
				<height>25</height>
				<font>Font_Date</font>
				<textcolor>InfoGenre</textcolor>
			</control>
			<control type="label">
				<visible>Container.Content(artists)</visible>
				<label>[B]$LOCALIZE[175]:[/B] $INFO[ListItem.Property(AlbumMoods)]</label>
				<posx>0</posx>
				<posy>95</posy>
				<width>550</width>
				<height>25</height>
				<font>Font_Date</font>
				<textcolor>InfoGenre</textcolor>
			</control>
			<control type="label">
				<visible>Container.Content(artists)</visible>
				<label>[B]$LOCALIZE[176]:[/B] $INFO[ListItem.Property(Styles)]</label>
				<posx>0</posx>
				<posy>120</posy>
				<width>550</width>
				<height>25</height>
				<font>Font_Date</font>
				<textcolor>InfoGenre</textcolor>
			</control>
			<!-- album -->
			<control type="label">
				<description>Title</description>
				<visible>Container.Content(albums)</visible>
				<label>$INFO[Listitem.Album]</label>
				<width>550</width>
				<font>Font_PosterTitle</font>
				<textcolor>InfoTitle</textcolor>
				<info>ListItem.Label</info>
			</control>
			<control type="label">
				<visible>Container.Content(albums)</visible>
				<label>$INFO[ListItem.Artist]</label>
				<posx>0</posx>
				<posy>45</posy>
				<width>620</width>
				<height>25</height>
				<font>Font_EpisodeTitleNF</font>
				<textcolor>InfoGenre</textcolor>
			</control>
			<control type="label">
				<visible>Container.Content(albums)</visible>
				<label>[B]$LOCALIZE[515]:[/B] $INFO[ListItem.Genre]</label>
				<posx>0</posx>
				<posy>75</posy>
				<width>550</width>
				<height>25</height>
				<font>Font_Date</font>
				<textcolor>InfoGenre</textcolor>
			</control>
			<control type="label">
				<visible>Container.Content(albums)</visible>
				<label>[B]$LOCALIZE[562]:[/B] $INFO[ListItem.Year]</label>
				<posx>0</posx>
				<posy>105</posy>
				<width>620</width>
				<height>25</height>
				<font>Font_Date</font>
				<textcolor>InfoGenre</textcolor>
			</control>
			<control type="label">
				<visible>Container.Content(albums)</visible>
				<label>[B]$LOCALIZE[563]:[/B] $INFO[ListItem.Rating]</label>
				<posx>0</posx>
				<posy>135</posy>
				<width>620</width>
				<height>25</height>
				<font>Font_Date</font>
				<textcolor>InfoGenre</textcolor>
			</control>
			<control type="textbox" id="4">
				<visible>!Control.IsVisible(50)</visible>
				<posy>165</posy>
				<width>550</width>
				<height>168</height>
				<font>Font_InfoPlot</font>
				<textcolor>InfoPlot</textcolor>
				<info>ListItem.Plot</info>
				<autoscroll time="4000" delay="12000" repeat="8000">Skin.HasSetting(autoscroll)</autoscroll>
			</control>
			<control type="panel" id="50">
				<description>Tracks</description>
				<posx>0</posx>
				<posy>165</posy>
				<width>580</width>
				<height>180</height>
				<onleft>7001</onleft>
				<onright>7001</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				<viewtype label="">list</viewtype>
				<pagecontrol>-</pagecontrol>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<itemlayout height="26" width="480">
					<control type="label">
						<posx>15</posx>
						<posy>3</posy>
						<width>30</width>
						<height>20</height>
						<align>center</align>
						<aligny>center</aligny>
						<font>Font_InfoPlot</font>
						<textcolor>InfoPlot</textcolor>
						<info>ListItem.Label2</info>
					</control>
					<control type="label">
						<posx>30</posx>
						<posy>3</posy>
						<width>580</width>
						<height>20</height>
						<align>left</align>
						<aligny>center</aligny>
						<font>Font_InfoPlot</font>
						<textcolor>InfoPlot</textcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="24" width="580">
					<control type="label">
						<posx>15</posx>
						<posy>3</posy>
						<width>30</width>
						<height>20</height>
						<align>center</align>
						<aligny>center</aligny>
						<font>Font_ListDetail</font>
						<textcolor>ListTitleFO</textcolor>
						<info>ListItem.Label2</info>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>3</posy>
						<width>580</width>
						<height>20</height>
						<align>left</align>
						<aligny>center</aligny>
						<font>Font_ListDetail</font>
						<textcolor>ListTitleFO</textcolor>
						<info>ListItem.Label</info>
					</control>
				</focusedlayout>
			</control>
		</control>
		<!-- view options -->
		<include>Global_ContextFilter</include>
		<control type="grouplist" id="7001">
			<width>1000</width>
			<height>40</height>
			<posx>216</posx>
			<onup>7050</onup>
			<ondown>7050</ondown>
			<itemgap>0</itemgap>
			<visible allowhiddenfocus="true">ControlGroup(7001).HasFocus</visible>
			<include>Animation_ZoomInMenu</include>
			<orientation>horizontal</orientation>
			<posy>330</posy>
			<control type="button" id="5">
				<description>Review/Tracks</description>
				<label>$LOCALIZE[182]</label>
				<posx>0</posx>
				<posy>30</posy>
				<width>224</width>
				<height>30</height>
				<align>center</align>
				<font>Font_MenuValue</font>
				<textcolor>MenuValue</textcolor>
				<animation type="conditional" condition="!ControlGroup(7001).HasFocus(5)">
					<effect type="zoom" center="100,0" start="100" end="70" time="200" tween="cubic" easing="in" />
					<effect type="fade" start="100" end="75" time="200" />
				</animation>
			</control>
			<control type="button" id="6">
				<description>Refresh button</description>
				<label>$LOCALIZE[184]</label>
				<include>WindowMenuButton</include>
				<animation type="conditional" condition="!ControlGroup(7001).HasFocus(6)">
					<effect type="zoom" center="100,0" start="100" end="70" time="200" tween="cubic" easing="in" />
					<effect type="fade" start="100" end="75" time="200" />
				</animation>
			</control>
			<control type="button" id="10">
				<description>Thumb</description>
				<label>$LOCALIZE[40112]</label>
				<include>WindowMenuButton</include>
				<animation type="conditional" condition="!ControlGroup(7001).HasFocus(10)">
					<effect type="zoom" center="100,0" start="100" end="70" time="200" tween="cubic" easing="in" />
					<effect type="fade" start="100" end="75" time="200" />
				</animation>
			</control>
			<control type="button" id="12">
				<description>Get Fanart</description>
				<label>$LOCALIZE[20445]</label>
				<include>WindowMenuButton</include>
				<animation type="conditional" condition="!ControlGroup(7001).HasFocus(12)">
					<effect type="zoom" center="100,0" start="100" end="70" time="200" tween="cubic" easing="in" />
					<effect type="fade" start="100" end="75" time="200" />
				</animation>
			</control>
		</control>
		<control type="grouplist">
			<width>1000</width>
			<height>40</height>
			<posx>216</posx>
			<onup>7050</onup>
			<ondown>7050</ondown>
			<itemgap>0</itemgap>
			<visible allowhiddenfocus="true">ControlGroup(7001).HasFocus</visible>
			<include>Animation_ZoomInMenu</include>
			<orientation>horizontal</orientation>
			<posy>300</posy>
			<!-- Cast/Review -->
			<control type="button" id="7040">
				<posx>0</posx>
				<posy>0</posy>
				<width>224</width>
				<height>30</height>
				<align>center</align>
				<font>Font_MenuLabel</font>
				<textcolor>MenuValue</textcolor>
				<aligny>bottom</aligny>
				<label>$LOCALIZE[40113]</label>
				<animation type="conditional" condition="!ControlGroup(7001).HasFocus(5)">
					<effect type="zoom" center="100,30" start="100" end="70" time="200" tween="cubic" easing="in" />
					<effect type="fade" start="100" end="75" time="200" />
				</animation>
			</control>
			<!-- refresh -->
			<control type="button" id="7041">
				<include>WindowMenuLabel</include>
				<label>$LOCALIZE[40114]</label>
				<animation type="conditional" condition="!ControlGroup(7001).HasFocus(6)">
					<effect type="zoom" center="100,30" start="100" end="70" time="200" tween="cubic" easing="in" />
					<effect type="fade" start="100" end="75" time="200" />
				</animation>
			</control>
			<!-- Fanart -->
			<control type="button" id="7042">
				<include>WindowMenuLabel</include>
				<label>$LOCALIZE[40115]</label>
				<animation type="conditional" condition="!ControlGroup(7001).HasFocus(10)">
					<effect type="zoom" center="100,30" start="100" end="70" time="200" tween="cubic" easing="in" />
					<effect type="fade" start="100" end="75" time="200" />
				</animation>
			</control>
			<!-- Thumb -->
			<control type="button" id="7043">
				<include>WindowMenuLabel</include>
				<label>$LOCALIZE[40115]</label>
				<animation type="conditional" condition="!ControlGroup(7001).HasFocus(12)">
					<effect type="zoom" center="100,30" start="100" end="70" time="200" tween="cubic" easing="in" />
					<effect type="fade" start="100" end="75" time="200" />
				</animation>
			</control>
		</control>
		<include>Object_DebugGrid</include>
		<control type="group">
			<include>Debug</include>
			<visible>Skin.HasSetting(debugmode)</visible>
		</control>
	</controls>
</window>