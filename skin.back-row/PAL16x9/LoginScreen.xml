<window type="dialog" id="29">

	<defaultcontrol always="true">52</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	<controls>


		<control type="image">
			<description>Panel Image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>background2.png</texture>
			<visible>!Skin.HasSetting(Background)</visible>
		</control>

		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<imagepath>Menus</imagepath>
			<info>Skin.String(CustomMenu)</info>
			<timeperimage>5000</timeperimage>
			<fadetime>2000</fadetime>
			<randomize>true</randomize>
			<visible>!Skin.HasSetting(CustomMenu)</visible>
			<visible>Skin.HasSetting(Background)</visible>
			<animation effect="fade" time="200">WindowOpen</animation>
			<animation effect="fade" time="300">WindowClose</animation>
			<animation effect="fade" time="200">Visible</animation>
			<animation effect="fade" delay = "200" time="800">Hidden</animation>
		</control>

		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<imagepath>-</imagepath>
			<info>Skin.String(CustomMenuFolder)</info>
			<timeperimage>5000</timeperimage>
			<fadetime>2000</fadetime>
			<randomize>true</randomize>
			<visible>!Skin.HasSetting(CustomMenuFolder)</visible>
			<visible>Skin.HasSetting(Background)</visible>
			<animation effect="fade" time="200">WindowOpen</animation>
			<animation effect="fade" time="300">WindowClose</animation>
			<animation effect="fade" time="200">Visible</animation>
			<animation effect="fade" delay = "200" time="800">Hidden</animation>
		</control>

		<control type="image">
			<description>Background</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>395</height>
			<texture>Back-Row.png</texture>
			<animation effect="fade" time="200">WindowOpen</animation>
			<visible>!Skin.HasSetting(Background)</visible>
		</control>

		<control type="image">
			<description>Mask Overlay</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>Dark Mask.png</texture>
			<visible>!Skin.HasSetting(Mask Overlay)</visible>
		</control>

		<control type="image">
			<description>Mask Overlay</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>Dark Mask.png</texture>
			<visible>!Skin.HasSetting(Mask Overlay)</visible>
		</control>

		<control type="image">
			<description>Panel Image</description>
			<posx>-30</posx>
			<posy>358</posy>
			<width>750</width>
			<height>216</height>
			<texture>chairs1.png</texture>
			<animation effect="fade" time="200">WindowOpen</animation>
			<visible>!Skin.HasSetting(Background)</visible>
		</control>

		<control type="wraplist" id="52">
			<viewtype label="Big WrapList">bigwrap</viewtype>
			<posx>0</posx>
			<posy>93.5</posy>
			<width>720</width>
			<height>504</height>
			<onleft>90</onleft>
			<onright>90</onright>
			<onup>2</onup>
			<ondown>98</ondown>
			<focusposition>1</focusposition>
			<orientation>horizontal</orientation>
			<itemlayout height="270" width="180">

				<control type="image">
					<posx>10</posx>
					<posy>170</posy>
					<width>170</width>
					<height>190</height>
					<info>ListItem.Icon</info>
					<aspectratio aligny="bottom">stretch</aspectratio>
				</control>

			</itemlayout>

			<focusedlayout height="270" width="180">

				<control type="image">
					<posx>10</posx>
					<posy>170</posy>
					<width>170</width>
					<height>190</height>
					<info>ListItem.Icon</info>
					<aspectratio aligny="bottom">stretch</aspectratio>
				</control>

			</focusedlayout>

		</control>

		<control type="label">
			<posx>30</posx>
			<posy>500</posy>
			<width>660</width>
			<height>16</height>
			<font>special14</font>
			<textcolor>white</textcolor>
			<shadowcolor>black</shadowcolor>
			<align>center</align>
			<info>ListItem.Label</info>
			<textcolor>white</textcolor>
			<shadowcolor>black</shadowcolor>
			<visible>Control.IsVisible(52)</visible>
		</control>

		<!-- Logon Info -->
		<control type="label">
			<posx>100</posx>
			<posy>530</posy>
			<width>520</width>
			<height>16</height>
			<font>special12</font>
			<align>center</align>
			<textcolor>white</textcolor>
			<shadowcolor>black</shadowcolor>
			<info>ListItem.Label2</info>
			<textcolor>white</textcolor>
			<shadowcolor>black</shadowcolor>
			<visible>Control.IsVisible(52)</visible>
		</control>

		<control type="label" id="3">
			<description>Profile Count Label</description>
			<posx>40</posx>
			<posy>528</posy>
			<width>420</width>
			<!--<align>-</align>-->
			<font>special13</font>
			<textcolor>white</textcolor>
			<shadowcolor>black</shadowcolor>
			<shadowcolor>shadow</shadowcolor>
			<visible>!Window.IsActive(130) + !Window.IsActive(131)</visible>
		</control>

		<control type="button" id="98">
			<description>Submenu Button</description>
			<posx>660</posx>
			<posy>520</posy>
			<width>40</width>
			<height>50</height>
			<onclick>ActivateWindow(ShutdownMenu)</onclick>
			<texturefocus>home-power-focus.png</texturefocus>
			<texturenofocus>-</texturenofocus>
			<label>-</label>
			<onleft>52</onleft>
			<onright>52</onright>
			<onup>52</onup>
			<ondown>52</ondown>
		</control>

		<!-- Date and Time Labels -->
		<control type="label">
			<description>Time label</description>
			<posx>700</posx>
			<posy>20</posy>
			<width>300</width>
			<label>$INFO[System.Time] | $INFO[System.Date]</label>
			<aligy>center</aligy>
			<align>right</align>
			<font>fontkb</font>
			<textcolor>white</textcolor>
			<shadowcolor>black</shadowcolor>
			<animation effect="fade" time="200">WindowOpen</animation>
			<animation effect="fade" time="200">WindowClose</animation>
		</control>


	</controls>
</window>