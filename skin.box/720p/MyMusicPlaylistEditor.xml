<?xml version="1.0" encoding="utf-8"?>
<window id="503">
    <defaultcontrol allways="true">6</defaultcontrol>
     
    <views>50</views>
    <controls>
        <include>SkinFanart</include>
        <control type="group">
            <animation type="TYPE" condition="Window.IsVisible(2001)" reversible="false">
                <effect type="slide" end="-1500,0" time="200" />
            </animation>
            <animation type="TYPE" condition="!Window.IsVisible(2001)" reversible="false">
                <effect type="slide" start="-1500,0" time="200" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
			<!-- MUSIC Label -->
            <control type="label">
				<include>ViewMainTitle</include>	
                <label fallback="MUSIC">$INFO[Container(50).FolderName]</label>
            </control>
			<!-- Playlist Label -->
			<control type="label">
				<left>803</left>
				<include>ViewMainTitle</include>	
                <label>559</label>
            </control>
			<control type="label">
				<include>ViewFooterTitle</include>
				<label>ALBUM [COLOR Accent]$INFO[Container(50).ListItem.Album][/COLOR]</label>
				<visible>!String.IsEmpty(Container(50).ListItem.Duration) + Control.HasFocus(50)</visible>
			</control>
			<control type="label">
				<left>803</left>
				<include>ViewFooterTitle</include>
				<label>ALBUM [COLOR Accent]$INFO[Container(100).ListItem.Album][/COLOR]</label>
				<visible>!String.IsEmpty(Container(100).ListItem.Duration) + Control.HasFocus(100)</visible>
			</control>
			<!-- Left Panel -->
            <control type="group">
                <description>Left panel</description>
				<include>PanelCoordinates</include>
                <!-- Panel Background -->
				<control type="image">
                    <width>428</width>
                    <height>315</height>
                    <texture>music_fanart_diffuse.png</texture>
                    <fadetime>200</fadetime>
                    <aspectratio scalediffuse="false">stretch</aspectratio>
                </control>
                <control type="list" id="50">
                    <width>428</width>
                    <height>315</height>
                    <onleft>noop</onleft>
                    <onright>9000</onright>
                    <onup>50</onup>
                    <ondown>50</ondown>
                    <viewtype label="">list</viewtype>
                    <scrolltime>200</scrolltime>
                    <itemlayout height="45" width="428">
                        <control type="label">
                            <left>10</left>
                            <top>0</top>
                            <width>380</width>
                            <info>ListItem.Label</info>
							<font>List_Unfocused</font>
                        </control>
                        <control type="label">
                            <left>418</left>
                            <width>380</width>
                            <align>right</align>
                            <info>ListItem.Label2</info>
							<textcolor>Accent</textcolor>
							<font>List_Unfocused</font>
                        </control>
                    </itemlayout>
                    <focusedlayout height="45" width="428">
                        
						<control type="image">
							<width>428</width>
                            <height>45</height>
                            <texture>button.png</texture>
                            <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(50)">Conditional</animation>
					    </control>
						<control type="label">
                            <left>10</left>
                            <top>0</top>
                            <width>380</width>
                            <info>ListItem.Label</info>
							<font>List_Focused</font>
                        </control>
                        <control type="label">
                            <left>418</left>
                            <width>380</width>
                            <align>right</align>
                            <info>ListItem.Label2</info>
							<font>List_Focused</font>
                        </control>
                    </focusedlayout>
                </control>
            </control>
            <!-- Center Panel -->
			<control type="group">
                <left>483</left>
				<top>290</top>
 				<!-- Default Background-->
				<control type="image">
					<width>315</width>
                    <height>315</height>
                    <texture>button.png</texture>
                    <fadetime>200</fadetime>
                    <aspectratio scalediffuse="false">stretch</aspectratio>
                    <visible>true</visible>
                    <bordersize>5</bordersize>
					<bordertexture>white_box.png</bordertexture>
                </control>
				<control type="image">
					<width>315</width>
                    <height>315</height>
                    <texture>tile.png</texture>
                    <fadetime>200</fadetime>
                    <aspectratio scalediffuse="false">stretch</aspectratio>
                    <visible>true</visible>
                    <bordersize>5</bordersize>
	            </control>
				<control type="image">
					<width>315</width>
                    <height>315</height>
                    <texture>DefaultMusicPlaylists.png</texture>
                    <fadetime>200</fadetime>
                    <aspectratio scalediffuse="false">keep</aspectratio>
                    <bordersize>35</bordersize>
					<visible>!Control.HasFocus(50) + !Control.HasFocus(100) </visible>
                </control>
				
                <!-- Album and Artits Images -->
				<control type="image">
					<width>315</width>
                    <height>315</height>
                    <texture>$INFO[Container(50).ListItem.Icon]</texture>
                    <fadetime>200</fadetime>
                    <aspectratio scalediffuse="false">stretch</aspectratio>
                    <bordersize>5</bordersize>
					<visible>!String.Contains(Container(50).ListItem.Icon,default) + Control.HasFocus(50)</visible>
                </control>
				<control type="image">
					<width>315</width>
                    <height>315</height>
                    <texture>$INFO[Container(100).ListItem.Icon]</texture>
                    <fadetime>200</fadetime>
                    <aspectratio scalediffuse="false">stretch</aspectratio>
                    <bordersize>5</bordersize>
					<visible>!String.Contains(Container(100).ListItem.Icon,default)  + Control.HasFocus(100)</visible>
                </control>
				
				<!-- Default Icon Images-->
				<control type="image">
					<width>315</width>
                    <height>315</height>
                    <texture>$INFO[Container(50).ListItem.Icon]</texture>
                    <fadetime>200</fadetime>
                    <aspectratio scalediffuse="false">keep</aspectratio>
                    <bordersize>35</bordersize>
					<visible>String.Contains(Container(50).ListItem.Icon,default) + Control.HasFocus(50) </visible>
                </control>
				<control type="image">
					<width>315</width>
                    <height>315</height>
                    <texture>$INFO[Container(100).ListItem.Icon]</texture>
                    <fadetime>200</fadetime>
                    <aspectratio scalediffuse="false">keep</aspectratio>
                    <bordersize>35</bordersize>
					<visible>String.Contains(Container(100).ListItem.Icon,default) + Control.HasFocus(100) </visible>
                </control>
				<control type="image">
					<left>5</left>
					<top>175</top>
                    <width>305</width>
                    <height>135</height>
                    <texture>tile.png</texture>
                    <fadetime>200</fadetime>
                    <aspectratio scalediffuse="false">stretch</aspectratio>
                </control>
                <control type="group" id="9000">
					<left>5</left>
					<top>175</top>
                    <control type="button" id="6">
                        <description>Open Button</description>
                        <width>305</width>
                        <label>$LOCALIZE[502]</label>
                        <onleft>50</onleft>
                        <onright>100</onright>
                        <onup>8</onup>
                        <ondown>7</ondown>
                        <textcolor>white</textcolor>
                        <focusedcolor>Accent</focusedcolor>
						<font>Panel_Hint</font>
                    </control>
                    <control type="button" id="7">
                        <description>Save Button</description>
                        <top>46</top>
                        <width>305</width>
                        <label>$LOCALIZE[190]</label>
                        <onleft>50</onleft>
                        <onright>100</onright>
                        <onup>6</onup>
                        <ondown>8</ondown>
                        <textcolor>white</textcolor>
                        <focusedcolor>Accent</focusedcolor>
						<font>Panel_Hint</font>
                    </control>
                    <control type="button" id="8">
                        <description>Clear button</description>
                        <top>91</top>
                        <width>305</width>
                        <label>$LOCALIZE[192]</label>
                        <onleft>50</onleft>
                        <onright>100</onright>
                        <onup>7</onup>
                        <ondown>6</ondown>
                        <textcolor>white</textcolor>
                        <focusedcolor>Accent</focusedcolor>
						<font>Panel_Hint</font>
                    </control>
                </control>
            </control>
			<!--  Right Panel -->
            <control type="group">
                <description>Right Panel</description>
                <left>803</left>
                <top>290</top>
                <control type="image">
                    <width>428</width>
                    <height>315</height>
                    <texture>music_fanart_diffuse.png</texture>
                    <fadetime>200</fadetime>
                    <aspectratio scalediffuse="false">stretch</aspectratio>
                </control>
                <control type="list" id="100">
                    <width>428</width>
                    <height>315</height>
                    <onleft>9000</onleft>
                    <onright>noop</onright>
                    <onup>100</onup>
                    <ondown>100</ondown>
                    <viewtype label="">list</viewtype>
                    <scrolltime>200</scrolltime>
                    <itemlayout height="45" width="428">
                        <control type="label">
                            <left>10</left>
                            <top>0</top>
                            <width>380</width>
                            <info>ListItem.Label</info>
							<font>List_Unfocused</font>
                        </control>
                        <control type="label">
                            <left>418</left>
                            <width>380</width>
                            <align>right</align>
                            <info>ListItem.Label2</info>
							<textcolor>Accent</textcolor>
							<font>List_Unfocused</font>
                        </control>
                    </itemlayout>
                    <focusedlayout height="45" width="428">
                        
						<control type="image">
							<width>428</width>
                            <height>45</height>
                            <texture>button.png</texture>
                            <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(100)">Conditional</animation>
						</control>
		                <control type="label">
                            <left>10</left>
                            <top>0</top>
                            <width>380</width>
                            <info>ListItem.Label</info>
							<font>List_Focused</font>
                        </control>
                        <control type="label">
                            <left>418</left>
                            <top>0</top>
                            <width>380</width>
                            <align>right</align>
                            <info>ListItem.Label2</info>
							<font>List_Focused</font>
                        </control>
                    </focusedlayout>
                </control>
            </control>
        </control>
    </controls>
</window>