<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="Viewtype_Songs">
		
		<control type="group">
           
			<visible>Control.IsVisible(503)</visible>
            <animation type="TYPE" condition="Window.IsVisible(135)" reversible="false">
                <effect type="slide" end="-1500,0" time="200" />
            </animation>
            <animation type="TYPE" condition="!Window.IsVisible(135)" reversible="false">
                <effect type="slide" start="-1500,0" time="200" />
            </animation>
            <!-- This Control displays the background behind the track title-->
			<control type="image">
                <left>420</left>
                <top>290</top>
                <width>685</width>
                <height>315</height>
                <texture>music_fanart_diffuse.png</texture>
             </control>
			<!-- This Control displays the background behind the track rating-->
			<control type="image">
                <left>1120</left>
                <top>290</top>
                <width>140</width>
                <height>315</height>
                <texture>other_textures/black-back.png</texture>
             </control>
			<!-- This Control displays the background behind the track number-->
			<control type="image">
                <left>370</left>
                <top>290</top>
                <width>45</width>
                <height>315</height>
                <texture>other_textures/black-back.png</texture>
            </control>
			<!-- This Control displays the list of songs-->
            <control type="fixedlist" id="503">
                <viewtype label="List">Song View</viewtype>
				<left>370</left>
                <top>290</top>
                <width>890</width>
                <height>315</height>
				<movement>3</movement>
				<focusposition>3</focusposition>
                <onup>503</onup>
                <ondown>503</ondown>
                <onright>63</onright>
                <onleft>9000</onleft>
                <scrolltime>0</scrolltime>
                <orientation>vertical</orientation>
				<visible>Container.Content(songs) | Window.IsActive(musicplaylist)</visible>
				<pagecontrol>63</pagecontrol>
                <!-- This Control defines the unfocused item layout -->
				<itemlayout height="45">
                    <!-- This Control displays the Track Number-->
					<control type="label">
                        <left>22</left>
                        <width>45</width>
						<font>List_Unfocused</font>
                        <align>center</align>
                        <label>$INFO[ListItem.TrackNumber]</label>
                    </control>
					<!-- This Control displays the Track Title-->
                    <control type="label">
                        <left>65</left>
                        <width>645</width>
						<font>List_Unfocused</font>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
					<control type="label">
                        <left>65</left>
                        <width>730</width>
						<font>List_Unfocused</font>
                        <label>$INFO[ListItem.Label]</label>
						<visible>StringCompare(ListItem.Label,..)</visible>
					</control>
                    <!-- This Control displays the Track Rating-->
					<control type="image">
                        <left>770</left>
                        <top>10</top>
                        <width>100</width>
                        <height>25</height>
						<texture>other_textures/colorrating/$INFO[ListItem.StarRating]</texture>
                    </control>
                    <!-- This Control displays the Track Duration-->
					<control type="label">
                        <left>715</left>
                        <align>right</align>
                        <width>100</width>
						<font>List_Unfocused</font>
                        <label>$INFO[ListItem.Duration]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="45">
                    <!-- This Control displays the Focused Track Title Highlighted Bg-->
					<control type="image">
                        <left>50</left>
						<width>685</width>
                        <height>45</height>
                        <texture colordiffuse="AccentDiffuse">button.png</texture>
                    </control>
					<control type="image">
                        <width>45</width>
                        <height>45</height>
                        <texture>button.png</texture>
                    </control>
					<control type="image">
					     <left>750</left>
                        <width>140</width>
                        <height>45</height>
                        <texture>button.png</texture>
                    </control>
                    <!-- This Control displays the Focused Track Nr Highlighted Bg-->
					<control type="image">
                        <width>45</width>
                        <height>45</height>
                        <texture>tile.png</texture>
                    </control>
					<control type="image">
                        <left>750</left>
						<width>140</width>
                        <height>45</height>
                        <texture border="5">tile.png</texture>
                    </control>
					<!-- This Control displays the Focused Track Nr-->
                    <control type="label">
                        <left>22</left>
                        <width>45</width>
                        <align>center</align>
						<font>List_Focused</font>
						<selectedcolor>White</selectedcolor>
                        <label>$INFO[ListItem.TrackNumber]</label>
                    </control>
                    <!-- This Control displays the Focused Track Title-->
					<control type="label">
                        <left>65</left>
                        <width>645</width>
						<font>List_Focused</font>
						<selectedcolor>White</selectedcolor>
                        <label>$INFO[ListItem.Title]</label>
					</control>
						<control type="label">
                        <left>65</left>
                        <width>730</width>
						<font>List_Focused</font>
						<selectedcolor>White</selectedcolor>
                        <label>$INFO[ListItem.Label]</label>
						<visible>StringCompare(ListItem.Label,..)</visible>
                    </control>
                    <!-- This Control displays the Focused Track Rating-->
					<control type="image">
                        <left>770</left>
                        <top>10</top>
                        <width>100</width>
                        <height>25</height>
						<texture>other_textures/colorrating/$INFO[ListItem.StarRating]</texture>
                    </control>
                    <!-- This Control displays the Focused Track Duration-->
					<control type="label">
                        <left>715</left>
                        <align>right</align>
                        <width>100</width>
						<font>List_Focused</font>
						<selectedcolor>White</selectedcolor>
                        <label>$INFO[ListItem.Duration]</label>
                    </control>
                </focusedlayout>
            </control>
            <!-- This Control displays the scrollbar managing the song list-->
			<control type="scrollbar" id="63">
                <left>1110</left>
                <top>290</top>
                <width>5</width>
                <height>315</height>
				<onleft>503</onleft>
            </control>
            <!-- This Control displays the Album Title-->
			<control type="label">
                <label>$INFO[ListItem.Album]</label>
                <left>50</left>
                <top>215</top>
                <height>30</height>
                <width>885</width>
                <font>Panel_Title</font>
                <scroll>true</scroll>
                <scrollout>false</scrollout>
                <pauseatend>600</pauseatend>
                <scrollspeed>50</scrollspeed>
                <aligny>top</aligny>
            </control>
			<!-- This Control displays the Album Year-->
			<control type="label">
                <label>[COLOR Accent]$INFO[ListItem.Year][/COLOR]</label>
                <left>1145</left>
                <top>215</top>
                <height>30</height>
                <width>100</width>
                <font>Panel_Title</font>
                <scroll>true</scroll>
                <scrollout>false</scrollout>
                <pauseatend>600</pauseatend>
                <scrollspeed>50</scrollspeed>
                <aligny>top</aligny>
				<align>left</align>
            </control>

            <include>ArtistAlbumPanelCover</include>
			
			<!-- This control displays the Footer Text below the main Poster-->
            <control type="label">
				<include>ViewFooterTitle</include>	
                <label>$VAR[PanelFooterText]</label>
            </control>
             
		
		</control>
    </include>
</includes>