<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="Viewtype_MusicVideos_List2">
        <control type="group">
            <visible>Control.IsVisible(538)</visible>
            <description>Music Videos List View (id=538)</description>
            <animation type="TYPE" condition="Window.IsVisible(2003)" reversible="false">
                <effect type="slide" end="-1500,0" time="200" />
            </animation>
            <animation type="TYPE" condition="!Window.IsVisible(2003)" reversible="false">
                <effect type="slide" start="-1500,0" time="200" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
			<!-- This Control displays the background behind the track title-->
			<control type="image">
                <left>530</left>
                <top>290</top>
                <width>575</width>
                <height>315</height>
                <texture>music_fanart_diffuse.png</texture>
             </control>
			<!-- This Control displays the background behind the Video rating-->
			<control type="image">
                <left>1120</left>
                <top>290</top>
                <width>140</width>
                <height>315</height>
                <texture>other_textures/black-back.png</texture>
             </control>
			<control type="list" id="538">
                <left>530</left>
                <top>290</top>
                <width>890</width>
                <height>315</height>
                <scrolltime>200</scrolltime>
                <onup>590</onup>
                <ondown>590</ondown>
                <onright>63</onright>
                <onleft>9000</onleft>
				<onleft>Skin.ToggleSetting(showViewOptions)</onleft>
                <viewtype label="List+Thumb">Music Videos List View</viewtype>
                <orientation>vertical</orientation>
                <focusposition>4</focusposition>
                <pagecontrol>63</pagecontrol>
                <visible>$EXP[isMusicVideoList]</visible>
                <itemlayout height="42">
                    <!-- This Control displays the Track Title-->
                    <control type="label">
                        <left>10</left>
                        <width>730</width>
						<font>List_Unfocused</font>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
					<control type="label">
                        <left>10</left>
                        <width>730</width>
						<font>List_Unfocused</font>
                        <label>$INFO[ListItem.Label]</label>
						<visible>String.IsEqual(ListItem.Label,..)</visible>
					</control>
					<control type="label">
                        <left>590</left>
						<width>140</width>
						<font>List_Unfocused</font>
						<align>center</align>
                        <label>$INFO[ListItem.Year]</label>
					</control>
                   	<control type="image">
                        <left>540</left>
                        <top>13</top>
                        <width>18</width>
                        <height>15</height>
                        <texture>watchedpanel.png</texture>
                        <visible>String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
                    </control>
                    <control type="image">
                        <left>540</left>
                        <top>13</top>
                        <width>18</width>
                        <height>15</height>
                        <texture>watchingpanel.png</texture>
                        <visible>ListItem.IsResumable + !String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
                    </control>
				</itemlayout>
                <focusedlayout height="63">
					<control type="image">
						<width>575</width>
						<height>63</height>
						<texture colordiffuse="AccentDiffuse">button.png</texture>
					 </control>
					<control type="image">
						<width>575</width>
						<top>30</top>
						<height>33</height>
						<texture>tile.png</texture>
					 </control>
					<control type="image">
						<left>590</left>
						<width>140</width>
						<height>63</height>
						<texture>button.png</texture>
					 </control>
					<control type="image">
						<width>140</width>
						<left>590</left>
						<top>30</top>
						<height>33</height>
						<texture>tile.png</texture>
					 </control>
					<control type="label">
							<left>10</left>
							<width>700</width>
							<height>30</height>
							<font>List_Focused</font>
							<selectedcolor>White</selectedcolor>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Title]</label>
							<shadowcolor>FF000000</shadowcolor>
						</control>
					<control type="label">
						<left>10</left>
						<top>32</top>
						<width>700</width>
						<height>30</height>
						<align>left</align>
						<font>List_Hint</font>
						<selectedcolor>White</selectedcolor>
						<label>$INFO[ListItem.Album]</label>
					</control>
					<control type="label">
						<left>590</left>
						<width>140</width>
						<height>30</height>
						<align>center</align>
						<font>List_Focused</font>
						<selectedcolor>White</selectedcolor>
						<label>$INFO[ListItem.Year]</label>
						<shadowcolor>FF000000</shadowcolor>
					</control>
					<!-- This control displays the Star rating-->
					<control type="image">
						<left>610</left>
						<top>32</top>
						<width>100</width>
						<height>25</height>
						<texture>$VAR[ItemStarRating]</texture>
						<aspectratio scalediffuse="false">keep</aspectratio>
					</control>
					<control type="label">
                        <left>10</left>
							<width>540</width>
							<height>30</height>
							<font>List_Focused</font>
							<selectedcolor>White</selectedcolor>
							<aligny>center</aligny>
                        <label>$INFO[ListItem.Label]</label>
						<visible>String.IsEqual(ListItem.Label,..)</visible>
					</control>
                    <control type="image">
                        <left>540</left>
                        <top>13</top>
                        <width>18</width>
                        <height>15</height>
                        <texture>watchedpanel.png</texture>
                        <visible>String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
                    </control>
                    <control type="image">
                        <left>540</left>
                        <top>13</top>
                        <width>18</width>
                        <height>15</height>
                        <texture>watchingpanel.png</texture>
                        <visible>ListItem.IsResumable + !String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
                    </control>
				</focusedlayout>
            </control>
            <control type="scrollbar" id="63">
                <left>1110</left>
                <top>290</top>
                <width>5</width>
                <height>315</height>
				<onleft>590</onleft>
                <showonepage>true</showonepage>
                <orientation>vertical</orientation>
            </control>
			<!-- Album Cover Elements -->
			<control type="group">
				<control type="image">
					<left>50</left>
					<top>290</top>
					<width>475</width>
					<height>315</height>
					<texture>white_box.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
					<left>50</left>
					<top>290</top>
					<width>475</width>
					<height>315</height>
					<texture>button.png</texture>
					<aspectratio>stretch</aspectratio>
					<bordersize>5</bordersize>
					<visible>String.IsEqual(ListItem.Label,..) | String.IsEmpty(ListItem.Icon)</visible>
				</control>
				<control type="image">
					<left>50</left>
					<top>290</top>
					<width>475</width>
					<height>315</height>
					<texture>tile.png</texture>
					<aspectratio>stretch</aspectratio>
					<bordersize>5</bordersize>
					<visible>String.IsEqual(ListItem.Label,..) | String.IsEmpty(ListItem.Icon)</visible>
				</control>
				<!-- This Control displays  the Main Album Poster-->
				<control type="image">
					<left>100</left>
					<top>340</top>
					<width>215</width>
					<height>215</height>
					<texture>$INFO[ListItem.Icon]</texture>
					<aspectratio>scale</aspectratio>
					<visible>String.IsEqual(ListItem.Label,..)</visible>
				</control>
				<!-- This Control displays  the Main Album Poster-->
				<control type="image">
					<left>50</left>
					<top>290</top>
					<width>475</width>
					<height>315</height>
					<texture>$INFO[ListItem.Thumb]</texture>
					<aspectratio>scale</aspectratio>
					<bordersize>5</bordersize>
					<visible>!String.IsEqual(ListItem.Label,..)</visible>
				</control>
				<!-- This Control display the artist name below the main poster-->
				<control type="label" id="144">
					<left>50</left>
					<top>610</top>
					<width>465</width>
					<height>50</height>
					<font>Panel_Title_Footer</font>
					<align>left</align>
					<aligny>top</aligny>
					<visible>true</visible>
					<scroll>true</scroll>
					<scrollout>false</scrollout>
					<pauseatend>600</pauseatend>
					<scrollspeed>50</scrollspeed>
					<label>$INFO[ListItem.Artist]</label>
				</control>
			</control>
			
			
			
			
			
			
			
			
			
			
			
			
			
			
        </control>
    </include>
</includes>