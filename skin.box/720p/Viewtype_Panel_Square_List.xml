<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="Viewtype_Panel_Square_List">
        <control type="group">
            <visible>Control.IsVisible(508)</visible>
            <animation type="TYPE" condition="Window.IsVisible(2001)" reversible="false">
                <effect type="slide" end="-1500,0" time="200" />
            </animation>
            <animation type="TYPE" condition="!Window.IsVisible(2001)" reversible="false">
                <effect type="slide" start="-1500,0" time="200" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
			
			<!-- This Control displays the background behind the Album List-->
            <control type="image">
                <left>370</left>
                <top>290</top>
                <width>395</width>
                <height>315</height>
                <texture>music_fanart_diffuse.png</texture>
                <fadetime>200</fadetime>
                <aspectratio scalediffuse="false">stretch</aspectratio>
				<visible>!Skin.HasSetting(musicwidelist)</visible>
            </control>
			<!-- This Control displays the background behind the Album List-->
            <control type="image">
                <left>370</left>
                <top>290</top>
                <width>890</width>
                <height>315</height>
                <texture>music_fanart_diffuse.png</texture>
                <fadetime>200</fadetime>
                <aspectratio scalediffuse="false">stretch</aspectratio>
				<visible>Skin.HasSetting(musicwidelist)</visible>
            </control>
            <!-- This Control defines the album list-->
			<control type="list" id="508">
                <viewtype label="List Info">Album List</viewtype>
                <left>370</left>
                <top>290</top>
                <width>890</width>
                <height>315</height>
                <scrolltime>200</scrolltime>
				<onup>508</onup>
				<ondown>508</ondown>
                <onleft>9000</onleft>
				<onleft>Skin.ToggleSetting(showViewOptions)</onleft>
                <onright>61</onright>
                <pagecontrol>61</pagecontrol>
				<visible>$EXP[isAlbumList]</visible>
                <!-- This Control defines the unfocused item layout-->
				<itemlayout height="45" condition="!Skin.HasSetting(musicwidelist)">
					<control type="label">
                        <left>20</left>
                        <width>355</width>
						<font>List_Unfocused</font>
                        <label>$INFO[ListItem.Label]</label>
					</control>
                </itemlayout>
				<!-- This Control defines the focused item layout-->
                <focusedlayout height="45" condition="!Skin.HasSetting(musicwidelist)">
                    <control type="image">
                        <width>395</width>
                        <height>45</height>
                        <texture colordiffuse="AccentDiffuse">button.png</texture>
                    </control>
                    <control type="label">
                        <left>20</left>
                        <width>355</width>
						<font>List_Focused</font>
                        <label>$INFO[ListItem.Label]</label>
						<shadowcolor>FF000000</shadowcolor>
                    </control>
                </focusedlayout>
				<!-- This Control defines the unfocused wide item layout-->
				<itemlayout height="45" condition="Skin.HasSetting(musicwidelist)">
					<control type="label">
                        <left>20</left>
                        <width>890</width>
						<font>List_Unfocused</font>
                        <label>$INFO[ListItem.Label]</label>
	                </control>
					<control type="label">
						<left>720</left>
						<width>160</width>
						<height>50</height>
						<textcolor>Accent</textcolor>
						<align>right</align>
						<font>Panel_Hint</font>
						<label>$INFO[ListItem.Year]</label>
					</control>
                </itemlayout>
				<!-- This Control defines the focused wide item layout-->
                <focusedlayout height="45" condition="Skin.HasSetting(musicwidelist)">
                    <control type="image">
                        <width>890</width>
                        <height>45</height>
                        <texture colordiffuse="AccentDiffuse">button.png</texture>
                    </control>
                    <control type="label">
                        <left>20</left>
                        <width>355</width>
						<font>List_Focused</font>
                        <label>$INFO[ListItem.Label]</label>
						<shadowcolor>FF000000</shadowcolor>
                    </control>
					<control type="label">
						<left>720</left>
						<width>160</width>
						<height>50</height>
						<align>right</align>
						<font>Panel_Hint</font>
						<label>$INFO[ListItem.Year]</label>
						<shadowcolor>FF000000</shadowcolor>
					</control>
                </focusedlayout>
            </control>
		
			
			<include>ArtistAlbumPanelCover</include>
			<!-- This control displays the Footer Text below the main Poster-->
            <control type="label">
				<include>ViewFooterTitle</include>	
                <label>$VAR[PanelFooterText]</label>
            </control>
             
			
		
			<!-- Album Description Elements -->
			<control type="group">
				<visible>!Skin.HasSetting(musicwidelist)</visible>
				<!-- This Control defines the scrollbar of the Album list-->
				<control type="scrollbar" id="61">
					<left>770</left>
					<top>290</top>
					<width>5</width>
					<height>315</height>
					<onleft>508</onleft>
					<showonepage>true</showonepage>
					<orientation>vertical</orientation>
				</control>
				<include>ArtistAlbumPanelDescription</include>	
			</control>
			<!-- Letter for Scrolling -->
			<control type="label">
                <left>796</left>
                <top>320</top>
                <width>485</width>
                <height>50</height>
                <align>center</align>
                <aligny>top</aligny>
                <font>Large_Letter_Music</font>
                <textcolor>White</textcolor>
                <label>$INFO[ListItem.SortLetter]</label>
                <animation effect="fade" time="500">VisibleChange</animation>
                <visible>Container.Scrolling + !container.content(songs)</visible>
            </control>

				<control type="scrollbar" id="61">
					<left>1265</left>
					<top>290</top>
					<width>5</width>
					<height>315</height>
					<onleft>508</onleft>
					<showonepage>true</showonepage>
					<orientation>vertical</orientation>
					<visible>Skin.HasSetting(musicwidelist)</visible>
				</control>
        </control>
    </include>
</includes>