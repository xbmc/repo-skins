<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="Viewtype_Pictures">
        <control type="group">
            <visible>Control.IsVisible(533)</visible>
            <animation type="TYPE" condition="Window.IsVisible(2001) | Window.IsVisible(139) | Window.IsVisible(136) | Window.IsVisible(addonsettings)" reversible="false">
                <effect type="slide" end="-1500,0" time="200" />
            </animation>
            <animation type="TYPE" condition="!Window.IsVisible(2001) + !Window.IsVisible(139) + !Window.IsVisible(136) + !Window.IsVisible(addonsettings)" reversible="false">
                <effect type="slide" start="-1500,0" time="200" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
			
            <!--This control shows the label of the folder name -->
			<control type="label">
                <label>$INFO[Container.FolderName]</label>
                <left>50</left>
                <top>215</top>
                <height>30</height>
                <width>884</width>
                <font>Panel_Title</font>
				<aligny>top</aligny>
				<align>left</align>
            </control>
			<!--This control displays background behind the item list -->
				<control type="image">
					<left>50</left>
					<top>290</top>
					<width>550</width>
					<height>315</height>
					<texture>music_fanart_diffuse.png</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
				</control>
			<!--This control defines the scrollbar controlling the small list -->
			<control type="scrollbar" id="60">
				<left>605</left>
				<top>290</top>
				<width>5</width>
				<height>315</height>
				<onleft>51</onleft>
				<orientation>vertical</orientation>
			</control>
			<!--This control defines the list that will display the items -->
			<control type="list" id="533">
                <visible>Window.IsActive(Pictures) + !Container.Content(addons) + !String.IsEmpty(Container.Foldername)</visible>
                <left>50</left>
                <top>290</top>
                <width>550</width>
                <height>315</height>
                <onleft>9000</onleft>
				<onleft>Skin.ToggleSetting(showViewOptions)</onleft>
				<onright>60</onright>
                <onup>50</onup>
                <ondown>50</ondown>
                <pagecontrol>60</pagecontrol>
                <viewtype label="List Pics">List Pics</viewtype>
                <scrolltime>200</scrolltime>
				<itemlayout height="45">
					<control type="label">
						<left>15</left>
						<width>400</width>
						<font>List_Unfocused</font>
						<label>$INFO[ListItem.Label]</label>
						<visible>!String.IsEmpty(ListItem.PictureResolution)</visible>
					</control>
					<control type="label">
						<left>15</left>
						<width>520</width>
						<font>List_Unfocused</font>
						<label>$INFO[ListItem.Label]</label>
						<visible>String.IsEmpty(ListItem.PictureResolution)</visible>
					</control>
					<control type="label">
						<left>420</left>
						<width>120</width>
						<align>right</align>
						<font>List_Unfocused</font>
						<label>[COLOR Accent]$INFO[ListItem.PictureResolution][/COLOR]</label>
					</control>
				</itemlayout>
				<focusedlayout height="45">
					<control type="image">
						<width>550</width>
						<height>45</height>
						<texture>button.png</texture>
					 </control>
					 <control type="label">
						<left>15</left>
						<width>405</width>
						<font>List_Focused</font>
						<selectedcolor>White</selectedcolor>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
						<visible>!String.IsEmpty(ListItem.PictureResolution)</visible>
					</control>
					<control type="label">
						<left>15</left>
						<width>520</width>
						<font>List_Focused</font>
						<selectedcolor>White</selectedcolor>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
						<visible>String.IsEmpty(ListItem.PictureResolution)</visible>
					</control>
					<control type="label">
						<left>420</left>
						<width>120</width>
						<align>right</align>
						<font>List_Focused</font>
						<selectedcolor>White</selectedcolor>
						<label>$INFO[ListItem.PictureResolution]</label>
                    </control>
				</focusedlayout>
               
			   
			   
			   
			   
			</control>
			<control type="image">
				<left>615</left>
                <top>290</top>
				<width>630</width>
                <height>315</height>
				<aspectratio align="left" aligny="center">keep</aspectratio>
				<texture>$INFO[ListItem.Thumb]</texture>
				<bordersize>5</bordersize>
				<bordertexture>white_box.png</bordertexture>
			</control>
			<control type="image">
				<left>615</left>
                <top>290</top>
				<width>315</width>
                <height>315</height>
				<texture>button.png</texture>
				<bordersize>5</bordersize>
				<bordertexture>white_box.png</bordertexture>
				<visible>String.IsEmpty(ListItem.Thumb)</visible>
			</control>
			<control type="image">
				<left>615</left>
                <top>290</top>
				<width>315</width>
                <height>315</height>
				<texture>tile.png</texture>
				<bordersize>5</bordersize>
				<visible>String.IsEmpty(ListItem.Thumb)</visible>
			</control>
			<control type="image">
				<left>615</left>
                <top>290</top>
				<width>315</width>
                <height>315</height>
				<texture>$INFO[ListItem.ActualIcon]</texture>
				<bordersize>35</bordersize>
				<visible>String.IsEmpty(ListItem.Thumb)</visible>
			</control>
			
		</control>
    </include>
</includes>




















				
	
		

		
