                        <texture background="true">$INFO[ListItem.Label,resource://resource.images.studios.white/,.png]</texture>
						<visible>Container.Content(studios)</visible>
					</control>
					
                    <control type="label">
                        <label>$INFO[ListItem.Label]</label>
                        <include>PanelButtonTitle</include>
					</control>
                </focusedlayout>
            </control>
            <control type="label">
				<include>ViewMainTitle</include>
                <label>$INFO[Container.FolderName]</label>
            </control>
			
