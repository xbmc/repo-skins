                    <control type="label">
                        <label>$INFO[ListItem.Label]</label>
                        <include>PanelButtonTitle</include>
                    </control>
					<control type="image">
                        <include>PanelButtonIcon</include>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
						<visible>String.IsEqual(ListItem.Label,..)</visible>
                    </control>
                </itemlayout>
                <focusedlayout width="160" height="160">
                    <control type="image">
                        <include>PanelButtonImageFO</include>
                    </control>
                    <control type="image">
                        <include>PanelButtonIcon</include>
                        <texture background="true">moviegenres/$INFO[ListItem.Label].png</texture>
						<visible>Container.Content(genres)</visible>
                    </control>
					<control type="image">
                        <include>PanelButtonIcon</include>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
						<visible>String.IsEqual(ListItem.Label,..)</visible>
                    </control>
					<control type="image">
                        <left>10</left>
						<top>5</top>
						<height>135</height>
						<width>135</width>
						<aspectratio align="center" aligny="bottom">keep</aspectratio>
                        <texture background="true">$INFO[ListItem.Label,resource://resource.images.moviecountryicons.maps/,.png]</texture>
