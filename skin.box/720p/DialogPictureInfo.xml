<?xml version="1.0" encoding="utf-8"?>
<window id="139">
    <defaultcontrol always="true">5</defaultcontrol>
     
    <controls>
		<control type="group">
            <visible>!Window.IsActive(slideshow)</visible>
            <animation type="WindowClose">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
         
	            <!-- Background -->               
				<control type="image">
                    <left>615</left>
                    <top>180</top>
                    <width>635</width>
                    <height>425</height>
                    <texture>music_fanart_diffuse.png</texture>
                </control>
				<!-- Cover --> 				
                <control type="image">
                    <description>Cover Image</description>
                    <left>50</left>
                    <top>180</top>
                    <width>555</width>
                    <height>425</height>
                    <texture>$INFO[ListItem.Icon]</texture>
                    <aspectratio align="right" aligny="center">keep</aspectratio>
                    <bordertexture border="5">white_box.png</bordertexture>
                    <bordersize>5</bordersize>
                </control>
                <!-- Picture Title -->
				<control type="fadelabel">
                    <left>635</left>
                    <top>185</top>
                    <height>30</height>
                    <width>595</width>
                    <font>Panel_Title</font>
                    <aligny>top</aligny>
                    <label>[COLOR Accent]$INFO[ListItem.Label][/COLOR]</label>
                    <visible>true</visible>
                    <scroll>true</scroll>
                    <scrollout>false</scrollout>
                    <pauseatend>600</pauseatend>
                    <scrollspeed>50</scrollspeed>
                </control>
				<!-- Picture Specs -->
				<control type="list" id="5">
                    <left>635</left>
                    <top>265</top>
                    <width>595</width>
                    <height>315</height>
                    <onleft>noop</onleft>
                    <onright>noop</onright>
                    <onup>5</onup>
                    <ondown>5</ondown>
                    <pagecontrol>64</pagecontrol>
                    <visible>!Window.IsActive(slideshow)</visible>
                    <itemlayout height="45">
                        <control type="label">
                            <left>15</left>
                            <width>290</width>
							<font>Panel_Description</font>
                            <info>ListItem.Label</info>
                        </control>
                        <control type="label">
                            <left>295</left>
                            <width>290</width>
                            <align>right</align>
							<font>Panel_Description</font>
                            <info>ListItem.Label2</info>
                        </control>
                    </itemlayout>
                    <focusedlayout height="45">
                        <control type="image">
                            <width>595</width>
                            <height>45</height>
                            <texture>other_textures/buttonfo.png</texture>
							<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(5)">Conditional</animation>
                        </control>
                        <control type="image">
                            <width>5</width>
                            <height>45</height>
                            <texture>button.png</texture>
							<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(5)">Conditional</animation>
						</control>
						<control type="label">
                            <left>15</left>
                            <width>290</width>
                            <info>ListItem.Label</info>
                            <textcolor>Accent</textcolor>
							<font>Panel_Description</font>
							<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(5)">Conditional</animation>
                        </control>
                        <control type="label">
                            <left>295</left>
                            <width>290</width>
                            <align>right</align>
                            <info>ListItem.Label2</info>
							<font>Panel_Description</font>
                            <textcolor>Accent</textcolor>
							<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(5)">Conditional</animation>
                        </control>
                    </focusedlayout>
                </control>
                <control type="scrollbar" id="64">
                    <left>1250</left>
                    <top>280</top>
                    <width>5</width>
                    <height>315</height>
                    <texturesliderbackground></texturesliderbackground>
                    <textureslidernib>bar.png</textureslidernib>
                    <textureslidernibfocus>scroll_nib.png</textureslidernibfocus>
                    <texturesliderbar></texturesliderbar>
                    <texturesliderbarfocus></texturesliderbarfocus>
                    <showonepage>true</showonepage>
                    <orientation>vertical</orientation>
                </control>
                
			
      
        </control>
        <control type="group">
            <visible>Window.IsActive(slideshow)</visible>
            <left>0</left>
            <top>0</top>
            <control type="list" id="5">
                <left>20</left>
                <top>50</top>
                <width>425</width>
                <height>720</height>
                <onleft>10</onleft>
                <onright>10</onright>
                <onup>5</onup>
                <ondown>5</ondown>
                <visible>Window.IsActive(slideshow)</visible>
                <itemlayout height="45">
					<control type="image">
                        <width>425</width>
                        <height>40</height>
                        <texture>tile.png</texture>
                    </control>
					<control type="label">
                        <left>10</left>
                        <width>200</width>
						<height>40</height>
                        <info>ListItem.Label</info>
                        <font>List_Unfocused</font>
                    </control>
                    <control type="label">
                        <left>415</left>
                        <width>200</width>
						<height>40</height>
                        <align>right</align>
                        <info>ListItem.Label2</info>
                        <font>List_Unfocused</font>
                    </control>
                </itemlayout>
                <focusedlayout height="45">
                    <control type="image">
                        <width>425</width>
                        <height>40</height>
                        <texture>tile.png</texture>
                    </control>
                    <control type="label">
                        <left>10</left>
                        <width>200</width>
						<height>40</height>
                        <info>ListItem.Label</info>
                        <font>List_Focused</font>
						<textcolor>Accent</textcolor>
                    </control>
                    <control type="label">
                        <left>415</left>
                        <width>200</width>
						<height>40</height>
                        <align>right</align>
                        <info>ListItem.Label2</info>
						<font>List_Focused</font>
						<textcolor>Accent</textcolor>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </controls>
</window>