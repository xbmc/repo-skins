            <!-- Default Poster-->
			<control type="image">
                <left>50</left>
                <top>290</top>
                <width>215</width>
                <height>315</height>
                <texture background="true">defaultvideo.png</texture>
                <fadetime>200</fadetime>
                <aspectratio scalediffuse="false">keep</aspectratio>
                <visible>String.IsEmpty(ListItem.Icon)</visible>
                <bordersize>5</bordersize>
            </control>
            <!-- Episodes Panel -->
			<control type="panel" id="525">
                <left>270</left>
                <top>290</top>
                <width>480</width>
                <height>320</height>
                <scrolltime>200</scrolltime>
                <onup>525</onup>
                <ondown>525</ondown>
                <onright>63</onright>
		        <onleft>9000</onleft>
				<onleft>Skin.ToggleSetting(showViewOptions)</onleft>
                <viewtype label="Thumb Info">Episodes View</viewtype>
                <orientation>vertical</orientation>
                <focusposition>4</focusposition>
                <pagecontrol>63</pagecontrol>
                <visible>Container.Content(episodes)</visible>
                 <!-- Unfocused Item layout -->
				<itemlayout width="240" height="160">
                    <!-- Dark Episode Background -->
					<control type="image">
                        <width>235</width>
                        <height>155</height>
                        <texture>tile.png</texture>
                        <aspectratio>scale</aspectratio>
                    </control>
					<!-- Default Icon Image -->
					<control type="image">
                        <width>235</width>
                        <height>155</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <aspectratio>keep</aspectratio>
                        <bordersize>25</bordersize>
						<visible>String.IsEqual(ListItem.Label,..)</visible>
                    </control>
                    <!-- Episode Image -->
					<control type="image">
                        <width>235</width>
                        <height>155</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <aspectratio>scale</aspectratio>
                        <bordersize>5</bordersize>
						<visible>!String.IsEqual(ListItem.Label,..)</visible>
                    </control>
					<!-- Darken Image -->
					<control type="image">
                        <width>235</width>
                        <height>155</height>
                        <texture>music_fanart_diffuse.png</texture>
                        <aspectratio>scale</aspectratio>
                        <bordersize>5</bordersize>
		            </control>
					<!-- Episode Number -->
			        <control type="label">
                        <label>$INFO[ListItem.Episode]</label>
                        <top>115</top>
                        <left>195</left>
						<height>40</height>
                        <width>40</width>
                        <font>Panel_Title_Footer</font>
                        <align>center</align>
						<aligny>center</aligny>
                    </control>
	                <control type="image">
                        <left>175</left>
                        <top>-</top>
                        <width>60</width>
                        <height>60</height>
                        <texture>watched.png</texture>
                        <animation type="Unfocus" reversible="false">
                            <effect type="zoom" center="0,0" start="80" end="120" time="400" tween="back" easing="out" />
                            <effect type="fade" start="80" end="100" time="400" />
                        </animation>
                        <visible>[Container.Content(Episodes) + String.IsEqual(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(TVShows) + String.IsEqual(ListItem.Overlay,OverlayWatched.png)]</visible>
                    </control>
                    <control type="image">
                        <left>175</left>
                        <top>-</top>
                        <width>60</width>
                        <height>60</height>
                        <texture>watching.png</texture>
                        <animation type="Unfocus" reversible="false">
                            <effect type="zoom" center="0,0" start="80" end="120" time="400" tween="back" easing="out" />
                            <effect type="fade" start="80" end="100" time="400" />
                        </animation>
                        <visible>Container.Content(Episodes) + ListItem.IsResumable + !String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
                    </control>
                </itemlayout>
                <!-- Focused Item layout -->
				<focusedlayout width="240" height="160">

					<control type="image">
                        <width>235</width>
                        <height>155</height>
						<texture>button.png</texture>
                        <aspectratio>scale</aspectratio>
                    </control>
					<control type="image">
                        <width>235</width>
                        <height>155</height>
						<texture>tile.png</texture>
                        <aspectratio>scale</aspectratio>
						<bordersize>5</bordersize>
						<visible>String.IsEqual(ListItem.Label,..)</visible>						
                    </control>
					<!-- Default Icon Image -->
					<control type="image">
                        <width>235</width>
                        <height>155</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <aspectratio>keep</aspectratio>
                        <bordersize>25</bordersize>
						<visible>String.IsEqual(ListItem.Label,..)</visible>
                    </control>
					
					
					
					<control type="image">
                        <width>235</width>
                        <height>155</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <aspectratio>scale</aspectratio>
						<bordersize>5</bordersize>
						<visible>!String.IsEqual(ListItem.Label,..)</visible>
					</control>

					<control type="image">
						<left>195</left>
						<top>115</top>
                        <width>40</width>
                        <height>40</height>
						<texture>button.png</texture>
                        <aspectratio>scale</aspectratio>
						<visible>!String.IsEqual(ListItem.Label,..)</visible>
                    </control>
					<!-- Episode Number -->
			        <control type="label">
                        <label>$INFO[ListItem.Episode]</label>
                        <top>115</top>
                        <left>195</left>
						<height>40</height>
                        <width>40</width>
                        <font>Panel_Title_Footer</font>
                        <align>center</align>
						<aligny>center</aligny>
                    </control>
				    <control type="image">
                        <left>175</left>
                        <top>0</top>
                        <width>60</width>
                        <height>60</height>
                        <texture>watched.png</texture>
                        <animation type="Focus" reversible="false">
                            <effect type="zoom" center="235,0" start="80" end="120" time="400" tween="back" easing="out" />
                            <effect type="fade" start="80" end="100" time="400" />
                        </animation>
                        <visible>[Container.Content(Episodes) + String.IsEqual(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(TVShows) + String.IsEqual(ListItem.Overlay,OverlayWatched.png)]</visible>
                    </control>
                    <control type="image">
                        <left>175</left>
                        <top>0</top>
                        <width>60</width>
                        <height>60</height>
                        <texture>watching.png</texture>
                        <animation type="Focus" reversible="false">
                            <effect type="zoom" center="235,0" start="80" end="120" time="400" tween="back" easing="out" />
                            <effect type="fade" start="80" end="100" time="400" />
                        </animation>
                        <visible>Container.Content(Episodes) + ListItem.IsResumable + !String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
                    </control>
                </focusedlayout>
            </control>
            <!-- Episode Title Season -->
			<control type="label" id="140">
				<left>50</left>
                <top>215</top>
                <height>30</height>
                <width>1200</width>
                <font>Panel_Title</font>
                <textcolor>White</textcolor>
                <aligny>top</aligny>
                <visible>true</visible>
                <scroll>true</scroll>
                <scrollout>false</scrollout>
                <pauseatend>600</pauseatend>
                <scrollspeed>50</scrollspeed>
                <label>$INFO[ListItem.Title]</label>
				<visible>Container.Content(episodes)</visible>
            </control>
			<!-- Tv Show Title & Season -->
			<control type="label">
	            <left>50</left>
                <top>610</top>
                <width>600</width>
                <height>50</height>
                <align>left</align>
				<aligny>top</aligny>
                <font>Panel_Title_Footer</font>
                <label>$INFO[ListItem.TVShowTitle,, â€¢ ]$INFO[ListItem.Season,$LOCALIZE[20373] ]</label>
                <visible>Container.Content(episodes)</visible>
            </control>
			<!-- Description Field Background-->
            <control type="image">
                <left>760</left>
                <top>290</top>
                <width>500</width>
                <height>315</height>
                <texture background="true">music_fanart_diffuse.png</texture>
                <fadetime>200</fadetime>
                <aspectratio scalediffuse="false">stretch</aspectratio>
            </control>
			<!-- List Scrollbar -->
            <control type="scrollbar" id="63">
                <left>750</left>
                <top>290</top>
                <width>5</width>
                <height>315</height>
				<onleft>525</onleft>
                <showonepage>true</showonepage>
                <orientation>vertical</orientation>
            </control>
            <!-- EPISODE DURATION -->
			<control type="label">
                <left>780</left>
                <top>300</top>
                <width>400</width>
                <height>50</height>
                <font>Panel_Description_Title</font>
                <label>$INFO[ListItem.Duration,, $LOCALIZE[31299]]</label>
				<scroll>true</scroll>
			</control>
			<!-- Episode Aire Date -->
			<control type="label">
                <left>960</left>
                <top>565</top>
                <width>280</width>
                <height>25</height>
				<align>right</align>
				<font>Panel_Description_Footer</font>
                <label>[COLOR Accent]$INFO[ListItem.Premiered][/COLOR] $LOCALIZE[20416]</label>
				<visible>!String.IsEqual(ListItem.Label,..)</visible>
				
            </control>
			<!-- Episode Plot -->			
            <control type="textbox">
                <left>780</left>
                <top>355</top>
                <width>460</width>
                <height>190</height>
				<font>Panel_Description</font>
                <align>justify</align>
                <autoscroll time="3000" delay="6000" repeat="8000"></autoscroll>
                <info>ListItem.Plot</info>
     
            </control>
            <!-- Star Rating -->
			<control type="image">
                 <left>780</left>
                <top>565</top>
                <width>100</width>
                <height>25</height>
                <texture>$VAR[ItemStarRating]</texture>
				<aspectratio scalediffuse="false">keep</aspectratio>
				<visible>!Skin.HasSetting(ShowNumericalRatingForTvShows)</visible>
            </control>
			<control type="label">
				<left>780</left>
				<top>565</top>
				<width>200</width>
				<height>25</height>
				<textcolor>Accent</textcolor>
				<align>left</align>
				<font>Panel_Description_Footer</font>
				<label>$INFO[ListItem.Rating,[COLOR=white]$LOCALIZE[563] [/COLOR]]</label>
				<visible>Skin.HasSetting(ShowNumericalRatingForTvShows)</visible>
			</control>
            <!-- MPAA Rating -->
			<control type="label">
                <left>1060</left>
                <top>300</top>
                <width>180</width>
                <height>50</height>
                <textcolor>Accent</textcolor>
				<align>right</align>
				<font>Panel_Description_Title</font>
                <label>$INFO[ListItem.Mpaa]</label>
            </control>

        </control>
    </include>
