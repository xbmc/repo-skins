<?xml version="1.0" encoding="UTF-8"?>
<window id="1"><!-- Aeon MQ 6 -->
	<defaultcontrol>51</defaultcontrol>
	<onload condition="Window.Previous(6631)">Container.SetViewMode($INFO[skin.string(setviewprograms)])</onload>
	<onload condition="Window.Previous(6631)">SetFocus(9940)</onload>
	<onunload condition="Skin.HasSetting(kioskcode)">Skin.Reset($INFO[skin.string(custom_code)])</onunload>
	<allowoverlay>no</allowoverlay>
	<views>51,54,55,56,59,62</views>
	<controls>
	<control type="multiimage"><!-- Fanart -->
	<include>WindowBG</include>
	<imagepath background="true">$VAR[value_menutheme_programs]</imagepath>
	</control>
	<control type="image"><!-- Fanart padrao -->
	<include>WindowBG</include>
	<texture background="true">$VAR[value_defaultprogramsfanart]</texture>
	</control>

	<control type="group"><!-- default group -->
	<include>Animation_Window</include>

	<control type="button" id="9900"><!-- to menu/kiosk condition -->
	<include>InvisibleButton</include>
	<onfocus condition="![Skin.HasSetting(kiosk) | Skin.HasSetting(kiosksmart) + !SubString(skin.string(codestep),step3)]">SetFocus(9300)</onfocus>
	<onfocus condition="Skin.HasSetting(kiosksmart) + !SubString(skin.string(codestep),step3)">SetFocus(9100)</onfocus>
	<onfocus condition="Skin.HasSetting(kiosk) + IsEmpty(ListItem.Trailer)">SetFocus(50)</onfocus>
	<onfocus condition="Skin.HasSetting(kiosk) + !IsEmpty(ListItem.Trailer)">SetFocus(90000)</onfocus>
	</control>
	<control type="button" id="9910"><!-- panel focus -->
	<include>InvisibleButton</include>
	<onleft>SetFocus(50)</onleft>
	<onright>SetFocus(50)</onright>
	<onup>SetFocus(9900)</onup>
	<ondown>SetFocus(50)</ondown>
	</control>
	<control type="button" id="9920"><!-- hidden colection/view fanart -->
	<include>InvisibleButton</include>
	<onleft>SetFocus(50)</onleft>
	<onright>SetFocus(50)</onright>
	<onup>SetFocus(50)</onup>
	<ondown>SetFocus(50)</ondown>
	</control>
	<control type="button" id="9922"><!-- refresh das vistas -->
	<include>InvisibleButton</include>
	<animation effect="fade" start="0" end="100" time="150" delay="3000">Hidden</animation>
	<visible>Window.IsVisible(6631)</visible>
	</control>
	<control type="group">
	<animation effect="slide" time="400" start="0,-250" end="0,0" easing="inout" tween="cubic">WindowOpen</animation>
	<animation effect="slide" time="400" start="0,-250" end="0,0" easing="inout" tween="cubic">Visible</animation>
	<animation effect="slide" time="400" start="0,0" end="0,-250" easing="inout" tween="cubic">WindowClose</animation>
	<animation effect="slide" time="400" start="0,0" end="0,-250" easing="inout" tween="cubic">Hidden</animation>
	<visible>[Control.IsVisible(52) | Control.IsVisible(53) | Control.IsVisible(54) | Control.IsVisible(56) | Control.IsVisible(58) | Control.IsVisible(60) | Control.IsVisible(62) | Window.IsActive(2003)] + ![Control.HasFocus(9920) | Control.IsVisible(9922)]</visible>
	<control type="image">
	<left>0</left>
	<top>0</top>
	<height>300</height>
	<width>1280</width>
	<texture flipy="true">shadow_mask.png</texture>
	<colordiffuse>95000000</colordiffuse>
	</control>
	<control type="label"><!-- Title -->
	<left>30</left>
	<top>8</top>
	<width>1100</width>
	<height>40</height>
	<font>Font_40</font>
	<label>$INFO[ListItem.Label]</label>
	<textcolor>FFFFFAF0</textcolor>
	<scroll>true</scroll>
	<scrollout>false</scrollout>
	<shadowcolor>grey</shadowcolor>
	</control>
	</control>
	<control type="group"><!-- Grupo ocultar flags ou fanart -->
	<top>30</top>
	<include>Animation_HiddenView</include>

	<control type="group">
	<animation effect="slide" start="0,300" end="0,0"  time="500" tween="sine" easing="out">WindowOpen</animation>
	<animation effect="slide" start="0,300" end="0,0"  time="500" tween="sine" easing="out">Visible</animation>
	<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
	<visible>![Skin.HasSetting(nomediaflags) | Control.IsVisible(57)]</visible>
	<control type="image"><!-- Barra das etiquetas -->
	<left>0</left>
	<top>610</top>
	<width>1280</width>
	<height>80</height>
	<colordiffuse>$VAR[value_floorcolor]</colordiffuse>
	<texture>shadow_mask.png</texture>
	</control>
	<control type="grouplist"><!-- Etiquetas -->
	<left>20</left>
	<top>651</top>
	<orientation>horizontal</orientation>
	<itemgap>19</itemgap>
	<control type="label"><!-- Rating -->
	<include>FlagLabel</include>
	<label>$INFO[ListItem.Rating]</label>
	<visible>!IsEmpty(ListItem.Title)</visible>
	</control>
	<control type="image">
	<include>FlagSeparator</include>
	<visible>!IsEmpty(ListItem.Title)</visible>
	</control>
	</control>
	<control type="image">
	<left>0</left>
	<top>650</top>
	<height>40</height>
	<width>1280</width>
	<texture>gradient_small.png</texture>
	</control>
	</control>
	
	<!-- ViewTypes -->
	<include>ViewRightList</include><!-- 51 -->
	<include condition="Skin.HasSetting(viewposter_programs)">ViewPoster</include><!-- 54 -->
	<include condition="Skin.HasSetting(viewlowlist_programs)">ViewLowList</include><!-- 55 -->
	<include condition="Skin.HasSetting(viewwall_programs)">ViewWallPrograms</include><!-- 56 -->
	<include condition="Skin.HasSetting(viewwide_programs)">ViewWide</include><!-- 59 -->
	<include condition="Skin.HasSetting(viewpanel_programs)">ViewPanel</include><!-- 62 -->
	</control>
	<include>TouchScreen</include>
	<include>ScrollLabel</include>
	<!--<include>MultiData</include>-->
	<include>TopMenu_Programs</include>
	<include>BGBlack</include>
	</control>
	</controls>
</window>