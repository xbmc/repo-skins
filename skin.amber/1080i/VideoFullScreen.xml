<?xml version="1.0" encoding="UTF-8"?>
<window>
  <animation effect="fade" time="200">WindowClose</animation>
  <controls>
    <control type="group" id="1">
      <visible>!String.IsEmpty(Player.SeekNumeric)</visible>
      <top>150</top>
      <control type="image" id="1">
        <width>300</width>
        <height>60</height>
        <texture>img/OverlayStripe.png</texture>
        <colordiffuse>FFE2E2E2</colordiffuse>
      </control>
      <control type="label" id="1">
        <width>300</width>
        <height>60</height>
        <label>$INFO[Player.SeekNumeric,[COLOR=Highlight]$LOCALIZE[31984]:[/COLOR] ]</label>
        <font>Details</font>
        <align>center</align>
        <shadowcolor>black</shadowcolor>
      </control>
    </control>
    <control type="group" id="1">
			<posy>820</posy>
			<include>OSDFade</include>
			<visible>[Player.ShowInfo | Window.IsActive(VideoOSD)] + ![Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings) | Window.IsVisible(OSDAudioDSPSettings) | Window.IsVisible(VideoBookmarks) | Window.IsVisible(PVROSDChannels) | Window.IsVisible(PVROSDGuide) | Window.IsVisible(SliderDialog)]</visible>
			<animation effect="fade" time="200">VisibleChange</animation>
			<control type="image" id="1">
				<width>1920</width>
				<height>260</height>
				<texture border="0,30,0,30">OSD/FS_OSDBackground.png</texture>
				<colordiffuse>FFE2E2E2</colordiffuse>
				<visible>Skin.HasSetting(OSDInfo)</visible>
			</control>
			<control type="image" id="1">
				<posy>-150</posy>
				<width>1920</width>
				<height>410</height>
				<texture border="0,30,0,30">OSD/FS_OSDBackground.png</texture>
				<colordiffuse>FFE2E2E2</colordiffuse>
				<visible>!Skin.HasSetting(OSDInfo)</visible>
			</control>
        <control type="image" id="1">
          <posx>30</posx>
          <posy>25</posy>
          <width>1305</width>
          <height>1</height>
          <texture>img/LineST.png</texture>
				<visible>!Skin.HasSetting(OSDInfo)</visible>
        </control>
      <control type="textbox" description="Plot" id="1">
        <posx>30</posx>
        <posy>-110</posy>
        <width>1305</width>
        <height>120</height>
        <align>justify</align>
        <font>InfoPlot</font>
        <label>$VAR[VideoFullScreenPlot]</label>
 				<visible>!Skin.HasSetting(OSDInfo)</visible>
      </control>
      <control type="image" id="1">
        <posx>539r</posx>
        <posy>666r</posy>
        <width>509</width>
        <height>636</height>
        <texture fallback="DefaultVideoCover.png">$INFO[Player.Art(thumb)]</texture>
        <aspectratio align="center" aligny="bottom">keep</aspectratio>
        <colordiffuse>HeavyShadow</colordiffuse>
      </control>
      <control type="image" id="1">
        <posx>555r</posx>
        <posy>682r</posy>
        <width>509</width>
        <height>636</height>
        <texture fallback="DefaultVideoCover.png">$INFO[Player.Art(thumb)]</texture>
        <aspectratio align="center" aligny="bottom">keep</aspectratio>
      </control>
			<control type="label" id="1">
				<description>Movie Info Studio</description>
				<posx>30</posx>
				<posy>50</posy>
				<width>900</width>
				<height>40</height>
				<align>left</align>
				<label>$VAR[VideoTopHeading]</label>
        <font>InfoTitle</font>
        <textcolor>grey</textcolor>
			</control>
			<control type="grouplist" id="1">
				<top>50</top>
				<posx>708</posx>
				<height>35</height>
				<width>605</width>
				<orientation>horizontal</orientation>
				<itemgap>15</itemgap>
				<align>right</align>
				<control type="image" id="1">
					<description>Video Resolution Image</description>
					<width>85</width>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<texture>$INFO[VideoPlayer.VideoResolution,badges/videoresolution/,.png]</texture>
					<colordiffuse>silver</colordiffuse>
					<visible>!Player.ChannelPreviewActive</visible>
          <visible>!Skin.HasSetting(Hide.MediaFlagsVideo)</visible>
				</control>
				<control type="image" id="1">
					<description>Video Aspect Image</description>
					<width>85</width>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<texture>$INFO[VideoPlayer.VideoAspect,badges/aspectratio/,.png]</texture>
					<colordiffuse>silver</colordiffuse>
					<visible>!Player.ChannelPreviewActive</visible>
          <visible>!Skin.HasSetting(Hide.MediaFlagsVideo)</visible>
				</control>
				<control type="image" id="1">
					<description>ADSP Master Mode Image</description>
					<width>85</width>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<visible>![String.IsEmpty(ADSP.MasterOwnIcon) | Player.ChannelPreviewActive]</visible>
					<texture>$INFO[ADSP.MasterOwnIcon]</texture>
          <visible>!Skin.HasSetting(Hide.MediaFlagsVideo)</visible>
				</control>
				<control type="image" id="1">
					<description>Audio Codec Image</description>
					<width>85</width>
					<aspectratio align="center">keep</aspectratio>
					<texture>$INFO[VideoPlayer.AudioCodec,badges/audiocodec/,.png]</texture>
					<colordiffuse>silver</colordiffuse>
					<visible>String.IsEmpty(ADSP.MasterOverrideIcon) + !Player.ChannelPreviewActive</visible>
          <visible>!Skin.HasSetting(Hide.MediaFlagsVideo)</visible>
				</control>
				<control type="image" id="1">
					<description>ADSP Audio Codec Override Image</description>
					<width>85</width>
					<aspectratio align="center">keep</aspectratio>
					<visible>![String.IsEmpty(ADSP.MasterOverrideIcon) | Player.ChannelPreviewActive]</visible>
					<texture>$INFO[ADSP.MasterOverrideIcon]</texture>
          <visible>!Skin.HasSetting(Hide.MediaFlagsVideo)</visible>
				</control>
				<control type="image" id="1">
					<description>Audio Channels Image</description>
					<width>85</width>
					<aspectratio align="center">keep</aspectratio>
					<texture>$INFO[VideoPlayer.AudioChannels,badges/audiochannels/channels,.png]</texture>
					<colordiffuse>silver</colordiffuse>
          <visible>!Skin.HasSetting(Hide.MediaFlagsVideo)</visible>
					<visible>!Player.ChannelPreviewActive</visible>
				</control>
			</control>
			<control type="grouplist" id="1">
				<left>30</left>
				<top>100</top>
				<width>905</width>
				<height>60</height>
				<orientation>horizontal</orientation>
				<control type="image" id="1">
					<width>40</width>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<texture>img/PVR-IsRecording.png</texture>
					<visible>VideoPlayer.Content(LiveTV) + Player.Recording</visible>
				</control>
					<control type="image" id="1">
					<width>20</width>
					<texture></texture>
					<visible>VideoPlayer.Content(LiveTV) + Player.Recording</visible>
				</control>
				<control type="label" id="1">
					<width>850</width>
					<height>60</height>
					<font>MainLabelBigTitle</font>
					<label>$VAR[VideoPlayerTitle]</label>
					<textcolor>Highlight</textcolor>
					<scroll>true</scroll>
					<scrollspeed>25</scrollspeed>
				</control>
			</control>
			<control type="label" id="1">
				<posx>30</posx>
				<posy>176</posy>
				<width>640</width>
				<height>40</height>
				<align>left</align>
				<label>$VAR[VideoBottomHeading]</label>
				<font>Details</font>
				<scroll>true</scroll>
				<textcolor>grey</textcolor>
			</control>
		</control>
  </controls>
</window>
