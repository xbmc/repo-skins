		<control type="group" description="Content for Games">
		    <visible>[Window.IsActive(gamestretchmode) | Window.IsActive(gamevideofilter) | Window.IsActive(gamevideorotation)]</visible>
			<bottom>0</bottom>
			<height>540</height>
			<width>100%</width>
		    <control type="image">
			    <texture>dialogs/DialogBG.png</texture>
			    <colordiffuse>eeaaaaaa</colordiffuse>
		    </control>
			<control type="panel" id="11">
				<top>30</top>
				<scrolltime tween="sine">200</scrolltime>
				<orientation>horizontal</orientation>
				<itemlayout width="460" height="340">
					<control type="group">
						<left>48</left>
						<right>18</right>
						<top>5</top>
						<control type="image">
							<width>444</width>
							<height>250</height>
							<aspectratio>scale</aspectratio>
							<texture border="4">DefaultVideo.png</texture>
							<bordertexture>colors/black.png</bordertexture>
							<bordersize>4</bordersize>
						</control>
						<control type="gamewindow">
							<width>444</width>
							<height>250</height>
							<videofilter>$INFO[ListItem.Property(game.videofilter)]</videofilter>
							<stretchmode>$INFO[ListItem.Property(game.stretchmode)]</stretchmode>
							<rotation>$INFO[ListItem.Property(game.videorotation)]</rotation>
						</control>
						<control type="image">
						    <top>255</top>
						    <width>444</width>
						    <height>89</height>
						    <texture>img/WhiteRoundedT.png</texture>
						    <aspectratio>stretch</aspectratio>
					    </control>						
						<control type="label">
							<posy>260</posy>
							<width>444</width>
							<height>80</height>
							<label>$INFO[ListItem.Label][CR][COLOR grey]$INFO[ListItem.Label2][/COLOR]</label>
							<font>Details</font>
							<align>center</align>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="460" height="340">
					<control type="group">
						<left>48</left>
						<right>18</right>
						<top>5</top>
						<control type="image">
							<width>444</width>
							<height>250</height>
							<aspectratio>scale</aspectratio>
							<texture border="4">DefaultVideo.png</texture>
							<bordertexture>colors/black.png</bordertexture>
							<bordersize>4</bordersize>
						</control>
						<control type="gamewindow">
							<width>444</width>
							<height>250</height>
							<videofilter>$INFO[ListItem.Property(game.videofilter)]</videofilter>
							<stretchmode>$INFO[ListItem.Property(game.stretchmode)]</stretchmode>
							<rotation>$INFO[ListItem.Property(game.videorotation)]</rotation>
						</control>
						<control type="image">
						    <top>255</top>
						    <width>444</width>
						    <height>89</height>
						    <texture border="4">img/WhiteRoundedST2.png</texture>
						    <colordiffuse>Highlight</colordiffuse>
						    <aspectratio>stretch</aspectratio>
							<visible>Control.HasFocus(11)</visible>
					    </control>						
						<control type="label">
							<posy>260</posy>
							<width>444</width>
							<height>80</height>
							<label>$INFO[ListItem.Label][CR] $INFO[ListItem.Label2]</label>
							<font>Details</font>
							<textcolor>Black</textcolor>
							<shadowcolor></shadowcolor>
							<align>center</align>
						</control>
						<control type="image">
							<width>444</width>
							<height>250</height>
                            <texture colordiffuse="Highlight" border="8">thumbs/IconBorder_FO.png</texture>
							<visible>Control.HasFocus(11)</visible>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="textbox" id="12">
				<description>Description Area</description>
				<visible>Window.IsActive(gamevideofilter)</visible>
				<top>410</top>
				<left>100</left>
				<right>100</right>
				<height>200</height>
				<font>Details</font>
				<align>justify</align>
				<shadowcolor>ShadowDark</shadowcolor>
				<autoscroll time="3000" delay="5000" repeat="5000">true</autoscroll>
			</control>
		</control>
		
