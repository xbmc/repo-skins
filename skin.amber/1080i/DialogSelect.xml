		<include>DimBG</include>
		
		<control type="group" description="Default Content">
		    <visible>![Window.IsActive(gamestretchmode) | Window.IsActive(gamevideofilter) | Window.IsActive(gamevideorotation)]</visible>
			<posx>312</posx>
			<posy>180</posy>
			<control type="image">
				<posx>-14</posx>
				<posy>-20</posy>
				<width>1293</width>
				<height>720</height>
				<texture flipx="true" border="55">dialogs/DialogRightSmall.png</texture>
			</control>
			<control type="label" id="1" description="Header">
				<posx>300</posx>
				<width>900</width>
				<height>30</height>
				<align>center</align>
				<font>ListDetails</font>
				<textcolor>Highlight</textcolor>
				<label></label>
			</control>
			<control type="group" description="Group 6 Thumbs">
				<visible>!Control.IsVisible(3)</visible>
				<control type="list" id="6">
					<posx>256</posx>
					<posy>60</posy>
					<width>1010</width>
					<height>600</height>
					<orientation>vertical</orientation>
					<onleft>90</onleft>
					<onright>60</onright>
					<onup>6</onup>
					<ondown>6</ondown>
					<pagecontrol>60</pagecontrol>
					<scrolltime>0</scrolltime>
					<itemlayout width="1010" height="120">
						<control type="image">
							<width>1010</width>
							<height>120</height>
							<texture border="3">list/ListNF.png</texture>
						</control>
						<include content="ShadowedImage">
							<param name="top">8</param>
							<param name="left">16</param>
							<param name="width">100</param>
							<param name="height">100</param>
							<param name="shadowoffset">4</param>
						</include>
						<control type="label">
							<posx>132</posx>
							<posy>5</posy>
							<width>820</width>
							<height>60</height>
							<label>$INFO[ListItem.Label]</label>
                            <selectedcolor>Highlight</selectedcolor>
						</control>
						<control type="label">
							<left>132</left>
							<posy>55</posy>
							<width>820</width>
							<height>60</height>
							<align>left</align>
							<textcolor>Grey</textcolor>
							<selectedcolor>Highlight</selectedcolor>
							<font>ListDetails</font>
							<scroll>false</scroll>
							<label>$INFO[ListItem.Label2]</label>
						</control>
					</itemlayout>
					<focusedlayout width="1010" height="120">
						<control type="image">
							<width>1010</width>
							<height>120</height>
							<texture border="3">list/ListNF.png</texture>
						</control>
						<control type="image">
							<visible>Control.HasFocus(6)</visible>
							<include>VisibleFadeEffect</include>
							<width>1010</width>
							<height>120</height>
							<texture border="4" colordiffuse="Highlight">img/WhiteRoundedST2.png</texture>
						</control>
						<include content="ShadowedImage">
							<param name="top">8</param>
							<param name="left">16</param>
							<param name="width">100</param>
							<param name="height">100</param>
							<param name="shadowoffset">4</param>
						</include>
						<control type="label">
							<visible>Control.HasFocus(6)</visible>
							<posx>132</posx>
							<posy>5</posy>
							<width>820</width>
							<height>60</height>
							<textcolor>Black</textcolor>
                            <selectedcolor>$VAR[ThemeSelectedColour]</selectedcolor>
							<shadowcolor>HeavyShadow</shadowcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<visible>!Control.HasFocus(6)</visible>
							<posx>132</posx>
							<posy>5</posy>
							<width>820</width>
							<height>60</height>
                            <selectedcolor>Highlight</selectedcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<visible>Control.HasFocus(6)</visible>
							<left>132</left>
							<posy>55</posy>
							<width>820</width>
							<height>60</height>
							<align>left</align>
							<textcolor>Black</textcolor>
                            <selectedcolor>$VAR[ThemeSelectedColour]</selectedcolor>
							<shadowcolor>HeavyShadow</shadowcolor>
							<font>ListDetails</font>
							<label>$INFO[ListItem.Label2]</label>
						</control>
						<control type="label">
							<visible>!Control.HasFocus(6)</visible>
							<left>132</left>
							<posy>55</posy>
							<width>820</width>
							<height>60</height>
							<align>left</align>
							<textcolor>Grey</textcolor>
							<selectedcolor>Highlight</selectedcolor>
							<shadowcolor></shadowcolor>
							<font>ListDetails</font>
							<label>$INFO[ListItem.Label2]</label>
						</control>
					</focusedlayout>
				</control>
			</control>
			<control type="group" description="Group 3 Plain list">
				<control type="list" id="3">
					<posx>256</posx>
					<posy>60</posy>
					<width>1010</width>
					<height>600</height>
					<orientation>vertical</orientation>
					<onleft>90</onleft>
					<onright>60</onright>
					<onup>3</onup>
					<ondown>3</ondown>
					<pagecontrol>60</pagecontrol>
					<scrolltime>0</scrolltime>
					<itemlayout width="1010" height="60">
						<control type="image">
							<width>1010</width>
							<height>60</height>
							<texture border="3">list/ListNF.png</texture>
						</control>
						<control type="label">
							<scroll>false</scroll>
							<width>810</width>
							<height>60</height>
							<textoffsetx>30</textoffsetx>
							<label>$INFO[ListItem.Label]</label>
                            <selectedcolor>Highlight</selectedcolor>
						</control>
					</itemlayout>
					<focusedlayout width="1010" height="60">
						<control type="image">
							<visible>Control.HasFocus(3)</visible>
							<include>VisibleFadeEffect</include>
							<width>1010</width>
							<height>60</height>
							<texture border="4" colordiffuse="Highlight">img/WhiteRoundedST2.png</texture>
						</control>
						<control type="label">
							<width>810</width>
							<height>60</height>
							<textoffsetx>30</textoffsetx>
							<textcolor>Black</textcolor>
                            <selectedcolor>$VAR[ThemeSelectedColour]</selectedcolor>
							<shadowcolor>HeavyShadow</shadowcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</focusedlayout>
				</control>
			</control>
			<control type="scrollbar" id="60">
				<posx>1250</posx>
				<posy>60</posy>
				<width>36</width>
				<height>600</height>
				<texturesliderbackground></texturesliderbackground>
				<texturesliderbar></texturesliderbar>
				<texturesliderbarfocus></texturesliderbarfocus>
				<textureslidernib border="18">OSD/ScrollbarNibNF.png</textureslidernib>
				<textureslidernibfocus border="18">OSD/ScrollbarNibFO.png</textureslidernibfocus>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<onleft>3</onleft>
			</control>
			<control type="grouplist" id="90">
				<top>540</top>
				<onleft condition="Control.IsVisible(3)">3</onleft>
				<onright condition="Control.IsVisible(3)">3</onright>
				<onleft condition="Control.IsVisible(6)">6</onleft>
				<onright condition="Control.IsVisible(6)">6</onright>
				<control type="button" id="5" description="Get more button">
					<width>254</width>
					<label></label>
					<align>right</align>
					<height>60</height>
					<texturenofocus border="3">buttons/ButtonNF.png</texturenofocus>
				</control>
				<control type="button" id="7">
					<description>Cancel button</description>
					<width>254</width>
					<height>60</height>
					<label>$LOCALIZE[222]</label>
					<align>right</align>
					<texturenofocus border="3">buttons/ButtonNF.png</texturenofocus>
				</control>
			</control>
