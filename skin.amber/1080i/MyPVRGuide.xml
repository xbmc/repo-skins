<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>10</defaultcontrol>
    <views>10</views>
    <controls>
        <include>DefaultBackground</include>
        <include content="BackgroundOverlay">
            <param name="parentid" value="50"/>
        </include>
        <include>Time</include>
        <control type="group" id="50">
            <include>OpenClose</include>
            <include>EPGTimelineView</include>
        </control>
        <control type="group" description="EPG Timeline Info">
            <visible>Control.IsVisible(10)</visible>
            <include>VisibleFadeEffect</include>
            <include content="MiniVideoWindow">
                <param name="top">65</param>
                <param name="left">85</param>
                <param name="width">368</param>
                <param name="height">207</param>
                <param name="labeltop">150</param>
                <param name="itemicon">$VAR[PVRGuideIcon]</param>
            </include>
            <control type="group">
                <posx>490</posx>
                <posy>65</posy>
                <control type="label">
                    <width>1400</width>
                    <height>60</height>
                    <aligny>center</aligny>
                    <align>left</align>
                    <scroll>false</scroll>
                    <!-- Begin Matrix change -->
					<label>$VAR[NewLiveFinaleLabel,, ][COLOR=$VAR[HighlightColor]]$INFO[ListItem.Label][/COLOR]$INFO[ListItem.Genre,  -  ,  -]  [COLOR=Grey3]$INFO[ListItem.StartTime,(,  -  ]$INFO[ListItem.EndTime,,)][/COLOR]</label>
					<!-- End Matrix change -->
					<wrapmultiline>true</wrapmultiline>
                </control>
                <control type="textbox">
                    <posy>70</posy>
                    <width>1355</width>
                    <height>120</height>
                    <align>justify</align>
                    <label>$VAR[Plots]</label>
                </control>
            </control>
        </control>
        <include>PVRChannelNumberInput</include>
		<include>PVRSideBlade</include>
        <include>TouchButtons</include>
        <control type="scrollbar" id="60">
            <visible>Control.IsVisible(10)</visible>
            <animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
            <animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
            <posx>25r</posx>
            <posy>420</posy>
            <width>36</width>
            <height>680</height>
            <texturesliderbackground></texturesliderbackground>
            <texturesliderbar></texturesliderbar>
            <texturesliderbarfocus></texturesliderbarfocus>
            <textureslidernib border="18">OSD/ScrollbarNibNF.png</textureslidernib>
            <textureslidernibfocus border="18" colordiffuse="$VAR[HighlightColor]">OSD/ScrollbarNibFO.png</textureslidernibfocus>
            <showonepage>false</showonepage>
            <orientation>vertical</orientation>
            <onleft>10</onleft>
            <onright condition="!Skin.HasSetting(KioskMode.Enabled)">9000</onright>
            <onright condition="Skin.HasSetting(KioskMode.Enabled)">10</onright>
        </control>
        <control type="label" id="29">
            <include>HiddenButton</include>
        </control>
        <control type="label" id="30">
            <include>HiddenButton</include>
        </control>
    </controls>
</window>