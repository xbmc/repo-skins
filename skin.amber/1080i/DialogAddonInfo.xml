		<control type="textbox" description="News">
			<visible>Control(9000).HasFocus(600)</visible>
			<include>VisibleFadeEffectDelay</include>
			<posx>700</posx>
			<posy>670</posy>
			<width>1180</width>
			<height>410</height>
