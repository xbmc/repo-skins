			<control type="group" description="top">
				<posx>700</posx>
				<posy>60</posy>
				<control type="label" description="Main Label">
					<posy>-45</posy>
					<width>1180</width>
					<height>60</height>
					<font>InfoTitle</font>
					<textcolor>Highlight</textcolor>
					<align>left</align>
					<label>$INFO[ListItem.AddonName,$LOCALIZE[24003] - ]</label>
				</control>
				<control type="image" description="Line Split">
					<posy>23</posy>
					<width>1180</width>
					<height>1</height>
					<texture>img/LineL.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="textbox" description="Plot">
					<visible>String.IsEmpty(ListItem.AddonBroken)</visible>
					<include>VisibleFadeEffectDelay</include>
					<posy>35</posy>
					<width>625</width>
					<height>400</height>
					<align>justify</align>
					<font>InfoPlot</font>
					<label fallback="19055">$INFO[ListItem.AddonSummary,[B],[/B][CR][CR]]$INFO[ListItem.AddonDescription]</label>
				</control>
				<control type="textbox" description="Plot">
					<visible>!String.IsEmpty(ListItem.AddonBroken)</visible>
					<include>VisibleFadeEffectDelay</include>
					<posy>35</posy>
					<width>610</width>
					<height>365</height>
