<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3012</defaultcontrol>
    <onload>Dialog.Close(fullscreeninfo,true)</onload>
    <onload>Dialog.Close(videoosd,true)</onload>
    <include>OSDFade</include>
    <controls>
        <control type="group">
            <control type="group">
                <height>100</height>
                <!-- Background -->
                <control type="image">
                    <top>0</top>
                    <width>100%</width>
                    <height>100</height>
				    <texture flipy="true" border="0,30,0,30">OSD/FS_OSDBackground.png</texture>
				    <colordiffuse>dfcebe9e</colordiffuse>
                </control>
                <control type="group">
                    <top>12</top>
                    <left>20</left>
                    <width>75%</width>
                    <!-- Buttons -->
                    <control type="grouplist">
                        <orientation>horizontal</orientation>
                        <height>56</height>
                        <itemgap>10</itemgap>
                        <align>left</align>
                        <control type="button" id="3012">
                            <label>      $LOCALIZE[32239] [B][COLOR $VAR[LabelTextColor]]$INFO[Player.TimeRemaining(ss),,][/COLOR][/B] $LOCALIZE[32047]</label>
                            <height>56</height>
                            <width min="50">auto</width>
                            <aligny>center</aligny>
                            <align>center</align>
                        </control>
                        <control type="button" id="3013">
                            <label>$ADDON[service.upnext 30034]</label>
                            <height>56</height>
                            <width min="50">auto</width>
                        </control>
                    </control>
                    <control type="image">
                        <width>46</width>
                        <height>46</height>
                        <aspect>keep</aspect>
                        <texture>nextupicons/30.png</texture>
                        <colordiffusse>$VAR[LabelTextColor]</colordiffusse>
                        <animation effect="slide" end="13,5" time="0" condition="true">Conditional</animation>
                        <visible>Integer.IsGreater(Player.TimeRemaining(ss),30)</visible>
                    </control>
                    <control type="image">
                        <width>46</width>
                        <height>46</height>
                        <aspect>keep</aspect>
                        <texture>$INFO[Player.TimeRemaining(ss),nextupicons/,.png]</texture>
                        <colordiffuse>$VAR[LabelTextColor]</colordiffuse>
                        <animation effect="slide" end="13,5" time="0" condition="true">Conditional</animation>
                        <visible>!Integer.IsGreater(Player.TimeRemaining(ss),30)</visible>
                    </control>
                </control>
            </control>
        </control>
        <control type="progress" id="3014">
            <visible>false</visible>
        </control>
    </controls>
</window>