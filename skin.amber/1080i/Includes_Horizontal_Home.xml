<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Horizontal_Home_Layout">
		<control type="group" id="700">
            <include condition="!Skin.HasSetting(Use_Jarvis_Shelves)" content="HomeShelf">
                <param name="xoffset" value="0"/>
                <param name="yoffset" value="245"/>
                <param name="shelfwidth" value="1920"/>
            </include>
            <include condition="Skin.HasSetting(Use_Jarvis_Shelves)" content="HomeShelf_Jarvis">
                <param name="xoffset" value="0"/>
                <param name="yoffset" value="245"/>
                <param name="shelfwidth" value="1920"/>
            </include>
		</control>
		<control type="group">
			<animation effect="slide" start="0,0" end="0,-70" time="0" condition="Skin.HasSetting(Use_Jarvis_Shelves)">conditional</animation>
			<posy>220</posy>
			<control type="group" description="Furniture">
				<control type="image" description="Top glass border">
					<animation effect="zoom" start="100,100" end="100,50" time="100" condition="true">Conditional</animation>
					<posy>651</posy>
					<width>1920</width>
					<height>87</height>
					<texture border="0,0,0,12">home/NavbarGlass.png</texture>
				</control>
				<control type="image" description="Bottom glass border">
					<animation effect="zoom" start="100,100" end="100,50" time="100" condition="!Integer.IsGreater(Container(9001).NumItems,0)">Conditional</animation>
					<posy>787</posy>
					<width>1920</width>
					<height>87</height>
					<texture flipy="true" border="0,10,0,0">home/NavbarGlass2.png</texture>
				</control>
				<control type="image">
					<posy>625</posy>
					<width>1920</width>
					<height>225</height>
					<texture flipy="true">home/HomeMenuBack3.png</texture>
				</control>
			</control>
			<control type="fixedlist" id="300" description="Main Bar">
				<animation effect="fade" time="200" start="100" end="25" reversible="true" condition="!Control.HasFocus(300)">Conditional</animation>
				<posx>-338</posx>
				<posy>689</posy>
				<width>3069</width>
				<height>225</height>
				<onleft>300</onleft>
				<onright>300</onright>
				<ondown>9001</ondown>
				<onup condition="Skin.HasSetting(Shelf.Favourites) | Skin.HasSetting(Shelf.Addons) | !Skin.HasSetting(Hide.RecentlyAdded)">700</onup>
				<pagecontrol></pagecontrol>
				<focusposition>2</focusposition>
				<orientation>horizontal</orientation>
				<itemlayout height="70" width="519">
					<control type="label">
						<width>519</width>
						<textcolor>Grey</textcolor>
						<shadowcolor>ShadowDark</shadowcolor>
						<height>70</height>
						<align>center</align>
						<aligny>top</aligny>
						<textoffsety>2</textoffsety>
						<scroll>false</scroll>
						<label>$INFO[ListItem.Label]</label>
						<font>MainMenu</font>
					</control>
				</itemlayout>
				<focusedlayout height="70" width="519">
					<control type="label">
						<width>519</width>
						<textcolor>Highlight</textcolor>
						<shadowcolor>ShadowDark</shadowcolor>
						<height>70</height>
						<align>center</align>
						<aligny>top</aligny>
						<textoffsety>2</textoffsety>
						<label>$INFO[ListItem.Label]</label>
						<font>MainMenu</font>
					</control>
				</focusedlayout>
				<content>
					<include>Home.Main.Menu.Items</include>
				</content>
			</control>
			<control type="fixedlist" id="9001" description="Submenu Bar">
				<animation effect="slide" start="0,0" end="-128,0" time="0" condition="String.IsEqual(Container(9001).NumItems,2) | String.IsEqual(Container(9001).NumItems,4) | String.IsEqual(Container(9001).NumItems,6)">conditional</animation>
				<include>VisibleFadeEffect</include>
				<posx>64</posx>
				<posy>782</posy>
				<height>50</height>
				<width>1792</width>
				<onleft>9001</onleft>
				<onright>9001</onright>
				<viewtype>list</viewtype>
				<orientation>horizontal</orientation>
				<focusposition>3</focusposition>
				<movement>3</movement>
				<onup>300</onup>
				<onback>SetFocus(300)</onback>
				<ondown>700</ondown>
				<itemlayout width="256" height="50">
					<control type="label">
						<posx>3</posx>
						<posy>1</posy>
						<height>50</height>
						<width>250</width>
						<align>center</align>
						<aligny>center</aligny>
						<font>Details</font>
						<scroll>false</scroll>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>Black</textcolor>
						<shadowcolor></shadowcolor>
					</control>
					<control type="label">
						<posx>3</posx>
						<height>50</height>
						<width>250</width>
						<align>center</align>
						<aligny>center</aligny>
						<font>Details</font>
						<scroll>false</scroll>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>Details</textcolor>
						<shadowcolor></shadowcolor>
					</control>
				</itemlayout>
				<focusedlayout width="256" height="50">
					<control type="image">
						<visible>Control.HasFocus(9001)</visible>
						<posx>3</posx>
						<posy>8</posy>
						<width>250</width>
						<height>36</height>
						<texture border="4" colordiffuse="Highlight">img/WhiteRoundedST2.png</texture>
					</control>
					<control type="label">
						<visible>!Control.HasFocus(9001)</visible>
						<posx>3</posx>
						<height>50</height>
						<width>250</width>
						<align>center</align>
						<aligny>center</aligny>
						<font>Details</font>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>Details</textcolor>
						<shadowcolor></shadowcolor>
					</control>
					<control type="label">
						<visible>Control.HasFocus(9001)</visible>
						<posx>3</posx>
						<height>50</height>
						<width>250</width>
						<align>center</align>
						<aligny>center</aligny>
						<font>Details</font>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>Black</textcolor>
						<shadowcolor></shadowcolor>
					</control>
				</focusedlayout>
				<content>
					<include>Home.Submenu.Items</include>
				</content>
			</control>
		</control>
	</include>
</includes>