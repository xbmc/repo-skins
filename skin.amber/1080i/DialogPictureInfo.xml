<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">5</defaultcontrol>
	<include>OpenClose</include>
	<controls>
		<control type="image">
			<width>1920</width>
			<height>1080</height>
			<texture>img/blackdot1.png</texture>
			<aspectratio>scale</aspectratio>
		</control>
		<control type="image">
			<width>1920</width>
			<height>1080</height>
			<texture background="true">$VAR[PictureInfoBackground]</texture>
			<aspectratio>scale</aspectratio>
		</control>
		<include content="BackgroundOverlay">
			<param name="parentid" value="5"/>
		</include>
		<include content="ShadowedImage">
			<param name="top">24</param>
			<param name="left">24</param>
			<param name="width">800</param>
			<param name="height">960</param>
			<param name="shadowoffset">16</param>
			<param name="texture">$INFO[ListItem.Icon]</param>
		</include>
		<control type="label" description="Main Label">
			<posx>854</posx>
			<posy>24</posy>
			<width>1030</width>
			<height>60</height>
			<font>InfoTitle</font>
			<textcolor>$VAR[HighlightColor]</textcolor>
			<align>left</align>
			<label>$INFO[ListItem.Label]</label>
		</control>
		<control type="label" description="Main Label">
			<posx>854</posx>
			<posy>74</posy>
			<width>1030</width>
			<height>60</height>
			<textcolor>$VAR[LabelTextColor]</textcolor>
			<align>left</align>
			<label>$INFO[ListItem.PictureDateTime]</label>
		</control>
		<control type="group">
			<control type="list" id="5">
				<posx>854</posx>
				<posy>150</posy>
				<width>1030</width>
				<height>840</height>
				<onleft>noop</onleft>
				<onright>60</onright>
				<onup>5</onup>
				<ondown>5</ondown>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="sine" easing="inout">280</scrolltime>
				<itemlayout height="47" width="1030">
					<control type="label">
						<height>45</height>
						<font>Details</font>
						<align>left</align>
						<aligny>center</aligny>
						<textcolor>$VAR[HighlightColor]</textcolor>
						<selectedcolor>$VAR[SelectedTextColor]</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<textoffsetx>8</textoffsetx>
						<scroll>false</scroll>
					</control>
					<control type="label">
						<height>45</height>
						<font>Details</font>
						<align>right</align>
						<aligny>center</aligny>
						<textcolor>$VAR[LabelTextColor]</textcolor>
						<selectedcolor>$VAR[SelectedTextColor]</selectedcolor>
						<label>$INFO[ListItem.Label2]</label>
						<textoffsetx>8</textoffsetx>
						<scroll>false</scroll>
					</control>
				</itemlayout>
				<focusedlayout height="47" width="1030">
					<control type="label">
						<height>45</height>
						<font>Details</font>
						<align>left</align>
						<aligny>center</aligny>
						<textcolor>$VAR[HighlightColor]</textcolor>
						<selectedcolor>$VAR[SelectedTextColor]</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<textoffsetx>8</textoffsetx>
						<scroll>false</scroll>
					</control>
					<control type="label">
						<height>45</height>
						<font>Details</font>
						<align>right</align>
						<aligny>center</aligny>
						<textcolor>$VAR[LabelTextColor]</textcolor>
						<selectedcolor>$VAR[SelectedTextColor]</selectedcolor>
						<label>$INFO[ListItem.Label2]</label>
						<textoffsetx>8</textoffsetx>
						<scroll>false</scroll>
					</control>
				</focusedlayout>
			</control>
		</control>
		<control type="scrollbar" id="60">
			<posx>1890</posx>
			<posy>150</posy>
			<width>36</width>
			<height>840</height>
			<texturesliderbackground></texturesliderbackground>
			<texturesliderbar></texturesliderbar>
			<texturesliderbarfocus></texturesliderbarfocus>
			<textureslidernib border="18">OSD/ScrollbarNibNF.png</textureslidernib>
			<textureslidernibfocus border="18" colordiffuse="$VAR[HighlightColor]">OSD/ScrollbarNibFO.png</textureslidernibfocus>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
		</control>
	</controls>
</window>