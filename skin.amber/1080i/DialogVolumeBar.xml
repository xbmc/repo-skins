<?xml version="1.0" encoding="UTF-8"?>
<window>
	<zorder>4</zorder>
	<defaultcontrol always="true">20</defaultcontrol>
	<controls>
		<control type="group">
			<visible>!Player.Muted</visible>
			<control type="group">
				<visible>!player.passthrough</visible>
				<control type="image" description="Speaker">
					<visible>!player.passthrough</visible>
					<posx>60</posx>
					<posy>72</posy>
					<width>129</width>
					<height>129</height>
					<texture>OSD/Volume.png</texture>
					<colordiffuse>$VAR[HighlightColor]</colordiffuse>
				</control>        
				<control type="progress" id="20">
					<posx>-300</posx>
					<posy>-300</posy>
					<width>324</width>
					<height>81</height>
					<texturebg></texturebg>
					<texturebg></texturebg>
					<lefttexture></lefttexture>
					<midtexture></midtexture>
					<righttexture></righttexture>
					<info>Player.Volume</info>
				</control>
				<control type="label">
					<posx>180</posx>
					<posy>91</posy>
					<width>353</width>
					<height>82</height>
					<font>MainLabelBigTitle</font>
					<textcolor>$VAR[LabelTextColor]</textcolor>
					<shadowcolor>ShadowDark</shadowcolor>
					<label>$INFO[Control.GetLabel(20)]</label>
				</control>
			</control>
			<control type="group">
				<visible>player.passthrough</visible>
				<control type="image" description="Speaker passthrough">
					<visible>player.passthrough</visible>
					<posx>60</posx>
					<posy>72</posy>
					<width>129</width>
					<height>129</height>
					<texture>OSD/VolumeMuted.png</texture>
					<colordiffuse>$VAR[HighlightColor]</colordiffuse>
				</control>
			</control>
		</control>
		<control type="image" description="Player Muted">
			<posx>60</posx>
			<posy>72</posy>
			<width>129</width>
			<height>129</height>
			<texture>OSD/VolumeMuted.png</texture>
			<colordiffuse>Red</colordiffuse>
			<visible>Player.Muted</visible>
		</control>
	</controls>
</window>