<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="52_layout">
		<param name="left">20</param>
		<param name="width">1040</param>
		<param name="imgalign">center</param>
		<param name="imgwidth">233</param>
		<param name="image">$VAR[Poster]</param>
		<param name="isfocused">false</param>
        <param name="imagevisibility">true</param>
		<definition>
			<control type="image">
				<visible>$PARAM[isfocused]</visible>
				<width>1040</width>
				<height>104</height>
				<texture border="4" colordiffuse="Highlight">img/WhiteRoundedST2.png</texture>
				<animation effect="fade" start="105" end="50" time="105" condition="!Control.HasFocus(52)">Conditional</animation>
			</control>
			<control type="image">
				<visible>!$PARAM[isfocused]</visible>
				<height>104</height>
				<width>1040</width>
				<texture flipy="true" border="3">list/ListNF.png</texture>
			</control>
			<include content="ShadowedImage">
				<param name="top">5</param>
				<param name="left">5</param>
				<param name="width">$PARAM[imgwidth]</param>
				<param name="height">90</param>
				<param name="shadowoffset">4</param>
				<param name="texture">$PARAM[image]</param>
				<param name="align">$PARAM[imgalign]</param>
                <param name="visibility">$PARAM[imagevisibility]</param>
			</include>
           <control type="label">
		        <visible>$PARAM[isfocused]</visible>
		        <posx>$PARAM[left]</posx>
		        <posy>10</posy>
		        <height>40</height>
		        <width>890</width>
		        <font>font16</font>
		        <textcolor>Black</textcolor>
		        <shadowcolor></shadowcolor>
		        <scroll>false</scroll>
		        <aligny>center</aligny>
		        <label>$VAR[panelheading]</label>
	        </control>
	        <control type="label">
		        <visible>!$PARAM[isfocused]</visible>
		        <posx>$PARAM[left]</posx>
		        <posy>10</posy>
		        <height>40</height>
		        <width>890</width>
		        <font>font16</font>
		        <scroll>false</scroll>
		        <aligny>center</aligny>
		        <label>$VAR[panelheading]</label>
	        </control>
	        <control type="label">
		        <visible>!$PARAM[isfocused]</visible>
		        <posx>$PARAM[left]</posx>
		        <posy>53</posy>
		        <height>40</height>
		        <width>$PARAM[width]</width>
		        <font>ListDetails</font>
		        <aligny>center</aligny>
		        <align>left</align>
		        <label>$VAR[panelsubheading]</label>
	        </control>
	        <control type="label">
		        <visible>$PARAM[isfocused]</visible>
		        <posx>$PARAM[left]</posx>
		        <posy>53</posy>
		        <height>40</height>
		        <width>$PARAM[width]</width>
		        <font>ListDetails</font>
		        <aligny>center</aligny>
		        <align>left</align>
		        <textcolor>Black</textcolor>
		        <shadowcolor></shadowcolor>
		        <label>$VAR[panelsubheading]</label>
	        </control>
		    <control type="group">
    			<visible>[Container.Content(Movies) | Container.Content(Episodes) | Container.Content(tvshows) | Container.Content(seasons)]</visible>
			    <control type="image">
    				<posx>45r</posx>
				    <posy>-5</posy>
				    <width>30</width>
				    <height>100</height>
				    <texture>$VAR[Overlay]</texture>
				    <aspectratio aligny="center">keep</aspectratio>
			    </control>
		    </control>
		</definition>
	</include>

    <include name="PanelTemplate52">
        <param name="top">40</param>
        <param name="left">0</param>
        <param name="width">880</param>
        <param name="heading">$VAR[panelheading]</param>
        <param name="plot">$VAR[Plots]</param>
        <param name="plotheight">320</param>
        <param name="subcontent_label">$INFO[ListItem.Label]$INFO[ListItem.Year,[COLOR Highlight]  (,)[/COLOR]]</param>
        <param name="subcontent_path">$INFO[ListItem.Path]</param>
        <param name="subcontent_sortby">year</param>
        <param name="subcontent_sortorder">descending</param>
        <param name="subcontent_visible">ListItem.IsCollection + String.IsEmpty(ListItem.Plot)</param>
        <param name="subcontent_image_visible">true</param>
        <param name="subcontent_image_texture">$VAR[Overlay]</param>
        <param name="visibility">false</param>
        <definition>
            <control type="group" id="4000" description="Media Info Panel">
                <include>OpenClose</include>
                <visible>$PARAM[visibility]</visible>                
                <posx>$PARAM[left]</posx>
                <posy>$PARAM[top]</posy>
                <width>$PARAM[width]</width>
                <control type="label" description="Heading Label">
                    <top>10</top>
                    <left>40</left>
                    <width>800</width>
                    <height>60</height>
                    <aligny>center</aligny>
                    <align>center</align>
                    <textcolor>Highlight</textcolor>
                    <font>font20_title</font>
                    <wrapmultiline>true</wrapmultiline>
                    <label>$PARAM[heading]</label>
                </control>
				<include content="ShadowedImage">
                    <param name="top">85</param>
                    <param name="left">40</param>
					<param name="width">800</param>
					<param name="height">449</param>
					<param name="texture">$VAR[Fanart]</param>
				</include>
                <control type="label" description="Subheading Label">
                    <top>560</top>
                    <left>40</left>
                    <width>800</width>
                    <height>60</height>
                    <aligny>center</aligny>
                    <align>center</align>
                    <font>ListDetails</font>
                    <wrapmultiline>true</wrapmultiline>
                    <label>$VAR[panelfooter]</label>
                </control>
                <control type="group">
                    <width>820</width>
                    <height>$PARAM[plotheight]</height>
                    <left>30</left>
                    <top>630</top>
                    <control type="textbox" id="4001">
                        <align>justify</align>
                        <label>$PARAM[plot]</label>
                        <font>InfoPlot</font>
                        <width>820</width>
                        <height>$PARAM[plotheight]</height>
                        <autoscroll delay="3000" time="2000" repeat="10000">Skin.HasSetting(AutoScroll)</autoscroll>
                    </control>
                    <control type="panel" id="4002">
                        <visible>$PARAM[subcontent_visible]</visible>
                        <visible>!ListItem.IsParentFolder</visible>
                        <orientation>vertical</orientation>
                        <focusedlayout height="40" width="800">
                        </focusedlayout>
                        <itemlayout height="40" width="800">
                            <control type="image">
                                <top>5</top>
                                <width>30</width>
                                <height>30</height>
                                <visible>$PARAM[subcontent_image_visible]</visible>
                                <texture>$PARAM[subcontent_image_texture]</texture>
                            </control>
                            <control type="label">
                                <left>40</left>
                                <height>40</height>
                                <width>800</width>
                                <aligny>center</aligny>
                                <label>$PARAM[subcontent_label]</label>
                                <font>ListDetails</font>
                                <scrollspeed>25</scrollspeed>
                                <visible>$PARAM[subcontent_image_visible]</visible>
                            </control>
                            <control type="label">
                                <left>0</left>
                                <height>40</height>
                                <width>800</width>
                                <aligny>center</aligny>
                                <label>$PARAM[subcontent_label]</label>
                                <font>ListDetails</font>
                                <scrollspeed>25</scrollspeed>
                                <visible>!$PARAM[subcontent_image_visible]</visible>
                            </control>
                        </itemlayout>
                        <content sortby="$PARAM[subcontent_sortby]" sortorder="$PARAM[subcontent_order]">$PARAM[subcontent_path]</content>
                    </control>
                </control>
		        <control type="grouplist" description="Flags">
			        <top>980</top>
			        <left>40</left>
			        <width>800</width>
			        <height>45</height>
			        <itemgap>30</itemgap>
			        <orientation>horizontal</orientation>
			        <align>center</align>
			        <include content="MediaFlagItems">
				        <param name="showratingbadge">false</param>
			        </include>
		        </control>                
            </control>
        </definition>
    </include>
	
	<include name="View_52_BigList">
		<include content="BackgroundOverlay">
			<param name="parentid" value="52"/>
		</include>
		<control type="group" description="Large Infolist2">
			<visible>Control.IsVisible(52)</visible>
			<include>ContentFade</include>
			<control type="list" id="52">
				<viewtype label="$LOCALIZE[31999]">biglist</viewtype>
				<posx>880</posx>
				<posy>40</posy>
				<width>1040</width>
				<height>1040</height>
				<pagecontrol>62</pagecontrol>
                <onleft condition="!Skin.HasSetting(KioskMode.Enabled)">9000</onleft>
                <onleft condition="Skin.HasSetting(KioskMode.Enabled)">noop</onleft>
                <oninfo condition="ListItem.IsCollection">ActivateWindow(1127)</oninfo>
				<onright>62</onright>
				<onup>52</onup>
				<ondown>52</ondown>
				<preloaditems>4</preloaditems>
				<visible>!Skin.HasSetting(hide.biglistview)</visible>
				<itemlayout height="104" width="1040" condition="Container.Content() | Container.Content(files) | Container.Content(playlists) | Container.Content(Tags) | Container.Content(Actors) | Container.Content(Directors) | Container.Content(Years) | Container.Content(Countries) | Container.Content(roles) | [Container.Content(genres) + Window.IsActive(MyVideoNav.xml) + String.IsEmpty(skin.string(moviegenreiconsResource.path))] | [Container.Content(genres) + Window.IsActive(MyMusicNav.xml) + String.IsEmpty(skin.string(musicgenreiconsResource.path))] | [Container.Content(studios) + String.IsEmpty(skin.string(studiosResource.path))]">
					<include content="52_layout">
						<param name="left">90</param>
						<param name="width">1120</param>
						<param name="imgwidth">60</param>
						<param name="image">$VAR[Square]</param>
						<param name="isfocused">false</param>
					</include>
				</itemlayout>
				<focusedlayout height="104" width="1040" condition="Container.Content() | Container.Content(files) | Container.Content(playlists) | Container.Content(Tags) | Container.Content(Actors) | Container.Content(Directors) | Container.Content(Years) | Container.Content(Countries) | Container.Content(roles) | [Container.Content(genres) + Window.IsActive(MyVideoNav.xml) + String.IsEmpty(skin.string(moviegenreiconsResource.path))] | [Container.Content(genres) + Window.IsActive(MyMusicNav.xml) + String.IsEmpty(skin.string(musicgenreiconsResource.path))] | [Container.Content(studios) + String.IsEmpty(skin.string(studiosResource.path))]">
					<include content="52_layout">
						<param name="left">90</param>
						<param name="width">1120</param>
						<param name="imgwidth">60</param>
						<param name="image">$VAR[Square]</param>
						<param name="isfocused">true</param>
					</include>
				</focusedlayout>
				<itemlayout height="104" width="1040" condition="Container.Content(episodes) | Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(sets)">
					<include content="52_layout">
						<param name="left">90</param>
						<param name="width">1120</param>
						<param name="imgwidth">60</param>
						<param name="isfocused">false</param>
					</include>
				</itemlayout>
				<focusedlayout height="104" width="1040" condition="Container.Content(episodes) | Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(sets)">
					<include content="52_layout">
						<param name="left">90</param>
						<param name="width">1120</param>
						<param name="imgwidth">60</param>
						<param name="isfocused">true</param>
					</include>
				</focusedlayout>
				<itemlayout height="104" width="1040" condition="Container.Content(musicvideos) | Container.Content(artists) | Container.Content(albums) | Container.Content(songs) | Container.Content(addons)">
					<include content="52_layout">
						<param name="left">90</param>
						<param name="width">1120</param>
						<param name="imgwidth">60</param>
						<param name="isfocused">false</param>
						<param name="image">$VAR[Square]</param>
					</include>
				</itemlayout>
				<focusedlayout height="104" width="1040" condition="Container.Content(musicvideos) | Container.Content(artists) | Container.Content(albums) | Container.Content(songs) | Container.Content(addons)">
					<include content="52_layout">
						<param name="left">90</param>
						<param name="width">1120</param>
						<param name="imgwidth">60</param>
						<param name="isfocused">true</param>
						<param name="image">$VAR[Square]</param>
					</include>
				</focusedlayout>
				<itemlayout height="104" width="1040" condition="Container.Content(images)">
					<include content="52_layout">
						<param name="left">90</param>
						<param name="width">1120</param>
                        <param name="imgwidth">60</param>
						<param name="isfocused">false</param>
					</include>
				</itemlayout>
				<focusedlayout height="104" width="1040" condition="Container.Content(images)">
					<include content="52_layout">
						<param name="left">90</param>
						<param name="width">1120</param>
                        <param name="imgwidth">60</param>
						<param name="isfocused">true</param>
					</include>
				</focusedlayout>
				<itemlayout height="104" width="1040" condition="![container.content(episodes) | container.content(addons) | container.content(artists) | container.content(albums) | container.content(songs) | Container.Content(images) | Container.Content(musicvideos) | container.content(movies) | container.content(sets) | container.content(TVshows) | container.content(seasons)]">
					<include content="52_layout">
						<param name="left">90</param>
						<param name="width">1120</param>
						<param name="imgwidth">60</param>
						<param name="isfocused">false</param>
						<param name="image">$VAR[Square]</param>
					</include>
				</itemlayout>
				<focusedlayout height="104" width="1040" condition="![container.content(episodes) | container.content(addons) | container.content(artists) | container.content(albums) | container.content(songs) | Container.Content(images) | Container.Content(musicvideos) | container.content(movies) | container.content(sets) | container.content(TVshows) | container.content(seasons)]">
					<include content="52_layout">
						<param name="left">90</param>
						<param name="width">1120</param>
						<param name="imgwidth">60</param>
						<param name="image">$VAR[Square]</param>
						<param name="isfocused">true</param>
					</include>
				</focusedlayout>
			</control>

			<control type="scrollbar" id="62">
				<animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
				<animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
				<posx>21r</posx>
				<posy>60</posy>
				<width>36</width>
				<height>1120</height>
				<texturesliderbackground></texturesliderbackground>
				<texturesliderbar></texturesliderbar>
				<texturesliderbarfocus></texturesliderbarfocus>
				<textureslidernib border="18">OSD/ScrollbarNibNF.png</textureslidernib>
				<textureslidernibfocus border="18">OSD/ScrollbarNibFO.png</textureslidernibfocus>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<onleft>52</onleft>
				<onright>noop</onright>
			</control>
            
			<include content="PanelTemplate52">
				<param name="visibility">![Container.Content(artists) | Container.Content(albums)]</param>
			</include>
			<include content="PanelTemplate52">
                <param name="plotheight">360</param>
				<param name="subcontent_label">$INFO[ListItem.Label]$INFO[ListItem.Year,  (,)]</param>
				<param name="subcontent_path">$INFO[ListItem.FolderPath]</param>
				<param name="subcontent_visible">String.IsEmpty(ListItem.Property(Artist_Description))</param>
				<param name="subcontent_image_visible">false</param>
				<param name="visibility">Container.content(artists)</param>
			</include>
			<include content="PanelTemplate52">
                <param name="plotheight">360</param>
				<param name="subcontent_label">$INFO[ListItem.TrackNumber,,. ]$INFO[ListItem.Label]$INFO[ListItem.Duration,  (,)]</param>
				<param name="subcontent_path">$INFO[ListItem.FolderPath]</param>
				<param name="subcontent_sortby" value="track" />
				<param name="subcontent_sortorder" value="ascending" />
				<param name="subcontent_visible">String.IsEmpty(ListItem.Property(Album_Description))</param>
				<param name="subcontent_image_visible">false</param>
				<param name="visibility">Container.content(albums)</param>
			</include>
		</control>
	</include>
    
</includes>
