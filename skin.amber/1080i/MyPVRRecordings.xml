<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol>50</defaultcontrol>
  <views>50</views>
  <controls>
    <include>DefaultBackground</include>
    <include content="BackgroundOverlay">
      <param name="parentid" value="50"/>
    </include>
    <include>Time</include>
    <control type="group">
      <include>OpenClose</include>
      <control type="group" description="REC group">
        <include>VisibleFadeEffect</include>
        <include content="MiniVideoWindow">
          <param name="itemicon">$VAR[PVRLargeIcon]</param>
        </include>
        <control type="list" id="50" description="REC">
        <posx>960</posx>
        <posy>60</posy>
        <width>930</width>
        <height>960</height>
          <onleft>102</onleft>
          <onright>60</onright>
          <onup>50</onup>
          <ondown>50</ondown>
          <pagecontrol>60</pagecontrol>
          <viewtype>BigList</viewtype>
          <scrolltime tween="sine" easing="inout">280</scrolltime>
          <viewtype label="535">list</viewtype>
          <itemlayout height="60">
            <control type="image">
              <height>60</height>
              <width>1076</width>
              <texture flipy="true" border="3">list/ListNF.png</texture>
            </control>
            <control type="image">
              <left>10</left>
              <top>8</top>
              <width>33</width>
              <height>33</height>
              <texture>$VAR[Overlay]</texture>
            </control>
            <control type="label" description="Main Label">
              <left>50</left>
              <height>45</height>
              <width>820</width>
              <scroll>false</scroll>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label" description="Label2">
              <left>100</left>
              <height>45</height>
              <width>820</width>
              <font>ListDetails</font>
              <textcolor>Grey</textcolor>
              <scroll>false</scroll>
              <align>right</align>
              <label>$INFO[ListItem.Date]</label>
            </control>
          </itemlayout>
          <focusedlayout height="60">
            <control type="image">
              <width>1076</width>
              <height>50</height>
              <texture border="4" colordiffuse="Highlight">img/WhiteRoundedST2.png</texture>
              <animation effect="fade" start="100" end="50" time="100" condition="!Control.HasFocus(50)">Conditional</animation>
            </control>
            <control type="image">
              <left>10</left>
              <top>8</top>
              <width>33</width>
              <height>33</height>
              <texture>$VAR[Overlay]</texture>
            </control>
            <control type="label" description="Main Label">
              <left>50</left>
              <height>45</height>
              <width>820</width>
              <scroll>false</scroll>
              <label>$INFO[ListItem.Label]</label>
              <textcolor>Black</textcolor>
              <selectedcolor>Black</selectedcolor>
              <shadowcolor></shadowcolor>
            </control>
            <control type="label" description="Label2">
              <left>100</left>
              <height>45</height>
              <width>820</width>
              <scroll>false</scroll>
              <align>right</align>
              <font>ListDetails</font>
              <textcolor>Black</textcolor>
              <selectedcolor>Black</selectedcolor>
              <shadowcolor></shadowcolor>
              <label>$INFO[ListItem.Date]</label>
            </control>
          </focusedlayout>
        </control>
       </control>
  	</control>
    <include content="PanelTemplate">
      <param name="top">445</param>
      <param name="height">265</param>
      <param name="heading">$VAR[panelheading]</param>
      <param name="subheading">$VAR[panelsubheading]</param>
      <param name="plot">$VAR[Plots]</param>
      <param name="footer">$VAR[panelfooter]</param>
      <param name="visibility">true</param>
      <param name="showflags">false</param>
    </include>
    <control type="group" description="REC group">
      <include>VisibleFadeEffect</include>
      <control type="group" description="INFO">
        <posx>60</posx>
        <posy>540</posy>
        <control type="panel" id="80">
          <visible>ListItem.IsFolder + !ListItem.IsParentFolder</visible>
          <width>860</width>
          <height>400</height>
          <orientation>vertical</orientation>
          <scrolltime tween="sine" easing="out">50</scrolltime>
          <autoscroll>true</autoscroll>
          <focusedlayout height="40" width="860">
          </focusedlayout>
          <itemlayout height="40" width="860">
            <control type="image">
              <top>5</top>
              <width>30</width>
              <height>30</height>
              <texture>$VAR[Overlay]</texture>
            </control>
            <control type="label">
              <left>40</left>
              <height>40</height>
              <width>860</width>
              <aligny>center</aligny>
              <label>$INFO[ListItem.Label,[COLOR=White2],[/COLOR]]$INFO[ListItem.Date,[COLOR=Highlight] • [/COLOR]]$INFO[ListItem.Duration,[COLOR=Highlight] • [/COLOR]]</label>
              <font>ListDetails</font>
              <scrollspeed>25</scrollspeed>
            </control>
          </itemlayout>
          <content sortby="date" sortorder="ascending">$INFO[ListItem.FilenameAndPath]</content>
        </control>
        <control type="label">
          <description>Disk usage text</description>
          <top>440</top>
          <width>860</width>
          <height>20</height>
          <label>$INFO[PVR.backenddiskspace]</label>
          <visible>!Integer.IsGreater(PVR.backenddiskspaceprogr,100)</visible>
        </control>
        <control type="progress">
          <description>Disk usage bar</description>
          <top>475</top>
          <width>860</width>
          <height>6</height>
          <info>PVR.backenddiskspaceprogr</info>
          <texturebg border="0,0,0,0">img/AmberDotBG.png</texturebg>
          <midtexture border="0,0,0,0">img/AmberDot.png</midtexture>
          <visible>!Integer.IsGreater(PVR.backenddiskspaceprogr,100)</visible>
        </control>
      </control>
    </control>
    <control type="scrollbar" id="60">
      <animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
      <animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
      <posx>21r</posx>
      <posy>60</posy>
      <width>36</width>
      <height>960</height>
      <texturesliderbackground></texturesliderbackground>
      <texturesliderbar></texturesliderbar>
      <texturesliderbarfocus></texturesliderbarfocus>
      <textureslidernib border="18">OSD/ScrollbarNibNF.png</textureslidernib>
      <textureslidernibfocus border="18">OSD/ScrollbarNibFO.png</textureslidernibfocus>
      <showonepage>false</showonepage>
      <orientation>vertical</orientation>
      <onleft>50</onleft>
      <onright>9000</onright>
    </control>
    <include>PVRSideBlade</include>
     <control type="label" id="29">
      <include>HiddenButton</include>
    </control>
    <control type="label" id="30">
      <include>HiddenButton</include>
    </control>
 </controls>
</window>