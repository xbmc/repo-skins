<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">1015</defaultcontrol>
  <include>OSDFade</include>
  <controls>
    <control type="slider" id="87">
      <description>Seek Slider</description>
      <posx>30</posx>
      <posy>-10</posy>
      <width>1670</width>
      <height>18</height>
      <onup>noop</onup>
      <ondown>100</ondown>
      <action>seek</action>
      <texturesliderbar>OSD/seekslider.png</texturesliderbar>
      <textureslidernib>OSD/ScrollbarNibNF.png</textureslidernib>
      <textureslidernibfocus>OSD/ScrollbarNibFO.png</textureslidernibfocus>
      <visible>Player.SeekEnabled</visible>
    </control>
    <control type="grouplist" id="100">
      <top>920</top>
      <left>30</left>
      <height>64</height>
      <width>1305</width>
      <align>right</align>
      <orientation>horizontal</orientation>
      <animation effect="fade" time="150">VisibleChange</animation>
      <control type="radiobutton" id="1001">
        <include content="OSDButtons">
          <param name="icon">OSD/OSDStarNF.png</param>
        </include>
        <onup>101</onup>
        <ondown>101</ondown>
        <onclick>setrating</onclick>
      </control>
      <control type="radiobutton" id="1002">
        <include content="OSDButtons">
          <param name="icon">OSD/OSDOptionsNF.png</param>
        </include>
        <left>100</left>
        <onup>2010</onup>
        <ondown>101</ondown>
      </control>
    </control>
    <control type="grouplist" id="101">
      <top>984</top>
      <left>30</left>
      <height>98</height>
      <width>1305</width>
      <align>right</align>
      <onup>100</onup>
      <ondown>Close</ondown>
      <onleft>101</onleft>
      <onright>101</onright>
      <orientation>horizontal</orientation>
      <animation effect="fade" time="150">VisibleChange</animation>
      <control type="group" id="1010">
        <width>64</width>
        <height>64</height>
        <control type="button" id="1011">
          <visible>!MusicPlayer.Content(livetv)</visible>
          <width>64</width>
          <height>64</height>
          <font></font>
          <texturefocus border="4" colordiffuse="Highlight">img/WhiteRoundedST2.png</texturefocus>
          <texturenofocus></texturenofocus>
          <onup>100</onup>
          <ondown>100</ondown>
          <onleft>1019</onleft>
          <onright>1012</onright>
          <onclick>PlayerControl(Repeat)</onclick>
        </control>
        <control type="image">
          <visible>!Control.HasFocus(1011)</visible>
          <width>64</width>
          <height>64</height>
          <texture>$VAR[MusicRepeat]</texture>
        </control>
        <control type="image">
          <visible>Control.HasFocus(1011)</visible>
          <width>64</width>
          <height>64</height>
          <texture colordiffuse="Black">$VAR[MusicRepeat]</texture>
        </control>
      </control>
      <control type="radiobutton" id="1012" description="Random">
        <textureradioonfocus colordiffuse="Black">OSD/OSDRandomOnNF.png</textureradioonfocus>
        <textureradioonnofocus>OSD/OSDRandomOnNF.png</textureradioonnofocus>
        <textureradioofffocus colordiffuse="Black">OSD/OSDRandomOffNF.png</textureradioofffocus>
        <textureradiooffnofocus>OSD/OSDRandomOffNF.png</textureradiooffnofocus>
        <texturefocus border="4" colordiffuse="Highlight">img/WhiteRoundedST2.png</texturefocus>
        <width>64</width>
        <height>64</height>
        <radiowidth>64</radiowidth>
        <radioheight>64</radioheight>
        <font></font>
        <texturenofocus></texturenofocus>
        <radioposx>0.1</radioposx>
        <radioposy>0</radioposy>
        <selected>Playlist.IsRandom</selected>
        <onclick>PlayerControl(Random)</onclick>
        <onup>100</onup>
        <ondown>Close</ondown>
      </control>
      <control type="radiobutton" id="1013">
        <include content="OSDButtons">
          <param name="icon">OSD/OSDRWNF.png</param>
        </include>
        <onup>100</onup>
        <ondown>Close</ondown>
        <enable>Player.SeekEnabled</enable>
        <onclick>PlayerControl(Rewind)</onclick>
      </control>
      <control type="radiobutton" id="1014">
        <include content="OSDButtons">
          <param name="icon">OSD/OSDPreviousNF.png</param>
        </include>
        <onup>100</onup>
        <ondown>Close</ondown>
        <onclick>PlayerControl(Previous)</onclick>
      </control>
      <control type="radiobutton" id="1015">
        <textureradioonfocus colordiffuse="Black">OSD/OSDPlayNF.png</textureradioonfocus>
        <textureradioonnofocus>OSD/OSDPlayNF.png</textureradioonnofocus>
        <textureradioofffocus colordiffuse="Black">OSD/OSDPauseNF.png</textureradioofffocus>
        <textureradiooffnofocus>OSD/OSDPauseNF.png</textureradiooffnofocus>
        <texturefocus border="4" colordiffuse="Highlight">img/WhiteRoundedST2.png</texturefocus>
        <width>64</width>
        <height>64</height>
        <radiowidth>64</radiowidth>
        <radioheight>64</radioheight>
        <font></font>
        <texturenofocus></texturenofocus>
        <radioposx>0.1</radioposx>
        <radioposy>0</radioposy>
        <selected>Player.Paused</selected>
        <onclick>PlayerControl(Play)</onclick>
        <visible>Player.PauseEnabled</visible>
        <onup>100</onup>
        <ondown>Close</ondown>
      </control>
      <control type="radiobutton" id="1016">
        <include content="OSDButtons">
          <param name="icon">OSD/OSDStopNF.png</param>
        </include>
        <onup>100</onup>
        <ondown>Close</ondown>
        <onclick>PlayerControl(Stop)</onclick>
      </control>
      <control type="radiobutton" id="1017">
        <include content="OSDButtons">
          <param name="icon">OSD/OSDNextNF.png</param>
        </include>
        <onup>100</onup>
        <ondown>Close</ondown>
        <onclick>PlayerControl(Next)</onclick>
      </control>
      <control type="radiobutton" id="1018">
        <include content="OSDButtons">
          <param name="icon">OSD/OSDFWNF.png</param>
        </include>
        <onup>100</onup>
        <ondown>Close</ondown>
        <enable>Player.SeekEnabled</enable>
        <onclick>PlayerControl(Forward)</onclick>
      </control>
      <control type="radiobutton" id="1019">
        <visible>PVR.CanRecordPlayingChannel</visible>
        <visible>MusicPlayer.Content(livetv)</visible>
        <include content="OSDButtons">
          <param name="icon">OSD/OSDRecordNF.png</param>
        </include>
        <onup>100</onup>
        <ondown>Close</ondown>
        <onclick>PVR.ToggleRecordPlayingChannel</onclick>
      </control>
    </control>
    <control type="group" id="2000">
      <top>555</top>
      <left>830</left>
      <visible>Control.HasFocus(1002) | ControlGroup(2000).HasFocus</visible>
      <control type="image" description="Dialog BG">
        <height>370</height>
        <width>535</width>
        <texture border="45">dialogs/TinyDialog.png</texture>
      </control>
      <control type="grouplist" id="2010">
        <left>30</left>
        <top>30</top>
        <width>470</width>
        <height>300</height>
        <onleft>1002</onleft>
        <onright>1002</onright>
        <onup>1002</onup>
        <ondown>1002</ondown>
        <orientation>vertical</orientation>
        <control type="button" id="2011">
          <width>470</width>
          <font>Details</font>
          <label>$LOCALIZE[24013]</label>
          <label2>[COLOR=Selected]$INFO[Skin.String(LyricPath)][/COLOR]</label2>
          <onclick>Close</onclick>
          <onclick condition="String.IsEmpty(Skin.String(LyricPath))">Skin.SetAddon(LyricPath,xbmc.python.lyrics)</onclick>
          <onclick condition="!String.IsEmpty(Skin.String(LyricPath))">RunScript($INFO[Skin.String(LyricPath)])</onclick>
          <texturenofocus border="3">buttons/ButtonNF.png</texturenofocus>
        </control>
        <control type="button" id="2012">
          <width>470</width>
          <font>Details</font>
          <label>$LOCALIZE[559]</label>
          <onclick>Close</onclick>
          <onclick>ActivateWindow(MusicPlaylist)</onclick>
          <texturenofocus border="3">buttons/ButtonNF.png</texturenofocus>
        </control>
        <control type="button" id="2015">
          <width>470</width>
          <font>Details</font>
          <label>$LOCALIZE[20445]</label>
          <label2>[COLOR=Selected]$VAR[MusicPlayingFanartLabel2][/COLOR]</label2>
          <onclick>Skin.ToggleSetting(MusicPlayingFanart)</onclick>
          <texturenofocus border="3">buttons/ButtonNF.png</texturenofocus>
        </control>
        <control type="button" id="500">
          <width>470</width>
          <font>Details</font>
          <label>$LOCALIZE[250]</label>
          <label2>[COLOR=Selected]$VAR[VisualisationName][/COLOR]</label2>
          <onclick>Dialog.Close(all)</onclick>
          <texturenofocus border="3">buttons/ButtonNF.png</texturenofocus>
        </control>
        <control type="button" id="2016">
          <width>470</width>
          <font>Details</font>
          <label>$LOCALIZE[250] $LOCALIZE[10004]</label>
          <onclick>Addon.Default.OpenSettings(xbmc.player.musicviz)</onclick>
          <texturenofocus border="3">buttons/ButtonNF.png</texturenofocus>
          <visible>Visualisation.Enabled</visible>
        </control>
        <control type="button" id="2017">
          <width>470</width>
          <font>Details</font>
          <label>$LOCALIZE[31048]</label>
          <onclick>ActivateWindow(visualisationpresetlist)</onclick>
          <visible>Visualisation.HasPresets</visible>
          <texturenofocus border="3">buttons/ButtonNF.png</texturenofocus>
        </control>
      </control>
    </control>
  </controls>
</window>