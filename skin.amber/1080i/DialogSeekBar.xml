<?xml version="1.0" encoding="UTF-8"?>
<window>

	<visible>!Player.HasGame + [VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)] + [Window.IsVisible(videoosd) | Window.IsVisible(musicosd) | Player.Caching | Player.ShowInfo | Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Window.IsActive(DialogFullScreenInfo.xml) | Window.IsVisible(DialogPlayerProcessInfo.xml)]</visible>	
	<include>OSDFade</include>
	<zorder>0</zorder>
	<controls>
		<control type="group" description="Top Bar">
			<control type="image" description="Background">
				<posy>-30</posy>
				<width>1920</width>
				<height>178</height>
				<texture flipy="true" border="0,30,0,30">OSD/FS_OSDBackground.png</texture>
				<colordiffuse>FFE2E2E2</colordiffuse>
			</control>
			<control type="label" description="Clock">
				<left>1615</left>
				<top>20</top>
				<width>290</width>
				<height>80</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>MainMenu</font>
				<shadowcolor>Black</shadowcolor>
				<label>$INFO[System.Time]</label>
			</control>
			<control type="group">
				<posy>10</posy>
				<control type="progress" description="Buffer Bar">
					<posx>30</posx>
					<posy>3</posy>
					<width>1570</width>
					<height>18</height>
					<texturebg border="15,0,15,0">OSD/ProgressBG.png</texturebg>
					<midtexture border="15,0,15,0">OSD/ProgressBar.png</midtexture>
					<colordiffuse>Diffuse2</colordiffuse>
					<info>Player.ProgressCache</info>
				</control>
				<control type="progress" description="Progress Bar">
					<posx>30</posx>
					<posy>3</posy>
					<width>1570</width>
					<height>18</height>
					<texturebg border="15,0,15,0">OSD/ProgressBG.png</texturebg>
					<midtexture border="15,0,15,0">OSD/ProgressBar.png</midtexture>
					<colordiffuse>Highlight</colordiffuse>
					<info>Player.Progress</info>
				</control>
				<control type="slider" id="401">
					<description>Seek Slider</description>
					<posx>30</posx>
					<posy>-21</posy>
					<width>1570</width>
					<height>18</height>
					<texturesliderbar>OSD/seekslider.png</texturesliderbar>
					<textureslidernib>OSD/ScrollbarNibNF.png</textureslidernib>
					<textureslidernibfocus>OSD/ScrollbarNibFO.png</textureslidernibfocus>
					<visible>!VideoPlayer.Content(livetv)</visible>
				</control>
				<control type="label" description="Progress time label">
					<left>30</left>
					<top>30</top>
					<height>30</height>
					<width>400</width>
					<align>left</align>
					<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
					<font>Details</font>
					<shadowcolor>Black</shadowcolor>
				</control>
				<control type="label" description="Chapter Info with Player info">
					<visible>Player.ChapterCount + !VideoPlayer.Content(livetv)</visible>
					<left>30</left>
					<top>70</top>
					<height>30</height>
					<width>400</width>
					<align>left</align>
					<font>Details</font>
					<label>[COLOR=Highlight]$LOCALIZE[21396]: [/COLOR]$INFO[Player.Chapter]$INFO[Player.ChapterCount, / ]</label>
				</control>
				<control type="label" description="Progress rem time label">
					<left>1200</left>
					<posy>30</posy>
					<height>30</height>
					<width>400</width>
					<align>right</align>
					<label>$INFO[Player.TimeRemaining,[COLOR=Highlight]$LOCALIZE[31029]: [/COLOR]]</label>
					<font>Details</font>
					<shadowcolor>Black</shadowcolor>
				</control>
				<control type="label" description="End Time">
					<left>1200</left>
					<top>70</top>
					<height>30</height>
					<width>400</width>
					<align>right</align>
					<font>Details</font>
					<shadowcolor>Black</shadowcolor>
					<scroll>false</scroll>
					<label>$INFO[Player.FinishTime,[COLOR=Highlight]$LOCALIZE[19127]: [/COLOR]]</label>
				</control>
				<control type="label" description="Player Status label">
					<left>30</left>
					<posy>50</posy>
					<height>30</height>
					<width>1570</width>
					<align>center</align>
					<label>$VAR[SeekLabel]</label>
					<font>InfoTitle</font>
					<shadowcolor>Black</shadowcolor>
				</control>
			</control>
		</control>
	</controls>
</window>