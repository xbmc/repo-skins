<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">9000</defaultcontrol>
  <animation effect="fade" time="200">WindowOpen</animation>
  <animation effect="fade" time="150">WindowClose</animation>
  <controls>
    <control type="image">
      <width>1920</width>
      <height>1080</height>
      <texture>img/BlackDot.png</texture>
      <aspectratio>scale</aspectratio>
    </control>
    <control type="image">
      <width>1920</width>
      <height>1080</height>
      <texture background="true">$VAR[TVInfoBackground]</texture>
      <aspectratio>scale</aspectratio>
    </control>
    <include content="BackgroundOverlay">
      <param name="parentid" value="9000"/>
    </include>
    <include content="ShadowedImage">
      <param name="top">24</param>
      <param name="left">24</param>
      <param name="width">619</param>
      <param name="height">960</param>
      <param name="shadowoffset">16</param>
    </include>
    <control type="group" description="Media Info">
      <control type="group" description="top">
        <posx>700</posx>
        <posy>60</posy>
        <control type="label" description="Main Label">
          <posy>-45</posy>
          <width>1180</width>
          <height>60</height>
          <font>InfoTitle</font>
          <textcolor>Highlight</textcolor>
          <align>left</align>
          <label>$INFO[ListItem.Title]</label>
        </control>
        <control type="image" description="Line Split">
          <posy>23</posy>
          <width>1180</width>
          <height>1</height>
          <texture>img/LineL.png</texture>
          <aspectratio>stretch</aspectratio>
        </control>
        <control type="textbox" description="Plot">
          <include>VisibleFadeEffectDelay</include>
          <posy>35</posy>
          <width>610</width>
          <height>420</height>
          <align>justify</align>
          <font>InfoPlot</font>
          <label>$INFO[ListItem.Season, S]$INFO[ListItem.Episode, E,: ]$VAR[Plots]</label>
        </control>
        <control type="panel" id="9009">
          <include>VisibleFadeEffectDelay</include>
          <include>List_9009_Commons</include>
          <content>
            <item>
              <label>$LOCALIZE[19148]:</label>
              <label2>$INFO[ListItem.ChannelName]</label2>
              <onclick>noop</onclick>
              <visible>!String.IsEmpty(ListItem.ChannelName)</visible>
            </item>
            <item>
              <label>$LOCALIZE[142]</label>
              <label2>$INFO[ListItem.StartTime] - $INFO[ListItem.EndTime] ($INFO[ListItem.Duration])</label2>
              <onclick>noop</onclick>
              <visible>!String.IsEmpty(ListItem.StartTime) | !String.IsEmpty(ListItem.EndTime) | !String.IsEmpty(ListItem.Duration)</visible>
            </item>
            <item>
              <label>$LOCALIZE[552]:</label>
              <label2>$INFO[ListItem.StartDate]</label2>
              <onclick>noop</onclick>
              <visible>!String.IsEmpty(ListItem.StartDate)</visible>
            </item>
            <item>
              <label>$LOCALIZE[515]:</label>
              <label2>$INFO[ListItem.Genre]</label2>
              <onclick>noop</onclick>
              <visible>!String.IsEmpty(ListItem.Genre)</visible>
            </item>
            <item>
              <label>$LOCALIZE[12013]:</label>
              <label2>$INFO[ListItem.Writer]</label2>
              <onclick>noop</onclick>
              <visible>!String.IsEmpty(ListItem.Writer)</visible>
            </item>
            <item>
              <label>$LOCALIZE[20417]:</label>
              <label2>$INFO[ListItem.Director]</label2>
              <onclick>noop</onclick>
              <visible>!String.IsEmpty(ListItem.Director)</visible>
            </item>
          </content>
        </control>
      </control>
    </control>
    <control type="grouplist" id="9000">
      <left>700</left>
      <posy>530</posy>
      <width>1180</width>
      <height>90</height>
      <align>center</align>
      <onup>9009</onup>
      <ondown>50</ondown>
      <orientation>horizontal</orientation>
      <itemgap>30</itemgap>
      <control type="button" id="5" description="switch">
        <height>90</height>
        <width min="230">auto</width>
        <font>Details</font>
        <align>center</align>
        <label>$LOCALIZE[19165]</label>
        <visible>Window.IsActive(PVRGuideInfo)</visible>
      </control>
      <control type="button" id="4" description="configure">
        <height>90</height>
        <width min="230">auto</width>
        <ondown>50</ondown>
        <align>center</align>
        <font>Details</font>
        <label>$LOCALIZE[19003]</label>
        <visible>Window.IsActive(PVRGuideInfo)</visible>
      </control>
      <control type="button" id="8" description="Play recording">
        <height>90</height>
        <width min="230">auto</width>
        <ondown>50</ondown>
        <align>center</align>
        <font>Details</font>
        <label>$LOCALIZE[19687]</label>
        <visible>Window.IsActive(PVRGuideInfo) | Window.IsActive(PVRRecordingInfo)</visible>
      </control>
      <control type="button" id="6" description="Record">
        <height>90</height>
        <width min="230">auto</width>
        <ondown>50</ondown>
        <align>center</align>
        <font>Details</font>
        <visible>Window.IsActive(PVRGuideInfo)</visible>
      </control>
      <control type="button" id="9" description="Add Timer">
        <height>90</height>
        <width min="230">auto</width>
        <ondown>50</ondown>
        <align>center</align>
        <font>Details</font>
        <label>$LOCALIZE[19061]</label>
        <visible>Window.IsActive(PVRGuideInfo)</visible>
      </control>
    </control>
    <control type="textbox" description="Cast">
      <include>VisibleFadeEffectDelay</include>
      <posx>700</posx>
      <posy>670</posy>
      <width>1180</width>
      <height>410</height>
      <align>left</align>
      <font>InfoPlot</font>
      <label>$INFO[ListItem.Cast,[COLOR=Highlight]$LOCALIZE[206]:[/COLOR][CR]]</label>
    </control>
  </controls>
</window>