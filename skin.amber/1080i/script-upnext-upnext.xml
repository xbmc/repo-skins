<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3012</defaultcontrol>
	<onload>Dialog.Close(fullscreeninfo,true)</onload>
	<onload>Dialog.Close(videoosd,true)</onload>
    <include>OSDFade</include>
	<controls>
        <control type="group">
			<control type="group">
				<height>221</height>
				<!-- Background -->
			    <control type="image" description="Background">
					<top>0</top>
					<width>100%</width>
					<height>221</height>
				    <texture flipy="true" border="0,30,0,30">OSD/FS_OSDBackground.png</texture>
				    <colordiffuse>dfcebe9e</colordiffuse>
			    </control>                
				<!-- Thumb -->
				<control type="group">
					<top>20</top>
					<left>20</left>
                    <include content="ShadowedImage">
                        <param name="top">10</param>
                        <param name="left">10</param>
                        <param name="width">250</param>
                        <param name="height">141</param>
                        <param name="shadowoffset">4</param>
                        <param name="texture">$VAR[UpNextThumbVar]</param>
                        <param name="aligny">bottom</param>
                        <param name="visibility">[!String.IsEmpty(Window.Property(thumb)) | !String.IsEmpty(Window.Property(landscape)) | !String.IsEmpty(Window.Property(fanart))]</param>
                    </include>                    
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture>white.jpg</texture>
                        <colordiffuse>Highlight</colordiffuse>
						<visible>String.IsEmpty(Window.Property(thumb)) + String.IsEmpty(Window.Property(landscape)) + String.IsEmpty(Window.Property(fanart))</visible>
					</control>
					<control type="textbox">
						<top>10</top>
						<left>10</left>
						<width>230</width>
						<height>121</height>
						<align>center</align>
						<aligny>center</aligny>
                        <textcolor>Black</textcolor>
						<label>$INFO[Window.Property(tvshowtitle)]</label>
						<visible>String.IsEmpty(Window.Property(thumb)) + String.IsEmpty(Window.Property(landscape)) + String.IsEmpty(Window.Property(fanart))</visible>
					</control>
                    <control type="progress" id="3014">
                        <width>235</width>
                        <top>146</top>
                        <left>17</left>
                        <height>5</height>
                        <reveal>true</reveal>
                        <righttexture></righttexture>
                        <overlaytexture></overlaytexture>
                        <lefttexture></lefttexture>
					    <texturebg>OSD/ProgressBG.png</texturebg>
					    <midtexture>OSD/ProgressBar.png</midtexture>
					    <colordiffuse>Highlight</colordiffuse>
                    </control>
				</control>
				<!-- Labels -->
				<control type="group">
					<top>20</top>
					<left>290</left>
					<right>20</right>
					<!-- Time -->
					<control type="label">
						<width>auto</width>
						<height>35</height>
						<aligny>center</aligny>
						<font>font24_title</font>
						<textcolor>eeffffff</textcolor>
						<shadowcolor>00000000</shadowcolor>
						<label>$ADDON[service.upnext 30008] $ADDON[service.upnext 30036] [COLOR Highlight]$INFO[Player.TimeRemaining(ss),,][/COLOR] $ADDON[service.upnext 30035]</label>
						<visible>!Integer.IsGreater(Player.TimeRemaining,59)</visible>
					</control>
					<control type="label">
						<width>auto</width>
						<height>35</height>
						<aligny>center</aligny>
						<font>font24_title</font>
						<textcolor>eeffffff</textcolor>
						<shadowcolor>00000000</shadowcolor>
						<label>$ADDON[service.upnext 30008] $ADDON[service.upnext 30036] [COLOR Highlight]$INFO[Player.TimeRemaining,,][/COLOR]</label>
						<visible>Integer.IsGreater(Player.TimeRemaining,59)</visible>
					</control>
					<!-- Details -->
					<control type="grouplist">
						<orientation>horizontal</orientation>
						<height>35</height>
						<top>40</top>
						<itemgap>0</itemgap>
						<control type="label">
							<width>auto</width>
							<height>35</height>
							<aligny>center</aligny>
							<font>font12</font>
							<textcolor>eeffffff</textcolor>
							<shadowcolor>00000000</shadowcolor>
							<label>[COLOR Highlight]$INFO[Window.Property(tvshowtitle)][/COLOR] - $VAR[UpNextSeasonEpisodeLabel] - $INFO[Window.Property(title)]   </label>
							<visible>!String.IsEmpty(Window.Property(title))</visible>
						</control>
						<control type="label">
							<width>auto</width>
							<height>35</height>
							<aligny>center</aligny>
							<font>font12</font>
							<textcolor>eeffffff</textcolor>
							<shadowcolor>00000000</shadowcolor>
							<label>$INFO[Window.Property(year),,   ]</label>
							<visible>!String.IsEmpty(Window.Property(year))</visible>
						</control>
					</control>
					<!-- Buttons -->
					<control type="grouplist">
						<orientation>horizontal</orientation>
						<height>56</height>
						<bottom>30</bottom>
						<itemgap>10</itemgap>
						<control type="button" id="3012">
							<label>    $ADDON[service.upnext 30006]</label>
							<height>56</height>
							<width min="50">auto</width>
							<textoffsetx>55</textoffsetx>
							<aligny>center</aligny>
							<align>center</align>
						</control>
						<control type="button" id="3013">
							<label>$ADDON[service.upnext 30034]</label>
							<height>56</height>
							<width min="50">auto</width>
							<aligny>center</aligny>
							<align>center</align>
						</control>
					</control>
					<control type="image">
						<bottom>30</bottom>
						<width>46</width>
						<height>46</height>
						<aspect>keep</aspect>
						<texture>nextupicons/00.png</texture>
						<animation effect="slide" end="13,-5" time="0" condition="true">Conditional</animation>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>