<includes>

    <!-- Widgets background and labels, single height shelf -->
	<include name="WidgetBackground">
		<param name="id"></param>
		<param name="label"></param>
		<param name="top"></param>
		<param name="height"></param>
		<param name="visible"></param>
		<definition>
			<animation effect="fade" time="200">VisibleChange</animation>
			<animation type="Conditional" condition="$PARAM[visible]">
				<effect type="slide" start="1920" end="0" time="0" />
			</animation>
			<animation type="Conditional" condition="!$PARAM[visible]">
				<effect type="slide" start="0" end="1920" time="0" />
			</animation>
			<control type="group">
				<top>$PARAM[top]</top>
				<control type="image">
					<top>-48</top>
					<width>1920</width>
					<height>$PARAM[height]</height>
					<texture border="0,40,0,0">home/ShelfBackground.png</texture>
				</control>
				<control type="label">
					<top>-54</top>
					<right>32</right>
					<width>900</width>
					<height>45</height>
					<align>right</align>
					<font>Shelf_Title</font>
					<textcolor>Highlight</textcolor>
					<label>$PARAM[label]</label>
				</control>
				<control type="label">
					<visible>Control.HasFocus($PARAM[id])</visible>
					<top>-54</top>
					<left>32</left>
					<width>900</width>
					<height>45</height>
					<font>Shelf_Title</font>
					<textcolor>Highlight</textcolor>
					<label>$VAR[HomeWidgetLabel]</label>
				</control>
                <!-- Info Line -->
				<control type="label">
					<visible>!Control.HasFocus($PARAM[id])</visible>
					<top>-54</top>
					<left>32</left>
					<width>900</width>
					<height>45</height>
					<font>Shelf_Title</font>
					<textcolor>Highlight</textcolor>
					<label>$VAR[LibraryStats]</label>
				</control>                
			</control>
		</definition>
	</include>
    
