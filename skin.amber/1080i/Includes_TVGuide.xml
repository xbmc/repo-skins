    <!-- Left List item for TMDb Helper Next Aired -->	
	<include name="TMDbTVGuideItem">
		<param name="TMDbTVGuideItemID" />
		<param name="TMDbTVGuideDayID" />
		<definition>
			<item id="$PARAM[TMDbTVGuideItemID]">
				<label>$INFO[Container($PARAM[TMDbTVGuideDayID]).ListItemAbsolute(0).Property(air_day_short)]$INFO[Container($PARAM[TMDbTVGuideDayID]).NumItems, (,)]</label>
				<label2>$INFO[Container($PARAM[TMDbTVGuideDayID]).ListItemAbsolute(0).Property(air_date_short)]</label2>
				<visible>Integer.IsGreater(Container($PARAM[TMDbTVGuideDayID]).NumItems,0) | Container($PARAM[TMDbTVGuideDayID]).IsUpdating | Container(4000).IsUpdating</visible>
			</item>
		</definition>
	</include>
    <!-- Left List item for Embuary Info Next Aired -->
    <include name="EmbuaryInfoTVGuideItem">
		<param name="EmbuaryInfoTVGuideItemID" />
		<param name="EmbuaryInfoTVGuideDayID" />
		<definition>
			<item id="$PARAM[EmbuaryInfoTVGuideItemID]">
				<label>$INFO[Container($PARAM[EmbuaryInfoTVGuideDayID]).ListItemAbsolute(0).Property(airday)]$INFO[Container($PARAM[EmbuaryInfoTVGuideDayID]).NumItems, (,)]</label>
				<label2>$INFO[Container($PARAM[EmbuaryInfoTVGuideDayID]).ListItemAbsolute(0).Premiered]</label2>
				<visible>Integer.IsGreater(Container($PARAM[EmbuaryInfoTVGuideDayID]).NumItems,0) | Container($PARAM[EmbuaryInfoTVGuideDayID]).IsUpdating | Container(4000).IsUpdating</visible>
			</item>
		</definition>
	</include>	
