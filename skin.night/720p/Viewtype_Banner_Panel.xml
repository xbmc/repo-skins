<!--Alaska-->

<includes>

	<include name="Viewtype_BannerPanel">

		<!-- Browser -->
		<control type="image"><!-- 1st overlay -->
			<visible>Control.IsVisible(592) + [Container.Content(movies) | Container.Content(tvshows)]</visible>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>panel/panel-back.png</texture>
		</control>
		<control type="largeimage">
			<visible>Control.IsVisible(592) + [Container.Content(movies) | Container.Content(tvshows)] + !Player.HasVideo</visible>
			<posx>0</posx>
			<posy>0</posy>
			<width>570</width>
			<height>318</height>
			<texture diffuse="Showcase/showcase-diffuse.png">$INFO[Container(592).listitem.property(fanart_image)]</texture>
			<fadetime>400</fadetime>
			<aspectratio>stretch</aspectratio>
			<include>Animation_HiddenByInfo</include>
			<include>Animation_Viewtype_Panel_Fanart</include>
		</control>
		
		<control type="fixedlist" id="592">
			<visible>!Skin.HasSetting(no_BannerPanel) + Container.Content(tvshows) + Skin.HasSetting(TVBanners)</visible>
			<posx>560</posx>
			<posy>6</posy>
			<height>885</height>
			<width>880</width>
			<onup>592</onup>
			<ondown>592</ondown>
			<onleft>7000</onleft>
			<onright>5920</onright>
			<scrolltime>0</scrolltime>
			<viewtype label="$LOCALIZE[31049]">list</viewtype>
			<orientation>vertical</orientation>
			<focusposition>2</focusposition>
			<movement>2</movement>
			<pagecontrol>5920</pagecontrol>
			<preloaditems>2</preloaditems>
			<include>Animation_Viewtype_Panel_FocusArea</include>
			<include>Animation_HiddenByInfo</include>
			<animation effect="slide" start="0,0" end="-40,0" time="400" tween="cubic" easing="inout" condition="Control.HasFocus(5920)">Conditional</animation>
			<itemlayout width="660" height="138">
				<control type="group">
				<posx>60</posx>
				<posy>10</posy>
					<control type="image">
						<posx>1</posx>
						<posy>0</posy>
						<width>646</width>
						<height>126</height>
						<texture>panel/bannermatte.png</texture>
					</control>
					<control type="image">
						<posx>1</posx>
						<posy>0</posy>
						<width>646</width>
						<height>126</height>
						<texture background="true" diffuse="tv-landscape/landscapematteFO.png">$INFO[ListItem.Icon]</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>1</posx>
						<posy>0</posy>
						<width>646</width>
						<height>126</height>
						<texture>panel/bannermatte.png</texture>
						<colordiffuse>black</colordiffuse>
						<animation effect="fade" start="10" end="70" time="0" condition="true">Conditional</animation>
					</control>
					<control type="image">
						<posx>576</posx>
						<posy>76</posy>
						<width>100</width>
						<height>76</height>
						<texture>dialogs/movies/$INFO[ListItem.Overlay]</texture>
						<visible>[Skin.HasSetting(movieoverlays) | Skin.HasSetting(tvoverlays)]+ !IsEmpty(ListItem.Overlay)</visible>
					</control>
					<control type="image">
						<posx>-26</posx>
						<posy>-8</posy>
						<width>698</width>
						<height>142</height>
						<texture>tv-landscape/landscapeframeFO.png</texture>
						<colordiffuse>89FFFFFF</colordiffuse>
					</control>
				</control>
			</itemlayout>
			
			<focusedlayout width="660" height="138">
			<control type="group">
			<posx>60</posx>
			<posy>10</posy>
				<control type="image">
					<posx>-60</posx>
					<posy>-60</posy>
					<width>768</width>
					<height>245</height>
					<texture>list/banner_glow.png</texture>
					<colordiffuse>89FFFFFF</colordiffuse>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="auto" start="51" end="100" time="600" tween="back" easing="out" />
						<effect type="fade" start="0" end="100" time="800" />
					</animation>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>0</posy>
					<width>646</width>
					<height>126</height>
					<texture background="true" diffuse="tv-landscape/landscapematteFO.png">$INFO[ListItem.Icon]</texture>
					<fadetime>200</fadetime>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<visible>!Container.Content(Genres)</visible>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="auto" start="51" end="104" time="600" tween="back" easing="out" />
					</animation>
				</control>
				<control type="image">
					<posx>588</posx>
					<posy>78</posy>
					<width>100</width>
					<height>76</height>
					<texture>dialogs/movies/$INFO[ListItem.Overlay]</texture>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="auto" start="51" end="104" time="600" tween="back" easing="out" />
					</animation>
					<visible>[Skin.HasSetting(movieoverlays) | Skin.HasSetting(tvoverlays)]+ !IsEmpty(ListItem.Overlay)</visible>
				</control>
				<control type="image">
					<posx>-26</posx>
					<posy>-8</posy>
					<width>698</width>
					<height>142</height>
					<texture>tv-landscape/landscapeframeFO.png</texture>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="auto" start="51" end="104" time="600" tween="back" easing="out" />
					</animation>
				</control>
			</control>
			</focusedlayout>
		</control>
		
		<!-- Browser label and flags -->
	<control type="group">
	<include>Animation_Viewtype_Panel_Title</include>
	<include>Animation_HiddenByInfo</include>
	<visible>Control.IsVisible(592)</visible>
		<control type="largeimage" id="7047">
			<visible>Container.Content(tvshows)</visible>
			<posx>160</posx>
			<posy>300</posy>
			<width>230</width>
			<height>89</height>
			<texture>$INFO[ListItem.path]logo.png</texture>
			<fadetime>100</fadetime>
			<aspectratio scalediffuse="false">stretch</aspectratio>
		</control>
		<control type="label">
			<visible>Container.Content(tvshows) + IsEmpty(Control.GetLabel(7047))</visible>
			<posx>15</posx>
			<posy>320</posy>
			<width>555</width>
			<height>50</height>
			<align>center</align>
			<font>Font_InfoYear2</font>
			<textcolor>mainblue</textcolor>
			<label>$INFO[ListItem.Label]</label>
		</control>
		<control type="label">
			<visible>Container.Content(tvshows) + IsEmpty(Control.GetLabel(7047))</visible>
			<posx>15</posx>
			<posy>358</posy>
			<width>555</width>
			<height>50</height>
			<align>center</align>
			<font>Font_Bartowski_Showcase_runtime_year</font>
			<textcolor>ffffffff</textcolor>
			<label>$INFO[ListItem.Genre]</label>
		</control>
	</control>
	<control type="group">
	<visible>Control.IsVisible(592)</visible>
	<include>Animation_HiddenByInfo</include>
		<control type="textbox"><!--TV Plot-->
			<visible>Container.Content(tvshows)</visible>
			<posx>15</posx>
			<posy>410</posy>
			<width>555</width>
			<height>264</height>
			<font>Font_Bartowski_Showcase_plot</font>
			<textcolor>ffffffff</textcolor>
			<label>$INFO[ListItem.Plot]</label>
			<align>justify</align>
			<autoscroll time="3000" delay="5000" repeat="5000">Skin.HasSetting(autoscroll)</autoscroll>
			<include>Animation_Viewtype_Panel_BottomArea</include>
		</control>
		<control type="image"><!-- last overlay -->
			<visible>Container.Content(movies) | Container.Content(tvshows)</visible>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>panel/last-overlay.png</texture>
		</control>
	</control>
		<include>Trailer_Panel</include>
		
	<control type="scrollbar" id="5920">
		<include>Animation_ZoomInZoomOut</include>
		<posx>1280</posx>
		<posy>100</posy>
		<width>25</width>
		<height>460</height>
		<visible allowhiddenfocus="true">Control.IsVisible(592) + Control.HasFocus(5920)</visible>
		<texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
		<textureslidernibfocus>ScrollBarV_Nib_Focus1.png</textureslidernibfocus>
		<onleft>57</onleft>
		<onright>57</onright>
		<showonepage>true</showonepage>
		<orientation>vertical</orientation>
		<include>Animation_CommonFade</include>
		<animation effect="slide" start="0,0" end="-40,0" time="400" tween="cubic" easing="inout" condition="Control.HasFocus(5920)">Conditional</animation>
	</control>
		
	</include>
</includes>
