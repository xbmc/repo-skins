<!--Alaska-->

<window id="142">
	<defaultcontrol>2</defaultcontrol>
	<controls>	
		<control type="group">		
			<posy>560</posy>
			<visible>!Control.IsVisible(10)</visible>
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="600" />
			</animation>
			<animation type="WindowClose">
				<effect type="fade" start="100" end="0" time="600" />
			</animation>
			
			
			<control type="image">
				<posx>0</posx>
				<posy>-560</posy>
				<width>1280</width>
				<height>720</height>
				<texture>osd/pause-back1.png</texture>
				<aspectratio>stretch</aspectratio>
				<visible>!Control.IsVisible(10)</visible>
			</control>
			
			<control type="progress" id="23">
				<texturebg>osd/osd_progress_back1.png</texturebg>
				<lefttexture>osd/left.png</lefttexture>
				<midtexture>osd/mid.png</midtexture>
				<righttexture>osd/new_pause2.png</righttexture>
				<info>Player.Progress</info>
				<posx>100</posx>
				<posy>130</posy>
				<width>1080</width>
				<height>19</height>
			</control>
			<control type="label">
				<posx>90</posx>
				<posy>128</posy>
				<width>300</width>
				<height>25</height>
				<align>right</align> 
				<font>Font_ListDetail</font>
				<textcolor>mainblue</textcolor>
				<label>[B]$INFO[VideoPlayer.Time][/B]</label>
			</control>
			<control type="label">
				<posx>1190</posx>
				<posy>128</posy>
				<width>300</width>
				<height>25</height>
				<font>Font_ListDetail</font>
				<textcolor>ffffffff</textcolor>
				<label>[B]$INFO[VideoPlayer.Duration][/B]</label>
			</control>
			<control type="group">
				<posx>20</posx>
				<posy>-190</posy>
				<animation type="WindowOpen">
					<effect type="fade" start="0" end="100" time="600" />
				</animation>
				<animation type="WindowClose">
					<effect type="fade" start="100" end="0" time="600" />
				</animation>
				<animation effect="slide" start="0,0" end="0,70" time="0" condition="VideoPlayer.Content(episodes)">Conditional</animation>
				<control type="label">
					<posx>0</posx>
					<posy>20</posy>
					<width>750</width> 
					<height>25</height> 
					<label>$INFO[VideoPlayer.Title]</label>
					<align>left</align> 
					<aligny>center</aligny> 
					<font>Font_Bartowski_Title_Pause</font>
					<textcolor>mainblue</textcolor>
					<visible>VideoPlayer.Content(episodes)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>40</posy>
					<width>750</width> 
					<height>25</height> 
					<label>$INFO[VideoPlayer.Title]</label>
					<align>left</align> 
					<aligny>center</aligny> 
					<font>Font_Bartowski_Title_Pause</font>
					<textcolor>mainblue</textcolor>
					<visible>VideoPlayer.Content(movies)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>250</posy>
					<width>750</width> 
					<height>25</height> 
					<label>$INFO[VideoPlayer.Title]</label>
					<align>left</align> 
					<aligny>center</aligny> 
					<font>Font_Bartowski_Title_Pause</font>
					<textcolor>mainblue</textcolor>
					<visible>![VideoPlayer.Content(episodes) | VideoPlayer.Content(movies)]</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>70</posy>
					<width>412</width> 
					<height>25</height> 
					<label>$INFO[VideoPlayer.Year]/$INFO[VideoPlayer.Studio]</label>
					<align>left</align> 
					<aligny>center</aligny> 
					<font>Font_Bartowski_Under_Pause</font>
					<textcolor>ffffffff</textcolor>
					<visible>VideoPlayer.Content(movies)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>50</posy>
					<width>412</width> 
					<height>25</height> 
					<label>$LOCALIZE[20373] $INFO[VideoPlayer.Season]/$LOCALIZE[20359] $INFO[VideoPlayer.Episode]</label>
					<align>left</align> 
					<aligny>center</aligny> 
					<font>Font_Bartowski_Under_Pause</font>
					<textcolor>ffffffff</textcolor>
					<visible>VideoPlayer.Content(episodes)</visible>
				</control>
			</control>
			<control type="textbox">
				<posx>20</posx>
				<posy>-30</posy>
				<width>930</width>
				<height>114</height>
				<align>justify</align>
				<label>$INFO[VideoPlayer.Plot]</label>
				<autoscroll time="3000" delay="5000" repeat="5000">Skin.HasSetting(autoscroll)</autoscroll>
				<font>Font_Bartowski_Episodes</font>
				<textcolor>ffffffff</textcolor>
				<include>Animation_HiddenByInfo</include>
				<visible>VideoPlayer.Content(episodes)</visible>
			</control>
			<control type="textbox">
				<posx>20</posx>
				<posy>-30</posy>
				<width>1000</width>
				<height>110</height>
				<align>justify</align>
				<label>$INFO[VideoPlayer.Plot]</label>
				<autoscroll time="3000" delay="5000" repeat="5000">Skin.HasSetting(autoscroll)</autoscroll>
				<font>Font_Bartowski_Episodes</font>
				<textcolor>ffffffff</textcolor>
				<include>Animation_HiddenByInfo</include>
				<visible>VideoPlayer.Content(movies)</visible>
			</control>
			<control type="group">
				<control type="label">
					<posx>100</posx>
					<posy>98</posy>
					<width>1080</width>
					<height>25</height>
					<label>$LOCALIZE[31074] [COLOR=mainblue][B]$INFO[System.Time][/COLOR][/B] | $LOCALIZE[31075]: [COLOR=mainblue][B]$INFO[Player.FinishTime][/B][/COLOR]</label>
					<textcolor>ffffffff</textcolor>
					<font>Font_Bartowski_Extras_Pause</font>
					<align>center</align>
					<animation effect="fade" start="100" end="0" time="0">windowclose</animation>
				</control>
			</control>
			<!-- Movie Info  -->
			<control type="group">
				<visible>VideoPlayer.Content(movies)</visible>
				<posx>20</posx>
				<posy>-110</posy>
				<control type="label">
					<description>Director Info</description>
					<posx>0</posx>
					<posy>24</posy>
					<width>970</width>
					<height>18</height>
					<aligny>center</aligny>
					<align>left</align>
					<font>Font_ListDetail</font>
					<label>[B][COLOR=mainblue]$LOCALIZE[20339]:[/COLOR][/B] [COLOR=ffffffff]$INFO[VideoPlayer.Director][/COLOR]</label>
				</control>
				<control type="label">
					<description>Genre Info</description>
					<posx>0</posx>
					<posy>48</posy>
					<width>970</width>
					<height>18</height>
					<aligny>center</aligny>
					<align>left</align>
					<font>Font_ListDetail</font>
					<label>[B][COLOR=mainblue]$LOCALIZE[515]:[/COLOR][/B] [COLOR=ffffffff]$INFO[VideoPlayer.Genre][/COLOR]</label>
				</control>
			</control>
		</control>
	<control type="group">
	<posy>560</posy>
		<control type ="image"> 
			<description>tv show image</description>
			<posx>970</posx>     
			<posy>-220</posy>    
			<width>300</width>
			<height>340</height>
			<aspectratio align="right" aligny="bottom">keep</aspectratio>
			<texture>$INFO[VideoPlayer.Cover]</texture>
			<bordertexture border="5">confluence/button-nofocus.png</bordertexture>
			<bordersize>5</bordersize>
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="600" />
			</animation>
			<animation type="WindowClose">
				<effect type="fade" start="100" end="0" time="600" />
			</animation>
			<visible>!Control.IsVisible(10)</visible>
		</control>
	</control>
		
		<include>Global_Time_TopRight_OSD</include>
	</controls>
</window>
