<?xml version="1.0" encoding="UTF-8"?>
<window id="25">
    <defaultcontrol always="true">52</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <backgroundcolor>background</backgroundcolor>

    <views>52,51,50,53,55,500</views>
    <!--
   52 Sio2
   50 Big List
   51 List
   53 Icons
   500 Fanart
   55 Banners
   -->
    <include>OpenClose</include>
    <controls>
        <include>BlackBackground</include>
        <include>Videoviews</include>
        <include>WindowsTopInfos</include>
        <control type="group" description="Side menu 9000 group">
            <visible allowhiddenfocus="true">ControlGroup(9000).HasFocus() + !Window.IsVisible(traktContextMenu.xml)</visible>
            <include>9000slide</include>
            <control type="image" description="List back">
                <top>-10</top>
                <posx>1430</posx>
                <width>550</width>
                <height>1100</height>
                <aspectratio>stretch</aspectratio>
                <texture border="50">sidepanel/Back.png</texture>
            </control>
            <control type="grouplist" id="9000">
                <left>1450</left>
                <include>DialogGLs</include>
                <control type="button" id="607">
                    <enable>false</enable>
                    <texturenofocus colordiffuse="FFCCCCCC">images/buttonselect1.png</texturenofocus>
                    <include>DialogButt</include>
                    <label>•• $LOCALIZE[33063] ••</label>
                </control>
                <control type="togglebutton" id="14" description="Toggle Watched">
                    <texturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</texturefocus>
                    <alttexturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</alttexturefocus>
                    <include>DialogButt</include>
                    <label>$LOCALIZE[535]: $LOCALIZE[16100]</label>
                    <altlabel>$LOCALIZE[535]: $LOCALIZE[16101]</altlabel>
                </control>
                <control type="radiobutton" id="98" description="Filter">
                    <texturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</texturefocus>
                    <enable>Container.CanFilterAdvanced</enable>
                    <include>DialogButt</include>
                    <onclick>Filter</onclick>
                    <label>587</label>
                </control>
                <control type="button" id="3" description="Sort">
                    <texturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</texturefocus>
                    <include>DialogButt</include>
                </control>
                <control type="togglebutton" id="4" description="SortOrder">
                    <texturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</texturefocus>
                    <alttexturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</alttexturefocus>
                    <include>DialogButt</include>
                    <label>584</label>
                    <altlabel>585</altlabel>
                    <usealttexture>Container.SortDirection(Ascending)</usealttexture>
                </control>
                <control type="button" id="8" description="search">
                    <texturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</texturefocus>
                    <include>DialogButt</include>
                    <label>137</label>
                </control>
                <control type="button" id="698" description="Browse files">
                    <texturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</texturefocus>
                    <include>DialogButt</include>
                    <label>$LOCALIZE[1024] $LOCALIZE[744]</label>
                    <onclick>ActivateWindow(Videos,files)</onclick>
                </control>
                <control type="button" id="1501">
                    <texturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</texturefocus>
                    <include>DialogButt</include>
                    <visible>System.HasAddon(script.trakt) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes)]</visible>
                    <label>Trakt</label>
                    <onclick>XBMC.RunScript(script.trakt,action=contextmenu)</onclick>
                </control>
                <control type="togglebutton" id="699" description="Playing">
                    <enable>Player.HasMedia</enable>
                    <texturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</texturefocus>
                    <alttexturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</alttexturefocus>
                    <include>DialogButt</include>
                    <label>$LOCALIZE[16003]</label>
                    <altlabel>$LOCALIZE[31055]</altlabel>
                    <usealttexture>Player.HasMedia</usealttexture>
                    <onclick>fullscreen</onclick>
                    <altclick>fullscreen</altclick>
                </control>
                <control type="togglebutton" id="20">
                    <description>Update library</description>
                    <texturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</texturefocus>
                    <alttexturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</alttexturefocus>
                    <include>DialogButt</include>
                    <label>653</label>
                    <altlabel>13353</altlabel>
                    <usealttexture>library.isscanningvideo</usealttexture>
                </control>
                <control type="button" id="599">
                    <enable>false</enable>
                    <texturenofocus colordiffuse="FFCCCCCC">images/buttonselect1.png</texturenofocus>
                    <include>DialogButt</include>
                    <label>•• $LOCALIZE[582] ••</label>
                </control>
                <control type="radiobutton" id="600" description="sio2">
                    <include>DialogButt</include>
                    <enable>!Container.Content(files) + !IsEmpty(Container.FolderPath)</enable>
                    <onclick>Container.SetViewMode(52)</onclick>
                    <selected>Control.IsVisible(52)</selected>
                    <label>SiO2</label>
                </control>
                <control type="radiobutton" id="601" description="View Big List">
                    <include>DialogButt</include>
                    <enable>!Container.Content(files) + !IsEmpty(Container.FolderPath)</enable>
                    <onclick>Container.SetViewMode(50)</onclick>
                    <selected>Control.IsVisible(50)</selected>
                    <label>$LOCALIZE[537]</label>
                </control>
                <control type="radiobutton" id="602" description="List">
                    <include>DialogButt</include>
                    <onclick>Container.SetViewMode(51)</onclick>
                    <selected>Control.IsVisible(51)</selected>
                    <label>$LOCALIZE[535]</label>
                </control>
                <control type="radiobutton" id="603" description="Icons">
                    <enable>!Container.Content(files) + !IsEmpty(Container.FolderPath)</enable>
                    <include>DialogButt</include>
                    <onclick>Container.SetViewMode(53)</onclick>
                    <selected>Control.IsVisible(53)</selected>
                    <label>$LOCALIZE[536]</label>
                </control>
                <control type="radiobutton" id="605" description="Fanart">
                    <enable>!Container.Content(files) + !Container.Content(episodes) + !IsEmpty(Container.FolderPath)</enable>
                    <include>DialogButt</include>
                    <onclick>Container.SetViewMode(500)</onclick>
                    <selected>Control.IsVisible(500)</selected>
                    <label>$LOCALIZE[20445]</label>
                </control>
                <control type="radiobutton" id="606" description="Banners">
                    <enable>Container.Content(tvshows)</enable>
                    <include>DialogButt</include>
                    <onclick>Container.SetViewMode(55)</onclick>
                    <selected>Control.IsVisible(55)</selected>
                    <label>$LOCALIZE[539]</label>
                </control>
            </control>
        </control>
    </controls>
</window>
