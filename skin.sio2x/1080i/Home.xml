<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">9000</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <backgroundcolor>background</backgroundcolor>
    <onload>RunScript(script.favourites)</onload>
    <onload>SetProperty(SkinWidgets_RandomItems_Update,true)</onload>
    <!--include>OpenClose</include-->
    <controls>
        <include>BlackBackground</include>
        <control type="group">
            <include>OpenClose</include>
            <control type="button" id="9009">
                <animation effect="slide" condition="[Control.IsVisible(311) + !Skin.HasSetting(Intruder) + [Container(311).Position(0) | Container(311).Position(1) | Container(311).Position(2) | Container(311).Position(3) | Container(311).Position(4) | Container(311).Position(5)]] | [Control.IsVisible(311) + [Container(311).Position(0) | Container(311).Position(1) | Container(311).Position(2) | Container(311).Position(3) | Container(311).Position(4) | Container(311).Position(5)] + Player.HasVideo]" end="320,0">Conditional</animation>
                <animation effect="slide" condition="Control.IsVisible(312) + !Skin.HasSetting(IntruderTV) + !Container(312).HasPrevious" end="480,0">Conditional</animation>
                <visible allowhiddenfocus="true">Control.HasFocus(9009)</visible>
                <posx></posx>
                <top>26</top>
                <width>34</width>
                <height>34</height>
                <texturefocus aspectratio="keep">images/hometoggle.png</texturefocus>
                <onclick  condition="Control.IsVisible(311)">Skin.ToggleSetting(MoviesShelfWL)</onclick>
                <onclick  condition="Control.IsVisible(312)">Skin.ToggleSetting(TVShelf_Watchlist)</onclick>
                <colordiffuse>FF000000</colordiffuse>
                <onclick>ReplaceWindow(0)</onclick>
                <onup>noop</onup>
                <ondown condition="Control.IsVisible(311)">311</ondown>
                <ondown condition="Control.IsVisible(312)">312</ondown>
                <onleft>noop</onleft>
                <onright>noop</onright>
            </control>
            <control type="panel" id="9000" description="ICONE">
                <animation condition="![Container(9000).Row(0) | Container(9000).Row(1)]" effect="slide" start="0,0" end="0,-500" time="220">Conditonal</animation>
                <width>1800</width>
                <height>1080</height>
                <top>536</top>
                <posx>60</posx>
                <onleft>9000</onleft>
                <onright>9000</onright>
                <onup>700</onup>
                <ondown>noop</ondown>
                <orientation>vertical</orientation>
                <scrolltime tween="sine" easing="inout">280</scrolltime>
                <itemlayout height="220" width="300">
                    <control type="image" description="THMBSBASE">
                        <visible>Skin.HasSetting(colormenu)</visible>
                        <posx>20</posx>
                        <top>48</top>
                        <width>260</width>
                        <height>168</height>
                        <texture>icons/base.png</texture>
                    </control>
                    <control type="image" description="THMBSBASECOLOR">
                        <visible>!Skin.HasSetting(colormenu)</visible>
                        <posx>20</posx>
                        <top>48</top>
                        <width>260</width>
                        <height>168</height>
                        <texture>$INFO[ListItem.Property(color)]</texture>
                    </control>
                    <control type="image" description="THMBSICONS">
                        <visible>!IsEmpty(Listitem.thumb)</visible>
                        <posx>20</posx>
                        <top>48</top>
                        <width>260</width>
                        <height>168</height>
                        <texture diffuse="images/diffusehome.png">$INFO[ListItem.thumb]</texture>
                    </control>
                    <control type="image" description="THMBSICONS">
                        <visible>IsEmpty(Listitem.thumb)</visible>
                        <posx>20</posx>
                        <top>48</top>
                        <width>260</width>
                        <height>168</height>
                        <texture diffuse="images/diffusehome.png">$INFO[ListItem.label2]</texture>
                    </control>
                    <control type="image" description="THMBS weather">
                        <posx>20</posx>
                        <top>48</top>
                        <width>260</width>
                        <height>168</height>
                        <texture>$INFO[ListItem.Property(weatherthumb)]</texture>
                        <aspectratio>keep</aspectratio>
                    </control>
                    <!--<control type="image" description="OVERLAY">
                      <posx>20</posx>
                      <top>48</top>
                      <width>260</width>
                      <height>168</height>
                      <texture>icons/overlay.png</texture>
                    </control>-->
                    <control type="label" description="LABEL">
                        <posx>150</posx>
                        <top>220</top>
                        <width>300</width>
                        <height>24</height>
                        <font>size24</font>
                        <align>center</align>
                        <textcolor>White</textcolor>
                        <label>[B]$INFO[ListItem.label][/B]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="220" width="300">
                    <control type="image" description="THMBSBASE">
                        <visible>!Skin.HasSetting(colormenu)</visible>
                        <posx>20</posx>
                        <top>48</top>
                        <width>260</width>
                        <height>168</height>
                        <texture>$INFO[ListItem.Property(color)]</texture>
                    </control>
                    <control type="image" description="THMBSBASE">
                        <visible>Skin.HasSetting(colormenu)</visible>
                        <posx>20</posx>
                        <top>48</top>
                        <width>260</width>
                        <height>168</height>
                        <texture>icons/base.png</texture>
                    </control>
                    <control type="image" description="THMBSBASE">
                        <visible>Skin.HasSetting(colormenu)</visible>
                        <animation condition="Skin.HasSetting(colormenu)" effect="fade" start="0" end="100" time="100" delay="100" reversible="false">Focus</animation>
                        <animation condition="Skin.HasSetting(colormenu)" effect="fade" start="100" end="0" time="180" reversible="true">unFocus</animation>
                        <posx>20</posx>
                        <top>48</top>
                        <width>260</width>
                        <height>168</height>
                        <texture>$INFO[ListItem.Property(color)]</texture>
                    </control>
                    <control type="image" description="THMBSICONS">
                        <visible>!IsEmpty(Listitem.thumb)</visible>
                        <posx>20</posx>
                        <top>48</top>
                        <width>260</width>
                        <height>168</height>
                        <texture diffuse="images/diffusehome.png">$INFO[ListItem.thumb]</texture>
                    </control>
                    <control type="image" description="THMBSICONS">
                        <visible>IsEmpty(Listitem.thumb)</visible>
                        <posx>20</posx>
                        <top>48</top>
                        <width>260</width>
                        <height>168</height>
                        <texture diffuse="images/diffusehome.png">$INFO[ListItem.label2]</texture>
                    </control>
                    <control type="image" description="THMBS WEATHER">
                        <posx>20</posx>
                        <top>48</top>
                        <width>260</width>
                        <height>168</height>
                        <texture>$INFO[ListItem.Property(weatherthumb)]</texture>
                        <aspectratio>keep</aspectratio>
                    </control>
                    <!-- <control type="image" description="THMBSOVERLAY">
                       <posx>20</posx>
                       <top>48</top>
                       <width>260</width>
                       <height>168</height>
                       <texture>icons/overlay.png</texture>
                     </control>-->
                    <control type="image">
                        <animation condition="!Skin.HasSetting(colormenu)" effect="fade" start="0" end="100" time="100" delay="100" reversible="false">Focus</animation>
                        <animation condition="!Skin.HasSetting(colormenu)" effect="fade" start="100" end="0" time="180" reversible="true">unFocus</animation>
                        <posx>20</posx>
                        <top>48</top>
                        <width>260</width>
                        <height>168</height>
                        <texture>images/atvslider.png</texture>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    <control type="label" description="label">
                        <animation effect="fade" start="80" end="100" time="300=" delay="300">Focus</animation>
                        <posx>150</posx>
                        <top>220</top>
                        <width>300</width>
                        <height>24</height>
                        <font>size24</font>
                        <align>center</align>
                        <textcolor>black</textcolor>
                        <label>[B]$INFO[ListItem.label][/B]</label>
                    </control>
                </focusedlayout>
                <content>
                    <include>homepanel</include>
                </content>
            </control>
            <control type="group" description="Furniture">
                <animation condition="![Container(9000).Row(0) | Container(9000).Row(1)]" effect="slide" start="0,0" end="0,-500" time="220">Conditonal</animation>
                <control type="image" description="Stage">
                    <width>1920</width>
                    <height>1080</height>
                    <aspectratio>stretch</aspectratio>
                    <texture>images/HomeBG.png</texture>
                </control>
                <control type="image" description="Line">
                    <posx>-90</posx>
                    <top>503</top>
                    <width>2100</width>
                    <height>1</height>
                    <aspectratio>stretch</aspectratio>
                    <texture>lines/Line1.png</texture>
                </control>
                <control type="rss" description="RSS Feed">
                    <visible>system.getbool(lookandfeel.enablerssfeeds)</visible>
                    <include>OpenClose</include>
                    <top>507</top>
                    <width>1920</width>
                    <height>33</height>
                    <font>size22</font>
                    <urlset>1</urlset>
                    <shadowcolor>-</shadowcolor>
                    <titlecolor>darkred</titlecolor>
                    <headlinecolor>gray</headlinecolor>
                    <textcolor>gray</textcolor>
                </control>
            </control>
            <control type="image" description="TVLINE">
                <include>ShelfFade</include>
                <animation effect="slide" end="485,0" time="400" condition="!Container(312).HasPrevious + !Skin.HasSetting(IntruderTV)">Conditional</animation>
                <visible>Container(9000).HasFocus(341) + !Skin.HasSetting(IntruderTV)</visible>
                <visible>Library.HasContent(TVShows)</visible>
                <left>-5</left>
                <top>30</top>
                <width>1</width>
                <height>450</height>
                <texture>lines/LineV.png</texture>
            </control>
            <control type="image" description="MOVIELINE">
                <include>ShelfFade</include>
                <animation effect="slide" end="325,0" time="400" condition="[Container(311).Position(0) | Container(311).Position(1) | Container(311).Position(2) | Container(311).Position(3) | Container(311).Position(4) | Container(311).Position(5)] + [!Skin.HasSetting(Intruder) | Player.HasVideo]">Conditional</animation>
                <visible>Container(9000).HasFocus(340) + [!Skin.HasSetting(Intruder) | Player.HasVideo]</visible>
                <visible>Library.HasContent(Movies)</visible>
                <left>-5</left>
                <top>30</top>
                <width>1</width>
                <height>450</height>
                <texture>lines/LineV.png</texture>
            </control>
            <include>weather_shelf</include>
            <include condition="true">EPG_shelf</include>
            <control type="group" id="700" description="Shelf items">
                <animation condition="![Container(9000).Row(0) | Container(9000).Row(1)]" effect="slide" start="0,0" end="0,-500" time="220">Conditonal</animation>
                <include condition="!Skin.HasSetting(MoviesShelfWL)">Movies_RA</include>
                <include condition="Skin.HasSetting(MoviesShelfWL)">Movies_WL</include>
                <include condition="!Skin.HasSetting(TVShelf_Watchlist)">TV_RA</include>
                <include condition="Skin.HasSetting(TVShelf_Watchlist)">TV_WL</include>
                <include>Music_RA</include>
                <include condition="Skin.HasSetting(PicturesShelf_Custom)">Pictures_Shortcuts</include>
                <include condition="Skin.HasSetting(AddonsShelf_Custom)">Addons_Shortcuts</include>
                <include condition="Skin.HasSetting(hidetv) + Skin.HasSetting(hidemovie)">VAddons_Shortcuts</include>
                <include>Favsshelf</include>
                <control type="image" description="Logo">
                    <visible>![[Container(9000).HasFocus(340) + Library.HasContent(Movies)] | [Container(9000).HasFocus(341) + Library.HasContent(TVShows)] | [Container(9000).HasFocus(342) + Library.HasContent(Music)] | [Container(9000).HasFocus(342) + Control.IsVisible(313)] | [Container(9000).HasFocus(343) + Skin.HasSetting(AddonsShelf_Custom)] | [Container(9000).HasFocus(344) + Control.IsVisible(314)] | [Container(9000).HasFocus(349) + Player.HasMedia] | Container(9000).HasFocus(345) | Control.IsVisible(317) | [Container(9000).HasFocus(352) + Container(9000).Row(0) + IntegerGreaterThan(Window.Property(favourite.count),0)]]</visible>
                    <include>ShelfFade</include>
                    <width>1920</width>
                    <height>500</height>
                    <aspectratio aligny="bottom">keep</aspectratio>
                    <texture>$VAR[ShelfLogo]</texture>
                </control>
            </control>
        </control>
        <control type="group" description="Player Info">
            <visible>Player.HasAudio</visible>
            <visible>!IntegerGreaterThan(Player.Time,8) | !IntegerGreaterThan(Player.TimeRemaining,8)</visible>
            <animation effect="slide" tween="Sine" easing="Out" start="430,0" end="0,0" time="600" delay="200">VisibleChange</animation>
            <posx>1500</posx>
            <top>440</top>
            <control type="image" description="Playing BG">
                <width>430</width>
                <height>105</height>
                <texture border="20">images/ProgressBG.png</texture>
            </control>
            <control type="group">
                <control type="image">
                    <posx>18</posx>
                    <top>15</top>
                    <width>75</width>
                    <height>75</height>
                    <texture>$INFO[MusicPlayer.Cover]</texture>
                    <aspectratio>keep</aspectratio>
                </control>
                <control type="label">
                    <posx>110</posx>
                    <top>9</top>
                    <aligny>center</aligny>
                    <width>300</width>
                    <height>36</height>
                    <font>size24</font>
                    <textcolor>black</textcolor>
                    <label>$INFO[MusicPlayer.Title]</label>
                </control>
                <control type="label">
                    <posx>110</posx>
                    <top>36</top>
                    <aligny>center</aligny>
                    <width>300</width>
                    <height>36</height>
                    <font>size21</font>
                    <label>$INFO[MusicPlayer.Artist]</label>
                </control>
                <control type="label">
                    <posx>110</posx>
                    <top>60</top>
                    <aligny>center</aligny>
                    <width>300</width>
                    <height>36</height>
                    <font>size21</font>
                    <label>$INFO[MusicPlayer.Album]</label>
                </control>
            </control>
        </control>
        <control type="label">
            <description>SKIN VERSION</description>
            <right>10</right>
            <top>1060</top>
            <width>80</width>
            <height>20</height>
            <font>XS</font>
            <textcolor>lightblue</textcolor>
            <align>right</align>
            <label>$INFO[System.AddonVersion(skin.sio2x)]</label>
        </control>

        <control type="grouplist">
            <visible>[Container(9000).Row(0) | Container(9000).Row(1)] + !Skin.HasSetting(HideClock)</visible>
            <top>18</top>
            <right>40</right>
            <orientation>horizontal</orientation>
            <itemgap>16</itemgap>
            <align>right</align>
            <control type="image" description="WebLink">
                <visible>System.InternetState + !Skin.HasSetting(hideconnection)</visible>
                <width>30</width>
                <height>48</height>
                <texture>wireless.png</texture>
                <aspectratio>scale</aspectratio>
            </control>
            <control type="label" description="Battery">
                <visible>IntegerGreaterThan(System.BatteryLevel,0) + !IntegerGreaterThan(System.BatteryLevel,99) + !Skin.HasSetting(hideconnection)</visible>
                <posx>35r</posx>
                <posy>20</posy>
                <width min="30" max="500">auto</width>
                <height>45</height>
                <font>size30</font>
                <textcolor>White</textcolor>
                <label>$INFO[System.BatteryLevel] Batt.</label>
            </control>
            <control type="label" description="Clock">
                <visible>!Skin.HasSetting(HideClock)</visible>
                <width min="30" max="500">auto</width>
                <height>45</height>
                <font>size28</font>
                <label>[B]$INFO[System.Time] $INFO[System.Date][/B]</label>
            </control>
        </control>
    </controls>
</window>
