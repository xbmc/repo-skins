<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="142">
    <defaultcontrol always="false">9000</defaultcontrol>
    <include>OpenClose</include>
    <zorder>2</zorder>
    <controls>
        <control type="button" id="9000">
            <include>HiddenButton</include>
            <onclick>close</onclick>
        </control>
        <control type="image" description="Background">
            <posx>60</posx>
            <top>650</top>
            <width>1800</width>
            <height>300</height>
            <texture border="50">Seekbar/OSDBackground.png</texture>
        </control>
        <control type="image" description="Background">
            <posx>60</posx>
            <top>650</top>
            <width>1800</width>
            <height>300</height>
            <texture border="50">Seekbar/OSDBackground.png</texture>
        </control>
        <control type="group">
            <control type="image">
                <top>540</top>
                <posx>1580</posx>
                <width>250</width>
                <height>350</height>
                <texture>$INFO[Player.Art(poster)]$INFO[Player.Art(tvshow.poster)]</texture>
                <aspectratio align="left">keep</aspectratio>
            </control>
            <control type="group">
                <animation effect="fade" time="200">VisibleChange</animation>
                <top>660</top>
                <control type="label" description="Main label">
                    <visible>VideoPlayer.Content(MusicVideos)</visible>
                    <include>FullscreenInfoLabel</include>
                    <label>$INFO[VideoPlayer.Artist]</label>
                </control>
                <control type="label" description="Main label">
                    <visible>!VideoPlayer.Content(MusicVideos)</visible>
                    <include>FullscreenInfoLabel</include>
                    <label>$INFO[VideoPlayer.Title]</label>
                </control>
                <control type="label" description="Label 2">
                    <visible>VideoPlayer.Content(MusicVideos)</visible>
                    <font>size27</font>
                    <top>45</top>
                    <textcolor>silver</textcolor>
                    <include>FullscreenInfoLabel</include>
                    <label>$INFO[VideoPlayer.Album]</label>
                </control>
                <control type="label" description="chapters">
                    <visible>Player.ChapterCount</visible>
                    <font>size27</font>
                    <top>45</top>
                    <textcolor>silver</textcolor>
                    <include>FullscreenInfoLabel</include>
                    <label>$LOCALIZE[21396]$INFO[Player.Chapter, : ]$INFO[Player.ChapterCount, / ]</label>
                </control>
                <control type="label" description="Episode s-e">
                    <visible>VideoPlayer.Content(Episodes)</visible>
                    <font>size27</font>
                    <top>45</top>
                    <textcolor>=</textcolor>
                    <include>FullscreenInfoLabel</include>
                    <label>$INFO[VideoPlayer.TVShowTitle] - $LOCALIZE[20373] $INFO[VideoPlayer.Season], $LOCALIZE[20359] $INFO[VideoPlayer.Episode]</label>
                </control>
                <control type="label" description="music video title">
                    <visible>VideoPlayer.Content(Musicvideos)</visible>
                    <font>size27</font>
                    <top>45</top>
                    <textcolor>=</textcolor>
                    <include>FullscreenInfoLabel</include>
                    <label>$INFO[VideoPlayer.Title]</label>
                </control>
                <control type="textbox">
                    <posx>400</posx>
                    <top>100</top>
                    <width>1120</width>
                    <height>170</height>
                    <label>$INFO[VideoPlayer.Plot]</label>
                    <align>justify</align>
                    <autoscroll delay="3000" time="3000" repeat="10000">Window.IsVisible(142)</autoscroll>
                    <font>size30</font>
                </control>
            </control>
            <control type="grouplist">
                <posx>60</posx>
                <width>1800</width>
                <top>590</top>
                <height>60</height>
                <itemgap>20</itemgap>
                <align>center</align>
                <orientation>horizontal</orientation>
                <control type="image">
                    <visible>!IsEmpty(VideoPlayer.VideoCodec)</visible>
                    <height>50</height>
                    <width>130</width>
                    <bordersize>3</bordersize>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[VideoPlayer.VideoAspect,badges/video/,.png]</texture>
                </control>
                <control type="image">
                    <height>50</height>
                    <width>130</width>
                    <bordersize>3</bordersize>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[VideoPlayer.VideoResolution,badges/video/,.png]</texture>
                </control>
                <control type="image">
                    <visible>!IsEmpty(VideoPlayer.VideoCodec)</visible>
                    <height>50</height>
                    <width>130</width>
                    <bordersize>3</bordersize>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[VideoPlayer.VideoCodec,badges/video/,.png]</texture>
                </control>
                <control type="image">
                    <visible>!IsEmpty(VideoPlayer.AudioCodec)</visible>
                    <height>50</height>
                    <width>130</width>
                    <bordersize>3</bordersize>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[VideoPlayer.AudioCodec,badges/audio/,.png]</texture>
                </control>
                <control type="image">
                    <visible>!IsEmpty(VideoPlayer.AudioChannels)</visible>
                    <height>50</height>
                    <width>130</width>
                    <bordersize>3</bordersize>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[VideoPlayer.AudioChannels,badges/,.png]</texture>
                </control>
            </control>
        </control>
        <control type="image">
            <posx>110</posx>
            <top>700</top>
            <height>200</height>
            <width>250</width>
            <aspectratio>scale</aspectratio>
            <texture diffuse="images/Diffuse.png">$INFO[Player.Art(fanart)]</texture>
        </control>
        <control type="group">
            <top>10</top>
            <control type="label" description="Clock">
                <posx>60</posx>
                <width>695</width>
                <height>60</height>
                <font>size33B</font>
                <textcolor>White</textcolor>
                <label>$LOCALIZE[142] $INFO[System.Time]</label>
            </control>
            <control type="label">
                <posx>60</posx>
                <top>55</top>
                <width>495</width>
                <height>30</height>
                <label>[B]$INFO[Player.Time][/B]</label>
                <font>size26</font>
            </control>
            <control type="label" description="End time">
                <posx>60r</posx>
                <width>695</width>
                <height>60</height>
                <align>right</align>
                <font>size33B</font>
                <textcolor>White</textcolor>
                <label>$LOCALIZE[31005]: $INFO[Player.FinishTime]</label>
            </control>
            <control type="label">
                <posx>60r</posx>
                <top>55</top>
                <height>30</height>
                <width>195</width>
                <align>right</align>
                <label>[B]- $INFO[Player.TimeRemaining][/B]</label>
                <font>size26</font>
            </control>
        </control>
    </controls>
</window>
