<?xml version="1.0" encoding="UTF-8"?>
<window id="135">
    <defaultcontrol always="true">300</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <backgroundcolor>0xffffffff</backgroundcolor>
    <include>OpenClose</include>
    <controls>
        <include>BlackBackground</include>
        <control type="image" description="Vignette">
            <include>Dimensions_Fullscreen</include>
            <texture>Shades/Infoshade.png</texture>
            <aspectratio>stretch</aspectratio>
        </control>
        <include>WindowsTopInfos</include>
        <control type="group">
            <control type="group" description="Thumbs">
                <posx>0</posx>
                <top>6</top>
                <control type="image" description="Icon">
                    <posx>1320</posx>
                    <top>270</top>
                    <width>570</width>
                    <height>570</height>
                    <aspectratio align="right" aligny="top">keep</aspectratio>
                    <texture fallback="DefaultVideo.png">$INFO[ListItem.Thumb]</texture>
                </control>
            </control>
            <control type="group" description="Top info">
                <posx>-30</posx>
                <top>-486</top>
                <include>MusicInfo</include>
                <control type="textbox" description="Plot">
                    <posx>90</posx>
                    <top>1068</top>
                    <width>1050</width>
                    <height>258</height>
                    <font>size33</font>
                    <align>justify</align>
                    <autoscroll delay="6500" time="4000" repeat="10000"></autoscroll>
                    <label>$INFO[ListItem.Property(Album_Description)]</label>
                </control>
                <control type="textbox" description="Plot">
                    <visible>IsEmpty(ListItem.Property(Album_Description))</visible>
                    <posx>90</posx>
                    <top>1068</top>
                    <width>1050</width>
                    <height>258</height>
                    <font>size33</font>
                    <align>justify</align>
                    <autoscroll delay="6500" time="4000" repeat="10000"></autoscroll>
                    <label>$INFO[ListItem.Property(Artist_Description)]</label>
                </control>
            </control>
        </control>
        <control type="label" description="Path">
            <visible>Skin.HasSetting(ShowFileInfo)</visible>
            <posx>60</posx>
            <top>990</top>
            <width>1800</width>
            <height>27</height>
            <font>size22</font>
            <align>left</align>
            <textcolor>Silver</textcolor>
            <haspath>true</haspath>
            <scroll>true</scroll>
            <label>$INFO[ListItem.FilenameAndPath]</label>
        </control>
        <control type="image">
            <posx>0</posx>
            <top>1023</top>
            <height>60</height>
            <width>1920</width>
            <aspectratio>stretch</aspectratio>
            <texture>images/BlackT.png</texture>
        </control>
        <control type="image" description="Navbar">
            <posx>-82</posx>
            <top>1028</top>
            <width>2085</width>
            <height>1</height>
            <aspectratio>stretch</aspectratio>
            <texture>lines/Line1.png</texture>
        </control>
        <control type="group" description="Options">
            <top>0</top>
            <posx>0</posx>
            <control type="grouplist" id="300">
                <posx>15</posx>
                <top>1026</top>
                <width>1890</width>
                <height>58</height>
                <itemgap>0</itemgap>
                <aligny>bottom</aligny>
                <align>center</align>
                <onup>50</onup>
                <orientation>horizontal</orientation>
                <control type="button" id="12" description="Album Info">
                    <height>60</height>
                    <width>270</width>
                    <label>10523</label>
                    <font>size27</font>
                </control>
                <control type="button" id="13" description="Get Thumb">
                    <height>60</height>
                    <width>270</width>
                    <label>13405</label>
                    <font>size27</font>
                </control>
                <control type="button" id="14" description="Decrease Rating">
                    <height>60</height>
                    <width>270</width>
                    <label>-  $LOCALIZE[563]</label>
                    <onclick>DecreaseRating</onclick>
                    <font>size27</font>
                </control>
                <control type="button" id="15" description="Increase Rating">
                    <height>60</height>
                    <width>270</width>
                    <label>+ $LOCALIZE[563]</label>
                    <onclick>IncreaseRating</onclick>
                    <font>size27</font>
                </control>
                <control type="button" id="10" description="Save rating">
                    <height>60</height>
                    <width>270</width>
                    <label>186</label>
                    <font>size27</font>
                </control>
                <control type="togglebutton" id="8999" description="Path">
                    <height>60</height>
                    <width>270</width>
                    <align>center</align>
                    <font>size27</font>
                    <label>35500</label>
                    <onclick>Skin.ToggleSetting(ShowFileInfo)</onclick>
                </control>
            </control>
        </control>
    </controls>
</window>
