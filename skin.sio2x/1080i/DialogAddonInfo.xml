                </control>
                <control type="textbox" description="Plot">
                    <posx>0</posx>
                    <top>330</top>
                    <width>1200</width>
                    <height>336</height>
                    <align>justify</align>
                    <autoscroll delay="6500" time="4000" repeat="10000"></autoscroll>
                    <label>$INFO[ListItem.Property(Addon.Description)]</label>
                </control>
            </control>
        </control>
        <control type="image">
            <posx>0</posx>
            <top>1002</top>
            <height>72</height>
