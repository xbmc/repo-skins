<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">10</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<onload>SetProperty(adonic_loaded,1,home)</onload>
	<onload>Skin.SetBool(SkinHelper.EnableMusicArt)</onload>
	<onload>Skin.SetBool(SkinHelper.EnableExtraFanart)</onload>
	<onload>Skin.SetBool(Overlay.Unwatched)</onload>
	<onload>Skin.SetBool(Overlay.Watched)</onload>
	<onload>Skin.SetBool(Overlay.Resumable)</onload>
	<onload condition="!Skin.HasSetting(first.run)">Skin.SetBool(Colorbox.header)</onload>
	<onload condition="!Skin.HasSetting(first.run)">Skin.SetString(MenuDefaultIconsPath,special://skin/extras/icons/)</onload>
	<onload condition="!Skin.HasSetting(first.run)">Skin.SetString(colorbox_quality,8)</onload>
	<onload condition="!Skin.HasSetting(first.run)">Skin.SetString(colorbox_blursize,5)</onload>
	<onload condition="!Skin.HasSetting(first.run)">Skin.SetString(colorbox_bitsize,1)</onload>
	<onload condition="!Skin.HasSetting(first.run)">Skin.SetString(colorbox_pixelsize,12)</onload>
	<onload condition="!Skin.HasSetting(first.run)">Skin.SetString(colorbox_black,000000)</onload>
	<onload condition="!Skin.HasSetting(first.run)">Skin.SetString(colorbox_white,ffffff)</onload>
	<onload condition="Skin.HasSetting(Text.Shadow.Enable)">Skin.SetString(Text.Shadow.Colour,ff000000)</onload>
	<onload condition="!Skin.HasSetting(Text.Shadow.Enable)">Skin.SetString(Text.Shadow.Colour,-)</onload>
	<onload condition="System.HasAddon(script.colorbox)">RunScript(script.colorbox,daemon=True)</onload>
	<onload condition="System.HasAddon(script.skin.info.service)">RunScript(script.skin.info.service)</onload>
	<onload condition="String.IsEmpty(Skin.String(background_fx))">Skin.SetString(background_fx,blur)</onload>
	<onload condition="String.IsEmpty(Skin.String(focus_fx))">Skin.SetString(focus_fx,blur)</onload>
	<onload>SetProperty(cfa_daemon_set,$INFO[Skin.String(background_fx)],home)</onload>
	<onload>SetProperty(FIVE_daemon_set,$INFO[Skin.String(focus_fx)],home)</onload>
	<onload>SetProperty(EIGHT_daemon_set,$INFO[Skin.String(focus_fx)],home)</onload>
	<onload>SetProperty(SEVEN_daemon_set,True,home)</onload>
	<onload>SetProperty(EIGHT_daemon_set,True,home)</onload>
	<onload>SetProperty(FIVE_daemon_fallback,adonic.jpg,home)</onload>
	<onload>SetProperty(EIGHT_daemon_fallback,adonic.jpg,home)</onload>
	<onload>Skin.SetString(SkinHelper.RandomFanartDelay,3)</onload>
	<onload>SetProperty(ImageFilterFIVE,adonic.jpg,home)</onload>
	<onload>AlarmClock(nms1,SetProperty(NINE_manual_set,"var=quality,set=$INFO[Skin.String(colorbox_quality)]",home),00:05,true)</onload>
	<onload>AlarmClock(nms2,SetProperty(NINE_manual_set,"var=blursize,set=$INFO[Skin.String(colorbox_blursize)]",home),00:07,true)</onload>
	<onload>AlarmClock(nms3,SetProperty(NINE_manual_set,"var=bitsize,set=$INFO[Skin.String(colorbox_bitsize)]",home),00:09,true)</onload>
	<onload>AlarmClock(nms4,SetProperty(NINE_manual_set,"var=pixelsize,set=$INFO[Skin.String(colorbox_pixelsize)]",home),00:11,true)</onload>
	<onload>AlarmClock(nms5,SetProperty(NINE_manual_set,"var=black,set=$INFO[Skin.String(colorbox_black)]",home),00:13,true)</onload>
	<onload>AlarmClock(nms6,SetProperty(NINE_manual_set,"var=white,set=$INFO[Skin.String(colorbox_white)]",home),00:15,true)</onload>
	<controls>
		<control type="button" id="10">
			<description>trigger</description>
			<onfocus>Skin.SetBool(first.run)</onfocus>
			<onfocus condition="System.HasAddon(script.tv.show.next.aired) + Skin.HasSetting(NextAired.Update) + Library.HasContent(tvshows)">RunScript(script.tv.show.next.aired,silent=True)</onfocus>
			<onfocus>ReplaceWindow($INFO[System.StartupWindow])</onfocus>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
			<visible>!Skin.HasSetting(Use_Startup_Playlist)</visible>
		</control>
		<control type="button" id="10">
			<description>trigger with startup Playlist</description>
			<onfocus>Skin.SetBool(first.run)</onfocus>
			<onfocus>PlayMedia($INFO[Skin.String(Startup_Playlist_Path)])</onfocus>
			<onfocus condition="System.HasAddon(script.tv.show.next.aired) + Skin.HasSetting(NextAired.Update) + Library.HasContent(tvshows)">RunScript(script.tv.show.next.aired,silent=True)</onfocus>
			<onfocus>ReplaceWindow($INFO[System.StartupWindow])</onfocus>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
			<visible>Skin.HasSetting(Use_Startup_Playlist)</visible>
		</control>
		<include>CommonBackground</include>
	</controls>
</window>
