<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>11</defaultcontrol>
	<animation effect="slide" start="0,-140" end="0,0" time="400">WindowOpen</animation>
	<animation effect="slide" start="0,0" end="0,-140" time="400">WindowClose</animation>
	<coordinates>
		<system>1</system>
		<left>600</left>
		<top>-12</top>
	</coordinates>
	<controls>
		<control type="image">
			<width>720</width>
			<height>140</height>
			<texture border="12">dialog_context.png</texture>
			<colordiffuse>$VAR[ColorHighlightVar]</colordiffuse>
			<visible>[Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation) | Window.isActive(slideshow)]</visible>
		</control>
		<control type="group">
			<top>10</top>
			<control type="label" id="10">
				<description>Dialog header</description>
				<left>30</left>
				<width>345</width>
				<height>60</height>
				<textoffsetx>15</textoffsetx>
				<font>font13_title</font>
			</control>
			<control type="label" id="12">
				<description>Slider Value</description>
				<left>30</left>
				<width>650</width>
				<height>60</height>
				<align>right</align>
				<font>font13_title</font>
			</control>
			<control type="slider" id="11">
				<description>Slider</description>
				<left>45</left>
				<top>60</top>
				<width>630</width>
				<height>30</height>
				
				<texturefocus />
				<texturenofocus />
				<texturesliderbar>osd_slider_bg_2.png</texturesliderbar>
				<textureslidernib>osd_slider_nibNF.png</textureslidernib>
				<textureslidernibfocus>osd_slider_nib.png</textureslidernibfocus>
				<onup>11</onup>
				<ondown>11</ondown>
				<onleft>11</onleft>
				<onright>11</onright>
			</control>
		</control>
	</controls>
</window>