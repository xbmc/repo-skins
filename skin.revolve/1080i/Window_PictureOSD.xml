<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="PictureOSDWindow">
        <definition>
            <control type="group">
                <animation effect="slide" start="0,-120" end="0,0" time="200">WindowOpen</animation>
                <animation effect="slide" start="0,0" end="0,-120" time="200">WindowClose</animation>
                <posx>0</posx>
                <posy>0</posy>

                <include content="TopPictureControlsForPlayer">
                    <param name="id" value="9000" />
                </include>

                <include content="DescriptionForControlsForPlayer">
                    <param name="visible" value="Window.IsActive(slideshow) + !Window.IsVisible(1182)" />
                </include>
            </control>
        </definition>
    </include>
</includes>
