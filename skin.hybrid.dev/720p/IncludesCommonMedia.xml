<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="CommonBackground">
		<control type="group">
			<control type="multiimage" id="8998">
				<include>Dimensions_Fullscreen</include>
				<aspectratio>scale</aspectratio>
				<imagepath background="true">$VAR[HomeMenuItemBackground]</imagepath>
				<timeperimage>8000</timeperimage>
				<randomize>true</randomize>
				<fadetime>1000</fadetime>
				<visible>Window.IsVisible(home)</visible>
				<visible>!StringCompare(Container(9000).ListItem.Property(Background),LiveContent) | StringCompare(Container(9000).ListItem.Property(Background),LiveContent) + !SubString(Window(Home).Property(SkinWidgets_RandomItems),true)</visible>
			</control>
			<control type="multiimage" id="8999">
				<include>Dimensions_Fullscreen</include>
				<aspectratio>scale</aspectratio>
				<imagepath background="true">$VAR[CommonMenuItemBackground]</imagepath>
				<timeperimage>8000</timeperimage>
				<randomize>true</randomize>
				<fadetime>1000</fadetime>
				<visible>!StringCompare(Container(9000).ListItem.Property(Background),LiveContent) | StringCompare(Container(9000).ListItem.Property(Background),LiveContent) + !SubString(Window(Home).Property(SkinWidgets_RandomItems),true)</visible>
				<visible>[Window.IsVisible(home) + IsEmpty(Control.GetLabel(8998))]|[!Window.IsVisible(home) + !Container.Content(Seasons) + !Container.Content(Episodes)]</visible>
			</control>
			<control type="group">
				<include>LiveContentBackgrounds</include>
				<visible>StringCompare(Container(9000).ListItem.Property(Background),LiveContent) + SubString(Window(Home).Property(SkinWidgets_RandomItems),true) + !StringCompare(Container(9000).ListItem.Property(HiLiteItem),Weather) + !Skin.HasSetting(HolidayEffects)</visible>
			</control>
			<control type="multiimage">
				<include>Dimensions_Fullscreen</include>
				<imagepath background="true">special://skin/backgrounds/weather/$INFO[Window(Weather).Property(Current.FanartCode)]</imagepath>
				<timeperimage>8000</timeperimage>
				<randomize>true</randomize>
				<fadetime>FanartCrossfadeTime</fadetime>
				<visible>StringCompare(Container(9000).ListItem.Property(Background),LiveContent)  + StringCompare(Container(9000).ListItem.Property(HiLiteItem),Weather) + !Skin.HasSetting(HolidayEffects)</visible>
			</control>
			<control type="multiimage">
				<include>Dimensions_Fullscreen</include>
				<imagepath background="true">special://skin/backgrounds/weather/$INFO[Window(Weather).Property(Current.FanartCode)]</imagepath>
				<timeperimage>8000</timeperimage>
				<randomize>true</randomize>
				<fadetime>FanartCrossfadeTime</fadetime>
				<visible>Window.IsVisible(weather) + Skin.HasSetting(ShowWeatherFanart)</visible>
			</control>
			<control type="group">
				<control type="image">
					<description>Holiday Theme Default Image</description>
					<include>Dimensions_Fullscreen</include>
					<aspectratio>scale</aspectratio>
					<include>VisibleFadeEffect</include>
					<texture>special://skin/extras/Holiday/xmastree.jpg</texture>
					<visible>IsEmpty(Skin.String(HolidayThemePath)) | !Window.IsVisible(home) + !IsEmpty(Skin.String(HolidayThemePath))</visible>
				</control>
				<control type="multiimage">
					<description>Holiday Theme Images</description>
					<include>Dimensions_Fullscreen</include>
					<imagepath background="true">$INFO[Skin.String(HolidayThemePath)]</imagepath>
					<timeperimage>8000</timeperimage>
					<randomize>true</randomize>
					<fadetime>1000</fadetime>
					<visible>Window.IsVisible(home)</visible>
					<visible>!IsEmpty(Skin.String(HolidayThemePath))</visible>
				</control>
				<visible>Skin.HasSetting(HolidayEffects)</visible>
			</control>
			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<aspectratio>scale</aspectratio>
				<texture background="true" fallback="special://skin/backgrounds/homescreen/videos.jpg">$INFO[Fanart.Image]</texture>
				<include>BackgroundFade</include>
				<fadetime>FanartCrossfadeTime</fadetime>
				<include>Window_OpenClose_Animation</include>
				<visible>!IsEmpty(Fanart.Image) + !Skin.HasSetting(HideBackGroundFanart)</visible>
				<visible>!Player.HasVideo + StringCompare(ListItem.Label,..) + [Container.Content(Seasons) | Container.Content(Episodes)]</visible>
			</control>
			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<aspectratio>scale</aspectratio>
				<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
				<include>BackgroundFade</include>
				<fadetime>FanartCrossfadeTime</fadetime>
				<visible>!IsEmpty(ListItem.Property(Fanart_Image))</visible>
				<include>Window_OpenClose_Animation</include>
				<visible>!Player.HasVideo + !Skin.HasSetting(HideBackGroundFanart)</visible>
			</control>
			<visible>Skin.HasSetting(HideNowPlayingFanart) | !Player.HasAudio | Player.Paused | SubString(Window(videolibrary).Property(TvTunesIsAlive),TRUE) | Window.IsVisible(weather)</visible>
		</control>
		<control type="group">
			<include>AlbumArtMusicVizWall</include>
			<control type="multiimage">
				<include>Dimensions_Fullscreen</include>
				<timeperimage>10000</timeperimage>
				<randomize>true</randomize>
				<fadetime>1000</fadetime>
				<aspectratio>keep</aspectratio>
				<include condition="!Skin.HasSetting(NoAnimateVizFanart)">KBurnsAnimateFanart</include>
				<imagepath background="true">$INFO[Window(Visualisation).Property(ArtistSlideshow)]</imagepath>
				<visible>!IsEmpty(Window(Visualisation).Property(ArtistSlideshow)) + !Skin.HasSetting(DisableSlideShowArt)</visible>
			</control>
			<control type="multiimage">
				<include>Dimensions_Fullscreen</include>
				<timeperimage>10000</timeperimage>
				<randomize>true</randomize>
				<fadetime>1000</fadetime>
				<aspectratio>keep</aspectratio>
				<include condition="!Skin.HasSetting(NoAnimateVizFanart)">KBurnsAnimateFanart</include>
				<imagepath background="true">$INFO[Player.FolderPath,,../extrafanart/]</imagepath>
				<visible>[IsEmpty(Window(Visualisation).Property(ArtistSlideshow)) |  Skin.HasSetting(DisableSlideShowArt)] + !IsEmpty(Control.GetLabel(5043))</visible>
			</control>
			<control type="multiimage">
				<include>Dimensions_Fullscreen</include>
				<timeperimage>10000</timeperimage>
				<randomize>true</randomize>
				<fadetime>1000</fadetime>
				<aspectratio>keep</aspectratio>
				<include condition="!Skin.HasSetting(NoAnimateVizFanart)">KBurnsAnimateFanart</include>
				<imagepath background="true">$INFO[Skin.String(PhysicalMusicFolder)]$INFO[MusicPlayer.Artist,,/extrafanart/]</imagepath>
				<visible>[IsEmpty(Window(Visualisation).Property(ArtistSlideshow)) |  Skin.HasSetting(DisableSlideShowArt)] + IsEmpty(Control.GetLabel(5043))</visible>
			</control>
			<control type="image">
				<description>Fanart Image for Artist</description>
				<include>Dimensions_Fullscreen</include>
				<include condition="!Skin.HasSetting(NoAnimateVizFanart)">KBurnsAnimateFanart</include>
				<texture background="true">$INFO[Player.Art(fanart)]</texture>
				<visible>!IsEmpty(Player.Art(fanart)) + [IsEmpty(Window(Visualisation).Property(ArtistSlideshow)) |  Skin.HasSetting(DisableSlideShowArt)] + IsEmpty(Control.GetLabel(5043)) + IsEmpty(Control.GetLabel(5044))</visible>
				<fadetime>600</fadetime>
			</control>
			<control type="visualisation">
				<include>Dimensions_Fullscreen</include>
				<visible>Window.IsVisible(home)</visible>
				<visible>!IsEmpty(Visualisation.Name) + stringcompare(Visualisation.Name,Waveform) | stringcompare(Visualisation.Name,DirectX Spectrum) | stringcompare(Visualisation.Name,OpenGL Spectrum)</visible>
			</control>
			<visible>!Window.IsVisible(weather)</visible>
			<visible>[!Skin.HasSetting(HideNowPlayingFanart) | StringCompare(Container(9000).ListItem.Property(HiLiteItem),FullScreen)] + Player.HasAudio + !SubString(Window(videolibrary).Property(TvTunesIsAlive),TRUE) + !Player.Paused + ![Window.IsVisible(PVR) + [Control.IsVisible(11) | Control.IsVisible(12)]]</visible>
		</control>
		<control type="group">
			<visible>!Skin.HasSetting(HideBackGroundFanart)</visible>
			<visible>Window.IsActive(script-globalsearch-main.xml)</visible>
			<include>VisibleFadeEffect</include>
			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<texture background="true">$VAR[SearchBackground]</texture>
				<aspectratio>scale</aspectratio>
				<fadetime>FanartCrossfadeTime</fadetime>
				<include>VisibleFadeEffect</include>
				<visible>!IsEmpty(Skin.String(SearchBtnBackground))</visible>
			</control>
		</control>
		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<texture>special://skin/backgrounds/homescreen/media-overlay.jpg</texture>
			<visible>Player.HasVideo + [StringCompare(Container(9000).ListItem.Property(HiLiteItem),FullScreen) | Skin.HasSetting(HideHomeNowPlaying)] + ![Window.IsVisible(PVR) + [Control.IsVisible(11) | Control.IsVisible(12)]]</visible>
			<include>VisibleFadeEffect</include>
		</control>
		<control type="videowindow">
			<include>Dimensions_Fullscreen</include>
			<visible>Player.HasVideo + [StringCompare(Container(9000).ListItem.Property(HiLiteItem),FullScreen) | Skin.HasSetting(HideHomeNowPlaying)] + ![Window.IsVisible(PVR) + [Control.IsVisible(11) | Control.IsVisible(12)]]</visible>
		</control>
	</include>
	<include name="HomeScreenFloor">
		<control type="image" id="1">
			<left>0</left>
			<top>60r</top>
			<width>1780</width>
			<height>60</height>
			<texture>floor.png</texture>
			<animation effect="fade" time="250" condition="Window.Previous(Home)">WindowOpen</animation>
			<animation effect="fade" time="250" condition="Window.Next(Home)">WindowClose</animation>
			<visible>!Skin.HasSetting(HorizontalHomeScreen) + Window.IsVisible(home)</visible>
		</control>
		<control type="image" id="1">
			<left>0</left>
			<top>90r</top>
			<width>1780</width>
			<height>90</height>
			<texture>floor.png</texture>
			<animation effect="fade" time="250" condition="Window.Previous(Home)">WindowOpen</animation>
			<animation effect="fade" time="250" condition="Window.Next(Home)">WindowClose</animation>
			<visible>Skin.HasSetting(HorizontalHomeScreen) | !Window.IsVisible(home)</visible>
			<visible>!Window.IsVisible(fullscreenvideo)</visible>
		</control>
		<control type="image" id="1">
			<left>0</left>
			<top>0</top>
			<width>1780</width>
			<height>55</height>
			<texture flipy="true">floor.png</texture>
			<animation effect="fade" time="250" condition="Window.Previous(Home)">WindowOpen</animation>
			<animation effect="fade" time="250" condition="Window.Next(Home)">WindowClose</animation>
			<visible>!Window.IsVisible(fullscreenvideo)</visible>
		</control>
		<control type="image" id="1">
			<description>LOGO</description>
			<left>0</left>
			<top>5</top>
			<width>170</width>
			<height>100</height>
			<aspectratio aligny="top" align="left">keep</aspectratio>
			<texture>xbmc-logo.png</texture>
			<include>VisibleFadeEffect</include>
			<include>Window_OpenClose_Animation</include>
			<visible>StringCompare(System.ProfileName,Master user)</visible>
			<visible>!Window.IsVisible(fullscreenvideo) | [!Skin.HasSetting(HideSeekBarOSD) + Window.IsActive(VideoOSD) | Player.ShowInfo]</visible>
		</control>
		<control type="label" id="1">
			<description>Logged User</description>
			<left>20</left>
			<top>5</top>
			<height>45</height>
			<width>350</width>
			<align>left</align>
			<aligny>center</aligny>
			<font>font28_title</font>
			<textcolor>C0FFFFFF</textcolor>
			<shadowcolor>black</shadowcolor>
			<info>System.ProfileName</info>
			<include>VisibleFadeEffect</include>
			<include>Window_OpenClose_Animation</include>
			<visible>!StringCompare(System.ProfileName,Master user)</visible>
			<visible>!Window.IsVisible(fullscreenvideo) | [!Skin.HasSetting(HideSeekBarOSD) + Window.IsActive(VideoOSD) | Player.ShowInfo]</visible>
		</control>
		<control type="label" id="1">
			<description>Top Right Time Label</description>
			<left>270r</left>
			<top>5</top>
			<width>250</width>
			<height>30</height>
			<align>right</align>
			<aligny>center</aligny>
			<font>font28_title</font>
			<textcolor>C0FFFFFF</textcolor>
			<shadowcolor>black</shadowcolor>
			<label>$INFO[System.Time]</label>
			<include>Window_OpenClose_Animation</include>
			<animation effect="slide" start="0,0" end="-40,0" time="100" condition="Window.IsVisible(Mutebug)">conditional</animation>
			<animation effect="slide" start="0,0" end="0,-50" time="100" condition="Window.IsVisible(busydialog)">conditional</animation>
			<visible>!Window.IsVisible(fullscreenvideo) | [!Skin.HasSetting(HideSeekBarOSD) + Window.IsActive(VideoOSD) | Player.ShowInfo]</visible>
		</control>
		<control type="label" id="1">
			<description>Top Right Date Label</description>
			<left>270r</left>
			<top>35</top>
			<width>250</width>
			<height>15</height>
			<align>right</align>
			<aligny>center</aligny>
			<font>font10</font>
			<textcolor>C0FFFFFF</textcolor>
			<shadowcolor>black</shadowcolor>
			<label>$INFO[System.Date]</label>
			<include>Window_OpenClose_Animation</include>
			<animation effect="slide" start="0,0" end="-40,0" time="100" condition="Window.IsVisible(Mutebug)">conditional</animation>
			<animation effect="slide" start="0,0" end="0,-50" time="100" condition="Window.IsVisible(busydialog)">conditional</animation>
			<visible>!Window.IsVisible(fullscreenvideo) | [!Skin.HasSetting(HideSeekBarOSD) + Window.IsActive(VideoOSD) | Player.ShowInfo]</visible>
		</control>
	</include>
	<include name="MediaViewBackgrounds">
		<control type="image">
			<include>Window_OpenClose_Animation</include>
			<include>VisibleFadeEffect</include>
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<aspectratio>stretch</aspectratio>
			<include condition="!IsEmpty(Skin.String(MediaPanelTrans))">TransparentEffect</include>
			<texture>black-back.png</texture>
			<visible>!Control.IsVisible(508) + !Control.IsVisible(509)</visible>
		</control>
		<control type="image">
			<include>Window_OpenClose_Animation</include>
			<include>VisibleFadeEffect</include>
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<aspectratio>stretch</aspectratio>
			<texture>black-back.png</texture>
			<visible>Control.IsVisible(515) | Control.IsVisible(504) | Control.IsVisible(505) | Control.IsVisible(500) | Control.IsVisible(550) | Control.IsVisible(551)</visible>
		</control>
		<control type="image">
			<left>0</left>
			<top>70r</top>
			<width>1280</width>
			<height>85</height>
			<texture>floor.png</texture>
			<animation effect="slide" start="0,10" end="0,0" time="200" condition="Window.Previous(Home)">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,10" time="200" condition="Window.Next(Home)">WindowClose</animation>
			<animation effect="slide" start="0,0" end="0,-15" time="0" condition="Control.IsVisible(508) | Control.IsVisible(509)">Conditional</animation>
		</control>
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>85</height>
			<texture flipy="true">floor.png</texture>
			<animation effect="slide" start="0,-10" end="0,0" time="200" condition="Window.Previous(Home)">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,-10" time="200" condition="Window.Next(Home)">WindowClose</animation>
			<visible>!Control.IsVisible(510)</visible>
		</control>
	</include>
	<include name="ArtistExtraFanArt">
		<control type="multiimage" id="5043">
			<include>InvisibleButton</include>
			<imagepath background="true">$INFO[Player.FolderPath,,../extrafanart/]</imagepath>
			<visible>Player.HasAudio</visible>
		</control>
		<control type="multiimage" id="5044">
			<include>InvisibleButton</include>
			<imagepath background="true">$INFO[Skin.String(PhysicalMusicFolder)]$INFO[MusicPlayer.Artist,,/extrafanart/]</imagepath>
			<visible>Player.HasAudio + IsEmpty(Control.GetLabel(5043))</visible>
		</control>
	</include>
</includes>