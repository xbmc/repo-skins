<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- videoosd -->
	<onload condition="!Skin.HasSetting(HideOSDControls)">SetFocus(304)</onload>
	<onload condition="Skin.HasSetting(HideOSDControls) + system.getbool(videoplayer.autoplaynextitem)">SetFocus(16)</onload>
	<onload condition="Skin.HasSetting(HideOSDControls) + !system.getbool(videoplayer.autoplaynextitem)">SetFocus(15)</onload>
	<controls>
		<control type="group">
			<visible>!Window.IsVisible(osdvideosettings) + !Window.IsVisible(osdaudiosettings) + !Window.IsVisible(videobookmarks) + !Window.IsVisible(subtitlesearch)</visible>
			<control type="image">
				<width>1920</width>
				<height>210</height>
				<texture border="1">osd/mask_top.png</texture>
			</control>
			<control type="image">
				<bottom>0</bottom>
				<width>1920</width>
				<height>720</height>
				<texture border="1">osd/mask_bottom.png</texture>
				<visible>!Player.Forwarding + !Player.Rewinding</visible>
			</control>
			<control type="image">
				<bottom>0</bottom>
				<width>1980</width>
				<height>120</height>
				<texture>osd/mask.png</texture>
				<visible>Player.Forwarding | Player.Rewinding</visible>
			</control>
			<control type="grouplist">
				<left>20</left>
				<top>64</top>
				<width>1880</width>
				<height>50</height>
				<align>center</align>
				<itemgap>0</itemgap>
				<orientation>horizontal</orientation>
				<!--  Movie title -->
				<control type="label">
					<width>auto</width>
					<height>50</height>
					<font>OSD40</font>
					<textcolor>ffeaeaea</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[VideoPlayer.Title]</label>
					<visible>String.IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<!--  TV Show title -->
				<control type="label">
					<width>auto</width>
					<height>50</height>
					<font>OSD40</font>
					<textcolor>ffeaeaea</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[VideoPlayer.TVShowTitle]</label>
					<visible>!String.IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<!-- Season/Episode number -->
				<control type="label">
					<width>auto</width>
					<height>50</height>
					<font>OSD40</font>
					<textcolor>ffeaeaea</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$VAR[PlayerEpisodeValue]</label>
				</control>
			</control>
			<!--  Episode title -->
			<control type="label">
				<left>20</left>
				<top>129</top>
				<width>1880</width>
				<height>80</height>
				<aligny>top</aligny>
				<align>center</align>
				<font>OSD32</font>
				<textcolor>fffe8e8e8</textcolor>
				<shadowcolor>ff000000</shadowcolor>
				<wrapmultiline>true</wrapmultiline>
				<label>$INFO[VideoPlayer.Title]</label>
				<visible>!String.IsEmpty(VideoPlayer.TVShowTitle)</visible>
			</control>
			<!-- Pause -->
			<control type="image">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>321</width>
				<height>341</height>
				<texture>osd/Pause.png</texture>
				<visible>Player.Paused</visible>
			</control>
			<!--  Progress bar -->
			<control id="99" type="progress">
				<left>92</left>
				<bottom>93</bottom>
				<width>1735</width>
				<height>11</height>
				<reveal>true</reveal>
				<info>Player.Progress</info>
				<texturebg border="4">osd/progress_back.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture border="4">osd/progress_bar.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<control type="grouplist">
				<left>92</left>
				<bottom>37</bottom>
				<width>800</width>
				<height>40</height>
				<itemgap>2</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<!--  Current position -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>OSD32</font>
					<textcolor>fff3f3f3</textcolor>
					<label>$VAR[PlayerTime]</label>
				</control>
				<!--  Divider -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>OSD32</font>
					<textcolor>ff696969</textcolor>
					<label>/</label>
					<visible>!String.IsEmpty(Player.Time) + !String.IsEmpty(Player.Duration)</visible>
				</control>
				<!--  Total length -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>OSD32</font>
					<textcolor>ff696969</textcolor>
					<label>$VAR[PlayerDuration]</label>
				</control>
				<!--  4K label -->
				<control type="label">
					<left>24</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold36</font>
					<textcolor>ffebebeb</textcolor>
					<label>Ultra</label>
					<visible>String.IsEqual(VideoPlayer.VideoResolution,4K)</visible>
				</control>
				<!--  4K label -->
				<control type="label">
					<left>6</left>
					<width>auto</width>
					<height>34</height>
					<font>Light35</font>
					<textcolor>ffebebeb</textcolor>
					<label>HD</label>
					<visible>String.IsEqual(VideoPlayer.VideoResolution,4K)</visible>
				</control>
				<!--  HD label -->
				<control type="label">
					<left>24</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold32</font>
					<textcolor>ffebebeb</textcolor>
					<label>[B]HD[/B]</label>
					<visible>String.IsEqual(VideoPlayer.VideoResolution,720) | String.IsEqual(VideoPlayer.VideoResolution,1080)</visible>
				</control>
				<!--  Resolution label -->
				<control type="label">
					<left>2</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold31</font>
					<textcolor>ffebebeb</textcolor>
					<label>1080p</label>
					<visible>String.IsEqual(VideoPlayer.VideoResolution,720) | String.IsEqual(VideoPlayer.VideoResolution,1080)</visible>
				</control>
			</control>
			<control id="300" type="grouplist">
				<centerleft>50%</centerleft>
				<bottom>26</bottom>
				<width>800</width>
				<height>64</height>
				<onup condition="system.getbool(videoplayer.autoplaynextitem)">SetFocus(16)</onup>
				<onup condition="!system.getbool(videoplayer.autoplaynextitem)">SetFocus(15)</onup>
				<itemgap>0</itemgap>
				<align>center</align>
				<orientation>horizontal</orientation>
				<defaultcontrol always="true">204</defaultcontrol>
				<visible>!Skin.HasSetting(HideOSDControls)</visible>
				<!-- Skip Back -->
				<control type="button" id="301">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_prev_fo.png</texturefocus>
					<texturenofocus>osd/osd_prev_nf.png</texturenofocus>
					<onclick>PlayerControl(Previous)</onclick>
				</control>
				<!-- Rewind -->
				<control type="button" id="302">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_rw_fo.png</texturefocus>
					<texturenofocus>osd/osd_rw_nf.png</texturenofocus>
					<onclick condition="!Player.Paused + !Player.IsTempo">PlayerControl(Rewind)</onclick>
					<onclick condition="Player.Paused + Player.TempoEnabled">PlayerControl(Play)</onclick>
					<onclick condition="Player.Paused + Player.TempoEnabled">PlayerControl(TempoDown)</onclick>
					<onclick condition="Player.IsTempo + Player.TempoEnabled">PlayerControl(TempoDown)</onclick>
				</control>
				<!-- Stop -->
				<control type="button" id="303">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_stop_fo.png</texturefocus>
					<texturenofocus>osd/osd_stop_nf.png</texturenofocus>
					<onclick>PlayerControl(Stop)</onclick>
				</control>
				<!-- Play/Pause -->
				<control type="togglebutton" id="304">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_pause_fo.png</texturefocus>
					<texturenofocus>osd/osd_pause_nf.png</texturenofocus>
					<usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
					<alttexturefocus>osd/osd_play_fo.png</alttexturefocus>
					<alttexturenofocus>osd/osd_play_nf.png</alttexturenofocus>
					<onclick>PlayerControl(Play)</onclick>
				</control>
				<!-- Fast Forward -->
				<control type="button" id="305">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_ff_fo.png</texturefocus>
					<texturenofocus>osd/osd_ff_nf.png</texturenofocus>
					<onclick condition="!Player.Paused + !Player.IsTempo">PlayerControl(Forward)</onclick>
					<onclick condition="Player.Paused + Player.TempoEnabled">PlayerControl(Play)</onclick>
					<onclick condition="Player.Paused + Player.TempoEnabled">PlayerControl(TempoUp)</onclick>
					<onclick condition="Player.IsTempo + Player.TempoEnabled">PlayerControl(TempoUp)</onclick>
				</control>
				<!-- Next -->
				<control type="button" id="306">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_next_fo.png</texturefocus>
					<texturenofocus>osd/osd_next_nf.png</texturenofocus>
					<onclick>PlayerControl(Next)</onclick>
				</control>
			</control>
			<!--  Current time -->
			<control type="label">
				<right>92</right>
				<bottom>44</bottom>
				<width>800</width>
				<height>30</height>
				<font>OSD32</font>
				<align>right</align>
				<textcolor>fff3f3f3</textcolor>
				<label>$INFO[System.Time]</label>
			</control>
			<!-- Options -->
			<control id="100" type="grouplist">
				<right>92</right>
				<bottom>128</bottom>
				<width>600</width>
				<height>600</height>
				<align>right</align>
				<itemgap>0</itemgap>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<ondown condition="!Skin.HasSetting(HideOSDControls)">304</ondown>
				<orientation>vertical</orientation>
				<visible>!Control.IsVisible(200) + !Player.Forwarding + !Player.Rewinding</visible>
				<!-- 3D mode -->
				<control id="10" type="button">
					<width>600</width>
					<height>58</height>
					<font>OSD32</font>
					<align>right</align>
					<label>$LOCALIZE[31153]</label>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>Close</onclick>
					<onclick>StereoMode</onclick>
					<visible>VideoPlayer.IsStereoscopic</visible>
				</control>
				<!-- DVD menu -->
				<control id="11" type="button">
					<width>600</width>
					<height>58</height>
					<font>OSD32</font>
					<align>right</align>
					<label>$LOCALIZE[31136]</label>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>PlayerControl(ShowVideoMenu)</onclick>
					<visible>VideoPlayer.HasMenu</visible>
				</control>
				<!-- Subtitles -->
				<control id="12" type="button">
					<width>600</width>
					<height>58</height>
					<font>OSD32</font>
					<align>right</align>
					<label>287</label>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>SetFocus(200)</onclick>
				</control>
				<!-- Bookmarks -->
				<control id="13" type="button">
					<width>600</width>
					<height>58</height>
					<font>OSD32</font>
					<align>right</align>
					<label>298</label>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>ActivateWindow(125)</onclick>
					<onclick>Close</onclick>
				</control>
				<!-- Video Settings -->
				<control id="14" type="button">
					<width>600</width>
					<height>58</height>
					<font>OSD32</font>
					<align>right</align>
					<label>$LOCALIZE[31137]</label>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>ActivateWindow(123)</onclick>
				</control>
				<!-- Audio Settings -->
				<control id="15" type="button">
					<width>600</width>
					<height>58</height>
					<font>OSD32</font>
					<align>right</align>
					<label>$LOCALIZE[31000]</label>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>ActivateWindow(124)</onclick>
				</control>
				<!-- Next Video -->
				<control id="16" type="button">
					<width>600</width>
					<height>58</height>
					<font>OSD32</font>
					<align>right</align>
					<label>$VAR[NextVideo]</label>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>PlayerControl(Next)</onclick>
					<visible>Window.IsVisible(VideoFullScreen.xml) + system.getbool(videoplayer.autoplaynextitem)</visible>
				</control>
			</control>
			<control type="image">
				<bottom>125</bottom>
				<width>1920</width>
				<height>300</height>
				<texture>osd/mask.png</texture>
				<visible>ControlGroup(200).HasFocus</visible>
			</control>
			<control id="200" type="grouplist">
				<left>92</left>
				<bottom>161</bottom>
				<width>600</width>
				<height>228</height>
				<itemgap>27</itemgap>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<onback>SetFocus(12)</onback>
				<align>right</align>
				<orientation>vertical</orientation>
				<visible allowhiddenfocus="true">ControlGroup(200).HasFocus</visible>
				<control id="201" type="button">
					<width>300</width>
					<height>58</height>
					<font>Reg22</font>
					<textoffsetx>34</textoffsetx>
					<texturefocus border="13,5,6,8">views/button_fo.png</texturefocus>
					<texturenofocus border="13,5,6,8">views/button_nf.png</texturenofocus>
					<label>$LOCALIZE[248] ($INFO[VideoPlayer.SubtitlesLanguage])</label>
					<onclick>CycleSubtitle</onclick>
					<onback>SetFocus(12)</onback>
					<visible>VideoPlayer.SubtitlesEnabled</visible>
				</control>
				<control id="202" type="togglebutton">
					<width>300</width>
					<height>58</height>
					<font>Reg22</font>
					<label>$LOCALIZE[31138]</label>
					<altlabel>$LOCALIZE[31139]</altlabel>
					<textoffsetx>34</textoffsetx>
					<texturefocus border="13,5,6,8">views/button_fo.png</texturefocus>
					<texturenofocus border="13,5,6,8">views/button_nf.png</texturenofocus>
					<alttexturefocus border="13,5,6,8">views/button_fo.png</alttexturefocus>
					<alttexturenofocus border="13,5,6,8">views/button_nf.png</alttexturenofocus>
					<usealttexture>VideoPlayer.SubtitlesEnabled</usealttexture>
					<onclick>ShowSubtitles</onclick>
					<onback>SetFocus(12)</onback>
					<visible>VideoPlayer.HasSubtitles</visible>
				</control>
				<control id="203" type="button">
					<width>300</width>
					<height>58</height>
					<font>Reg22</font>
					<label>$LOCALIZE[31140]</label>
					<textoffsetx>34</textoffsetx>
					<texturefocus border="13,5,6,8">views/button_fo.png</texturefocus>
					<texturenofocus border="13,5,6,8">views/button_nf.png</texturenofocus>
					<onclick>Close</onclick>
					<onclick>Dialog.Close(VideoOSD)</onclick>
					<onclick>ActivateWindow(SubtitleSearch)</onclick>
					<onback>SetFocus(12)</onback>
				</control>
			</control>
		</control>
	</controls>
</window>