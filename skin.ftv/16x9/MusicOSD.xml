<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- musicosd -->
	<onload condition="!Skin.HasSetting(HideOSDControls)">SetFocus(304)</onload>
	<onload condition="Skin.HasSetting(HideOSDControls)">SetFocus(11)</onload>
	<controls>
		<control type="group">
			<animation effect="fade" start="100" end="0" time="200" condition="Window.IsVisible(visualisationpresetlist) | Window.IsVisible(addonsettings) | Window.IsVisible(selectdialog)">Conditional</animation>
			<control type="image">
				<width>1920</width>
				<height>210</height>
				<texture border="1">osd/mask_top.png</texture>
			</control>
			<control type="image">
				<bottom>0</bottom>
				<width>1920</width>
				<height>720</height>
				<texture border="1">osd/mask_bottom.png</texture>
				<visible>!Player.Forwarding + !Player.Rewinding</visible>
			</control>
			<control type="image">
				<bottom>0</bottom>
				<width>1980</width>
				<height>120</height>
				<texture>osd/mask.png</texture>
				<visible>Player.Forwarding | Player.Rewinding</visible>
			</control>
			<control type="grouplist">
				<left>20</left>
				<top>64</top>
				<width>1880</width>
				<height>50</height>
				<align>center</align>
				<itemgap>0</itemgap>
				<orientation>horizontal</orientation>
				<!--  Artist title -->
				<control type="label">
					<width>auto</width>
					<height>50</height>
					<font>OSD40</font>
					<textcolor>ffeaeaea</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[MusicPlayer.Title]</label>
				</control>
			</control>
			<!--  Song title -->
			<control type="label">
				<left>20</left>
				<top>130</top>
				<width>1880</width>
				<height>40</height>
				<align>center</align>
				<font>OSD32</font>
				<textcolor>fffe8e8e8</textcolor>
				<shadowcolor>ff000000</shadowcolor>
				<label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, / ,]</label>
			</control>
			<!--  Progress bar -->
			<control id="99" type="progress">
				<left>92</left>
				<bottom>93</bottom>
				<width>1735</width>
				<height>11</height>
				<reveal>true</reveal>
				<info>Player.Progress</info>
				<texturebg border="4">osd/progress_back.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture border="4">osd/progress_bar.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<control type="grouplist">
				<left>92</left>
				<bottom>37</bottom>
				<width>800</width>
				<height>40</height>
				<itemgap>2</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<!--  Current position -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>OSD32</font>
					<textcolor>fff3f3f3</textcolor>
					<label>$VAR[PlayerTime]</label>
				</control>
				<!--  Divider -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>OSD32</font>
					<textcolor>ff696969</textcolor>
					<label>/</label>
					<visible>!String.IsEmpty(Player.Time) + !String.IsEmpty(Player.Duration)</visible>
				</control>
				<!--  Total length -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>OSD32</font>
					<textcolor>ff696969</textcolor>
					<label>$VAR[PlayerDuration]</label>
				</control>
			</control>
			<control id="300" type="grouplist">
				<centerleft>50%</centerleft>
				<bottom>26</bottom>
				<width>800</width>
				<height>64</height>
				<onup>11</onup>
				<itemgap>0</itemgap>
				<align>center</align>
				<orientation>horizontal</orientation>
				<defaultcontrol always="true">204</defaultcontrol>
				<visible>!Skin.HasSetting(HideOSDControls)</visible>
				<!-- Skip Back -->
				<control type="button" id="301">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_prev_fo.png</texturefocus>
					<texturenofocus>osd/osd_prev_nf.png</texturenofocus>
					<onclick>PlayerControl(Previous)</onclick>
				</control>
				<!-- Rewind -->
				<control type="button" id="302">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_rw_fo.png</texturefocus>
					<texturenofocus>osd/osd_rw_nf.png</texturenofocus>
					<onclick>PlayerControl(Rewind)</onclick>
				</control>
				<!-- Stop -->
				<control type="button" id="303">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_stop_fo.png</texturefocus>
					<texturenofocus>osd/osd_stop_nf.png</texturenofocus>
					<onclick>PlayerControl(Stop)</onclick>
				</control>
				<!-- Play/Pause -->
				<control type="togglebutton" id="304">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_pause_fo.png</texturefocus>
					<texturenofocus>osd/osd_pause_nf.png</texturenofocus>
					<usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
					<alttexturefocus>osd/osd_play_fo.png</alttexturefocus>
					<alttexturenofocus>osd/osd_play_nf.png</alttexturenofocus>
					<onclick>PlayerControl(Play)</onclick>
				</control>
				<!-- Fast Forward -->
				<control type="button" id="305">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_ff_fo.png</texturefocus>
					<texturenofocus>osd/osd_ff_nf.png</texturenofocus>
					<onclick>PlayerControl(Forward)</onclick>
				</control>
				<!-- Next -->
				<control type="button" id="306">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_next_fo.png</texturefocus>
					<texturenofocus>osd/osd_next_nf.png</texturenofocus>
					<onclick>PlayerControl(Next)</onclick>
				</control>
			</control>
			<!--  Current time -->
			<control type="label">
				<right>92</right>
				<bottom>44</bottom>
				<width>800</width>
				<height>30</height>
				<font>OSD32</font>
				<align>right</align>
				<textcolor>fff3f3f3</textcolor>
				<label>$INFO[System.Time]</label>
			</control>
			<!-- Options -->
			<control id="100" type="grouplist">
				<left>92</left>
				<bottom>128</bottom>
				<width>600</width>
				<height>600</height>
				<align>right</align>
				<itemgap>0</itemgap>
				<onleft>noop</onleft>
				<onright>200</onright>
				<ondown condition="!Skin.HasSetting(HideOSDControls)">304</ondown>
				<orientation>vertical</orientation>
				<visible>!Player.Forwarding + !Player.Rewinding</visible>
				<!-- Lyrics -->
				<control type="button" id="9">
					<width>600</width>
					<height>58</height>
					<font>OSD32</font>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>24013</label>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>Close</onclick>
					<onclick condition="String.IsEmpty(Skin.String(LyricAddon))">Skin.SetAddon(LyricAddon,xbmc.python.lyrics)</onclick>
					<onclick condition="!String.IsEmpty(Skin.String(LyricAddon))">XBMC.RunScript($INFO[Skin.String(LyricAddon)])</onclick>
				</control>
				<!-- Playlist -->
				<control type="button" id="10">
					<width>600</width>
					<height>58</height>
					<font>OSD32</font>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>559</label>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>Close</onclick>
					<onclick>ActivateWindow(MusicPlaylist)</onclick>
				</control>
				<!-- Repeat -->
				<control type="button" id="7">
					<width>600</width>
					<height>58</height>
					<font>OSD32</font>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>$LOCALIZE[486]$INFO[Playlist.Repeat, : ]</label>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>PlayerControl(Repeat)</onclick>
				</control>
				<!-- Random -->
				<control type="togglebutton" id="8">
					<width>600</width>
					<height>58</height>
					<font>OSD32</font>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>$LOCALIZE[191]$INFO[Playlist.Random, : ]</label>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>PlayerControl(Random)</onclick>
				</control>
			</control>
			<!-- Options -->
			<control id="200" type="grouplist">
				<right>92</right>
				<bottom>128</bottom>
				<width>600</width>
				<height>600</height>
				<align>right</align>
				<itemgap>0</itemgap>
				<onleft>100</onleft>
				<onright>noop</onright>
				<ondown condition="!Skin.HasSetting(HideOSDControls)">304</ondown>
				<orientation>vertical</orientation>
				<visible>!Player.Forwarding + !Player.Rewinding</visible>
				<!-- Visualisation -->
				<control type="button" id="501">
					<width>600</width>
					<height>58</height>
					<font>OSD32</font>
					<align>right</align>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>31235</label>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>SetProperty(SetUserRating,music,home)</onclick>
					<onclick>setrating</onclick>
				</control>
				<!-- Visualisation -->
				<control type="button" id="500">
					<width>600</width>
					<height>58</height>
					<font>OSD32</font>
					<align>right</align>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>12006</label>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
				</control>
				<!-- Visualisation presets list -->
				<control type="button" id="12">
					<width>600</width>
					<height>58</height>
					<font>OSD32</font>
					<align>right</align>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>$LOCALIZE[31047]</label>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>ActivateWindow(122)</onclick>
				</control>
				<!-- Visualisation settings -->
				<control type="button" id="11">
					<width>600</width>
					<height>58</height>
					<font>OSD32</font>
					<align>right</align>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>$LOCALIZE[250] $LOCALIZE[21417]</label>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>Addon.Default.OpenSettings(xbmc.player.musicviz)</onclick>
				</control>
			</control>
		</control>
	</controls>
</window>