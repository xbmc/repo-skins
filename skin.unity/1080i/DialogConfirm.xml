<?xml version="1.0" encoding="UTF-8"?>
<window>
	<animation type="WindowOpen">
		<effect type="slide" start="0,665" end="0,0" time="300" tween="quadratic" easing="out" />
	</animation>
	<animation type="WindowClose">
		<effect type="slide" start="0,0" end="0,-765" time="300" tween="quadratic" easing="out" />
	</animation>
	<controls>
		<!--all content-->
		<control type="group">
			<!--title bars and backgrounds-->
			<include content="DynamicDialogBackground">
				<param name="dialog-top" value="385" />
				<param name="dialog-height" value="340" />
				<param name="glow-height" value="390" />
				<param name="title-height" value="90" />
				<param name="buttonbar-visible" value="true" />
				<param name="buttonbar-top" value="270" />
			</include>
			<!--close button-->
			<control type="button">
				<description>Close Window button</description>
				<left>5</left>
				<top>385</top>
				<width>50</width>
				<height>25</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			<!--title-->
			<control type="label" id="1">
				<left>60</left>
				<top>400</top>
				<width>1800</width>
				<height>60</height>
				<font>menu.title</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<label>-</label>
			</control>
			<!--message-->
			<control type="textbox" id="9">
				<!--9-->
				<left>60</left>
				<top>475</top>
				<width>1800</width>
				<height>150</height>
				<align>center</align>
				<aligny>center</aligny>
				<label>-</label>
				<font>label</font>
				<textcolor>text.primary</textcolor>
				<autoscroll time="3000" delay="4000" repeat="5000">true</autoscroll>
			</control>
			<!--progress bar-->
			<control type="progress" id="20">
				<left>605</left>
				<top>625</top>
				<width>750</width>
				<height>7</height>
				<info>System.Progressbar</info>
			</control>
			<!--buttons-->
			<control type="grouplist" id="9000">
				<left>670</left>
				<top>660</top>
				<width>600</width>
				<height>60</height>
				<orientation>horizontal</orientation>
				<align>justify</align>
				<!--yes button-->
				<include content="AnimatedCircleButtonGroup">
					<param name="button-id" value="11" />
					<param name="button-width" value="140" />
					<param name="button-texture" value="yesbutton" />
					<param name="button-onleft" value="12" />
					<param name="button-onright" value="10" />
				</include>
				<!--no button-->
				<include content="AnimatedCircleButtonGroup">
					<param name="button-id" value="10" />
					<param name="button-width" value="140" />
					<param name="button-texture" value="nobutton" />
					<param name="button-onleft" value="11" />
					<param name="button-onright" value="12" />
				</include>
				<!--custom button-->
				<include content="AnimatedCircleButtonGroup">
					<param name="button-id" value="12" />
					<param name="button-width" value="180" />
					<param name="button-texture" value="browsebutton" />
					<param name="button-onleft" value="10" />
					<param name="button-onright" value="11" />
				</include>
			</control>
		</control>
	</controls>
</window>