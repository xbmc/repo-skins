<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>5</defaultcontrol>
	<controls>
		<!--all content-->
		<control type="group">
			<visible>!Window.IsActive(FileBrowser) + !Window.IsActive(ShutdownMenu)</visible>
			<animation effect="slide" start="1650,0" end="0,0" time="400" tween="quadratic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="-1650,0" time="400" tween="quadratic" easing="out">WindowClose</animation>
			<animation effect="slide" start="1650,0" end="0,0" time="400" tween="quadratic" easing="out">Visible</animation>
			<animation effect="slide" start="0,0" end="-1650,0" time="400" tween="quadratic" easing="out">Hidden</animation>
			<!--title bars and backgrounds-->
			<include content="DynamicDialogBackground">
				<param name="dialog-left" value="355" />
				<param name="dialog-width" value="1210" />
				<param name="glow-width" value="1290" />
				<param name="title-height" value="90" />
				<param name="buttonbar-visible" value="true" />
			</include>
			<!--close window button-->
			<control type="button">
				<left>360</left>
				<top>0</top>
				<width>50</width>
				<height>25</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			<!--main content-->
			<control type="group">
				<left>355</left>
				<top>0</top>
				<!--title-->
				<control type="label" id="2">
					<left>45</left>
					<top>15</top>
					<width>1545</width>
					<height>60</height>
					<font>info.title</font>
					<align>left</align>
					<aligny>center</aligny>
					<textcolor>white</textcolor>
					<label>-</label>
				</control>
				<!--options-->
				<control type="grouplist" id="5">
					<description>control area</description>
					<left>55</left>
					<top>100</top>
					<width>1110</width>
					<height>960</height>
					<itemgap>0</itemgap>
					<pagecontrol>60</pagecontrol>
					<onleft>9001</onleft>
					<onright>60</onright>
					<onup>5</onup>
					<ondown>5</ondown>
				</control>
				<!--scrollbar-->
				<control type="scrollbar" id="60">
					<left>1175</left>
					<top>90</top>
					<height>980</height>
					<onleft>5</onleft>
					<onright>9001</onright>
				</control>
				<control type="grouplist" id="9001">
					<left>105</left>
					<top>1015</top>
					<width>1000</width>
					<height>60</height>
					<align>justify</align>
					<orientation>horizontal</orientation>
					<onleft>9001</onleft>
					<onright>9001</onright>
					<onup>5</onup>
					<ondown>5</ondown>
					<!--ok button-->
					<include content="AnimatedCircleButtonGroup">
						<param name="button-id" value="28" />
						<param name="button-width" value="130" />
						<param name="button-texture" value="yesbutton" />
						<param name="button-onup" value="5" />
						<param name="button-ondown" value="5" />
						<param name="button-onleft" value="30" />
						<param name="button-onright" value="29" />
					</include>
					<!--cancel button-->
					<include content="AnimatedCircleButtonGroup">
						<param name="button-id" value="29" />
						<param name="button-width" value="180" />
						<param name="button-texture" value="nobutton" />
						<param name="button-onup" value="5" />
						<param name="button-ondown" value="5" />
						<param name="button-onleft" value="28" />
						<param name="button-onright" value="30" />
					</include>
					<!--default button-->
					<include content="AnimatedCircleButtonGroup">
						<param name="button-id" value="30" />
						<param name="button-width" value="180" />
						<param name="button-texture" value="settingsbutton" />
						<param name="button-onup" value="5" />
						<param name="button-ondown" value="5" />
						<param name="button-onleft" value="29" />
						<param name="button-onright" value="28" />
					</include>
				</control>
			</control>
		</control>
		<!--button-->
		<control type="button" id="7">
			<left>0</left>
			<top>0</top>
		</control>
		<!--radio button-->
		<control type="radiobutton" id="8">
			<left>0</left>
			<top>0</top>
		</control>
		<!--spin control-->
		<control type="spincontrolex" id="9">
			<left>0</left>
			<top>0</top>
			<reverse>yes</reverse>
		</control>
		<!--separator-->
		<control type="image" id="11">
			<height>0</height>
			<texture>-</texture>
			<visible>false</visible>
		</control>
		<!--edit-->
		<control type="edit" id="12">
			<left>0</left>
			<top>0</top>
		</control>
		<!--slider-->
		<control type="sliderex" id="13">
			<left>0</left>
			<top>0</top>
		</control>
		<!--label-->
		<control type="label" id="14">
			<left>0</left>
			<top>0</top>
			<height>60</height>
			<font>button.bold</font>
			<textcolor>$VAR[Colour.500]</textcolor>
			<textoffsetx>5</textoffsetx>
			<aligny>center</aligny>
		</control>
	</controls>
</window>