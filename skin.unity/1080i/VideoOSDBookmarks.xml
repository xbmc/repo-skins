<?xml version="1.0" encoding="UTF-8"?>

<window>

	<defaultcontrol always="true">2</defaultcontrol>
	
	<controls>
	
		<!--all content-->
		<control type="group">
			<left>775</left>
			<visible>!Window.IsActive(FileBrowser) + !Window.IsActive(ShutdownMenu)</visible>
			<animation effect="slide" start="1650,0" end="0,0" time="400" tween="quadratic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="1650,0" time="400" tween="quadratic" easing="out">WindowClose</animation>
			
			<animation effect="slide" start="1650,0" end="0,0" time="400" tween="quadratic" easing="out">Visible</animation>
			<animation effect="slide" start="0,0" end="1650,0" time="400" tween="quadratic" easing="out">Hidden</animation>
		
			<!--background-->
			<control type="image">
				<left>715</left>
				<top>0</top>
				<width>1210</width>
				<height>1080</height>
				<texture colordiffuse="tertiary">backgrounds/white.png</texture>
				<animation effect="fade" start="100" end="85" time="0" condition="true">Conditional</animation>
			</control>
			
			<!--shadow-->
			<control type="image">
				<left>685</left>
				<top>0</top>
				<width>30</width>
				<height>1080</height>
				<texture flipx="true">sidebarshadow.png</texture>
			</control>
			
			<!--right shadow-->
			<control type="image">
				<left>1925</left>
				<top>0</top>
				<width>30</width>
				<height>1080</height>
				<texture>sidebarshadow.png</texture>
			</control>
				
			<!--title background-->
			<control type="image">
				<left>715</left>
				<top>0</top>
				<width>1210</width>
				<height>90</height>
				<texture background="true" colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
			</control>
		
			<!--title shadow-->
			<control type="image">
				<left>715</left>
				<top>90</top>
				<width>1210</width>
				<height>10</height>
				<texture>homeshadow.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
			
			<!--close window button-->
			<control type="button">
				<left>720</left>
				<top>0</top>
				<width>50</width>
				<height>25</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			
			<!--main content-->
			<control type="group">
				<left>170</left>
				<top>-5</top>
				
				<!--title-->
				<control type="label">
					<left>150</left>
					<top>15</top>
					<width>800</width>
					<height>60</height>
					<font>menu.title</font>
					<align>right</align>
					<aligny>center</aligny>
					<textcolor>white</textcolor>
					<label>$LOCALIZE[298]</label>
				</control>
				
				<!--file count-->
				<control type="label">
					<left>155</left>
					<top>875</top>
					<width>800</width>
					<height>60</height>
					<font>breadcrumb.secondary</font>
					<align>right</align>
					<aligny>center</aligny>
					<scroll>true</scroll>
					<textcolor>$VAR[Colour.500]</textcolor>
					<label>$INFO[Container(11).NumItems] $LOCALIZE[31025] ($LOCALIZE[31024] $INFO[Container(11).CurrentPage]/$INFO[Container(11).NumPages])</label>
				</control>
				
				<!--bookmarks-->
				<control type="list" id="11">
					<left>555</left>
					<top>105</top>
					<width>1080</width>
					<height>780</height>
					<onleft>2</onleft>
					<onright>3</onright>
					<ondown>2</ondown>
					<onup>2</onup>
					<scrolltime>200</scrolltime>
					<viewtype label="536">icon</viewtype>
					<pagecontrol>-</pagecontrol>
					<orientation>vertical</orientation>
					
					<itemlayout height="260" width="360">
						
						<!--thumb-->
						<control type="image">
							<left>5</left>
							<top>5</top>
							<width>400</width>
							<height>250</height>
							<aspectratio>scale</aspectratio>
							<info>ListItem.Icon</info>
						</control>
						
					</itemlayout>
					
					<focusedlayout height="260" width="360">
						
						<!--thumb (no focus)-->
						<control type="image">
							<left>5</left>
							<top>5</top>
							<width>400</width>
							<height>250</height>
							<aspectratio>scale</aspectratio>
							<info>ListItem.Icon</info>
							<visible>!Control.HasFocus(11)</visible>
						</control>
						
						<!--thumb (focus)-->
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>410</width>
							<height>260</height>
							<aspectratio>scale</aspectratio>
							<info>ListItem.Icon</info>
							<bordersize>5</bordersize>
							<bordertexture colordiffuse="$VAR[Colour.500]">backgrounds/white.png</bordertexture>
							<visible>Control.HasFocus(11)</visible>
						</control>
			
						<!--info background-->
						<control type="image">
							<left>5</left>
							<top>205</top>
							<width>275</width>
							<height>50</height>
							<texture colordiffuse="tertiary">backgrounds/white.png</texture>
						</control>
							
						<!--main label-->
						<control type="label">
							<left>15</left>
							<top>208</top>
							<width>250</width>
							<height>60</height>
							<font>breadcrumb</font>
							<textcolor>text.primary</textcolor>
							<selectedcolor>$VAR[Colour.500]</selectedcolor>
							<align>left</align>
							<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, (,)]</label>
						</control>
						
					</focusedlayout>
					
				</control>
				
				<!--top buttons-->
				<control type="group" id="9000">
					<left>555</left>
					<top>920</top>
		
					<!--create bookmark circle border-->
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>60</width>
						<height>60</height>
						<texture colordiffuse="text.primary">buttoncircleborder.png</texture>
						<visible>Control.HasFocus(2)</visible>
					</control>
					
					<!--create bookmark circle animation-->
					<control type="image">
						<left>-1</left>
						<top>-1</top>
						<width>62</width>
						<height>62</height>
						<texture colordiffuse="$VAR[Colour.500]">buttoncircle.png</texture>
						<visible>Control.HasFocus(2)</visible>
						<animation effect="zoom" start="0" end="100" time="250" center="auto">Visible</animation>
					</control>
					
					<!--create bookmark button-->
					<control type="button" id="2">
						<left>0</left>
						<top>0</top>
						<width>285</width>
						<height>60</height>
						<label>294</label>
						<font>button</font>
						<align>left</align>
						<aligny>center</aligny>
						<textoffsetx>60</textoffsetx>
						<textwidth>210</textwidth>
						<selectedcolor>text.primary</selectedcolor>
						<focusedcolor>text.primary</focusedcolor>
						<texturefocus colordiffuse="white">addbuttonf.png</texturefocus>
						<texturenofocus colordiffuse="text.primary">addbutton.png</texturenofocus>	
						<onup>11</onup>
						<onleft>noop</onleft>
						<onright>noop</onright>
						<ondown>3</ondown>
					</control>
		
					<!--clear bookmark circle border-->
					<control type="image">
						<left>0</left>
						<top>50</top>
						<width>60</width>
						<height>60</height>
						<texture colordiffuse="text.primary">buttoncircleborder.png</texture>
						<visible>Control.HasFocus(3)</visible>
					</control>
					
					<!--clear bookmark circle animation-->
					<control type="image">
						<left>-1</left>
						<top>49</top>
						<width>62</width>
						<height>62</height>
						<texture colordiffuse="$VAR[Colour.500]">buttoncircle.png</texture>
						<visible>Control.HasFocus(3)</visible>
						<animation effect="zoom" start="0" end="100" time="250" center="auto">Visible</animation>
					</control>
					
					<!--clear bookmark button-->
					<control type="button" id="3">
						<left>0</left>
						<top>50</top>
						<width>285</width>
						<height>60</height>
						<label>296</label>
						<font>button</font>
						<align>left</align>
						<aligny>center</aligny>
						<textoffsetx>60</textoffsetx>
						<textwidth>210</textwidth>
						<selectedcolor>text.primary</selectedcolor>
						<focusedcolor>text.primary</focusedcolor>
						<texturefocus colordiffuse="white">removebuttonf.png</texturefocus>
						<texturenofocus colordiffuse="text.primary">removebutton.png</texturenofocus>	
						<onup>2</onup>
						<onleft>noop</onleft>
						<onright>noop</onright>
						<ondown>4</ondown>
					</control>
		
					<!--clear bookmark button (episode) circle border-->
					<control type="image">
						<left>0</left>
						<top>100</top>
						<width>60</width>
						<height>60</height>
						<texture colordiffuse="text.primary">buttoncircleborder.png</texture>
						<visible>Control.HasFocus(4)</visible>
						<visible>videoplayer.content(episodes)</visible>
					</control>
					
					<!--clear bookmark button (episode) circle animation-->
					<control type="image">
						<left>-1</left>
						<top>99</top>
						<width>62</width>
						<height>62</height>
						<texture colordiffuse="$VAR[Colour.500]">buttoncircle.png</texture>
						<visible>Control.HasFocus(4)</visible>
						<animation effect="zoom" start="0" end="100" time="250" center="auto">Visible</animation>
						<visible>videoplayer.content(episodes)</visible>
					</control>
					
					<!--clear bookmark button (episode)-->
					<control type="button" id="4">
						<left>0</left>
						<top>100</top>
						<width>285</width>
						<height>60</height>
						<label>20406</label>
						<font>button</font>
						<align>left</align>
						<aligny>center</aligny>
						<textoffsetx>60</textoffsetx>
						<textwidth>210</textwidth>
						<selectedcolor>text.primary</selectedcolor>
						<focusedcolor>text.primary</focusedcolor>
						<texturefocus colordiffuse="white">addbuttonf.png</texturefocus>
						<texturenofocus colordiffuse="text.primary">addbutton.png</texturenofocus>	
						<onup>3</onup>
						<onleft>noop</onleft>
						<onright>noop</onright>
						<ondown>11</ondown>
						<visible>videoplayer.content(episodes)</visible>
					</control>
					
				</control>
				
			</control>
			
		</control>
		
	</controls>
	
</window>