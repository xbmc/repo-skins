<?xml version="1.0" encoding="UTF-8"?>

<window>

	<defaultcontrol>450</defaultcontrol>
	
	<animation type="WindowOpen">
		<effect type="slide" start="0,665" end="0,0" time="300" tween="quadratic" easing="out" />
	</animation>
	
	<animation type="WindowClose">
		<effect type="slide" start="0,0" end="0,-765" time="300" tween="quadratic" easing="out" />
	</animation>

	<controls>

		<!--all content-->
		<control type="group">
			<top>-10</top>
		
			<!--background-->
			<control type="image">
				<left>0</left>
				<top>415</top>
				<width>1920</width>
				<height>270</height>
				<texture colordiffuse="tertiary">backgrounds/white.png</texture>
			</control>
			
			<!--title bg-->
			<control type="image">
				<left>0</left>
				<top>415</top>
				<width>1920</width>
				<height>90</height>
				<texture colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
			</control>
			
			<!--title shadow-->
			<control type="image">
				<left>0</left>
				<top>505</top>
				<width>1920</width>
				<height>10</height>
				<texture>homeshadow.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
			
			<!--buttons bg-->
			<control type="image">
				<left>0</left>
				<top>655</top>
				<width>1920</width>
				<height>70</height>
				<texture colordiffuse="primary">backgrounds/white.png</texture>
			</control>
			
			<!--buttons shadow-->
			<control type="image">
				<left>0</left>
				<top>655</top>
				<width>1920</width>
				<height>10</height>
				<texture>homeshadow.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
			
			<!--top shadow-->
			<control type="image">
				<left>0</left>
				<top>385</top>
				<width>1920</width>
				<height>30</height>
				<texture flipy="true">homeshadow.png</texture>
			</control>
			
			<!--bottom shadow-->
			<control type="image">
				<left>0</left>
				<top>725</top>
				<width>1920</width>
				<height>30</height>
				<texture>homeshadow.png</texture>
			</control>
			
			<!--close button-->
			<control type="button">
				<description>Close Window button</description>
				<left>5</left>
				<top>415</top>
				<width>50</width>
				<height>25</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>13</onleft>
				<onright>13</onright>
				<onup>13</onup>
				<ondown>13</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			
			<!--title-->
			<control type="label">
				<left>60</left>
				<top>425</top>
				<width>1800</width>
				<height>60</height>
				<font>menu.title</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<label>$INFO[ListItem.Label]</label>
			</control>

			<control type="label">
				<left>60</left>
				<top>525</top>
				<width>1800</width>
				<height>45</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>label</font>
				<label>31060</label>
				<textcolor>text.primary</textcolor>
			</control>
			
			<control type="image">
				<left>557</left>
				<top>582</top>
				<width>38</width>
				<height>38</height>
				<texture flipx="true" colordiffuse="text.primary">OSDPlayNF.png</texture>
				<visible>Container(450).HasPrevious</visible>
			</control>
			
			<control type="image">
				<left>1330</left>
				<top>582</top>
				<width>38</width>
				<height>38</height>
				<texture colordiffuse="text.primary">OSDPlayNF.png</texture>
				<visible>Container(450).HasNext</visible>
			</control>
			
			<control type="list" id="450">
				<left>605</left>
				<top>575</top>
				<width>720</width>
				<height>150</height>
				<onleft>450</onleft>
				<onright>450</onright>
				<onup>450</onup>
				<ondown>450</ondown>
				<orientation>horizontal</orientation>
				<focusposition>2</focusposition>
				<viewtype label="535">list</viewtype>
				<scrolltime>200</scrolltime>
				
				<itemlayout width="60">
				
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>55</width>
						<height>48</height>
						<aspectratio>stretch</aspectratio>
						<texture colordiffuse="text.primary">backgrounds/white.png</texture>
					</control>
					
				</itemlayout>
				
				<focusedlayout width="60">
				
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>55</width>
						<height>48</height>
						<aspectratio>stretch</aspectratio>
						<texture colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
					</control>
					
				</focusedlayout>
				
			</control>
			
			<control type="label">
				<left>60</left>
				<top>660</top>
				<width>1800</width>
				<height>60</height>
				<font>kai.secondary</font>
				<align>center</align>
				<aligny>center</aligny>
				<info>Container(450).ListItem.Label</info>
				<textcolor>text.primary</textcolor>
			</control>
			
		</control>
		
	</controls>
	
</window>