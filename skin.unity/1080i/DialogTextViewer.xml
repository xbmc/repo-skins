<?xml version="1.0" encoding="UTF-8"?>

<window>

	<defaultcontrol>61</defaultcontrol>
	
	<controls>
	
		<control type="group">
			<left>575</left>
			<visible>!Window.IsActive(ShutdownMenu)</visible>
			<animation effect="slide" start="1650,0" end="0,0" time="400" tween="quadratic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="1650,0" time="400" tween="quadratic" easing="out">WindowClose</animation>
			
			<animation effect="slide" start="1650,0" end="0,0" time="400" tween="quadratic" easing="out">Visible</animation>
			<animation effect="slide" start="0,0" end="1650,0" time="400" tween="quadratic" easing="out">Hidden</animation>
			
			<!--background-->
			<control type="image">
				<left>270</left>
				<top>0</top>
				<width>1650</width>
				<height>1080</height>
				<texture colordiffuse="tertiary">backgrounds/white.png</texture>
			</control>
			
			<!--shadow-->
			<control type="image">
				<left>240</left>
				<top>0</top>
				<width>30</width>
				<height>1080</height>
				<texture flipx="true">sidebarshadow.png</texture>
			</control>
			
			<!--title background-->
			<control type="image">
				<left>270</left>
				<top>0</top>
				<width>1650</width>
				<height>90</height>
				<texture background="true" colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
			</control>
				
			<!--sub title background-->
			<control type="image">
				<left>270</left>
				<top>90</top>
				<width>1650</width>
				<height>50</height>
				<texture background="true" colordiffuse="$VAR[Colour.900]">backgrounds/white.png</texture>
			</control>
		
			<!--title shadow-->
			<control type="image">
				<left>270</left>
				<top>90</top>
				<width>1650</width>
				<height>20</height>
				<texture>homeshadow.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
		
			<!--sub title shadow-->
			<control type="image">
				<left>270</left>
				<top>140</top>
				<width>1650</width>
				<height>10</height>
				<texture>homeshadow.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
			
			<!--close window button-->
			<control type="button">
				<left>275</left>
				<top>0</top>
				<width>50</width>
				<height>25</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>61</onleft>
				<onright>61</onright>
				<onup>61</onup>
				<ondown>61</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			
			<!--main content-->
			<control type="group">
				<left>170</left>
				<top>-5</top>
				
				<!--title-->
				<control type="label" id="1">
					<left>350</left>
					<top>15</top>
					<width>800</width>
					<height>60</height>
					<font>menu.title</font>
					<align>right</align>
					<aligny>center</aligny>
					<textcolor>white</textcolor>
				</control>
				
				<!--secondary title-->
				<control type="label">
					<left>350</left>
					<top>90</top>
					<width>800</width>
					<height>60</height>
					<font>kai.secondary</font>
					<align>right</align>
					<aligny>center</aligny>
					<textcolor>white</textcolor>
					<label>$INFO[System.Date(DDD)], $INFO[System.Date(d)] $INFO[System.Date(mmm)] $INFO[System.Date(yyyy)], $INFO[System.Time] â€¢ $LOCALIZE[31024] $INFO[Container(5).CurrentPage]/$INFO[Container(5).NumPages]</label>
				</control>
				
				<!--changelog content-->
				<control type="textbox" id="5">
					<left>120</left>
					<top>169</top>
					<width>1025</width>
					<height>894</height>
					<label>-</label>
					<font>label</font>
					<align>justify</align>
					<pagecontrol>61</pagecontrol>
				</control>
				
				<!--scrollbar-->
				<control type="scrollbar" id="61">
					<left>1160</left>
					<top>165</top>
					<height>900</height>
					<texturesliderbackground colordiffuse="scroll.secondary">backgrounds/white.png</texturesliderbackground>
					<texturesliderbar colordiffuse="secondary">backgrounds/white.png</texturesliderbar>
					<onleft>61</onleft>
					<onright>61</onright>
					<ondown>61</ondown>
					<onup>61</onup>
					<showonepage>true</showonepage>
				</control>
				
			</control>
			
		</control>
		
	</controls>
	
</window>