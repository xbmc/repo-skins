<?xml version="1.0" encoding="UTF-8"?>

<window>

	<defaultcontrol always="true">10</defaultcontrol>
	
	<animation type="WindowOpen">
		<effect type="slide" start="0,665" end="0,0" time="300" tween="quadratic" easing="out" />
	</animation>
	
	<animation type="WindowClose">
		<effect type="slide" start="0,0" end="0,-765" time="300" tween="quadratic" easing="out" />
	</animation>
	
	<controls>
	
		<!--all content-->
		<control type="group">
			<top>-10</top>
		
			<!--background-->
			<control type="image">
				<left>0</left>
				<top>415</top>
				<width>1920</width>
				<height>270</height>
				<texture colordiffuse="tertiary">backgrounds/white.png</texture>
			</control>
			
			<!--title bg-->
			<control type="image">
				<left>0</left>
				<top>415</top>
				<width>1920</width>
				<height>90</height>
				<texture colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
			</control>
			
			<!--title shadow-->
			<control type="image">
				<left>0</left>
				<top>505</top>
				<width>1920</width>
				<height>10</height>
				<texture>homeshadow.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
			
			<!--buttons bg-->
			<control type="image">
				<left>0</left>
				<top>655</top>
				<width>1920</width>
				<height>70</height>
				<texture colordiffuse="primary">backgrounds/white.png</texture>
			</control>
			
			<!--buttons shadow-->
			<control type="image">
				<left>0</left>
				<top>655</top>
				<width>1920</width>
				<height>10</height>
				<texture>homeshadow.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
			
			<!--top shadow-->
			<control type="image">
				<left>0</left>
				<top>385</top>
				<width>1920</width>
				<height>30</height>
				<texture flipy="true">homeshadow.png</texture>
			</control>
			
			<!--bottom shadow-->
			<control type="image">
				<left>0</left>
				<top>725</top>
				<width>1920</width>
				<height>30</height>
				<texture>homeshadow.png</texture>
			</control>
			
			<!--close button-->
			<control type="button">
				<description>Close Window button</description>
				<left>5</left>
				<top>415</top>
				<width>50</width>
				<height>25</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>10</onleft>
				<onright>10</onright>
				<onup>10</onup>
				<ondown>10</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			
			<!--title-->
			<control type="label" id="1"> <!--1-->
				<left>60</left>
				<top>425</top>
				<width>1800</width>
				<height>60</height>
				<font>menu.title</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<label>$LOCALIZE[13406]</label>
			</control>
			
			<!--message-->
			<control type="textbox" id="9"> <!--9-->
				<description>text</description>
				<left>60</left>
				<top>527</top>
				<width>1800</width>
				<height>148</height>
				<align>center</align>
				<label>-</label>
				<font>label</font>
				<textcolor>text.primary</textcolor>
				<autoscroll time="3000" delay="4000" repeat="5000">true</autoscroll>
			</control>
			
			<!--buttons-->
			<control type="group">
				<top>40</top>
			
				<!--ok circle border-->
				<control type="image">
					<left>1730</left>
					<top>620</top>
					<width>60</width>
					<height>60</height>
					<texture colordiffuse="text.primary">buttoncircleborder.png</texture>
					<visible>Control.HasFocus(10)</visible>
				</control>
			
				<!--ok circle animation-->
				<control type="image">
					<left>1729</left>
					<top>619</top>
					<width>62</width>
					<height>62</height>
					<texture colordiffuse="$VAR[Colour.500]">buttoncircle.png</texture>
					<visible>Control.HasFocus(10)</visible>
					<animation effect="zoom" start="0" end="100" time="250" center="auto">Visible</animation>
				</control>
				
				<!--ok button-->
				<control type="button" id="10">
					<left>1730</left>
					<top>620</top>
					<width>180</width>
					<height>60</height>
					<label>186</label>
					<font>button</font>
					<align>left</align>
					<textoffsetx>60</textoffsetx>
					<textwidth>130</textwidth>
					<textcolor>text.primary</textcolor>
					<focusedcolor>text.primary</focusedcolor>
					<onleft>10</onleft>
					<onright>10</onright>
					<onup>10</onup>
					<ondown>10</ondown>
					<texturefocus colordiffuse="white">okbuttonf.png</texturefocus>
					<texturenofocus colordiffuse="text.primary">okbutton.png</texturenofocus>			
				</control>
				
			</control>
		
		</control>
		
	</controls>
	
</window>