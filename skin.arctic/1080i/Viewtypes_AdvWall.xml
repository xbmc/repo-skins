<includes>
<!-- =============== -->
<!-- Wall (502)      -->
<!-- =============== -->

    <include name="Viewtype-AdvWall">
        <control type="group">
            <control type="group">
                <visible>Control.IsVisible(502) + !Window.IsActive(movieinformation)</visible>
                <include>CommonViewAnimation</include>
                <control type="panel" id="502">
					<width>1920</width>
					<height>730</height>
					<posx>95</posx>
					<posy>170</posy>
                    <include>FullscreenDimensions</include>
                    <include>OptionsShutdownAnimation</include>
                    <pagecontrol>70</pagecontrol>
                    <scrolltime tween="cubic" easing="out">500</scrolltime>
                    <orientation>vertical</orientation>
                    <viewtype label="42311">list</viewtype>
                    <onleft condition="!Skin.HasSetting(KioskMode)">9010</onleft>
                    <onleft condition="Skin.HasSetting(KioskMode)">502</onleft>
                    <onright condition="!Skin.HasSetting(KioskMode)">9010</onright>
                    <onright condition="Skin.HasSetting(KioskMode)">502</onright>
                    <onup>502</onup>
                    <ondown>502</ondown>
                    <preloaditems>2</preloaditems>
                    <itemlayout width="247" height="365">
                        <!-- POSTER -->
                        <control type="image">
                            <description>Poster</description>
                            <posx>5</posx>
                            <posy>5</posy>
                            <width>237</width>
                            <height>355</height>
                            <texture background="true" diffuse="arctic/poster/wall.png">$VAR[WallPoster]</texture>
                            <colordiffuse>ffcccccc</colordiffuse>
                            <aspectratio>scale</aspectratio>
                        </control>
                        <!-- Border -->
                        <control type="image">
                            <description>Poster</description>
                            <posx>-5</posx>
                            <posy>-5</posy>
                            <width>257</width>
                            <height>375</height>
                            <texture border="25">views/newgloss/border.png</texture>
                            <colordiffuse>Mod_Border_Fade</colordiffuse>
                            <aspectratio>stretch</aspectratio>
                        </control>
                        <control type="image">
							<description>Fade</description>
							<posx>5</posx>
                            <posy>5</posy>
                            <width>237</width>
                            <height>355</height>
							<texture border="10">arctic/common/whitepanel.png</texture>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>Mod_Cover_Fade</colordiffuse>
						</control>
                    </itemlayout>
                    <focusedlayout width="247" height="365">
						<control type="group">
							<visible>!Skin.HasSetting(hide.posterwallinfo) + [Container(502).Column(0) | Container(502).Column(1) | Container(502).Column(2) | Container(502).Column(3)]</visible>
							<animation effect="fade" end="0" start="100" time="0" delay="0" condition="[Container(502).OnNext | Container(502).OnPrevious]">UnFocus</animation>
							<animation effect="fade" start="0" end="100" time="250" delay="1800">Focus</animation>
							<posx>269</posx>
							<posy>20</posy>
							<control type="image">
								<posx>-15</posx>
								<posy>-15</posy>
								<width>732</width>
								<height>355</height>
								<texture border="35">arctic/common/whitepanel.png</texture>
								<colordiffuse>aa000000</colordiffuse>
							</control>
							<control type="image">
								<posx>-25</posx>
								<posy>-25</posy>
								<width>752</width>
								<height>375</height>
								<texture border="35">arctic/common/border.png</texture>
							</control>
							<control type="group">
								<posx>492</posx>
								<posy>-29</posy>
								<include>Mod_Banner_Stars</include>
							</control>
							<control type="label">
								<posx>0</posx>
								<posy>0</posy>
								<width>502</width>
								<label>$INFO[ListItem.Label]</label>
								<font>Font-Alaska-S34-BL</font>
								<textcolor>mod-infotags-alt</textcolor>
								<scroll>false</scroll>
								<align>left</align>
							</control>
							<control type="label">
								<posx>0</posx>
								<posy>38</posy>
								<width>700</width>
								<label>$INFO[ListItem.Year]$INFO[ListItem.Genre, • ,]</label>
								<font>Font-Alaska-S25-BL</font>
								<textcolor>mod-infotags-alt2</textcolor>
								<scroll>false</scroll>
								<align>left</align>
							</control>
							<control type="group">
								<animation effect="fade" end="100" start="0" time="500" delay="0" reversible="false">Visible</animation>
								<control type="textbox">
									<description>Plot</description>
									<posx>0</posx>
									<posy>80</posy>
									<width>700</width>
									<height>245</height>
									<label>$INFO[ListItem.Plot]</label>
									<align>justify</align>
									<textcolor>mod-infotags-alt2</textcolor>
									<autoscroll delay="13000" time="3000" repeat="13000" />
									<font>Font-Alaska-S25-NC</font>
								</control>
							</control>
						</control>
						<control type="group">
							<visible>!Skin.HasSetting(hide.posterwallinfo) + ![Container(502).Column(0) | Container(502).Column(1) | Container(502).Column(2) | Container(502).Column(3)]</visible>
							<animation effect="fade" end="0" start="100" time="0" delay="0" condition="[Container(502).OnNext | Container(502).OnPrevious]">UnFocus</animation>
							<animation effect="fade" start="0" end="100" time="250" delay="1800">Focus</animation>
							<posx>-723</posx>
							<posy>20</posy>
					
							<control type="image">
								<posx>-15</posx>
								<posy>-15</posy>
								<width>732</width>
								<height>355</height>
								<texture border="35">arctic/common/whitepanel.png</texture>
								<colordiffuse>aa000000</colordiffuse>
							</control>
							<control type="image">
								<posx>-25</posx>
								<posy>-25</posy>
								<width>752</width>
								<height>375</height>
								<texture border="35">arctic/common/border.png</texture>
							</control>
							<control type="group">
								<posx>492</posx>
								<posy>-29</posy>
								<include>Mod_Banner_Stars</include>
							</control>
							<control type="label">
								<posx>0</posx>
								<posy>0</posy>
								<width>502</width>
								<label>$INFO[ListItem.Label]</label>
								<font>Font-Alaska-S34-BL</font>
								<textcolor>mod-infotags-alt</textcolor>
								<scroll>false</scroll>
								<align>left</align>
							</control>
							<control type="label">
								<posx>0</posx>
								<posy>38</posy>
								<width>700</width>
								<label>$INFO[ListItem.Year]$INFO[ListItem.Genre, • ,]</label>
								<font>Font-Alaska-S25-BL</font>
								<textcolor>mod-infotags-alt2</textcolor>
								<scroll>false</scroll>
								<align>left</align>
							</control>
							<control type="group">
								<animation effect="fade" end="100" start="0" time="500" delay="0" reversible="false">Visible</animation>
								<control type="textbox">
									<description>Plot</description>
									<posx>0</posx>
									<posy>80</posy>
									<width>700</width>
									<height>245</height>
									<label>$INFO[ListItem.Plot]</label>
									<align>justify</align>
									<textcolor>mod-infotags-alt2</textcolor>
									<autoscroll delay="13000" time="3000" repeat="13000" />
									<font>Font-Alaska-S25-NC</font>
								</control>
							</control>
						</control>
                        <control type="group">
                            <animation type="Focus" reversible="false">
                                <effect type="zoom" start="80" end="110" time="300" tween="sine" easing="inout" center="auto" />
                            </animation>
							<!-- POSTER -->
							<control type="image">
								<description>Poster</description>
								<posx>5</posx>
								<posy>5</posy>
								<width>237</width>
								<height>355</height>
								<texture background="true" diffuse="arctic/poster/wall.png">$VAR[WallPoster]</texture>
								<aspectratio>scale</aspectratio>
							</control>
							<control type="image">
								<posx>167</posx>
								<posy>5</posy>
								<width>75</width>
								<height>75</height>
								<aspect>keepaspect</aspect>
								<include>overlay.visibility</include>
							</control>
							<!-- Border -->
							<control type="image">
								<description>Poster</description>
								<posx>-5</posx>
								<posy>-5</posy>
								<width>257</width>
								<height>375</height>
								<texture border="25">arctic/common/border.png</texture>
								<colordiffuse>Mod_Border</colordiffuse>
								<aspectratio>stretch</aspectratio>
							</control>
                        </control>
                    </focusedlayout>
                </control>
            </control>
        </control>
    </include>    
</includes>