<includes>
<!-- =============== -->
<!-- Info Strip (502)      -->
<!-- =============== -->
    <include name="Viewtype-Music-InfoStrip">
        <control type="group">
            <visible>Control.IsVisible(502) + !Window.IsActive(musicinformation)</visible>
            <include>CommonViewAnimations</include>
            <include>OptionsShutdownAnimation</include>
            <include>listEndAnimation</include>
            <posx>127</posx>
			<posy>205</posy>
            <control type="list" id="502">
				<posx>0</posx>
				<posy>0</posy>
				<width>1666</width>
				<height>357</height>
                <include>FullscreenDimensions</include>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
                <orientation>horizontal</orientation>
                <pagecontrol>70</pagecontrol>
                <viewtype label="42320">list</viewtype>
                <onleft>502</onleft>
                <onright>502</onright>
                <onup condition="Skin.HasSetting(KioskMode)">502</onup>
                <onup condition="!Skin.HasSetting(KioskMode)">9010</onup>
                <ondown>70</ondown>
                <preloaditems>2</preloaditems>
                <focusposition>4</focusposition>
                <movement>3</movement>
                <visible>Container.Content(albums) | Container.Content(artists)</visible>
                <itemlayout width="238" height="357">

                    <control type="image">
                        <description>Poster</description>
                        <posx>6</posx>
                        <posy>6</posy>
                        <width>226</width>
                        <height>226</height>
                        <texture background="true" diffuse="arctic/covers/226.png" fallback="views/fallbacks/DefaultAlbumCover.png/square-large.png">$VAR[WallPoster]</texture>
                        <aspectratio scalediffuse="false">scale</aspectratio>
                    </control>
                    <control type="image">
                        <description>Border</description>
                        <posx>-4</posx>
                        <posy>-4</posy>
                        <width>246</width>
                        <height>246</height>
                        <texture border="25">arctic/common/border.png</texture>
                        <colordiffuse>Mod_Border_Fade</colordiffuse>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    <control type="image">
                        <description>White</description>
                        <posx>6</posx>
                        <posy>6</posy>
                        <width>226</width>
                        <height>226</height>
                        <texture>arctic/covers/226.png</texture>
                        <colordiffuse>Mod_Cover_Fade</colordiffuse>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    <control type="textbox">
						<description>Artist Label</description>
						<posx>14</posx>
						<posy>240</posy>
						<width>210</width>
						<height>90</height>
						<label>[B]$INFO[ListItem.Album,,[CR]][/B]$INFO[ListItem.Artist]</label>
						<align>center</align>
						<aligny>top</aligny>
						<textcolor>Mod_Tags_Dark</textcolor>
						<font>Font-AlbumCover-Title</font>
						<scroll>false</scroll>
					</control>
                    
                </itemlayout>
                <focusedlayout width="238" height="357">
                    <control type="group">
                        <animation effect="zoom" end="100" start="80" time="150" delay="50" center="auto">Focus</animation>
       
                        <control type="image">
							<description>Poster</description>
							<posx>6</posx>
							<posy>6</posy>
							<width>226</width>
							<height>226</height>
							<texture background="true" diffuse="arctic/covers/226.png" fallback="views/fallbacks/DefaultAlbumCover.png/square-large.png">$VAR[WallPoster]</texture>
							<aspectratio scalediffuse="false" align="center">scale</aspectratio>
						</control>
						<control type="image">
							<description>Border</description>
							<posx>-4</posx>
							<posy>-4</posy>
							<width>246</width>
							<height>246</height>
							<texture border="25">arctic/common/border.png</texture>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>Mod_Border</colordiffuse>
						</control>
						<control type="textbox">
							<description>Artist Label</description>
							<posx>14</posx>
							<posy>240</posy>
							<width>210</width>
							<height>90</height>
							<label>[B]$INFO[ListItem.Album,,[CR]][/B]$INFO[ListItem.Artist]</label>
							<align>center</align>
							<aligny>top</aligny>
							<textcolor>Mod_Tags_Dark</textcolor>
							<font>Font-AlbumCover-Title</font>
							<scroll>false</scroll>
						</control>
						<control type="image">
							<description>Border</description>
							<posx>-4</posx>
							<posy>-4</posy>
							<width>246</width>
							<height>246</height>
							<texture border="25">arctic/common/border.png</texture>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>Mod_Border</colordiffuse>
						</control>
						<control type="image">
							<description>Border</description>
							<posx>6</posx>
							<posy>6</posy>
							<width>226</width>
							<height>226</height>
							<texture border="25">arctic/common/border-glo-flat.png</texture>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>Mod_Glow_Border</colordiffuse>
						</control>
					</control>	
                </focusedlayout>
            </control>
            <control type="group">
				<posx>0</posx>
				<posy>357</posy>
				<control type="image">
					<description>Reflection</description>
					<posx>6</posx>
					<posy>351</posy>
					<width>345</width>
					<height>345</height>
					<texture background="true" flipy="true" diffuse="views/posterview/diffuse-ref-square.png" fallback="views/fallbacks/DefaultAlbumCover.png/square-large.png">$INFO[ListItem.Thumb]</texture>
					<aspectratio align="center" scalediffuse="false">scale</aspectratio>
					<visible>!Skin.HasSetting(HideCoverReflection)</visible>
				</control>
				<control type="image">
					<description>Cover</description>
					<posx>6</posx>
					<posy>6</posy>
					<width>345</width>
					<height>345</height>
					<texture background="true" diffuse="arctic/panel/fanart.png" fallback="views/fallbacks/DefaultAlbumCover.png/square-large.png">$INFO[ListItem.Thumb]</texture>
					<aspectratio scalediffuse="false">scale</aspectratio>
					<fadetime>250</fadetime>
				</control>
				<control type="image">
					<description>Border</description>
					<posx>-4</posx>
					<posy>-4</posy>
					<width>365</width>
					<height>365</height>
					<texture border="25">arctic/common/border.png</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<colordiffuse>Mod_Border</colordiffuse>
				</control>
				<control type="group">
					<posx>357</posx>
					<posy>8</posy>
					<control type="label">
						<posx>12</posx>
						<posy>12</posy>
						<width>660</width>
						<label>$INFO[ListItem.Label]</label>
						<font>Font-Alaska-S32-BL</font>
						<textcolor>Mod_Tags_Dark</textcolor>
						<scroll>false</scroll>
						<align>left</align>
					</control>
					<control type="textbox">
						<posx>12</posx>
						<posy>48</posy>
						<width>660</width>
						<height>285</height>
						<label>$VAR[MusicPlotBox]</label>
						<font>Font-Alaska-S25-NC</font>
						<textcolor>Mod_Tags</textcolor>
						<align>justify</align>
						<autoscroll delay="13000" time="3000" repeat="13000" />
					</control>
				</control>
				<control type="image">
					<description>Reflection</description>
					<posx>1047</posx>
					<posy>351</posy>
					<width>613</width>
					<height>345</height>
					<texture background="true" flipy="true" diffuse="views/posterview/diffuse-ref-square.png" fallback="views/fallbacks/DefaultArtist.png/square-large.png">$INFO[ListItem.Art(fanart)]</texture>
					<aspectratio align="center" scalediffuse="false">scale</aspectratio>
					<visible>!Skin.HasSetting(HideCoverReflection)</visible>
				</control>
				<control type="image">
					<description>Fanart</description>
					<posx>1047</posx>
					<posy>6</posy>
					<width>613</width>
					<height>345</height>
					<texture background="true" diffuse="arctic/panel/fanart.png" fallback="views/fallbacks/DefaultArtist.png/square-large.png">$INFO[ListItem.Art(fanart)]</texture>
					<aspectratio scalediffuse="false">scale</aspectratio>
					<fadetime>250</fadetime>
				</control>
				<control type="image">
					<description>Border</description>
					<posx>1037</posx>
					<posy>-4</posy>
					<width>633</width>
					<height>365</height>
					<texture border="25">arctic/common/border.png</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<colordiffuse>Mod_Border</colordiffuse>
				</control>
			</control>
        </control>
        <!--Scrollbar-->			
		<control type="scrollbar" id="70">
			<description>Scrollbar</description>
			<width>1920</width>
			<height>26</height>
			<posy>26r</posy>
			<orientation>horizontal</orientation>
			<textureslidernib >arctic/common/slider-nf-h.png</textureslidernib>
			<textureslidernibfocus >arctic/common/slider-fo-h.png</textureslidernibfocus>
			<showonepage>true</showonepage>
			<onup>502</onup>
			<ondown condition="!Skin.HasSetting(KioskMode)">9010</ondown>
			<ondown condition="Skin.HasSetting(KioskMode)">502</ondown>
			<animation effect="fade" start="100" end="0" time="300" tween="sine" easing="inout" condition="!Control.IsVisible(9772)">Conditional</animation>
			<animation effect="fade" start="40" end="100" time="300" tween="sine" easing="inout" condition="Control.HasFocus(70)">Conditional</animation>
			<animation effect="fade" start="100" end="40" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(70)">Conditional</animation>
			<visible>Control.IsVisible(502)</visible>
		</control>
    </include>    
</includes>