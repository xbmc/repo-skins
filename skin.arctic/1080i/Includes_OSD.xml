<includes>

    <include name="OSDVisualisation">
        <control type="visualisation" id="2">
            <description>visualisation</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
        </control>
    </include>
    
    <include name="OSDFwRwLabel">
        <posx>235</posx>
        <posy>13</posy>
        <width>150</width>
        <font>Font-Alaska-S28-L</font>
        <textcolor>$VAR[osd.text.dark]</textcolor>
        <shadowcolor>mod-shadow</shadowcolor>
        <align>left</align>
        <scroll>false</scroll>
    </include>
    
    <include name="OSDDefaultControlPlay">
        <defaultcontrol>3</defaultcontrol>
    </include>
    
    <include name="OSDDefaultControlSubtitles">
        <defaultcontrol>7</defaultcontrol>
    </include>
    
    <include name="OSDDefaultControlLiveTV">
        <defaultcontrol>1</defaultcontrol>
    </include>
    
    <variable name="OSDPlot">
        <value condition="!IsEmpty(Window(seekbar).Property(ShowNext))">$INFO[VideoPlayer.NextPlot]</value>
        <value>$INFO[VideoPlayer.Plot]</value>
    </variable>
    
    <variable name="OSDTitle">
        <value condition="!IsEmpty(Window(seekbar).Property(ShowNext))">$INFO[VideoPlayer.NextTitle]</value>
        <value>$INFO[VideoPlayer.Title]</value>
    </variable>
    
    <variable name="OSDNextTitle">
        <value condition="!IsEmpty(Window(seekbar).Property(ShowNext))">$INFO[VideoPlayer.NextStartTime,$LOCALIZE[19080] ,]$INFO[VideoPlayer.NextEndTime, • $LOCALIZE[19081] ,]</value>
        <value>$INFO[VideoPlayer.NextTitle,$LOCALIZE[19031]: ,]$INFO[VideoPlayer.NextStartTime, (,)]</value>
    </variable>
    
    <variable name="OSDMusicFanart">
        <value condition="!IsEmpty(Player.Art(fanart))">$INFO[Player.Art(fanart)]</value>
        <value condition="IsEmpty(Player.Art(fanart)) + !IsEmpty(Skin.String(GlobalBackdropSingle))">$INFO[Skin.String(GlobalBackdropSingle)]</value>
        <value>special://skin/extras/backgrounds/01.jpg</value>
    </variable>
    
    <variable name="OSDChapterInfoVar">
    	<value condition="[!IsEmpty(Window(seekbar).Property(ShowInfo)) | Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Window.IsActive(videoosd) | Window.IsActive(musicosd) | Window.IsActive(fullscreenvideo)] + !Player.ShowCodec + !Window.IsActive(script-XBMC_Lyrics-main.xml) + !IsEmpty(Player.Chapter) + IntegerGreaterThan(Player.ChapterCount,0)">$INFO[Player.Chapter,$LOCALIZE[21396] , / ]$INFO[Player.ChapterCount]</value>
    	<value condition="!Weather.IsFetched">$LOCALIZE[503]</value>
    	<value>$INFO[Window(Weather).Property(Current.Temperature),, ]$INFO[System.TemperatureUnits]</value>
    </variable>
    <include name="OSDChapterInfo">
        <control type="group">
        	<visible>[[!IsEmpty(Window(seekbar).Property(ShowInfo)) | Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Window.IsActive(videoosd) | Window.IsActive(musicosd) | Window.IsActive(fullscreenvideo)] + !Player.ShowCodec + !Window.IsActive(script-XBMC_Lyrics-main.xml) + !IsEmpty(Player.Chapter) + IntegerGreaterThan(Player.ChapterCount,0)]</visible>
            <animation effect="slide" end="-80"  time="200" tween="sine" easing="inout" condition="[Window.IsVisible(volumebar) | Window.IsVisible(mutebug)] + !Skin.HasSetting(osd.wideinfo)">Conditional</animation>
            <animation effect="slide" end="1000" condition="!Window.IsVisible(videoosd)">Conditional</animation>
            <animation type="WindowOpen">
                <effect type="fade" start="0" end="100" time="200" tween="sine" easing="inout" />
                <effect type="slide" start="0,-70" end="0,0" time="300" tween="cubic" easing="out" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" start="100" end="0" time="200" tween="sine" easing="out" />
                <effect type="slide" start="0,0" end="0,-70" time="300" tween="cubic" easing="inout" />
            </animation>
            <animation type="Visible">
                <effect type="fade" start="0" end="100" time="175" tween="sine" easing="inout" delay="100" />
                <effect type="slide" start="0,-70" end="0,0" time="275" tween="cubic" easing="inout" />
            </animation>
            <animation type="Hidden">
                <effect type="fade" start="100" end="0" time="200" tween="sine" easing="out" />
                <effect type="slide" start="0,0" end="0,-70" time="300" tween="cubic" easing="inout" />
            </animation>
            <control type="image">
				<posx>150</posx>
				<posy>-30</posy>
				<width>320</width>
				<height>110</height>
				<bordertexture border="40">arctic/common/border-20.png</bordertexture>
				<bordersize>20</bordersize>
				<texture border="25">arctic/common/whitepanel8.png</texture>
				<aspectratio>stretch</aspectratio>
				<visible>!Skin.HasSetting(osd.darkpanel)</visible>
				<colordiffuse>mod-osdbar</colordiffuse>
			</control>
			<control type="image">
				<posx>150</posx>
				<posy>-30</posy>
				<width>320</width>
				<height>110</height>
				<bordertexture border="40">arctic/common/border-20.png</bordertexture>
				<bordersize>20</bordersize>
				<texture border="25">arctic/common/panel.png</texture>
                <aspectratio>stretch</aspectratio>
                <visible>Skin.HasSetting(osd.darkpanel)</visible>
                <colordiffuse>mod-osdbar-dark</colordiffuse>
			</control>
            <control type="label">
				<posx>170</posx>
				<posy>13</posy>
				<width>280</width>
				<label>$VAR[OSDChapterInfoVar]</label>
				<font>Font-Alaska-S28-L</font>
				<shadowcolor>33ffffff</shadowcolor>
				<textcolor>$VAR[osd.text.dark]</textcolor>
				<align>center</align>
				<scroll>false</scroll>
			</control>
        </control>
    </include>


    <include name="OSDWeatherClock">
        <control type="group">
        	<posx>10</posx>
        	<animation effect="slide" end="150" condition="[!IsEmpty(Window(seekbar).Property(ShowInfo)) | Window.IsVisible(fullscreeninfo)] + Window.IsVisible(visualisation)">Conditional</animation>
        	<animation effect="slide" time="300" end="-150" condition="[!IsEmpty(Window(seekbar).Property(ShowInfo)) | Window.IsVisible(fullscreeninfo)] + Window.IsVisible(visualisation) + [Player.Muted | substring(Player.Volume,-60.0) | Window.IsActive(volumebar) | Control.IsVisible(99221)]">Conditional</animation>
            <animation type="WindowOpen">
                <effect type="fade" start="0" end="100" time="200" tween="sine" easing="inout" />
                <effect type="slide" start="0,-70" end="0,0" time="300" tween="cubic" easing="out" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" end="0" time="200" tween="sine" easing="out" />
                <effect type="slide" start="0,0" end="0,-70" time="300" tween="cubic" easing="inout" />
            </animation>
            <animation type="Visible">
                <effect type="fade" start="0" end="100" time="175" tween="sine" easing="inout" delay="100" />
                <effect type="slide" start="0,-70" end="0,0" time="275" tween="cubic" easing="inout" />
            </animation>
            <animation type="Hidden">
                <effect type="fade" end="0" time="200" tween="sine" easing="out" />
                <effect type="slide" start="0,0" end="0,-70" time="300" tween="cubic" easing="inout" />
            </animation>
            <visible>[Player.Muted | substring(Player.Volume,-60.0) | Window.IsActive(volumebar) | Window.IsActive(mutebug) | !IsEmpty(Window(seekbar).Property(ShowInfo)) | Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Window.IsActive(videoosd) | Window.IsActive(musicosd) | Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation)] + !Player.ShowCodec + !Window.IsActive(script-XBMC_Lyrics-main.xml)</visible>
            <animation type="Conditional" condition="Window.IsActive(infodialog)">
                <effect type="fade" start="100" end="8" tween="sine" easing="out" time="300" /> 
                <effect type="zoom" start="100" end="50" center="1569,97" tween="sine" easing="inout" time="300" />
            </animation>
			<!-- Clocks -->
            <control type="group">
            	<animation effect="slide" end="-80" time="200" tween="sine" easing="inout" condition="[Window.IsVisible(volumebar) | Window.IsVisible(mutebug)] + [!Skin.HasSetting(osd.wideinfo) | Window.IsActive(visualisation)]">Conditional</animation>
            	<animation effect="slide" end="140" time="200" tween="sine" easing="inout" condition="!Window.IsVisible(volumebar) + !Window.IsVisible(mutebug) + Window.IsActive(visualisation)">Conditional</animation>
            	<posx>1430</posx>
            	<control type="group">
					<visible>[!Skin.HasSetting(osd.wideinfo) + !Window.IsVisible(videoosd)] | Window.IsActive(visualisation)</visible>
					<control type="image">
						<posx>0</posx>
						<posy>-30</posy>
						<width>340</width>
						<height>110</height>
						<bordertexture border="40">arctic/common/border-20.png</bordertexture>
						<bordersize>20</bordersize>
						<texture border="25">arctic/common/whitepanel8.png</texture>
						<aspectratio>stretch</aspectratio>
						<colordiffuse>mod-osdbar</colordiffuse>
						<visible>!Skin.HasSetting(osd.darkpanel)</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>-30</posy>
						<width>340</width>
						<height>110</height>
						<bordertexture border="40">arctic/common/border-20.png</bordertexture>
						<bordersize>20</bordersize>
						<texture border="25">arctic/common/panel.png</texture>
						<aspectratio>stretch</aspectratio>
						<colordiffuse>mod-osdbar-dark</colordiffuse>
						<visible>Skin.HasSetting(osd.darkpanel)</visible>
					</control>
				</control>
				<control type="group">
					<visible>Skin.HasSetting(osd.wideinfo) + !Window.IsActive(visualisation)</visible>
					<control type="image">
						<posx>-1600</posx>
						<posy>-30</posy>
						<width>2400</width>
						<height>110</height>
						<bordertexture border="40">arctic/common/border-20.png</bordertexture>
						<bordersize>20</bordersize>
						<texture border="25">arctic/common/whitepanel8.png</texture>
						<aspectratio>stretch</aspectratio>
						<colordiffuse>mod-osdbar</colordiffuse>
						<visible>!Skin.HasSetting(osd.darkpanel)</visible>
					</control>
					<control type="image">
						<posx>-1600</posx>
						<posy>-30</posy>
						<width>2400</width>
						<height>110</height>
						<bordertexture border="40">arctic/common/border-20.png</bordertexture>
						<bordersize>20</bordersize>
						<texture border="25">arctic/common/panel.png</texture>
						<aspectratio>stretch</aspectratio>
						<colordiffuse>mod-osdbar-dark</colordiffuse>
						<visible>Skin.HasSetting(osd.darkpanel)</visible>
					</control>
				</control>
				<control type="group">
					<visible>!Window.IsVisible(videoosd)</visible>
					<control type="group">
						<posx>90</posx>
						<control type="image">
							<description>Clock image</description>
							<posx>-80</posx>
							<posy>-22</posy>
							<width>100</width>
							<height>100</height>
							<texture>osd/fullscreen/clock-blue.png</texture>
							<visible>Skin.HasSetting(osd.darkpanel)</visible>
						</control>
						<control type="image">
							<description>Clock image</description>
							<posx>-80</posx>
							<posy>-22</posy>
							<width>100</width>
							<height>100</height>
							<texture>osd/fullscreen/clock-blue-dark.png</texture>
							<visible>!Skin.HasSetting(osd.darkpanel)</visible>
							<colordiffuse>ccffffff</colordiffuse>
						</control>
						<control type="label">
							<description>Clock label</description>
							<posx>0</posx>
							<posy>13</posy>
							<width>100</width>
							<label>$INFO[System.Time(hh:mm)]</label>
							<font>Font-Alaska-S28-L</font>
							<textcolor>$VAR[osd.text.dark]</textcolor>
							<shadowcolor>1a000000</shadowcolor>
							<align>left</align>
							<scroll>false</scroll>
						</control>
					</control>
					<control type="group">
						<posx>225</posx>
						<visible>!Player.Forwarding + !Player.Rewinding</visible>
						<include>visiblehidefadeinfo</include>
						<control type="image">
							<description>Finish time image</description>
							<posx>-80</posx>
							<posy>-22</posy>
							<width>100</width>
							<height>100</height>
							<texture>osd/fullscreen/clock-green.png</texture>
							<visible>Skin.HasSetting(osd.darkpanel)</visible>
						</control>
						<control type="image">
							<description>Finish time image</description>
							<posx>-80</posx>
							<posy>-22</posy>
							<width>100</width>
							<height>100</height>
							<texture>osd/fullscreen/clock-green-dark.png</texture>
							<visible>!Skin.HasSetting(osd.darkpanel)</visible>
							<colordiffuse>ccffffff</colordiffuse>
						</control>
						<control type="label">
							<description>Clock label</description>
							<posx>0</posx>
							<posy>13</posy>
							<width>100</width>
							<label>$INFO[Player.FinishTime(hh:mm)]</label>
							<font>Font-Alaska-S28-L</font>
							<shadowcolor>1a000000</shadowcolor>
							<textcolor>$VAR[osd.text.dark]</textcolor>
							<align>left</align>
							<scroll>false</scroll>
						</control>
					</control>
				</control>
				<control type="group">
					<visible>[Player.Forwarding | Player.Rewinding] + [[!Skin.HasSetting(osd.wideinfo) + !Window.IsVisible(videoosd)] | Skin.HasSetting(osd.wideinfo)]</visible>
					<include>visiblehidefadeinfo</include>
					<control type="label">
						<description>Rewind</description>
						<posx>219</posx>
						<posy>13</posy>
						<width>100</width>
						<label>«</label>
						<font>Font-Alaska-S52-L</font>
						<shadowcolor>1a000000</shadowcolor>
						<textcolor>$VAR[osd.text.dark]</textcolor>
						<align>right</align>
						<scroll>false</scroll>
						<visible>Player.Rewinding</visible>
					</control>
					<control type="label">
						<description>Forward</description>
						<posx>219</posx>
						<posy>13</posy>
						<width>100</width>
						<label>»</label>
						<font>Font-Alaska-S52-L</font>
						<shadowcolor>1a000000</shadowcolor>
						<textcolor>$VAR[osd.text.dark]</textcolor>
						<align>right</align>
						<scroll>false</scroll>
						<visible>Player.Forwarding</visible>
					</control>
					<control type="label">
						<description>Forwarding / Rewinding 2x</description>
						<include>OSDFwRwLabel</include>
						<label>2x</label>
						<visible>Player.Forwarding2x | Player.Rewinding2x</visible>
					</control>
					<control type="label">
						<description>Forwarding / Rewinding 4x</description>
						<include>OSDFwRwLabel</include>
						<label>4x</label>
						<visible>Player.Forwarding4x | Player.Rewinding4x</visible>
					</control>
					<control type="label">
						<description>Forwarding / Rewinding 8x</description>
						<include>OSDFwRwLabel</include>
						<label>8x</label>
						<visible>Player.Forwarding8x | Player.Rewinding8x</visible>
					</control>
					<control type="label">
						<description>Forwarding / Rewinding 16x</description>
						<include>OSDFwRwLabel</include>
						<label>16x</label>
						<visible>Player.Forwarding16x | Player.Rewinding16x</visible>
					</control>
					<control type="label">
						<description>Forwarding / Rewinding 32x</description>
						<include>OSDFwRwLabel</include>
						<label>32x</label>
						<visible>Player.Forwarding32x | Player.Rewinding32x</visible>
					</control>
				</control>
            </control>
        </control>
    </include>
</includes>