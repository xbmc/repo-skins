<window>
    <allowoverlay>no</allowoverlay>
    <controls>
        <control type="label" id="200">
            <description>Scraper label</description>
            <visible>false</visible>
        </control>
        <control type="spincontrol" id="101">
            <posx>-100</posx>
            <posy>-100</posy>
            <visible>false</visible>
        </control>
        <control type="spincontrol" id="111">
            <posx>-100</posx>
            <posy>-100</posy>
            <visible>false</visible>
        </control>
        <control type="spincontrol" id="121">
            <posx>-100</posx>
            <posy>-100</posy>
            <visible>false</visible>
        </control>
        <control type="group">
        	<posy>0</posy>
            <animation type="WindowOpen">
                <effect type="fade" start="0" end="100" tween="sine" easing="inout" time="250" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" start="100" end="0" tween="sine" easing="inout" time="250" />
            </animation>
            <control type="textbox" id="100">
        		<description>textarea</description>
        		<posx>100</posx>
        		<posy>90</posy>
        		<width>1720</width>
        		<height>590</height>
        		<autoscroll time="2000" delay="10000" repeat="10000">!Control.HasFocus(101)</autoscroll>
        		<font>Font-MusicVis-Lyrics</font>
        		<textcolor>77white</textcolor>
        		<align>center</align>
        	</control>
        	<control type="list" id="110">
        	    <posx>0</posx>
        	    <posy>0</posy>
        	    <width>1920</width>
        	    <height>350</height>
        		<onleft>112</onleft>
        		<onright>112</onright>
        		<onup>110</onup>
        		<ondown>110</ondown>
        		<viewtype label="535">list</viewtype>
        		<pagecontrol>112</pagecontrol>
        		<scrolltime tween="sine" easing="out">0</scrolltime>
        		<focusposition>2</focusposition>
        		<movement>0</movement>
        		<itemlayout width="1720" height="68">
        		</itemlayout>
        		<focusedlayout width="1720" height="68">
        		</focusedlayout>
        	</control>
        	<control type="group">
        		<visible>!Control.IsVisible(100)</visible>
				<control type="label">
					<posx>0</posx>
					<posy>325</posy>
					<width>1920</width>
					<height>100</height>
					<label fallback="•••">$INFO[Container(110).ListItem(-1).Label]</label>
					<font>Font-MusicVis-Lyrics</font>
					<align>center</align>
					<textcolor>77bbbbbb</textcolor>
					<scrollspeed>80</scrollspeed>
					<pauseatend>0</pauseatend>
					<scrollsuffix>           ...           </scrollsuffix>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>390</posy>
					<width>1920</width>
					<height>100</height>
					<label fallback="•••">$INFO[Container(110).ListItem.Label]</label>
					<font>Font-MusicVis-Lyrics-Big</font>
					<align>center</align>
					<textcolor>77ffffff</textcolor>
					<scrollspeed>80</scrollspeed>
					<pauseatend>0</pauseatend>
					<scrollsuffix>           ...           </scrollsuffix>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>460</posy>
					<width>1920</width>
					<height>100</height>
					<label fallback="•••">$INFO[Container(110).ListItem(1).Label]</label>
					<font>Font-MusicVis-Lyrics</font>
					<align>center</align>
					<textcolor>77bbbbbb</textcolor>
					<scrollspeed>80</scrollspeed>
					<pauseatend>0</pauseatend>
					<scrollsuffix>           ...           </scrollsuffix>
				</control>
			</control>
        	<control type="scrollbar" id="112">
        	    <description>Scrollbar</description>
        	    <posx>1830</posx>
        	    <posy>59</posy>
        	    <width>6</width>
        	    <height>544</height>
        	    <onup>112</onup>
        	    <ondown>112</ondown>                  
        	    <onleft>110</onleft>
        	    <onright>110</onright>
        	    <texturesliderbar border="1">views/other/scrollbar-sq.png</texturesliderbar>
        	    <texturesliderbarfocus border="1">views/other/scrollbar-sq.png</texturesliderbarfocus>
        	    <orientation>vertical</orientation>
        	    <showonepage>false</showonepage>
        	    <animation effect="fade" start="85" end="50" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(112)">Conditional</animation>
        	    <visible>Control.IsVisible(110)</visible>
        	</control>
        	<control type="list" id="120">
        	    <posx>100</posx>
        	    <posy>30</posy>
        	    <width>1720</width>
        	    <height>350</height>
        		<onleft>122</onleft>
        		<onright>122</onright>
        		<onup>120</onup>
        		<ondown>120</ondown>
        		<viewtype label="535">list</viewtype>
        		<pagecontrol>122</pagecontrol>
        		<scrolltime tween="sine" easing="out">600</scrolltime>
        		<focusposition>2</focusposition>
        		<movement>0</movement>
        		<itemlayout width="1720" height="68">
        		    <control type="label">
        		        <posx>860</posx>
        				<posy>0</posy>
        				<width>1720</width>
        				<height>68</height>
        				<label fallback="•••">$INFO[ListItem.Label]</label>
        				<font>Font-Condensed-S60</font>
        				<align>center</align>
        				<textcolor>aawhite</textcolor>
        		    </control>
        		</itemlayout>
        		<focusedlayout width="1720" height="68">
        		    <control type="label">
        		        <posx>860</posx>
        		    	<posy>0</posy>
        		    	<width>1720</width>
        		    	<height>68</height>
        		    	<label fallback="•••">$INFO[ListItem.Label,[B],[/B]]</label>
        		    	<font>Font-Condensed-S60</font>
        		    	<align>center</align>
        		    	<textcolor>eewhite</textcolor>
        		    </control>
        		</focusedlayout>
        	</control>
        	<control type="scrollbar" id="122">
        	    <description>Scrollbar</description>
        	    <posx>1830</posx>
        	    <posy>59</posy>
        	    <width>6</width>
        	    <height>544</height>
        	    <onup>122</onup>
        	    <ondown>122</ondown>                  
        	    <onleft>120</onleft>
        	    <onright>120</onright>
        	    <texturesliderbar border="1">views/other/scrollbar-sq.png</texturesliderbar>
        	    <texturesliderbarfocus border="1">views/other/scrollbar-sq.png</texturesliderbarfocus>
        	    <orientation>vertical</orientation>
        	    <showonepage>false</showonepage>
        	    <animation effect="fade" start="85" end="50" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(122)">Conditional</animation>
        	    <visible>Control.IsVisible(120)</visible>
        	</control>
        </control>
    </controls>
</window>