<window>
    <defaultcontrol>-</defaultcontrol>
    <zorder>5</zorder>
    <controls>
        <control type="group">
            <visible>Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation)</visible>
            <animation type="WindowOpen">
                <effect type="fade" start="0" end="100" time="300" tween="sine" easing="inout" />
                <effect type="slide" start="0,-20" end="0" time="280" tween="sine" easing="inout" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" start="100" end="0" time="200" tween="sine" easing="inout" />
                <effect type="slide" start="0" end="0,-20" time="200" tween="sine" easing="inout" />
            </animation>
            <animation type="Visible">
                <effect type="fade" start="0" end="100" time="300" tween="sine" easing="inout" />
                <effect type="slide" start="0,-20" end="0" time="280" tween="sine" easing="inout" />
            </animation>
            <animation type="Hidden">
                <effect type="fade" start="100" end="0" time="200" tween="sine" easing="inout" />
                <effect type="slide" start="0" end="0,-20" time="200" tween="sine" easing="inout" />
            </animation>
            <animation effect="slide" end="20" condition="Skin.HasSetting(osd.wideinfo) + Window.IsActive(seekbar)">Conditional</animation>
            <posy>-30</posy>
			<posx>1670</posx>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>250</width>
				<height>110</height>
				<bordertexture border="40">arctic/common/border-20.png</bordertexture>
				<bordersize>20</bordersize>
				<texture border="25">arctic/common/whitepanel8.png</texture>
				<aspectratio>stretch</aspectratio>
				<colordiffuse>mod-osdbar</colordiffuse>
				<visible>!Skin.HasSetting(osd.darkpanel) + [!Skin.HasSetting(osd.wideinfo) | [!Window.IsActive(seekbar) + !Window.IsActive(videoosd)]]</visible>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>250</width>
				<height>110</height>
				<bordertexture border="40">arctic/common/border-20.png</bordertexture>
				<bordersize>20</bordersize>
				<texture border="25">arctic/common/panel.png</texture>
				<aspectratio>stretch</aspectratio>
				<colordiffuse>mod-osdbar-dark</colordiffuse>
				<visible>Skin.HasSetting(osd.darkpanel) + [!Skin.HasSetting(osd.wideinfo) | [!Window.IsActive(seekbar) + !Window.IsActive(videoosd)]]</visible>
			</control>
			<control type="label">
				<description>Mute Label</description>
				<posx>28</posx>
				<posy>43</posy>
				<width>150</width>
				<label>42440</label>
				<font>Font-Alaska-S28-L</font>
				<textcolor>$VAR[osd.text.dark]</textcolor>
				<shadowcolor>1a000000</shadowcolor>
				<align>center</align>
				<scroll>No</scroll>
			</control>
            <control type="image">
                <description>Mute image</description>
                <posx>145</posx>
                <posy>13</posy>
                <width>90</width>
                <height>90</height>
                <texture>overlays/volume/muted.png</texture>
                <colordiffuse>$VAR[osd.text.normal]</colordiffuse>
                <aspectratio aligny="center">keep</aspectratio>
            </control>
        </control>
    </controls>
</window>