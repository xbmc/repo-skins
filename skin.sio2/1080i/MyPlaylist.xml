<?xml version="1.0" encoding="UTF-8"?>
<window>
    <views>50</views>
    <defaultcontrol always="true">50</defaultcontrol>
    <include>OpenClose</include>
    <controls>
        <include>BlackBackground</include>
        <control type="image" description="Thumb">
            <centerleft>1510</centerleft>
            <centertop>460</centertop>
            <width>640</width>
            <height>640</height>
            <include>Icon_Fade</include>
            <texture fallback="defaultalbumcover.png">$INFO[ListItem.Art(thumb)]</texture>
            <aspectratio aligny="bottom">keep</aspectratio>
        </control>
        <control type="group" description="List">
            <left>165</left>
            <top>282</top>
            <control type="list" id="50">
                <width>900</width>
                <height>798</height>
                <onleft>9000</onleft>
                <onright>noop</onright>
                <onup>50</onup>
                <ondown>50</ondown>
                <viewtype label="535">List</viewtype>
                <scrolltime tween="sine" easing="inout">280</scrolltime>
                <itemlayout width="840" height="75">
                    <control type="label" description="Main Label">
                        <width>600</width>
                        <left>80</left>
                        <height>65</height>
                        <width>680</width>
                        <selectedcolor>darktext</selectedcolor>
                        <textcolor>darktext</textcolor>
                        <aligny>center</aligny>
                        <font>size36</font>
                        <scroll>false</scroll>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
                    <control type="image" description="playing">
                        <visible>Player.HasAudio</visible>
                        <visible>String.IsEqual(ListItem.Title,MusicPlayer.Title)</visible>
                        <left>20</left>
                        <height>70</height>
                        <width>35</width>
                        <aspectratio>keep</aspectratio>
                        <texture colordiffuse="black">images/NowPlaying.png</texture>
                    </control>
                </itemlayout>
                <focusedlayout width="840" height="75">
                    <control type="group">
                        <animation effect="zoom" time="120" start="100" end="105" center="auto" tween="Back" easing="Out">Focus</animation>
                        <control type="image">
                            <top>12</top>
                            <left>-50</left>
                            <height>100</height>
                            <width>902</width>
                            <texture colordiffuse="33ffffff">shadow.png</texture>
                        </control>
                        <control type="image">
                            <height>70</height>
                            <width>840</width>
                            <texture border="8">images/White.png</texture>
                        </control>
                        <control type="label" description="Main Label">
                            <left>80</left>
                            <height>65</height>
                            <width>680</width>
                            <textcolor>black</textcolor>
                            <aligny>center</aligny>
                            <font>size36</font>
                            <scroll>false</scroll>
                            <label>$INFO[ListItem.Title]</label>
                        </control>
                        <control type="label" description="time Label">
                            <right>20</right>
                            <height>70</height>
                            <width>100</width>
                            <textcolor>black</textcolor>
                            <selectedcolor>black</selectedcolor>
                            <align>right</align>
                            <aligny>center</aligny>
                            <font>size30</font>
                            <scroll>false</scroll>
                            <label>$INFO[ListItem.Duration]</label>
                        </control>
                        <control type="image" description="playing">
                            <visible>Player.HasAudio</visible>
                            <visible>String.IsEqual(ListItem.Title,MusicPlayer.Title)</visible>
                            <left>20</left>
                            <height>70</height>
                            <width>35</width>
                            <aspectratio>keep</aspectratio>
                            <texture colordiffuse="black">images/NowPlaying.png</texture>
                        </control>
                    </control>
                </focusedlayout>
            </control>
        </control>
        <control type="group" description="Side menu 9000 group">
            <visible allowhiddenfocus="true">ControlGroup(9000).HasFocus()</visible>
            <include>DialogOpenCloseVisible</include>
            <control type="image" description="List back">
                <centerleft>960</centerleft>
                <centertop>540</centertop>
                <width>802</width>
                <height>906</height>
                <aspectratio>stretch</aspectratio>
                <texture border="50">images/ContextMenu.png</texture>
                <colordiffuse>dialog</colordiffuse>
            </control>
            <control type="grouplist" id="9000">
                <include>DialogGLs</include>
                <control type="radiobutton" id="20" description="Shuffle">
                    <radioleft>630</radioleft>
                    <include>DialogButt</include>
                    <label>191</label>
                </control>
                <control type="button" id="21" description="Save">
                    <include>DialogButt</include>
                    <label>190</label>
                </control>
                <control type="button" id="22" description="Clear">
                    <include>DialogButt</include>
                    <label>192</label>
                </control>
                <control type="button" id="23" description="Play">
                    <include>DialogButt</include>
                    <label>208</label>
                </control>
                <control type="button" id="26" description="Repeat">
                    <include>DialogButt</include>
                    <label>-</label>
                </control>
            </control>
        </control>
        <control type="label">
            <left>180</left>
            <top>45</top>
            <font>shelf</font>
            <textcolor>infos</textcolor>
            <info>ListItem.Album</info>
        </control>
        <control type="label">
            <left>180</left>
            <top>112</top>
            <font>size36B</font>
            <textcolor>darktext</textcolor>
            <info>ListItem.Artist</info>
        </control>
        <control type="grouplist">
            <left>180</left>
            <top>174</top>
            <orientation>horizontal</orientation>
            <control type="label">
                <width>auto</width>
                <font>size30B</font>
                <textcolor>dimgray</textcolor>
                <info>ListItem.Year</info>
            </control>
            <control type="label">
                <width>auto</width>
                <font>size30B</font>
                <textcolor>dimgray</textcolor>
                <label>$INFO[ListItem.Genre,  ]</label>
            </control>
            <control type="label">
                <width>auto</width>
                <font>size30B</font>
                <textcolor>dimgray</textcolor>
                <label>$INFO[Container(50).NumItems,  , $LOCALIZE[134]]</label>
            </control>
        </control>
    </controls>
</window>
