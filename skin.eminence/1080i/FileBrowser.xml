<?xml version="1.0" encoding="UTF-8"?>
<window id="126">
    <defaultcontrol always="true">450</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <zorder>10</zorder>
    <onunload>ClearProperty(showimages,home)</onunload>
    <controls>

        <control type="group">
            <visible>!Window.IsActive(DialogNetworkSetup.xml)</visible>
            <posx>horzpad</posx>
            <posy>topoffset</posy>
            <include>Animation.SlideOpen.Left</include>
            <control type="label" id="311">
                <include>DefSideLabelCoords</include>
                <label>20333</label>
            </control>
        </control>
        <control type="group">
            <posx>horzpad</posx>
            <posy>listy</posy>
            <visible>!Window.IsActive(DialogNetworkSetup.xml)</visible>
            <include>Animation.FadeIn</include>
            <include>Animation.FadeOut</include>
            
            
            <control type="label" id="412">
                <description>Content Picker label</description>
                <posx>20</posx>
                <posy>10</posy>
                <width>1438</width>
                <align>left</align>
                <font>Font-ListInfo-Small</font>
                <textcolor>Disabled</textcolor>
            </control>
            
            <control type="panel" id="450">
                <posx>listx</posx>
                <posy>topoffset</posy>
                <width>1458</width>
                <height>560</height>
                <onleft>9100</onleft>
                <onright>9100</onright>
                <onup>53</onup>
                <ondown>53</ondown>
                <include>DefOnBack</include>
                <pagecontrol>60</pagecontrol>
                <viewtype label="539">list</viewtype>
                <scrolltime tween="quadratic">400</scrolltime>
                <orientation>vertical</orientation>

                <itemlayout width="threecollist" height="fivelinelist">

                    <control type="image">
                        <width>threecolborder</width>
                        <height>fivelineborder</height>
                        <texture colordiffuse="PosterBorder" border="5">common/border-inner.png</texture>
                    </control>
                    <control type="image">
                        <posx>globalpad</posx>
                        <posy>globalpad</posy>  
                        <width>fiveline</width>
                        <height>fiveline</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[Listitem.FileNameAndPath]</texture>
                        <visible>substring(ListItem.FileNameAndPath,special://skin/extras/icons/) | !IsEmpty(Window(home).Property(showimages))</visible>
                    </control>
                    <control type="image">
                        <posx>globalpad</posx>
                        <posy>globalpad</posy>  
                        <width>fiveline</width>
                        <height>fiveline</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[Listitem.Icon]</texture>
                        <visible>!substring(ListItem.FileNameAndPath,special://skin/extras/icons/) + IsEmpty(Window(home).Property(showimages))</visible>
                    </control>
                    <control type="label">
                        <right>30</right>
                        <posy>15</posy>
                        <width>300</width>
                        <align>right</align>
                        <aligny>center</aligny>
                        <textcolor>PanelFG</textcolor>
                        <label>$VAR[VARLabel]</label>
                        <animation effect="slide" end="0,18" condition="IsEmpty(ListItem.Label2)">Conditional</animation>
                    </control>
                    <control type="label">
                        <right>30</right>
                        <posy>48</posy>
                        <width>300</width>
                        <align>right</align>
                        <aligny>center</aligny>
                        <textcolor>PanelFG</textcolor>
                        <font>Font-ListInfo-Small</font>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>

                </itemlayout>

                <focusedlayout width="threecollist" height="fivelinelist">

                    <control type="image">
                        <width>threecolborder</width>
                        <height>fivelineborder</height>
                        <texture colordiffuse="PosterHighlight" border="5">common/white.png</texture>
                    </control>
                    <control type="image">
                        <posx>globalpad</posx>
                        <posy>globalpad</posy>  
                        <width>fiveline</width>
                        <height>fiveline</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[Listitem.FileNameAndPath]</texture>
                        <visible>substring(ListItem.FileNameAndPath,special://skin/extras/icons/) | !IsEmpty(Window(home).Property(showimages))</visible>
                    </control>
                    <control type="image">
                        <posx>globalpad</posx>
                        <posy>globalpad</posy>  
                        <width>fiveline</width>
                        <height>fiveline</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[Listitem.Icon]</texture>
                        <visible>!substring(ListItem.FileNameAndPath,special://skin/extras/icons/) + IsEmpty(Window(home).Property(showimages))</visible>
                    </control>
                    <control type="label">
                        <right>30</right>
                        <posy>15</posy>
                        <width>300</width>
                        <align>right</align>
                        <aligny>center</aligny>
                        <textcolor>Selected</textcolor>
                        <label>$VAR[VARLabel]</label>
                        <animation effect="slide" end="0,18" condition="IsEmpty(ListItem.Label2)">Conditional</animation>
                    </control>
                    <control type="label">
                        <right>30</right>
                        <posy>48</posy>
                        <width>300</width>
                        <align>right</align>
                        <aligny>center</aligny>
                        <textcolor>Selected</textcolor>
                        <font>Font-ListInfo-Small</font>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>

                </focusedlayout>

            </control>
            
            
            

        </control>
        
        <control type="group">      
            <include>Animation.FadeIn</include>
            <include>Animation.FadeOut</include>
            <visible>!Window.IsActive(DialogNetworkSetup.xml)</visible>
            <posy>160</posy>
            <posx>20</posx>      
            <control type="grouplist" id="9100">
                <onup>450</onup>
                <itemgap>32</itemgap>
                <include>DefSettingsOKCancelGroup</include>
                <control type="button" id="413">
                    <description>Ok</description>
                    <label>186</label>
                    <include>DefSettingsOKCancelButton</include>
                </control>

                <control type="button" id="414">
                    <description>Cancel</description>
                    <label>222</label>
                    <include>DefSettingsOKCancelButton</include>
                </control>

                <control type="button" id="415">
                    <description>Create Folder</description>
                    <label>119</label>
                    <include>DefSettingsOKCancelButton</include>
                </control>
            </control>
        </control>

    </controls>

</window>
