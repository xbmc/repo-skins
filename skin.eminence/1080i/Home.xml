<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="0">
    <defaultcontrol always="false">301</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <background>0</background>
    <onunload>ClearProperty(bgwidget,home)</onunload>
    <onunload>ClearProperty(bgwidget.type,home)</onunload>
    <onunload>ClearProperty(closeosd,home)</onunload>
    <onload>SetProperty(previoushub,home,home)</onload>
    <onload>ClearProperty(globalsearch,home)</onload>
    <onload>ClearProperty(librarynode,home)</onload>
    <onload condition="IsEmpty(Window(home).Property(widget))">SetProperty(widget,movies,home)</onload>
    <onload condition="!Skin.HasSetting(skin.init) | !Skin.HasSetting(skin.init2)">AlarmClock(Skin.Initialization,ReplaceWindow(startup),00:01,silent)</onload>
    <controls>
        <include>GlobalBackground</include>
        
        
        <include>Home-Menu</include>
        <include>WidgetDownList</include>
        
        <control type="image">
            <include>Dimensions_Fullscreen</include>
            <texture colordiffuse="Background">common/white.png</texture>
            <include>Animation.FadeIn</include>
            <include>Animation.FadeOut</include>
            <visible>Window.IsActive(DialogAddonSettings.xml) | Window.IsActive(DialogSelect.xml) | Window.IsActive(DialogAddonInfo.xml) | Window.IsActive(DialogAlbumInfo.xml) | Window.IsActive(DialogVideoInfo.xml) | Window.IsActive(DialogFavourites.xml) | Window.IsActive(DialogMediaFilter.xml) | Window.IsActive(DialogMediaSource.xml) | Window.IsActive(DialogPVRGuideInfo.xml) | Window.IsActive(DialogContentSettings.xml)</visible>
        </control>
        
        <control type="group">
            <include condition="Window.Previous(fullscreenvideo) + !Player.ShowInfo + !Player.Paused">Animation.FadeIn</include>
            <animation effect="slide" start="0" end="0,-200" time="200" condition="Control.HasFocus(9600)">Conditional</animation>
            <include>GlobalTopBar</include>
        </control>
        
        <control type="button" id="399">
            <posx>-1920</posx>
            <visible allowhiddenfocus="true">false</visible>
            <onfocus>$VAR[HomeFocus]</onfocus>
            <onclick>$VAR[HomeFocus]</onclick>
            <onback>$VAR[HomeFocus]</onback>
            <onup>$VAR[HomeFocus]</onup>
            <ondown>$VAR[HomeFocus]</ondown>
            <onleft>$VAR[HomeFocus]</onleft>
            <onright>$VAR[HomeFocus]</onright>
        </control>
        
        
        
    </controls>

</window>
