	<include name="movieinformation_OnLoadUnload">
		<onload condition="Skin.HasSetting(Trailer_Autoplay) + String.IsEqual(Window(home).Property(Trailer_Autoplay),true)">PlayerControl(Stop)</onload>
		<onload condition="Skin.HasSetting(Trailer_Autoplay) + String.IsEqual(Window(home).Property(Trailer_Autoplay),true)">ClearProperty(Trailer_Autoplay,home)</onload>
		<onload condition="System.AddonIsEnabled(script.copacetic.helper) + !String.IsEmpty(ListItem.Genre)">RunScript(script.copacetic.helper,action=split_random_return,string=$INFO[ListItem.Genre],name=RandomGenre)</onload>
		<onload condition="System.AddonIsEnabled(script.copacetic.helper) + !String.IsEmpty(ListItem.Director)">RunScript(script.copacetic.helper,action=split_random_return,string=$INFO[ListItem.Director],name=RandomDirector)</onload>
		<onload condition="System.AddonIsEnabled(script.copacetic.helper) + String.IsEqual(ListItem.DBType,episode)">RunScript(script.copacetic.helper,action=split,string=$INFO[ListItem.Writer],name=WriterSplit)</onload>
		<onload condition="!String.Contains(ListItem.Path,themoviedb.helper)">SetProperty(SelectedItem,$INFO[ListItem.DBID],movieinformation)</onload>
		<onload condition="String.Contains(ListItem.Path,themoviedb.helper)">SetProperty(SelectedItem,$INFO[ListItem.Property(tmdb_id)],movieinformation)</onload>
		<onload condition="System.AddonIsEnabled(script.copacetic.helper) + String.Contains(ListItem.Path,themoviedb.helper)">RunScript(script.copacetic.helper,action=split,string=$INFO[ListItem.Studio],name=StudioSplit)</onload>
		<onload>SetProperty(ResetScroll," ")</onload>
		<include content="Infoscreen_PathTracing">
			<param name="media_window" value="videos" />
			<param name="dbtype" value="video" />
			<param name="type1" value="movie" />
			<param name="type1_path" value="movies/titles" />
			<param name="type2" value="tvshow" />
			<param name="type2_path" value="tvshow/titles" />
		</include>
		<include content="Widget_Position_Reset_OnLoad" />	
		<onunload>ClearProperty(Focused_Button,movieinformation)</onunload>		
		<onunload>ClearProperty(RandomGenre,home)</onunload>
		<onunload>ClearProperty(RandomDirector,home)</onunload>
		<onunload>ClearProperty(WriterSplit.0,home)</onunload>
		<onunload>ClearProperty(StudioSplit.0,home)</onunload>
	</include>

	<include name="musicinformation_OnLoadUnload">
		<onload condition="String.IsEqual(ListItem.DBType,artist)">SetProperty(Info_Type,artist,musicinformation)</onload>
		<onload condition="String.IsEqual(ListItem.DBType,album)">SetProperty(Info_Type,album,musicinformation)</onload>
		<onload>SetProperty(SelectedItem,$INFO[ListItem.DBID],musicinformation)</onload>
		<onload condition="System.AddonIsEnabled(script.copacetic.helper) + !String.IsEmpty(ListItem.Genre)">RunScript(script.copacetic.helper,action=split_random_return,string=$INFO[ListItem.Genre],separator=/,name=RandomGenre)</onload>
		<onload>SetProperty(ResetScroll," ")</onload>
		<include content="Infoscreen_PathTracing">
			<param name="media_window" value="music" />
			<param name="dbtype" value="music" />
			<param name="type1" value="artist" />
			<param name="type1_path" value="artists" />
			<param name="type2" value="album" />
			<param name="type2_path" value="albums" />
		</include>
		<include content="Widget_Position_Reset_OnLoad" />
		<onunload>ClearProperty(Focused_Button,musicinformation)</onunload>
		<onunload>ClearProperty(RandomGenre,home)</onunload>
	</include>

