<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- screencalibration -->
	<defaultcontrol always="true">8</defaultcontrol>
	<include content="WindowOpenClose_Fade_Animation" />
	<controls>
		<control type="videowindow" id="20" />
		<!-- Top left mover -->
		<control type="mover" id="8">
			<width>90</width>
			<height>90</height>
			<texturefocus colordiffuse="$VAR[Primary_Color]">dialogs/mover_tl_focused.png</texturefocus>
			<texturenofocus colordiffuse="$VAR[Unfocused_Color]">dialogs/mover_tl_unfocused.png</texturenofocus>
		</control>
		<!-- Bottom right mover -->
		<control type="mover" id="9">
			<width>90</width>
			<height>90</height>
			<texturefocus colordiffuse="$VAR[Primary_Color]">dialogs/mover_br_focused.png</texturefocus>
			<texturenofocus colordiffuse="$VAR[Unfocused_Color]">dialogs/mover_br_unfocused.png</texturenofocus>
		</control>
		<!-- Subtitle position mover -->
		<control type="mover" id="10">
			<centerleft>50%</centerleft>
			<bottom>90</bottom>
			<width>360</width>
			<height>30</height>
			<texturefocus colordiffuse="$VAR[Primary_Color]">dialogs/mover_sub_focused.png</texturefocus>
			<texturenofocus colordiffuse="$VAR[Unfocused_Color]">dialogs/mover_sub_unfocused.png</texturenofocus>
		</control>
		<!-- Pixel aspect ratio box -->
		<control type="resize" id="11">
			<width>120</width>
			<height>120</height>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<texturefocus colordiffuse="$VAR[Unfocused_Color]">views/white_100.png</texturefocus>
			<texturenofocus />
			<pulseonselect>no</pulseonselect>
		</control>
		<control type="grouplist">
			<centerleft>50%</centerleft>
			<width>1800</width>
			<orientation>vertical</orientation>
			<align>center</align>
			<itemgap>90</itemgap>
			<!-- Coordinates label -->
			<control type="label" id="2">
				<width>1800</width>
				<height>60</height>
				<align>center</align>
				<textcolor>$VAR[Primary_Color]</textcolor>
				<font>MusicPlayer_Title</font>
			</control>
			<!-- Help information -->
			<control type="label" id="3">
				<width>1800</width>
				<height>60</height>
				<align>center</align>
				<textcolor>$VAR[Primary_Color]</textcolor>
				<font>MusicPlayer_Info</font>
			</control>
		</control>
	</controls>
</window>