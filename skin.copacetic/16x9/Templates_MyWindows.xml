								<font>PVR_Time</font>
								<width>100%</width>
								<centertop>50%</centertop>
								<height>30</height>
								<textcolor>$VAR[Light_Color]</textcolor>
								<textoffsetx>10</textoffsetx>
							</control>
							<control type="image">
								<centertop>50%</centertop>
								<height>30</height>
								<texture colordiffuse="$VAR[Accent_Color]" border="4">pvr/tvguide_focusedlayout_border_left.png</texture>
