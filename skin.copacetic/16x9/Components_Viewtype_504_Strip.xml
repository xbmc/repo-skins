			<include content="Icon_Component_Multiart_Animated" condition="Skin.HasSetting(Multiart_Slideshow) + !Window.Is(movieinformation) + !Window.Is(musicinformation) + !Window.Is(songinformation) + !Window.Is(addoninformation) + !Window.Is(loginscreen)">
