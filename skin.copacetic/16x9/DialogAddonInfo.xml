<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- addoninformation -->
	<onload condition="!String.Contains(Control.GetLabel(13),*) | !Skin.String(AutoUpdate)">Skin.SetString(AutoUpdate,off)</onload>
	<onunload>ClearProperty(Focused_Button,addoninformation)</onunload>
	<onunload>ClearProperty(AddonDetails,home)</onunload>
	<defaultcontrol always="true">4010</defaultcontrol>
	<controls>
		<include content="Infoscreen_Header_Template">
			<param name="windowname" value="addoninformation" />
			<param name="visible" value="!Window.IsVisible(1104) + !$EXP[Hidden_Focus_Setter] + !$EXP[Infoscreen_Widget_HasFocus] + !Window.IsVisible(selectdialog) + !Window.IsVisible(addonsettings)" />
			<param name="default_control" value="SetFocus(3000,0,absolute)" />
			<include content="Infoscreen_Header">
				<param name="visible" value="!ControlGroup(3000).HasFocus(99) | $EXP[Hidden_Focus_Setter]" />
				<param name="left" value="780" />
				<param name="right" value="120" />
				<param name="align" value="left" />
			</include>
		</include>
		<include content="Infoscreen_Furniture_Template">
			<param name="visible" value="!Window.IsVisible(selectdialog) + !Window.IsVisible(addonsettings)" />
			<include content="Infoscreen_Widget_50_Screenshots" />
			<include content="DialogAddonInfo_Scrollbar" />
		</include>
	</controls>
</window>