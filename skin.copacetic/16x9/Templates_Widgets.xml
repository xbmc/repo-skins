					<param name="art_icon" value="Widget$PARAM[widget_position]_Thumbnail" />
					<param name="media_view" value="false" />
					<param name="widget_view" value="true" />
					<param name="widget_position" value="$PARAM[widget_position]" />
				</include>
				<include content="GridView_Display" condition="Skin.String(Widget$PARAM[widget_position]_View,Grid)">
					<param name="id" value="$PARAM[id]" />
					<param name="art_icon" value="Widget$PARAM[widget_position]_Thumbnail" />
					<param name="widget_position" value="$PARAM[widget_position]" />
					<param name="gridview_details_fade" value="Control.HasFocus(320$PARAM[widget_position])" />
				</include>
			</control>
			<!-- Details -->
			<control type="group">
				<visible>!$EXP[TransparentDialog_IsVisible]</visible>
				<include content="Visible_Fade_Delayed_Animation" />
				<control type="group">
					<visible>Control.HasFocus(320$PARAM[widget_position])</visible>
					<include content="Visible_Fade_Delayed_Animation" />
					<include content="BillboardView_Details" condition="Skin.String(Widget$PARAM[widget_position]_View,Billboard)">
						<param name="id" value="$PARAM[id]" />
					</include>
					<include content="ShowcaseView_Details" condition="Skin.String(Widget$PARAM[widget_position]_View,Showcase)">
						<param name="media_view" value="false" />
						<param name="id" value="$PARAM[id]" />
					</include>
					<include content="StripView_Details" condition="Skin.String(Widget$PARAM[widget_position]_View,Strip)">
						<param name="id" value="$PARAM[id]" />
					</include>
					<include content="GridView_Details" condition="Skin.String(Widget$PARAM[widget_position]_View,Grid)">
						<param name="id" value="$PARAM[id]" />
						<param name="widget_position" value="$PARAM[widget_position]" />
