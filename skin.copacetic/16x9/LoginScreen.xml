<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- loginscreen -->
	<defaultcontrol always="true">4010</defaultcontrol>
	<backgroundcolor>$VAR[Dark_Color]</backgroundcolor>
	<include content="WindowOpenClose_Fade_Delayed_Animation" />
	<controls>
		<include content="loginscreen_Hidden" />
		<include content="Light_Theme_Background" condition="Skin.HasSetting(Background_Disabled)" />
		<include content="Background_Global" condition="!Skin.HasSetting(Background_Disabled)">
			<include content="Background_List" condition="$PARAM[local_list_content]">
				<param name="content_source" value="$PARAM[content_source]" />
			</include>
		</include>
		<include content="Default_Dialog_Panel_Layout">
			<param name="visible" value="!$EXP[Hidden_Focus_Setter] + !System.HasVisibleModalDialog" />
			<param name="visible_animation" value="Visible_Fade_Delayed_Extra_Long_Animation" />
			<param name="panel_edge_top" value="120" />
			<param name="panel_edge_bottom" value="120" />
			<control type="label">
				<label>$VAR[loginscreen_Welcome_Label] $LOCALIZE[31900]</label>
				<top>180</top>
				<height>60</height>
				<centerleft>50%</centerleft>
				<width>1200</width>
				<align>center</align>
				<font>Title_Breadcrumb_Label</font>
				<textcolor>$VAR[Light_Color]</textcolor>
			</control>
			<control type="label">
				<centerleft>50%</centerleft>
				<width>720</width>
				<top>840</top>
				<height>60</height>
				<label>$INFO[ListItem.Label]</label>
				<textcolor>$VAR[Light_Color]</textcolor>
				<font>Grid_Title</font>
				<align>center</align>
				<aligny>center</aligny>
			</control>
			<include content="Button_Group_Template">
				<param name="right" value="900" />
				<param name="bottom" value="0" />
				<param name="onup" value="52" />
				<param name="button1" value="true" />
				<param name="button1_texture" value="Power" />
				<param name="button1_onclick" value="ActivateWindow(shutdownmenu)" />
				<param name="color" value="$VAR[Settings_Label_Color]" />
				<param name="unfocused_color" value="$VAR[Settings_Label_Color]" />
			</include>
		</include>
		<include content="StripView_Art_loginscreen" />
	</controls>
</window>