<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="PVR_Info_Box">
		<param name="visible" default="true" />
		<param name="left" />
		<param name="right" />
		<param name="bottom" />
		<param name="height" />
		<param name="plot_height_max" />
		<definition>
			<control type="grouplist">
				<visible>$PARAM[visible]</visible>
				<include content="Visible_Fade_Animation" />
				<left>$PARAM[left]</left>
				<right>$PARAM[right]</right>
				<bottom>$PARAM[bottom]</bottom>
				<height>$PARAM[height]</height>
				<itemgap>0</itemgap>
				<align>center</align>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="label">
					<height>45</height>
					<font>MusicPlayer_Title</font>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>$VAR[Light_Color]</textcolor>
					<visible>!String.IsEmpty(ListItem.Label)</visible>
				</control>
				<control type="label">
					<height>35</height>
					<font>Grid_Info</font>
					<label>[UPPERCASE]$INFO[ListItem.StartTime]$INFO[ListItem.EndTime,-]$VAR[ListItem_EpisodeName_Divider_Bold, ]$INFO[ListItem.EpisodeName, ]$VAR[ListItem_Genre_Divider_Bold, ]$INFO[ListItem.Genre, ][/UPPERCASE]</label>
					<textcolor>$VAR[Light_Color]</textcolor>
				</control>
				<control type="textbox">
					<top>10</top>
					<height max="$PARAM[plot_height_max]">auto</height>
					<font>Description</font>
					<label>$INFO[ListItem.Plot]</label>
					<visible>!String.IsEmpty(ListItem.Plot)</visible>
				</control>
			</control>
		</definition>
	</include>

	<include name="PVR_Progress">
		<control type="progress">
			<visible>ListItem.HasEpg</visible>
			<width>90</width>
			<left>15</left>
			<height>6</height>
			<centertop>50%</centertop>
			<info>ListItem.Progress</info>
			<texturebg colordiffuse="$VAR[Progress_Light_Background_Color]">views/white_100.png</texturebg>
			<midtexture colordiffuse="$VAR[Light_Color]">views/white_100.png</midtexture>
		</control>
	</include>

</includes>