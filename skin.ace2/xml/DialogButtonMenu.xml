<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog"><!-- Ace 2 -->
	<defaultcontrol always="true">9100</defaultcontrol>
	<controls>
		<control type="group">
			<include>animation_dialog_popup</include>			
			<include content="context_furniture">	
				<param name="left" value="619" />
				<param name="top" value="155" />
				<param name="label" value="31177" />
				<param name="visible" value="true" />
			</include>
			<control type="list" id="9100">
				<include content="context_list">
					<param name="id" value="9100" />
					<param name="left" value="619" />
					<param name="top" value="155" />					
					<param name="width" value="681" />
					<param name="height" value="1005" />
					<param name="onleft" value="Dialog.Close(111)" />
					<param name="onright" value="Dialog.Close(111)" />
					<param name="onup" value="" />
					<param name="ondown" value="" />
					<param name="focusposition" value="0" />
					<param name="itemwidth" value="681" />
					<param name="itemheight" value="45" />
				</include>			
				<content>
					<item>
						<label>31012</label>
						<onclick>Quit()</onclick>
						<visible>System.ShowExitButton</visible>
					</item>
					<item>
						<label>31058</label>
						<onclick>Powerdown()</onclick>
						<visible>System.CanPowerDown</visible>
					</item>
					<item>
						<label>31241</label>
						<onclick>System.ExecWait("/usr/sbin/rebootfromnand")</onclick>
						<visible>[System.Platform.Android | System.Platform.Linux | System.Platform.Linux.RaspberryPi] + System.CanReboot</visible>
					</item>
					<item>
						<label>$LOCALIZE[20150]</label>
						<onclick>AlarmClock(shutdowntimer,Shutdown())</onclick>
						<visible>!System.HasAlarm(shutdowntimer)</visible>
						<visible>System.CanPowerDown | System.CanSuspend | System.CanHibernate</visible>
					</item>
					<item>
						<label>20183</label>
						<onclick>ReloadSkin()</onclick>
					</item>
					<item>
						<label>$LOCALIZE[20151] $INFO[System.AlarmPos,(,)]</label>
						<onclick>CancelAlarm(shutdowntimer)</onclick>
						<visible>System.HasAlarm(shutdowntimer)</visible>
					</item>
					<item>
						<label>$LOCALIZE[13011]</label>
						<onclick>Suspend()</onclick>
						<visible>System.CanSuspend</visible>
					</item>
					<item>
						<label>$LOCALIZE[13010]</label>
						<onclick>Hibernate()</onclick>
						<visible>System.CanHibernate</visible>
					</item>
					<item>
						<label>$LOCALIZE[13013]</label>
						<onclick>Reset()</onclick>
						<visible>System.CanReboot</visible>
					</item>
					<item>
						<label>$LOCALIZE[20126] $INFO[system.profilename]</label>
						<onclick>dialog.close(all,true)</onclick>
						<onclick>System.LogOff</onclick>
						<visible>System.Loggedon + [System.HasLoginScreen | Integer.IsGreater(System.ProfileCount,1)]</visible>
					</item>
					<item>
						<label>$VAR[master_mode_label]</label>
						<onclick>mastermode</onclick>
						<visible>System.HasLocks</visible>
					</item>
					<item>
						<label>$LOCALIZE[13017]</label>
						<onclick>InhibitIdleShutdown(true)</onclick>
						<visible>System.HasShutdown +!System.IsInhibit</visible>
					</item>
					<item>
						<label>$LOCALIZE[13018]</label>
						<onclick>InhibitIdleShutdown(false)</onclick>
						<visible>System.HasShutdown + System.IsInhibit</visible>
					</item>
					<item>
						<label>31165</label>
						<onclick>Dialog.Close(111)</onclick>
						<onclick>ActivateWindow(1161)</onclick>
						<visible>![String.IsEmpty(skin.string(preset1.on)) + String.IsEmpty(skin.string(preset2.on)) + String.IsEmpty(skin.string(preset3.on)) + String.IsEmpty(skin.string(preset4.on)) + String.IsEmpty(skin.string(preset5.on)) + String.IsEmpty(skin.string(preset6.on)) + String.IsEmpty(skin.string(preset7.on)) + String.IsEmpty(skin.string(preset8.on)) + String.IsEmpty(skin.string(preset9.on)) + String.IsEmpty(skin.string(preset10.on))] + Window.IsVisible(home)</visible>
					</item>
					<item>
						<label>31207</label>
						<onclick>Dialog.Close(111)</onclick>
						<onclick>ActivateWindow(1157)</onclick>
						<visible>$EXP[kiosk_code_control]</visible>
					</item>
					<item>
						<label>31371</label>
						<onclick>Dialog.Close(111)</onclick>
						<onclick>ActivateWindow(skinsettings)</onclick>
					</item>
					<item>
						<label>31362</label>
						<onclick>Dialog.Close(111)</onclick>
						<onclick>ActivateWindow(settings)</onclick>
					</item>
					<item>						
						<label>$VAR[settings_video_background_label]</label>
						<onclick>Skin.Togglesetting(background_video)</onclick>
						<visible>Player.HasVideo</visible>
					</item>
					<item>
						<label>$VAR[settings_audio_background_label]</label>
						<onclick>Skin.Togglesetting(background_audio)</onclick>
						<visible>Player.HasAudio</visible>
					</item>
					<item>
						<label>31035</label>
						<onclick>ActivateWindow(musicplaylist)</onclick>
					</item>
					<item>
						<label>31742</label>
						<onclick>EjectTray</onclick>
					</item>
					<item>
						<label>10003</label>
						<onclick>Dialog.Close(111)</onclick>
						<onclick>ActivateWindow(filemanager)</onclick>
					</item>
					<item>
						<label>1036</label>
						<onclick>Dialog.Close(111)</onclick>
						<onclick>ActivateWindow(favourites)</onclick>
					</item>
					<item>
						<label>$VAR[kiosk_code_label]</label>
						<onclick condition="!String.IsEqual(skin.string(kiosk_code_step),step3)">Dialog.Close(111)</onclick>
						<onclick condition="!String.IsEqual(skin.string(kiosk_code_step),step3)">ActivateWindow(1151)</onclick>
						<onclick condition="String.IsEqual(skin.string(kiosk_code_step),step3)">Skin.Reset(kiosk_code_step)</onclick>
						<visible>Skin.HasSetting(kiosk_code)</visible>
					</item>				
				</content>
			</control>
		</control>
	</controls>
</window>