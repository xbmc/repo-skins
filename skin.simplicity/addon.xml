<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="skin.simplicity"
  version="3.3.0"
  name="Simplicity"
  provider-name="igotdvds|Balinus">
  <requires>
	<import addon="xbmc.gui" version="4.0.0"/>
	<import addon="script.artwork.downloader" version="12.0.14"/>
	<import addon="service.skin.widgets" version="0.0.24"/>
	<import addon="script.favourites" version="3.2.2"/>
	<import addon="script.cu.lyrics" version="2.0.6"/>
	<import addon="script.tv.show.next.aired" version="5.0.6"/>
	<import addon="script.globalsearch" version="1.1.1"/>
  </requires>
  <extension point="xbmc.gui.skin" defaultthemename="Textures.xbt" effectslowdown="1.0" debugging="false">
    <res width="1280" height="720" aspect="16:9" default="true" folder="720p"/>
  </extension> 
  <extension point="xbmc.addon.metadata">
    <summary lang="en">A skin for XBMC from the creators of Shade.  A fresh take on a simple and elegant skin.</summary>
    <description lang="en">With PVR support, Simplicity was designed around its name, simple.  We tried to keep everything clean and fluid without losing great features.  Enjoy!</description>
    <platform>all</platform>
    <forum>http://forum.xbmc.org/forumdisplay.php?fid=138</forum>
    <email>borghor at yahoo dot ca</email>
  </extension>

</addon>
