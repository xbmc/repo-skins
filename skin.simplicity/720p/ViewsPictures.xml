			<control type="group">
				<posx>538</posx>
				<posy>-360</posy>
				<control type="label">
					<description>Title txt</description>
					<posx>20</posx>
					<posy>120</posy>
					<width>700</width>
					<height>15</height>
					<label>$INFO[ListItem.label,[COLOR=white][B]Filename[/B][/COLOR] - ]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>Simplicity_24</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
				</control>
				<control type="label">
					<description>Date time txt</description>
					<posx>20</posx>
					<posy>160</posy>
					<width>700</width>
