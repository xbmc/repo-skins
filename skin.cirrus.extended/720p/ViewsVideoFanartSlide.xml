                <visible>Container.Content(Movies)</visible>
                <posx>0</posx>
                <posy>0</posy>
                <control type="label">
                    <description>title</description>
                    <posx>20</posx>
                    <posy>-25</posy>
                    <width>500</width>
                    <height>30</height>
                    <font>cirrus_30</font>
                    <textcolor>white</textcolor>
