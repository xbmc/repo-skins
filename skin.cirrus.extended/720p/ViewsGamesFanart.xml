<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!-- ===================================================================================== -->
    <!-- ================================= FANART VIEW ID 590 ================================ -->
    <!-- ======================================== only Games  ===================== -->
    <include name="Fanart_Games">
        <control type="image">
            <!-- bottom bar background -->
            <left>0</left>
            <top>230r</top>
            <width>1280</width>
            <height>700</height>
            <aspectratio>stretch</aspectratio>
            <texture>rightlistbackground.png</texture>
            <visible>Control.IsVisible(590)</visible>
        </control>
        <control type="image">
            <left>0</left>
            <top>232r</top>
            <width>1280</width>
            <height>700</height>
            <aspectratio>stretch</aspectratio>
            <texture>rightlistbackground.png</texture>
            <visible>Control.IsVisible(590)</visible>
        </control>
        <control type="group">
            <visible>Control.IsVisible(590)</visible>
            <animation type="WindowOpen" reversible="false">
                <effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="300"/>
                <effect type="fade" start="0" end="100" time="300"/>
            </animation>
            <animation type="WindowClose" reversible="false">
                <effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300"/>
                <effect type="fade" start="100" end="0" time="300"/>
            </animation> 
            <left>0</left>
            <top>510</top>
            <control type="wraplist" id="590">
                <visible>substring(container.folderpath,plugin://plugin.program.advanced.launcher) | Window.IsVisible(VideoFiles) | Window.IsVisible(VideoLibrary) + !Container.Content(Movies) + !Container.Content(TVShows) + !Container.Content(Seasons) + !Container.Content(Episodes) + !Container.Content(Sets)</visible>
                <left>-20</left>
                <top>-10</top>
                <width>1300</width>
                <height>250</height>
                <onleft>590</onleft>
                <onright>590</onright>
                <onup>60</onup>
                <ondown condition="substring(container.folderpath,plugin://plugin.program.advanced.launcher)">ActivateWindow(1122)</ondown>
                <viewtype label="40000">fixedlist</viewtype>
                <pagecontrol>60</pagecontrol>
                <scrolltime tween="quadratic" easing="out">300</scrolltime>
                <focusposition>5</focusposition>
                <orientation>horizontal</orientation>
                <preloaditems>2</preloaditems>
                <!-- ITEM LAYOUT FOR GAMES -->
                <itemlayout height="200" width="120">
                    <control type="image">
                        <left>2</left>
                        <top>20</top>
                        <width>120</width>
                        <height>175</height>
                        <aspectratio>stretch</aspectratio>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <bordertexture border="6">ContentPanelvertical.png</bordertexture>
                        <bordersize>6</bordersize>
                    </control>
                    <control type="image">
                        <left>2</left>
                        <top>20</top>
                        <width>120</width>
                        <height>175</height>
                        <aspectratio>stretch</aspectratio>
                        <texture fallback="special://skin/extras/moviegenresposter/default.jpg">special://skin/extras/moviegenresposter/$INFO[ListItem.Label].jpg</texture>
                        <bordertexture border="6">ContentPanelvertical.png</bordertexture>
                        <bordersize>6</bordersize>
                        <visible>Container.Content(Genres) + Window.IsVisible(VideoLibrary)</visible>
                    </control>
                </itemlayout>
                <focusedlayout height="310" width="120">
                    <control type="group">
                        <animation type="Focus" reversible="false">
                            <effect type="zoom" center="55,116" start="100" end="130" time="200" easing="out" tween="cubic"/>
                        </animation>
                        <left>0</left>
                        <top>0</top>
                        <control type="image">
                            <left>2</left>
                            <top>20</top>
                            <width>120</width>
                            <height>175</height>
                            <aspectratio>stretch</aspectratio>
                            <texture>black-back.png</texture>
                            <bordertexture>ContentPanelvertical.png</bordertexture>
                            <bordersize>6</bordersize>
                        </control>
                        <control type="image">
                            <left>2</left>
                            <top>20</top>
                            <width>120</width>
                            <height>175</height>
                            <aspectratio>stretch</aspectratio>
                            <texture>$INFO[ListItem.Icon]</texture>
                            <bordertexture border="6">ContentPanelvertical.png</bordertexture>
                            <bordersize>6</bordersize>
                        </control>
                        <!-- GenreFanart Mod -->
                        <control type="image">
                            <left>2</left>
                            <top>20</top>
                            <width>120</width>
                            <height>175</height>
                            <aspectratio>stretch</aspectratio>
                            <texture fallback="special://skin/extras/moviegenresposter/default.jpg">special://skin/extras/moviegenresposter/$INFO[ListItem.Label].jpg</texture>
                            <bordersize>6</bordersize>
                            <visible>Container.Content(Genres) + Window.IsVisible(VideoLibrary)</visible>
                        </control>
                    </control>
                </focusedlayout>
            </control>

            <!-- INFO OFF GAMES -->
            <control type="group">
                <visible>Skin.HasSetting(View590HideInfo) | Window.IsVisible(VideoFiles) | Container.Content(genres)</visible>
                <left>0</left>
                <top>0</top>
                <control type="label">
                    <description>title</description>
                    <left>20</left>
                    <top>-22</top>
                    <width>800</width>
                    <height>30</height>
                    <font>cirrus_30</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <scroll>true</scroll>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>[COLOR=accent]$INFO[ListItem.Year][/COLOR] $INFO[ListItem.Label]</label>
                    <visible>Skin.HasSetting(View590HideInfo) | Window.IsVisible(VideoFiles) | Container.Content(genres)</visible>
                </control>
            </control>
            <control type="scrollbar" id="60">
                <left>-10</left>
                <top>-30</top>
                <width>1300</width>
                <height>35</height>
                <texturesliderbackground border="14,0,14,0">ScrollBarV.png</texturesliderbackground>
                <textureslidernib>ScrollBarV.png</textureslidernib>
                <textureslidernibfocus>ScrollBarV_bar_focus.png</textureslidernibfocus>
                <onup>2</onup>
                <ondown>590</ondown>
                <showonepage>false</showonepage>
                <orientation>horizontal</orientation>
                <visible allowhiddenfocus="true">Control.IsVisible(590) + Control.HasFocus(60)</visible>
            </control>
        </control>
        <!-- WHEN INFO IS NOT HIDDEN GAMES-->
        <control type="group">
            <animation type="WindowOpen" reversible="false">
                <effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="300"/>
                <effect type="fade" start="0" end="100" time="300"/>
            </animation>
            <animation type="WindowClose" reversible="false">
                <effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300"/>
                <effect type="fade" start="100" end="0" time="300"/>
            </animation>      
            <left>0</left>
            <top>110</top>
            <visible>Control.IsVisible(590) + !Skin.HasSetting(View590HideInfo) + !Container.Content(genres) + !Window.IsVisible(VideoFiles)</visible>
            <include>VisibleFadeEffect</include>
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1280</width>
                <height>380</height>
                <texture border="20">videoinfoback.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="group">
                <left>80</left>
                <top>20</top>
                <visible>Window.IsActive(1) | Window.IsVisible(VideoFiles) | Window.IsVisible(VideoLibrary)</visible>
                <control type="fadelabel">
                    <left>-60</left>
                    <top>0</top>
                    <width>470</width>
                    <height>30</height>
                    <font>cirrus_40</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <scroll>true</scroll>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>[COLOR=white][/COLOR]$INFO[ListItem.Label,]$INFO[ListItem.Property(Addon.Version),  (,)]</label>
                    <scrollout>false</scrollout>
                    <pauseatend>2000</pauseatend>
                </control>
                <control type="label">
                    <left>-60</left>
                    <top>50</top>
                    <width>470</width>
                    <height>30</height>
                    <font>cirrus_24</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <scroll>false</scroll>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Genre,[COLOR=accent]$LOCALIZE[515]:[/COLOR] ]</label>
                    <scrollout>false</scrollout>
                    <pauseatend>2000</pauseatend>
                </control>
                <!-- Addon Info -->
                <control type="label">
                    <left>-60</left>
                    <top>50</top>
                    <width>470</width>
                    <height>30</height>
                    <font>cirrus_24</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <scroll>false</scroll>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Property(Addon.Type),[COLOR=accent]$LOCALIZE[515]:[/COLOR] ]</label>
                    <scrollout>false</scrollout>
                    <pauseatend>2000</pauseatend>
                </control>
                <control type="fadelabel">
                    <left>-70</left>
                    <top>100</top>
                    <width>500</width>
                    <height>30</height>
                    <font>cirrus_30</font>
                    <textcolor>accent</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <scroll>true</scroll>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>[COLOR=accent][/COLOR]$INFO[ListItem.Studio, ]$INFO[ListItem.Year,  (,)]</label>
                    <scrollout>false</scrollout>
                    <pauseatend>2000</pauseatend>

                </control>
                <!-- Addon Info -->
                <control type="fadelabel">
                    <left>-70</left>
                    <top>100</top>
                    <width>500</width>
                    <height>30</height>
                    <font>cirrus_30</font>
                    <textcolor>accent</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <scroll>true</scroll>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>[COLOR=accent][/COLOR]$INFO[ListItem.Property(Addon.Creator), ]</label>
                    <scrollout>false</scrollout>
                    <pauseatend>2000</pauseatend>
                </control>
                <control type="textbox">
                    <description>Game Plot</description>
                    <left>-60</left>
                    <top>160</top>
                    <width>600</width>
                    <height>98</height>
                    <font>cirrus_22</font>
                    <align>justify</align>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <label>$INFO[ListItem.plot]</label>
                    <autoscroll time="2000" delay="3000" repeat="5000">Skin.HasSetting(AutoScroll)</autoscroll>
                </control>
                <!-- Addon Info -->
                <control type="textbox">
                    <description>Addon Plot</description>
                    <left>-60</left>
                    <top>160</top>
                    <width>600</width>
                    <height>98</height>
                    <font>cirrus_22</font>
                    <align>justify</align>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <label>$INFO[ListItem.Property(Addon.Description)]</label>
                    <autoscroll time="2000" delay="3000" repeat="5000">Skin.HasSetting(AutoScroll)</autoscroll>
                </control>
            </control>
            <control type="group">
                <left>-60</left>
                <control type="image">
                    <left>700</left>
                    <top>40</top>
                    <width>540</width>
                    <height>303</height>
                    <aspectratio>stretch</aspectratio>
                    <texture>black-back.png</texture>
                    <bordertexture border="8">ContentPanelvertical.png</bordertexture>
                    <bordersize>8</bordersize>
                    <visible>!Player.HasVideo | !Skin.HasSetting(videowindownoborder) | !Skin.HasSetting(videowindowglobal)</visible>
                </control>
                <control type="image">
                    <left>700</left>
                    <top>40</top>
                    <width>540</width>
                    <height>303</height>
                    <aspectratio aligny="bottom">stretch</aspectratio>
                    <fadetime>FanartCrossfadeTime</fadetime>
                    <texture fallback="splashm.png" background="true">$INFO[ListItem.Art(fanart)]</texture>
                    <bordersize>8</bordersize>
                    <visible>!Player.HasVideo | !Skin.HasSetting(videowindowglobal)</visible>
                </control>
                <control type="multiimage">
                    <left>708</left>
                    <top>48</top>
                    <width>524</width>
                    <height>287</height>
                    <aspectratio aligny="bottom">stretch</aspectratio>
                    <fadetime>FanartCrossfadeTime</fadetime>
                    <timeperimage>5000</timeperimage>
                    <imagepath background="true">$INFO[Skin.String(Menu_GameCustom1_Label)]/$INFO[ListItem.label]/extrathumb</imagepath>
                    <visible>!Player.HasVideo | !Skin.HasSetting(videowindowglobal)</visible>
                </control>
                <control type="videowindow" id="8">
                    <left>714</left>
                    <top>56</top>
                    <width>513</width>
                    <height>270</height>
                    <align>right</align>
                    <visible>Skin.Hassetting(videowindowglobal)</visible>
                    <visible>Control.IsVisible(590)</visible>
                </control> 
                <control type="label">
                    <description>Title label</description>
                    <left>810</left>
                    <top>295</top>
                    <height>30</height>
                    <width>330</width>
                    <label>$INFO[VideoPlayer.Title]$INFO[VideoPlayer.Year,[COLOR=accent] (,)[/COLOR]]</label>
                    <align>center</align>
                    <aligny>center</aligny>
                    <font>cirrus_20</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <visible>Skin.HasSetting(videowindowglobal)</visible>
                    <visible>Player.HasVideo</visible>
                    <visible>Control.IsVisible(590)</visible>
                    <visible>!Skin.HasSetting(videonotitle)</visible>
                </control>
                <control type="grouplist">
                    <description>Media Codec Flagging Images</description>
                    <left>1250</left>
                    <top>40</top>
                    <width>100</width>
                    <height>300</height>
                    <align>center</align>
                    <itemgap>30</itemgap>
                    <orientation>vertical</orientation>
                    <include>VideoCodecFlaggingConditions</include>
                    <include>AudioCodecFlaggingConditions</include>
                    <include>AspectCodecFlaggingConditions</include>
                </control>
            </control>
            <control type="grouplist">
                <description>MPAA Rating Flagging Images</description>
                <left>305</left>
                <top>305</top>
                <width>249</width>
                <align>left</align>
                <itemgap>0</itemgap>
                <orientation>horizontal</orientation>
                <!-- Gamesratingsflag Future here -->
            </control>
            <control type="image">
                <description>Rating value</description>
                <left>80</left>
                <top>315</top>
                <align>left</align>
                <width>200</width>
                <height>40</height>
                <!-- Games Genreflags Future here  -->
            </control>
            <control type="image">
                <width>120</width>
                <height>57</height>
                <left>0</left>
                <top>300</top>
                <aspectratio align="center">keep</aspectratio>
                <texture border="2">$VAR[StudioIcon]$INFO[ListItem.Studio,,.png]</texture>
                <!-- Games Studioflags here  -->
            </control>
        </control>


    </include>
</includes>
