                <height>700</height>
                <aspectratio>stretch</aspectratio>
                <texture>rightlistbackground.png</texture>
                <visible>!Container.Content(Genres)</visible>
            </control>
            <!-- bottom bar background -->
            <control type="image"> 
                <posx>0</posx>
                <posy>50r</posy>
                <width>1280</width>
                <height>700</height>
                <aspectratio>stretch</aspectratio>
                <texture>rightlistbackground.png</texture>
