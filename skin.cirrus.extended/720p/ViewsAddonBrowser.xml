<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="RightAddonView">
        <control type="group">
            <visible>Control.IsVisible(503)</visible>
            <include>VisibleFadeEffect</include>
            <control type="image">
                <!-- bottom bar background -->
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>720</height>
                <aspectratio>stretch</aspectratio>
                <texture>black-back.png</texture>
            </control>
            <control type="image">
                <!-- bottom bar background -->
                <posx>0</posx>
                <posy>170r</posy>
                <width>1280</width>
                <height>700</height>
                <aspectratio>stretch</aspectratio>
                <texture>rightlistbackground.png</texture>
            </control>
            <control type="image">
                <!-- Black gradient up the top -->
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>300</height>
                <texture>blackgradientvert.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
                <!-- right gradient -->
                <posx>700r</posx>
                <posy>0</posy>
                <width>700</width>
                <height>550</height>
                <texture flipx="true">blackgradient.png</texture>
            </control>
            <!-- RIGHT LIST -->
            <control type="list" id="503">
                <posx>600r</posx>
                <posy>100</posy>
                <width>600</width>
                <height>425</height>
                <onleft>2</onleft>
                <onup>503</onup>
                <ondown>503</ondown>
                <viewtype label="RightAddonView">list</viewtype>
                <focusposition>1</focusposition>
                <pagecontrol>60</pagecontrol>
                <scrolltime>200</scrolltime>
                <itemlayout height="70" width="580">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>700</width>
                        <height>70</height>
                        <aligny>bottom</aligny>
                        <texture border="2,2,2,2" diffuse="rowdiffuse.png">rowblank2.png</texture>
                    </control>
                    <control type="label">
                        <description>Title</description>
                        <posx>10r</posx>
                        <posy>5</posy>
                        <width>445</width>
                        <height>35</height>
                        <label>$INFO[listitem.Label]</label>
                        <selectedcolor>accent</selectedcolor>
                        <align>right</align>
                        <aligny>top</aligny>
                        <font>cirrus_24</font>
                        <textcolor>white</textcolor>
                        <scroll>false</scroll>
                    </control>
                    <control type="label">
                        <description>status</description>
                        <posx>10r</posx>
                        <posy>35</posy>
                        <width>445</width>
                        <height>35</height>
                        <label>$INFO[ListItem.Property(Addon.Status)]</label>
                        <selectedcolor>accent</selectedcolor>
                        <align>right</align>
                        <aligny>bottom</aligny>
                        <font>cirrus_20</font>
                        <textcolor>grey2</textcolor>
                        <scroll>false</scroll>
                    </control>
                </itemlayout>
                <focusedlayout height="70" width="580">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>700</width>
                        <height>70</height>
                        <texture border="2,2,2,2">rowfocusback.png</texture>
                    </control>
                    <control type="label">
                        <description>Title</description>
                        <posx>10r</posx>
                        <posy>5</posy>
                        <width>445</width>
                        <height>35</height>
                        <label>$INFO[listitem.Label]</label>
                        <selectedcolor>black</selectedcolor>
                        <align>right</align>
                        <aligny>top</aligny>
                        <font>cirrus_24</font>
                        <textcolor>black</textcolor>
                        <scroll>false</scroll>
                    </control>
                    <control type="label">
                        <description>status</description>
                        <posx>10r</posx>
                        <posy>35</posy>
                        <width>445</width>
                        <height>35</height>
                        <label>$INFO[ListItem.Property(Addon.Status)]</label>
                        <selectedcolor>black</selectedcolor>
                        <align>right</align>
                        <aligny>bottom</aligny>
                        <font>cirrus_20</font>
                        <textcolor>black</textcolor>
                        <scroll>false</scroll>
                    </control>				
                </focusedlayout>
            </control>
            <control type="image">
                <posx>20</posx>
                <posy>350</posy>
                <width>350</width>
                <height>350</height>
                <aspectratio>stretch</aspectratio>
                <fadetime>200</fadetime>
                <texture>$INFO[ListItem.Icon]</texture>
                <bordertexture border="8">ThumbBorder.png</bordertexture>
                <bordersize>8</bordersize>
            </control>
            <control type="group">
                <posx>380</posx>
                <posy>280</posy>
                <visible>Control.IsVisible(503)</visible>
                <control type="group">
                    <posy>280</posy>
                    <control type="label">
                        <description>Type</description>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>590</width>
                        <height>25</height>
                        <label>$INFO[ListItem.Property(Addon.Type),[COLOR=accent]$LOCALIZE[146][/COLOR] ]</label>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>cirrus_20</font>
                        <textcolor>white</textcolor>
                    </control>
                    <control type="label">
                        <description>Author</description>
                        <posx>0</posx>
                        <posy>30</posy>
                        <width>590</width>
                        <height>25</height>
                        <label>$INFO[ListItem.Property(Addon.Creator),[COLOR=accent]$LOCALIZE[21863]:[/COLOR] ]</label>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>cirrus_20</font>
                        <textcolor>white</textcolor>
                    </control>
                    <control type="label">
                        <description>Version</description>
                        <posx>0</posx>
                        <posy>60</posy>
                        <width>590</width>
                        <height>25</height>
                        <label>$INFO[ListItem.Property(Addon.Version),[COLOR=accent]$LOCALIZE[24051] [/COLOR] ]</label>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>cirrus_20</font>
                        <textcolor>white</textcolor>
                    </control>
                    <control type="label">
                        <description>Rating label</description>
                        <posx>0</posx>
                        <posy>90</posy>
                        <width>120</width>
                        <height>25</height>
                        <label>$LOCALIZE[563]:</label>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>cirrus_20</font>
                        <textcolor>accent</textcolor>
                        <visible>!ListItem.IsFolder</visible>
                    </control>
                    <control type="image">
                        <description>Rating value</description>
                        <posx>120</posx>
                        <posy>87</posy>
                        <width>160</width>
                        <height>32</height>
                        <texture>$INFO[ListItem.Property(Addon.StarRating)]</texture>
                    </control>
                    <control type="label">
                        <description>Summary</description>
                        <posx>0</posx>
                        <posy>120</posy>
                        <width>590</width>
                        <height>25</height>
                        <label>$INFO[ListItem.Property(Addon.Summary),[COLOR=accent]$LOCALIZE[20037]: [/COLOR] ]</label>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>cirrus_20</font>
                        <textcolor>white</textcolor>
                    </control>
                </control>
            </control>
        </control>
    </include>
</includes>
