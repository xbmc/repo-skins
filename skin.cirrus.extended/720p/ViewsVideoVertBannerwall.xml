<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!-- ===================================================================================== -->
    <!-- ============================== Banner Wall Vertical VIEW ID 571 ============================== -->
    <!-- =================================== TV Shows only =================================== -->
    <include name="VertBannerWall">
        <control type="group">
            <visible>Control.IsVisible(571)</visible>
            <control type="image">
                <!-- bottom bar background -->
                <left>0</left>
                <top>170r</top>
                <width>1280</width>
                <height>700</height>
                <aspectratio>stretch</aspectratio>
                <texture>rightlistbackground.png</texture>
            </control>
            <control type="image">
                <!-- darken the background a bit -->
                <left>0</left>
                <top>0</top>
                <width>1280</width>
                <height>720</height>
                <aspectratio>stretch</aspectratio>
                <texture>black-back3.png</texture>
            </control>
            <!-- wall panel -->
            <control type="panel" id="571">
                <visible>Skin.HasSetting(bannerwallvert_view)</visible>
                <left>65</left>
                <top>120</top>
                <width>1150</width>
                <height>420</height>
                <onleft>4</onleft>
                <onright>571</onright>
                <onup>571</onup>
                <ondown>571</ondown>
                <viewtype label="41125">panel</viewtype>
                <orientation>Vertical</orientation>
                <pagecontrol>60</pagecontrol>
                <scrolltime>200</scrolltime>
                <preloaditems>2</preloaditems>
                <visible>Container.Content(TVShows)</visible>
                <itemlayout height="106" width="575">
                    <control type="group">
                        <!-- banner mod -->
                        <left>0</left>
                        <top>0</top>
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>575</width>
                            <height>106</height>
                            <aspectratio>stretch</aspectratio>
                            <fadetime>200</fadetime>
                            <texture background="true">$INFO[ListItem.Art(banner)]</texture>
                            <bordertexture border="8">ThumbBorder.png</bordertexture>
                            <bordersize>8</bordersize>
                        </control>
                        <control type="group">
                            <left>0</left> 
                            <top>0</top>
                            <width>575</width>
                            <height>106</height>
                            <include>FallbackBanner</include>
                        </control>
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>575</width>
                            <height>106</height>
                            <aspectratio>stretch</aspectratio>
                            <texture>black-back3.png</texture>
                            <colordiffuse>AAFFFFFF</colordiffuse>
                        </control>
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>575</width>
                            <height>106</height>
                            <aspectratio>stretch</aspectratio>
                            <texture>black-back3.png</texture>
                            <colordiffuse>AAFFFFFF</colordiffuse>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout height="140" width="758">
                    <control type="group">	
                        <left>0</left>
                        <top>0</top>
                        <control type="image">
                            <!-- banner mod -->
                            <left>0</left>
                            <top>0</top>
                            <width>575</width>
                            <height>106</height>
                            <aspectratio>stretch</aspectratio>
                            <fadetime>200</fadetime>
                            <texture background="true">$INFO[ListItem.Art(banner)]</texture>
                            <bordertexture border="8">ThumbBorder.png</bordertexture>
                            <bordersize>8</bordersize>
                        </control>
                        <control type="group">
                            <left>0</left> 
                            <top>0</top>
                            <width>575</width>
                            <height>106</height>
                            <include>FallbackBanner</include>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <!-- Tv show info down thebottom -->	
            <control type="group">
                <left>30</left>
                <top>580</top>
                <visible>Control.IsVisible(519) | Container.Content(TVShows)</visible>
                <control type="label">
                    <description>Nextaired</description>
                    <left>0</left>
                    <top>-5</top>
                    <width>440</width>
                    <height>25</height>
                    <label>$VAR[NextAired]</label>
                    <align>left</align>
                    <aligny>center</aligny>
                    <font>cirrus_24</font>
                    <scroll>true</scroll>
                    <visible>!IsEmpty(ListItem.Thumb)</visible> 
                </control>	
                <control type="label">
                    <description>First Aired</description>
                    <left>0</left>
                    <top>30</top>
                    <width>440</width>
                    <height>25</height>
                    <label fallback="416">[COLOR=accent]$LOCALIZE[20416]: [/COLOR]$INFO[listitem.premiered]</label>
                    <align>left</align>
                    <aligny>center</aligny>
                    <font>cirrus_24</font>
                    <scroll>true</scroll>
                    <visible>!IsEmpty(ListItem.Thumb)</visible> 
                </control>
                <control type="label">
                    <description>Genre</description>
                    <left>0</left>
                    <top>65</top>
                    <width>440</width>
                    <height>25</height>
                    <label fallback="416">[COLOR=accent]$LOCALIZE[515]: [/COLOR]$INFO[listitem.genre]</label>
                    <align>left</align>
                    <aligny>center</aligny>
                    <font>cirrus_24</font>
                    <scroll>true</scroll>
                    <visible>!IsEmpty(ListItem.Thumb)</visible> 
                </control>
                <control type="label">
                    <description>Episodes</description>
                    <left>0</left>
                    <top>100</top>
                    <width>580</width>
                    <height>25</height>
                    <label fallback="416">[COLOR=accent]$LOCALIZE[20360]: [/COLOR]$INFO[listitem.episode] [COLOR=grey] ($INFO[ListItem.Property(WatchedEpisodes),, $LOCALIZE[16102]] - $INFO[ListItem.Property(UnWatchedEpisodes), , $LOCALIZE[16101]])[/COLOR]</label>
                    <align>left</align>
                    <aligny>center</aligny>
                    <font>cirrus_24</font>
                    <scroll>true</scroll>
                    <visible>!IsEmpty(ListItem.Thumb)</visible> 
                </control>
                <control type="image">
                    <width>161</width>
                    <height>110</height>
                    <left>570r</left>
                    <top>0</top>
                    <fadetime>100</fadetime>
                    <aspectratio>keep</aspectratio>
                    <texture>$VAR[StudioIcon]$INFO[ListItem.Studio,,.png]</texture>
                </control>
                <!-- TV SHOW LOGO -->
                <control type="largeimage" id="7914"> 
                    <left>370r</left> 
                    <top>-10</top> 
                    <width>335</width> 
                    <height>130</height> 
                    <texture>$INFO[ListItem.Art(clearlogo)]</texture> 
                    <fadetime>100</fadetime> 
                    <aspectratio scalediffuse="false">keep</aspectratio> 
                    <visible>!IsEmpty(ListItem.Thumb)</visible> 
                </control>			
            </control>
        </control>
    </include>
</includes>
