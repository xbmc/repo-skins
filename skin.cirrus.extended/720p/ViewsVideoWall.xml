<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!-- ===================================================================================== -->
    <!-- =================================== WALL VIEW ID 513 ================================ -->
    <!-- ============================= Movies, TV Shows top level============================= -->
    <include name="WallView">
        <control type="group">
            <visible>Control.IsVisible(513)</visible>
            <control type="image">
                <!-- bottom bar background -->
                <posx>0</posx>
                <posy>130r</posy>
                <width>1280</width>
                <height>700</height>
                <aspectratio>stretch</aspectratio>
                <texture>rightlistbackground.png</texture>
            </control>
            <control type="image">
                <!-- bottom bar background -->
                <posx>0</posx>
                <posy>50r</posy>
                <width>1280</width>
                <height>700</height>
                <aspectratio>stretch</aspectratio>
                <texture>rightlistbackground.png</texture>
                <visible>Container.Content(Movies)</visible>
                <visible>!ListItem.IsFolder</visible>
            </control>
            <!-- wall panel -->
            <control type="panel" id="513">
                <visible>Skin.HasSetting(wall_view)</visible>
                <posx>25</posx>
                <posy>130</posy>
                <width>1250</width>
                <height>380</height>
                <onleft>60</onleft>
                <onright>513</onright>
                <onup>513</onup>
                <ondown>513</ondown>
                <viewtype label="41126">panel</viewtype>
                <orientation>vertical</orientation>
                <preloaditems>2</preloaditems>
                <pagecontrol>60</pagecontrol>
                <scrolltime>200</scrolltime>
                <visible>Container.Content(Movies) | Container.Content(TVShows)</visible>
                <itemlayout height="190" width="124">
                    <control type="group">
                        <posx>0</posx>
                        <posy>0</posy>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>110</width>
                            <height>160</height>
                            <aspectratio>stretch</aspectratio>
                            <texture background="true">$INFO[Listitem.Icon]</texture>
                            <bordertexture border="6">ContentPanelvertical.png</bordertexture>
                            <bordersize>6</bordersize>
                        </control>
                        <control type="image">
                            <posx>70</posx>
                            <posy>115</posy>
                            <width>30</width>
                            <height>40</height>
                            <texture>$VAR[overlayIcon]</texture>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout height="190" width="124">
                    <control type="group">
                        <animation type="Focus" condition="Container(513).Row(0) | Container(513).Row(1)" reversible="false">
                            <effect type="zoom" center="55,81" start="100" end="160" time="200" easing="out" tween="cubic" reversible="false"/>
                        </animation>
                        <posx>0</posx>
                        <posy>0</posy>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>110</width>
                            <height>160</height>
                            <aspectratio>stretch</aspectratio>
                            <texture>black-back.png</texture>
                            <bordertexture>ContentPanelvertical.png</bordertexture>
                            <bordersize>6</bordersize>
                        </control>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>110</width>
                            <height>160</height>
                            <aspectratio>stretch</aspectratio>
                            <!-- <fadetime>200</fadetime> -->
                            <texture background="true">$INFO[ListItem.Icon]</texture>
                            <bordersize>6</bordersize>
                        </control>
                        <control type="image">
                            <posx>70</posx>
                            <posy>115</posy>
                            <width>30</width>
                            <height>40</height>
                            <texture>$VAR[overlayIcon]</texture>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <!-- Movie info down thebottom -->	
            <control type="group">
                <posx>20</posx>
                <posy>360</posy>
                <visible>Container.Content(Movies)</visible>
                <control type="group">
                    <posx>50</posx>
                    <posy>270</posy>
                    <control type="label">
                        <description>Year and duration Label</description>
                        <posx>0</posx>
                        <posy>55</posy>
                        <width>320</width>
                        <height>25</height>
                        <label>[COLOR=accent]$INFO[ListItem.Year]  [/COLOR]$INFO[ListItem.Duration] $LOCALIZE[12391]</label>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>cirrus_24</font>
                        <textcolor>white</textcolor>
                        <shadowcolor>black</shadowcolor>
                        <visible>!ListItem.IsFolder</visible>
                    </control>
                    <control type="label">
                        <description>Genre label</description>
                        <posx>0</posx>
                        <posy>-35</posy>
                        <width>800</width>
                        <height>25</height>
                        <label fallback="416">[COLOR=accent]$LOCALIZE[515]: [/COLOR]$INFO[listitem.genre]</label>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>cirrus_24</font>
                        <textcolor>white</textcolor>
                        <shadowcolor>black</shadowcolor>
                        <visible>!ListItem.IsFolder</visible>
                    </control>
                    <control type="label">
                        <description>title label</description>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>800</width>
                        <height>25</height>
                        <label>$INFO[ListItem.Title]</label>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>cirrus_40</font>
                        <textcolor>grey</textcolor>
                        <shadowcolor>black</shadowcolor>
                    </control>
                </control>
                <control type="image">
                    <!-- Top250IMDB Mod 1.2 -->
                    <posx>390</posx>
                    <posy>38r</posy>
                    <width>88</width>
                    <height>30</height>
                    <aspectratio aligny="bottom">stretch</aspectratio>
                    <fadetime>IconCrossfadeTime</fadetime>
                    <texture>IMDBFlag.png</texture>
                    <visible>!IsEmpty(ListItem.Top250)</visible>
                    <colordiffuse>accent</colordiffuse>
                </control>
                <control type="label">
                    <!-- Top250IMDB Mod 1.2 -->
                    <description>top250</description>
                    <posx>251</posx>
                    <posy>40r</posy>
                    <width>400</width>
                    <height>30</height>
                    <label>$INFO[ListItem.Top250]</label>
                    <align>center</align>
                    <aligny>center</aligny>
                    <font>cirrus_38_Bold</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                </control>
                <control type="image">
                    <posx>648</posx>
                    <posy>38r</posy>
                    <width>70</width>
                    <height>31</height>
                    <aspectratio>keep</aspectratio>
                    <fadetime>FanartCrossfadeTime</fadetime>
                    <texture>Overlayicons/trailer.png</texture>
                    <visible>!IsEmpty(ListItem.Trailer) + !Skin.HasSetting(trailerflag)</visible>
                </control>
                <control type="image">
                    <width>170</width>
                    <height>50</height>
                    <posx>480</posx>
                    <posy>50r</posy>
                    <aspectratio>keep</aspectratio>
                    <align>right</align>
                    <aligny>bottom</aligny>
                    <texture>$INFO[listitem.Studio,special://skin/extras/flagging/studios/,.png]</texture>
                </control>
                <control type="grouplist">
                    <!-- MPAA Rating -->
                    <description>MPAA Rating Flagging Images</description>
                    <posx>935</posx>
                    <posy>245</posy>
                    <width>249</width>
                    <height>57</height>
                    <align>right</align>
                    <itemgap>0</itemgap>
                    <orientation>horizontal</orientation>
                    <include>VideoMPAAFlaggingConditions</include>
                    <visible>!Skin.HasSetting(noMPAAStudioFlags)</visible>
                    <visible>!Skin.HasSetting(NewMPAAFlags)</visible>
                    <visible>!ListItem.IsFolder</visible>
                </control>
                <control type="grouplist">
                    <!-- MPAA Rating -->
                    <description>MPAA NEW Rating Flagging Images</description>
                    <posx>950</posx>
                    <posy>270</posy>
                    <width>249</width>
                    <height>57</height>
                    <align>right</align>
                    <itemgap>0</itemgap>
                    <orientation>horizontal</orientation>
                    <include>NewVideoMPAAFlaggingConditions</include>
                    <visible>!Skin.HasSetting(noMPAAStudioFlags)</visible>
                    <visible>Skin.HasSetting(NewMPAAFlags)</visible>
                    <visible>!ListItem.IsFolder</visible>
                </control>
                <control type="grouplist">
                    <description>Media Codec Flagging Images</description>
                    <posx>620r</posx>
                    <posy>323</posy>
                    <width>550</width>
                    <align>right</align>
                    <itemgap>10</itemgap>
                    <orientation>horizontal</orientation>
                    <include>VideoCodecFlaggingConditions</include>
                    <include>AudioCodecFlaggingConditions</include>
                    <include>AspectCodecFlaggingConditions</include>
                </control>
                <control type="scrollbar" id="60">
                    <posx>-20</posx>
                    <posy>-230</posy>
                    <width>25</width>
                    <height>350</height>
                    <texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
                    <texturesliderbar border="0,14,0,14">ScrollBarV_bar.png</texturesliderbar>
                    <texturesliderbarfocus border="0,14,0,14">ScrollBarV_bar_focus.png</texturesliderbarfocus>
                    <textureslidernib>ScrollBarNib.png</textureslidernib>
                    <textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
                    <onleft>2</onleft>
                    <onright>513</onright>
                    <showonepage>true</showonepage>
                    <orientation>vertical</orientation>
                    <visible allowhiddenfocus="true">Control.IsVisible(513) + Control.HasFocus(60)</visible>
                </control>						
            </control>
            <!-- TV Show info down the bottom -->
            <control type="group">
                <posx>30</posx>
                <posy>625</posy>
                <visible>[Control.IsVisible(513) | Container.Content(TVShows)] + !Container.Content(Movies)</visible>
                <control type="label">
                    <description>Genre</description>
                    <posx>0</posx>
                    <posy>-20</posy>
                    <width>700</width>
                    <height>25</height>
                    <label fallback="416">[COLOR=accent]$LOCALIZE[515]: [/COLOR]$INFO[listitem.genre]</label>
                    <align>left</align>
                    <aligny>center</aligny>
                    <font>cirrus_24</font>
                    <scroll>true</scroll>
                    <visible>!IsEmpty(ListItem.Thumb)</visible> 
                </control>
                <control type="label">
                    <description>Episodes</description>
                    <posx>0</posx>
                    <posy>15</posy>
                    <width>580</width>
                    <height>25</height>
                    <label fallback="416">[COLOR=accent]$LOCALIZE[20360]: [/COLOR]$INFO[listitem.episode] [COLOR=grey] ($INFO[ListItem.Property(WatchedEpisodes),, $LOCALIZE[16102]] - $INFO[ListItem.Property(UnWatchedEpisodes), , $LOCALIZE[16101]])[/COLOR]</label>
                    <align>left</align>
                    <aligny>center</aligny>
                    <font>cirrus_24</font>
                    <scroll>true</scroll>
                    <visible>!IsEmpty(ListItem.Thumb)</visible> 
                </control>
                <control type="label">
                    <description>First Aired</description>
                    <posx>0</posx>
                    <posy>55</posy>
                    <width>440</width>
                    <height>25</height>
                    <label fallback="416">[COLOR=accent]$LOCALIZE[20416]: [/COLOR]$INFO[listitem.premiered]</label>
                    <align>left</align>
                    <aligny>center</aligny>
                    <font>cirrus_24</font>
                    <scroll>true</scroll>
                    <visible>!IsEmpty(ListItem.Thumb)</visible> 
                </control>
                <control type="image">
                    <width>146</width>
                    <height>100</height>
                    <posx>500r</posx>
                    <posy>-23</posy>
                    <fadetime>100</fadetime>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[listitem.Studio,special://skin/extras/flagging/studios/,.png]</texture>
                </control>
                <!-- TV SHOW LOGO -->
                <control type="largeimage" id="7914"> 
                    <posx>260r</posx> 
                    <posy>-20</posy> 
                    <width>232</width> 
                    <height>90</height> 
                    <texture>$INFO[ListItem.Art(clearlogo)]</texture> 
                    <fadetime>100</fadetime> 
                    <aspectratio scalediffuse="false">keep</aspectratio> 
                    <visible>!IsEmpty(ListItem.Thumb)</visible> 
                </control>
                <control type="scrollbar" id="60">
                    <posx>-30</posx>
                    <posy>-500</posy>
                    <width>25</width>
                    <height>350</height>
                    <texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
                    <textureslidernib>ScrollBarV.png</textureslidernib>
                    <textureslidernibfocus>ScrollBarV_bar_focus.png</textureslidernibfocus>
                    <onleft>2</onleft>
                    <onright>513</onright>
                    <showonepage>true</showonepage>
                    <orientation>vertical</orientation>
                    <visible allowhiddenfocus="true">Control.IsVisible(513) + Control.HasFocus(60)</visible>
                </control>						
            </control>
        </control>
    </include>
</includes>
