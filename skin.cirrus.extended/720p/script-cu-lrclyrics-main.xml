<?xml version="1.0" encoding="UTF-8"?>
<window>
    <allowoverlay>no</allowoverlay>
    <coordinates>
        <system>1</system>
        <left>0</left>
        <top>0</top>
    </coordinates>
    <controls>
        <control type="group">
            <!-- top -->
            <control type="group">
                <visible>!Skin.HasSetting(zombie_osd) + !Window.IsVisible(MusicOSD) + !Player.ShowInfo</visible>
                <animation effect="slide" start="0,-125" end="0,0" time="300" tween="quadratic" easing="out">VisibleChange</animation>
                <include>TopSlideoutSlimMusicOSD</include>
            </control>
            <control type="group">
                <visible>!Player.ShowInfo</visible>
                <animation effect="fade" start="0" end="100" time="300">VisibleChange</animation>
                <control type="image">
                    <left>0</left>
                    <bottom>0</bottom>
                    <width>1280</width>
                    <height>170</height>
                    <aspectratio>stretch</aspectratio>
                    <texture>OSDbackground.png</texture>
                </control>
                <include>MusicVisCommonInfo</include>
                <control type="label">
                    <left>330</left>
                    <top>620</top>
                    <width>920</width>
                    <height>30</height>
                    <font>cirrus_30</font>
                    <aligny>center</aligny>
                    <align>center</align>
                    <shadowcolor>black</shadowcolor>
                    <textcolor>white</textcolor>
                    <label>$INFO[Container(110).ListItem(1).Label]</label>
                    <animation effect="fade" time="0" end="60" condition="true">Conditional</animation>
                </control>
                <control type="label">
                    <left>330</left>
                    <top>660</top>
                    <width>920</width>
                    <height>16</height>
                    <font>cirrus_20</font>
                    <aligny>center</aligny>
                    <align>center</align>
                    <shadowcolor>black</shadowcolor>
                    <textcolor>white</textcolor>
                    <label>$INFO[Container(110).ListItem(2).Label]</label>
                    <animation effect="fade" time="0" end="45" condition="true">Conditional</animation>
                </control>
                <!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
                <control type="list" id="110">
                    <viewtype label="535">list</viewtype>
                    <left>330</left>
                    <top>570</top>
                    <width>920</width>
                    <height>50</height>
                    <align>center</align>
                    <onup>110</onup>
                    <ondown>110</ondown>
                    <orientation>vertical</orientation>
                    <scrolltime tween="cubic" easing="out">300</scrolltime>
                    <itemlayout/>
                    <focusedlayout height="40">
                        <control type="label">
                            <left>0</left>
                            <top>0</top>
                            <width>920</width>
                            <height>40</height>
                            <font>cirrus_40</font>
                            <aligny>center</aligny>
                            <align>center</align>
                            <shadowcolor>black</shadowcolor>
                            <textcolor>selected</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                            <animation type="focus">
                                <effect type="slide" time="500" start="0,30" end="0,0" easing="out" tween="cubic" />
                                <effect type="zoom" time="300" start="75" end="100" center="auto" easing="out" tween="cubic" />
                            </animation>
                            <animation type="unfocus">
                                <effect type="slide" time="200" start="0,0" end="0,-20"/>
                                <effect type="zoom" time="300" start="100" end="60" center="auto"/>
                            </animation> 
                        </control>
                    </focusedlayout>
                </control>
                <!-- ** Required ** Do not change <id> or <type> (Song Chooser if it gets it wrong) -->
                <control type="list" id="120">
                    <left>30</left>
                    <top>170</top>
                    <width>550</width>
                    <height>440</height>
                    <onleft>121</onleft>
                    <onright>121</onright>
                    <onup>120</onup>
                    <ondown>120</ondown>
                    <pagecontrol>121</pagecontrol>
                    <scrolltime>200</scrolltime>
                    <animation effect="slide" start="0,0" end="20,0" time="0" condition="!Control.IsVisible(121)">Conditional</animation>
                    <itemlayout height="40">
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>550</width>
                            <height>41</height>
                            <texture border="5">menuitemNF.png</texture>
                            <aspectratio>stretch</aspectratio>
                        </control>
                        <control type="label">
                            <left>10</left>
                            <top>0</top>
                            <width>530</width>
                            <height>40</height>
                            <font>cirrus_20</font>
                            <align>left</align>
                            <aligny>center</aligny>
                            <selectedcolor>selected</selectedcolor>
                            <info>ListItem.Label</info>
                        </control>
                    </itemlayout>
                    <focusedlayout height="40">
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>550</width>
                            <height>41</height>
                            <visible>!Control.HasFocus(120)</visible>
                            <texture border="5">menuitemNF.png</texture>
                            <aspectratio>stretch</aspectratio>
                        </control>
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>550</width>
                            <height>41</height>
                            <visible>Control.HasFocus(120)</visible>
                            <texture border="5">menuitemFO.png</texture>
                            <aspectratio>stretch</aspectratio>
                        </control>
                        <control type="label">
                            <left>10</left>
                            <top>0</top>
                            <width>530</width>
                            <height>40</height>
                            <font>cirrus_20</font>
                            <align>left</align>
                            <aligny>center</aligny>
                            <selectedcolor>selected</selectedcolor>
                            <info>ListItem.Label</info>
                        </control>
                    </focusedlayout>
                </control>
                <control type="spincontrol" id="121">
                    <description>Next page button</description>
                    <left>520</left>
                    <top>650</top>
                    <subtype>page</subtype>
                    <font>cirrus_20</font>
                    <onleft>120</onleft>
                    <onright>120</onright>
                    <ondown>120</ondown>
                    <onup>120</onup>
                    <textcolor>blue</textcolor>
                    <showonepage>true</showonepage>
                    <visible>Control.IsVisible(120)</visible>
                    <width>20</width>
                    <height>13</height>
                </control>
                <control type="label">
                    <description>Scraper label</description>
                    <right>20</right>
                    <bottom>30</bottom>
                    <width>550</width>
                    <height>30</height>
                    <label>$LOCALIZE[31205] - $INFO[Control.GetLabel(200)]</label>
                    <font>cirrus_20</font>
                    <align>right</align>
                    <aligny>center</aligny>
                    <textcolor>grey2</textcolor>
                    <shadowcolor>black</shadowcolor>
                </control>
                <control type="label" id="200">
                    <description>Scraper label</description>
                    <visible>false</visible>
                </control>
            </control>
        </control>
    </controls>
</window>