<?xml version="1.0" encoding="utf-8"?>
<window type="buttonMenu" id="111">
    <defaultcontrol always="true">3110</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
        <include>GlobalOverlay</include>
        <control type="group">
            <posx>880</posx>
            <posy>0</posy>
            <animation type="WindowOpen">
                <effect type="slide" time="300" start="+400, 0" end="0,0" easing="out" tween="cubic" />
            </animation>
            <animation type="WindowClose">
                <effect type="slide" time="300" start="0,0" end="+400,0" easing="in" tween="cubic" />
            </animation>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>440</width>
                <height>720</height>
                <texture border="22">button.png</texture>
            </control>
            <control type="label">
                <description>Menu Title</description>
                <posx>30</posx>
                <posy>70</posy>
                <width>400</width>
                <label>[LOWERCASE]$LOCALIZE[13005][/LOWERCASE]</label>
                <font>Home_sub_header</font>
                <align>left</align>
                <textcolor>black</textcolor>
            </control>
            <control type="grouplist" id="1">
                <posx>30</posx>
                <posy>180</posy>
                <width>340</width>
                <height>382</height>
                <itemgap>2</itemgap>
                <onleft>noop</onleft>
                <onright>noop</onright>
                <onup>1</onup>
                <ondown>1</ondown>
                <orientation>vertical</orientation>
                <control type="grouplist" id="3110">
                    <height>240</height>
                    <control type="button" id="3111">
                        <description>Master mode button</description>
                        <width>340</width>
                        <label>20046</label>
                        <onclick>xbmc.mastermode</onclick>
                        <visible>System.HasLocks</visible>
                        <align>right</align>
                        <textcolor>black</textcolor>
                        <focusedcolor>white</focusedcolor>
                    </control>
                    <control type="button" id="3112">
                        <description>LogOff Profile</description>
                        <width>340</width>
                        <label>$LOCALIZE[20126] $INFO[system.profilename]</label>
                        <onclick>dialog.close(all,true)</onclick>
                        <onclick>System.LogOff</onclick>
                        <visible>System.HasLoginScreen</visible>
                        <visible>System.Loggedon</visible>
                        <align>right</align>
                        <textcolor>black</textcolor>
                        <focusedcolor>white</focusedcolor>
                    </control>
                    <control type="button" id="3115">
                        <description>Shutdown</description>
                        <width>340</width>
                        <label>13005</label>
                        <onclick>ShutDown()</onclick>
                        <align>right</align>
                        <textcolor>black</textcolor>
                        <focusedcolor>white</focusedcolor>
                    </control>
                    <control type="button" id="3116">
                        <description>Suspend xbmc</description>
                        <width>340</width>
                        <label>13011</label>
                        <onclick>XBMC.Suspend()</onclick>
                        <align>right</align>
                        <textcolor>black</textcolor>
                        <focusedcolor>white</focusedcolor>
                    </control>
                    <control type="button" id="3117">
                        <description>Reboot button</description>
                        <width>340</width>
                        <label>13013</label>
                        <onclick>XBMC.Reset()</onclick>
                        <align>right</align>
                        <textcolor>black</textcolor>
                        <focusedcolor>white</focusedcolor>
                    </control>
                    <control type="button" id="31151">
                        <description>Exit</description>
                        <width>340</width>
                        <label>$LOCALIZE[13012]</label>
                        <onclick>Quit()</onclick>
                        <align>right</align>
                        <textcolor>black</textcolor>
                        <focusedcolor>white</focusedcolor>
                        <visible>Skin.HasSetting(Exit)</visible>
                    </control>
                    <control type="button" id="3113">
                        <description>Custom Shutdown Timer button</description>
                        <width>340</width>
                        <label>20151</label>
                        <onclick>XBMC.CancelAlarm(shutdowntimer)</onclick>
                        <visible>System.HasAlarm(shutdowntimer)</visible>
                        <align>right</align>
                        <textcolor>black</textcolor>
                        <focusedcolor>white</focusedcolor>
                    </control>
                    <control type="button" id="3114">
                        <description>Custom Shutdown Timer button</description>
                        <width>340</width>
                        <label>20150</label>
                        <onclick>XBMC.AlarmClock(shutdowntimer,XBMC.Shutdown())</onclick>
                        <visible>!System.HasAlarm(shutdowntimer)</visible>
                        <align>right</align>
                        <textcolor>black</textcolor>
                        <focusedcolor>white</focusedcolor>
                    </control>
                    <control type="label" id="3118">
                        <description>Alarm Time</description>
                        <width>340</width>
                        <label>$LOCALIZE[20145] [B]$INFO[System.Alarmpos][/B]</label>
                        <visible>System.HasAlarm(shutdowntimer)</visible>
                        <align>right</align>
                        <textcolor>black</textcolor>
                    </control>
                    <control type="button" id="3119">
                        <description>Open Player Controls</description>
                        <width>340</width>
                        <label>31015</label>
                        <onclick>ActivateWindow(playercontrols)</onclick>
                        <visible>Player.HasMedia</visible>
                        <align>right</align>
                        <textcolor>black</textcolor>
                        <focusedcolor>white</focusedcolor>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>