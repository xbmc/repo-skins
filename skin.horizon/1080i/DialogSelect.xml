<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2000">
    <defaultcontrol always="true">3</defaultcontrol>

    <controls>

        <include>Global_Overlay</include>

        <control type="group">
            <include content="Dialog_Standard_Group">
                <param name="height" value="847" />
            </include>

            <!-- Header -->
            <control type="label" id="1">
                <include>Dialog_Standard_Header</include>
                <label>13406</label>
            </control>

            <!-- Simple List -->
            <control type="list" id="3">
                <left>0</left>
                <width>1080</width>
                <top>120</top>
                <height>690</height>
                <onleft>8000</onleft>
                <onright>8000</onright>
                <onup>3</onup>
                <ondown>3</ondown>
                <itemlayout height="69" width="1080">
                    <control type="label">
                        <left>30</left>
                        <right>30</right>
                        <font>font_small_bold</font>
                        <textcolor>dialog_fg_70</textcolor>
                        <height>66</height>
                        <aligny>center</aligny>
                        <info>ListItem.Label</info>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <right>30</right>
                        <textcolor>dialog_fg_70</textcolor>
                        <align>right</align>
                        <height>66</height>
                        <aligny>center</aligny>
                        <info>ListItem.Label2</info>
                    </control>
                </itemlayout>
                <focusedlayout height="69" width="1080">
                    <control type="group">
                        <height>66</height>
                        <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(3)">Conditional</animation>
                        <control type="image">
                            <texture colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
                        </control>
                        <control type="image">
                            <texture colordiffuse="$VAR[ColorHighlight2]">common/gradient-diffuse-horizontal.png</texture>
                        </control>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <right>30</right>
                        <height>66</height>
                        <font>font_small_bold</font>
                        <aligny>center</aligny>
                        <textcolor>Selected</textcolor>
                        <info>ListItem.Label</info>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <right>30</right>
                        <align>right</align>
                        <height>66</height>
                        <aligny>center</aligny>
                        <textcolor>Selected</textcolor>
                        <info>ListItem.Label2</info>
                    </control>
                </focusedlayout>
            </control>

            <!-- Detailed List -->
            <control type="panel" id="6">
                <include>Dialog_Standard_List_Left</include>
                <onleft>8000</onleft>
                <onright>60</onright>
                <onup>6</onup>
                <ondown>6</ondown>
                <pagecontrol>60</pagecontrol>
                <itemlayout height="138" width="700">
                    <control type="image">
                        <include>Dialog_Standard_List_Left_Icon</include>
                        <visible>!String.Contains(ListItem.Icon,special://skin/) + !String.Contains(ListItem.Icon,Default)</visible>
                    </control>
                    <control type="image">
                        <colordiffuse>dialog_fg_70</colordiffuse>
                        <include>Dialog_Standard_List_Left_Icon</include>
                        <visible>String.Contains(ListItem.Icon,special://skin/) | String.Contains(ListItem.Icon,Default)</visible>
                    </control>
                    <control type="label">
                        <animation effect="slide" end="0,18" condition="String.IsEmpty(ListItem.Label2)">Conditional</animation>
                        <include>Dialog_Standard_List_Left_Label</include>
                    </control>
                    <control type="label">
                        <include>Dialog_Standard_List_Left_Label2</include>
                    </control>
                </itemlayout>
                <focusedlayout height="138" width="700">
                    <control type="group">
                        <width>100%</width>
                        <height>135</height>
                        <control type="image">
                            <texture colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
                        </control>
                        <control type="image">
                            <texture colordiffuse="$VAR[ColorHighlight2]">common/gradient-diffuse-horizontal.png</texture>
                        </control>
                    </control>
                    <control type="image">
                        <include>Dialog_Standard_List_Left_Icon</include>
                    </control>
                    <control type="label">
                        <textcolor>Selected</textcolor>
                        <animation effect="slide" end="0,18" condition="String.IsEmpty(ListItem.Label2)">Conditional</animation>
                        <include>Dialog_Standard_List_Left_Label</include>
                    </control>
                    <control type="label">
                        <textcolor>Selected</textcolor>
                        <include>Dialog_Standard_List_Left_Label2</include>
                    </control>
                </focusedlayout>
            </control>

            <control type="image">
                <centerleft>50%</centerleft>
                <bottom>-32</bottom>
                <height>16</height>
                <width>16</width>
                <visible>Container(6).HasNext | Container(3).HasNext</visible>
                <texture colordiffuse="dialog_fg_70">common/arrow-small.png</texture>
            </control>
            <control type="image">
                <centerleft>50%</centerleft>
                <top>-32</top>
                <height>16</height>
                <width>16</width>
                <visible>Container(6).HasPrevious | Container(3).HasPrevious</visible>
                <texture colordiffuse="dialog_fg_70" flipy="true">common/arrow-small.png</texture>
            </control>

            <!-- Buttons -->
            <control type="grouplist" id="8000">
                <include>Dialog_Standard_Right_Grouplist</include>
                <onleft condition="Control.IsVisible(60)">60</onleft>
                <onleft condition="!Control.IsVisible(60) + Control.IsVisible(3)">3</onleft>
                <onright condition="Control.IsVisible(3)">3</onright>
                <onleft condition="!Control.IsVisible(60) + Control.IsVisible(6)">6</onleft>
                <onright condition="Control.IsVisible(6)">6</onright>
                <animation effect="slide" start="0" end="22,-100" condition="!Control.IsVisible(6)">Conditional</animation>
                <control type="button" id="5">
                    <label>368</label>
                    <include>Dialog_Standard_Right_Buttons</include>
                </control>
                <control type="button" id="7">
                    <visible>!Control.IsVisible(3)</visible>
                    <label>222</label>
                    <include>Dialog_Standard_Right_Buttons</include>
                </control>
            </control>

            <!-- Big Image -->
            <control type="group">
                <centerright>190</centerright>
                <top>357</top>
                <width>300</width>
                <height>450</height>
                <visible>Control.IsVisible(6)</visible>
                <control type="image">
                    <visible>String.Contains(Container(6).ListItem.Icon,special://skin/) | String.Contains(Container(6).ListItem.Icon,Default)</visible>
                    <texture colordiffuse="dialog_fg_70">$INFO[Container(6).ListItem.Icon]</texture>
                    <aspectratio align="center" aligny="bottom">keep</aspectratio>
                </control>
                <control type="image">
                    <visible>!String.Contains(Container(6).ListItem.Icon,special://skin/) + !String.Contains(Container(6).ListItem.Icon,Default)</visible>
                    <texture>$INFO[Container(6).ListItem.Icon]</texture>
                    <aspectratio align="center" aligny="bottom">keep</aspectratio>
                </control>
            </control>

            <!-- Separator -->
            <control type="image">
                <left>699</left>
                <top>120</top>
                <height>687</height>
                <width>1</width>
                <texture colordiffuse="highlight_bottombar">common/white.png</texture>
                <visible>Control.IsVisible(6) + !Control.IsVisible(60)</visible>
            </control>
            <control type="image">
                <left>700</left>
                <top>120</top>
                <height>687</height>
                <width>1</width>
                <texture colordiffuse="darkline_separator">common/white.png</texture>
                <visible>Control.IsVisible(6) + !Control.IsVisible(60)</visible>
            </control>
            <control type="scrollbar" id="60">
                <orientation>vertical</orientation>
                <left>700</left>
                <width>8</width>
                <top>120</top>
                <height>687</height>
                <onleft>6</onleft>
                <onright>8000</onright>
                <visible>Control.IsVisible(6)</visible>
                <texturesliderbackground colordiffuse="dialog_fg_12">osd/progress-end.png</texturesliderbackground>
                <texturesliderbar colordiffuse="dialog_fg_12">osd/progress-end.png</texturesliderbar>
            </control>

        </control>
    </controls>
</window>
