<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!-- ====== -->
    <!-- Common -->
    <!-- ====== -->
    <include name="Topbar_Gradient">
        <control type="group">
            <!-- <visible>Window.IsVisible(Home) | Control.IsVisible(51) | Control.IsVisible(53)</visible> -->
            <visible>Window.IsVisible(Home)</visible>
            <animation effect="fade" start="100" end="0" delay="300" time="400" reversible="false" condition="Skin.HasSetting(EnableTransparentTopbar) + [Window.IsActive(DialogVideoInfo.xml) | Window.IsActive(DialogMusicInfo.xml) | Window.IsActive(DialogAddonInfo.xml) | Window.IsActive(script-script.extendedinfo-DialogVideoInfo.xml) | Window.IsActive(script-script.extendedinfo-DialogInfo.xml)]">Conditional</animation>
            <animation effect="fade" start="0" end="100" delay="0" time="400" reversible="false" condition="Skin.HasSetting(EnableTransparentTopbar) + ![Window.IsActive(DialogVideoInfo.xml) | Window.IsActive(DialogMusicInfo.xml) | Window.IsActive(DialogAddonInfo.xml) | Window.IsActive(script-script.extendedinfo-DialogVideoInfo.xml) | Window.IsActive(script-script.extendedinfo-DialogInfo.xml)]">Conditional</animation>
            <control type="image">
                <height>150</height>
                <texture>common/gradient-top.png</texture>
            </control>
            <control type="image">
                <height>210</height>
                <texture>common/gradient-top.png</texture>
            </control>
        </control>
    </include>
    <include name="Topbar">
        <control type="group">
            <include>Topbar_Gradient</include>
            <control type="group">
                <top>0</top>
                <height>topbar_height</height>
                <include>Topbar_Texture</include>
                <control type="group">
                    <include>Defs_InfoDialog_Visible</include>
                    <include>Topbar_TextDetails</include>
                </control>
            </control>
        </control>
    </include>

    <include name="Topbar_Texture">
        <control type="image">
            <bottom>-24</bottom>
            <height>24</height>
            <width>100%</width>
            <texture flipy="false">common/shadow-line-24px.png</texture>
        </control>
        <control type="image">
            <bottom>0</bottom>
            <top>0</top>
            <aspectratio>scale</aspectratio>
            <animation effect="fade" start="100" end="75" condition="Skin.HasSetting(EnableTransparentTopbar)">Conditional</animation>
            <texture flipy="true">common/gradient-solid.png</texture>
        </control>
        
        <control type="image">
            <bottom>2</bottom>
            <height>1</height>
            <texture colordiffuse="highlight_bottombar">common/white.png</texture>
        </control>
        <control type="image">
            <bottom>1</bottom>
            <height>1</height>
            <texture colordiffuse="darkline_separator">common/white.png</texture>
        </control>
    </include>

    <include name="Topbar_MainMenu_Group">
        <top>0</top>
        <left>0</left>
        <right>0</right>
        <height>80</height>
        <control type="image">
            <bottom>-24</bottom>
            <height>24</height>
            <width>100%</width>
            <texture flipy="false">common/shadow-line-24px.png</texture>
        </control>
        <control type="image">
            <bottom>0</bottom>
            <top>0</top>
            <texture>common/gradient-solid.png</texture>
        </control>
        
    </include>

    <include name="Topbar_MainMenu_Lines">
        <control type="image">
            <top>0</top>
            <height>1</height>
            <texture colordiffuse="highlight_bottombar">common/white.png</texture>
        </control>
        <control type="image">
            <bottom>0</bottom>
            <height>1</height>
            <texture colordiffuse="darkline_topbar">common/white.png</texture>
            <animation effect="fade" start="100" end="25" condition="true">Conditional</animation>
        </control>
    </include>

    <include name="Topbar_TextDetails">

        <control type="group">
            <!-- Left Side | Location / Num Items -->
            <control type="group">
                <include>Animation_MusicVis_Left</include>
                <include>Animation_Home_Topbar_Slideover_NoInfo</include>

                <!-- Without Notifications / Sideblade Closed -->
                <control type="group">
                    <right>700</right>
                    <visible>!Control.HasFocus(300) + !Control.HasFocus(302) + !Window.IsVisible(DialogNotification.xml) + !Window.IsVisible(DialogExtendedProgressBar.xml)</visible>
                    <include content="Topbar_TextDetails_LeftContent">
                        <param name="labelwidth" value="900" />
                    </include>
                </control>

                <!-- Without Notifications / Sideblade Open -->
                <control type="group">
                    <right>900</right>
                    <visible>[Control.HasFocus(300) | Control.HasFocus(302)] + !Window.IsVisible(DialogNotification.xml) + !Window.IsVisible(DialogExtendedProgressBar.xml)</visible>
                    <include content="Topbar_TextDetails_LeftContent">
                        <param name="labelwidth" value="700" />
                    </include>
                </control>

                <!-- With Notifications / Sideblade Closed -->
                <control type="group">
                    <right>1050</right>
                    <visible>!Control.HasFocus(300) + !Control.HasFocus(302) + [Window.IsVisible(DialogNotification.xml) | Window.IsVisible(DialogExtendedProgressBar.xml)]</visible>
                    <include content="Topbar_TextDetails_LeftContent">
                        <param name="labelwidth" value="550" />
                    </include>
                </control>

                <!-- With Notifications / Sideblade Open -->
                <control type="group">
                    <right>1350</right>
                    <visible>[Control.HasFocus(300) | Control.HasFocus(302)] + [Window.IsVisible(DialogNotification.xml) | Window.IsVisible(DialogExtendedProgressBar.xml)]</visible>
                    <include content="Topbar_TextDetails_LeftContent">
                        <param name="labelwidth" value="250" />
                    </include>
                </control>
            </control>

            <!-- Right Side | Date / Time -->
            <include>Topbar_TextDetails_DateTime</include>
            
        </control>
        
    </include>

    <include name="Topbar_TextDetails_LeftContent">
        <centertop>53%</centertop>
        <height>100</height>
        <left>70</left>
        <control type="label">
            <height>48</height>
            <label>$VAR[Label_Header_Content]</label>
            <aligny>center</aligny>
            <align>left</align>
            <font>font_topbar</font>
            <textcolor>main_fg_100</textcolor>
            <shadowcolor>main_bg_30</shadowcolor>
        </control>
        <control type="grouplist">
            <top>48</top>
            <height>42</height>
            <left>0</left>
            <align>left</align>
            <itemgap>12</itemgap>
            <usecontrolcoords>true</usecontrolcoords>
            <orientation>horizontal</orientation>
            <control type="group">
                <width>20</width>
                <visible>![String.IsEmpty(Window(10025).Property(PlayingBackgroundMedia)) + Player.HasMedia] | [Window.IsVisible(script-script.extendedinfo-DialogVideoInfo.xml) | Window.IsVisible(script-script.extendedinfo-DialogInfo.xml) | Window.IsVisible(DialogVideoInfo.xml) | Window.IsVisible(DialogMusicInfo.xml) | Window.IsVisible(DialogAddonInfo.xml) | Window.IsVisible(MyWeather.xml)] | Control.HasFocus(8001) | [Control.HasFocus(300) + Skin.HasSetting(IconOnlyMode)]</visible>
                <include>Object_DownArrows</include>
            </control>
            <control type="label">
                <font>font_small</font>
                <aligny>center</aligny>
                <width>1200</width>
                <height>100%</height>
                <textcolor>$VAR[ColorHighlight]</textcolor>
                <shadowcolor>main_bg_30</shadowcolor>
                <label>$VAR[Label_SubHeader_Content]</label>
                <visible>![String.IsEmpty(Window(10025).Property(PlayingBackgroundMedia)) + Player.HasMedia] | [Window.IsVisible(script-script.extendedinfo-DialogVideoInfo.xml) | Window.IsVisible(script-script.extendedinfo-DialogInfo.xml) | Window.IsVisible(DialogVideoInfo.xml) | Window.IsVisible(DialogMusicInfo.xml) | Window.IsVisible(DialogAddonInfo.xml) | Window.IsVisible(MyWeather.xml)] | [Control.HasFocus(300) + Skin.HasSetting(IconOnlyMode)]</visible>
                <visible>!Control.HasFocus(8001)</visible>
            </control>
            <control type="multiimage">
                <top>10</top>
                <left>0</left>
                <imagepath colordiffuse="$VAR[ColorHighlight]">eq</imagepath>
                <width>40</width>
                <height>23</height>
                <fadetime>50</fadetime>
                <timeperimage>50</timeperimage>
                <visible>[String.IsEmpty(Window(10025).Property(PlayingBackgroundMedia)) + Player.HasMedia]</visible>
                <visible>!Player.Paused + !Player.Caching</visible>
                <visible>![Window.IsVisible(script-script.extendedinfo-DialogVideoInfo.xml) | Window.IsVisible(script-script.extendedinfo-DialogInfo.xml) | Window.IsVisible(DialogVideoInfo.xml) | Window.IsVisible(DialogMusicInfo.xml) | Window.IsVisible(DialogAddonInfo.xml) | Window.IsVisible(MyWeather.xml)]</visible>
                <visible>!Control.HasFocus(8001)</visible>
                <visible>![Control.HasFocus(300) + Skin.HasSetting(IconOnlyMode)]</visible>
            </control>
            <control type="image">
                <top>7</top>
                <left>0</left>
                <texture colordiffuse="$VAR[ColorHighlight]">osd/pause.png</texture>
                <width>32</width>
                <height>32</height>
                <fadetime>50</fadetime>
                <visible>[String.IsEmpty(Window(10025).Property(PlayingBackgroundMedia)) + Player.HasMedia]</visible>
                <visible>Player.Paused + !Player.Caching</visible>
                <visible>![Window.IsVisible(script-script.extendedinfo-DialogVideoInfo.xml) | Window.IsVisible(script-script.extendedinfo-DialogInfo.xml) | Window.IsVisible(DialogVideoInfo.xml) | Window.IsVisible(DialogMusicInfo.xml) | Window.IsVisible(DialogAddonInfo.xml) | Window.IsVisible(MyWeather.xml)]</visible>
                <visible>!Control.HasFocus(8001)</visible>
                <visible>![Control.HasFocus(300) + Skin.HasSetting(IconOnlyMode)]</visible>
            </control>
            <control type="group">
                <width>48</width>
                <height>48</height>
                <top>-2</top>
                <left>-8</left>
                <visible>Player.Caching</visible>
                <visible>!Control.HasFocus(8001)</visible>
                <visible>![Control.HasFocus(300) + Skin.HasSetting(IconOnlyMode)]</visible>
                <control type="image">
                    <description>Busy animation</description>
                    <centerleft>50%</centerleft>
                    <top>0</top>
                    <width>100%</width>
                    <height>100%</height>
                    <texture>dialog/loading-back.png</texture>
                    <aspectratio>keep</aspectratio>
                </control>
                <control type="group">
                    <description>Busy animation</description>
                    <centerleft>50%</centerleft>
                    <top>0</top>
                    <width>100%</width>
                    <height>100%</height>
                    <animation effect="rotate" condition="true" start="0" end="360" loop="true" time="1000" center="auto">Conditional</animation>
                    <control type="image">
                        <texture colordiffuse="$VAR[ColorHighlight]">dialog/loading-spinner.png</texture>
                        <aspectratio>keep</aspectratio>
                    </control>
                    <control type="image">
                        <texture colordiffuse="$VAR[ColorHighlight2]">dialog/loading-spinner.png</texture>
                        <aspectratio>keep</aspectratio>
                        <animation effect="fade" condition="true" start="0" end="75" pulse="true" time="1000">Conditional</animation>
                    </control>
                </control>
            </control>
            <control type="label">
                <left>8</left>
                <font>font_small</font>
                <aligny>center</aligny>
                <width max="$PARAM[labelwidth]">auto</width>
                <height>100%</height>
                <textcolor>main_fg_70</textcolor>
                <shadowcolor>main_bg_30</shadowcolor>
                <label>$INFO[MusicPlayer.Artist,,[COLOR=main_fg_30]  •  [/COLOR]]$INFO[Player.Title,[COLOR=main_fg_100],[/COLOR][COLOR=main_fg_30]  •  [/COLOR]]</label>
                <visible>[String.IsEmpty(Window(10025).Property(PlayingBackgroundMedia)) + Player.HasMedia]</visible>
                <visible>![Window.IsVisible(script-script.extendedinfo-DialogVideoInfo.xml) | Window.IsVisible(script-script.extendedinfo-DialogInfo.xml) | Window.IsVisible(DialogVideoInfo.xml) | Window.IsVisible(DialogMusicInfo.xml) | Window.IsVisible(DialogAddonInfo.xml) | Window.IsVisible(MyWeather.xml)]</visible>
                <visible>!Control.HasFocus(8001)</visible>
                <visible>![Control.HasFocus(300) + Skin.HasSetting(IconOnlyMode)]</visible>
            </control>
            <control type="label">
                <left>-12</left>
                <font>font_small</font>
                <aligny>center</aligny>
                <width>auto</width>
                <height>100%</height>
                <textcolor>main_fg_70</textcolor>
                <shadowcolor>main_bg_30</shadowcolor>
                <label>[COLOR=$VAR[ColorHighlight]]$INFO[Player.Time][/COLOR]  |  [COLOR=$VAR[ColorHighlight]]$INFO[Player.Duration][/COLOR]</label>
                <visible>[String.IsEmpty(Window(10025).Property(PlayingBackgroundMedia)) + Player.HasMedia]</visible>
                <visible>![Window.IsVisible(script-script.extendedinfo-DialogVideoInfo.xml) | Window.IsVisible(script-script.extendedinfo-DialogInfo.xml) | Window.IsVisible(DialogVideoInfo.xml) | Window.IsVisible(DialogMusicInfo.xml) | Window.IsVisible(DialogAddonInfo.xml) | Window.IsVisible(MyWeather.xml)]</visible>
                <visible>!Control.HasFocus(8001)</visible>
                <visible>![Control.HasFocus(300) + Skin.HasSetting(IconOnlyMode)]</visible>
            </control>
        </control>
    </include>

    <include name="Topbar_TextDetails_DateTime">
        <control type="group">
            <centertop>53%</centertop>
            <height>100</height>
            <include>Animation_OSD_Notification</include>
            <right>40</right>
            <visible>!Window.IsVisible(DialogNotification.xml) + !Window.IsVisible(DialogExtendedProgressBar.xml) + ![Window.IsVisible(DialogVolumeBar.xml) + !Player.Muted] + [[Skin.HasSetting(MinimalBusyLoader) + !Window.IsVisible(DialogBusy.xml)] | !Skin.HasSetting(MinimalBusyLoader)]</visible>
            <include>Animation_FadeIn_Slide_Visible</include>
            <control type="image">
                <right>-10</right>
                <include>Dialog_Notification_Icon</include>
                <texture colordiffuse="main_fg_100">buttons/mute.png</texture>
                <animation type="Visible">
                    <effect type="fade" start="0" end="100" delay="50" time="150" />
                    <effect type="slide" start="20" end="0" delay="0" time="100" />
                </animation>
                <visible>Player.Muted</visible>
            </control>
            <control type="group">
                <visible>Weather.IsFetched</visible>
                <visible>System.HasAddon(resource.images.weathericons.white)</visible>
                <animation effect="slide" end="-80" time="0" condition="Player.Muted">Conditional</animation>
                <control type="image">
                    <width>80</width>
                    <height>80</height>
                    <right>-10</right>
                    <top>-16</top>
                    <aspectratio>keep</aspectratio>
                    <texture colordiffuse="main_fg_100">$INFO[Weather.FanartCode,resource://resource.images.weathericons.white/,.png]</texture>
                </control>
                <control type="label">
                    <top>48</top>
                    <height>42</height>
                    <width>80</width>
                    <right>-10</right>
                    <font>font_small</font>
                    <textcolor>main_fg_100</textcolor>
                    <shadowcolor>main_bg_30</shadowcolor>
                    <label>$INFO[Weather.Temperature]</label>
                    <aligny>center</aligny>
                    <align>center</align>
                </control>
            </control>
            <control type="group">
                <animation effect="slide" end="-80" time="0" condition="Player.Muted">Conditional</animation>
                <animation effect="slide" end="-84" time="0" condition="Weather.IsFetched + System.HasAddon(resource.images.weathericons.white)">Conditional</animation>
                <control type="label">
                    <width>400</width>
                    <right>0</right>
                    <height>48</height>
                    <label>$INFO[System.Time]</label>
                    <aligny>center</aligny>
                    <align>right</align>
                    <font>font_topbar</font>
                    <textcolor>main_fg_100</textcolor>
                    <shadowcolor>main_bg_30</shadowcolor>
                </control>
                <control type="grouplist">
                    <orientation>horizontal</orientation>
                    <right>0</right>
                    <top>48</top>
                    <height>42</height>
                    <align>right</align>
                    <itemgap>20</itemgap>
                    <control type="label">
                        <font>font_small</font>
                        <align>right</align>
                        <textcolor>main_fg_100</textcolor>
                        <shadowcolor>main_bg_30</shadowcolor>
                        <label>$INFO[Weather.Conditions,,$COMMA ]$INFO[Weather.Temperature]</label>
                        <aligny>center</aligny>
                        <width>auto</width>
                        <height>100%</height>
                        <visible>Weather.IsFetched + !System.HasAddon(resource.images.weathericons.white)</visible>
                    </control>
                    <control type="label">
                        <font>font_small</font>
                        <align>right</align>
                        <shadowcolor>main_bg_30</shadowcolor>
                        <textcolor>$VAR[ColorHighlight]</textcolor>
                        <label>$INFO[System.Date]</label>
                        <aligny>center</aligny>
                        <width>auto</width>
                        <height>100%</height>
                    </control>
                </control>
            </control>
        </control>
    </include>


    <!-- ======= -->
    <!-- SubMenu -->
    <!-- ======= -->


    <include name="Topbar_SubMenu_Group_Content">
        <top>80</top>
        <left>0</left>
        <right>0</right>
        <height>40</height>
        <control type="image">
            <bottom>-24</bottom>
            <height>24</height>
            <width>100%</width>
            <texture flipy="false">common/shadow-line-24px.png</texture>
        </control>
        <control type="image">
            <top>-100</top>
            <bottom>0</bottom>
            <texture colordiffuse="panel_bg">common/white.png</texture>
        </control>
    </include>

</includes>
