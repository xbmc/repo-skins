    <include name="View_List_Layout">
        <param name="id" default="50" />
        <param name="left" default="view_left" />
        <param name="width" default="view_width" />
        <param name="height" default="listitem_height" />
        <param name="offset" default="0" />
        <param name="roffset" default="10" />
        <definition>
            <description>Plugin Content Widget</description>
            <focusposition>4</focusposition>
            <movement>4</movement>
            <width>$PARAM[width]</width>
            <left>$PARAM[left]</left>
            <top>0</top>
            <include condition="!Window.IsVisible(DialogVideoInfo.xml)">View_Movement_Horizontal</include>
            <preloaditems>2</preloaditems>
            <orientation>vertical</orientation>
            <pagecontrol>60</pagecontrol>
            <onfocus>SetProperty(ViewType,List,Home)</onfocus>
            <scrolltime tween="quadratic">400</scrolltime>
            <itemlayout width="$PARAM[width]" height="$PARAM[height]">

                <control type="group">
                    <left>$PARAM[offset]</left>
                    <right>$PARAM[roffset]</right>
                    <control type="group">
                        <visible>!Window.IsVisible(MyPVRChannels.xml)</visible>
                        <!-- Overlay Indicator -->
                        <control type="image">
                            <centertop>50%</centertop>
                            <left>30</left>
                            <width>32</width>
                            <height>32</height>
                            <texture colordiffuse="main_fg_70">$VAR[Image_Overlay_List]</texture>
                            <visible>!String.IsEmpty(ListItem.Overlay)</visible>
                        </control>
                        <!-- Fallback Icon -->
                        <control type="image">
                            <centertop>50%</centertop>
                            <left>16</left>
                            <width>64</width>
                            <height>64</height>
                            <texture colordiffuse="main_fg_70" fallback="DefaultFolder.png">$VAR[Image_FallbackIcon]</texture>
                            <visible>String.IsEmpty(ListItem.Overlay)</visible>
                        </control>
                        <!-- HDSD Flag -->
                        <control type="image">
                            <centertop>51%</centertop>
                            <left>90</left>
                            <width>37</width>
                            <height>24</height>
                            <texture colordiffuse="main_fg_70">$VAR[Image_HDSD]</texture>
                            <visible>Container.Content(movies) | Container.Content(episodes)</visible>
                            <animation effect="slide" end="8" condition="String.IsEmpty(ListItem.Overlay)">Conditional</animation>
                            <visible>!ListItem.IsParentFolder</visible>
                        </control>
                        <!-- Year Label -->
                        <control type="label">
                            <left>156</left>
                            <width>80</width>
                            <height>100%</height>
                            <aligny>center</aligny>
                            <textcolor>main_fg_30</textcolor>
                            <font>font_small</font>
                            <label>$INFO[ListItem.Year]</label>
                            <animation effect="slide" end="-70" condition="!Container.Content(movies) + !Container.Content(episodes)">Conditional</animation>
                            <animation effect="slide" end="8" condition="String.IsEmpty(ListItem.Overlay)">Conditional</animation>
                            <visible>!String.IsEmpty(ListItem.Year) + Container.Content(movies)</visible>
                        </control>
                        <!-- Label with Year and HDSD -->
                        <control type="label">
                            <left>236</left>
                            <right>30</right>
                            <height>100%</height>
                            <aligny>center</aligny>
                            <textcolor>main_fg_70</textcolor>
                            <font>font_small</font>
                            <animation effect="slide" end="8" condition="String.IsEmpty(ListItem.Overlay)">Conditional</animation>
                            <label>$INFO[ListItem.Label]</label>
                            <visible>Container.Content(movies) + !String.IsEmpty(ListItem.Year) + !ListItem.IsParentFolder</visible>
                        </control>
                        <!-- Label with HDSD -->
                        <control type="label">
                            <left>156</left>
                            <right>30</right>
                            <height>100%</height>
                            <aligny>center</aligny>
                            <textcolor>main_fg_70</textcolor>
                            <font>font_small</font>
                            <animation effect="slide" end="8" condition="String.IsEmpty(ListItem.Overlay)">Conditional</animation>
                            <label>$INFO[ListItem.Label]</label>
                            <visible>[Container.Content(movies) + String.IsEmpty(ListItem.Year) + !ListItem.IsParentFolder] | Container.Content(episodes)</visible>
                        </control>
                        <!-- Label without HDSD or Year -->
                        <control type="label">
                            <left>86</left>
                            <right>30</right>
                            <height>100%</height>
                            <aligny>center</aligny>
                            <textcolor>main_fg_70</textcolor>
                            <font>font_small</font>
                            <animation effect="slide" end="8" condition="String.IsEmpty(ListItem.Overlay)">Conditional</animation>
                            <label>$INFO[ListItem.Label]</label>
                            <visible>[!Container.Content(movies) + !Container.Content(episodes)] | ListItem.IsParentFolder</visible>
                        </control>
                        <!-- Label 2 -->
                        <control type="label">
                            <left>30</left>
                            <right>30</right>
                            <align>right</align>
                            <height>100%</height>
                            <aligny>center</aligny>
                            <textcolor>main_fg_30</textcolor>
                            <font>font_small</font>
