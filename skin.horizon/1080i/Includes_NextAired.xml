<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="NextAired_Group">
        <param name="visible" default="true" />
        <definition>
            <control type="grouplist" id="8$PARAM[listid]">
                <left>42</left>
                <height>40</height>
                <top>0</top>
                <visible>$PARAM[visible]</visible>
                <visible>Integer.IsGreater(Container($PARAM[listid]).NumItems) | Container.IsUpdating($PARAM[listid])</visible>
                <orientation>horizontal</orientation>
                <usecontrolcoords>true</usecontrolcoords>
                <itemgap>16</itemgap>
                <control type="image">
                    <width>16</width>
                    <height>100%</height>
                    <aspectratio aligny="center">keep</aspectratio>
                    <texture colordiffuse="main_fg_30">common/cube-16.png</texture>
                </control>
                <control type="label">
                    <left>2</left>
                    <textcolor>main_fg_100</textcolor>
                    <label>$PARAM[label]$INFO[Window(Home).Property(NextAired.$PARAM[listid].Date),$COMMA  ,]</label>
                    <include>Statusbar_Menubar_Items</include>
                </control>
                <control type="image">
                    <texture colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
                    <width>3</width>
                    <top>10</top>
                    <bottom>8</bottom>
                    <visible>Control.HasFocus($PARAM[listid])</visible>
                </control>
                <control type="label">
                    <textcolor>main_fg_70</textcolor>
                    <label>$INFO[Container($PARAM[listid]).ListItem.Label]$INFO[Container($PARAM[listid]).ListItem.Property(NextNumber), â€¢ ,]$INFO[Container($PARAM[listid]).ListItem.Property(NextTitle), ,]$INFO[Container($PARAM[listid]).ListItem.Property(ShortTime), @ ,]</label>
                    <include>Statusbar_Menubar_Items</include>
                    <visible>Control.HasFocus($PARAM[listid])</visible>
                </control>
            </control>
            <control type="panel" id="$PARAM[listid]">
                <left>0</left>
                <right>0</right>
                <top>-20</top>
                <height>422</height>
                <orientation>horizontal</orientation>
                <visible>$PARAM[visible]</visible>
                <visible>Integer.IsGreater(Container($PARAM[listid]).NumItems) | Container.IsUpdating($PARAM[listid])</visible>
                <itemlayout width="570" height="422">
                    <control type="group">
                        <left>30</left>
                        <right>-10</right>
                        <top>30</top>
                        <height>318.125</height>
                        <control type="image">
                            <bordersize>10</bordersize>
                            <include>Defs_Shadow_Small</include>
                            <aspectratio scalediffuse="false">scale</aspectratio>
                            <texture colordiffuse="PosterBack">common/white.png</texture>
                        </control>
                        <control type="image">
                            <bordersize>10</bordersize>
                            <texture colordiffuse="main_bg_70">common/white.png</texture>
                        </control>
                        <control type="image">
                            <bordersize>10</bordersize>
                            <texture background="true">$INFO[ListItem.Property(fanart)]</texture>
                        </control>
                        <control type="image">
                            <right>10</right>
                            <bottom>10</bottom>
                            <height>35</height>
                            <width>190</width>
                            <texture colordiffuse="bf000000">common/white.png</texture>
                        </control>
                        <control type="label">
                            <right>10</right>
                            <bottom>10</bottom>
                            <height>35</height>
                            <width>190</width>
                            <aligny>center</aligny>
                            <align>center</align>
                            <font>font_statusbar</font>
                            <textcolor>main_fg_70</textcolor>
                            <label>$INFO[ListItem.Property(NextNumber)]$INFO[ListItem.Property(ShortTime), @ ,]</label>
                        </control>
                    </control>
                    
                </itemlayout>
                <focusedlayout width="570" height="422">
                    <control type="group">
                        <left>30</left>
                        <right>-10</right>
                        <top>30</top>
                        <height>318.125</height>
                        <include>Animation_FocusBounce_Small</include>
                        <control type="image">
                            <bordersize>10</bordersize>
                            <include>Defs_Shadow_Small</include>
                            <aspectratio scalediffuse="false">scale</aspectratio>
                            <texture colordiffuse="PosterBack">common/white.png</texture>
                        </control>
                        <control type="image">
                            <bordersize>10</bordersize>
                            <texture colordiffuse="main_bg_70">common/white.png</texture>
                        </control>
                        <control type="image">
                            <bordersize>10</bordersize>
                            <texture background="true">$INFO[ListItem.Property(fanart)]</texture>
                        </control>
                        <control type="image">
                            <right>10</right>
                            <bottom>10</bottom>
                            <height>35</height>
                            <width>190</width>
                            <texture colordiffuse="bf000000">common/white.png</texture>
                        </control>
                        <control type="label">
                            <right>10</right>
                            <bottom>10</bottom>
                            <height>35</height>
                            <width>190</width>
                            <aligny>center</aligny>
                            <align>center</align>
                            <font>font_statusbar</font>
                            <textcolor>main_fg_70</textcolor>
                            <label>$INFO[ListItem.Property(NextNumber)]$INFO[ListItem.Property(ShortTime), @ ,]</label>
                        </control>
                        <!-- Highlight -->
                        <control type="group">
                            <visible>Control.HasFocus($PARAM[listid])</visible>
                            <include>View_Selectbox</include>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            
        </definition>
    </include>
</includes>