<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="false">101</defaultcontrol>
    <zorder>4</zorder>
    <controls>
        <include>DimBG</include>
        <control type="group">
            <include>DialogOpenClose</include>
            <control type="image">
                <posx>0</posx>
                <posy>580</posy>
                <width>1920</width>
                <height>1080</height>
                <!--<include>DialogTransparency</include>-->
                <colordiffuse>$VAR[Picked.Theme.Color]</colordiffuse>
                <texture border="50">common/background_menu.png</texture>
            </control>
            <include name="WindowClosingButton">
                <param name="id" value="99010"/>
                <param name="x" value="1870"/>
                <param name="y" value="580"/>
                <param name="onleft" value="6060"/>
            </include>
            <control type="group">
                <posx>50</posx>
                <posy>680</posy>
                <control type="label">
                    <visible>Control.IsVisible(110)</visible>
                    <posx>TextMargin</posx>
                    <posy>0</posy>
                    <width>1720</width>
                    <height>50</height>
                    <font>InfoTitleFont</font>
                    <include>TextColor_MainColor</include>
                    <align>center</align>
                    <label>$ADDON[script.cu.lrclyrics 32199]</label>
                </control>
                <control type="label">
                    <visible>Control.IsVisible(120) + !Control.IsVisible(110)</visible>
                    <posx>TextMargin</posx>
                    <posy>0</posy>
                    <width>1720</width>
                    <height>50</height>
                    <font>InfoTitleFont</font>
                    <include>TextColor_MainColor</include>
                    <align>center</align>
                    <label>$LOCALIZE[134]</label>
                </control>
                <!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
                <control type="list" id="110">
                    <posx>0</posx>
                    <posy>100</posy>
                    <width>1820</width>
                    <height>250</height>
                    <onleft>110</onleft>
                    <onright>111</onright>
                    <onup>9900</onup>
                    <ondown>110</ondown>
                    <pagecontrol>111</pagecontrol>
                    <itemlayout height="50">
                        <control type="label">
                            <posx>TextMargin</posx>
                            <posy>0</posy>
                            <width>1720</width>
                            <height>50</height>
                            <aligny>center</aligny>
                            <align>center</align>
                            <font>FacadeListMainFont</font>
                            <textcolor>AlternateColor</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </itemlayout>
                    <focusedlayout height="50">
                        <control type="group">
                            <control type="image">
                                <posx>0</posx>
                                <posy>0</posy>
                                <height>50</height>
                                <width>1820</width>
                                <colordiffuse>$VAR[Picked.Theme.Color]</colordiffuse>
                                <texture border="1">list/bg_facade_focus.png</texture>
                            </control>
                            <control type="label">
                                <posx>TextMargin</posx>
                                <posy>0</posy>
                                <width>1720</width>
                                <height>50</height>
                                <aligny>center</aligny>
                                <align>center</align>
                                <font>FacadeListMainFont</font>
                                <include>TextColor_MainColor</include>
                                <label fallback="- -">$INFO[ListItem.Label]</label>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
                <control type="scrollbar" id="111">
                    <posx>1770</posx>
                    <posy>100</posy>
                    <height>250</height>
                    <include>VerticalScroller</include>
                    <onleft>110</onleft>
                    <onright>111</onright>
                </control>
                <!-- ** Required ** Do not change <id> or <type> (Song Chooser if it gets it wrong) -->
                <control type="list" id="120">
                    <posx>0</posx>
                    <posy>100</posy>
                    <width>1820</width>
                    <height>250</height>
                    <onleft>120</onleft>
                    <onright>120</onright>
                    <onup>9900</onup>
                    <ondown>120</ondown>
                    <pagecontrol>121</pagecontrol>
                    <itemlayout height="50">
                        <control type="label">
                            <posx>TextMargin</posx>
                            <posy>0</posy>
                            <width>1720</width>
                            <height>50</height>
                            <aligny>center</aligny>
                            <align>center</align>
                            <font>FacadeListMainFont</font>
                            <textcolor>AlternateColor</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </itemlayout>
                    <focusedlayout height="50">
                        <control type="group">
                            <control type="image">
                                <posx>0</posx>
                                <posy>0</posy>
                                <height>50</height>
                                <width>1820</width>
                                <colordiffuse>$VAR[Picked.Theme.Color]</colordiffuse>
                                <texture border="1">list/bg_facade_focus.png</texture>
                            </control>
                            <control type="label">
                                <posx>TextMargin</posx>
                                <posy>0</posy>
                                <width>1720</width>
                                <height>50</height>
                                <aligny>center</aligny>
                                <align>center</align>
                                <font>FacadeListMainFont</font>
                                <include>TextColor_MainColor</include>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
                <control type="scrollbar" id="121">
                    <posx>1770</posx>
                    <posy>100</posy>
                    <height>250</height>
                    <include>VerticalScroller</include>
                    <onleft>120</onleft>
                    <onright>121</onright>
                </control>
                <control type="label" id="200">
                    <description>Scraper label</description>
                    <visible>false</visible>
                </control>
            </control>
        </control>
    </controls>
</window>
