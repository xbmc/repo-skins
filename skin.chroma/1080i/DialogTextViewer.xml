<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol>61</defaultcontrol>
    <controls>
        <include>DimBG</include>
        <control type="group">
            <include>DialogOpenClose</include>
            <animation effect="slide" start="0,0" end="0,100" time="0" condition="!control.isvisible(5)">Conditional</animation>
            <control type="image">
                <posx>160</posx>
                <posy>140</posy>
                <width>1600</width>
                <height>1080</height>
                <!--<include>DialogTransparency</include>-->
                <colordiffuse>$VAR[Picked.Theme.Color]</colordiffuse>
                <texture border="50">common/background_menu.png</texture>
            </control>
            <include name="WindowClosingButton">
                <param name="id" value="9010"/>
                <param name="x" value="1710"/>
                <param name="y" value="140"/>
                <param name="onleft" value="6060"/>
            </include>
            <control type="label" id="1">
                <posx>260</posx>
                <posy>240</posy>
                <width>1400</width>
                <height>50</height>
                <font>InfoTitleFont</font>
                <scroll>true</scroll>
                <include>TextColor_MainColor</include>
            </control>
            <control type="textbox" id="5">
                <posx>260</posx>
                <posy>340</posy>
                <width>1400</width>
                <height>705</height>
                <font>InfoDetailsFontBig</font>
                <pagecontrol>61</pagecontrol>
            </control>
            <control type="scrollbar" id="61">
                <posx>1660</posx>
                <posy>340</posy>
                <height>705</height>
                <include>VerticalScroller</include>
            </control>
        </control>
    </controls>
</window>
