<includes>

	<!--Poster Group-->

	<include name="Poster_View">
		<posx>-20</posx>
		<posy>95</posy>
		<height>515</height>
		<width>1316</width>
		<onup>7000</onup>
		<ondown>61</ondown>
		<orientation>horizontal</orientation>
		<focusposition>3</focusposition>
		<scrolltime>200</scrolltime>
		<preloaditems>2</preloaditems>
		<pagecontrol>61</pagecontrol>
		<include>Animation_ZoomInZoomOut</include>
		<include>Animation_ZoomedByMenu</include>
		<visible>Window.IsActive(videolibrary) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons)]</visible>
		<itemlayout width="168" height="245">
			<control type="image">
				<posx>1</posx>
				<posy>131</posy>
				<width>162</width>
				<height>241</height>
				<texture>postermatteNF.png</texture>
				<include>Animation_HiddenByInfo</include>
				<visible>!IsEmpty(ListItem.Title)</visible>
			</control>
			<control type="image">
				<posx>1</posx>
				<posy>131</posy>
				<width>162</width>
				<height>241</height>
				<texture background="true" diffuse="postermatteNF.png">$INFO[ListItem.Icon]</texture>
				<fadetime>200</fadetime>
				<colordiffuse>89FFFFFF</colordiffuse>
				<aspectratio scalediffuse="false">keep</aspectratio>
				<include>Animation_HiddenByInfo</include>
				<visible>IsEmpty(ListItem.Title)</visible>
			</control>
			<control type="image">
				<posx>1</posx>
				<posy>131</posy>
				<width>162</width>
				<height>241</height>
				<texture background="true" diffuse="postermatteNF.png">$INFO[ListItem.Icon]</texture>
				<fadetime>200</fadetime>
				<colordiffuse>89FFFFFF</colordiffuse>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<include>Animation_HiddenByInfo</include>
				<visible>!IsEmpty(ListItem.Title)</visible>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>130</posy>
				<width>164</width>
				<height>243</height>
				<texture>posterframeNF.png</texture>
				<include>Animation_HiddenByInfo</include>
				<visible>!IsEmpty(ListItem.Title) + [[Container.Content(movies) + Skin.HasSetting(HideMovieWatchedOverlays) | !stringcompare(ListItem.Overlay,OverlayWatched.png)] | [!Container.Content(movies) + Skin.HasSetting(HideTVWatchedOverlays) | !stringcompare(ListItem.Overlay,OverlayWatched.png)]]</visible>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>130</posy>
				<width>164</width>
				<height>243</height>
				<texture>posterframewatchedNF.png</texture>
				<include>Animation_HiddenByInfo</include>
				<visible>!IsEmpty(ListItem.Title) + [[Container.Content(movies) + !Skin.HasSetting(HideMovieWatchedOverlays) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [!Container.Content(movies) + !Skin.HasSetting(HideTVWatchedOverlays) + stringcompare(ListItem.Overlay,OverlayWatched.png)]]</visible>
			</control>
			<control type="image">
				<posx>1</posx>
				<posy>373</posy>
				<width>162</width>
				<height>241</height>
				<texture background="true" flipy="true" diffuse="postermatteNF_reflect.png">$INFO[ListItem.Icon]</texture>
				<fadetime>200</fadetime>
				<colordiffuse>89FFFFFF</colordiffuse>					
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<include>Animation_HiddenByInfo</include>
			</control>				
		</itemlayout>
		<focusedlayout width="328" height="515">
			<control type="image">
				<posx>2</posx>
				<posy>20</posy>
				<width>320</width>
				<height>476</height>
				<texture background="true" diffuse="postermatte.png">$INFO[ListItem.Icon]</texture>
				<fadetime>200</fadetime>					
				<aspectratio scalediffuse="false">keep</aspectratio>
				<include>Animation_PosterInfoHide</include>
				<animation type="Focus" reversible="false">
					<effect type="zoom" center="auto" start="51" end="100" time="600" tween="back" easing="out" />
				</animation>
				<visible>IsEmpty(ListItem.Title)</visible>
			</control>
			<control type="image">
				<posx>2</posx>
				<posy>20</posy>
				<width>320</width>
				<height>476</height>
				<texture background="true" diffuse="postermatte.png">$INFO[ListItem.Icon]</texture>
				<fadetime>200</fadetime>					
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<include>Animation_PosterInfoHide</include>
				<animation type="Focus" reversible="false">
					<effect type="zoom" center="auto" start="51" end="100" time="600" tween="back" easing="out" />
				</animation>
				<visible>!IsEmpty(ListItem.Title)</visible>
			</control>
			<control type="image">
				<posx>-18</posx>
				<posy>0</posy>
				<width>359</width>
				<height>515</height>
				<texture>posterframeF.png</texture>
				<include>Animation_PosterInfoHide</include>
				<animation type="Focus" reversible="false">
					<effect type="zoom" center="auto" start="51" end="100" time="600" tween="back" easing="out" />
					<effect type="fade" start="0" end="100" time="600" />
				</animation>
				<visible>!IsEmpty(ListItem.Title) + [[Container.Content(movies) + Skin.HasSetting(HideMovieWatchedOverlays) | !stringcompare(ListItem.Overlay,OverlayWatched.png)] | [!Container.Content(movies) + Skin.HasSetting(HideTVWatchedOverlays) | !stringcompare(ListItem.Overlay,OverlayWatched.png)]]</visible>
			</control>
			<control type="image">
				<posx>-18</posx>
				<posy>0</posy>
				<width>359</width>
				<height>515</height>
				<texture>posterframewatchedF.png</texture>
				<include>Animation_PosterInfoHide</include>
				<animation type="Focus" reversible="false">
					<effect type="zoom" center="auto" start="51" end="100" time="600" tween="back" easing="out" />
					<effect type="fade" start="0" end="100" time="600" />
				</animation>
				<visible>!IsEmpty(ListItem.Title) + [[Container.Content(movies) + !Skin.HasSetting(HideMovieWatchedOverlays) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [!Container.Content(movies) + !Skin.HasSetting(HideTVWatchedOverlays) + stringcompare(ListItem.Overlay,OverlayWatched.png)]]</visible>
			</control>
		</focusedlayout>
	</include>

	<include name="Viewtype_Poster">

		<!-- Browser -->

		<control type="fixedlist" id="53">
			<viewtype label="31283">list</viewtype>
			<onleft>53</onleft>
			<onright>53</onright>
			<include>Poster_View</include>
		</control>

		<control type="wraplist" id="57">
			<viewtype label="31282">list</viewtype>
			<onleft>57</onleft>
			<onright>57</onright>
			<include>Poster_View</include>
		</control>

		<!-- Browser label and flags -->

		<control type="group">
			<include>Animation_SlideUpFadeOut</include>
			<include>Animation_HiddenByInfo</include>
			<include>Animation_ZoomedByMenu</include>			
			<visible>!IsEmpty(ListItem.Title) + !Container.Content(episodes) + [Control.IsVisible(53) | Control.IsVisible(57)]</visible>
			<control type="textbox">
				<posx>840</posx>
				<posy>486</posy>
				<width>420</width>
				<height>158</height>
				<font>Font_PosterTitle</font>
				<textcolor>PosterTitle</textcolor>
				<label>$INFO[ListItem.Label]</label>
				<visible>!Container.Content(seasons)</visible>
				<autoscroll time="2400" delay="2400" repeat="1200">True</autoscroll>
			</control>
			<control type="textbox">
				<posx>840</posx>
				<posy>486</posy>
				<width>420</width>
				<height>158</height>
				<font>Font_PosterTitle</font>
				<textcolor>PosterTitle</textcolor>
				<label>$INFO[ListItem.TVShowTitle][CR]$INFO[ListItem.Label]</label>
				<visible>Container.Content(seasons)</visible>
				<autoscroll time="2400" delay="2400" repeat="1200">True</autoscroll>
			</control>			
		</control>

		<!-- Scroll Bar -->

		<control type="scrollbar" id="61">
			<include>Animation_ZoomInZoomOut</include>
			<include>Animation_ZoomedByMenu</include>
			<posx>0</posx>
			<posy>712</posy>
			<width>1280</width>
			<height>18</height>
			<visible allowhiddenfocus="true">[Control.IsVisible(53) | Control.IsVisible(57)] + Control.HasFocus(61)</visible>
			<texturesliderbackground>-</texturesliderbackground>
			<textureslidernibfocus>ScrollBarV_Nib_Focus.png</textureslidernibfocus>
			<onup>53</onup>
			<ondown>-</ondown>
			<showonepage>true</showonepage>
			<orientation>horizontal</orientation>
			<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(61)">Conditional</animation>
		</control>

	</include>

</includes>
