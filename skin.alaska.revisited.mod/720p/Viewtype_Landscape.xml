			<posx>0</posx>
			<posy>712</posy>
			<width>1280</width>
			<height>18</height>
			<visible allowhiddenfocus="true">Control.IsVisible(52) + Control.HasFocus(62)</visible>
			<texturesliderbackground>-</texturesliderbackground>
			<textureslidernibfocus>ScrollBarV_Nib_Focus.png</textureslidernibfocus>
