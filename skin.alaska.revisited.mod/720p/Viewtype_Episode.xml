<includes>
	<include name="Viewtype_Episode">
		<!-- Browser -->
		<control type="fixedlist" id="51">
			<viewtype label="31290">list</viewtype>
			<posx>327</posx>
			<posy>130</posy>
			<width>933</width>
			<height>467</height>
			<scrolltime>0</scrolltime>
			<orientation>vertical</orientation>
			<movement>3</movement>
			<focusposition>2</focusposition>
			<onup>51</onup>
			<ondown>51</ondown>
			<onleft>7000</onleft>
			<onright>64</onright>
			<pagecontrol>64</pagecontrol>
			<visible>Window.IsActive(videolibrary) + Container.Content(episodes)</visible>
			<animation effect="slide" end="-60,0" delay="1200" condition="!Player.HasVideo + !VideoPlayer.IsFullscreen">Conditional</animation>
			<include>Animation_ZoomedByMenu</include>
			<include>Animation_ZoomInZoomOut</include>
			<include>Animation_HiddenByInfo</include>
			<include>Animation_EpisodeFloat</include>
			<itemlayout width="633" height="60">
				<control type="label">
					<posx>100</posx>
					<posy>0</posy>
					<width>80</width>
					<height>60</height>
					<align>right</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Episode]</label>
					<font>Font_EpisodeNumber</font>
					<textcolor>EpisodeNumber</textcolor>
					<selectedcolor>TextSelected</selectedcolor>
				</control>
				<control type="label">
					<posx>125</posx>
					<posy>6</posy>
					<width>633</width>
					<height>60</height>
					<align>left</align>
					<label>$INFO[ListItem.Label]</label>
					<font>Font_EpisodeTitleNF</font>
					<textcolor>EpisodeTitle</textcolor>
					<selectedcolor>TextSelected</selectedcolor>
					<visible>IsEmpty(ListItem.Title)</visible>
				</control>
				<control type="label">
					<posx>125</posx>
					<posy>6</posy>
					<width>633</width>
					<height>60</height>
					<align>left</align>
					<label>[COLOR TimeAMPM]$INFO[ListItem.TVShowTitle,, - ][/COLOR]$INFO[ListItem.Title]</label>
					<font>Font_EpisodeTitleNF</font>
					<textcolor>EpisodeTitle</textcolor>
					<selectedcolor>TextSelected</selectedcolor>
					<visible>!IsEmpty(ListItem.Title) + SubString(Container.FolderPath,videodb://5/) + [Skin.HasSetting(HideTVWatchedOverlays) | !stringcompare(ListItem.Overlay,OverlayWatched.png)]</visible>
				</control>
				<control type="label">
					<posx>125</posx>
					<posy>6</posy>
					<width>633</width>
					<height>60</height>
					<align>left</align>
					<label>[COLOR TimeAMPM]$INFO[ListItem.TVShowTitle,, - ][/COLOR]$INFO[ListItem.Title]  &#10004;</label>
					<font>Font_EpisodeTitleNF</font>
					<textcolor>EpisodeTitle</textcolor>
					<selectedcolor>TextSelected</selectedcolor>
					<visible>!IsEmpty(ListItem.Title) + SubString(Container.FolderPath,videodb://5/) + [!Skin.HasSetting(HideTVWatchedOverlays) + stringcompare(ListItem.Overlay,OverlayWatched.png)]</visible>
				</control>
				<control type="label">
					<posx>125</posx>
					<posy>6</posy>
					<width>633</width>
					<height>60</height>
					<align>left</align>
					<label>$INFO[ListItem.Title]</label>
					<font>Font_EpisodeTitleNF</font>
					<textcolor>EpisodeTitle</textcolor>
					<selectedcolor>TextSelected</selectedcolor>
					<visible>!IsEmpty(ListItem.Title) + !SubString(Container.FolderPath,videodb://5/) + [Skin.HasSetting(HideTVWatchedOverlays) | !stringcompare(ListItem.Overlay,OverlayWatched.png)]</visible>
				</control>
				<control type="label">
					<posx>125</posx>
					<posy>6</posy>
					<width>633</width>
					<height>60</height>
					<align>left</align>
					<label>$INFO[ListItem.Title]  &#10004;</label>
					<font>Font_EpisodeTitleNF</font>
					<textcolor>EpisodeTitle</textcolor>
					<selectedcolor>TextSelected</selectedcolor>
					<visible>!IsEmpty(ListItem.Title) + !SubString(Container.FolderPath,videodb://5/) + [!Skin.HasSetting(HideTVWatchedOverlays) + stringcompare(ListItem.Overlay,OverlayWatched.png)]</visible>
				</control>
				<control type="label">
					<posx>125</posx>
					<posy>31</posy>
					<width>633</width>
					<height>60</height>
					<align>left</align>
					<label>$INFO[ListItem.Date,$LOCALIZE[31272] ]$INFO[ListItem.Duration, • , $LOCALIZE[31299]]</label>
					<font>Font_EpisodeDetailNF</font>
					<textcolor>EpisodeTitle</textcolor>
					<selectedcolor>TextSelected</selectedcolor>
					<visible>!IntegerGreaterThan(ListItem.Duration,1)</visible>
				</control>
				<control type="label">
					<posx>125</posx>
					<posy>31</posy>
					<width>633</width>
					<height>60</height>
					<align>left</align>
					<label>$INFO[ListItem.Date,$LOCALIZE[31272] ]$INFO[ListItem.Duration, • , $LOCALIZE[31300]]</label>
					<font>Font_EpisodeDetailNF</font>
					<textcolor>EpisodeTitle</textcolor>
					<selectedcolor>TextSelected</selectedcolor>
					<visible>!IsEmpty(ListItem.Duration) + IntegerGreaterThan(ListItem.Duration,1)</visible>
				</control>
			</itemlayout>
			<focusedlayout width="633" height="164">
				<control type="image">
					<posx>13</posx>
					<posy>13</posy>
					<width>253</width>
					<height>139</height>
					<texture background="true" diffuse="episodematte.png">$INFO[ListItem.Icon]</texture>
					<aspectratio scalediffuse="false">keep</aspectratio>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
					</animation>
					<visible>IsEmpty(ListItem.Title)</visible>
				</control>
				<control type="image">
					<posx>13</posx>
					<posy>13</posy>
					<width>253</width>
					<height>139</height>
					<texture background="true" diffuse="episodematte.png">$INFO[ListItem.Icon]</texture>
					<aspectratio scalediffuse="false">scale</aspectratio>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
					</animation>
					<visible>!IsEmpty(ListItem.Title)</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>278</width>
					<height>164</height>
					<texture>episodeframe.png</texture>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
						<effect type="fade" start="0" end="100" time="200" />
					</animation>
					<visible>!IsEmpty(ListItem.Title) + [Skin.HasSetting(HideTVWatchedOverlays) | !stringcompare(ListItem.Overlay,OverlayWatched.png)]</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>278</width>
					<height>164</height>
					<texture>episodeframewatched.png</texture>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
						<effect type="fade" start="0" end="100" time="200" />
					</animation>
					<visible>!IsEmpty(ListItem.Title) + [!Skin.HasSetting(HideTVWatchedOverlays) + stringcompare(ListItem.Overlay,OverlayWatched.png)]</visible>
				</control>
				<control type="label">
					<posx>292</posx>
					<posy>25</posy>
					<width>633</width>
					<label>$INFO[ListItem.Episode,,. ]$INFO[ListItem.Title]</label>
					<font>Font_EpisodeLabelF</font>
					<textcolor>EpisodeLabelF</textcolor>
					<selectedcolor>TextSelected</selectedcolor>
					<animation type="Focus" reversible="false">
						<effect type="fade" start="0" end="100" time="200" />
					</animation>
					<visible>!IsEmpty(ListItem.Title)</visible>
				</control>
			</focusedlayout>
		</control>
		<control type="textbox">
			<posx>621</posx>
			<posy>192</posy>
			<width>628</width>
			<height>72</height>
			<align>left</align>
			<info>Container(51).ListItem.Plot</info>
			<font>Font_EpisodePlot</font>
			<textcolor>EpisodePlot</textcolor>
			<include>Animation_ZoomInZoomOut</include>
			<include>Animation_EpisodePlot</include>
			<include>Animation_EpisodeFloat</include>
			<include>Animation_ZoomedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<animation effect="slide" end="-60,0" delay="1200" condition="!Player.HasVideo + !VideoPlayer.IsFullscreen">Conditional</animation>
			<animation type="Conditional" reversible="false" condition="Control.HasFocus(51) + [!Container(51).OnNext + !Container(51).OnPrevious]">
				<effect type="fade" start="0" end="100" time="200" />
			</animation>
			<autoscroll time="3600" delay="6000" repeat="6000">Skin.HasSetting(AutoScroll)</autoscroll>
		</control>
		<!-- Scroll Bar -->
		<control type="scrollbar" id="64">
			<include>Animation_ZoomInZoomOut</include>
			<include>Animation_ZoomedByMenu</include>
			<posx>1270</posx>
			<posy>110</posy>
			<width>18</width>
			<height>468</height>
			<visible allowhiddenfocus="true">Control.IsVisible(51) + Control.HasFocus(64)</visible>
			<texturesliderbackground>-</texturesliderbackground>
			<textureslidernibfocus>ScrollBarV_Nib_Focus.png</textureslidernibfocus>
			<onleft>51</onleft>
			<onright>-</onright>
			<showonepage>true</showonepage>
			<orientation>vertical</orientation>
			<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(64)">Conditional</animation>
		</control>
	</include>
</includes>
