        <control type="grouplist" id="9000">
            <left>1470</left>
            <top>58</top>
            <width>400</width>
            <height>220</height>
            <itemgap>20</itemgap>
            <onleft>11</onleft>
            <onright>11</onright>
            <onup>9000</onup>
            <ondown>9000</ondown>  
            <control type="button" id="2">
                <description>Create Bookmark button</description>
                <label>294</label>
                <font>font15_title</font>
                <align>center</align>
                <width>400</width>
                <texturenofocus colordiffuse="33787878">selecteditem_bg.png</texturenofocus>
