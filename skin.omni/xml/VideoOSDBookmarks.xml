    <coordinates>
        <system>1</system>
        <left>0</left>
        <top>368</top>
    </coordinates>
    <controls>
        <control type="image">
            <width>1920</width>
            <height>712</height>
            <texture colordiffuse="background">$VAR[CommonBackgroundOverlay]</texture>
