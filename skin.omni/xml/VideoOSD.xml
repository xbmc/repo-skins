<?xml version="1.0" encoding="UTF-8"?>
<window>
    <coordinates>
        <system>1</system>
        <left>0</left>
        <top>0</top>
    </coordinates>
    <onload condition="Control.IsVisible(707)">SetFocus(707)</onload>
    <onload condition="!Control.IsVisible(707)">SetFocus(708)</onload>
    <controls>
        <control type="slider">
            <description>Seek Slider</description>
            <left>30</left>
            <top>1014</top>
