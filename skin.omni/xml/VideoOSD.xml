                <width>1920</width>
                <height>108</height>
                <texture colordiffuse="background">$VAR[CommonBackgroundOverlay]</texture>
            </control>
            <control type="image">
                <width>1920</width>
                <height>100</height>
                <texture colordiffuse="background">dialog.png</texture>
            </control>
