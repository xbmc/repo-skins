						<posx>15</posx>
						<posy>0</posy>
						<width>1290</width>
						<height>45</height>
						<font>font-20</font>
						<align>left</align>
						<aligny>center</aligny>
						<selectedcolor>$VAR[main_color]</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout width="1320" height="44">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>1320</width>
						<height>45</height>
						<texture colordiffuse="$VAR[main_color]">white.png</texture>
