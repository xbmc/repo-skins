<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">52</defaultcontrol>
	
	<controls>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<texture background="true">special://skin/backgrounds/camera.jpg</texture>
			<aspectratio>scale</aspectratio>
			<fadetime>300</fadetime>
		</control>
		<control type="group">

			<control type="group">

				<control type="label">
					<posx>0</posx>
					<posy>100</posy>
					<width>1920</width>
					<height>45</height>
					<font>font-40</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>[B]$LOCALIZE[10029][/B]</label>
				</control>
			</control>


			<control type="fixedlist" id="52">
				<posx>0</posx>
				<posy>398</posy>
				<width>1920</width>
				<height>502</height>
				<onleft>52</onleft>
				<onright>52</onright>
				<onup>20</onup>
				<ondown>20</ondown>
				<viewtype label="536">list</viewtype>
				<pagecontrol>61</pagecontrol>
				<scrolltime>200</scrolltime>
				<preloaditems>2</preloaditems>
				<focusposition>2</focusposition>
				<orientation>horizontal</orientation>
				<hitrect x="768" y="390" w="384" h="384" />
				<itemlayout width="384" height="465">
					<control type="image">
						<posx>20</posx>
						<posy>20</posy>
						<width>345</width>
						<height>345</height>
						<texture background="true" fallback="defaultuser.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
					</control>
					<control type="label">
						<posx>34</posx>
						<posy>278</posy>
						<width>315</width>
						<height>42</height>
						<font>font-28</font>
						<textcolor>white</textcolor>
						<align>center</align>
						<aligny>center</aligny>
						<label>[B]$INFO[ListItem.label][/B]</label>
					</control>
				</itemlayout>
				<focusedlayout width="384" height="465">
					<control type="image">
						<posx>20</posx>
						<posy>20</posy>
						<width>345</width>
						<height>345</height>
						<texture background="true" fallback="defaultuser.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<animation reversible="false" effect="zoom" start="100" end="130" center="auto" time="200">focus</animation>
						<animation reversible="false" effect="zoom" start="130" end="100" center="auto" time="200">unfocus</animation>
					</control>
					<control type="label">
						<posx>34</posx>
						<posy>278</posy>
						<width>315</width>
						<height>42</height>
						<font>font-28</font>
						<textcolor>white</textcolor>
						<align>center</align>
						<aligny>center</aligny>
						<label>[B]$INFO[ListItem.label][/B]</label>
					</control>
				</focusedlayout>
			</control>


				
				<include>top_bar</include>
				<!-- Footer -->
				<control type="label">
					<posx>60</posx>
					<posy>1000</posy>
					<height>45</height>
					<width>1800</width>
					<font>font-20</font>
					<textcolor>white</textcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>[B]$INFO[ListItem.label2][/B]</label>
				</control>
				<control type="button" id="20">
					<description>Power push button</description>
					<posx>20</posx>
					<bottom>20</bottom>
					<width>64</width>
					<height>64</height>
					<label>-</label>
					<font>-</font>
					<onclick>ActivateWindow(ShutdownMenu)</onclick>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<pulseonselect>true</pulseonselect>
					<onleft>52</onleft>
					<onright>52</onright>
					<onup>52</onup>
					<ondown>52</ondown>
				</control>
				<control type="image">
					<posx>20</posx>
					<bottom>20</bottom>
					<width>64</width>
					<height>64</height>
					<aspectratio>keep</aspectratio>
					<texture background="true">main/power.png</texture>
					<animation effect="rotate" start="0" end="-360" center="auto" time="400" condition="Control.HasFocus(20)">Conditional</animation>
					<animation effect="zoom" start="100" end="140" center="auto" time="300" condition="Control.HasFocus(20)">Conditional</animation>
				</control>
		</control>
	</controls>
</window>
