<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1131">
	<defaultcontrol>10</defaultcontrol>
	<animation effect="zoom" start="0" end="100" center="960,540" time="200">WindowOpen</animation>
			<animation effect="zoom" start="100" end="0" center="960,540" time="200">WindowClose</animation>
	<coordinates>
		<system>1</system>
		<left>580</left>
		<top>265</top>
	</coordinates>
	<controls>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>20</posy>
			<width>760</width>
			<height>550</height>
			<texture background="true" colordiffuse="grey_50">white.png</texture>
			<bordertexture colordiffuse="grey">white.png</bordertexture>
			<bordersize>2</bordersize>
		</control>
		<control type="label">
			<posx>20</posx>
			<posy>40</posy>
			<width>720</width>
			<height>45</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>font-25</font>
			<textcolor>$VAR[main_color]</textcolor>
			<label>[B]$INFO[Skin.String(dialog_header)][/B]</label>
		</control>

		<!-- Button grouplist -->
		<control type="grouplist" id="9000">
			<posx>80</posx>
			<posy>500</posy>
			<width>1620</width>
			<height>55</height>
			<itemgap>10</itemgap>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<onup>100</onup>
			<ondown>100</ondown>
			<orientation>horizontal</orientation>

			<!-- OK Button -->
			<control type="button" id="10">
				<width>300</width>
				<label>186</label>
				<textoffsetx>5</textoffsetx>
				<include>button_dialogs</include>
				<onclick>Close</onclick>
				<onclick>$INFO[Skin.String(dialog_action)]</onclick>
			</control>

			<!-- Cancel Button -->
			<control type="button" id="11">
				<width>300</width>
				<label>222</label>
				<textoffsetx>5</textoffsetx>
				<include>button_dialogs</include>
				<onclick>Close</onclick>
			</control>
		</control>

			<control type="textbox" id="100">
				<left>20</left>
				<top>100</top>
				<width>720</width>
				<height>782</height>
				<label>$INFO[Skin.String(dialog_msg)]</label>
				<font>font-22</font>
				<align>center</align>
		</control>
	</controls>
</window>