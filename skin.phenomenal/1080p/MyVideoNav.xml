<?xml version="1.0" encoding="UTF-8"?>
<window>
	<onload condition="Skin.HasSetting(NextAired)">RunScript(script.tv.show.next.aired,backend=True)</onload>
	<defaultcontrol always="true">50</defaultcontrol>
	<views><include>view_numbers</include></views>
	<menucontrol>9100</menucontrol>
	<controls>
		<include>FS_Video</include>
		<control type="group">
			<control type="group">
				<include>view_conditions</include>
				<include>top_bar</include>
				<include>VideoInfo</include>
				<include>MusicInfo</include>
			</control>
		</control>

		
		<include>view_options_fade_screen</include>
		<include>side_tab</include>
		<control type="group">
			<include>myvideonav_hiddenbutton</include>
			<control type="group"> 
				<visible>IntegerGreaterThan(Container.NumItems,-1) | !Container.IsUpdating</visible>
				<posy>100</posy>
				<include content="myvideonav_toolbar_animation" condition="StringCompare(System.Language,Hebrew) | Skin.HasSetting(Prefer_RTL)"><param name="end" value="370" /></include>
				<include content="myvideonav_toolbar_animation" condition="!StringCompare(System.Language,Hebrew) + !Skin.HasSetting(Prefer_RTL)"><param name="end" value="-360" /></include>
				<include content="dialog_view_options"></include>
				<control type="grouplist" id="9100">
					<include>sidebar_list_size</include>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>9100</onup>
					<ondown>9100</ondown>
					<onback>50</onback>
					<itemgap>0</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<orientation>vertical</orientation>
					<visible>!Skin.HasSetting(KioskMode)</visible>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="button" id="4000">
						<description>View As button</description>
						<label>$LOCALIZE[457]: $INFO[Container.Viewmode]</label>
						<onclick>RunScript(script.skin.helper.service,action=SETVIEW)</onclick>
						<include>view_settings_radiobutton</include>
					</control>
					<control type="button" id="498">
						<description>Show View Options</description>
						<label>14018</label>
						<include>view_settings_radiobutton</include>
						<onclick>SetFocus(8000)</onclick>
					</control>
					<control type="button" id="3">
						<description>Sort by button</description>
						<label>103</label>
						<include>view_settings_radiobutton</include>
					</control>
					<control type="togglebutton" id="4">
						<description>Sort asc</description>
						<align>center</align>
						<alttexturefocus colordiffuse="$VAR[main_color]">white.png</alttexturefocus>
						<alttexturenofocus>-</alttexturenofocus>
						<disabledcolor>grey</disabledcolor>
						<label>$LOCALIZE[21429]: $LOCALIZE[584]</label>
						<altlabel>$LOCALIZE[21429]: $LOCALIZE[585]</altlabel>
						<include>view_settings_radiobutton</include>
					</control>
					<control type="button" id="10">
						<description>Watched Toggle</description>
						<label>20367</label>
						<label2>$INFO[Container.NumItems]</label2>
						<include>view_settings_radiobutton</include>
					</control>
					<control type="button" id="8">
						<description>Search</description>
						<label>137</label>
						<include>view_settings_radiobutton</include>
					</control>
					<control type="button" id="19">
						<description>Filter</description>
						<label>587</label>
						<include>view_settings_radiobutton</include>
						<visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
					</control>
					<control type="radiobutton" id="23">
						<description>Advanced Filter</description>
						<include>view_settings_radiobutton</include>
						<label>587</label>
						<onclick>right</onclick>
						<onclick>Filter</onclick>
						<selected>Container.Filtered</selected>
						<visible>Container.CanFilterAdvanced</visible>
					</control>
					<control type="togglebutton" id="20">
						<description>Update Library</description>
						<label>653</label>
						<altlabel>13353</altlabel>
						<alttexturefocus colordiffuse="$VAR[main_color]">white.png</alttexturefocus>
						<alttexturenofocus>-</alttexturenofocus>
						<usealttexture>library.isscanningvideo</usealttexture>
						<include>view_settings_radiobutton</include>
					</control>
					<control type="radiobutton" id="16">
						<description>PartyMode</description>
						<include>view_settings_radiobutton</include>
						<label>589</label>
					</control>
					<control type="radiobutton" id="11">
						<description>Unlock Shares</description>
						<label>12333</label>
						<pulseonselect>no</pulseonselect>
						<onclick>Xbmc.MasterMode</onclick>
						<selected>System.IsMaster</selected>
						<include>view_settings_radiobutton</include>
						<visible>System.HasLocks</visible>
					</control>

					<control type="button" id="611">
						<description>FullScreen</description>
						<label>244</label>
						<onclick>FullScreen</onclick>
						<include>view_settings_radiobutton</include>
						<visible>Player.HasAudio | Player.HasVideo</visible>
					</control>
					<control type="button" id="22">
						<description>now playing</description>
						<label>13350</label>
						<onclick>ActivateWindow(videoplaylist)</onclick>
						<include>view_settings_radiobutton</include>
						<visible>!StringCompare(Playlist.Length(video),0)</visible>
					</control>

				</control>
			</control>
		</control>


		<include>view_options_panel</include>
		<include>NextAiredInfo</include>

	</controls>
</window>
