<?xml version="1.0" encoding="UTF-8"?>
<window>
	<visible>Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding</visible>
	<controls>
		<control type="group">
			<visible>Window.IsVisible(fullscreenvideo) | Window.IsVisible(musicosd)</visible>
			<animation effect="slide" start="0,-120" end="0,0" time="250">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,-120" time="250">WindowClose</animation>
			<posx>0</posx>
			<posy>0</posy>
			<control type="image">
			<texture colordiffuse="grey_50">white.png</texture>
			<width>1920</width>
			<height>120</height>
			<animation effect="fade" end="72" time="0" condition="true">Conditional</animation>
			</control>
			<!-- Progress Bar -->
			<control type="group">
				<posx>0</posx>
				<posy>80</posy>
				<control type="progress">
					<description>Progressbar Cache</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>1920</width>
					<height>38</height>
					<info>Player.ProgressCache</info>
					<texturebg colordiffuse="grey_a" border="1,1,1,1">osd/2.png</texturebg>
					<midtexture colordiffuse="grey_a" border="1,1,1,1">osd/5.png</midtexture>
				</control>
				<control type="progress">
					<description>Progressbar</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>1920</width>
					<height>38</height>
					<texturebg colordiffuse="darkgrey" border="1,0,1,0">osd/4.png</texturebg>
					<midtexture colordiffuse="$VAR[main_color]" border="1,0,1,0">osd/5.png</midtexture>
					<lefttexture>-</lefttexture>
					<righttexture>-</righttexture>
					<info>Player.Progress</info>
				</control>

				<control type="slider" id="888">
					<description>Seek Slider</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>1920</width>
					<height>38</height>
					<action>seek</action>
					<texturesliderbar border="1,0,1,0">osd/4.png</texturesliderbar>
					<textureslidernib>osd/3.png</textureslidernib>
					<textureslidernibfocus>osd/3.png</textureslidernibfocus>
				</control>
				<control type="label">
					<description>time label</description>
					<posx>20</posx>
					<posy>-45</posy>
					<width>1000</width>
					<height>38</height>
					<align>left</align>
					<aligny>center</aligny>
					<font>font-30</font>
					<textcolor>grey_b</textcolor>
					<shadowcolor>-</shadowcolor>
					<label>$INFO[VideoPlayer.Time][B] / [/B]$INFO[Player.Duration]</label>
				</control>
				<control type="label">
					<description>time label</description>
					<posx>0</posx>
					<posy>-65</posy>
					<width>1920</width>
					<height>38</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>font-30</font>
					<textcolor>grey_b</textcolor>
					<shadowcolor>-</shadowcolor>
					<label>$INFO[System.Time]</label>
				</control>
				<control type="label">
					<description>time label</description>
					<posx>0</posx>
					<posy>-25</posy>
					<width>1920</width>
					<height>38</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>font-20</font>
					<textcolor>grey_b</textcolor>
					<shadowcolor>-</shadowcolor>
					<label>$LOCALIZE[31050] $INFO[VideoPlayer.FinishTime]</label>
				</control>
				
			</control>
			<control type="label">
				<description>Label</description>
				<posx>1900</posx>
				<posy>35</posy>
				<width>1000</width>
				<height>38</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>font-40</font>
				<textcolor>grey_b</textcolor>
				<shadowcolor>-</shadowcolor>
				<label>$VAR[DialogSeekBarLabel]</label>
			</control>
		</control>
	</controls>
</window>
