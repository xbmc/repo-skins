<?xml version="1.0" encoding="UTF-8"?>
<window type="buttonmenu">
	<defaultcontrol always="true">6000</defaultcontrol>
	<controls>
		<control type="image">
			<description>shutdown</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<texture background="true">black.png</texture>
			<aspectratio>scale</aspectratio>
			<animation effect="fade" start="0" end="80" time="200">WindowOpen</animation>
			<animation effect="fade" start="80" end="0" time="200">WindowClose</animation>
		</control>

		<!-- List -->
		<control type="group">
			<posx>675</posx>
			<posy>290</posy>
			<animation effect="fade" start="0" end="100" delay="100" time="200">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<description>dialog shutdown</description>
				<width>570</width>
				<height>450</height>
				<texture background="true" colordiffuse="grey_50">white.png</texture>
				<bordertexture colordiffuse="grey">white.png</bordertexture>
				<bordersize>2</bordersize>
				<aspectratio>scale</aspectratio>
				<visible>System.CanSuspend</visible>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<description>dialog shutdown</description>
				<width>570</width>
				<height>220</height>
				<texture background="true" colordiffuse="grey_50">white.png</texture>
				<bordertexture colordiffuse="grey">white.png</bordertexture>
				<bordersize>2</bordersize>
				<aspectratio>scale</aspectratio>
				<visible>!System.CanSuspend</visible>
			</control>
			<control type="grouplist" id="6000">
				<posx>0</posx>
				<posy>0</posy>
				<width>550</width>
				<height>442</height>
				<onup>6000</onup>
				<ondown>6000</ondown>
				<onleft>Close</onleft>
				<onright>Close</onright>
				<itemgap>0</itemgap>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<!-- Dummy to set focus to top -->
				<control type="button" id="6001">
					<width>0</width>
					<height>-1</height>
					<label>-</label>
					<onfocus>Down</onfocus>
					<visible>False</visible>
				</control>
				<control type="button" id="6002">
					<include>shutdown_buttons</include>
					<label>13012</label>
					<onclick>XBMC.Quit()</onclick>
					<visible>System.ShowExitButton</visible>
				</control>
				<control type="button" id="6003">
					<include>shutdown_buttons</include>
					<label>13016</label>
					<onclick>XBMC.Powerdown()</onclick>
					<visible>System.CanPowerDown</visible>
				</control>
				<control type="button" id="6004">
					<include>shutdown_buttons</include>
					<label>13011</label>
					<onclick>XBMC.Suspend()</onclick>
					<visible>System.CanSuspend</visible>
				</control>
				<control type="button" id="6005">
					<include>shutdown_buttons</include>
					<label>13010</label>
					<onclick>XBMC.Hibernate()</onclick>
					<visible>System.CanHibernate</visible>
				</control>
				<control type="button" id="6006">
					<include>shutdown_buttons</include>
					<label>13013</label>
					<onclick>XBMC.Reset()</onclick>
					<visible>System.CanReboot</visible>
				</control>
				<control type="button" id="6007">
					<include>shutdown_buttons</include>
					<label>$LOCALIZE[20126] $INFO[system.profilename]</label>
					<onclick>dialog.close(all,true)</onclick>
					<onclick>System.LogOff</onclick>
					<visible>System.HasLoginScreen | IntegerGreaterThan(System.ProfileCount,1)</visible>
					<visible>System.Loggedon</visible>
				</control>
				<control type="button" id="6008">
					<include>shutdown_buttons</include>
					<label>20046</label>
					<altlabel>20045</altlabel>
					<usealttexture>!System.IsMaster</usealttexture>
					<onclick>xbmc.mastermode</onclick>
					<visible>System.HasLocks</visible>
				</control>
				<control type="button" id="6009">
					<include>shutdown_buttons</include>
					<label>13017</label>
					<onclick>XBMC.InhibitIdleShutdown(true)</onclick>
					<visible>System.HasShutdown +!System.IsInhibit</visible>
				</control>
				<control type="button" id="6010">
					<include>shutdown_buttons</include>
					<label>13018</label>
					<onclick>XBMC.InhibitIdleShutdown(false)</onclick>
					<visible>System.HasShutdown + System.IsInhibit</visible>
				</control>
				<control type="button" id="6011">
					<include>shutdown_buttons</include>
					<label>20150</label>
					<onclick>XBMC.AlarmClock(shutdowntimer,XBMC.Shutdown())</onclick>
					<visible>!System.HasAlarm(shutdowntimer)</visible>
					<visible>System.CanPowerDown | System.CanSuspend | System.CanHibernate</visible>
				</control>
				<control type="button" id="6012">
					<include>shutdown_buttons</include>
					<label>20151</label>
					<onclick>XBMC.CancelAlarm(shutdowntimer)</onclick>
					<visible>System.HasAlarm(shutdowntimer)</visible>
				</control>
				<control type="label" id="6013">
					<include>shutdown_buttons</include>
					<label>$INFO[System.Alarmpos,Timer-]</label>
					<visible>System.HasAlarm(shutdowntimer)</visible>
				</control>
				<control type="button" id="6014">
					<include>shutdown_buttons</include>
					<label>13014</label>
					<onclick>Dialog.Close(shutdownmenu)</onclick>
					<onclick>XBMC.Minimize()</onclick>
					<visible>!System.Platform.Linux</visible>
				</control>
				<control type="button" id="6016">
					<include>shutdown_buttons</include>
					<label>20183</label>
					<onclick>Dialog.Close(shutdownmenu)</onclick>
					<onclick>XBMC.ReloadSkin()</onclick>
				</control>
				<control type="button" id="6015">
					<include>shutdown_buttons</include>
					<label>5</label>
					<onclick>ActivateWindow(Settings)</onclick>
				</control>
			</control>
		</control>
	</controls>
</window>
