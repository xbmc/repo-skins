<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">100</defaultcontrol>
	<menucontrol>9100</menucontrol>

	<controls>
		<!-- Hidden button -->
		<control type="button" id="100">
			<onclick condition="!Skin.HasSetting(KioskMode)">SetFocus(9100)</onclick>
			<onup condition="!Skin.HasSetting(KioskMode)">9100</onup>
			<ondown condition="!Skin.HasSetting(KioskMode)">9100</ondown>
			<onleft condition="!Skin.HasSetting(KioskMode)">9100</onleft>
			<onright condition="!Skin.HasSetting(KioskMode)">9100</onright>
			<visible allowhiddenfocus="true">false</visible>
		</control>

		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<imagepath background="true">$VAR[weather_fanart]</imagepath>
			<aspectratio>scale</aspectratio>
			<timeperimage>5000</timeperimage>
			<randomize>true</randomize>
			<fadetime>2000</fadetime>
			<visible>!IsEmpty(Window(Weather).Property(Current.FanartCode))</visible>
		</control>
		<control type="image">
			<left>0</left>
			<top>300</top>
			<width>1920</width>
			<height>780</height>
			<texture background="true">views\showcase_floor.png</texture>
			<animation effect="fade" end="60" time="0" condition="true">Conditional</animation>
		</control>
		<control type="grouplist">
			<posx>20</posx>
			<posy>800</posy>
			<orientation>horizontal</orientation>
			<height>340</height>
			<itemgap>80</itemgap>
			<include>weather_list</include>
		</control>
		<control type="label">
			<posx>15</posx>
			<posy>15</posy>
			<width>1920</width>
			<font>font-30</font>
			<height>90</height>
			<textcolor>white</textcolor>
			<shadowcolor>$VAR[main_color]</shadowcolor>
			<label>[B]$INFO[Window(Weather).Property(Location)][/B]</label>
			<align>center</align>
		</control>
		<!-- Menu -->
		<include>view_options_fade_screen</include>
		<include>side_tab</include>
		<control type="group">
			<include>myvideonav_hiddenbutton</include>
			<control type="group"> 
				<visible>IntegerGreaterThan(Container.NumItems,-1) | !Container.IsUpdating</visible>
				<posy>100</posy>
				<include content="myvideonav_toolbar_animation" condition="StringCompare(System.Language,Hebrew) | Skin.HasSetting(Prefer_RTL)"><param name="end" value="370" /></include>
				<include content="myvideonav_toolbar_animation" condition="!StringCompare(System.Language,Hebrew) + !Skin.HasSetting(Prefer_RTL)"><param name="end" value="-360" /></include>
				<include content="dialog_view_options"></include>
				<control type="grouplist" id="9100">
					<include>sidebar_list_size</include>
					<onleft>100</onleft>
					<onright>100</onright>
					<onup>9100</onup>
					<ondown>9100</ondown>
					<onback>100</onback>
					<itemgap>0</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<orientation>vertical</orientation>

					<!-- Refresh -->
					<control type="button" id="2">
						<include>view_settings_radiobutton</include>
						<visible>Control.IsEnabled(2)</visible>
					</control>
					<!-- Change Location -->
					<control type="button" id="9001">
						<include>view_settings_radiobutton</include>
						<onclick>Weather.LocationNext</onclick>
						<label>$INFO[Weather.Location]</label>
					</control>
					<!-- Fanart -->
					<control type="button" id="9002">
						<label>20413</label>
						<onclick>RunScript(script.image.resource.select,property=weather.fanart&amp;type=resource.images.weatherfanart)</onclick>
						<include>view_settings_radiobutton</include>
					</control>
					<!-- Icon -->
					<control type="button" id="9003">
						<label>19284</label>
						<onclick>RunScript(script.image.resource.select,property=weather.icons&amp;type=resource.images.weathericons)</onclick>
						<include>view_settings_radiobutton</include>
					</control>
					<!-- Settings -->
					<control type="button" id="9004">
						<label>$LOCALIZE[5]</label>
						<onclick>activatewindow(InterfaceSettings)</onclick>
						<include>view_settings_radiobutton</include>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>
