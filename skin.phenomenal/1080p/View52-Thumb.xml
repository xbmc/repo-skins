<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View-Thumbs-52">
		<include>Thumbs_View</include>

	</include>
	<include name="Thumbs_View">
		<control type="group">
			<visible>Control.IsVisible(52)</visible>
			<visible>IntegerGreaterThan(Container.NumItems,-1) | !Container.IsUpdating</visible>
			<include>views_animation</include>
			<control type="multiimage">
				<description>Fanart</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1600</width>
				<height>900</height>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<imagepath background="true" diffuse="views/fanart_diffuse.png">$VAR[fanart_bg]</imagepath>
				<timeperimage>5000</timeperimage>
				<randomize>true</randomize>
				<fadetime>650</fadetime>
				<animation effect="fade" start="100" end="70" time="300" condition="true">Conditional</animation>
				<visible>!Player.HasVideo</visible>
			</control>

			<control type="FixedList" id="52">
				<posx>-140</posx>
				<posy>800</posy>
				<width>2140</width>
				<height>400</height>
				<onleft>52</onleft>
				<onright>52</onright>
				<onup>9100</onup>
				<ondown>60</ondown>
				<viewtype label="31202">list</viewtype>
				<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),52) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="Quadratic" easing="out">300</scrolltime>
				<preloaditems>2</preloaditems>
				<orientation>Horizontal</orientation>
				<focusposition>1</focusposition>
				<animation effect="fade" start="0" end="100" time="1000">WindowOpen</animation>
				<animation effect="fade" start="100" end="0" delay="0" time="400">WindowClose</animation>
				<itemlayout width="340">
					<control type="image">
						<posx>0</posx>
						<width>330</width>
						<height>190</height>
						<aspectratio>stretch</aspectratio>
						<texture diffuse="posterdiffuse.png" background="true" colordiffuse="grey_50">white.png</texture>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>320</width>
						<height>180</height>
						<aspectratio>stretch</aspectratio>
						<texture diffuse="posterdiffuse.png" background="true">$INFO[ListItem.Icon]</texture>
						<visible>!StringCompare(Listitem.Label,..)</visible>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>320</width>
						<height>180</height>
						<aspectratio>stretch</aspectratio>
						<texture diffuse="posterdiffuse.png" colordiffuse="$VAR[main_color]" background="true">$INFO[ListItem.Icon]</texture>
						<visible>StringCompare(Listitem.Label,..)</visible>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>205</posy>
						<width>320</width>
						<height>180</height>
						<aspectratio>stretch</aspectratio>
						<texture diffuse="posterdiffuse.png" flipy="true" background="true">$INFO[ListItem.Icon]</texture>
						<animation effect="fade" end="15" time="0" condition="true">Conditional</animation>
					</control> 
					<!-- Title Tag on image -->
					<control type="group">
						<visible>!Skin.HasSetting(Hide_label_view_52)</visible>
						<control type="image">
							<posx>5</posx>
							<posy>137</posy>
							<width>320</width>
							<height>50</height>
							<texture diffuse="posterdiffuse.png" background="true">black.png</texture>
							<animation effect="fade" end="80" time="0" condition="true">Conditional</animation>
						</control>
						<control type="label">
							<posx>5</posx>
							<posy>142</posy>
							<width>320</width>
							<height>50</height>
							<align>center</align>	
							<font>font-22</font>
							<textcolor>grey</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</control>
					<control type="group">
						<posx>257</posx>
						<include>view_icons_watched_flags</include>
					</control>
				</itemlayout>
				<focusedlayout width="340" height="580">
					<control type="image">
						<posx>0</posx>
						<width>330</width>
						<height>190</height>
						<aspectratio>stretch</aspectratio>
						<texture diffuse="posterdiffuse.png" background="true" colordiffuse="grey_50">white.png</texture>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>320</width>
						<height>180</height>
						<aspectratio>stretch</aspectratio>
						<texture diffuse="posterdiffuse.png" background="true">$INFO[ListItem.Icon]</texture>
						<visible>!StringCompare(Listitem.Label,..)</visible>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>320</width>
						<height>180</height>
						<aspectratio>stretch</aspectratio>
						<texture diffuse="posterdiffuse.png" colordiffuse="$VAR[main_color]" background="true">$INFO[ListItem.Icon]</texture>
						<visible>StringCompare(Listitem.Label,..)</visible>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>205</posy>
						<width>320</width>
						<height>180</height>
						<aspectratio>stretch</aspectratio>
						<texture diffuse="posterdiffuse.png" flipy="true" background="true">$INFO[ListItem.Icon]</texture>
						<animation effect="fade" end="15" time="0" condition="true">Conditional</animation>
					</control> 
					<!-- Title Tag on image -->
					<control type="group">
						<visible>!Skin.HasSetting(Hide_label_view_52)</visible>
						<control type="image">
							<posx>5</posx>
							<posy>140</posy>
							<width>320</width>
							<height>50</height>
							<texture diffuse="posterdiffuse.png" background="true">black.png</texture>
							<animation effect="fade" end="80" time="0" condition="true">Conditional</animation>
						</control>
						<control type="label">
							<posx>5</posx>
							<posy>142</posy>
							<width>320</width>
							<height>50</height>
							<align>center</align>	
							<font>font-22</font>
							<textcolor>$VAR[main_color]</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</control>
					<control type="group">
						<posx>257</posx>
						<posy>-1</posy>
						<include>view_icons_watched_flags</include>
					</control>
				</focusedlayout>
			</control>
			<control type="image">
				<posx>200</posx>
				<posy>800</posy>
				<width>330</width>
				<height>190</height>
				<aspectratio>stretch</aspectratio>
				<texture diffuse="posterdiffuse.png" background="true" colordiffuse="$VAR[main_color]">views/poster_stroke.png</texture>
				<visible>!Container.IsUpdating + !IsEmpty(Control.GetLabel(52))</visible>
			</control>


			<control type="scrollbar" id="60">
				<posx>0</posx>
				<posy>1090</posy>
				<width>1920</width>
				<height>10</height>
				<onup>52</onup>
				<ondown condition="Player.HasMedia">FullScreen</ondown>
				<orientation>horizontal</orientation>
				<include>scroll_bar</include>
				<animation effect="slide" start="0,0" end="0,-20" time="200" condition="Container.Scrolling | Control.HasFocus(60)">Conditional</animation>
				<visible>Control.IsVisible(52)</visible>
			</control>

			<control type="group">
				<posx>1520</posx>
				<visible>!Container(52).OnNext + !Container(52).OnPrevious</visible>
				
				<control type="label">
					<posx>0</posx>
					<posy>100</posy>
					<width>400</width>
					<height>100</height>
					<font>font-30</font>
					<textcolor>$var[main_color]</textcolor>
					<align>center</align>
					<label>$VAR[movie_label]</label>
					<wrapmultiline>true</wrapmultiline>	
				</control> 

				<control type="image">
					<posx>-690</posx>
					<posy>980</posy>
					<width>260</width>
					<height>100</height>	
					<texture background="true">$INFO[Skin.String(music_path)]$INFO[ListItem.Artist,,/logo.png]</texture>
					<visible>Container.Content(Artists) | Container.Content(Albums)</visible>
				</control>

				<!-- Premiered -->
				<control type="label">
					<posx>5</posx>
					<posy>290</posy>
					<width>380</width>
					<height>30</height>
					<label>$INFO[ListItem.Premiered]</label>
					<font>font-22</font>
					<align>left</align>
					<textcolor>grey</textcolor>
					<visible>!ListItem.IsCollection</visible>
				</control>
				<!-- Year -->
				<control type="label">
					<posx>300</posx>
					<posy>290</posy>
					<width>120</width>
					<height>30</height>
					<label>$INFO[ListItem.Year]</label>
					<font>font-20</font>
					<align>left</align>
					<textcolor>grey_a</textcolor>
					<visible>!ListItem.IsCollection + !Container.Content(Episodes)</visible>
				</control>
				<!-- Duration -->
				<control type="label">
					<posx>380</posx>
					<posy>290</posy>
					<width>150</width>
					<height>30</height>
					<label>$INFO[Listitem.Duration,, $LOCALIZE[12391]]</label>
					<font>font-20</font>
					<align>right</align>
					<textcolor>grey_a</textcolor>
					<visible>Container.Content(Episodes) + !IsEmpty(ListItem.Duration) + IntegerGreaterThan(ListItem.Duration,0)</visible>
				</control>
				<!-- Episode Number -->
				<control type="label">
					<posx>380</posx>
					<posy>255</posy>
					<width>380</width>
					<height>30</height>
					<label>[B]$INFO[ListItem.Season,$LOCALIZE[20373] ] $INFO[ListItem.Episode,$LOCALIZE[20359] ][/B]</label>
					<font>font-22</font>
					<align>right</align>
					<textcolor>grey</textcolor>
					<visible>Container.Content(Episodes)</visible>
				</control>
	<!-- Resolution -->
				<control type="label">
					<posx>390</posx>
					<posy>220</posy>
					<width>160</width>
					<height>30</height>
					<label>$INFO[Listitem.VideoResolution] $VAR[hd_or_sd] </label>
					<font>font-20</font>
					<align>right</align>
					<textcolor>grey_b</textcolor>
					<visible>!IsEmpty(ListItem.VideoResolution) + IntegerGreaterThan(ListItem.VideoResolution,0)</visible>
				</control>
				<!-- Star Rating -->
				<control type="group">
					<posx>15</posx>
					<posy>220</posy>
					<visible>!IsEmpty(ListItem.StarRating) + !ListItem.IsCollection + !IsEmpty(ListItem.Rating) + !Container.Content(Seasons) + !Container.Content(Artists)</visible>
					<animation effect="slide" end="90" time="0" condition="IsEmpty(ListItem.Year)">Conditional</animation>
					<control type="image">
						<description>Rating image</description>
						<posx>0</posx>
						<posy>0</posy>
						<width>188</width>
						<height>38</height>
						<texture background="true">rating0.png</texture>
						<aspectratio align="right">keep</aspectratio>
					</control>
					<control type="image">
						<description>Rating image</description>
						<posx>0</posx>
						<posy>0</posy>
						<width>188</width>
						<height>38</height>
						<texture background="true" colordiffuse="$VAR[main_color]">$INFO[ListItem.StarRating]</texture>
						<aspectratio align="right">keep</aspectratio>
						<visible>!StringCompare(ListItem.StarRating,rating0.png)</visible>
					</control>
					<!-- Rating -->
					<control type="label">
						<posx>198</posx>
						<posy>0</posy>
						<width>380</width>
						<height>30</height>
						<label>$INFO[ListItem.Rating]</label>
						<font>font-20</font>
						<align>left</align>
						<textcolor>grey_a</textcolor>
					</control>
				</control>

				<control type="textbox">
					<description>Plot Value for TVShows\Movies</description>
					<posx>5</posx>
					<posy>330</posy>
					<width>380</width>
					<height>320</height>
					<font>font-20</font>
					<align>right</align>
					<textcolor>grey_a</textcolor>
					<label>$VAR[ViewFanartText]</label>
					<autoscroll time="2000" delay="8000" repeat="5000">!Skin.HasSetting(AutoScroll)</autoscroll>
					<animation effect="slide" end="0,-100" time="0" condition="Window.IsActive(mypics.xml)">Conditional</animation>
				</control> 


			</control>

			<control type="group">
				<posx>330</posx>
				<posy>680</posy>
				<include>scroll_letter</include>
			</control>
		</control>
	</include>
</includes>
