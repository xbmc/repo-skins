<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<control type="group">
			<visible>![Window.IsVisible(Notification) | Player.Muted]</visible>
			<posx>865</posx>
			<animation effect="slide" start="0,-80" end="0,0" tween="sine" easing="out" time="200">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,-80" delay="500" time="100">WindowClose</animation>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>190</width>
				<height>70</height>
				<texture colordiffuse="black" diffuse="glass.jpg" background="true" border="15,2,15,2">main/tab.png</texture>
				<bordertexture colordiffuse="$VAR[main_color]" border="15,2,15,2">main/tab_stroke.png</bordertexture>
				<bordersize>1,0,1,1</bordersize>
			</control>
			<control type="group">
			<posy>-10</posy>
			
			<control type="label">
				<description>Volume Label</description>
				<posx>25</posx>
				<posy>22</posy>
				<width>188</width>
				<height>38</height>
				<label>$INFO[Control.GetLabel(10000),,%]</label>
				<font>font-18</font>
				<textcolor>white</textcolor>
				<align>left</align>
				<aligny>center</aligny>
			</control>
				<control type="image">
				<posx>110</posx>
				<posy>18</posy>
				<width>48</width>
				<height>48</height>
				<texture colordiffuse="grey_b">osd/mute.png</texture>
				<visible>!IntegerGreaterThan(player.volume,1)</visible>
			</control>
			<control type="image">
				<posx>110</posx>
				<posy>18</posy>
				<width>48</width>
				<height>48</height>
				<texture colordiffuse="grey_b">osd/volume0.png</texture>
				<visible>IntegerGreaterThan(player.volume,1) + !IntegerGreaterThan(player.volume,20)</visible>
			</control>
			<control type="image">
				<posx>110</posx>
				<posy>18</posy>
				<width>48</width>
				<height>48</height>
				<texture colordiffuse="grey_b">osd/volume1.png</texture>
				<visible>IntegerGreaterThan(player.volume,20) + !IntegerGreaterThan(player.volume,50)</visible>
			</control>
			<control type="image">
				<posx>110</posx>
				<posy>18</posy>
				<width>48</width>
				<height>48</height>
				<texture colordiffuse="grey_b">osd/volume2.png</texture>
				<visible>IntegerGreaterThan(player.volume,50) + !IntegerGreaterThan(player.volume,95)</visible>
			</control>
			<control type="image">
				<posx>110</posx>
				<posy>18</posy>
				<width>48</width>
				<height>48</height>
				<texture colordiffuse="grey_b">osd/volume3.png</texture>
				<visible>IntegerGreaterThan(player.volume,95)</visible>
			</control>
			</control>
			
			<control type="progress" id="10000">
				<description>Progressbar</description>
				<posx>110</posx>
				<posy>30</posy>
				<width>384</width>
				<height>22</height>
				<info>Player.Volume</info>
				<visible>false</visible>
				<animation effect="fade" start="50" end="50" time="0" condition="Player.Passthrough">Conditional</animation>
			</control>
			<control type="label">
				<description>Passthrough Label</description>
				<posx>-50</posx>
				<posy>60</posy>
				<width>300</width>
				<height>38</height>
				<label>[B]$LOCALIZE[29802][/B]</label>
				<font>font-16</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<align>center</align>
				<aligny>center</aligny>
				<visible>Player.Passthrough</visible>
			</control>
		</control>
	</controls>
</window>
