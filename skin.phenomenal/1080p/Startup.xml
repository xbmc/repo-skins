<?xml version="1.0" encoding="UTF-8"?>
<window>
	<onload condition="System.HasAddon(script.artistslideshow) + !Skin.HasSetting(ArtistSlide)">RunScript(script.artistslideshow,daemon=True)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(SkinHelper.RandomFanartDelay))">Skin.SetString(SkinHelper.RandomFanartDelay,10)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(SkinHelper.AutoCloseVideoOSD))">Skin.SetString(SkinHelper.AutoCloseVideoOSD,5)</onload>
 	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(SkinHelper.WallImagesDelay))">Skin.SetString(SkinHelper.WallImagesDelay,4)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(SkinHelper.AllMoviesBackground.EnableWallImages))">Skin.SetString(SkinHelper.AllMoviesBackground.EnableWallImages,12)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(SkinHelper.AllTvShowsBackground.EnableWallImages))">Skin.SetString(SkinHelper.AllTvShowsBackground.EnableWallImages,12)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(SkinHelper.AllMusicBackground.EnableWallImages))">Skin.SetString(SkinHelper.AllMusicBackground.EnableWallImages,12)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(SkinHelper.AllMusicVideosBackground.EnableWallImages))">Skin.SetString(SkinHelper.AllMusicVideosBackground.EnableWallImages,12)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(SkinHelper.PicturesBackground.EnableWallImages))">Skin.SetString(SkinHelper.PicturesBackground.EnableWallImages,12)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(playlist.0.image.EnableWallImages))">Skin.SetString(playlist.0.image.EnableWallImages,12)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(playlist.1.image.EnableWallImages))">Skin.SetString(playlist.1.image.EnableWallImages,12)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(playlist.2.image.EnableWallImages))">Skin.SetString(playlist.2.image.EnableWallImages,12)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(playlist.3.image.EnableWallImages))">Skin.SetString(playlist.3.image.EnableWallImages,12)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(playlist.4.image.EnableWallImages))">Skin.SetString(playlist.4.image.EnableWallImages,12)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(playlist.5.image.EnableWallImages))">Skin.SetString(playlist.5.image.EnableWallImages,12)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(playlist.6.image.EnableWallImages))">Skin.SetString(playlist.6.image.EnableWallImages,12)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(playlist.7.image.EnableWallImages))">Skin.SetString(playlist.7.image.EnableWallImages,12)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(SmartShortcuts.playlists))">Skin.SetBool(SmartShortcuts.playlists)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + IsEmpty(Skin.String(SmartShortcuts.favorites))">Skin.SetBool(SmartShortcuts.favorites)</onload>
	<onload condition="!System.HasAddon(script.skin.helper.service)">ReplaceWindow($INFO[System.StartupWindow])</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + Skin.HasSetting(Disable_Splash)">ReplaceWindow($INFO[System.StartupWindow])</onload>	
	<onload condition="System.HasAddon(script.skin.helper.service) + !Skin.HasSetting(Disable_Splash)">RunScript(script.skin.helper.service,action=splashscreen,file=$VAR[splash_path],duration=6)</onload>
	<controls>
		<!-- video control for splash -->
		<control type="videowindow">
			<width>100%</width>
			<height>100%</height>
		</control>
		<!-- image control for splash -->
		<control type="image">
			<width>100%</width>
			<height>100%</height>
			<aspectratio>keep</aspectratio>
			<texture background="true">$INFO[Window(Home).Property(SkinHelper.SplashScreen)]</texture>
		</control>
	</controls>
</window>
