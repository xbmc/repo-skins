<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<views><include>view_numbers</include></views>
	<controls>
		<control type="group">
			<include>FS_Audio</include>
			<include>view_conditions</include>
			<include condition="!Skin.HasSetting(hide_fanart_topbar)">top_bar</include>
			<include>VideoInfo</include>
			<include>MusicInfo</include>
		</control>

		<control type="group">
			<posy>80</posy>
			<visible>![Skin.HasSetting(KioskMode) + !Player.HasMedia]</visible>
			<control type="button" id="9101">
				<posx>0</posx>
				<posy>90</posy>
				<width>20</width>
				<height>430</height>
				<textcolor>grey_b</textcolor>
				<focusedcolor>white</focusedcolor>
				<texturenofocus>-</texturenofocus>
				<texturefocus>-</texturefocus>
			</control>
			<control type="group">
				<visible>IntegerGreaterThan(Container.NumItems,-1) | !Container.IsUpdating</visible>
				<animation effect="slide" end="350" tween="cubic" easing="out" time="200" condition="ControlGroup(9100).HasFocus | Control.HasFocus(9101)">Conditional</animation>
				<control type="image">
					<posx>-340</posx>
					<posy>90</posy>
					<width>340</width>
					<height>430</height>
					<texture colordiffuse="darkgrey">white.png</texture>
					<bordertexture>main/main_focus.png</bordertexture>
					<bordersize>7,45,7,7</bordersize>
					<animation effect="fade" end="75" time="0" condition="true">Conditional</animation>
				</control>

				<control type="label">
					<posx>-340</posx>
					<posy>80</posy>
					<height>40</height>
					<width>340</width>
					<textcolor>white</textcolor>
					<align>center</align>
					<label>33063</label>
					<font>font-28</font>
				</control>


				<control type="grouplist" id="9100">
					<posx>-334</posx>
					<posy>150</posy>
					<align>left</align>
					<width>326</width>
					<height>350</height>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>9100</onup>
					<ondown>9100</ondown>
					<onback>50</onback>
					<itemgap>0</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<orientation>vertical</orientation>
					<visible>!Skin.HasSetting(KioskMode)</visible>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="button" id="4000">
						<description>View As button</description>
						<label>$LOCALIZE[457]: $INFO[Container.Viewmode]</label>
						<onclick>RunScript(script.skin.helper.service,action=SETVIEW)</onclick>
						<include>view_settings_radiobutton</include>
					</control>
					<control type="button" id="498">
						<description>Show View Options</description>
						<label>14018</label>
						<include>view_settings_radiobutton</include>
						<onclick>SetFocus(8000)</onclick>
					</control>
					<control type="button" id="3">
						<description>Sort by button</description>
						<label>103</label>
						<include>view_settings_radiobutton</include>
					</control>
					<control type="togglebutton" id="4">
						<description>Sort asc</description>
						<align>center</align>
						<alttexturefocus colordiffuse="$VAR[main_color]">white.png</alttexturefocus>
						<alttexturenofocus>-</alttexturenofocus>
						<disabledcolor>grey</disabledcolor>
						<label>$LOCALIZE[21429]: $LOCALIZE[584]</label>
						<altlabel>$LOCALIZE[21429]: $LOCALIZE[585]</altlabel>
						<include>view_settings_radiobutton</include>
					</control>
					<control type="radiobutton" id="92">
						<description>Library button</description>
						<include>view_settings_radiobutton</include>
						<label>$LOCALIZE[29800]</label>
						<onclick>ReplaceWindow(MusicLibrary)</onclick>
						<selected>Window.IsVisible(MusicLibrary)</selected>
						<visible>Library.HasContent(Music)</visible>
					</control>
					<control type="button" id="8">
						<description>Search</description>
						<include>view_settings_radiobutton</include>
						<label>137</label>
					</control>
					<control type="button" id="19">
						<description>Filter</description>
						<label>587</label>
						<align>left</align>
						<include>view_settings_radiobutton</include>
						<visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
					</control>
					<control type="radiobutton" id="23">
						<description>Advanced Filter</description>
						<label>587</label>						
						<onclick>right</onclick>
						<onclick>Filter</onclick>
						<include>view_settings_radiobutton</include>
						<selected>Container.Filtered</selected>
						<visible>Container.CanFilterAdvanced</visible>
					</control>
					<control type="togglebutton" id="20">
						<description>Update Library</description>
						<alttexturefocus colordiffuse="$VAR[main_color]">white.png</alttexturefocus>
						<alttexturenofocus>-</alttexturenofocus>
						<include>view_settings_radiobutton</include>
						<label>653</label>
						<altlabel>13353</altlabel>
						<usealttexture>library.isscanningmusic</usealttexture>
					</control>
					<control type="radiobutton" id="16">
						<description>PartyMode</description>
						<include>view_settings_radiobutton</include>
						<label>589</label>
					</control>
					<control type="button" id="22">
						<description>now playing</description>
						<label>13350</label>
						<onclick>ActivateWindow(videoplaylist)</onclick>
						<include>view_settings_radiobutton</include>
						<visible>!StringCompare(Playlist.Length(video),0)</visible>
					</control>
				</control>
			</control>
		</control>
		<include>view_options_panel</include>
	</controls>
</window>
