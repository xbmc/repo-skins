<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<views><include>view_numbers</include></views>
	<controls>
		<include>FS_Video</include>
		<control type="group">
			<include>view_conditions</include>
			<include condition="!Skin.HasSetting(hide_fanart_topbar)">top_bar</include>
			<include>VideoInfo</include>
			<include>MusicInfo</include>
		</control>
		<control type="group">
			<posy>0</posy>
			<visible>!Skin.HasSetting(KioskMode)</visible>
			<control type="button" id="9101">
				<posx>0</posx>
				<posy>90</posy>
				<width>20</width>
				<height>430</height>
				<textcolor>grey_b</textcolor>
				<focusedcolor>white</focusedcolor>
				<texturenofocus>-</texturenofocus>
				<texturefocus>-</texturefocus>
			</control>
			<control type="group">
				<visible>IntegerGreaterThan(Container.NumItems,-1) | !Container.IsUpdating</visible>
				<animation effect="slide" end="350" tween="cubic" easing="out" time="200" condition="ControlGroup(9100).HasFocus | Control.HasFocus(9101)">Conditional</animation>
				<control type="image">
					<posx>-340</posx>
					<posy>90</posy>
					<width>340</width>
					<height>430</height>
					<texture colordiffuse="darkgrey">white.png</texture>
					<bordertexture>main/main_focus.png</bordertexture>
					<bordersize>7,45,7,7</bordersize>
					<animation effect="fade" end="75" time="0" condition="true">Conditional</animation>
				</control>
				<control type="label">
					<posx>-340</posx>
					<posy>80</posy>
					<height>40</height>
					<width>340</width>
					<textcolor>white</textcolor>
					<align>center</align>
					<label>33063</label>
					<font>font-28</font>
				</control>
				<control type="grouplist" id="9100">
					<posx>-334</posx>
					<posy>150</posy>
					<align>left</align>
					<width>326</width>
					<height>350</height>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>9100</onup>
					<ondown>9100</ondown>
					<onback>50</onback>
					<itemgap>0</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<orientation>vertical</orientation>
					<visible>!Skin.HasSetting(KioskMode)</visible>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="button" id="4000">
						<description>View As button</description>
						<label>$LOCALIZE[457]: $INFO[Container.Viewmode]</label>
						<onclick>RunScript(script.skin.helper.service,action=SETVIEW)</onclick>
						<include>view_settings_radiobutton</include>
					</control>
					<control type="button" id="498">
						<description>Show View Options</description>
						<label>14018</label>
						<include>view_settings_radiobutton</include>
						<onclick>SetFocus(8000)</onclick>
					</control>
					<control type="radiobutton" id="20">
						<description>Shuffle button</description>
						<label>191</label>
						<include>view_settings_radiobutton</include>
					</control>
					<control type="button" id="26">
						<description>Repeat button</description>
						<label>-</label>
						<include>view_settings_radiobutton</include>
					</control>
					<control type="button" id="21">
						<description>Save button</description>
						<label>190</label>
						<include>view_settings_radiobutton</include>
					</control>
					<control type="button" id="22">
						<description>Clear button</description>
						<label>192</label>
						<onclick>ReplaceWindow(Video)</onclick>
						<include>view_settings_radiobutton</include>
					</control>
					<control type="button" id="611">
						<description>FullScreen</description>
						<label>244</label>
						<onclick>FullScreen</onclick>
						<include>view_settings_radiobutton</include>
						<visible>Player.HasAudio | Player.HasVideo</visible>
					</control>
				</control>
			</control>
		</control>
		<include>view_options_panel</include>
	</controls>
</window>
