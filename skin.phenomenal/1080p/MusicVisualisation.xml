<?xml version="1.0" encoding="UTF-8"?>
<window>
	
	<onload condition="System.HasAddon(script.artistslideshow)">RunScript(script.artistslideshow, daemon=True)</onload>

	<controls>

		<control type="visualisation" id="2">
			<description>visualisation</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<visible>Player.HasAudio + ![StringCompare(Visualisation.Name,waveform) | StringCompare(Visualisation.Name,opengl spectrum) | StringCompare(Visualisation.Name,directx spectrum)]</visible>
		</control>

		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<imagepath fallback="special://skin/backgrounds/music.jpg" background="true">$VAR[ArtistSlide]</imagepath>
			<aspectratio aligny="top">scale</aspectratio>
			<timeperimage>5000</timeperimage>
			<randomize>true</randomize>
			<fadetime>650</fadetime>
			<visible>Player.HasAudio</visible>
			<animation effect="fade" start="100" end="30" time="0" condition="![StringCompare(Visualisation.Name,waveform) | StringCompare(Visualisation.Name,opengl spectrum) | StringCompare(Visualisation.Name,directx spectrum) | IsEmpty(Visualisation.Name)] + !Skin.HasSetting(HideVisualizationFanart)">Conditional</animation>
			<animation effect="zoom" start="110" end="130" center="auto" time="10000" tween="sine" easing="inout" pulse="true" condition="!Skin.HasSetting(Disable.AnimateFanart)">Conditional</animation>
			<animation effect="slide" start="-30,-30" end="30,30" time="6000" tween="sine" easing="inout" pulse="true" condition="!Skin.HasSetting(Disable.AnimateFanart)">Conditional</animation>
		</control>
		<control type="visualisation" id="2">
			<description>visualisation</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<visible>Player.HasAudio + [StringCompare(Visualisation.Name,waveform) | StringCompare(Visualisation.Name,opengl spectrum) | StringCompare(Visualisation.Name,directx spectrum)]</visible>
		</control>

		<!-- logo -->
		<control type="image">
			<posx>10</posx>
			<posy>10</posy>
			<width>400</width>
			<height>155</height>
			<aspectratio>keep</aspectratio>
			<texture background="true">$INFO[Skin.String(music_path)]$INFO[MusicPlayer.Artist,,/logo.png]</texture>
		</control>			

		<!-- Bottom Part -->
		<control type="group">
			<visible>Player.ShowInfo | Window.IsVisible(MusicOSD) | Window.IsVisible(script-cu-lrclyrics-main.xml)</visible>
			<animation effect="slide" start="0,203" end="0,0" time="500">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,283" delay="380" time="400">WindowClose</animation>

			<animation effect="slide" start="0,203" end="0,0" time="500">Visible</animation>
			<animation effect="slide" start="0,0" end="0,283" delay="380" time="400">Hidden</animation>
			<control type="image">
				<description>BOTTOM - background image</description>
				<posx>0</posx>
				<posy>879</posy>
				<width>1920</width>
				<height>203</height>
				<texture background="true">osd/line_down.png</texture>
			</control>	
			<!-- Album + CD -->					
			<control type="group">
				<posx>30</posx>
				<posy>882</posy>
				<animation effect="slide" start="-480,0" end="0,0" delay="400" time="500">Visible</animation>
				<animation effect="slide" start="0,0" end="-480,0" time="300">Hidden</animation>
				<animation effect="slide" start="-480,0" end="0,0" delay="400" time="500">WindowOpen</animation>
				<animation effect="slide" start="0,0" end="-480,0" time="300" delay="1200">WindowClose</animation>
				<control type="image">
					<description>default cd image</description>
					<posx>15</posx>
					<posy>4</posy>
					<width>192</width>
					<height>192</height>
					<texture fallback="vinyl.png" background="true">$INFO[Player.FolderPath,,cdart.png]</texture>
					<aspectratio>keep</aspectratio>
					<include>cdartspin</include>
					<visible>!Skin.HasSetting(SafeMode)</visible>
				</control>
				<control type="image">
					<description>cover image</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>200</width>
					<height>200</height>
					<texture diffuse="albumdiffuse.png">$INFO[MusicPlayer.Cover]</texture>
					<animation effect="fade" start="100" end="0" time="8000">Hidden</animation>
					<visible>Player.HasAudio</visible>
				</control>
			</control>

			<!-- Progress Bar -->
			<control type="group">
				<posx>365</posx>
				<posy>1036</posy>
				<animation effect="slide" start="0,203" end="0,0" time="500">WindowOpen</animation>
				<animation effect="slide" start="0,0" end="0,283" delay="380" time="400">WindowClose</animation>
				<control type="progress">
					<description>Progressbar</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>1515</width>
					<height>38</height>
					<info>Player.Progress</info>
				</control>
				<control type="label">
					<description>time label</description>
					<posx>0</posx>
					<posy>-28</posy>
					<width>300</width>
					<height>38</height>
					<label>$INFO[VideoPlayer.Time][COLOR=grey_b][B] / [/B][/COLOR]$INFO[Player.Duration]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font-17</font>
					<textcolor>grey_a</textcolor>
				</control>
			</control>

			<!-- INFO LABELS -->
			<control type="group">
				<posx>365</posx>
				<posy>780</posy>

				<control type="label">
					<posx>0</posx>
					<posy>112</posy>
					<width>1500</width>
					<height>38</height>
					<label>$INFO[MusicPlayer.Artist]</label>
					<scroll>true</scroll>
					<scrollspeed>40</scrollspeed>
					<align>left</align>
					<aligny>center</aligny>
					<font>font-32</font>
					<textcolor>white</textcolor>
				</control>

				<control type="label">
					<posx>0</posx>
					<posy>155</posy>
					<width>1320</width>
					<height>38</height>
					<label>$INFO[MusicPlayer.TrackNumber,,. ]$INFO[MusicPlayer.Title]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font-23</font>
					<textcolor>$VAR[main_color]</textcolor>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>193</posy>
					<width>900</width>
					<height>38</height>
					<label>$INFO[MusicPlayer.Album]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font-20</font>
				</control>

				<control type="image">
					<description>Rating image</description>
					<posx>1325</posx>
					<posy>110</posy>
					<width>188</width>
					<height>38</height>
					<texture background="true">rating0.png</texture>
					<aspectratio align="right">keep</aspectratio>
				</control>

				<!-- DecreaseRating\IncreaseRating -->
				<control type="image">
					<description>Rating image</description>
					<posx>1325</posx>
					<posy>110</posy>
					<width>188</width>
					<height>38</height>
					<texture background="true" colordiffuse="$VAR[main_color]">$INFO[Player.StarRating]</texture>
					<aspectratio align="right">keep</aspectratio>
					<visible>!StringCompare(Player.StarRating,rating0.png)</visible>
				</control>

				<control type="label">
					<description>Playlist Pos No</description>
					<posx>1510</posx>
					<posy>155</posy>
					<width>750</width>
					<height>38</height>
					<textcolor>white</textcolor>
					<label>$INFO[musicplayer.Playlistposition,$LOCALIZE[554]: ]$INFO[musicplayer.Playlistlength, / ]</label>
					<align>right</align>
					<aligny>center</aligny>
					<font>font-20</font>
					<visible>!MusicPartyMode.Enabled</visible>
				</control>
				<control type="label">
					<description>Party Mode Label</description>
					<posx>1482</posx>
					<posy>165</posy>
					<width>750</width>
					<height>38</height>
					<textcolor>white</textcolor>
					<label>589</label>
					<align>right</align>
					<font>font-20</font>
					<visible>MusicPartyMode.Enabled</visible>
				</control>


				<control type="label">
					<posx>200</posx>
					<posy>228</posy>
					<width>830</width>
					<height>38</height>
					<label>$LOCALIZE[19031]: $INFO[MusicPlayer.offset(1).Artist,, - ]$INFO[MusicPlayer.offset(1).Title]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font-20</font>
					<textcolor>grey_a</textcolor>
					<scroll>true</scroll>
					<visible>MusicPlayer.HasNext</visible>
				</control>
			</control>
			<control type="grouplist">
				<posy>988</posy>
				<posx>1270</posx>
				<align>left</align>
				<width>800</width>
				<height>52</height>
				<itemgap>140</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="group">
					<visible>!IsEmpty(MusicPlayer.Codec)</visible>
					<include>flag_audiocodec</include>
				</control>

				<control type="group">
					<posx>-30</posx>
					<visible>!IsEmpty(MusicPlayer.Channels)</visible>
					<include>flag_audiochannels</include>
				</control>
				<control type="group">
					<posx>-60</posx>
					<visible>!IsEmpty(MusicPlayer.BitsPerSample)</visible>
					<include>flag_bitspersample</include>
				</control>
				<control type="group">
					<posx>-90</posx>
					<visible>!IsEmpty(MusicPlayer.samplerate)</visible>
					<include>flag_samplerate</include>
				</control>
				<control type="group">
					<posx>-90</posx>
					<visible>!IsEmpty(MusicPlayer.bitrate)</visible>
					<include>flag_bitrate</include>
				</control>	


			</control>
		</control>
	</controls>
</window>
