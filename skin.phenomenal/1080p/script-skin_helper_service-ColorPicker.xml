<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">3110</defaultcontrol>
	<controls>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<texture background="true" colordiffuse="66000000">white.png</texture>
		</control>
		<control type="group">
			<animation effect="slide" start="-400" end="0" time="300">WindowOpen</animation>
			<animation effect="slide" start="0" end="-400" time="300">WindowClose</animation>
			<include>side_dialog</include>

			<control type="label" id="1">
				<visible>false</visible>
			</control>
			<control type="label">
				<description>heading label</description>
				<posx>0</posx>
				<posy>20</posy>
				<width>400</width>
				<height>45</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font-30</font>
				<textcolor>white</textcolor>
				<label>$ADDON[script.skin.helper.service 32011]</label>
			</control>
			<!-- choose color palette -->
			<control type="button" id="3030">
				<visible>false</visible>
			</control>

			<control type="panel" id="3110">
				<left>22</left>
				<top>350</top>
				<width>360</width>
				<height>730</height>
				<onup>3015</onup>
				<ondown>3010</ondown>
				<onleft>3110</onleft>
				<onright>3110</onright>
				<orientation>vertical</orientation>
				<scrolltime>200</scrolltime>
				<itemlayout height="20" width="44">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>44</width>
						<height>20</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<!-- <control type="image">
						<left>0</left>
						<top>0</top>
						<width>44</width>
						<height>20</height>
						<texture background="true">main/favs.png</texture>
						<visible>StringCompare(Window.Property(current.colorstring),ListItem.Label)</visible>
					</control> -->
				</itemlayout>
				<focusedlayout height="44" width="44">
					<control type="image">
						<left>0</left>
						<top>-10</top>
						<width>44</width>
						<height>44</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<!-- <control type="image">
						<left>0</left>
						<top>-10</top>
						<width>44</width>
						<height>44</height>
						<texture background="true">main/favs.png</texture>
						<visible>StringCompare(Window.Property(current.colorstring),ListItem.Label)</visible>
					</control> -->
					<control type="image">
						<left>0</left>
						<top>-10</top>
						<width>44</width>
						<height>44</height>
						<texture colordiffuse="white">thumbnail_focused.png</texture>
					</control>
				</focusedlayout>
			</control>

			<control type="grouplist" id="9000">
				<posx>60</posx>
				<posy>90</posy>
				<width>300</width>
				<height>300</height>
				<onup>3110</onup>
				<ondown>3015</ondown>

				<!-- edit manual -->
				<control type="button" id="3010">
					<width>260</width>
					<height>35</height>
					<textoffsetx>5</textoffsetx>			
					<label>532</label>
					<texturenofocus>-</texturenofocus>
					<texturefocus>-</texturefocus>
					<font>font-20</font>
					<include>button_dialogs</include>
				</control>
				<!-- None \ Default -->
				<control type="button" id="3011">
					<width>260</width>
					<height>35</height>
					<textoffsetx>5</textoffsetx>			
					<label>571</label>
					<texturenofocus>-</texturenofocus>
					<texturefocus>-</texturefocus>
					<font>font-20</font>
					<include>button_dialogs</include>
				</control>
				<!-- Save button -->
				<control type="button" id="3012">
					<width>260</width>
					<height>35</height>
					<textoffsetx>5</textoffsetx>
					<label>190</label>
					<texturenofocus>-</texturenofocus>
					<texturefocus>-</texturefocus>
					<font>font-20</font>
					<include>button_dialogs</include>			
				</control>			
			</control>		
			<control type="group" id="3020">
				<posx>60</posx>
				<posy>110</posy>
				<width>300</width>
				<height>60</height>
				<onup>3012</onup>
				<control type="label" id="3016">
					<!-- label opacity-->
					<posx>0</posx>
					<posy>100</posy>
					<width>140</width>
					<align>left</align>
					<label>$ADDON[script.skin.helper.service 32049]:</label>
					<textcolor>white</textcolor>
					<texturenofocus colordiffuse="black" border="5">panel_trans.png</texturenofocus>
				</control>
				<!-- opacity slider -->
				<control type="slider" id="3015">
					<posx>0</posx>
					<posy>135</posy>
					<width>250</width>
					<height>38</height>
					<onup>3012</onup>
					<ondown>3110</ondown>
					<texturesliderbar colordiffuse="grey_a" border="1,1,1,1">osd/2.png</texturesliderbar>
					<textureslidernib>osd/3.png</textureslidernib>
					<textureslidernibfocus colordiffuse="$VAR[main_color]">osd/3.png</textureslidernibfocus>
				</control>
				<control type="label" id="3017">
					<!-- opacity percentage -->
					<posx>260</posx>
					<posy>100</posy>
					<width>100</width>
					<height>60</height>
					<align>right</align>
					<onup>3110</onup>
					<onleft>3010</onleft>
					<label>$INFO[Control.Getlabel(3015)]</label>
					<textcolor>white</textcolor>
				</control>
			</control>
			<control type="label">
				<posx>60</posx>
				<posy>300</posy>
				<width>300</width>
				<height>45</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font-22</font>
				<textcolor>$INFO[Window.Property(colorstring)]</textcolor>
				<label>$INFO[Window.Property(colorstring)]</label>
			</control> 
			<!-- <control type="image">
				<left>200</left>
				<top>300</top>
				<width>120</width>
				<height>40</height>
				<texture background="true" diffuse="posterdiffuse.png" colordiffuse="$INFO[Window.Property(colorstring)]">white.png</texture>
			</control> -->

		</control>
	</controls>
</window>