<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>996</defaultcontrol>
	<include>dialog_zoom_animation</include>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<!-- Header -->
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>400</width>
			<height>80</height>
			<texture background="true" colordiffuse="$VAR[main_color]">white.png</texture>
		</control>
		<control type="label">
			<description>heading label</description>
			<posx>0</posx>
			<posy>20</posy>
			<width>400</width>
			<height>45</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>font-30</font>
			<label>[B]$LOCALIZE[33061][/B]</label>
			<textcolor>white</textcolor>
		</control>
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>400</width>
			<height>10</height>
			<texture>shadow_horizontal.png</texture>
		</control>
		<!-- Close Button -->
		<include content="close_button"><param name="posx" value="22" /><param name="posy" value="24" /></include>

		<!-- Content area -->
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>80</posy>
			<width>400</width>
			<height>600</height>
			<texture background="true" flipy="false">dialogs/long_grey.png</texture>
		</control>
		<control type="image">
			<left>0</left>
			<top>80</top>
			<width>400</width>
			<height>10</height>
			<texture>shadow_horizontal.png</texture>
		</control>
		<control type="image">
			<left>0</left>
			<top>80</top>
			<width>400</width>
			<height>10</height>
			<texture>shadow_horizontal.png</texture>
		</control>
		<!-- left shadow-->
		<control type="image">
			<left>-20</left>
			<top>0</top>
			<width>20</width>
			<height>680</height>
			<texture flipx="true">shadow_vertical.png</texture>
		</control>
		<!-- right shadow-->
		<control type="image">
			<left>400</left>
			<top>0</top>
			<width>20</width>
			<height>680</height>
			<texture>shadow_vertical.png</texture>
		</control>

		<control type="grouplist" id="996">
			<description>grouplist for context buttons</description>
			<posx>0</posx>
			<posy>90</posy>
			<width>390</width>
			<height min="15" max="580">auto</height>
			<itemgap>0</itemgap>
			<control type="button" id="994">
				<label>$LOCALIZE[14098] $LOCALIZE[20410]</label>
				<onclick>PlayMedia($ESCINFO[ListItem.Trailer])</onclick>
				<visible>!IsEmpty(ListItem.Trailer) + Container.Content(movies)</visible>
				<posx>0</posx>
				<posy>0</posy>
				<width>390</width>
				<height>52</height>
				<font>font-20</font>
				<align>center</align>
				<textcolor>grey_a</textcolor>
				<focusedcolor>$VAR[main_color]</focusedcolor>
				<textoffsetx>10</textoffsetx>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
			</control>
		</control>
		<control type="button" id="1000">
			<description>button template</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>390</width>
			<height>52</height>
			<font>font-20</font>
			<align>center</align>
			<textcolor>grey_a</textcolor>
			<focusedcolor>$VAR[main_color]</focusedcolor>
			<textoffsetx>10</textoffsetx>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
		</control>
	</controls>
</window>
