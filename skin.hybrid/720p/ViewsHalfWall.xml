<includes>
	<include name="HalfWallView">
		<control type="group">
			<visible>Control.IsVisible(514)</visible>
			<include>VisibleFadeEffect</include>
			<control type="image">
				<include>Dimensions_Fullscreen</include>
 				<aspectratio>stretch</aspectratio>
				<texture>black-back.png</texture>
			</control>
			<include>MainListLabel</include>
			<control type="image">
				<posx>50</posx>
				<posy>85</posy>
				<width>523</width>
				<height>253</height>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<fadetime>IconCrossfadeTime</fadetime>
				<texture diffuse="Fanart_Diffuse.png" background="true" fallback="Fanart_Fallback_Small.jpg" >$INFO[ListItem.Art(fanart)]</texture>
				<visible>!stringcompare(ListItem.Label,..)</visible>
			</control>
			<control type="multiimage">
				<posx>50</posx>
				<posy>85</posy>
				<width>523</width>
				<height>253</height>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<imagepath diffuse="Fanart_Diffuse.png" background="true">$INFO[ListItem.Path,,extrafanart/]</imagepath>
				<timeperimage>5000</timeperimage>
				<randomize>true</randomize>
				<fadetime>700</fadetime>
				<visible>Skin.HasSetting(EnableXtraFanArt) + !StringCompare(ListItem.Label,..)</visible>
			</control>
			<control type="grouplist">
				<description>Media Codec Flagging Images</description>
				<posx>50</posx>
				<posy>330</posy>
				<width>523</width>
				<align>center</align>
				<itemgap>0</itemgap>
				<orientation>horizontal</orientation>
				<include>MediaStudioFlagging</include>
				<include>VideoTypeHackFlaggingConditions</include>
				<include>VideoCodecFlaggingConditions</include>
				<include>AudioChannelsFlaggingConditions</include>
				<include>AudioCodecFlaggingConditions</include>
			</control>	
			<control type="label">
				<posx>560</posx>
				<posy>310</posy>
				<width>500</width>
				<height>30</height>
				<font>font13</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<scroll>false</scroll>
				<align>right</align>
				<aligny>top</aligny>
				<label>$VAR[MediaRuntime,[B][COLOR=blue]$LOCALIZE[2050]: [/COLOR][/B]]</label>
				<visible>!IsEmpty(ListItem.Duration)</visible>
			</control>
			<control type="label">
				<posx>50</posx>
				<posy>385</posy>
				<width>523</width>
				<height>30</height>
				<font>font13</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<scroll>false</scroll>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.Director,[B][COLOR=blue]$LOCALIZE[20339]: [/COLOR][/B]]</label>
			</control>
			<control type="textbox">
				<description>Description Value for Video</description>
				<posx>50</posx>
				<posy>420</posy>
				<width>523</width>
				<height>140</height>
				<font>font12</font>
				<align>justify</align>
				<textcolor>white</textcolor>
				<label>$VAR[ShowMediaPlot,[B][COLOR=blue]$LOCALIZE[207]: [/COLOR][/B]]</label>
				<autoscroll time="2000" delay="3000" repeat="5000">!Skin.HasSetting(StopAutoScroll)</autoscroll>
			</control>
			<control type="image">
				<posx>50</posx>
				<posy>560</posy>
				<width>530</width>
				<height>110</height>
				<aspectratio scalediffuse="true" align="center" aligny="bottom">keep</aspectratio>
				<fadetime>IconCrossfadeTime</fadetime>
				<texture background="true">$INFO[ListItem.Art(banner)]</texture>
				<bordertexture border="8">ThumbShadow.png</bordertexture>
				<bordersize>8</bordersize>
			</control>
			<control type="scrollbar" id="60">
				<posx>1245</posx>
				<posy>90</posy>
				<width>25</width>
				<height>550</height>
				<texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
				<texturesliderbar border="2,16,2,16">ScrollBarV_bar.png</texturesliderbar>
				<texturesliderbarfocus border="2,16,2,16">ScrollBarV_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>ScrollBarNib.png</textureslidernib>
				<textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
				<onleft>514</onleft>
				<onright>61</onright>
				<showonepage>true</showonepage>
				<orientation>vertical</orientation>
			</control>				
			<control type="panel" id="514">
				<posx>620</posx>
				<posy>80</posy>
				<width>750</width>
				<height>582</height>
				<onleft>9000</onleft>
				<onright>60</onright>
				<onup>514</onup>
				<ondown>514</ondown>
				<viewtype label="Halfwall">List</viewtype>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>
				<preloaditems>200</preloaditems>
				<visible>Container.Content(TVShows) | Container.Content(Movies) | Container.Content(Episodes) | Container.Content(Seasons) | Container.Content(MusicVideos)</visible>
				<itemlayout height="194" width="154">
					<control type="image">
						<posx>20</posx>
						<posy>6</posy>
						<width>128</width>
						<height>182</height>	
						<aspectratio>stretch</aspectratio>
						<texture background="true" diffuse="ClearCase/EmptyCaseMask.png">$VAR[PosterThumb]</texture>
					</control>
					<control type="image">
						<posx>20</posx>
						<posy>6</posy>
						<width>128</width>
						<height>182</height>
						<aspectratio>stretch</aspectratio>
						<texture diffuse="ClearCase/EmptyCaseMask.png">black-back.png</texture>
						<colordiffuse>AAFFFFFF</colordiffuse>
						<visible>!StringCompare(ListItem.Label,..)</visible>
					</control>
					<control type="group">
						<visible>Skin.HasSetting(UseStatusBanners) + !IsEmpty(ListItem.Overlay)</visible>
						<control type="image">
							<posx>92</posx>
							<posy>6</posy>
							<width>55</width>
							<height>55</height>
							<fadetime>IconCrossfadeTime</fadetime>
							<texture background="true" fallback="DefaultFallback/DefaultWatched.png">UsrStatus/$LOCALIZE[16102].png</texture>
							<visible>StringCompare(ListItem.Overlay,OverlayWatched.png)</visible>
						</control>
						<control type="image">
							<posx>92</posx>
							<posy>6</posy>
							<width>55</width>
							<height>55</height>
							<fadetime>IconCrossfadeTime</fadetime>
							<texture background="true" fallback="DefaultFallback/DefaultUnwatched.png">UsrStatus/$LOCALIZE[16101].png</texture>
							<visible>!StringCompare(ListItem.Overlay,OverlayWatched.png) + !Skin.HasSetting(HideNewMediaStat) + !IntegerGreaterThan(ListItem.PercentPlayed,2)</visible>
						</control>
					</control>
					<control type="image">
						<description>Rating value</description>
						<posx>25</posx>
						<posy>6</posy>
						<width>75</width>
						<height>16</height>
						<aspectratio align="left">keep</aspectratio>
						<texture fallback="LeftRating/rating0.png">LeftRating/$INFO[ListItem.StarRating]</texture>
					</control>
					<control type="image">
						<posx>115</posx>
						<posy>155</posy>
						<width>30</width>
						<height>30</height>
						<fadetime>IconCrossfadeTime</fadetime>
						<texture>$INFO[ListItem.SubtitleLanguage,Language/,.png]</texture>
						<visible>!Skin.HasSetting(HideSubTitleFlags) + !IsEmpty(ListItem.SubtitleLanguage)</visible>
					</control>
					<control type="image">
						<posx>25</posx>
						<posy>162</posy>
						<width>34</width>
						<height>20</height>
						<texture>movieset.png</texture>
						<visible>Container.Content(Movies) + ListItem.IsFolder + !stringcompare(ListItem.Label,..) + SubString(Container.Folderpath,videodb://,left)</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>154</width>
						<height>194</height>
						<aspectratio>stretch</aspectratio>
						<texture fallback="ClearCase/dv.png">$VAR[VideoListCase,ClearCase/,.png]</texture>
						<visible>!stringcompare(ListItem.Label,..)</visible>
					</control>	
				</itemlayout>
				<focusedlayout height="289" width="229">
					<control type="group">	
						<posx>0</posx>
						<posy>0</posy>
    					<animation effect="slide" end="30,0" time="200" reversible="true" condition="Container.Column(0)">conditional</animation>
    					<animation effect="slide" end="0,34" time="200" reversible="true" condition="Container.Row(0)">conditional</animation>
    					<animation effect="slide" end="0,-50" time="200" reversible="true" condition="Container.Row(2)">conditional</animation>
    					<animation effect="slide" end="-22,0" time="200" reversible="true" condition="Container.Column(3)">conditional</animation>
						<animation reversible="false" effect="zoom"  end="-27,-33,300,425" time="200">focus</animation>
						<animation reversible="false" effect="zoom" start="-27,-33,300,425" time="0">unfocus</animation>			
					<control type="image">
						<posx>20</posx>
						<posy>6</posy>
						<width>128</width>
						<height>182</height>	
						<aspectratio>stretch</aspectratio>
						<texture background="true" diffuse="ClearCase/EmptyCaseMask.png">$VAR[PosterThumb]</texture>
					</control>
					<control type="group">
						<visible>Skin.HasSetting(UseStatusBanners) + !IsEmpty(ListItem.Overlay)</visible>
						<control type="image">
							<posx>92</posx>
							<posy>6</posy>
							<width>55</width>
							<height>55</height>
							<fadetime>IconCrossfadeTime</fadetime>
							<texture background="true" fallback="DefaultFallback/DefaultWatched.png">UsrStatus/$LOCALIZE[16102].png</texture>
							<visible>StringCompare(ListItem.Overlay,OverlayWatched.png)</visible>
						</control>
						<control type="image">
							<posx>92</posx>
							<posy>6</posy>
							<width>55</width>
							<height>55</height>
							<fadetime>IconCrossfadeTime</fadetime>
							<texture background="true" fallback="DefaultFallback/DefaultUnwatched.png">UsrStatus/$LOCALIZE[16101].png</texture>
							<visible>!StringCompare(ListItem.Overlay,OverlayWatched.png) + !Skin.HasSetting(HideNewMediaStat) + !IntegerGreaterThan(ListItem.PercentPlayed,2)</visible>
						</control>
					</control>
					<control type="image">
						<description>Rating value</description>
						<posx>25</posx>
						<posy>6</posy>
						<width>75</width>
						<height>16</height>
						<aspectratio align="left">keep</aspectratio>
						<texture fallback="LeftRating/rating0.png">LeftRating/$INFO[ListItem.StarRating]</texture>
					</control>
					<control type="image">
						<posx>115</posx>
						<posy>155</posy>
						<width>30</width>
						<height>30</height>
						<fadetime>IconCrossfadeTime</fadetime>
						<texture>$INFO[ListItem.SubtitleLanguage,Language/,.png]</texture>
						<visible>!Skin.HasSetting(HideSubTitleFlags) + !IsEmpty(ListItem.SubtitleLanguage)</visible>
					</control>
					<control type="image">
						<posx>25</posx>
						<posy>162</posy>
						<width>34</width>
						<height>20</height>
						<texture>movieset.png</texture>
						<visible>Container.Content(Movies) + ListItem.IsFolder + !stringcompare(ListItem.Label,..) + SubString(Container.Folderpath,videodb://,left)</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>154</width>
						<height>194</height>
						<aspectratio>stretch</aspectratio>
						<texture fallback="ClearCase/dv.png">$VAR[VideoListCase,ClearCase/,.png]</texture>
						<visible>!stringcompare(ListItem.Label,..)</visible>
					</control>
					</control>
				</focusedlayout>
			</control>
		</control>
	</include>
</includes>