                    <height>30</height>
                    <font>font13_title</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <scroll>true</scroll>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>31331</label>
                </control>
                <control type="label">
                    <posx>0</posx>
                    <posy>35</posy>
                    <width>850</width>
                    <height>30</height>
                    <font>font13</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <scroll>true</scroll>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$LOCALIZE[515]: $INFO[ListItem.Genre]</label>
                    <scroll>false</scroll>
                </control>
                <control type="label">
                    <posx>0</posx>
                    <posy>65</posy>
                    <width>850</width>
                    <height>30</height>
                    <font>font13</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <scroll>true</scroll>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$LOCALIZE[562]: $INFO[ListItem.Year]</label>
                    <scroll>false</scroll>
                </control>
                <control type="fadelabel">
                    <posx>0</posx>
                    <posy>95</posy>
                    <width>400</width>
                    <height>30</height>
                    <font>font13</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <scroll>true</scroll>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$LOCALIZE[563]:</label>
                    <scrollout>false</scrollout>
                    <pauseatend>2000</pauseatend>
                </control>
                <control type="image">
                    <description>Rating value</description>
                    <posx>100</posx>
                    <posy>95</posy>
                    <width>160</width>
                    <height>32</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[ListItem.StarRating,LeftRating/]</texture>
                </control>
                <control type="textbox">
                    <description>Description Value for Album</description>
                    <posx>0</posx>
                    <posy>150</posy>
                    <width>850</width>
                    <height>140</height>
                    <font>font12</font>
                    <align>justify</align>
                    <pagecontrol>-</pagecontrol>
                    <textcolor>white</textcolor>
                    <label>$INFO[ListItem.Property(Album_Description)]</label>
                    <autoscroll time="2000" delay="3000" repeat="5000">Skin.HasSetting(StopAutoScroll)</autoscroll>
                </control>
            </control>
        </control>
    </include>
</includes>