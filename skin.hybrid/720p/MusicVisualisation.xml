<window>
    <onload condition="System.HasAddon(script.artistslideshow) + !Skin.HasSetting(DisableArtistSlideShow) + IsEmpty(Window.Property(ArtistSlideshowRunning))">RunScript(script.artistslideshow)</onload>
    <defaultcontrol>-</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <controls>
        <include>AlbumArtMusicVizWall</include>
        <control type="image">
            <description>XBMC DB FanArt Background</description>
            <include>Dimensions_Fullscreen</include>
            <aspectratio>keep</aspectratio>
            <texture background="true">$INFO[MusicPlayer.Property(Fanart_Image)]</texture>
            <include>KBurnsAnimateFanart</include>
            <visible>Player.HasAudio + !Skin.HasSetting(ShowBackgroundAlbumWall)</visible>
            <visible>!System.HasAddon(script.artistslideshow) | Skin.HasSetting(DisableArtistSlideShow)</visible>
        </control>
        <control type="multiimage">
            <description>Artist SlideShow FanArt Background</description>
            <include>Dimensions_Fullscreen</include>
            <imagepath background="true">$INFO[Window(Visualisation).Property(ArtistSlideshow)]</imagepath>
            <aspectratio>keep</aspectratio>
            <timeperimage>9000</timeperimage>
            <randomize>true</randomize>
            <fadetime>4000</fadetime>
            <animation effect="fade" start="0" end="100" time="300">Visible</animation>
            <animation effect="fade" start="100" end="0" time="300">Hidden</animation>
            <include>KBurnsAnimateFanart</include>
            <visible>Player.HasAudio + System.HasAddon(script.artistslideshow) + !Skin.HasSetting(DisableArtistSlideShow)</visible>
            <visible>![SubString(Player.FolderPath,mms://,Left) | SubString(Player.FolderPath,http://,Left)]</visible>
        </control>
        <control type="multiimage">
            <description>Artist ExtraFanArt Multi-image Background</description>
            <include>Dimensions_Fullscreen</include>
            <imagepath background="true">$INFO[Player.FolderPath,,../extrafanart/]</imagepath>
            <aspectratio>keep</aspectratio>
            <timeperimage>9000</timeperimage>
            <randomize>true</randomize>
            <fadetime>4000</fadetime>
            <animation effect="fade" start="0" end="100" time="300">Visible</animation>
            <animation effect="fade" start="100" end="0" time="300">Hidden</animation>
            <include>KBurnsAnimateFanart</include>
            <visible>Player.HasAudio + Skin.HasSetting(EnableXtraFanArt)</visible>
            <visible>Skin.HasSetting(DisableArtistSlideShow) + !Skin.HasSetting(ShowBackgroundAlbumWall)</visible>
        </control>
        <control type="visualisation" id="2">
            <description>visualisation</description>
            <include>Dimensions_Fullscreen</include>
        </control>
        <control type="group">
            <animation effect="fade" time="200">VisibleChange</animation>
            <visible>![Window.IsVisible(AddonSettings) | Window.IsVisible(SelectDialog) | Window.IsVisible(VisualisationPresetList)]</visible>
            <control type="image">
                <posx>-150</posx>
                <posy>-150</posy>
                <width>1580</width>
                <height>256</height>
                <texture flipy="true">HomeNowPlayingBack.png</texture>
            </control>
            <include>Clock</include>
            <control type="image">
                <posx>-150</posx>
                <posy>250r</posy>
                <width>1580</width>
                <height>250</height>
                <texture>HomeNowPlayingBack.png</texture>
            </control>
            <control type="image">
                <posx>330</posx>
                <posy>230r</posy>
                <width>200</width>
                <height>78</height>
                <texture fallback="XBMC_Logo.png">$INFO[Player.FolderPath,,../logo.png]</texture>
                <aspectratio align="bottom">keep</aspectratio>
            </control>
            <control type="group">
                <animation effect="slide" end="0,-50" time="500" tween="back" easing="out" condition="Window.IsVisible(infodialog) | Window.IsVisible(volumebar)" reversible="true">Conditional</animation>
                <control type="image">
                    <description>Cd overlay</description>
                    <posx>120</posx>
                    <posy>220r</posy>
				<width>170</width><height>175</height><include>CDArtSpinner</include><texture fallback="Disks/DefaultCDArt.png">$INFO[Player.FolderPath,,cdart.png]</texture><aspectratio align="bottom">keep</aspectratio><visible>![SubString(Player.FolderPath,mms://,Left) | SubString(Player.FolderPath,http://,Left)] + !Skin.HasSetting(HideCDArt)</visible></control>
                <control type="image">
                    <description>Cover Image</description>
                    <posx>40</posx>
                    <posy>222r</posy>
                    <width>180</width>
                    <height>180</height>
                    <aspectratio aligny="bottom">stretch</aspectratio>
                    <texture fallback="DefaultFallback/DefaultAlbumCover.png" diffuse="CDCase/cdcase-diffuse.png">$INFO[MusicPlayer.Cover]</texture>
                    <visible>![SubString(Player.FolderPath,mms://,Left) | SubString(Player.FolderPath,http://,Left)] + !Skin.HasSetting(HideCDArt)</visible>
                </control>
                <control type="image">
                    <description>cover image</description>
                    <posx>20</posx>
                    <posy>250r</posy>
                    <width>300</width>
                    <height>230</height>
                    <texture fallback="DefaultFallback/DefaultAlbumCover.png">$INFO[MusicPlayer.Cover]</texture>
                    <aspectratio aligny="bottom">keep</aspectratio>
                    <bordertexture border="8">ThumbShadow.png</bordertexture>
                    <bordersize>8</bordersize>
                    <visible>SubString(Player.FolderPath,mms://,Left) | SubString(Player.FolderPath,http://,Left) | Skin.HasSetting(HideCDArt)</visible>
                </control>
                <control type="image">
                    <description>CD Case</description>
                    <posx>25</posx>
                    <posy>225r</posy>
                    <width>198</width>
                    <height>186</height>
                    <aspectratio aligny="bottom">stretch</aspectratio>
                    <texture>CDCase/cdcase.png</texture>
                    <visible>![SubString(Player.FolderPath,mms://,Left) | SubString(Player.FolderPath,http://,Left)] + !Skin.HasSetting(HideCDArt)</visible>
                </control>
            </control>
            <control type="group">
                <posx>330</posx>
                <posy>175r</posy>
                <control type="label" id="1">
                    <description>Artist label</description>
                    <posx>0</posx>
                    <posy>30</posy>
                    <width>910</width>
                    <height>25</height>
                    <align>left</align>
                    <font>font13_title</font>
                    <label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, - ]</label>
                    <textcolor>NowPlayAlbum</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <visible>![SubString(Player.FolderPath,mms://,Left) | SubString(Player.FolderPath,http://,Left)]</visible>
                </control>
                <control type="label" id="1">
                    <description>Artist label</description>
                    <posx>0</posx>
                    <posy>30</posy>
                    <width>910</width>
                    <height>25</height>
                    <align>left</align>
                    <font>font13_title</font>
                    <label>$LOCALIZE[31956] $INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, - ]</label>
                    <textcolor>NowPlayAlbum</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <visible>SubString(Player.FolderPath,mms://,Left) | SubString(Player.FolderPath,http://,Left)</visible>
                </control>
                <control type="grouplist">
                    <posx>0</posx>
                    <posy>60</posy>
                    <width>910</width>
                    <height>35</height>
                    <itemgap>5</itemgap>
                    <orientation>horizontal</orientation>
                    <visible>!IsEmpty(MusicPlayer.Title)</visible>
                    <control type="label">
                        <width min="10" max="710">auto</width>
                        <height>30</height>
                        <font>font30</font>
                        <align>left</align>
                        <aligny>center</aligny>
                        <label>$INFO[MusicPlayer.Title]</label>
                        <textcolor>orange</textcolor>
                        <scroll>true</scroll>
                    </control>
                    <control type="image">
                        <description>Audio Codec Image</description>
                        <width>90</width>
                        <height>35</height>
                        <aspectratio align="right">keep</aspectratio>
                        <texture>$INFO[MusicPlayer.Codec,MediaFlags/codectype/,.png]</texture>
                    </control>
                    <control type="image">
                        <description>Rating</description>
                        <width>110</width>
                        <height>35</height>
                        <aspectratio align="center">keep</aspectratio>
                        <texture fallback="LeftRating/rating0.png">$INFO[Player.StarRating,LeftRating/]</texture>
                        <visible>![SubString(Player.FolderPath,mms://,Left) | SubString(Player.FolderPath,http://,Left)] + !Skin.HasSetting(HideCDArt)</visible>
                    </control>
                </control>
            </control>
            <control type="fadelabel">
                <description>Next 5 Songs fadelabel</description>
                <posx>10</posx>
                <posy>33r</posy>
                <height>30</height>
                <width>1260</width>
                <label>$VAR[NextFiveScroller]</label>
                <align>center</align>
                <aligny>center</aligny>
                <font>font13</font>
                <textcolor>StatsAmnt</textcolor>
                <shadowcolor>black</shadowcolor>
                <scrollout>true</scrollout>
                <scrollspeed>30</scrollspeed>
                <pauseatend>2000</pauseatend>
                <animation effect="fade" time="200">VisibleChange</animation>
                <animation effect="slide" end="350,0" time="500" tween="back" easing="out" condition="Window.IsVisible(infodialog) | Window.IsVisible(volumebar)" reversible="true">Conditional</animation>
                <visible>Player.HasAudio + !Window.IsVisible(Favourites)+ !Window.IsVisible(MusicOSD)+ !Window.IsVisible(seekbar)</visible>
                <visible>!SubString(Player.FolderPath,mms://,Left) | !SubString(Player.FolderPath,http://,Left)</visible>
            </control>
            <control type="group">
                <posx>330</posx>
                <posy>85r</posy>
                <control type="label">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>100</width>
                    <height>40</height>
                    <font>font13</font>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[Player.Time(hh:mm:ss)]</label>
                </control>
                <control type="progress">
                    <description>Progressbar</description>
                    <posx>100</posx>
                    <posy>15</posy>
                    <width>720</width>
                    <height>16</height>
                    <info>Player.Progress</info>
                </control>
                <control type="label">
                    <posx>920</posx>
                    <posy>0</posy>
                    <width>100</width>
                    <height>40</height>
                    <font>font13</font>
                    <align>right</align>
                    <aligny>center</aligny>
                    <label>$INFO[Player.Duration(hh:mm:ss)]</label>
                </control>
                <visible>![SubString(Player.FolderPath,mms://,Left) | SubString(Player.FolderPath,http://,Left)]</visible>
            </control>
        </control>
        <control type="group" id="0">
            <posx>0</posx>
            <posy>50</posy>
            <visible>Player.ShowCodec + ![Window.IsVisible(script-XBMC_Lyrics-main.xml) | Window.IsVisible(VisualisationSettings) | Window.IsVisible(VisualisationPresetList)]</visible>
            <animation effect="fade" time="200">VisibleChange</animation>
            <control type="image">
                <description>media info background image</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>105</height>
                <colordiffuse>AAFFFFFF</colordiffuse>
                <texture>black-back.png</texture>
            </control>
            <control type="label">
                <description>row 1 label</description>
                <posx>50</posx>
                <posy>10</posy>
                <label>-</label>
                <align>left</align>
                <label>$INFO[musicplayer.Codec,$LOCALIZE[21446]: ,]$INFO[musicplayer.Bitrate, · $LOCALIZE[623]: ,kbps]$INFO[musicplayer.bitspersample, · $LOCALIZE[612]: ,bit]$INFO[musicplayer.Samplerate, · $LOCALIZE[613]: ,kHz]$INFO[musicplayer.Channels, · $LOCALIZE[21444]: ]</label>
                <font>font12</font>
            </control>
            <control type="label">
                <description>row 2 label</description>
                <posx>50</posx>
                <posy>40</posy>
                <label>-</label>
                <align>left</align>
                <label>$INFO[Visualisation.Name] [I][COLOR=orange]($LOCALIZE[20166])[/COLOR][/I] · fps: $INFO[System.FPS]</label>
                <font>font12</font>
                <visible>Visualisation.Locked</visible>
            </control>
            <control type="label">
                <description>Unlocked row 2 label</description>
                <posx>50</posx>
                <posy>40</posy>
                <label>-</label>
                <align>left</align>
                <label>$INFO[Visualisation.Name] · fps: $INFO[System.FPS]</label>
                <font>font12</font>
                <visible>!Visualisation.Locked</visible>
            </control>
            <control type="label">
                <description>row 3 label</description>
                <posx>50</posx>
                <posy>70</posy>
                <label>-</label>
                <align>left</align>
                <label>$LOCALIZE[13388]: $INFO[Visualisation.Preset]</label>
                <font>font12</font>
            </control>
        </control>
    </controls>
</window>