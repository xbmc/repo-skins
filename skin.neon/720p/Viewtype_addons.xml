            <right>0</right>
            <top>0</top>
            <width>300</width>
            <height>46</height>
            <align>right</align>
            <aligny>center</aligny>
            <font>Font_Bartowski_Movies</font>
            <textcolor>white</textcolor>
            <label>$INFO[ListItem.Label2]</label>
