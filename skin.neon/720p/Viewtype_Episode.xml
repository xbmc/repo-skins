<?xml version="1.0" encoding="UTF-8"?>
<!--Alaska-->
<includes>
  <include name="Viewtype_Episode">
    <!-- Browser -->
    <control type="image">
      <visible>Control.IsVisible(51)</visible>
      <left>0</left>
      <top>0</top>
      <width>1280</width>
      <height>720</height>
      <texture>tv-episodes/epi-background.png</texture>
      <aspectratio>stretch</aspectratio>
    </control>
    <control type="image">
      <visible>Control.IsVisible(51) + [Container.Content(episodes) | Window.IsActive(videoplaylist)]</visible>
      <left>0</left>
      <top>0</top>
      <width>1280</width>
      <height>720</height>
      <texture>tv-episodes/last-overlay.png</texture>
      <aspectratio>stretch</aspectratio>
    </control>
    <control type="fixedlist" id="51">
      <viewtype label="$LOCALIZE[31143]">list</viewtype>
      <left>1010</left>
      <top>0</top>
      <width>933</width>
      <height>720</height>
      <pagecontrol>61</pagecontrol>
      <scrolltime>0</scrolltime>
      <orientation>vertical</orientation>
      <onup>51</onup>
      <ondown>51</ondown>
      <onleft>7000</onleft>
      <onright>7000</onright>
      <focusposition>2</focusposition>
      <movement>2</movement>
      <visible>!Skin.HasSetting(no_Episode) + [Container.Content(episodes) | Window.IsActive(videoplaylist)]</visible>
      <include>Animation_Viewtype_Episode_FocusArea</include>
      <include>Animation_HiddenByInfo</include>
      <itemlayout width="633" height="142">
        <control type="image">
          <left>13</left>
          <top>13</top>
          <width>240</width>
          <height>131</height>
          <texture diffuse="episodematte.png">$INFO[ListItem.Icon]</texture>
          <aspectratio scalediffuse="false">stretch</aspectratio>
        </control>
        <control type="image">
          <left>2</left>
          <top>2</top>
          <width>260</width>
          <height>153</height>
          <texture>episodeframe.png</texture>
          <colordiffuse>ff959494</colordiffuse>
        </control>
        <control type="image">
          <left>14</left>
          <top>104</top>
          <width>235</width>
          <height>39</height>
          <texture>tv-episodes/epi-black.png</texture>
          <visible>!IsEmpty(ListItem.Title)</visible>
        </control>
        <control type="label">
          <left>130</left>
          <top>112</top>
          <width>235</width>
          <label>$LOCALIZE[20359] $INFO[ListItem.Episode]</label>
          <align>center</align>
          <font>Font_Neon_22</font>
          <textcolor>ffffffff</textcolor>
          <visible>!IsEmpty(ListItem.Title)</visible>
        </control>
        <control type="image">
          <visible>Container.Content(episodes)</visible>
          <left>68</left>
          <top>123</top>
          <width>122</width>
          <height>3</height>
          <info>ListItem.Overlay</info>
          <aspectratio scalediffuse="false">stretch</aspectratio>
          <visible>Skin.HasSetting(tvoverlays) + !IsEmpty(ListItem.Overlay)</visible>
        </control>
      </itemlayout>
      <focusedlayout width="633" height="142">
        <control type="image">
          <left>13</left>
          <top>13</top>
          <width>240</width>
          <height>131</height>
          <texture diffuse="episodematte.png">$INFO[ListItem.Icon]</texture>
          <aspectratio scalediffuse="false">stretch</aspectratio>
          <animation type="Focus" reversible="false">
            <effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
            <effect type="fade" start="0" end="100" time="200" />
          </animation>
        </control>
        <control type="image">
          <left>14</left>
          <top>104</top>
          <width>235</width>
          <height>39</height>
          <texture>tv-episodes/epi-black.png</texture>
          <animation type="Focus" reversible="false">
            <effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
            <effect type="fade" start="0" end="100" time="200" />
          </animation>
          <visible>!IsEmpty(ListItem.Title)</visible>
        </control>
        <control type="image">
          <left>2</left>
          <top>2</top>
          <width>260</width>
          <height>153</height>
          <colordiffuse>mainblue</colordiffuse>
          <texture>tv-episodes/focus-episode.png</texture>
          <animation type="Focus" reversible="false">
            <effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
            <effect type="fade" start="0" end="100" time="200" />
          </animation>
        </control>
        <control type="label">
          <left>130</left>
          <top>112</top>
          <width>235</width>
          <label>$LOCALIZE[20359] $INFO[ListItem.Episode]</label>
          <align>center</align>
          <font>Font_Neon_22</font>
          <textcolor>ffffffff</textcolor>
          <visible>!IsEmpty(ListItem.Title)</visible>
          <animation type="Focus" reversible="false">
            <effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
            <effect type="fade" start="0" end="100" time="200" />
          </animation>
        </control>
        <control type="image">
          <visible>Container.Content(episodes)</visible>
          <left>68</left>
          <top>123</top>
          <width>122</width>
          <height>3</height>
          <info>ListItem.Overlay</info>
          <aspectratio scalediffuse="false">stretch</aspectratio>
          <include>Animation_HiddenByInfo</include>
          <animation type="Focus" reversible="false">
            <effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
            <effect type="fade" start="0" end="100" time="200" />
          </animation>
          <visible>Skin.HasSetting(tvoverlays) + !IsEmpty(ListItem.Overlay)</visible>
        </control>
      </focusedlayout>
    </control>
    <!--		<control type="image"> 
			<visible>Control.IsVisible(51)</visible>
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<texture>tv-episodes/episode-glow.png</texture>
			<aspectratio>stretch</aspectratio>
			<include>Animation_BackdropFade</include>
		</control>  -->
    <!-- Browser label and flags -->
    <control type="image" id="7016">
      <left>20</left>
      <top>35</top>
      <width>300</width>
      <height>116</height>
      <texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
      <fadetime>100</fadetime>
      <aspectratio scalediffuse="false">stretch</aspectratio>
      <include>Animation_HiddenByInfo</include>
      <include>Animation_Viewtype_Episode_LeftSide</include>
      <visible>Control.IsVisible(51) + [Container.Content(episodes) | Window.IsActive(videoplaylist)]</visible>
    </control>
    <control type="image" id="9016">
      <left>20</left>
      <top>35</top>
      <width>300</width>
      <height>116</height>
      <texture background="true">$INFO[ListItem.path]../logo.png</texture>
      <fadetime>100</fadetime>
      <aspectratio scalediffuse="false">stretch</aspectratio>
      <include>Animation_HiddenByInfo</include>
      <include>Animation_Viewtype_Episode_LeftSide</include>
      <visible>Control.IsVisible(51) + [Container.Content(episodes) | Window.IsActive(videoplaylist)]</visible>
    </control>
    <control type="textbox">
      <left>10</left>
      <top>166</top>
      <width>350</width>
      <height>344</height>
      <align>justify</align>
      <info>Container(51).ListItem.Plot</info>
      <autoscroll time="3000" delay="5000" repeat="5000">Skin.HasSetting(autoscroll)</autoscroll>
      <font>Font_EpisodePlot</font>
      <textcolor>ffffffff</textcolor>
      <include>Animation_HiddenByInfo</include>
      <include>Animation_Viewtype_Episode_LeftSide</include>
    </control>
    <control type="group">
      <left>370</left>
      <top>48</top>
      <include>Animation_Bartowski_Context_Zoom</include>
      <visible>Control.IsVisible(51)</visible>
      <control type="image">
        <left>2</left>
        <top>122</top>
        <width>600</width>
        <height>337</height>
        <texture background="true" diffuse="tv-landscape/landscapematteFO.png">$INFO[ListItem.Icon]</texture>
        <fadetime>200</fadetime>
        <aspectratio scalediffuse="false">stretch</aspectratio>
      </control>
      <control type="image">
        <left>-24</left>
        <top>100</top>
        <width>650</width>
        <height>378</height>
        <colordiffuse>ff959494</colordiffuse>
        <texture>tv-landscape/landscapeframeFO.png</texture>
      </control>
    </control>
    <control type="group">
      <left>375</left>
      <top>560</top>
      <include>Animation_HiddenByInfo</include>
      <include>Animation_Viewtype_Episode_BottomArea</include>
      <visible>Control.IsVisible(51) + !IsEmpty(ListItem.Title)</visible>
      <control type="label">
        <!-- Episode Title -->
        <left>0</left>
        <top>-10</top>
        <width>600</width>
        <height>50</height>
        <align>center</align>
        <font>Font_Bartowski_Title_TVShow</font>
        <textcolor>mainblue</textcolor>
        <label>$INFO[ListItem.Title]</label>
        <scroll>true</scroll>
        <scrollspeed>45</scrollspeed>
        <scrollsuffix> -|- </scrollsuffix>
      </control>
      <control type="label">
        <!-- Episode Title -->
        <left>0</left>
        <top>-10</top>
        <width>600</width>
        <height>50</height>
        <align>center</align>
        <font>Font_Bartowski_Title_TVShow</font>
        <textcolor>mainblue</textcolor>
        <label>[UPPERCASE]$INFO[ListItem.Title][/UPPERCASE]</label>
        <visible>Window.IsActive(videoplaylist)</visible>
      </control>
      <control type="label">
        <!-- Episode season episode -->
        <left>0</left>
        <top>30</top>
        <width>600</width>
        <height>50</height>
        <align>center</align>
        <font>Font_TVShow</font>
        <textcolor>ffffffff</textcolor>
        <label>$LOCALIZE[20373] $INFO[ListItem.Season]/$LOCALIZE[20359] $INFO[ListItem.Episode]</label>
      </control>
      <control type="label">
        <!-- Episode aired -->
        <left>0</left>
        <top>60</top>
        <width>600</width>
        <height>50</height>
        <align>center</align>
        <font>Font_TVShow</font>
        <textcolor>ffffffff</textcolor>
        <label>$LOCALIZE[31231]: $INFO[ListItem.Date]</label>
      </control>
      <!--	<include>Episode_Next_Aired</include>	 -->
    </control>
    <control type="grouplist">
      <visible>Control.IsVisible(51) + Container.Content(episodes) + !Skin.HasSetting(no_media_flags)</visible>
      <description>Media Codec Flagging Images</description>
      <left>380</left>
      <top>680</top>
      <width>600</width>
      <align>center</align>
      <itemgap>0</itemgap>
      <orientation>horizontal</orientation>
      <include>StudioFlags</include>
      <include>VideoTypeHackFlaggingConditions</include>
      <include>VideoCodecFlaggingConditions</include>
      <include>AspectCodecFlaggingConditions</include>
      <include>AudioCodecFlaggingConditions</include>
      <include>AudioChannelsFlaggingConditions</include>
      <include>Animation_HiddenByInfo</include>
      <include>Animation_Viewtype_Episode_BottomArea</include>
    </control>
    <control type="textbox">
      <!-- Uncheck Cleartitle -->
      <left>10</left>
      <top>35</top>
      <width>500</width>
      <!--1200 50 -->
      <height>300</height>
      <font>Font_Episode_Landscape_TVTitle</font>
      <textcolor>mainblue</textcolor>
      <label>$INFO[ListItem.TVShowtitle]</label>
      <include>Animation_HiddenByInfo</include>
      <include>Animation_Viewtype_Episode_LeftSide</include>
      <visible>Control.IsVisible(51) + [Container.Content(episodes) | Window.IsActive(videoplaylist)] + IsEmpty(Control.GetLabel(7016)) + IsEmpty(Control.GetLabel(9016))</visible>
    </control>
    <include>Trailer_Episodes</include>
  </include>
</includes>