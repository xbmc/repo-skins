      <top>0</top>
      <width>1280</width>
      <height>720</height>
      <texture>music/music_backdrop3.png</texture>
    </control>
    <control type="image">
      <visible>Control.IsVisible(58) + !Skin.HasSetting(MusicShowcaseFanart)</visible>
      <left>0</left>
      <top>0</top>
      <width>1280</width>
      <height>720</height>
      <texture>music/music_backdrop5.png</texture>
    </control>
    <control type="label">
      <!--Big Title-->
      <visible>Control.IsVisible(58)</visible>
