          </control>
          <control type="image">
            <left>0</left>
            <top>252</top>
            <width>250</width>
            <height>250</height>
            <aspectratio align="center" aligny="top">keep</aspectratio>
            <texture background="true" flipy="true">$INFO[ListItem.Icon]</texture>
            <bordertexture border="5">pic_border.png</bordertexture>
            <bordersize>5</bordersize>
