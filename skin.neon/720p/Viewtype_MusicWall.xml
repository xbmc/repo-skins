        <texture diffuse="backdrops/mask_5.png">backdrops/filter.png</texture>
        <colordiffuse>BackgroundFilterColor1</colordiffuse>
        <visible>Control.IsVisible(53)</visible>
      </control>
      <control type="image">
        <visible>!Container(53).Column(0)</visible>
