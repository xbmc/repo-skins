<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="View_55_SmallIcons">
		<control type="group">
			<visible>Control.isVisible(55)</visible>
            <animation type="VisibleChange" reversible="false">
                <effect type="zoom" start="200" end="100" center="960,540" easing="out" tween="cubic" time="300" />
                <effect type="fade" start="0" end="100" time="300" />
            </animation>
            <control type="image">
                <posy>72</posy>
                <width>1848</width>
                <height>918</height>
                <include>toast_back</include>
            </control>
            <control type="panel" id="55">
                <posx>0</posx>
                <posy>72</posy>
                <width>1848</width>
                <height>918</height>
                <onleft>9010</onleft>
                <onright>60</onright>
                <onup>55</onup>
                <ondown>55</ondown>
                <pagecontrol>60</pagecontrol>
                <orientation>vertical</orientation>
                <preloaditems>2</preloaditems>
                <visible>!Container.Content(episodes)</visible>
                <viewtype label="536">icon</viewtype>
                <scrolltime tween="sine" easing="inout">200</scrolltime>
                <itemlayout width="205" height="306" condition="[Container.Content(movies) | Container.Content(tvshows) | Container.Content(musicvideos) | Container.Content(seasons) | [Window.IsActive(videos) + Container.Content(genres)] | Container.Content(sets)]">
                    <control type="image">
                        <width>205</width>
                        <height>306</height>
                        <include>toast_back</include>
                    </control>
                    <control type="image">
                        <width>205</width>
                        <height>306</height>
                        <texture background="true" fallback="DefaultVideo.png">$VAR[PosterThumbVar]</texture>
                        <aspectratio>scale</aspectratio>
                        <fadetime>200</fadetime>
                        <bordersize>2</bordersize>
                    </control>
                    <control type="image">
                        <posx>134</posx>
                        <posy>0</posy>
                        <width>70</width>
                        <height>70</height>
                        <texture>$VAR[IconOverlayVar]</texture>
                        <aspectratio align="center" aligny="top">keep</aspectratio>
                        <bordersize>2</bordersize>
                    </control>
                </itemlayout>
                <focusedlayout width="205" height="306" condition="[Container.Content(movies) | Container.Content(tvshows) | Container.Content(musicvideos) | Container.Content(seasons) | [Window.IsActive(videos) + Container.Content(genres)] | Container.Content(sets)]">
                    <control type="image">
                        <width>205</width>
                        <height>306</height>
                        <include>toast_back</include>
                    </control>
                    <control type="group">
                        <animation type="Focus">
                            <effect type="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" />
                            <effect type="fade" start="80" end="100" time="200" tween="sine" easing="in" />
                        </animation>
                        <control type="image">
                            <width>205</width>
                            <height>306</height>
                            <texture background="true" fallback="DefaultVideo.png">$VAR[PosterThumbVar]</texture>
                            <aspectratio>scale</aspectratio>
                            <fadetime>200</fadetime>
                            <bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
                            <bordersize>8</bordersize>
                        </control>
                        <control type="image">
                            <posx>134</posx>
                            <posy>0</posy>
                            <width>70</width>
                            <height>70</height>
                            <texture>$VAR[IconOverlayVar]</texture>
                            <aspectratio align="center" aligny="top">keep</aspectratio>
                            <bordersize>8</bordersize>
                        </control>
                    </control>
                </focusedlayout>
                <itemlayout width="306" height="306">
                    <control type="image">
                        <width>306</width>
                        <height>306</height>
                        <include>toast_back</include>
                    </control>
                    <control type="image">
                        <width>306</width>
                        <height>306</height>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
                        <aspectratio align="center">scale</aspectratio>
                        <bordersize>2</bordersize>
                        <fadetime>200</fadetime>
                    </control>
                    <control type="image">
                        <posx>200</posx>
                        <posy>0</posy>
                        <width>100</width>
                        <height>100</height>
                        <texture>overlays/enabled.png</texture>
                        <aspectratio align="center" aligny="top">keep</aspectratio>
                        <visible>StringCompare(ListItem.Label2,$LOCALIZE[449])</visible>
                        <bordersize>2</bordersize>
                    </control>
                </itemlayout>
                <focusedlayout width="306" height="306">
                    <control type="image">
                        <width>306</width>
                        <height>306</height>
                        <include>toast_back</include>
                    </control>
                    <control type="group">
                        <animation type="Focus">
                            <effect type="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" />
                            <effect type="fade" start="80" end="100" time="200" tween="sine" easing="in" />
                        </animation>
                        <control type="image">
                            <width>306</width>
                            <height>306</height>
                            <texture background="true">$INFO[ListItem.Icon]</texture>
                            <aspectratio align="center">scale</aspectratio>
                            <bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
                            <bordersize>8</bordersize>
                            <fadetime>200</fadetime>
                        </control>
                        <control type="image">
                            <posx>200</posx>
                            <posy>0</posy>
                            <width>100</width>
                            <height>100</height>
                            <texture>overlays/enabled.png</texture>
                            <aspectratio align="center" aligny="bottom">keep</aspectratio>
                            <visible>StringCompare(ListItem.Label2,$LOCALIZE[449])</visible>
                            <bordersize>8</bordersize>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <include>SideScrollbar</include>
        </control>
	</include>
</includes>
