<window id="115">
	<defaultcontrol always="true">901</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<visible>!Window.IsVisible(fullscreeninfo) + [VideoPlayer.IsFullscreen + !Window.IsVisible(visualisation)] + [Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding]</visible>	
	
	<controls>
				
		<control type="group">
			<posx>col-1-begin</posx>
			<posy>row-9-begin</posy>
			
			<!--animations-->
			<animation type="Windowopen">
				<effect type="fade" start="0" end="100" time="300" />
				<effect type="rotatex" start="90,0" end="0,0" center="540,0" tween="cubic" easing="out" time="400" />
			</animation>
			
			<animation type="Windowclose">
				<effect type="fade" start="100" end="0" time="300" />
				<effect type="rotatex" start="0,0" end="-90,0" center="540,0" tween="cubic" easing="out" time="400" />
			</animation>			
			
			<!--background-->
			<control type="image">
				<posx>-200</posx>
				<posy>-12</posy>
				<width>2500</width>
				<height>175</height>
				<aspectratio>stretch</aspectratio>
				<texture>colors/black.png</texture>
				<colordiffuse>99FFFFFF</colordiffuse>	
			</control>
			
			<control type="label">
				<posx>300</posx>
				<posy>-12</posy>
				<width>16-col-gutter</width>
				<font>smallStrong</font>
				<textcolor>white</textcolor>
				<label>Playing</label>
				<shadowcolor>-</shadowcolor>
			</control>
			
			<control type="label">
				<posx>395</posx>
				<posy>-13</posy>
				<width>16-col-gutter</width>
				<font>smallMedium</font>
				<textcolor>white</textcolor>
				<label>[UPPERCASE]$INFO[VideoPlayer.TVShowTitle][/UPPERCASE]</label>
				<shadowcolor>-</shadowcolor>
			</control>
			
			<control type="label">
				<posx>300</posx>
				<posy>31</posy>
				<width>16-col-gutter</width>
				<font>dialogTitle</font>
				<textcolor>white</textcolor>
				<label>[UPPERCASE]$INFO[Player.Title][/UPPERCASE]</label>
				<shadowcolor>-</shadowcolor>
				<scroll>true</scroll>
			</control>
						
			<control type="progress">
				<description>Progress Bar</description>
				<posx>300</posx>
				<posy>90</posy>
				<width>16-col-gutter</width>				
				<info>Player.Progress</info>
			</control>
			
			<control type="label">
				<posx>300</posx>
				<posy>110</posy>
				<width>24-col</width>
				<font>smallStrong</font>
				<textcolor>white</textcolor>
				<label>$INFO[Player.Time]</label>
				<shadowcolor>-</shadowcolor>
			</control>
			
			<control type="label">
				<posx>1428</posx>
				<posy>110</posy>
				<width>24-col</width>
				<font>smallStrong</font>
				<align>right</align>
				<textcolor>white</textcolor>
				<label>$INFO[Player.Duration]</label>
				<shadowcolor>-</shadowcolor>
			</control>

		</control>
		
		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>DialogSeekbar.xml</label>
		</control>
		
	</controls>
	
</window>