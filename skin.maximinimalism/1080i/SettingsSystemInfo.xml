<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">95</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
	<animation effect="fade" start="0" end="100" time="1000" reversible="true">WindowOpen</animation>
	
	<controls>
		
		<!--background-->
		<include>globalBackground</include>
		
		<control type="group">
			<posx>col-1-begin</posx>
			<posy>row-2-begin</posy>
			
			<control type="panel" id="95">
				<posx>0</posx>
				<posy>24</posy>
				<width>24-col</width>
				<height>18-row</height>
				<ondown>activateWindow(home)</ondown>
												
				<itemlayout width="6-col" height="6-col">								
																									
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>6-col-gutter</width>
						<height>6-col-gutter</height>
						<aspectratio>stretch</aspectratio>
						<texture>colors/black.png</texture>
						<bordersize>0</bordersize>
						<colordiffuse>99FFFFFF</colordiffuse>
					</control>
					
					<control type="label">
						<posx>204</posx>
						<posy>60</posy>
						<width>6-col-gutter</width>
						<align>center</align>
						<font>symbolVeryLarge</font>
						<textcolor>selected</textcolor>
						<label>$INFO[ListItem.property(itemIcon)]</label>
					</control>
					
					<control type="label">
						<posx>204</posx>
						<posy>3-row</posy>
						<width>5-col</width>
						<align>center</align>
						<font>pageTitle</font>
						<textcolor>selected</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				
					<control type="textbox">
						<posx>24</posx>
						<posy>4-row</posy>
						<width>5-col</width>
						<align>center</align>
						<height>3-row</height>
						<font>itemTitleSmall</font>
						<textcolor>selected</textcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
																
				</itemlayout>

				<focusedlayout width="6-col" height="6-col">
					
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>6-col-gutter</width>
						<height>6-col-gutter</height>
						<aspectratio>stretch</aspectratio>
						<texture>colors/black.png</texture>
						<bordersize>0</bordersize>
						<colordiffuse>99FFFFFF</colordiffuse>
					</control>
					
					<control type="label">
						<posx>204</posx>
						<posy>60</posy>
						<width>6-col-gutter</width>
						<align>center</align>
						<font>symbolVeryLarge</font>
						<textcolor>selected</textcolor>
						<label>$INFO[ListItem.property(itemIcon)]</label>
					</control>
					
					<control type="label">
						<posx>204</posx>
						<posy>3-row</posy>
						<width>5-col</width>
						<align>center</align>
						<font>pageTitle</font>
						<textcolor>selected</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				
					<control type="textbox">
						<posx>24</posx>
						<posy>4-row</posy>
						<width>5-col</width>
						<align>center</align>
						<height>3-row</height>
						<font>itemTitleSmall</font>
						<textcolor>selected</textcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
					
				</focusedlayout>
				
				<content>
					<item id="1">
						<description>XBMC Version</description>
						<label>482</label>
						<label2>V. $INFO[System.BuildVersion][CR]$INFO[System.BuildDate]</label2>
						<property name="itemIcon">></property>
						<thumb>-</thumb>
						<onclick>-</onclick>
					</item>
					
					<item id="2">
						<description>Connectivity</description>
						<label>705</label>
						<label2>$INFO[System.InternetState][CR]IP $INFO[Network.IPAddress][CR]MAC $INFO[Network.MacAddress]</label2>
						<property name="itemIcon">></property>
						<thumb>-</thumb>
						<onclick>-</onclick>
					</item>
					
					<item id="3">
						<description>Storage</description>
						<label>13277</label>
						<label2>$INFO[System.TotalSpace] Total[CR]$INFO[System.FreeSpace] Free[CR]Temp $INFO[System.HddTemperature]$INFO[System.TemperatureUnits]</label2>
						<property name="itemIcon">></property>
						<thumb>-</thumb>
						<onclick>-</onclick>
					</item>
					
					<item id="4">
						<description>Memory</description>
						<label>30208</label>
						<label2>$INFO[System.Memory(total)] Total[CR]$INFO[System.FreeMemory] / $INFO[System.Memory(free.percent)] free</label2>
						<property name="itemIcon">></property>
						<thumb>-</thumb>
						<onclick>-</onclick>
					</item>
					
					<item id="5">
						<description>CPU</description>
						<label>30209</label>
						<label2>$INFO[System.CpuFrequency][CR]Temp $INFO[System.CPUTemperature]</label2>
						<property name="itemIcon">></property>
						<thumb>-</thumb>
						<onclick>-</onclick>
					</item>
					
					<item id="6">
						<description>Screen Resolution</description>
						<label>30210</label>
						<label2>$INFO[System.ScreenWidth] x $INFO[System.ScreenHeight][CR]$INFO[System.FPS] FPS</label2>
						<property name="itemIcon">></property>
						<thumb>-</thumb>
						<onclick>-</onclick>
					</item>
					
					<item id="7">
						<description>Media</description>
						<label>20060</label>
						<label2>Movies: $INFO[Window(Home).Property(Movies.Count)][CR]TV Shows: $INFO[Window(Home).Property(TVShows.Count)][CR]Albums: $INFO[Window(Home).Property(Music.AlbumsCount)]</label2>
						<property name="itemIcon">></property>
						<thumb>-</thumb>
						<onclick>-</onclick>
					</item>
					
					<item id="8">
						<description>PVR</description>
						<label>24019</label>
						<label2>$INFO[Pvr.BackendName][CR]$INFO[Pvr.BackendDiskSpace]</label2>
						<property name="itemIcon">></property>
						<thumb>-</thumb>
						<onclick>-</onclick>
					</item>	

				</content>
				
			</control>
			
		</control>
		
		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>WindowID</include>
			<label>SettingsSystemInfo.xml</label>
		</control>
	</controls>
</window>
