<window id="2901">

	<defaultcontrol always="true">8000</defaultcontrol>
	<include>fadeInOut</include>

	<controls>				
		<control type="group">
			
			<!--fade out if audio / video menu active-->
			<animation type="Conditional" condition="Window.IsActive(123) | Window.IsActive(124)">
				<effect type="fade" start="100" end="0" time="200" tween="sine" easing="in" reversible="false"  />
			</animation>
											
			<!--background-->
			<control type="group">
				<posx>0</posx>
				<posy>0</posy>							
										
				<!--overlay-->
				<control type="image">
					<posx>-200</posx>
					<posy>824</posy>
					<width>2500</width>
					<height>2-row</height>
					<texture>colors/black.png</texture>
					<colordiffuse>ccffffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
					<!--animations-->
					<animation effect="slide" start="0,200" end="0" delay="300" time="200" tween="sine">WindowOpen</animation>
				</control>
													
			</control>
	
			<!--title info-->
			<control type="group">	
				<posx>col-1-begin</posx>
				<posy>row-15-begin</posy>
				
				<!--animations-->
				<animation effect="fade" start="0" end="100" delay="900" time="300">WindowOpen</animation>
														
				<!--content description-->
				<control type="label">
					<posx>0</posx>
					<posy>12</posy>
					<width>3-col</width>
					<font>largeStrong</font>
					<textcolor>selected</textcolor>
					<label>[B]$INFO[System.Time(hh:mm)][/B]</label>
					<scroll>false</scroll>
				</control>
			
				<control type="label" id="20">
					<posx>3-col</posx>
					<posy>0</posy>
					<width>17-col</width>
					<font>regularStrong</font>
					<textcolor>selected</textcolor>
					<label>[UPPERCASE]$INFO[Videoplayer.tvshowTitle,, • ]$INFO[Videoplayer.title][/UPPERCASE]</label>
					<scroll>false</scroll>
				</control>
				
				<control type="label">
					<posx>3-col</posx>
					<posy>50</posy>
					<width>21-col-gutter</width>
					<height>30</height>
					<font>small</font>
					<textcolor>selected</textcolor>
					<label fallback="31009">$INFO[Videoplayer.plot]</label>
					<scroll>true</scroll>
					<scrollspeed>50</scrollspeed>
				</control>
																														
			</control>
		
			<!--dialog controls-->
			<control type="group">
		
				<posx>0</posx>
				<posy>row-17-begin</posy>
				
				<!--animations-->
				<animation effect="fade" start="0" end="100" delay="1200" time="300">WindowOpen</animation>
						
				<control type="image">
					<posx>-200</posx>
					<posy>-12</posy>
					<width>2500</width>
					<height>1-row</height>
					<texture>colors/selected.png</texture>
					<colordiffuse>ffffffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
			
				<control type="list" id="8000">
					<posx>258</posx>
					<posy>-10</posy>
					<width>14-col</width>
					<height>1-row</height>
					<itemgap>0</itemgap>
					<orientation>horizontal</orientation>

					<itemlayout width="160" height="43">

						<control type="label">
							<posx>55</posx>
							<posy>0</posy>
							<width>160</width>
							<align>left</align>
							<font>menuTitle</font>
							<textcolor>black</textcolor>
							<label>$INFO[ListItem.label]</label>
							<shadowcolor>-</shadowcolor>
						</control>

					</itemlayout>

					<focusedlayout width="160" height="43">

						<control type="label">
							<posx>42</posx>
							<posy>0</posy>
							<width>160</width>
							<align>left</align>
							<font>menuTitle</font>
							<textcolor>black</textcolor>
							<label>[ $INFO[ListItem.label] ]</label>
							<shadowcolor>-</shadowcolor>
						</control>

					</focusedlayout>

					<content>
						<item id="1">
							<label>30344</label>
							<thumb>-</thumb>
							<onclick>action(aspectratio)</onclick>
						</item>
						<item id="2">
							<label>292</label>
							<thumb>-</thumb>
							<onclick>ActivateWindow(124)</onclick>
						</item>
						<item id="3">
							<label>444</label>
							<thumb>-</thumb>
							<onclick>ActivateWindow(123)</onclick>
						</item>
						<item id="4">
							<label>24012</label>
							<thumb>-</thumb>
							<onclick>Close</onclick>
							<onclick condition="SubString(System.BuildVersion,12,left)">XBMC.RunScript($INFO[Skin.String(SubtitlesPath)])</onclick>
							<onclick condition="SubString(System.BuildVersion,13,left)">ActivateWindow(SubtitleSearch)</onclick>
						</item>
						<item id="5">
							<label>298</label>
							<thumb>-</thumb>
							<onclick>ActivateWindow(125)</onclick>
						</item>
					</content>

				</control>
				
				<control type="label">
					<posx>1598</posx>
					<posy>-13</posy>
					<width>4-col</width>
					<font>symbolLarge</font>
					<textcolor>black</textcolor>
					<label></label>
					<align>right</align>
					<scroll>false</scroll>
					<shadowcolor>-</shadowcolor>
				</control>
				
				<control type="label">
					<posx>col-22-begin</posx>
					<posy>-10</posy>
					<width>4-col</width>
					<font>menutitle</font>
					<textcolor>black</textcolor>
					<label>$INFO[Videoplayer.time] / $INFO[Videoplayer.duration]</label>
					<scroll>false</scroll>
					<shadowcolor>-</shadowcolor>
				</control>
			</control>			
		
		</control>
				
		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>VideoOSD.xml</label>
		</control>

	</controls>
</window>