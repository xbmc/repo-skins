<includes>

	<include file="Defaults.xml" />
	<include file="Includes_grid.xml" />
	<include file="Includes_variables.xml" />
	<include file="Includes_animations.xml" />	
	<include file="ViewsVideos.xml" />
	<include file="ViewsDialogs.xml" />
	<include file="ViewsPVR.xml" />
	<include file="ViewsMusic.xml" />
	<include file="ViewsPictures.xml" />
	
	<!--modal dialogs-->
	<include name="modalDialog">
							
		<control type="image">
			<include>dimensionsFullscreen</include>
			<texture>colors/black.png</texture>
			<colordiffuse>ccFFFFFF</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
		
		<control type="image">
			<include>dimensionsFullscreen</include>
			<texture>backgrounds/vignette.png</texture>
			<colordiffuse>ffffffff</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
				
	</include>
	
	<!--Global background-->
	<include name="globalBackground">

		<control type="group">
					
			<control type="image">
				<include>dimensionsFullscreen</include>
				<texture>colors/black.png</texture>
				<colordiffuse>ffFFFFFF</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>	
					
			<control type="multiimage">
				<visible>!container.content(seasons) + !container.content(songs) + [!container.content(episodes) | Substring(Container.folderpath,plugin)] + [Container(9999).HasFiles | Container(9999).HasFolders]</visible>
				<posx>0</posx>
   				<posy>0</posy>
   				<include>dimensionsFullscreen</include>
   				<imagepath>$VAR[fanartType]</imagepath>
				<timeperimage>25000</timeperimage>
				<fadetime>2000</fadetime>
				<pauseatend>10000</pauseatend>
				<randomize>true</randomize>
				<aspectratio>stretch</aspectratio>
				<colordiffuse>6affffff</colordiffuse>
				<animation effect="fade" start="0" end="100" time="1000" delay="100">Windowopen</animation>		
				<animation effect="fade" start="100" end="0" time="500">Windowclose</animation>				
			</control>
			
			<control type="group">
				<visible>container.content(seasons) | container.content(songs) | [container.content(episodes) + !Substring(Container.folderpath,iplayer)]</visible>
				
				<animation type="visible" reversible="false">
		            <effect type="fade" start="0" end="100" time="500" delay="400"/>
				</animation>
				
				<control type="image">
					<include>dimensionsFullscreen</include>
					<texture>colors/black.png</texture>
					<colordiffuse>ffFFFFFF</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
				
				<control type="image">
					<include>dimensionsFullscreen</include>
					<texture>$INFO[listitem.art(fanart)]</texture>
					<colordiffuse>6affffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
			</control>
			
			<control type="group">
				<visible>window.isactive(2)</visible>
				
				<animation type="visible" reversible="false">
		            <effect type="fade" start="0" end="100" time="500" delay="400"/>
				</animation>
				
				<control type="image">
					<include>dimensionsFullscreen</include>
					<texture>colors/black.png</texture>
					<colordiffuse>ffFFFFFF</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
				
				<control type="image">
					<include>dimensionsFullscreen</include>
					<texture>backgrounds/pictures.jpg</texture>
					<colordiffuse>6affffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
			</control>
								
			<control type="image">
				<include>dimensionsFullscreen</include>
				<texture>backgrounds/vignette.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>

		</control>
						
	</include>
	
	<!--fanart slideshow-->
	<include name="fanartSlides">
		
		<control type="group">
			<animation type="conditional" condition="true" loop="true">	
				<effect type="fade" start="0" end="100" time="2000" delay="0" />
				<effect type="zoom" center="auto" start="130" end="100" time="15000" />
				<effect type="fade" start="100" end="0" time="500" delay="14500" />
			</animation>
		
			<animation type="windowclose">
				<effect type="fade" start="100" end="0" time="500"/>
			</animation>
			<animation type="windowopen">
				<effect type="fade" start="0" end="100" time="1000"/>
			</animation>
			
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<include>dimensionsFullscreen</include>
				<texture>colors/black.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
						
			<control type="multiimage">
				<posx>0</posx>
	  			<posy>0</posy>
				<include>dimensionsFullscreen</include>
				<imagepath>$INFO[Skin.String(videoFanartLocation)]</imagepath>
				<timeperimage>15000</timeperimage>
				<fadetime>0</fadetime>
				<pauseatend>0</pauseatend>
				<randomize>true</randomize>
				<aspectratio>stretch</aspectratio>
				<colordiffuse>99ffffff</colordiffuse>
			</control>
		
			<control type="image">
				<include>dimensionsFullscreen</include>
				<texture>backgrounds/vignette.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
		</control>
			
	</include>
	
	<!--date and time-->
	<include name="dateTime">
		
		<control type="group">
			<posx>0</posx>
			
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<width>24-col</width>
				<font>pageTitle</font>
				<label>$INFO[System.Time]</label>
				<textcolor>selected</textcolor>
			</control>

			<control type="label">
				<posx>0</posx>
				<posy>45</posy>
				<width>24-col</width>
				<font>regular</font>
				<label>$INFO[System.Date(mmm d)]</label>
				<textcolor>selected</textcolor>
			</control>
		</control>
		
	</include>
	
	<!--debugging-->
	<include name="DialogID">
		<posx>15</posx>
		<posy>15</posy>
		<width>fullscreenwidth</width>
		<height>1-row</height>
		<font>smallStrong</font>
		<textcolor>selected</textcolor>
		<align>left</align>
		<visible>!Skin.HasSetting(HideDebugInfo)</visible>
	</include>

	<include name="WindowID">
		<posx>15</posx>
		<posy>15</posy>
		<width>fullscreenwidth</width>
		<height>1-row</height>
		<font>smallStrong</font>
		<textcolor>selected</textcolor>
		<align>left</align>
		<visible>!Skin.HasSetting(HideDebugInfo)</visible>
	</include>

	<include name="Debug_Grid">
		<control type="image">
			<include>dimensionsFullscreen</include>
			<texture>debuggrid1080.png</texture>
			<colordiffuse>77FFFFFF</colordiffuse>
			<visible>Skin.HasSetting(DebugGrid)</visible>
		</control>
	</include>
	
	<!--hacky alignment for addons in myvideonav / mymusicnav-->	
	<include name="noOffset">
		<posy>366</posy>
	</include>
	
	<include name="offset1">
		<posy>410</posy>
	</include>
	
	<include name="offset2">
		<posy>454</posy>
	</include>
	
	<include name="offset3">
		<posy>496</posy>
	</include>
	
	<include name="offset4">
		<posy>538</posy>
	</include>
		
</includes>