						<textcolor>black</textcolor>
						<label>$INFO[ListItem.label2]</label>
						<shadowcolor>-</shadowcolor>
					</control>

					<control type="label">
						<posx>1-col</posx>
						<posy>2</posy>
						<width>6-col</width>
						<font>menuTitle</font>
						<textcolor>black</textcolor>
						<label>$INFO[ListItem.label]</label>
						<shadowcolor>-</shadowcolor>
