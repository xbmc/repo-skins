					<posy>122</posy>
					<font>small</font>
					<width>18-col-gutter</width>
					<align>left</align>
					<textcolor>selected</textcolor>
					<height>174</height>
					<label>[B]$INFO[ListItem.plot][/B]</label>
					<autoscroll delay="10000" time="1000" repeat="10000"></autoscroll>
				</control>
			
			</control>
			
