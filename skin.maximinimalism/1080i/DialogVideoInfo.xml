						<posy>2</posy>
						<width>6-col</width>
						<font>menuTitle</font>
						<textcolor>selected</textcolor>
						<label>$INFO[ListItem.label]</label>
						<shadowcolor>-</shadowcolor>
					</control>

				</itemlayout>

				<focusedlayout width="8-col" height="1-row">

					<control type="image">
