						<posy>2</posy>
						<width>8-col</width>
						<height>53</height>
						<aspectratio>stretch</aspectratio>
						<texture>colors/black.png</texture>
					</control>

					<control type="label">
						<posx>24</posx>
						<posy>0</posy>
						<width>1-col</width>
